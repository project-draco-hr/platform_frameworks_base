{
  if (haveStats) {
    return;
  }
  average=0;
  int i=samples=size;
  if (i > 0) {
    java.util.Arrays.sort(array,0,i);
    i--;
    minimum=maximum=average=array[i];
    median=array[i / 2];
    while (i > 0) {
      i--;
      int v=array[i];
      if (v < minimum)       minimum=v;
      if (v > maximum)       maximum=v;
      average+=v;
    }
    average=average / size;
  }
 else {
    minimum=maximum=median=0;
  }
}
