{
  if (DEBUG_DETECTING) {
    Slog.i(LOG_TAG,"onActionTapAndHold()");
  }
  clear();
  mTranslationEnabledBeforePan=mMagnificationController.isMagnifying();
  mMagnificationController.setScaleAndMagnifiedRegionCenter(getPersistedScale(),down.getX(),down.getY(),true);
  mViewportWindow.setShown(true,true);
  transitionToState(STATE_VIEWPORT_DRAGGING);
}
