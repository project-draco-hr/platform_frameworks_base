{
  if (isShown() == shown) {
    return;
  }
  if (animate) {
    if (mShowHideFrameAnimator.isRunning()) {
      mShowHideFrameAnimator.reverse();
    }
 else {
      if (shown) {
        show();
        mShowHideFrameAnimator.start();
      }
 else {
        mShowHideFrameAnimator.reverse();
      }
    }
  }
 else {
    mShowHideFrameAnimator.cancel();
    if (shown) {
      show();
    }
 else {
      hide();
    }
  }
}
