{
  final LinearLayout tabLayout=new LinearLayout(getContext(),null,com.android.internal.R.attr.actionBarTabBarStyle);
  tabLayout.setMeasureWithLargestChildEnabled(true);
  tabLayout.setLayoutParams(new LinearLayout.LayoutParams(LinearLayout.LayoutParams.WRAP_CONTENT,mContentHeight));
  final ScrollingTabContainerView scroller=new ScrollingTabContainerView(mContext);
  scroller.setTabLayout(tabLayout);
  return scroller;
}
