{
  if (mSplitActionBar != splitActionBar) {
    if (mMenuView != null) {
      if (splitActionBar) {
        removeView(mMenuView);
        if (mSplitView != null) {
          mSplitView.addView(mMenuView);
        }
      }
 else {
        addView(mMenuView);
      }
    }
    mSplitActionBar=splitActionBar;
  }
}
