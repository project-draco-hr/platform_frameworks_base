{
  MenuBuilder builder=(MenuBuilder)menu;
  mOptionsMenu=builder;
  if (mMenuView != null) {
    removeView(mMenuView);
  }
  final ActionMenuView menuView=(ActionMenuView)builder.getMenuView(MenuBuilder.TYPE_ACTION_BUTTON,null);
  final LayoutParams layoutParams=new LayoutParams(LayoutParams.WRAP_CONTENT,LayoutParams.MATCH_PARENT);
  menuView.setLayoutParams(layoutParams);
  addView(menuView);
  mMenuView=menuView;
}
