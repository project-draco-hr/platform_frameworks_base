{
  ArrayList<String> list=new ArrayList<String>();
synchronized (mPublicSync) {
    Set<String> keys=mIfaces.keySet();
    for (    String key : keys) {
      TetherInterfaceSM sm=mIfaces.get(key);
      if (sm.isErrored()) {
        list.add(key);
      }
    }
  }
  String[] retVal=new String[list.size()];
  for (int i=0; i < list.size(); i++) {
    retVal[i]=list.get(i);
  }
  return retVal;
}
