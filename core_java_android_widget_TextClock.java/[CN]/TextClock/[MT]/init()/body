{
  if (mFormat12 == null || mFormat24 == null) {
    LocaleData ld=LocaleData.get(getContext().getResources().getConfiguration().locale);
    if (mFormat12 == null) {
      mFormat12=ld.timeFormat12;
    }
    if (mFormat24 == null) {
      mFormat24=ld.timeFormat24;
    }
  }
  createTime(mTimeZone);
  chooseFormat(false);
}
