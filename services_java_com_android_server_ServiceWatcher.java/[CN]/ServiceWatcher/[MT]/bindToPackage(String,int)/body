{
  unbind();
  Intent intent=new Intent(mAction);
  intent.setPackage(packageName);
synchronized (mLock) {
    mPackageName=packageName;
    mVersion=version;
  }
  if (D)   Log.d(mTag,"binding " + packageName + " (version "+ version+ ")");
  mContext.bindService(intent,this,Context.BIND_AUTO_CREATE | Context.BIND_NOT_FOREGROUND | Context.BIND_ALLOW_OOM_MANAGEMENT| Context.BIND_NOT_VISIBLE);
}
