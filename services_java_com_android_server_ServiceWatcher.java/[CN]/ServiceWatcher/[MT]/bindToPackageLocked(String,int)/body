{
  unbindLocked();
  Intent intent=new Intent(mAction);
  intent.setPackage(packageName);
  mPackageName=packageName;
  mVersion=version;
  if (D)   Log.d(mTag,"binding " + packageName + " (version "+ version+ ")");
  mContext.bindServiceAsUser(intent,this,Context.BIND_AUTO_CREATE | Context.BIND_NOT_FOREGROUND | Context.BIND_NOT_VISIBLE,new UserHandle(mCurrentUserId));
}
