{
  mContext=context;
  mTag=logTag;
  mAction=action;
  mPm=mContext.getPackageManager();
  mNewServiceWork=newServiceWork;
  mHandler=handler;
  mCurrentUserId=userId;
  mSignatureSets=new ArrayList<HashSet<Signature>>();
  for (int i=0; i < initialPackageNames.size(); i++) {
    String pkg=initialPackageNames.get(i);
    HashSet<Signature> set=new HashSet<Signature>();
    try {
      Signature[] sigs=mPm.getPackageInfo(pkg,PackageManager.GET_SIGNATURES).signatures;
      set.addAll(Arrays.asList(sigs));
      mSignatureSets.add(set);
    }
 catch (    NameNotFoundException e) {
      Log.w(logTag,pkg + " not found");
    }
  }
}
