{
  super(context,attrs,defStyle);
  TypedArray a=context.obtainStyledAttributes(attrs,com.android.internal.R.styleable.ListView,defStyle,0);
  CharSequence[] entries=a.getTextArray(com.android.internal.R.styleable.ListView_entries);
  if (entries != null) {
    setAdapter(new ArrayAdapter<CharSequence>(context,com.android.internal.R.layout.simple_list_item_1,entries));
  }
  final Drawable d=a.getDrawable(com.android.internal.R.styleable.ListView_divider);
  if (d != null) {
    setDivider(d);
  }
 else {
    final int dividerHeight=a.getDimensionPixelSize(com.android.internal.R.styleable.ListView_dividerHeight,0);
    if (dividerHeight != 0) {
      setDividerHeight(dividerHeight);
    }
  }
  a.recycle();
}
