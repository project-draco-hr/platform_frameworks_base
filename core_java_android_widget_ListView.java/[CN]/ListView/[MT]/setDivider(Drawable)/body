{
  if (divider != null) {
    mDividerHeight=divider.getIntrinsicHeight();
    mClipDivider=divider instanceof ColorDrawable;
  }
 else {
    mDividerHeight=0;
    mClipDivider=false;
  }
  mDivider=divider;
  mDividerIsOpaque=divider == null || divider.getOpacity() == PixelFormat.OPAQUE;
  requestLayoutIfNecessary();
}
