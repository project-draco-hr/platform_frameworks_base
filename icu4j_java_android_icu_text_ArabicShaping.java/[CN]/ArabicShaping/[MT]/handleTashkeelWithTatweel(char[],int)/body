{
  int i;
  for (i=0; i < sourceLength; i++) {
    if ((isTashkeelOnTatweelChar(dest[i]) == 1)) {
      dest[i]=TATWEEL_CHAR;
    }
 else     if ((isTashkeelOnTatweelChar(dest[i]) == 2)) {
      dest[i]=SHADDA_TATWEEL_CHAR;
    }
 else     if ((isIsolatedTashkeelChar(dest[i]) == 1) && dest[i] != SHADDA_CHAR) {
      dest[i]=SPACE_CHAR;
    }
  }
  return sourceLength;
}
