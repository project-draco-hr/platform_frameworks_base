{
  if (DEBUG)   Log.d(TAG,"animateHeaderSlidingOut");
  mHeaderAnimating=true;
  animate().y(-mHeader.getHeight()).setStartDelay(0).setDuration(StackStateAnimator.ANIMATION_DURATION_STANDARD).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).setListener(new AnimatorListenerAdapter(){
    @Override public void onAnimationEnd(    Animator animation){
      animate().setListener(null);
      mHeaderAnimating=false;
      updateQsState();
    }
  }
).start();
}
