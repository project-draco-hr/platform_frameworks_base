{
  final byte[] cmd=cmdString.getBytes();
  final int len=cmd.length;
  if ((len < 1) || (len > buf.length)) {
    return false;
  }
  buf[0]=(byte)(len & 0xff);
  buf[1]=(byte)((len >> 8) & 0xff);
  try {
    mOut.write(buf,0,2);
    mOut.write(cmd,0,len);
  }
 catch (  IOException ex) {
    Slog.e(TAG,"write error");
    disconnect();
    return false;
  }
  return true;
}
