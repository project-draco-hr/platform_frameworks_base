{
  return new Notification.Builder(mContext).setSmallIcon(getSmallIcon(vol.getDisk(),vol.getState())).setColor(mContext.getColor(R.color.system_notification_accent_color)).setContentTitle(title).setContentText(text).setStyle(new Notification.BigTextStyle().bigText(text)).setVisibility(Notification.VISIBILITY_PUBLIC).setLocalOnly(true);
}
