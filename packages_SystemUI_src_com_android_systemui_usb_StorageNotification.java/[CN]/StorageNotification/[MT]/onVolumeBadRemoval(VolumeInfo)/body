{
  if (!vol.isPrimary()) {
    return;
  }
  final DiskInfo disk=mStorageManager.findDiskById(vol.getDiskId());
  final CharSequence title=mContext.getString(R.string.ext_media_badremoval_notification_title,disk.getDescription());
  final CharSequence text=mContext.getString(R.string.ext_media_badremoval_notification_message,disk.getDescription());
  final Notification notif=buildNotificationBuilder(title,text).setSmallIcon(R.drawable.stat_notify_sdcard).setCategory(Notification.CATEGORY_ERROR).build();
  mNotificationManager.notifyAsUser(vol.getId(),NOTIF_ID,notif,UserHandle.ALL);
}
