{
  if (disk.isSd()) {
switch (state) {
case VolumeInfo.STATE_CHECKING:
case VolumeInfo.STATE_EJECTING:
      return R.drawable.ic_sd_card_48dp;
default :
    return R.drawable.ic_sd_card_48dp;
}
}
 else if (disk.isUsb()) {
return R.drawable.ic_usb_48dp;
}
 else {
return R.drawable.ic_sd_card_48dp;
}
}
