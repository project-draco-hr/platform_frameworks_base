{
  if (vol.disk.isSd()) {
switch (vol.getState()) {
case VolumeInfo.STATE_CHECKING:
case VolumeInfo.STATE_EJECTING:
      return R.drawable.stat_notify_sdcard_prepare;
default :
    return R.drawable.stat_notify_sdcard;
}
}
 else if (vol.disk.isUsb()) {
return R.drawable.stat_sys_data_usb;
}
 else {
return R.drawable.stat_notify_sdcard;
}
}
