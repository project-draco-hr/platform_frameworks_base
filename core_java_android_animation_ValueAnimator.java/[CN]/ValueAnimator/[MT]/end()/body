{
  if (Looper.myLooper() == null) {
    throw new AndroidRuntimeException("Animators may only be run on Looper threads");
  }
  if (!mRunning) {
    startAnimation();
    mStarted=true;
  }
 else   if (!mInitialized) {
    initAnimation();
  }
  animateValue(shouldPlayBackward(mRepeatCount) ? 0f : 1f);
  endAnimation();
}
