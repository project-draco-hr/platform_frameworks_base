{
  final long startTimeMillis=SystemClock.uptimeMillis();
  try {
    AccessibilityNodeInfo fetched=mUiTestAutomationBridge.getRootAccessibilityNodeInfoInActiveWindow();
    assertNotNull(fetched);
    AccessibilityNodeInfo expected=mUiTestAutomationBridge.findAccessibilityNodeInfoByViewIdInActiveWindow(R.id.root);
    while (true) {
      AccessibilityNodeInfo parent=expected.getParent();
      if (parent == null) {
        break;
      }
      expected=parent;
    }
    assertNotNull(expected);
    assertEquals("The node with id \"root\" should be the root.",expected,fetched);
  }
  finally {
    if (DEBUG) {
      final long elapsedTimeMillis=SystemClock.uptimeMillis() - startTimeMillis;
      Log.i(LOG_TAG,"testGetRootAccessibilityNodeInfoInActiveWindow: " + elapsedTimeMillis + "ms");
    }
  }
}
