{
  final long startTimeMillis=SystemClock.uptimeMillis();
  try {
    IAccessibilityServiceConnection connection=getConnection();
    getActivity();
    AccessibilityNodeInfo button=AccessibilityInteractionClient.getInstance().findAccessibilityNodeInfoByViewIdInActiveWindow(connection,R.id.button5);
    assertFalse(button.isSelected());
    assertTrue(button.performAction(ACTION_SELECT));
    button=AccessibilityInteractionClient.getInstance().findAccessibilityNodeInfoByViewIdInActiveWindow(connection,R.id.button5);
    assertTrue(button.isSelected());
    assertTrue(button.performAction(ACTION_CLEAR_SELECTION));
    button=AccessibilityInteractionClient.getInstance().findAccessibilityNodeInfoByViewIdInActiveWindow(connection,R.id.button5);
    assertFalse(button.isSelected());
  }
  finally {
    if (DEBUG) {
      final long elapsedTimeMillis=SystemClock.uptimeMillis() - startTimeMillis;
      Log.i(LOG_TAG,"testPerformAccessibilityActionClearSelection: " + elapsedTimeMillis + "ms");
    }
  }
}
