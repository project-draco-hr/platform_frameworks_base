{
  if (!sIsInitialized) {
    sIsInitialized=true;
    if (!hasNfcFeature()) {
      Log.v(TAG,"this device does not have NFC support");
      return null;
    }
    sService=getServiceInterface();
    if (sService == null) {
      Log.e(TAG,"could not retrieve NFC service");
      return null;
    }
  }
  return sService;
}
