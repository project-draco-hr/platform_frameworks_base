{
synchronized (NfcAdapter.class) {
    if (sIsInitialized) {
      return sAdapter;
    }
    sIsInitialized=true;
    IBinder b=ServiceManager.getService("nfc");
    if (b == null) {
      Log.d(TAG,"NFC Service not available");
      return null;
    }
    sAdapter=new NfcAdapter(INfcAdapter.Stub.asInterface(b));
    return sAdapter;
  }
}
