{
synchronized (NfcAdapter.class) {
    if (sIsInitialized) {
      return sAdapter;
    }
    sIsInitialized=true;
    IBinder b=ServiceManager.getService(Context.NFC_SERVICE);
    if (b == null) {
      return null;
    }
    sAdapter=new NfcAdapter(INfcAdapter.Stub.asInterface(b));
    return sAdapter;
  }
}
