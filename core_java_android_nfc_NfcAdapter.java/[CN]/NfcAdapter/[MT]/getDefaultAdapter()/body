{
synchronized (NfcAdapter.class) {
    if (sIsInitialized) {
      return sAdapter;
    }
    sIsInitialized=true;
    if (!hasNfcFeature()) {
      Log.v(TAG,"this device does not have NFC support");
      return null;
    }
    INfcAdapter service=getServiceInterface();
    if (service == null) {
      Log.e(TAG,"could not retrieve NFC service");
      return null;
    }
    sAdapter=new NfcAdapter(service);
    return sAdapter;
  }
}
