{
  if (mIsAuto) {
    if (mIsNight != isNight) {
      TunerService.get(mContext).setValue(Secure.TWILIGHT_MODE,isNight ? Secure.TWILIGHT_MODE_AUTO_OVERRIDE_ON : Secure.TWILIGHT_MODE_AUTO_OVERRIDE_OFF);
    }
 else {
      TunerService.get(mContext).setValue(Secure.TWILIGHT_MODE,Secure.TWILIGHT_MODE_AUTO);
    }
  }
 else {
    TunerService.get(mContext).setValue(Secure.TWILIGHT_MODE,isNight ? Secure.TWILIGHT_MODE_LOCKED_ON : Secure.TWILIGHT_MODE_LOCKED_OFF);
  }
}
