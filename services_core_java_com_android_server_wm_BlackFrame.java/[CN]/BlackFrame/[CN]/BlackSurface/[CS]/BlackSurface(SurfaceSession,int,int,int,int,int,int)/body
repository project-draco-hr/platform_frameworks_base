{
  left=l;
  top=t;
  this.layer=layer;
  int w=r - l;
  int h=b - t;
  if (DEBUG_SURFACE_TRACE) {
    surface=new WindowSurfaceController.SurfaceTrace(session,"BlackSurface(" + l + ", "+ t+ ")",w,h,OPAQUE,FX_SURFACE_DIM | SurfaceControl.HIDDEN);
  }
 else {
    surface=new SurfaceControl(session,"BlackSurface",w,h,OPAQUE,FX_SURFACE_DIM | SurfaceControl.HIDDEN);
  }
  surface.setAlpha(1);
  surface.setLayerStack(layerStack);
  surface.setLayer(layer);
  surface.show();
  if (SHOW_TRANSACTIONS || SHOW_SURFACE_ALLOC)   Slog.i(TAG_WM,"  BLACK " + surface + ": CREATE layer="+ layer);
}
