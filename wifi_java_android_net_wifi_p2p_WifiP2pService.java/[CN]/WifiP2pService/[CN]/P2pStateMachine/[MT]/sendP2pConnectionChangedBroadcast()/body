{
  if (DBG)   Slog.d(TAG,"sending p2p connection changed broadcast");
  Intent intent=new Intent(WifiP2pManager.WIFI_P2P_CONNECTION_CHANGED_ACTION);
  intent.addFlags(Intent.FLAG_RECEIVER_REGISTERED_ONLY_BEFORE_BOOT | Intent.FLAG_RECEIVER_REPLACE_PENDING);
  intent.putExtra(WifiP2pManager.EXTRA_NETWORK_INFO,new NetworkInfo(mNetworkInfo));
  intent.putExtra(WifiP2pManager.EXTRA_LINK_PROPERTIES,new LinkProperties(mLinkProperties));
  mContext.sendStickyBroadcast(intent);
}
