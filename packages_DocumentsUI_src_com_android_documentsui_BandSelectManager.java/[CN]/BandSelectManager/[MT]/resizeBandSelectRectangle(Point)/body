{
  if (mBounds != null) {
    mCursorDeltaY=pointerPosition.y - mBounds.bottom;
  }
  mBounds=new Rect(Math.min(mOrigin.x,pointerPosition.x),Math.min(mOrigin.y,pointerPosition.y),Math.max(mOrigin.x,pointerPosition.x),Math.max(mOrigin.y,pointerPosition.y));
  mRegionSelectorDrawable.setBounds(mBounds);
}
