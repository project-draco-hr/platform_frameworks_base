{
  if (isShowing()) {
    return;
  }
  mHidden=false;
  mDismissed=false;
  cancelAllAnimations();
  if (mContentContainer.getChildCount() == 0) {
    setMainPanelAsContent();
  }
  preparePopupContent();
  mContentContainer.setAlpha(0);
  mPopupWindow.showAtLocation(mParent,Gravity.NO_GRAVITY,x,y);
  setTouchableSurfaceInsetsComputer();
  runShowAnimation();
}
