{
  mParent.getGlobalVisibleRect(mViewPort);
  WindowInsets windowInsets=mParent.getRootWindowInsets();
  mViewPort.set(mViewPort.left + windowInsets.getStableInsetLeft(),mViewPort.top + windowInsets.getStableInsetTop(),mViewPort.right - windowInsets.getStableInsetRight(),mViewPort.bottom - windowInsets.getStableInsetBottom());
}
