{
  final ImageButton overflowButton=(ImageButton)LayoutInflater.from(mContext).inflate(R.layout.floating_popup_overflow_button,null);
  overflowButton.setImageDrawable(mOverflow);
  overflowButton.setOnClickListener(new View.OnClickListener(){
    @Override public void onClick(    View v){
      final Drawable drawable=overflowButton.getDrawable();
      if (mIsOverflowOpen) {
        overflowButton.setImageDrawable(mToOverflow);
        mToOverflow.start();
        closeOverflow();
      }
 else {
        overflowButton.setImageDrawable(mToArrow);
        mToArrow.start();
        openOverflow();
      }
      overflowButton.postDelayed(mResetOverflowButtonDrawable,OVERFLOW_BUTTON_ANIMATION_DELAY);
    }
  }
);
  return overflowButton;
}
