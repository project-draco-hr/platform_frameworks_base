{
  mCallbackHandler.removeMessages(MSG_TIMEOUT,op);
  final long timeoutMillis=(op.verb == VERB_EXECUTING) ? EXECUTING_TIMESLICE_MILLIS : OP_TIMEOUT_MILLIS;
  if (Log.isLoggable(TaskManagerService.TAG,Log.DEBUG)) {
    Slog.d(TAG,"Scheduling time out for '" + component.getShortClassName() + "' tId: "+ op.params.getTaskId()+ ", in "+ (timeoutMillis / 1000)+ " s");
  }
  Message m=mCallbackHandler.obtainMessage(MSG_TIMEOUT,op);
  mCallbackHandler.sendMessageDelayed(m,timeoutMillis);
}
