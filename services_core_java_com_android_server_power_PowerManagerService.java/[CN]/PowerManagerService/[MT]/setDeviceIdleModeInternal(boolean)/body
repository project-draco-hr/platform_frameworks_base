{
synchronized (mLock) {
    if (mDeviceIdleMode != enabled) {
      mDeviceIdleMode=enabled;
      updateWakeLockDisabledStatesLocked();
      if (enabled) {
        EventLogTags.writeDeviceIdleOnPhase("power");
      }
 else {
        EventLogTags.writeDeviceIdleOffPhase("power");
      }
      return true;
    }
    return false;
  }
}
