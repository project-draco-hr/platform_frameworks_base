{
  if (DEBUG) {
    Slog.d(TAG,"Check if boot animation finished...");
  }
  if (SystemService.isRunning(BOOT_ANIMATION_SERVICE)) {
    mHandler.sendEmptyMessageDelayed(MSG_CHECK_IF_BOOT_ANIMATION_FINISHED,BOOT_ANIMATION_POLL_INTERVAL);
    return;
  }
synchronized (mLock) {
    if (!mBootCompleted) {
      Slog.i(TAG,"Boot animation finished.");
      handleBootCompletedLocked();
    }
  }
}
