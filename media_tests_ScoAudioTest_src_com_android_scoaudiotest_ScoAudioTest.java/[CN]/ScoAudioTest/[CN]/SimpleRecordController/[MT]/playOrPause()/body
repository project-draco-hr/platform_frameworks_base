{
  if (mState == 0) {
    setup();
    try {
      mMediaRecorder.start();
      mState=1;
    }
 catch (    Exception e) {
      Log.e(TAG,"Could start MediaRecorder: " + e.toString());
      mMediaRecorder.release();
      mMediaRecorder=null;
      mState=0;
    }
  }
 else {
    try {
      mMediaRecorder.stop();
      mMediaRecorder.reset();
    }
 catch (    Exception e) {
      Log.e(TAG,"Could not stop MediaRecorder: " + e.toString());
      mMediaRecorder.release();
      mMediaRecorder=null;
    }
 finally {
      mState=0;
    }
  }
  updatePlayPauseButton();
}
