{
  int packageUid=-1;
  try {
    packageUid=AppGlobals.getPackageManager().getPackageUid(packageName,PackageManager.MATCH_UNINSTALLED_PACKAGES,UserHandle.getCallingUserId());
  }
 catch (  RemoteException re) {
    Slog.e(TAG,"Couldn't determine the packageUid for " + packageName + re);
    return new Account[0];
  }
  return getAccountsAsUser(type,UserHandle.getCallingUserId(),packageName,packageUid,opPackageName);
}
