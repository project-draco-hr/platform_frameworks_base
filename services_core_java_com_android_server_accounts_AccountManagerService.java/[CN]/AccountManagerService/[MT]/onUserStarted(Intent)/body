{
  int userId=intent.getIntExtra(Intent.EXTRA_USER_HANDLE,-1);
  if (userId < 1)   return;
  Account[] sharedAccounts=getSharedAccountsAsUser(userId);
  if (sharedAccounts == null || sharedAccounts.length == 0)   return;
  Account[] accounts=getAccountsAsUser(null,userId);
  int parentUserId=UserManager.isSplitSystemUser() ? mUserManager.getUserInfo(userId).restrictedProfileParentId : UserHandle.USER_SYSTEM;
  if (parentUserId < 0) {
    Log.w(TAG,"User " + userId + " has shared accounts, but no parent user");
    return;
  }
  for (  Account sa : sharedAccounts) {
    if (ArrayUtils.contains(accounts,sa))     continue;
    copyAccountToUser(null,sa,parentUserId,userId);
  }
}
