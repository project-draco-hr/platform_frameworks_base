{
  if (mPlayer == null) {
    mPlayer=new MediaPlayer();
    mCurrentState=STATE_INITIALIZED;
  }
  mSkipPrepare=skipPrepare;
  if (!mSkipPrepare) {
    mCurrentState=STATE_INITIALIZED;
  }
  mProxy=null;
  mVideoLayerId=videoLayerId;
  mSaveSeekTime=position;
  mTimer=null;
  mPauseDuringPreparing=false;
}
