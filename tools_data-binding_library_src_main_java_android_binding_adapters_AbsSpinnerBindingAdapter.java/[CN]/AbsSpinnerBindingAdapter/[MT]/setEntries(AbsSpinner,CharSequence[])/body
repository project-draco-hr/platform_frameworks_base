{
  if (entries != null) {
    SpinnerAdapter oldAdapter=view.getAdapter();
    boolean changed=true;
    if (oldAdapter.getCount() == entries.length) {
      changed=false;
      for (int i=0; i < entries.length; i++) {
        if (!entries[i].equals(oldAdapter.getItem(i))) {
          changed=true;
          break;
        }
      }
    }
    if (changed) {
      ArrayAdapter<CharSequence> adapter=new ArrayAdapter<CharSequence>(view.getContext(),android.R.layout.simple_spinner_item,entries);
      adapter.setDropDownViewResource(android.R.layout.simple_spinner_dropdown_item);
      view.setAdapter(adapter);
    }
  }
 else {
    view.setAdapter(null);
  }
}
