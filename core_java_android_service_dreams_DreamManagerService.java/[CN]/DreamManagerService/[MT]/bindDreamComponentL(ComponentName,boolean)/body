{
  if (DEBUG)   Slog.v(TAG,"bindDreamComponent: componentName=" + componentName + " pid="+ Binder.getCallingPid()+ ", uid="+ Binder.getCallingUid());
  Intent intent=new Intent(Intent.ACTION_MAIN).setComponent(componentName).addFlags(Intent.FLAG_ACTIVITY_EXCLUDE_FROM_RECENTS).putExtra("android.dreams.TEST",test);
  mCurrentDreamComponent=componentName;
  mCurrentDreamToken=new Binder();
  try {
    if (DEBUG)     Slog.v(TAG,"Adding window token: " + mCurrentDreamToken + " for window type: "+ WindowManager.LayoutParams.TYPE_DREAM);
    mIWindowManager.addWindowToken(mCurrentDreamToken,WindowManager.LayoutParams.TYPE_DREAM);
  }
 catch (  RemoteException e) {
    Slog.w(TAG,"Unable to add window token. Proceed at your own risk.");
  }
  if (!mContext.bindService(intent,this,Context.BIND_AUTO_CREATE)) {
    Slog.w(TAG,"unable to bind service: " + componentName);
  }
}
