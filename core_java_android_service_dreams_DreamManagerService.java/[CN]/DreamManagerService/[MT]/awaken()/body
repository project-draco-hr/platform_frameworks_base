{
  if (DEBUG)   Slog.v(TAG,"awaken()");
synchronized (mLock) {
    if (mCurrentDream != null) {
      if (DEBUG)       Slog.v(TAG,"disconnecting: " + mCurrentDreamComponent + " service: "+ mCurrentDream);
      mContext.unbindService(this);
      mCurrentDream=null;
      mCurrentDreamToken=null;
    }
  }
}
