{
  if (DEBUG)   Log.d(TAG,"maybeStartBiometricUnlock()");
  if (mBiometricUnlock != null) {
    KeyguardUpdateMonitor monitor=KeyguardUpdateMonitor.getInstance(mContext);
    final boolean backupIsTimedOut=(monitor.getFailedUnlockAttempts() >= LockPatternUtils.FAILED_ATTEMPTS_BEFORE_TIMEOUT);
    PowerManager powerManager=(PowerManager)mContext.getSystemService(Context.POWER_SERVICE);
    if (monitor.getPhoneState() == TelephonyManager.CALL_STATE_IDLE && !monitor.getMaxBiometricUnlockAttemptsReached() && !backupIsTimedOut && powerManager.isScreenOn()) {
      mBiometricUnlock.start();
    }
 else {
      mBiometricUnlock.stopAndShowBackup();
    }
  }
}
