{
  Object obj=null;
  try {
    obj=bdl.getObject("Orientation");
  }
 catch (  MissingResourceException mre) {
    obj=null;
  }
  if (obj instanceof ComponentOrientation) {
    return (ComponentOrientation)obj;
  }
  Locale locale=bdl.getLocale();
