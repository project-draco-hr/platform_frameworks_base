{
  if (pkg == null) {
    return;
  }
  mHandler.removeMessages(H.SHOW);
  if (isImmersiveMode) {
    mLastPackage=pkg;
    if (DEBUG_SHOW_EVERY_TIME || !mConfirmedPackages.contains(pkg)) {
      mHandler.sendMessageDelayed(mHandler.obtainMessage(H.SHOW,pkg),mShowDelayMs);
    }
  }
 else {
    mLastPackage=null;
    mHandler.sendEmptyMessage(H.HIDE);
  }
}
