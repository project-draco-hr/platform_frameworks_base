{
  return new Runnable(){
    @Override public void run(){
      if (pkg != null && !mConfirmedPackages.contains(pkg)) {
        if (DEBUG)         Slog.d(TAG,"Confirming immersive mode for " + pkg);
        mConfirmedPackages.add(pkg);
        saveSetting();
      }
      handleHide();
    }
  }
;
}
