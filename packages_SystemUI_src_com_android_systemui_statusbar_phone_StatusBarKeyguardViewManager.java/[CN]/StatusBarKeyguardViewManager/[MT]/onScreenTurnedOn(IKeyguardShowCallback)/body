{
  mScreenOn=true;
  if (mKeyguardView != null) {
    mKeyguardView.onScreenTurnedOn();
    if (callback != null) {
      callbackAfterDraw(callback);
    }
  }
 else {
    try {
      if (callback != null) {
        callback.onShown(null);
      }
    }
 catch (    RemoteException e) {
      Slog.w(TAG,"Exception calling onShown():",e);
    }
  }
}
