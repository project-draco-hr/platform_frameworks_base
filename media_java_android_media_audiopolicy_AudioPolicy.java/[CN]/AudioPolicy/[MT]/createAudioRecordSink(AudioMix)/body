{
  if (!policyReadyToUse()) {
    Log.e(TAG,"Cannot create AudioRecord sink for AudioMix");
    return null;
  }
  checkMixReadyToUse(mix,false);
  AudioRecord ar=new AudioRecord(new AudioAttributes.Builder().setInternalCapturePreset(MediaRecorder.AudioSource.REMOTE_SUBMIX).addTag(mix.getRegistration()).build(),mix.getFormat(),AudioRecord.getMinBufferSize(mix.getFormat().getSampleRate(),AudioFormat.CHANNEL_IN_STEREO,mix.getFormat().getEncoding()),AudioManager.AUDIO_SESSION_ID_GENERATE);
  return ar;
}
