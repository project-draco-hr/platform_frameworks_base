{
  closeOpenInfoPanes();
  final ArrayList<TaskViewTransform> curTaskTransforms=getStackTransforms(curTasks,getStackScroll(),null,true);
  updateMinMaxScroll(false);
  setStackScrollRaw(mStashedScroll);
  boundScrollRaw();
  final ArrayList<Task> tasks=mStack.getTasks();
  final ArrayList<TaskViewTransform> taskTransforms=getStackTransforms(tasks,getStackScroll(),null,true);
  doFilteringAnimation(curTasks,curTaskTransforms,tasks,taskTransforms);
  mStashedScroll=0;
}
