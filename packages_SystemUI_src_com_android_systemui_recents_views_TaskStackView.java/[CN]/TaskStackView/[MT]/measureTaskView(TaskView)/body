{
  Rect padding=new Rect();
  if (tv.getBackground() != null) {
    tv.getBackground().getPadding(padding);
  }
  mTmpRect.set(mStableLayoutAlgorithm.mTaskRect);
  mTmpRect.union(mLayoutAlgorithm.mTaskRect);
  tv.measure(MeasureSpec.makeMeasureSpec(mTmpRect.width() + padding.left + padding.right,MeasureSpec.EXACTLY),MeasureSpec.makeMeasureSpec(mTmpRect.height() + padding.top + padding.bottom,MeasureSpec.EXACTLY));
}
