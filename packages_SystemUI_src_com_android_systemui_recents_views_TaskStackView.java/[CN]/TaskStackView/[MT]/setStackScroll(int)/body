{
  mStackScroll=value;
  requestSynchronizeStackViewsWithModel();
  boolean isAnimatingScroll=(mScrollAnimator != null && mScrollAnimator.isRunning());
  if (mLastInfoPaneStackScroll > -1 && !isAnimatingScroll) {
    RecentsConfiguration config=RecentsConfiguration.getInstance();
    if (Math.abs(mStackScroll - mLastInfoPaneStackScroll) > config.taskStackScrollDismissInfoPaneDistance) {
      closeOpenInfoPanes();
    }
  }
}
