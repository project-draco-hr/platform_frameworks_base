{
  boolean isInitialized=mLayoutAlgorithm.isInitialized();
  mStack.setTasks(getContext(),stack.computeAllTasksList(),notifyStackChanges && isInitialized);
  if (isInitialized) {
    updateLayoutAlgorithm(false,EMPTY_TASK_SET);
    updateToInitialState();
    if (relayoutTaskStack) {
      relayoutTaskViews(AnimationProps.IMMEDIATE);
      List<TaskView> taskViews=getTaskViews();
      int taskViewCount=taskViews.size();
      for (int i=0; i < taskViewCount; i++) {
        TaskView tv=taskViews.get(i);
        bindTaskView(tv,tv.getTask());
      }
    }
  }
}
