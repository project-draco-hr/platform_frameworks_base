{
  Console.log(Constants.DebugFlags.UI.HwLayers,"[TaskStackView|decHwLayersRefCount] refCount: " + mHwLayersRefCount + "->"+ (mHwLayersRefCount - 1));
  mHwLayersRefCount--;
  if (mHwLayersRefCount == 0) {
    int childCount=getChildCount();
    for (int i=0; i < childCount; i++) {
      TaskView tv=(TaskView)getChildAt(i);
      tv.disableHwLayers();
    }
  }
 else   if (mHwLayersRefCount < 0) {
    throw new RuntimeException("Invalid hw layers ref count");
  }
}
