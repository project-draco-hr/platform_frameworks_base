{
  mStackScroller.stopScroller();
  mStackScroller.stopBoundScrollAnimation();
  ViewAnimation.TaskViewExitContext context=new ViewAnimation.TaskViewExitContext(event.getAnimationTrigger());
  startExitToHomeAnimation(context);
  int taskViewExitToHomeDuration=getResources().getInteger(R.integer.recents_task_exit_to_home_duration);
  animateFreeformWorkspaceBackgroundAlpha(0,taskViewExitToHomeDuration,mFastOutSlowInInterpolator);
}
