{
  if (event.dropTarget instanceof TaskStack.DockState) {
    final TaskStack.DockState dockState=(TaskStack.DockState)event.dropTarget;
    mStackBounds.set(dockState.getDockedTaskStackBounds(getMeasuredWidth(),getMeasuredHeight(),mDividerSize,mLayoutAlgorithm.mSystemInsets,getResources()));
    computeRects(mStackBounds,true,event.task);
    updateTaskViewsToLayout(new TaskViewAnimation(250,mFastOutSlowInInterpolator),event.task);
  }
 else {
    mStackBounds.set(mStableStackBounds);
    computeRects(mStackBounds,true);
    updateTaskViewsToLayout(new TaskViewAnimation(250,mFastOutSlowInInterpolator),event.task);
  }
}
