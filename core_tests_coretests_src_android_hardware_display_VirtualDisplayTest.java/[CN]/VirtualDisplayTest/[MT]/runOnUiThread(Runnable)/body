{
  Runnable waiter=new Runnable(){
    @Override public void run(){
synchronized (this) {
        notifyAll();
      }
    }
  }
;
synchronized (waiter) {
    mHandler.post(runnable);
    mHandler.post(waiter);
    try {
      waiter.wait(TIMEOUT);
    }
 catch (    InterruptedException ex) {
    }
  }
}
