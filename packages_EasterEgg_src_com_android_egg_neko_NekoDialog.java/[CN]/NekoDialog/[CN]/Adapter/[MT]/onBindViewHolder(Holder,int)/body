{
  final Food food=mFoods.get(position);
  ((ImageView)holder.itemView.findViewById(R.id.icon)).setImageIcon(food.getIcon(mContext));
  ((TextView)holder.itemView.findViewById(R.id.text)).setText(food.getName(mContext));
  holder.itemView.setOnClickListener(new View.OnClickListener(){
    @Override public void onClick(    View v){
      onFoodSelected(mFoods.get(holder.getAdapterPosition()));
    }
  }
);
}
