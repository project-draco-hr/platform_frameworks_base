{
switch (msg.what) {
case SHUTTER_CALLBACK:
    if (mShutterCallback != null) {
      mShutterCallback.onShutter();
    }
  return;
case RAW_PICTURE_CALLBACK:
if (mRawImageCallback != null) mRawImageCallback.onPictureTaken((byte[])msg.obj,mCamera);
return;
case JPEG_PICTURE_CALLBACK:
if (mJpegCallback != null) mJpegCallback.onPictureTaken((byte[])msg.obj,mCamera);
return;
case PREVIEW_CALLBACK:
if (mPreviewCallback != null) {
mPreviewCallback.onPreviewFrame((byte[])msg.obj,mCamera);
if (mOneShot) {
mPreviewCallback=null;
}
}
return;
case AUTOFOCUS_CALLBACK:
if (mAutoFocusCallback != null) mAutoFocusCallback.onAutoFocus(msg.arg1 == 0 ? false : true,mCamera);
return;
case ERROR_CALLBACK:
Log.e(TAG,"Error " + msg.arg1);
if (mErrorCallback != null) mErrorCallback.onError(msg.arg1,mCamera);
return;
default :
Log.e(TAG,"Unknown message type " + msg.what);
return;
}
}
