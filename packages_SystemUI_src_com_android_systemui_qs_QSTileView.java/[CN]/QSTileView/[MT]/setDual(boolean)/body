{
  final boolean changed=dual != mDual;
  mDual=dual;
  if (changed) {
    recreateLabel();
  }
  if (mDual) {
    setOnClickListener(mClickPrimary);
    mLabel.setClickable(true);
    mLabel.setOnClickListener(mClickSecondary);
  }
 else {
    mLabel.setClickable(false);
    setOnClickListener(mClickPrimary);
  }
  mDivider.setVisibility(dual ? VISIBLE : GONE);
  postInvalidate();
}
