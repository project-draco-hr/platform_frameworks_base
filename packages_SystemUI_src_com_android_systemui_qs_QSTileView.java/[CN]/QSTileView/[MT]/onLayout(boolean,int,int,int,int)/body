{
  final int w=getMeasuredWidth();
  final int h=getMeasuredHeight();
  final int p=h / VERTICAL_PADDING_FACTOR;
  final int contentHeight=p + mIcon.getMeasuredHeight() + mLabel.getMeasuredHeight()+ (mDual ? (p + mDivider.getMeasuredHeight()) : 0);
  int top=(h - contentHeight) / 2 + p;
  final int iconLeft=(w - mIcon.getMeasuredWidth()) / 2;
  layout(mIcon,iconLeft,top);
  top=mIcon.getBottom();
  if (mDual) {
    top+=p;
    layout(mDivider,0,top);
    top=mDivider.getBottom();
  }
  layout(mLabel,0,top);
}
