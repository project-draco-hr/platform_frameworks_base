{
  super(context,icon);
  mContext=context;
  final Resources res=context.getResources();
  mTileSpacingPx=res.getDimensionPixelSize(R.dimen.qs_tile_spacing);
  setClipChildren(false);
  setClickable(true);
  updateTopPadding();
  setId(View.generateViewId());
  createLabel();
  setOrientation(VERTICAL);
  setGravity(Gravity.CENTER);
}
