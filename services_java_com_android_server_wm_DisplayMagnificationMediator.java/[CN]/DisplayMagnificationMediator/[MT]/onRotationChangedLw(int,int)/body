{
  DisplayState displayState=mDisplayStates.get(displayId);
  if (displayState == null) {
    return;
  }
  if (DEBUG_ROTATION) {
    Slog.i(LOG_TAG,"Rotaton: " + Surface.rotationToString(rotation) + " displayId: "+ displayId);
  }
  displayState.mViewport.recomputeBoundsLw();
  mHandler.obtainMessage(MESSAGE_NOTIFY_ROTATION_CHANGED,rotation,0,displayState.mClient).sendToTarget();
}
