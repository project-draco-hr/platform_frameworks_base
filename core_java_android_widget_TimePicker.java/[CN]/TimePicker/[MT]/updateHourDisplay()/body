{
  int currentHour=mCurrentHour;
  if (!mIs24HourView) {
    if (currentHour > 12) {
      currentHour-=12;
    }
 else     if (currentHour == 0) {
      currentHour=12;
    }
  }
  mHourPicker.setCurrent(currentHour);
  mIsAm=mCurrentHour < 12;
  mAmPmPicker.setCurrent(mIsAm ? Calendar.AM : Calendar.PM);
  onTimeChanged();
}
