{
  if (currentHour == null || currentHour == getCurrentHour()) {
    return;
  }
  if (!is24HourView()) {
    if (currentHour > HOURS_IN_HALF_DAY) {
      currentHour-=HOURS_IN_HALF_DAY;
      mIsAm=false;
    }
 else {
      if (currentHour == 0) {
        currentHour=HOURS_IN_HALF_DAY;
      }
      mIsAm=true;
    }
    updateAmPmControl();
  }
  mHourSpinner.setValue(currentHour);
  onTimeChanged();
}
