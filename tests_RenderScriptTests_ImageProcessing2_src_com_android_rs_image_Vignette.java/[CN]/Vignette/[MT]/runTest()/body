{
  if (approx) {
    if (relaxed)     mScript_approx_relaxed.forEach_root(mInPixelsAllocation,mOutPixelsAllocation);
 else     mScript_approx_full.forEach_root(mInPixelsAllocation,mOutPixelsAllocation);
  }
 else   if (relaxed)   mScript_relaxed.forEach_root(mInPixelsAllocation,mOutPixelsAllocation);
 else   mScript_full.forEach_root(mInPixelsAllocation,mOutPixelsAllocation);
}
