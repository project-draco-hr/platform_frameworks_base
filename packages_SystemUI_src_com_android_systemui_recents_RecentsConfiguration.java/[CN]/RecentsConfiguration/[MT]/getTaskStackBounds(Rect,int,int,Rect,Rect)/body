{
  if (hasTransposedNavBar) {
    taskStackBounds.set(windowBounds.left,windowBounds.top + topInset,windowBounds.right - rightInset,windowBounds.bottom);
  }
 else {
    int top=searchBarBounds.isEmpty() ? topInset : 0;
    taskStackBounds.set(windowBounds.left,searchBarBounds.bottom + top,windowBounds.right - rightInset,windowBounds.bottom);
  }
}
