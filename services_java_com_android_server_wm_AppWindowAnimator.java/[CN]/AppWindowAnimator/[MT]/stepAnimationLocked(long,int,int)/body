{
  if (mService.okToDisplay()) {
    if (animation == sDummyAnimation) {
      return false;
    }
    if ((mAppToken.allDrawn || animating || mAppToken.startingDisplayed) && animation != null) {
      if (!animating) {
        if (WindowManagerService.DEBUG_ANIM)         Slog.v(TAG,"Starting animation in " + mAppToken + " @ "+ currentTime+ ": dw="+ dw+ " dh="+ dh+ " scale="+ mService.mTransitionAnimationScale+ " allDrawn="+ mAppToken.allDrawn+ " animating="+ animating);
        if (!animInitialized) {
          animation.initialize(dw,dh,dw,dh);
        }
        animation.setStartTime(currentTime);
        animating=true;
        if (thumbnail != null) {
          thumbnail.show();
          thumbnailAnimation.setStartTime(currentTime);
        }
      }
      if (stepAnimation(currentTime)) {
        if (thumbnail != null) {
          stepThumbnailAnimation(currentTime);
        }
        return true;
      }
    }
  }
 else   if (animation != null) {
    animating=true;
    animation=null;
  }
  hasTransformation=false;
  if (!animating && animation == null) {
    return false;
  }
  mAnimator.setAppLayoutChanges(this,WindowManagerPolicy.FINISH_LAYOUT_REDO_ANIM,"AppWindowToken");
  clearAnimation();
  animating=false;
  if (animLayerAdjustment != 0) {
    animLayerAdjustment=0;
    updateLayers();
  }
  if (mService.mInputMethodTarget != null && mService.mInputMethodTarget.mAppToken == mAppToken) {
    mService.moveInputMethodWindowsIfNeededLocked(true);
  }
  if (WindowManagerService.DEBUG_ANIM)   Slog.v(TAG,"Animation done in " + mAppToken + ": reportedVisible="+ mAppToken.reportedVisible);
  transformation.clear();
  final int N=mAllAppWinAnimators.size();
  for (int i=0; i < N; i++) {
    mAllAppWinAnimators.get(i).finishExit();
  }
  mAppToken.updateReportedVisibilityLocked();
  return false;
}
