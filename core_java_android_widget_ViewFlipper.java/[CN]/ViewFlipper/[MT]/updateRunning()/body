{
  boolean running=mVisible && mStarted && mUserPresent;
  if (running != mRunning) {
    if (running) {
      showOnly(mWhichChild);
      Message msg=mHandler.obtainMessage(FLIP_MSG);
      mHandler.sendMessageDelayed(msg,mFlipInterval);
    }
 else {
      mHandler.removeMessages(FLIP_MSG);
    }
    mRunning=running;
  }
}
