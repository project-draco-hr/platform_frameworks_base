{
  db.beginTransaction();
  try {
    String value=mContext.getResources().getBoolean(R.bool.def_screen_brightness_automatic_mode) ? "1" : "0";
    db.execSQL("INSERT OR REPLACE INTO system(name,value) values('" + Settings.System.SCREEN_BRIGHTNESS_MODE + "','"+ value+ "');");
    db.setTransactionSuccessful();
  }
  finally {
    db.endTransaction();
  }
}
