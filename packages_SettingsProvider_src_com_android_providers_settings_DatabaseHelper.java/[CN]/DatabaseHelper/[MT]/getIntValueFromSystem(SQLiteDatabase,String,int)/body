{
  int value=defaultValue;
  Cursor c=null;
  try {
    c=db.query("system",new String[]{Settings.System.VALUE},"name='" + name + "'",null,null,null,null);
    if (c != null && c.moveToFirst()) {
      String val=c.getString(0);
      value=val == null ? defaultValue : Integer.parseInt(val);
    }
  }
  finally {
    if (c != null)     c.close();
  }
  return value;
}
