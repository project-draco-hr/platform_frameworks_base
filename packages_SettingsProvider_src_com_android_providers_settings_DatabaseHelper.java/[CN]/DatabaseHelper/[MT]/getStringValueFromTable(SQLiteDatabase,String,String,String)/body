{
  Cursor c=null;
  try {
    c=db.query(table,new String[]{Settings.System.VALUE},"name='" + name + "'",null,null,null,null);
    if (c != null && c.moveToFirst()) {
      String val=c.getString(0);
      return val == null ? defaultValue : val;
    }
  }
  finally {
    if (c != null)     c.close();
  }
  return defaultValue;
}
