{
  SQLiteStatement stmt=db.compileStatement("INSERT OR IGNORE INTO secure(name,value)" + " VALUES(?,?);");
  loadSetting(stmt,Settings.Secure.BLUETOOTH_ON,0);
  loadSetting(stmt,Settings.Secure.DATA_ROAMING,"true".equalsIgnoreCase(SystemProperties.get("ro.com.android.dataroaming","false")) ? 1 : 0);
  loadSetting(stmt,Settings.Secure.INSTALL_NON_MARKET_APPS,0);
  loadSetting(stmt,Settings.Secure.LOCATION_PROVIDERS_ALLOWED,LocationManager.NETWORK_PROVIDER);
  loadSetting(stmt,Settings.Secure.NETWORK_PREFERENCE,ConnectivityManager.DEFAULT_NETWORK_PREFERENCE);
  loadSetting(stmt,Settings.Secure.USB_MASS_STORAGE_ENABLED,1);
  loadSetting(stmt,Settings.Secure.WIFI_ON,0);
  loadSetting(stmt,Settings.Secure.WIFI_NETWORKS_AVAILABLE_NOTIFICATION_ON,1);
  stmt.close();
}
