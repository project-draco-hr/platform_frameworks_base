{
  mFilteredTasks.clear();
  if (mFilter != null) {
    int taskCount=mTasks.size();
    for (int i=0; i < taskCount; i++) {
      Task t=mTasks.get(i);
      if (mFilter.acceptTask(t,i)) {
        mFilteredTasks.add(t);
      }
    }
  }
 else {
    mFilteredTasks.addAll(mTasks);
  }
  updateFilteredTaskIndices();
}
