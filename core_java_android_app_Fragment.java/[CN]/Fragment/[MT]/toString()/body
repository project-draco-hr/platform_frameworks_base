{
  StringBuilder sb=new StringBuilder(128);
  sb.append("Fragment{");
  sb.append(Integer.toHexString(System.identityHashCode(this)));
  if (mIndex >= 0) {
    sb.append(" #");
    sb.append(mIndex);
  }
  if (mFragmentId != 0) {
    sb.append(" id=0x");
    sb.append(Integer.toHexString(mFragmentId));
  }
  if (mTag != null) {
    sb.append(" ");
    sb.append(mTag);
  }
  sb.append('}');
  return sb.toString();
}
