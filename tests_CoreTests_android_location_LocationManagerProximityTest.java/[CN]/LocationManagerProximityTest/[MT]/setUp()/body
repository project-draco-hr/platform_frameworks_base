{
  super.setUp();
  mOriginalAllowedProviders=android.provider.Settings.Secure.getString(getContext().getContentResolver(),android.provider.Settings.Secure.LOCATION_PROVIDERS_ALLOWED);
  android.provider.Settings.Secure.putString(getContext().getContentResolver(),android.provider.Settings.Secure.LOCATION_PROVIDERS_ALLOWED,PROVIDER_NAME);
  mLocationManager=(LocationManager)getContext().getSystemService(Context.LOCATION_SERVICE);
  if (mLocationManager.getProvider(PROVIDER_NAME) != null) {
    mLocationManager.removeTestProvider(PROVIDER_NAME);
  }
  mLocationManager.addTestProvider(PROVIDER_NAME,true,false,true,false,false,false,false,Criteria.POWER_MEDIUM,Criteria.ACCURACY_FINE);
}
