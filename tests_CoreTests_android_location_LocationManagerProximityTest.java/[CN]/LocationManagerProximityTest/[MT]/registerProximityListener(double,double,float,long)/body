{
  String intentKey="testProximity";
  Intent proximityIntent=new Intent(intentKey);
  mPendingIntent=PendingIntent.getBroadcast(getContext(),0,proximityIntent,PendingIntent.FLAG_CANCEL_CURRENT);
  mIntentReceiver=new TestIntentReceiver(intentKey);
  mLocationManager.addProximityAlert(latitude,longitude,radius,expiration,mPendingIntent);
  getContext().registerReceiver(mIntentReceiver,mIntentReceiver.getFilter());
}
