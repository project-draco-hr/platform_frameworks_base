{
  UserInfo system=new UserInfo(UserHandle.USER_SYSTEM,mContext.getResources().getString(com.android.internal.R.string.owner_name),null,UserInfo.FLAG_ADMIN | UserInfo.FLAG_PRIMARY | UserInfo.FLAG_INITIALIZED);
  mUsers.put(system.id,system);
  mNextSerialNumber=MIN_USER_ID;
  mUserVersion=USER_VERSION;
  Bundle restrictions=new Bundle();
  mUserRestrictions.append(UserHandle.USER_SYSTEM,restrictions);
  updateUserIdsLocked();
  initDefaultGuestRestrictions();
  writeUserListLocked();
  writeUserLocked(system);
}
