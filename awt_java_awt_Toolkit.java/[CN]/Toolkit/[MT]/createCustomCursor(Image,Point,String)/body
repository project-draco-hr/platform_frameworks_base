{
  lockAWT();
  try {
    int w=img.getWidth(null), x=hotSpot.x;
    int h=img.getHeight(null), y=hotSpot.y;
    if (x < 0 || x >= w || y < 0 || y >= h) {
      throw new IndexOutOfBoundsException(Messages.getString("awt.7E"));
    }
    return new Cursor(name,img,hotSpot);
  }
  finally {
    unlockAWT();
  }
}
