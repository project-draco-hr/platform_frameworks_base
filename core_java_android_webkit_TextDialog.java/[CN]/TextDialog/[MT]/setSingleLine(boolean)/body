{
  if (mSingle != single) {
    TextKeyListener.Capitalize cap;
    if (single) {
      cap=TextKeyListener.Capitalize.NONE;
    }
 else {
      cap=TextKeyListener.Capitalize.SENTENCES;
    }
    setKeyListener(TextKeyListener.getInstance(!single,cap));
    mSingle=single;
    setHorizontallyScrolling(single);
  }
}
