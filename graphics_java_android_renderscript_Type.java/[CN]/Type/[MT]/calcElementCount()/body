{
  boolean hasLod=hasMipmaps();
  int x=getX();
  int y=getY();
  int z=getZ();
  int faces=1;
  if (hasFaces()) {
    faces=6;
  }
  if (x == 0) {
    x=1;
  }
  if (y == 0) {
    y=1;
  }
  if (z == 0) {
    z=1;
  }
  int count=x * y * z* faces;
  if (hasLod && (x > 1) && (y > 1)&& (z > 1)) {
    if (x > 1) {
      x>>=1;
    }
    if (y > 1) {
      y>>=1;
    }
    if (z > 1) {
      z>>=1;
    }
    count+=x * y * z* faces;
  }
  mElementCount=count;
}
