{
  final float[] verticesData={left,bottom,0.0f,0.0f,1.0f,right,bottom,0.0f,1.0f,1.0f,left,top,0.0f,0.0f,0.0f,right,top,0.0f,1.0f,0.0f};
  final int bytes=verticesData.length * FLOAT_SIZE_BYTES;
  final FloatBuffer triangleVertices=ByteBuffer.allocateDirect(bytes).order(ByteOrder.nativeOrder()).asFloatBuffer();
  triangleVertices.put(verticesData).position(0);
  return triangleVertices;
}
