{
  if (DEBUG) {
    Log.d(TAG,"onOffsetsChanged: xOffset=" + xOffset + ", yOffset="+ yOffset+ ", xOffsetStep="+ xOffsetStep+ ", yOffsetStep="+ yOffsetStep+ ", xPixels="+ xPixels+ ", yPixels="+ yPixels);
  }
  if (mXOffset != xOffset || mYOffset != yOffset) {
    if (DEBUG) {
      Log.d(TAG,"Offsets changed to (" + xOffset + ","+ yOffset+ ").");
    }
    mXOffset=xOffset;
    mYOffset=yOffset;
    mOffsetsChanged=true;
  }
  drawFrame();
}
