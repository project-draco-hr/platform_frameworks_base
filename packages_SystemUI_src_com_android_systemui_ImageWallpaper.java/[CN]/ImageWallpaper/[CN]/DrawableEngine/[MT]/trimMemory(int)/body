{
  if (level >= ComponentCallbacks2.TRIM_MEMORY_RUNNING_LOW && mBackground != null && mIsHwAccelerated) {
    if (DEBUG) {
      Log.d(TAG,"trimMemory");
    }
    mBackground.recycle();
    mBackground=null;
    mBackgroundWidth=-1;
    mBackgroundHeight=-1;
    mWallpaperManager.forgetLoadedWallpaper();
  }
}
