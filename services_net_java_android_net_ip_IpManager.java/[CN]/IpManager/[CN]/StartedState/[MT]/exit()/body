{
  if (mIpReachabilityMonitor != null) {
    mIpReachabilityMonitor.stop();
    mIpReachabilityMonitor=null;
  }
  if (mDhcpClient != null) {
    mDhcpClient.sendMessage(DhcpClient.CMD_STOP_DHCP);
    mDhcpClient.doQuit();
  }
  if (mApfFilter != null) {
    mApfFilter.shutdown();
    mApfFilter=null;
  }
  resetLinkProperties();
}
