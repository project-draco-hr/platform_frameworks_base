{
  final ViewManager wm=getWindowManager();
  if (wm == null) {
    return;
  }
  final PanelFeatureState[] panels=mPanels;
  final int N=panels != null ? panels.length : 0;
  for (int i=0; i < N; i++) {
    final PanelFeatureState panel=panels[i];
    if (panel != null) {
      closePanel(panel,true);
    }
  }
  closeContextMenu();
}
