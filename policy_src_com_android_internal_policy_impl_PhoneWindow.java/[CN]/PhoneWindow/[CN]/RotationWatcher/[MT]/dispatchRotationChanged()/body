{
synchronized (mWindows) {
    int i=0;
    while (i < mWindows.size()) {
      final WeakReference<PhoneWindow> ref=mWindows.get(i);
      final PhoneWindow win=ref.get();
      if (win != null) {
        win.onOptionsPanelRotationChanged();
        i++;
      }
 else {
        mWindows.remove(i);
      }
    }
  }
}
