{
  if (mOutsetBottom != null) {
    final DisplayMetrics metrics=getContext().getResources().getDisplayMetrics();
    int bottom=(int)mOutsetBottom.getDimension(metrics);
    WindowInsets newInsets=insets.replaceSystemWindowInsets(insets.getSystemWindowInsetLeft(),insets.getSystemWindowInsetTop(),insets.getSystemWindowInsetRight(),insets.getSystemWindowInsetBottom() + bottom);
    return super.dispatchApplyWindowInsets(newInsets);
  }
 else {
    return super.dispatchApplyWindowInsets(insets);
  }
}
