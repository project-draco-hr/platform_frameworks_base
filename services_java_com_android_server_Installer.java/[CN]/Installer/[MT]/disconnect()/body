{
  Slog.i(TAG,"disconnecting...");
  try {
    if (mSocket != null)     mSocket.close();
  }
 catch (  IOException ex) {
  }
  try {
    if (mIn != null)     mIn.close();
  }
 catch (  IOException ex) {
  }
  try {
    if (mOut != null)     mOut.close();
  }
 catch (  IOException ex) {
  }
  mSocket=null;
  mIn=null;
  mOut=null;
}
