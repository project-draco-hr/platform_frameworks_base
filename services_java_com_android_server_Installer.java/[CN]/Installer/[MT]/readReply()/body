{
  int len;
  buflen=0;
  if (!readBytes(buf,2))   return false;
  len=(((int)buf[0]) & 0xff) | ((((int)buf[1]) & 0xff) << 8);
  if ((len < 1) || (len > 1024)) {
    Log.e(TAG,"invalid reply length (" + len + ")");
    disconnect();
    return false;
  }
  if (!readBytes(buf,len))   return false;
  buflen=len;
  return true;
}
