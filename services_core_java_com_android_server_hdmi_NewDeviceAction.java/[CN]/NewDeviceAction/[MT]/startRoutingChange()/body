{
  mService.removeAction(RoutingControlAction.class);
  int newPath=toTopMostPortPath(mDevicePhysicalAddress);
  sendCommand(HdmiCecMessageBuilder.buildRoutingChange(mSourceAddress,mService.getActivePath(),newPath));
  mService.addAndStartAction(new RoutingControlAction(mService,mSourceAddress,mService.pathToPortId(newPath),null));
}
