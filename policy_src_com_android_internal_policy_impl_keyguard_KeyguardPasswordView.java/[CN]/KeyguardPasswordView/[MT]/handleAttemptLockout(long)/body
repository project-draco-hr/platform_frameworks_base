{
  mPasswordEntry.setEnabled(false);
  mKeyboardView.setEnabled(false);
  long elapsedRealtime=SystemClock.elapsedRealtime();
  final AccessibilityManager accessManager=(AccessibilityManager)mContext.getSystemService(Context.ACCESSIBILITY_SERVICE);
  final long interval=accessManager.isEnabled() ? ACCESSIBILITY_LOCKOUT_INTERVAL : LOCKOUT_INTERVAL;
  new CountDownTimer(elapsedRealtimeDeadline - elapsedRealtime,interval){
    @Override public void onTick(    long millisUntilFinished){
      int secondsRemaining=(int)(millisUntilFinished / 1000);
      mSecurityMessageDisplay.setMessage(R.string.kg_too_many_failed_attempts_countdown,true,secondsRemaining);
    }
    @Override public void onFinish(){
      resetState();
    }
  }
.start();
}
