{
synchronized (mMonitor) {
    try {
      Looper.prepare();
      mh=new HandlerHelper(mhi);
      if (mSetup != null) {
        mSetup.run();
        mSetup=null;
      }
    }
 catch (    RuntimeException exc) {
      mtr=exc;
    }
    mMonitor.notify();
  }
  if (mtr == null) {
    Looper.loop();
  }
}
