{
  super(name);
  mhi=h;
  mSetup=setup;
synchronized (mMonitor) {
    start();
    while (mh == null && mtr == null) {
      try {
        mMonitor.wait();
      }
 catch (      InterruptedException ex) {
      }
    }
  }
  if (mtr != null) {
    throw new RuntimeException("exception while starting",mtr);
  }
}
