{
  if (mService.getBluetoothStateInternal() != BluetoothAdapter.STATE_TURNING_ON) {
    return;
  }
  String val=mService.getAdapterProperties().getProperty("Devices");
  if (val == null) {
    return;
  }
  String[] bonds=val.split(",");
  if (bonds == null) {
    return;
  }
  mState.clear();
  if (DBG)   Log.d(TAG,"found " + bonds.length + " bonded devices");
  for (  String device : bonds) {
    mState.put(mService.getAddressFromObjectPath(device).toUpperCase(),BluetoothDevice.BOND_BONDED);
  }
  getProfileProxy();
}
