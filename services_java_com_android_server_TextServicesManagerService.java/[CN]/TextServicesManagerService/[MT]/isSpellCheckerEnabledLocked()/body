{
  final long ident=Binder.clearCallingIdentity();
  try {
    final boolean retval=Settings.Secure.getInt(mContext.getContentResolver(),Settings.Secure.SPELL_CHECKER_ENABLED,1) == 1;
    if (DBG) {
      Slog.w(TAG,"getSpellCheckerEnabled: " + retval);
    }
    return retval;
  }
  finally {
    Binder.restoreCallingIdentity(ident);
  }
}
