{
  if (DBG) {
    Slog.w(TAG,"setCurrentSpellChecker: " + sci.getId());
  }
  if (sci == null || !mSpellCheckerMap.containsKey(sci.getId()))   return;
  final long ident=Binder.clearCallingIdentity();
  try {
    Settings.Secure.putString(mContext.getContentResolver(),Settings.Secure.SPELL_CHECKER_SERVICE,sci == null ? "" : sci.getId());
  }
  finally {
    Binder.restoreCallingIdentity(ident);
  }
}
