{
  if (DBG) {
    Slog.w(TAG,"Start spell checker session inner locked.");
  }
  final String sciId=info.getId();
  final InternalServiceConnection connection=new InternalServiceConnection(sciId,locale,scListener);
  final Intent serviceIntent=new Intent(SpellCheckerService.SERVICE_INTERFACE);
  serviceIntent.setComponent(info.getComponent());
  if (DBG) {
    Slog.w(TAG,"bind service: " + info.getId());
  }
  if (!mContext.bindService(serviceIntent,connection,Context.BIND_AUTO_CREATE)) {
    Slog.e(TAG,"Failed to get a spell checker service.");
    return;
  }
  final SpellCheckerBindGroup group=new SpellCheckerBindGroup(connection,tsListener,locale,scListener,uid);
  mSpellCheckerBindGroups.put(sciId,group);
}
