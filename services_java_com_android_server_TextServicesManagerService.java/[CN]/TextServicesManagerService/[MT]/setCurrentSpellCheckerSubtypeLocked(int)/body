{
  if (DBG) {
    Slog.w(TAG,"setCurrentSpellCheckerSubtype: " + hashCode);
  }
  final SpellCheckerInfo sci=getCurrentSpellChecker(null);
  if (sci == null)   return;
  boolean found=false;
  for (int i=0; i < sci.getSubtypeCount(); ++i) {
    if (sci.getSubtypeAt(i).hashCode() == hashCode) {
      found=true;
      break;
    }
  }
  if (!found) {
    return;
  }
  final long ident=Binder.clearCallingIdentity();
  try {
    Settings.Secure.putString(mContext.getContentResolver(),Settings.Secure.SELECTED_SPELL_CHECKER_SUBTYPE,String.valueOf(hashCode));
  }
  finally {
    Binder.restoreCallingIdentity(ident);
  }
}
