{
  if (DBG) {
    Slog.w(TAG,"setCurrentSpellCheckerSubtype: " + hashCode);
  }
  final SpellCheckerInfo sci=getCurrentSpellChecker(null);
  int tempHashCode=0;
  for (int i=0; sci != null && i < sci.getSubtypeCount(); ++i) {
    if (sci.getSubtypeAt(i).hashCode() == hashCode) {
      tempHashCode=hashCode;
      break;
    }
  }
  final long ident=Binder.clearCallingIdentity();
  try {
    Settings.Secure.putString(mContext.getContentResolver(),Settings.Secure.SELECTED_SPELL_CHECKER_SUBTYPE,String.valueOf(tempHashCode));
  }
  finally {
    Binder.restoreCallingIdentity(ident);
  }
}
