{
synchronized (mSpellCheckerMap) {
    try {
      final int size=mListeners.size();
      for (int i=0; i < size; ++i) {
        if (mListeners.get(i).hasSpellCheckerListener(scListener)) {
          return;
        }
      }
      final InternalDeathRecipient recipient=new InternalDeathRecipient(this,tsListener,locale,scListener);
      scListener.asBinder().linkToDeath(recipient,0);
      mListeners.add(new InternalDeathRecipient(this,tsListener,locale,scListener));
    }
 catch (    RemoteException e) {
    }
    cleanLocked();
  }
}
