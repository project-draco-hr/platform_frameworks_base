{
  if (null == b)   throw new NullPointerException();
  if (off < 0 || len < 0 || off + len > b.length)   throw new IndexOutOfBoundsException();
  if (true == isClosed)   throw new IOException();
  if (0 == len)   return 0;
  len=nativeReadContent(b,off,len,offset);
  if (JNI_DRM_FAILURE == len)   throw new IOException();
 else   if (JNI_DRM_EOF == len)   return -1;
  offset+=len;
  return len;
}
