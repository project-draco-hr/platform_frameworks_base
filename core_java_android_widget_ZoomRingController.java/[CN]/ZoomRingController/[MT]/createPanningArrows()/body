{
  mPanningArrows=new ImageView(mContext);
  mPanningArrows.setImageDrawable(mZoomRing.getPanningArrowsDrawable());
  mPanningArrows.setLayoutParams(new FrameLayout.LayoutParams(FrameLayout.LayoutParams.WRAP_CONTENT,FrameLayout.LayoutParams.WRAP_CONTENT,Gravity.CENTER));
  mPanningArrows.setVisibility(View.INVISIBLE);
  mPanningArrowsEnterAnimation=AnimationUtils.loadAnimation(mContext,com.android.internal.R.anim.fade_in);
  mPanningArrowsExitAnimation=AnimationUtils.loadAnimation(mContext,com.android.internal.R.anim.fade_out);
}
