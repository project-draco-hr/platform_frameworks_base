{
  setInstance(this);
  mClassLoader=classLoader;
  mTestMode=testMode;
  try {
    mIViewDataBinder=classLoader.loadClass(I_VIEW_DATA_BINDER);
    mObservable=Observable.class;
    mObservableList=ObservableList.class;
