{
  checkBinderPermission();
  boolean result;
  try {
    result=AbstractAccountAuthenticator.this.confirmPassword(new AccountAuthenticatorResponse(response),account,password);
  }
 catch (  UnsupportedOperationException e) {
    response.onError(Constants.ERROR_CODE_UNSUPPORTED_OPERATION,"confirmPassword not supported");
    return;
  }
catch (  NetworkErrorException e) {
    response.onError(Constants.ERROR_CODE_NETWORK_ERROR,e.getMessage());
    return;
  }
  Bundle bundle=new Bundle();
  bundle.putBoolean(Constants.BOOLEAN_RESULT_KEY,result);
  response.onResult(bundle);
}
