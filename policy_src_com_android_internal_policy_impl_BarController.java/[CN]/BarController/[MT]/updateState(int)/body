{
  if (state != mState) {
    mState=state;
    mHandler.post(new Runnable(){
      @Override public void run(){
        try {
          IStatusBarService statusbar=getStatusBarService();
          if (statusbar != null) {
            statusbar.setWindowState(mStatusBarManagerId,state);
          }
        }
 catch (        RemoteException e) {
          mStatusBarService=null;
        }
      }
    }
);
  }
}
