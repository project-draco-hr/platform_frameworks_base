{
  if (listening) {
    mValues=ColorMatrixFragment.getColorTransforms();
    mValueTitles=ColorMatrixFragment.getColorTitles(mContext);
    TunerService.get(mContext).addTunable(this,COLOR_MATRIX_CUSTOM_ENABLED,COLOR_MATRIX_CUSTOM_VALUES,Settings.Secure.ACCESSIBILITY_DISPLAY_COLOR_MATRIX);
  }
 else {
    TunerService.get(mContext).removeTunable(this);
  }
}
