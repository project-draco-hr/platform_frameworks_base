{
  if (mFadedEdgeDrawHelper != null) {
    final boolean offsetRequired=isPaddingOffsetRequired();
    mFadedEdgeDrawHelper.drawCallback(canvas,left,right,top + getFadeTop(offsetRequired),bottom,getScrollX(),getScrollY(),getTopFadingEdgeStrength(),getBottomFadingEdgeStrength(),0,0,getPaddingTop());
  }
}
