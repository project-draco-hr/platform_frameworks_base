{
  final UiSelector docList=new UiSelector().resourceId("com.android.documentsui:id/container_directory").childSelector(new UiSelector().resourceId("com.android.documentsui:id/dir_list"));
  new UiObject(docList.childSelector(new UiSelector())).waitForExists(mTimeout);
  return mDevice.findObject(docList.childSelector(new UiSelector().text(label)));
}
