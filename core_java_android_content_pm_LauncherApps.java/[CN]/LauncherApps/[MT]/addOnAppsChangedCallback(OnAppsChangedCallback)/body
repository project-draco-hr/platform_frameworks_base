{
synchronized (this) {
    if (callback != null && !mCallbacks.contains(callback)) {
      mCallbacks.add(callback);
      if (mCallbacks.size() == 1 && mListeners.size() == 0) {
        try {
          mService.addOnAppsChangedListener(mAppsChangedListener);
        }
 catch (        RemoteException re) {
        }
      }
    }
  }
}
