{
  int index=mPos / 8;
  int offset=16 - (mPos % 8) - bits;
  if ((bits < 0) || (bits > 8) || ((mPos + bits) > mEnd)) {
    throw new AccessException("illegal read " + "(pos " + mPos + ", end "+ mEnd+ ", bits "+ bits+ ")");
  }
  int data=(mBuf[index] & 0xFF) << 8;
  if (offset < 8)   data|=(mBuf[index + 1] & 0xFF);
  data>>>=offset;
  data&=(-1 >>> (32 - bits));
  mPos+=bits;
  return (byte)data;
}
