{
  if (show) {
    mScrimBehindAlpha=SCRIM_BEHIND_ALPHA;
    mScrimBehindAlphaKeyguard=SCRIM_BEHIND_ALPHA_KEYGUARD;
    mScrimBehindAlphaUnlocking=SCRIM_BEHIND_ALPHA_UNLOCKING;
  }
 else {
    mScrimBehindAlpha=0;
    mScrimBehindAlphaKeyguard=0;
    mScrimBehindAlphaUnlocking=0;
  }
  scheduleUpdate();
}
