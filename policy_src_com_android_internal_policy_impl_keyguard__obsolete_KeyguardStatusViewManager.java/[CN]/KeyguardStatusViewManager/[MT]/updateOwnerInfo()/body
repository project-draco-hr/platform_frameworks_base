{
  final ContentResolver res=getContext().getContentResolver();
  final boolean ownerInfoEnabled=Settings.Secure.getInt(res,Settings.Secure.LOCK_SCREEN_OWNER_INFO_ENABLED,1) != 0;
  mOwnerInfoText=ownerInfoEnabled ? Settings.Secure.getString(res,Settings.Secure.LOCK_SCREEN_OWNER_INFO) : null;
  if (mOwnerInfoView != null) {
    mOwnerInfoView.setText(mOwnerInfoText);
    mOwnerInfoView.setVisibility(TextUtils.isEmpty(mOwnerInfoText) ? View.GONE : View.VISIBLE);
  }
}
