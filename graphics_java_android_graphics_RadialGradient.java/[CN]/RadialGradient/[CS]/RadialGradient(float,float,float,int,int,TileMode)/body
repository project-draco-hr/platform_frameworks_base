{
  if (radius <= 0) {
    throw new IllegalArgumentException("radius must be > 0");
  }
  mType=TYPE_COLOR_CENTER_AND_COLOR_EDGE;
  mX=x;
  mY=y;
  mRadius=radius;
  mColor0=color0;
  mColor1=color1;
  mTileMode=tile;
  native_instance=nativeCreate2(x,y,radius,color0,color1,tile.nativeInt);
  native_shader=nativePostCreate2(native_instance,x,y,radius,color0,color1,tile.nativeInt);
}
