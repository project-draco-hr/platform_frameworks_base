{
  if (fadeOut) {
    mFadingAlpha=1;
    mIsFadingOut=true;
    mHandler.removeCallbacks(mFadingOut);
    mHandler.postDelayed(mFadingOut,FADING_REFRESHING_RATE);
  }
 else {
    mPath=null;
    mCurrentGesture=null;
    if (mBitmap != null) {
      mBitmap.eraseColor(TRANSPARENT_BACKGROUND);
      invalidate();
    }
  }
}
