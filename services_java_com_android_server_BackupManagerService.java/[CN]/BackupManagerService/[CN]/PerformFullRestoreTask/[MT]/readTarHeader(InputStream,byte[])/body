{
  int totalRead=0;
  while (totalRead < 512) {
    int nRead=instream.read(block,totalRead,512 - totalRead);
    if (nRead >= 0) {
      mBytes+=nRead;
      totalRead+=nRead;
    }
 else {
      if (totalRead == 0) {
        break;
      }
      throw new IOException("Unable to read full block header, t=" + totalRead);
    }
  }
  return (totalRead == 512);
}
