{
  mContext.enforceCallingPermission("android.permission.BACKUP","setBackupEnabled");
  boolean wasEnabled=mEnabled;
synchronized (this) {
    Settings.Secure.putInt(mContext.getContentResolver(),BACKUP_ENABLED_SETTING,enable ? 1 : 0);
    mEnabled=enable;
  }
synchronized (mQueueLock) {
    if (enable && !wasEnabled) {
      scheduleBackupPassLocked(BACKUP_INTERVAL);
    }
 else     if (!enable) {
      mBackupHandler.removeMessages(MSG_RUN_BACKUP);
    }
  }
}
