{
  if (mThemeRes != 0) {
    mContext=new ContextThemeWrapper(context,mThemeRes);
    mInflater=LayoutInflater.from(mContext);
  }
 else   if (mContext != null) {
    mContext=context;
    if (mInflater == null) {
      mInflater=LayoutInflater.from(mContext);
    }
  }
  mMenu=menu;
  if (mAdapter != null) {
    mAdapter.notifyDataSetChanged();
  }
}
