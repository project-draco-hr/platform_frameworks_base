{
synchronized (mLock) {
    checkIfCameraClosed();
    if (!mRepeatingRequestIdStack.isEmpty()) {
      throw new IllegalStateException("Active repeating request ongoing");
    }
    try {
      mRemoteDevice.waitUntilIdle();
    }
 catch (    CameraRuntimeException e) {
      throw e.asChecked();
    }
catch (    RemoteException e) {
      return;
    }
  }
}
