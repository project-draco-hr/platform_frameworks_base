{
  if (listener != null) {
    handler=checkHandler(handler);
  }
synchronized (mLock) {
    checkIfCameraClosed();
    int requestId;
    try {
      requestId=mRemoteDevice.submitRequest(request,repeating);
    }
 catch (    CameraRuntimeException e) {
      throw e.asChecked();
    }
catch (    RemoteException e) {
      return -1;
    }
    if (listener != null) {
      mCaptureListenerMap.put(requestId,new CaptureListenerHolder(listener,request,handler,repeating));
    }
    if (repeating) {
      if (mRepeatingRequestId != REQUEST_ID_NONE) {
        mRepeatingRequestIdDeletedList.add(mRepeatingRequestId);
      }
      mRepeatingRequestId=requestId;
    }
    if (mIdle) {
      mDeviceHandler.post(mCallOnActive);
    }
    mIdle=false;
    return requestId;
  }
}
