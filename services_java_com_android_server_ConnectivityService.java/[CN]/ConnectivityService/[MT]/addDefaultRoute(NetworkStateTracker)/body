{
  LinkProperties p=nt.getLinkProperties();
  if (p == null)   return;
  String interfaceName=p.getInterfaceName();
  if (TextUtils.isEmpty(interfaceName))   return;
  for (  InetAddress gateway : p.getGateways()) {
    if (NetworkUtils.addHostRoute(interfaceName,gateway,null) && NetworkUtils.addDefaultRoute(interfaceName,gateway)) {
      if (DBG) {
        NetworkInfo networkInfo=nt.getNetworkInfo();
        log("addDefaultRoute for " + networkInfo.getTypeName() + " ("+ interfaceName+ "), GatewayAddr="+ gateway.getHostAddress());
      }
    }
  }
}
