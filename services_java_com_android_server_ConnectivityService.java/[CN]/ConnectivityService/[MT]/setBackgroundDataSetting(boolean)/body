{
  mContext.enforceCallingOrSelfPermission(android.Manifest.permission.CHANGE_BACKGROUND_DATA_SETTING,"ConnectivityService");
  if (getBackgroundDataSetting() == allowBackgroundDataUsage)   return;
  Settings.Secure.putInt(mContext.getContentResolver(),Settings.Secure.BACKGROUND_DATA,allowBackgroundDataUsage ? 1 : 0);
  Intent broadcast=new Intent(ConnectivityManager.ACTION_BACKGROUND_DATA_SETTING_CHANGED);
  mContext.sendBroadcast(broadcast);
}
