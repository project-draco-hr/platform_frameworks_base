{
  enforceChangePermission();
  if (!ConnectivityManager.isNetworkTypeValid(networkType)) {
    return false;
  }
  NetworkStateTracker tracker=mNetTrackers[networkType];
  if (tracker == null || !tracker.getNetworkInfo().isConnected() || tracker.isTeardownRequested()) {
    if (DBG) {
      Slog.d(TAG,"requestRouteToHostAddress on down network " + "(" + networkType + ") - dropped");
    }
    return false;
  }
  try {
    InetAddress inetAddress=InetAddress.getByAddress(hostAddress);
    return tracker.requestRouteToHost(inetAddress);
  }
 catch (  UnknownHostException e) {
    return false;
  }
}
