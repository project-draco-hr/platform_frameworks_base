{
  final NetworkStateTracker thisNet=mNetTrackers[type];
  final String iface=thisNet.getLinkProperties().getInterfaceName();
  final int timeout;
  if (ConnectivityManager.isNetworkTypeMobile(type)) {
    timeout=Settings.Secure.getInt(mContext.getContentResolver(),Settings.Secure.DATA_ACTIVITY_TIMEOUT_MOBILE,0);
    type=ConnectivityManager.TYPE_MOBILE;
  }
 else   if (ConnectivityManager.TYPE_WIFI == type) {
    timeout=Settings.Secure.getInt(mContext.getContentResolver(),Settings.Secure.DATA_ACTIVITY_TIMEOUT_WIFI,0);
  }
 else {
    timeout=0;
  }
  if (timeout > 0 && iface != null) {
    try {
      mNetd.addIdleTimer(iface,timeout,Integer.toString(type));
    }
 catch (    RemoteException e) {
    }
  }
}
