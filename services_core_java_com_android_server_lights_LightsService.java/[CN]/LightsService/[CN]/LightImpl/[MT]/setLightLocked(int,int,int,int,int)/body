{
  if (!mLocked && (color != mColor || mode != mMode || onMS != mOnMS || offMS != mOffMS || mBrightnessMode != brightnessMode)) {
    if (DEBUG)     Slog.v(TAG,"setLight #" + mId + ": color=#"+ Integer.toHexString(color)+ ": brightnessMode="+ brightnessMode);
    mLastColor=mColor;
    mColor=color;
    mMode=mode;
    mOnMS=onMS;
    mOffMS=offMS;
    mLastBrightnessMode=mBrightnessMode;
    mBrightnessMode=brightnessMode;
    Trace.traceBegin(Trace.TRACE_TAG_POWER,"setLight(" + mId + ", 0x"+ Integer.toHexString(color)+ ")");
    try {
      setLight_native(mNativePointer,mId,color,mode,onMS,offMS,brightnessMode);
    }
  finally {
      Trace.traceEnd(Trace.TRACE_TAG_POWER);
    }
  }
}
