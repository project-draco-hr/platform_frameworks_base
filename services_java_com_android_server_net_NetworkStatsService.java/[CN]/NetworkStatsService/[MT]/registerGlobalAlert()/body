{
  try {
    final long alertBytes=mSettings.getPersistThreshold();
    mNetworkManager.setGlobalAlert(alertBytes);
  }
 catch (  IllegalStateException e) {
    Slog.w(TAG,"problem registering for global alert: " + e);
  }
catch (  RemoteException e) {
    Slog.w(TAG,"problem registering for global alert: " + e);
  }
}
