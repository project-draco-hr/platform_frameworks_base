{
  File dir=new File("/data/system/users/" + mUserId);
  File settingsFile=getSettingsFile(mUserId);
  if (!dir.exists()) {
    dir.mkdirs();
    if (mUserId == 0) {
      File oldFile=new File("/data/system/" + SETTINGS_FILENAME);
      oldFile.renameTo(settingsFile);
    }
  }
  return new AtomicFile(settingsFile);
}
