{
  mContext.enforceCallingPermission(android.Manifest.permission.MODIFY_APPWIDGET_BIND_PERMISSIONS,"setBindAppWidgetPermission packageName=" + packageName);
synchronized (mAppWidgetIds) {
    ensureStateLoadedLocked();
    if (permission) {
      mPackagesWithBindWidgetPermission.add(packageName);
    }
 else {
      mPackagesWithBindWidgetPermission.remove(packageName);
    }
    saveStateAsync();
  }
}
