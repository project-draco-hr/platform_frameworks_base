{
  if (id.host.uidMatches(callingUid)) {
    return true;
  }
  if (id.provider != null && id.provider.uid == callingUid) {
    return true;
  }
  if (mContext.checkCallingOrSelfPermission(android.Manifest.permission.BIND_APPWIDGET) == PackageManager.PERMISSION_GRANTED) {
    return true;
  }
  return false;
}
