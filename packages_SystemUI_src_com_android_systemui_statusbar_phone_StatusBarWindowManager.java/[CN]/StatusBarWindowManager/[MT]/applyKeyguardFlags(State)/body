{
  if (state.keyguardShowing) {
    mLpChanged.flags|=WindowManager.LayoutParams.FLAG_SHOW_WALLPAPER;
    mLpChanged.privateFlags|=WindowManager.LayoutParams.PRIVATE_FLAG_KEYGUARD;
  }
 else {
    mLpChanged.flags&=~WindowManager.LayoutParams.FLAG_SHOW_WALLPAPER;
    mLpChanged.privateFlags&=~WindowManager.LayoutParams.PRIVATE_FLAG_KEYGUARD;
  }
}
