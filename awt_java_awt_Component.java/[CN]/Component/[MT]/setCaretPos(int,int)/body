{
  Runnable r=new Runnable(){
    public void run(){
      toolkit.lockAWT();
      try {
        setCaretPosImpl(x,y);
      }
  finally {
        toolkit.unlockAWT();
      }
    }
  }
;
  if (Thread.currentThread() instanceof EventDispatchThread) {
    r.run();
  }
 else {
    toolkit.getSystemEventQueueImpl().postEvent(new InvocationEvent(this,r));
  }
}
