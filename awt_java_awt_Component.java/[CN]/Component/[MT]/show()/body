{
  toolkit.lockAWT();
  try {
    if (visible) {
      return;
    }
    prepare4HierarchyChange();
    mapToDisplay(true);
    validate();
    visible=true;
    behaviour.setVisible(true);
    postEvent(new ComponentEvent(this,ComponentEvent.COMPONENT_SHOWN));
    notifyInputMethod(new Rectangle(x,y,w,h));
  }
  finally {
    toolkit.unlockAWT();
  }
}
