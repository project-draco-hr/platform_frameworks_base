{
  toolkit.lockAWT();
  try {
    boolean done=false;
    if ((infoflags & (ALLBITS | FRAMEBITS)) != 0) {
      done=true;
    }
 else     if ((infoflags & SOMEBITS) != 0 && incrementalImageUpdate) {
      done=true;
    }
    if (done) {
      repaint();
    }
    return (infoflags & (ABORT | ALLBITS)) == 0;
  }
  finally {
    toolkit.unlockAWT();
  }
}
