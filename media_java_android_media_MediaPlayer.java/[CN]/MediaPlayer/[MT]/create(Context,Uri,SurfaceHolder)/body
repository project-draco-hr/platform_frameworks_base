{
  try {
    MediaPlayer mp=new MediaPlayer();
    mp.setDataSource(context,uri);
    if (holder != null) {
      mp.setDisplay(holder);
    }
    mp.prepare();
    return mp;
  }
 catch (  IOException ex) {
    Log.d(TAG,"create failed:",ex);
  }
catch (  IllegalArgumentException ex) {
    Log.d(TAG,"create failed:",ex);
  }
catch (  SecurityException ex) {
    Log.d(TAG,"create failed:",ex);
  }
  return null;
}
