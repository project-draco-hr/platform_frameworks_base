{
  if (value == null) {
    throw new IllegalArgumentException("the bind value at index " + index + " is null");
  }
  mDatabase.verifyDbIsOpen();
synchronized (this) {
    acquireReference();
    try {
      if (this.nStatement == 0) {
        addToBindArgs(index,value);
      }
 else {
        native_bind_blob(index,value);
      }
    }
  finally {
      releaseReference();
    }
  }
}
