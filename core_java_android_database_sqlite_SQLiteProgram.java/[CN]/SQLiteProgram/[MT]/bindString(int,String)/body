{
  if (value == null) {
    throw new IllegalArgumentException("the bind value at index " + index + " is null");
  }
  if (!mDatabase.isOpen()) {
    throw new IllegalStateException("database " + mDatabase.getPath() + " already closed");
  }
  acquireReference();
  try {
    native_bind_string(index,value);
  }
  finally {
    releaseReference();
  }
}
