{
  if (SQLiteDebug.DEBUG_CAPTURE_SQL) {
    addToBindArgs(index,"'" + value + "'");
  }
  if (value == null) {
    throw new IllegalArgumentException("the bind value at index " + index + " is null");
  }
  acquireReference();
  try {
    native_bind_string(index,value);
  }
  finally {
    releaseReference();
  }
}
