{
  if (DialogInterface.BUTTON_POSITIVE == which) {
    Slog.d(TAG,"accept lock-to-app request");
    Settings.Secure.putInt(mContext.getContentResolver(),Settings.Secure.LOCK_TO_APP_EXIT_LOCKED,mCheckbox != null && mCheckbox.isChecked() ? 1 : 0);
    mService.startLockTaskMode(mRequestedTask);
  }
 else {
    Slog.d(TAG,"ignore lock-to-app request");
  }
}
