{
  if (mIsStarted) {
    Slog.i(TAG,"Stopping clatd");
    try {
      mNMService.stopClatd();
    }
 catch (    RemoteException e) {
      Slog.e(TAG,"Error stopping clat daemon: " + e);
    }
    mIsStarted=false;
    mIsRunning=false;
    mNetworkMessenger=null;
    mBaseLP=null;
    mLP.clear();
  }
 else {
    Slog.e(TAG,"stopClat: already stopped");
  }
}
