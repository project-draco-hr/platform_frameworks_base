{
  if (iface.equals(CLAT_INTERFACE_NAME)) {
    Slog.i(TAG,"interface " + CLAT_INTERFACE_NAME + " added, mIsRunning = "+ mIsRunning+ " -> true");
    mIsRunning=true;
    try {
      InterfaceConfiguration config=mNMService.getInterfaceConfig(iface);
      LinkAddress clatAddress=config.getLinkAddress();
      mLP.clear();
      mLP.setInterfaceName(iface);
      RouteInfo ipv4Default=new RouteInfo(new LinkAddress(Inet4Address.ANY,0),clatAddress.getAddress(),iface);
      mLP.addRoute(ipv4Default);
      mLP.addLinkAddress(clatAddress);
      mBaseLP.addStackedLink(mLP);
      Slog.i(TAG,"Adding stacked link. tracker LP: " + mBaseLP);
      updateConnectivityService();
    }
 catch (    RemoteException e) {
      Slog.e(TAG,"Error getting link properties: " + e);
    }
  }
}
