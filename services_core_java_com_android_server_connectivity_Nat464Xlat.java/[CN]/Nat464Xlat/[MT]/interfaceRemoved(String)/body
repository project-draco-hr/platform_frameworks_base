{
  if (iface == CLAT_INTERFACE_NAME) {
    if (mIsRunning) {
      NetworkUtils.resetConnections(CLAT_INTERFACE_NAME,NetworkUtils.RESET_IPV4_ADDRESSES);
    }
    Slog.i(TAG,"interface " + CLAT_INTERFACE_NAME + " removed, mIsRunning = "+ mIsRunning+ " -> false");
    mIsRunning=false;
    mBaseLP.removeStackedLink(mLP);
    mLP.clear();
    updateConnectivityService();
    Slog.i(TAG,"mLP = " + mLP);
  }
}
