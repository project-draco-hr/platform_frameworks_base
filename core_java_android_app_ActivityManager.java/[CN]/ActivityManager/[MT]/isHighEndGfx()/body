{
  MemInfoReader reader=new MemInfoReader();
  reader.readMemInfo();
  if (reader.getTotalSize() >= (512 * 1024 * 1024)) {
    return true;
  }
  Display display=DisplayManagerGlobal.getInstance().getRealDisplay(Display.DEFAULT_DISPLAY);
  Point p=new Point();
  display.getRealSize(p);
  int pixels=p.x * p.y;
  if (pixels >= (1024 * 600)) {
    return true;
  }
  return false;
}
