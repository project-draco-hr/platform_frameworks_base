{
  StringBuilder sb=new StringBuilder(256);
  sb.append(prefix);
  sb.append("Stack id=");
  sb.append(stackId);
  sb.append(" bounds=");
  sb.append(bounds.toShortString());
  sb.append(" displayId=");
  sb.append(displayId);
  sb.append("\n");
  prefix=prefix + "  ";
  for (int i=0; i < taskIds.length; ++i) {
    sb.append(prefix);
    sb.append("taskId=");
    sb.append(taskIds[i]);
    sb.append(": ");
    sb.append(taskNames[i]);
    if (taskBounds != null) {
      sb.append(" bounds=");
      sb.append(taskBounds[i].toShortString());
    }
    sb.append("\n");
  }
  return sb.toString();
}
