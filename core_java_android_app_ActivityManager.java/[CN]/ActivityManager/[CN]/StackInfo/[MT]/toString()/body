{
  StringBuilder sb=new StringBuilder(256);
  sb.append("Stack id=");
  sb.append(stackId);
  sb.append(" bounds=");
  sb.append(bounds.toShortString());
  sb.append("\n");
  final String prefix="  ";
  for (int i=0; i < taskIds.length; ++i) {
    sb.append(prefix);
    sb.append("taskId=");
    sb.append(taskIds[i]);
    sb.append(": ");
    sb.append(taskNames[i]);
    sb.append("\n");
  }
  return sb.toString();
}
