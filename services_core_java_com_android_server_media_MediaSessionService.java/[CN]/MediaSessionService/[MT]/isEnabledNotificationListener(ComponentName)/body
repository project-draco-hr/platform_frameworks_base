{
  if (compName != null) {
    final int currentUser=ActivityManager.getCurrentUser();
    final String enabledNotifListeners=Settings.Secure.getStringForUser(getContext().getContentResolver(),Settings.Secure.ENABLED_NOTIFICATION_LISTENERS,currentUser);
    if (enabledNotifListeners != null) {
      final String[] components=enabledNotifListeners.split(":");
      for (int i=0; i < components.length; i++) {
        final ComponentName component=ComponentName.unflattenFromString(components[i]);
        if (component != null) {
          if (compName.equals(component)) {
            if (DEBUG) {
              Log.d(TAG,"ok to get sessions: " + component + " is authorized notification listener");
            }
            return true;
          }
        }
      }
    }
    if (DEBUG) {
      Log.d(TAG,"not ok to get sessions, " + compName + " is not in list of ENABLED_NOTIFICATION_LISTENERS");
    }
  }
  return false;
}
