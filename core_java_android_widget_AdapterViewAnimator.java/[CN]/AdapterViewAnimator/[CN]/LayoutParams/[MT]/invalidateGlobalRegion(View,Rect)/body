{
  View p=v;
  boolean firstPass=true;
  parentRect.set(0,0,0,0);
  while (p.getParent() != null && p.getParent() instanceof View && !parentRect.contains(r)) {
    if (!firstPass)     r.offset(p.getLeft() - p.getScrollX(),p.getTop() - p.getScrollY());
    firstPass=false;
    p=(View)p.getParent();
    parentRect.set(p.getLeft() - p.getScrollX(),p.getTop() - p.getScrollY(),p.getRight() - p.getScrollX(),p.getBottom() - p.getScrollY());
  }
  p.invalidate(r.left,r.top,r.right,r.bottom);
}
