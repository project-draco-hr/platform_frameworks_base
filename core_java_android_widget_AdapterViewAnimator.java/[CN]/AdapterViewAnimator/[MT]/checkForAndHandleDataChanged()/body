{
  boolean dataChanged=mDataChanged;
  if (dataChanged) {
    post(new Runnable(){
      public void run(){
        handleDataChanged();
        if (mWhichChild >= getWindowSize()) {
          mWhichChild=0;
          showOnly(mWhichChild,true);
        }
 else         if (mOldItemCount != getCount()) {
          showOnly(mWhichChild,true);
        }
        refreshChildren();
        requestLayout();
      }
    }
);
  }
  mDataChanged=false;
}
