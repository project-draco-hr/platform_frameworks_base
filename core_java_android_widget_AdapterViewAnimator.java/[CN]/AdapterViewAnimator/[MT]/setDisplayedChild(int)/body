{
  if (mAdapter != null) {
    mWhichChild=whichChild;
    if (whichChild >= mAdapter.getCount()) {
      mWhichChild=0;
    }
 else     if (whichChild < 0) {
      mWhichChild=mAdapter.getCount() - 1;
    }
    boolean hasFocus=getFocusedChild() != null;
    showOnly(mWhichChild);
    if (hasFocus) {
      requestFocus(FOCUS_FORWARD);
    }
  }
}
