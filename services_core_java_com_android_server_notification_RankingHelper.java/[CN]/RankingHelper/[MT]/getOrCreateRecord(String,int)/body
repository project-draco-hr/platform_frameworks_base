{
  final String key=recordKey(pkg,uid);
  Record r=mRecords.get(key);
  if (r == null) {
    r=new Record();
    r.pkg=pkg;
    r.uid=uid;
    r.topics.put(Notification.TOPIC_DEFAULT,new Topic(new Notification.Topic(Notification.TOPIC_DEFAULT,mContext.getString(R.string.default_notification_topic_label))));
    mRecords.put(key,r);
  }
  return r;
}
