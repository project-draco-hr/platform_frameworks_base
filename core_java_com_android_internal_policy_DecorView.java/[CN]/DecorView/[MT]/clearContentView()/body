{
  if (mDecorCaptionView != null) {
    mDecorCaptionView.removeContentView();
  }
 else {
    for (int i=getChildCount() - 1; i >= 0; i--) {
      View v=getChildAt(i);
      if (v != mStatusColorViewState.view && v != mNavigationColorViewState.view && v != mStatusGuard && v != mNavigationGuard) {
        removeViewAt(i);
      }
    }
  }
}
