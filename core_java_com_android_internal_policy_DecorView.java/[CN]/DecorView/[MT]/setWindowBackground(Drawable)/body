{
  if (getBackground() != drawable) {
    setBackgroundDrawable(drawable);
    if (drawable != null) {
      mResizingBackgroundDrawable=enforceNonTranslucentBackground(drawable,mWindow.isTranslucent() || mWindow.isShowingWallpaper());
    }
 else {
      mResizingBackgroundDrawable=getResizingBackgroundDrawable(getContext(),0,mWindow.mBackgroundFallbackResource,mWindow.isTranslucent() || mWindow.isShowingWallpaper());
    }
    if (mResizingBackgroundDrawable != null) {
      mResizingBackgroundDrawable.getPadding(mBackgroundPadding);
    }
 else {
      mBackgroundPadding.setEmpty();
    }
    drawableChanged();
  }
}
