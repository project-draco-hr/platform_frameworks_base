{
  activeSyncContext.close();
  mActiveSyncContexts.remove(activeSyncContext);
  mSyncStorageEngine.removeActiveSync(activeSyncContext.mSyncInfo,activeSyncContext.mSyncOperation.target.userId);
  if (Log.isLoggable(TAG,Log.VERBOSE)) {
    Slog.v(TAG,"removing all MESSAGE_MONITOR_SYNC & MESSAGE_SYNC_EXPIRED for " + activeSyncContext.toString());
  }
  mSyncHandler.removeMessages(SyncHandler.MESSAGE_MONITOR_SYNC,activeSyncContext);
}
