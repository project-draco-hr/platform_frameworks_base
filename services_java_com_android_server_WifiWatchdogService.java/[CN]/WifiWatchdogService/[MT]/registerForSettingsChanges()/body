{
  ContentResolver contentResolver=mContext.getContentResolver();
  contentResolver.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.WIFI_WATCHDOG_ON),false,new ContentObserver(mHandler){
    @Override public void onChange(    boolean selfChange){
      if (isWatchdogEnabled()) {
        registerForWifiBroadcasts();
      }
 else {
        unregisterForWifiBroadcasts();
        if (mHandler != null) {
          mHandler.disableWatchdog();
        }
      }
    }
  }
);
}
