{
  checkTiling();
switch (mode) {
case MODE_EXPLICIT:
{
      tilingMode=mode;
      unsetTiling();
      break;
    }
case MODE_COPY_FROM_METADATA:
case MODE_DISABLED:
case MODE_DEFAULT:
{
    tilingMode=mode;
    break;
  }
default :
{
  throw new IllegalArgumentException("Illegal value for mode!");
}
}
}
