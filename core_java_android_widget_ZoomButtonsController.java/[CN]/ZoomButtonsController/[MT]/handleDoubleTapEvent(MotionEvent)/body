{
  int action=event.getAction();
  if (action == MotionEvent.ACTION_DOWN) {
    int x=(int)event.getX();
    int y=(int)event.getY();
    MotionEvent cancelEvent=MotionEvent.obtain(event.getDownTime(),SystemClock.elapsedRealtime(),MotionEvent.ACTION_CANCEL,0,0,0);
    mOwnerView.dispatchTouchEvent(cancelEvent);
    cancelEvent.recycle();
    setVisible(true);
    centerPoint(x,y);
    mIsSecondTapDown=true;
  }
  return true;
}
