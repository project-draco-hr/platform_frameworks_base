{
  Context packageContext;
  try {
    packageContext=context.createPackageContext(mComponentName.getPackageName(),0);
  }
 catch (  PackageManager.NameNotFoundException e) {
    if (Rlog.isLoggable(LOG_TAG,Log.WARN)) {
      Rlog.w(LOG_TAG,"Cannot find package " + mComponentName.getPackageName());
    }
    return null;
  }
  try {
    return density == NO_DENSITY ? packageContext.getResources().getDrawable(resId) : packageContext.getResources().getDrawableForDensity(resId,density);
  }
 catch (  MissingResourceException e) {
    Rlog.e(LOG_TAG,"Cannot find icon " + resId + " in package "+ mComponentName.getPackageName()+ ": "+ e.toString());
    return null;
  }
}
