{
  Slog.v(TAG,"Poll audio system.");
  mService.pollDevices(new DevicePollingCallback(){
    @Override public void onPollingFinished(    List<Integer> ackedAddress){
      checkHotplug(ackedAddress,false);
    }
  }
,HdmiControlService.POLL_ITERATION_IN_ORDER | HdmiControlService.POLL_STRATEGY_SYSTEM_AUDIO,POLL_RETRY_COUNT);
}
