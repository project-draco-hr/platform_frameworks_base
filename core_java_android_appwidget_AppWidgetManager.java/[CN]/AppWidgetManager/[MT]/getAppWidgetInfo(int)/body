{
  if (mService == null) {
    return null;
  }
  try {
    AppWidgetProviderInfo info=mService.getAppWidgetInfo(mPackageName,appWidgetId);
    if (info != null) {
      convertSizesToPixels(info);
    }
    return info;
  }
 catch (  RemoteException e) {
    throw new RuntimeException("system server dead?",e);
  }
}
