{
  if (mHasStaleChildren) {
    mHasStaleChildren=false;
    updateChildren(false);
  }
  final int desiredHeight=(mRowHeight + mHorizontalDividerHeight) * calculateNumberOfRows() - mHorizontalDividerHeight;
  setMeasuredDimension(resolveSize(Integer.MAX_VALUE,widthMeasureSpec),resolveSize(desiredHeight,heightMeasureSpec));
  positionChildren(mMeasuredWidth,mMeasuredHeight);
}
