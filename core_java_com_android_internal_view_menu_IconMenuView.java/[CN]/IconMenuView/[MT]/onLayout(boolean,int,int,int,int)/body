{
  View child;
  IconMenuView.LayoutParams childLayoutParams;
  for (int i=getChildCount() - 1; i >= 0; i--) {
    child=getChildAt(i);
    childLayoutParams=(IconMenuView.LayoutParams)child.getLayoutParams();
    child.layout(childLayoutParams.left,childLayoutParams.top,childLayoutParams.right,childLayoutParams.bottom);
  }
}
