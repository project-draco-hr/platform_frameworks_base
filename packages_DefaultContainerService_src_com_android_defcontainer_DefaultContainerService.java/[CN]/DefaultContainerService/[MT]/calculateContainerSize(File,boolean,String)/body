{
  ApkHandle handle=null;
  try {
    handle=ApkHandle.create(apkFile);
    final int abi=NativeLibraryHelper.findSupportedAbi(handle,(abiOverride != null) ? new String[]{abiOverride} : Build.SUPPORTED_ABIS);
    return calculateContainerSize(handle,apkFile,abi,forwardLocked);
  }
  finally {
    IoUtils.closeQuietly(handle);
  }
}
