{
  if (rate > 0) {
    if (!holdingColor) {
      tmpColor.x=mRand.nextFloat() * 0.5f + 0.5f;
      tmpColor.y=mRand.nextFloat();
      tmpColor.z=mRand.nextFloat();
      mScript.set_partColor(tmpColor);
    }
    mScript.invoke_addParticles(rate,x,y);
    holdingColor=true;
  }
 else {
    holdingColor=false;
  }
}
