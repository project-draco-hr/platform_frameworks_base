{
  if (v.isAccessibilityFocused()) {
    return true;
  }
  if (v instanceof ViewGroup) {
    ViewGroup vg=(ViewGroup)v;
    int childCount=vg.getChildCount();
    for (int i=0; i < childCount; i++) {
      if (isDescendentAccessibilityFocused(vg.getChildAt(i))) {
        return true;
      }
    }
  }
  return false;
}
