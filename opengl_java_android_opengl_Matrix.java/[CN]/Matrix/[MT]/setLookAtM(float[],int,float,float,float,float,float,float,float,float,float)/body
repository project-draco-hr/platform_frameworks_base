{
  float fx=centerX - eyeX;
  float fy=centerY - eyeY;
  float fz=centerZ - eyeZ;
  float rlf=1.0f / Matrix.length(fx,fy,fz);
  fx*=rlf;
  fy*=rlf;
  fz*=rlf;
  float sx=fy * upZ - fz * upY;
  float sy=fz * upX - fx * upZ;
  float sz=fx * upY - fy * upX;
  float rls=1.0f / Matrix.length(sx,sy,sz);
  sx*=rls;
  sy*=rls;
  sz*=rls;
  float ux=sy * fz - sz * fy;
  float uy=sz * fx - sx * fz;
  float uz=sx * fy - sy * fx;
  rm[rmOffset + 0]=sx;
  rm[rmOffset + 1]=ux;
  rm[rmOffset + 2]=-fx;
  rm[rmOffset + 3]=0.0f;
  rm[rmOffset + 4]=sy;
  rm[rmOffset + 5]=uy;
  rm[rmOffset + 6]=-fy;
  rm[rmOffset + 7]=0.0f;
  rm[rmOffset + 8]=sz;
  rm[rmOffset + 9]=uz;
  rm[rmOffset + 10]=-fz;
  rm[rmOffset + 11]=0.0f;
  rm[rmOffset + 12]=0.0f;
  rm[rmOffset + 13]=0.0f;
  rm[rmOffset + 14]=0.0f;
  rm[rmOffset + 15]=1.0f;
  translateM(rm,rmOffset,-eyeX,-eyeY,-eyeZ);
}
