{
  try {
    mSurface=new Surface(session,"StrictModeFlash",1,1,PixelFormat.TRANSLUCENT,Surface.HIDDEN);
  }
 catch (  Surface.OutOfResourcesException e) {
    return;
  }
  mSurface.setLayerStack(display.getLayerStack());
  mSurface.setLayer(WindowManagerService.TYPE_LAYER_MULTIPLIER * 101);
  mSurface.setPosition(0,0);
  mSurface.show();
  mDrawNeeded=true;
}
