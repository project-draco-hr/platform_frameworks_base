{
  SurfaceControl ctrl=null;
  try {
    ctrl=new SurfaceControl(session,"StrictModeFlash",1,1,PixelFormat.TRANSLUCENT,SurfaceControl.HIDDEN);
    ctrl.setLayerStack(display.getLayerStack());
    ctrl.setLayer(WindowManagerService.TYPE_LAYER_MULTIPLIER * 101);
    ctrl.setPosition(0,0);
    ctrl.show();
    mSurface.copyFrom(ctrl);
  }
 catch (  SurfaceControl.OutOfResourcesException e) {
  }
  mSurfaceControl=ctrl;
  mDrawNeeded=true;
}
