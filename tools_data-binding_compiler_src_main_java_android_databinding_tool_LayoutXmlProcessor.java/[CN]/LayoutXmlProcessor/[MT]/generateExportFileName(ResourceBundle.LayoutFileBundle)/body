{
  StringBuilder name=new StringBuilder(layout.getFileName());
  name.append('-').append(layout.getDirectory());
  for (int i=name.length() - 1; i >= 0; i--) {
    char c=name.charAt(i);
    if (c == '-') {
      name.deleteCharAt(i);
      c=Character.toUpperCase(name.charAt(i));
      name.setCharAt(i,c);
    }
  }
  return name.toString();
}
