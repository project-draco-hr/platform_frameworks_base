{
  final String sdkPath=StringEscapeUtils.escapeJava(sdkDir.getAbsolutePath());
  final Class annotation=BindingBuildInfo.class;
  final String layoutInfoPath=StringEscapeUtils.escapeJava(xmlOutDir.getAbsolutePath());
  String classString="package " + RESOURCE_BUNDLE_PACKAGE + ";\n\n"+ "import "+ annotation.getCanonicalName()+ ";\n\n"+ "@"+ annotation.getSimpleName()+ "(buildId=\""+ mBuildId+ "\", "+ "modulePackage=\""+ mResourceBundle.getAppPackage()+ "\", "+ "sdkRoot=\""+ sdkPath+ "\", "+ "layoutInfoDir=\""+ layoutInfoPath+ "\","+ "isLibrary="+ mIsLibrary+ ","+ "minSdk="+ mMinSdk+ ")\n"+ "public class "+ CLASS_NAME+ " {}\n";
  mFileWriter.writeToFile(RESOURCE_BUNDLE_PACKAGE + "." + CLASS_NAME,classString);
}
