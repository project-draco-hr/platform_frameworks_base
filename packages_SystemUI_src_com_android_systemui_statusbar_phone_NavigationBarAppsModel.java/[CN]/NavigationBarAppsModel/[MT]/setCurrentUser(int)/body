{
  mCurrentUserId=userId;
  mCurrentUserSerialNumber=mUserManager.getSerialNumberForUser(new UserHandle(userId));
  mApps.clear();
  int appCount=mPrefs.getInt(userPrefixed(APP_COUNT_PREF),-1);
  if (appCount >= 0) {
    loadAppsFromPrefs();
  }
 else {
    removePrefsForDeletedUsers();
    addDefaultApps();
  }
}
