{
  if (!ConnectivityManager.isNetworkTypeValid(type)) {
    throw new IllegalArgumentException("Invalid network type: " + type);
  }
  mNetworkType=type;
  mSubtype=subtype;
  mTypeName=typeName;
  mSubtypeName=subtypeName;
  setDetailedState(DetailedState.IDLE,null,null);
  mState=State.UNKNOWN;
}
