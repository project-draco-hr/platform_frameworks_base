{
  if (mContext.checkCallingOrSelfPermission(android.Manifest.permission.MODIFY_PHONE_STATE) == PackageManager.PERMISSION_GRANTED) {
    return true;
  }
  String msg="Modify Phone State Permission Denial: " + method + " from pid="+ Binder.getCallingPid()+ ", uid="+ Binder.getCallingUid();
  if (DBG)   log(msg);
  return false;
}
