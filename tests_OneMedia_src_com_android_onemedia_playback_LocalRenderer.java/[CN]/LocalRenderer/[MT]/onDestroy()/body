{
synchronized (mErrorLock) {
    if (DEBUG) {
      Log.d(TAG,"onDestroy, error retriever? " + mErrorRetriever + " safe to close? "+ mSafeToCloseClient+ " client? "+ mHttpClient);
    }
    if (mErrorRetriever != null) {
      mErrorRetriever.cancelRequestLocked(true);
      mErrorRetriever=null;
    }
    mErrorId++;
    if (mSafeToCloseClient) {
      mHttpClient.close();
      mHttpClient=null;
    }
  }
}
