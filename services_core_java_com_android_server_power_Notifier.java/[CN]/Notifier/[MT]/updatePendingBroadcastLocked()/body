{
  if (!mBroadcastInProgress && mActualInteractiveState != INTERACTIVE_STATE_UNKNOWN && (mPendingWakeUpBroadcast || mPendingGoToSleepBroadcast || mActualInteractiveState != mBroadcastedInteractiveState)) {
    mBroadcastInProgress=true;
    mSuspendBlocker.acquire();
    Message msg=mHandler.obtainMessage(MSG_BROADCAST);
    msg.setAsynchronous(true);
    mHandler.sendMessage(msg);
  }
}
