{
  ViewParent vp=view.getParent();
  while (vp != null && !(vp instanceof ViewRootImpl)) {
    vp=vp.getParent();
  }
  if (vp == null)   return null;
  ViewRootImpl vr=(ViewRootImpl)vp;
  int N=mRoots.length;
  for (int i=0; i < N; ++i) {
    if (mRoots[i] == vr) {
      return mParams[i];
    }
  }
  return null;
}
