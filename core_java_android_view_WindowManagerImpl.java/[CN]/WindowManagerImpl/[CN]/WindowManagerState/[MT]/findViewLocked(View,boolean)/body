{
synchronized (this) {
    if (mViews != null) {
      final int count=mViews.length;
      for (int i=0; i < count; i++) {
        if (mViews[i] == view) {
          return i;
        }
      }
    }
    if (required) {
      throw new IllegalArgumentException("View not attached to window manager");
    }
    return -1;
  }
}
