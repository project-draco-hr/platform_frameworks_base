{
  ActivityRecord a=mNewActivities;
  if (a != null) {
    mNewActivities=null;
    IActivityManager am=ActivityManagerNative.getDefault();
    ActivityRecord prev;
    do {
      if (localLOGV)       Log.v(TAG,"Reporting idle of " + a + " finished="+ (a.activity != null ? a.activity.mFinished : false));
      if (a.activity != null && !a.activity.mFinished) {
        try {
          am.activityIdle(a.token);
        }
 catch (        RemoteException ex) {
        }
      }
      prev=a;
      a=a.nextIdle;
      prev.nextIdle=null;
    }
 while (a != null);
  }
  return false;
}
