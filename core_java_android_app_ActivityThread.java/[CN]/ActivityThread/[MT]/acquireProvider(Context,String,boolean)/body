{
  IContentProvider provider=acquireExistingProvider(c,name,stable);
  if (provider != null) {
    return provider;
  }
  IActivityManager.ContentProviderHolder holder=null;
  try {
    holder=ActivityManagerNative.getDefault().getContentProvider(getApplicationThread(),name,stable);
  }
 catch (  RemoteException ex) {
  }
  if (holder == null) {
    Slog.e(TAG,"Failed to find provider info for " + name);
    return null;
  }
  holder=installProvider(c,holder,holder.info,true,holder.noReleaseNeeded,stable);
  return holder.provider;
}
