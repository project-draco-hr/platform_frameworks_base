{
  View v=r.activity.mDecor;
  if (v != null) {
    if (show) {
      if (v.getVisibility() != View.VISIBLE) {
        v.setVisibility(View.VISIBLE);
        mNumVisibleActivities++;
      }
      if (r.newConfig != null) {
        performConfigurationChanged(r.activity,r.newConfig);
        r.newConfig=null;
      }
    }
 else {
      if (v.getVisibility() == View.VISIBLE) {
        v.setVisibility(View.INVISIBLE);
        mNumVisibleActivities--;
      }
    }
  }
}
