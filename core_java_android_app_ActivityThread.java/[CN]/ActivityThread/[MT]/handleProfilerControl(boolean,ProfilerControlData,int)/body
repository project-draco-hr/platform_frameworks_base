{
  if (start) {
    try {
switch (profileType) {
case 1:
        ViewDebug.startLooperProfiling(pcd.path,pcd.fd.getFileDescriptor());
      break;
default :
    Debug.startMethodTracing(pcd.path,pcd.fd.getFileDescriptor(),8 * 1024 * 1024,0);
  break;
}
}
 catch (RuntimeException e) {
Slog.w(TAG,"Profiling failed on path " + pcd.path + " -- can the process access this path?");
}
 finally {
try {
pcd.fd.close();
}
 catch (IOException e) {
Slog.w(TAG,"Failure closing profile fd",e);
}
}
}
 else {
switch (profileType) {
case 1:
ViewDebug.stopLooperProfiling();
break;
default :
Debug.stopMethodTracing();
break;
}
}
}
