{
  mCount+=1;
  if (mLogRecords.size() < mMaxSize) {
    mLogRecords.add(new LogRec(msg,messageInfo,state,orgState));
  }
 else {
    LogRec pmi=mLogRecords.get(mOldestIndex);
    mOldestIndex+=1;
    if (mOldestIndex >= mMaxSize) {
      mOldestIndex=0;
    }
    pmi.update(msg,messageInfo,state,orgState);
  }
}
