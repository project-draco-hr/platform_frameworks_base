{
  if (DBG)   Log.d(TAG,"onCreate");
  super.onCreate(savedInstanceState);
  setContentView(R.layout.main);
  mDebugView=(TextView)findViewById(R.id.console);
  mScrollView=(ScrollView)findViewById(R.id.scroller_id);
