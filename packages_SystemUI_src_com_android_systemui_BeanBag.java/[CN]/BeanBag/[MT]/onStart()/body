{
  super.onStart();
  PackageManager pm=getPackageManager();
  pm.setComponentEnabledSetting(new ComponentName(this,BeanBagDream.class),PackageManager.COMPONENT_ENABLED_STATE_ENABLED,0);
  getWindow().addFlags(WindowManager.LayoutParams.FLAG_ALLOW_LOCK_WHILE_SCREEN_ON | WindowManager.LayoutParams.FLAG_SHOW_WHEN_LOCKED);
  mBoard=new Board(this,null);
  setContentView(mBoard);
}
