{
  if (imsi.length() >= 6) {
    Configuration config=new Configuration();
    config.mcc=((imsi.charAt(0) - '0') * 100) + ((imsi.charAt(1) - '0') * 10) + (imsi.charAt(2) - '0');
    config.mnc=((imsi.charAt(3) - '0') * 100) + ((imsi.charAt(4) - '0') * 10) + (imsi.charAt(5) - '0');
    try {
      ActivityManagerNative.getDefault().updateConfiguration(config);
    }
 catch (    RemoteException e) {
      Log.e(mLogTag,"[SimCard] Remote Exception when updating imsi configuration");
    }
  }
}
