{
  try {
    Libcore.os.chmod(path,mode);
  }
 catch (  ErrnoException e) {
    Slog.w(TAG,"Failed to chmod(" + path + "): "+ e);
    return e.errno;
  }
  if (uid >= 0 || gid >= 0) {
    try {
      Libcore.os.chown(path,uid,gid);
    }
 catch (    ErrnoException e) {
      Slog.w(TAG,"Failed to chown(" + path + "): "+ e);
      return e.errno;
    }
  }
  return 0;
}
