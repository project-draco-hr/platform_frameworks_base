{
  if (indent < 0) {
    throw new IllegalArgumentException("indent < 0");
  }
  if (indent > 0) {
    char[] indentChars=new char[indent];
    Arrays.fill(indentChars,' ');
    this.indent=new String(indentChars);
    this.separator=": ";
  }
 else {
    this.indent=null;
    this.separator=":";
  }
}
