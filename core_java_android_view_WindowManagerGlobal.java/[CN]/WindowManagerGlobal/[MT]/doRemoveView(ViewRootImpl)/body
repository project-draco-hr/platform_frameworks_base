{
synchronized (mLock) {
    final int index=mRoots.indexOf(root);
    if (index >= 0) {
      mRoots.remove(index);
      mParams.remove(index);
      final View view=mViews.remove(index);
      mDyingViews.remove(view);
    }
  }
  if (HardwareRenderer.sTrimForeground && HardwareRenderer.isAvailable()) {
    doTrimForeground();
  }
}
