{
  RenderScript pRS=RenderScript.create(mCtx);
  ScriptC_kernel s=new ScriptC_kernel(pRS);
  pRS.setMessageHandler(mRsMessage);
  initializeGlobals(pRS,s);
  s.forEach_init_vars(A);
  s.forEach_root(A,B);
  s.invoke_verify_root();
  s.invoke_kernel_test();
  pRS.finish();
  waitForMessage();
  pRS.destroy();
}
