{
  super.onSizeChanged(w,h,oldw,oldh);
  if (!mIsSmall) {
    mFrameHeight=h;
  }
  mForegroundRect.set(mFrameStrokeAdjustment,mFrameStrokeAdjustment,w - mFrameStrokeAdjustment,Math.min(h,mFrameHeight) - mFrameStrokeAdjustment);
  mBackgroundRect.set(0,0,getMeasuredWidth(),Math.min(h,mFrameHeight));
  updateGradient();
  invalidate();
}
