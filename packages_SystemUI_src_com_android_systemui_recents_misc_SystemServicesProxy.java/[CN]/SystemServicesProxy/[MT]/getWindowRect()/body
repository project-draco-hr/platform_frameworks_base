{
  Rect windowRect=new Rect();
  if (mIam == null)   return windowRect;
  try {
    ActivityManager.StackInfo stackInfo=mIam.getStackInfo(ActivityManager.HOME_STACK_ID);
    if (stackInfo != null) {
      windowRect.set(stackInfo.bounds);
    }
  }
 catch (  RemoteException e) {
    e.printStackTrace();
  }
 finally {
    return windowRect;
  }
}
