{
  if (mIam == null)   return;
  try {
    final ActivityOptions options=ActivityOptions.makeThumbnailAspectScaleUpAnimation(view,null,0,0,view.getWidth(),view.getHeight(),handler,startedListener);
    options.setDockCreateMode(createMode);
    options.setLaunchStackId(DOCKED_STACK_ID);
    mIam.startActivityFromRecents(taskId,options.toBundle());
  }
 catch (  RemoteException e) {
    e.printStackTrace();
  }
}
