{
  if (mLayer == null) {
    return;
  }
synchronized (mLock) {
    if (mUpdateLayer) {
      mUpdateLayer=false;
    }
 else {
      return;
    }
  }
  mLayer.prepare(getWidth(),getHeight(),mOpaque);
  mLayer.updateSurfaceTexture();
  if (mListener != null) {
    mListener.onSurfaceTextureUpdated(mSurface);
  }
}
