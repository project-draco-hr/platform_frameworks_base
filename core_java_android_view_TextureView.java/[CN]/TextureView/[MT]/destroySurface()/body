{
  if (mLayer != null) {
    mSurface.detachFromGLContext();
    boolean shouldRelease=true;
    if (mListener != null) {
      shouldRelease=mListener.onSurfaceTextureDestroyed(mSurface);
    }
synchronized (mNativeWindowLock) {
      nDestroyNativeWindow();
    }
    mLayer.destroy();
    if (shouldRelease)     mSurface.release();
    mSurface=null;
    mLayer=null;
  }
}
