{
  boolean success=false;
  int noOfFailure=0;
  try {
    int codec=MediaRecorder.VideoEncoder.H264;
    int frameRate=MediaProfileReader.getMaxFrameRateForCodec(codec);
    for (int k=0; k < 2; k++) {
      String filename="/sdcard/surface_" + (k == 0 ? "video_only" : "with_audio") + ".3gp";
      success=recordVideoFromSurface(frameRate,0,352,288,codec,MediaRecorder.OutputFormat.THREE_GPP,filename,k == 0 ? true : false);
      if (success) {
        success=validateVideo(filename,352,288);
      }
      if (!success) {
        noOfFailure++;
      }
    }
  }
 catch (  Exception e) {
    Log.v(TAG,e.toString());
  }
  assertTrue("testSurfaceRecording",noOfFailure == 0);
}
