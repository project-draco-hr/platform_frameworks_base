{
  if (DBG)   Log.d(TAG,"cleanUp()");
  if (mAudioTrack == null) {
    return;
  }
  final AudioTrack audioTrack=mAudioTrack;
  mAudioTrack=null;
  mAudioTrackHandler.post(new Runnable(){
    @Override public void run(){
      audioTrack.flush();
      audioTrack.stop();
      audioTrack.release();
    }
  }
);
}
