{
  int channelConfig=getChannelConfig(channelCount);
  if (channelConfig < 0) {
    Log.e(TAG,"Unsupported number of channels : " + channelCount);
    return null;
  }
  int minBufferSizeInBytes=AudioTrack.getMinBufferSize(sampleRateInHz,channelConfig,audioFormat);
  int bufferSizeInBytes=Math.max(MIN_AUDIO_BUFFER_SIZE,minBufferSizeInBytes);
  AudioTrack audioTrack=new AudioTrack(mStreamType,sampleRateInHz,channelConfig,audioFormat,bufferSizeInBytes,AudioTrack.MODE_STREAM);
  if (audioTrack == null) {
    return null;
  }
  if (audioTrack.getState() != AudioTrack.STATE_INITIALIZED) {
    audioTrack.release();
    return null;
  }
  setupVolume(audioTrack,mVolume,mPan);
  return audioTrack;
}
