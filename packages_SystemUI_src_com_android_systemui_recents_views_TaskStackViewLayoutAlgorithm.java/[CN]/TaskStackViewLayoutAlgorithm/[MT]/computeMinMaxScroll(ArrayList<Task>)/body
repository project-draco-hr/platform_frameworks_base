{
  int numTasks=Math.max(1,tasks.size());
  int taskHeight=mTaskRect.height();
  int stackHeight=mStackRectSansPeek.height();
  if (numTasks <= 1) {
    mMinScroll=mMaxScroll=-(stackHeight - (taskHeight + mConfig.taskViewLockToAppButtonHeight)) / 2;
  }
 else {
    int maxScrollHeight=getStackScrollForTaskIndex(tasks.get(tasks.size() - 1)) + taskHeight + mConfig.taskViewLockToAppButtonHeight;
    mMinScroll=Math.min(stackHeight,maxScrollHeight) - stackHeight;
    mMaxScroll=maxScrollHeight - stackHeight;
  }
}
