{
  mTaskOffsetMap.clear();
  int offset=0;
  int taskCount=tasks.size();
  for (int i=0; i < taskCount; i++) {
    Task t=tasks.get(i);
    mTaskOffsetMap.put(t.key,offset);
    if (t.group.isFrontMostTask(t)) {
      offset+=getTaskOverlapHeight();
    }
 else {
      offset+=mConfig.taskBarHeight;
    }
  }
}
