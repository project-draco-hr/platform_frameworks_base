{
  if (locale == null) {
    this.locale=null;
    return;
  }
  Locale[] locales=getAvailableLocales();
  boolean validLocale=false;
  if (locales != null) {
    for (int i=0; i < locales.length; i++) {
      if (locale.equals(locales[i])) {
        validLocale=true;
        break;
      }
    }
  }
  if (validLocale) {
    this.locale=locale;
  }
 else {
    throw new IllegalArgumentException("Invalid locale!");
  }
}
