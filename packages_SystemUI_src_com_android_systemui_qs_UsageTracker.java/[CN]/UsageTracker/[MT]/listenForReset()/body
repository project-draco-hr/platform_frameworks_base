{
  if (mReceiver != null) {
    mReceiver=new BroadcastReceiver(){
      @Override public void onReceive(      Context context,      Intent intent){
        if (mResetAction.equals(intent.getAction())) {
          reset();
        }
      }
    }
;
    mContext.registerReceiver(mReceiver,new IntentFilter(mResetAction));
  }
}
