{
  getInstrumentation().sendKeySync(new KeyEvent(KeyEvent.ACTION_DOWN,KeyEvent.KEYCODE_POWER));
  getInstrumentation().sendKeySync(new KeyEvent(KeyEvent.ACTION_DOWN,KeyEvent.KEYCODE_VOLUME_DOWN));
  getInstrumentation().sendKeySync(new KeyEvent(KeyEvent.ACTION_UP,KeyEvent.KEYCODE_VOLUME_DOWN));
  getInstrumentation().sendKeySync(new KeyEvent(KeyEvent.ACTION_UP,KeyEvent.KEYCODE_POWER));
}
