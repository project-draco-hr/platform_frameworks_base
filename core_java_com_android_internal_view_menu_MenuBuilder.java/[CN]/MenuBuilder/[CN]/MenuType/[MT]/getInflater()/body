{
  if (mInflater == null) {
    Context wrappedContext;
    int themeResForType=THEME_RES_FOR_TYPE[mMenuType];
switch (themeResForType) {
case THEME_APPLICATION:
      wrappedContext=new ContextThemeWrapper(mContext,themeResForType);
    break;
case THEME_ALERT_DIALOG:
  wrappedContext=new ContextThemeWrapper(mContext,getAlertDialogTheme(mContext));
break;
default :
wrappedContext=mContext;
break;
}
mInflater=(LayoutInflater)wrappedContext.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
}
return mInflater;
}
