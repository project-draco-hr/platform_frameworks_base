{
  mMenuTypes=new MenuType[NUM_TYPES];
  mContext=context;
  mResources=context.getResources();
  mItems=new ArrayList<MenuItemImpl>();
  mVisibleItems=new ArrayList<MenuItemImpl>();
  mIsVisibleItemsStale=true;
