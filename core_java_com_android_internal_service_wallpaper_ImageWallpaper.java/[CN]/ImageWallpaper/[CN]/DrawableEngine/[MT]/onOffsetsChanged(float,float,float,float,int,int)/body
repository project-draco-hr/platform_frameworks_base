{
synchronized (mLock) {
    if (mXOffset != xOffset || mYOffset != yOffset) {
      if (DEBUG) {
        Log.d(TAG,"Offsets changed to (" + xOffset + ","+ yOffset+ ").");
      }
      mXOffset=xOffset;
      mYOffset=yOffset;
      drawFrameLocked(false,true);
    }
 else {
      drawFrameLocked(false,false);
    }
  }
}
