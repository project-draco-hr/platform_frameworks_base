{
  SurfaceHolder sh=getSurfaceHolder();
  Canvas c=null;
  try {
    c=sh.lockCanvas();
    if (c != null) {
      final Rect frame=sh.getSurfaceFrame();
synchronized (mLock) {
        final Drawable background=mBackground;
        background.setBounds(frame);
        background.draw(c);
      }
    }
  }
  finally {
    if (c != null)     sh.unlockCanvasAndPost(c);
  }
}
