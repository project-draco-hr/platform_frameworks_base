{
synchronized (this) {
    while (mService == null) {
      if (DEBUG)       Slog.i(TAG,"...waiting for OBB service binding...");
      try {
        this.wait();
      }
 catch (      InterruptedException e) {
      }
    }
    if (DEBUG)     Slog.i(TAG,"Connected to OBB service; continuing");
  }
}
