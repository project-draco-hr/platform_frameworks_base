{
  if (v == mMoreButton) {
    expand();
  }
 else   if (v.getTag() instanceof StreamControl) {
    StreamControl sc=(StreamControl)v.getTag();
    mAudioManager.setRingerMode(mAudioManager.isSilentMode() ? AudioManager.RINGER_MODE_NORMAL : AudioManager.RINGER_MODE_SILENT);
    if (!isExpanded())     expand();
  }
  resetTimeout();
}
