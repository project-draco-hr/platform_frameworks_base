{
  float[] cieXYZComponents=getColorSpace().toCIEXYZ(getColorComponents(null));
  float[] csComponents=colorSpace.fromCIEXYZ(cieXYZComponents);
  if (components == null) {
    return csComponents;
  }
  for (int i=0; i < csComponents.length; i++) {
    components[i]=csComponents[i];
  }
  return components;
}
