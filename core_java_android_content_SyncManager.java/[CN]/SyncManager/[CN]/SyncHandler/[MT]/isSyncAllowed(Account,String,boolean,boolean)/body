{
  Account[] accounts=mAccounts;
  if (!isSyncEnabled()) {
    return false;
  }
  if (accounts == null || !ArrayUtils.contains(accounts,account)) {
    return false;
  }
  final boolean syncAutomatically=mSyncStorageEngine.getSyncAutomatically(account,authority) && mSyncStorageEngine.getMasterSyncAutomatically();
  if (!(manualSync || (backgroundDataUsageAllowed && syncAutomatically))) {
    return false;
  }
  if (mSyncStorageEngine.getIsSyncable(account,authority) <= 0) {
    return false;
  }
  return true;
}
