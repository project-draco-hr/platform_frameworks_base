{
  mHandler.post(new Runnable(){
    @Override public void run(){
      if (enable == mOverlayViewEnabled) {
        return;
      }
      mOverlayViewEnabled=enable;
      if (enable) {
        if (mWindowToken != null) {
          createOverlayView(mWindowToken,mOverlayFrame);
        }
      }
 else {
        removeOverlayView(false);
      }
    }
  }
);
}
