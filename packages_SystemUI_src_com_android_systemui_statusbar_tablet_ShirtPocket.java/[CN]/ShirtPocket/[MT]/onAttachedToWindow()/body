{
  setVisibility(View.VISIBLE);
  mIcon=(ImageView)findViewById(R.id.pocket_icon);
  refreshStatusIcon();
  setOnClickListener(new View.OnClickListener(){
    public void onClick(    View v){
      if (mClipping != null) {
        if (mWindow.getVisibility() == View.VISIBLE)         hideWindow();
 else         showWindow();
      }
    }
  }
);
}
