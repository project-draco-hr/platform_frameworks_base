{
  if (started) {
synchronized (forwarders) {
      for (      Forwarder forwarder : forwarders)       forwarder.stop();
      forwarders.clear();
    }
    try {
      serverSocket.close();
    }
 catch (    IOException ioe) {
      Log.v(LOGTAG,"exception while closing",ioe);
    }
 finally {
      started=false;
    }
  }
}
