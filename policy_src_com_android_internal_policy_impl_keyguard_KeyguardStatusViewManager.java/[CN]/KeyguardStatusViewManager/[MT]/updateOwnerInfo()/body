{
  final ContentResolver res=getContext().getContentResolver();
  final boolean ownerInfoEnabled=Settings.Secure.getIntForUser(res,Settings.Secure.LOCK_SCREEN_OWNER_INFO_ENABLED,1,UserHandle.USER_CURRENT) != 0;
  String text=Settings.Secure.getStringForUser(res,Settings.Secure.LOCK_SCREEN_OWNER_INFO,UserHandle.USER_CURRENT);
  text=text.trim();
  if (ownerInfoEnabled && !TextUtils.isEmpty(text)) {
    maybeSetUpperCaseText(mOwnerInfoView,text);
    mOwnerInfoView.setVisibility(View.VISIBLE);
  }
 else {
    mOwnerInfoView.setVisibility(View.GONE);
  }
}
