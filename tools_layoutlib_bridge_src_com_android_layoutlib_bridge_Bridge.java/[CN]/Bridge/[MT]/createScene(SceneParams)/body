{
  try {
    SceneResult lastResult=SceneResult.SUCCESS;
    LayoutSceneImpl scene=new LayoutSceneImpl(params);
    try {
      scene.prepareThread();
      lastResult=scene.init(params.getTimeout());
      if (lastResult == SceneResult.SUCCESS) {
        lastResult=scene.inflate();
        if (lastResult == SceneResult.SUCCESS) {
          lastResult=scene.render();
        }
      }
    }
  finally {
      scene.release();
      scene.cleanupThread();
    }
    return new BridgeLayoutScene(scene,lastResult);
  }
 catch (  Throwable t) {
    Throwable t2=t;
    while (t2.getCause() != null) {
      t2=t.getCause();
    }
    return new BridgeLayoutScene(null,new SceneResult(SceneStatus.ERROR_UNKNOWN,t2.getMessage(),t2));
  }
}
