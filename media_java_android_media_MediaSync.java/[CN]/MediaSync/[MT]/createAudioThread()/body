{
  mAudioThread=new Thread(){
    @Override public void run(){
      Looper.prepare();
synchronized (mAudioLock) {
        mAudioLooper=Looper.myLooper();
        mAudioHandler=new Handler();
        mAudioLock.notify();
      }
      Looper.loop();
    }
  }
;
  mAudioThread.start();
synchronized (mAudioLock) {
    try {
      mAudioLock.wait();
    }
 catch (    InterruptedException e) {
    }
  }
}
