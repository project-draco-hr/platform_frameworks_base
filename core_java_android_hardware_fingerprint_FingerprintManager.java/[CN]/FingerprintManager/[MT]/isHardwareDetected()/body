{
  if (mService != null) {
    try {
      long deviceId=0;
      return mService.isHardwareDetected(deviceId,mContext.getOpPackageName());
    }
 catch (    RemoteException e) {
      throw e.rethrowFromSystemServer();
    }
  }
 else {
    Log.w(TAG,"isFingerprintHardwareDetected(): Service not connected!");
  }
  return false;
}
