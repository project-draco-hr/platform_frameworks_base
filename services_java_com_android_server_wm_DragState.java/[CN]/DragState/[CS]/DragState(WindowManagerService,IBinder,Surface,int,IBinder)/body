{
  mService=service;
  mToken=token;
  mSurface=surface;
  mFlags=flags;
  mLocalWin=localWin;
  mNotifiedWindows=new ArrayList<WindowState>();
  WindowState win=service.mWindowMap.get(token);
  if (win != null) {
    mDisplayContent=win.mDisplayContent;
  }
 else {
    Slog.e(WindowManagerService.TAG,"No window associated with token");
  }
}
