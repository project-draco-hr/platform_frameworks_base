{
  if (mMetrics != null) {
    if (metrics != null) {
      metrics.top=-mMetrics.getMaxAscent();
      metrics.ascent=-mMetrics.getAscent();
      metrics.descent=mMetrics.getDescent();
      metrics.bottom=mMetrics.getMaxDescent();
      metrics.leading=mMetrics.getLeading();
    }
    return mMetrics.getHeight();
  }
  return 0;
}
