{
  if (mDisplayContent != null) {
    for (int taskNdx=mTasks.size() - 1; taskNdx >= 0; --taskNdx) {
      mTasks.get(taskNdx).updateDisplayInfo(mDisplayContent);
    }
    if (bounds != null) {
      setBounds(bounds);
    }
 else     if (mFullscreen) {
      setBounds(null);
    }
 else {
      TmpRect2.set(mBounds);
      mDisplayContent.rotateBounds(mRotation,mDisplayContent.getDisplayInfo().rotation,TmpRect2);
      if (setBounds(TmpRect2)) {
        mService.mH.sendMessage(mService.mH.obtainMessage(RESIZE_STACK,mStackId,-1,mBounds));
      }
    }
  }
}
