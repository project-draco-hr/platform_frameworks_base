{
  if (mDisplayContent == null) {
    return false;
  }
  final int newRotation=getDisplayInfo().rotation;
  final int newDensity=getDisplayInfo().logicalDensityDpi;
  if (mRotation == newRotation && mDensity == newDensity) {
    return false;
  }
  if (mFullscreen) {
    setBounds(null);
    return false;
  }
  final int oldDockSide=mStackId == DOCKED_STACK_ID ? getDockSide() : DOCKED_INVALID;
  mTmpRect2.set(mBounds);
  mDisplayContent.rotateBounds(mRotation,newRotation,mTmpRect2);
  if (mStackId == DOCKED_STACK_ID) {
    repositionDockedStackAfterRotation(mTmpRect2);
    snapDockedStackAfterRotation(mTmpRect2);
    final int newDockSide=getDockSide(mTmpRect2);
    if (oldDockSide != newDockSide) {
      mService.setDockedStackCreateStateLocked((newDockSide == DOCKED_LEFT || newDockSide == DOCKED_TOP) ? DOCKED_STACK_CREATE_MODE_TOP_OR_LEFT : DOCKED_STACK_CREATE_MODE_BOTTOM_OR_RIGHT,null);
      mDisplayContent.getDockedDividerController().notifyDockSideChanged(newDockSide);
    }
  }
  mBoundsAfterRotation.set(mTmpRect2);
  return true;
}
