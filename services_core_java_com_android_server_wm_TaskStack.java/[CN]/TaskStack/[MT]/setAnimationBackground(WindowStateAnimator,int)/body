{
  int animLayer=winAnimator.mAnimLayer;
  if (mAnimationBackgroundAnimator == null || animLayer < mAnimationBackgroundAnimator.mAnimLayer) {
    mAnimationBackgroundAnimator=winAnimator;
    animLayer=mService.adjustAnimationBackground(winAnimator);
    mAnimationBackgroundSurface.show(animLayer - WindowManagerService.LAYER_OFFSET_DIM,((color >> 24) & 0xff) / 255f,0);
  }
}
