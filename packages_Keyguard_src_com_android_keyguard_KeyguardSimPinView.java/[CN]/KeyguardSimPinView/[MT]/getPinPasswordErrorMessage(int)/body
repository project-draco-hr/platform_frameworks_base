{
  String displayMessage;
  if (attemptsRemaining == 0) {
    displayMessage=getContext().getString(R.string.kg_password_wrong_pin_code_pukked);
  }
 else   if (attemptsRemaining > 0) {
    displayMessage=getContext().getResources().getQuantityString(R.plurals.kg_password_wrong_pin_code,attemptsRemaining,attemptsRemaining);
  }
 else {
    displayMessage=getContext().getString(R.string.kg_password_pin_failed);
  }
  if (DEBUG)   Log.d(LOG_TAG,"getPinPasswordErrorMessage:" + " attemptsRemaining=" + attemptsRemaining + " displayMessage="+ displayMessage);
  return displayMessage;
}
