{
  if (DBG) {
    Slog.d(TAG,"OnDetected(" + event + ")");
  }
 else {
    Slog.i(TAG,"onDetected");
  }
  Message message=Message.obtain(mHandler,MSG_HOTWORD_DETECTED);
  if (event.data != null) {
    AudioFormat audioFormat=new AudioFormat.Builder().setChannelMask(AudioFormat.CHANNEL_IN_MONO).setEncoding(AudioFormat.ENCODING_PCM_16BIT).setSampleRate(16000).build();
    message.obj=new TriggerAudio(audioFormat,event.data);
  }
  message.sendToTarget();
}
