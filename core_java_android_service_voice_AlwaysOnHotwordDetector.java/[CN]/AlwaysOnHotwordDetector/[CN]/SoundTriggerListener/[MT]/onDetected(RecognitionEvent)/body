{
  if (!(event instanceof KeyphraseRecognitionEvent)) {
    Slog.e(TAG,"onDetected() called for a soundtrigger event.");
    return;
  }
  if (DBG) {
    Slog.d(TAG,"onDetected(" + event + ")");
  }
 else {
    Slog.i(TAG,"onDetected");
  }
  Message.obtain(mHandler,MSG_HOTWORD_DETECTED,new EventPayload(event.triggerInData,event.captureAvailable,event.captureFormat,event.captureSession,event.data)).sendToTarget();
}
