{
  mInactivityIdleThreshold=mContext.getResources().getInteger(com.android.internal.R.integer.config_jobSchedulerInactivityIdleThreshold);
  mIdleWindowSlop=mContext.getResources().getInteger(com.android.internal.R.integer.config_jobSchedulerIdleWindowSlop);
