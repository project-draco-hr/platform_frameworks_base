{
  if (icon.getScaleX() != 1)   return;
  icon.animate().cancel();
  icon.animate().scaleX(ICON_PULSE_SCALE).scaleY(ICON_PULSE_SCALE).setInterpolator(mFastOutSlowInInterpolator).setListener(new AnimatorListenerAdapter(){
    @Override public void onAnimationEnd(    Animator animation){
      icon.animate().scaleX(1).scaleY(1).setListener(null);
    }
  }
);
}
