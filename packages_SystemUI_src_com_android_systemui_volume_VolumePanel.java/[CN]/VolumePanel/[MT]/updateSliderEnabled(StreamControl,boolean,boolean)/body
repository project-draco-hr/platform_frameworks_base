{
  final boolean wasEnabled=sc.seekbarView.isEnabled();
  if (sc.streamType == AudioService.STREAM_REMOTE_MUSIC) {
    sc.seekbarView.setEnabled(!fixedVolume);
  }
 else   if (fixedVolume || (sc.streamType != mAudioManager.getMasterStreamType() && muted) || (sConfirmSafeVolumeDialog != null)) {
    sc.seekbarView.setEnabled(false);
  }
 else   if (isNotificationOrRing(sc.streamType) && mAudioManager.getRingerMode() == AudioManager.RINGER_MODE_SILENT) {
    sc.seekbarView.setEnabled(false);
  }
 else {
    sc.seekbarView.setEnabled(true);
  }
  if (sc.icon.isClickable() && wasEnabled != sc.seekbarView.isEnabled()) {
    if (sc.seekbarView.isEnabled()) {
      sc.seekbarContainer.setOnTouchListener(null);
    }
 else {
      sc.seekbarContainer.setOnTouchListener(new View.OnTouchListener(){
        @Override public boolean onTouch(        View v,        MotionEvent event){
          resetTimeout();
          pulseIcon(sc.icon);
          return false;
        }
      }
);
    }
  }
}
