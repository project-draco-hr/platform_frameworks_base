{
  super.onResume();
  Cursor c=getContentResolver().query(Ptp.Device.CONTENT_URI,DEVICE_COLUMNS,null,null,null);
  Log.d(TAG,"query returned " + c);
  startManagingCursor(c);
  mCursor=c;
  mAdapter=new SimpleCursorAdapter(this,android.R.layout.simple_list_item_2,c,new String[]{Ptp.Device.MANUFACTURER,Ptp.Device.MODEL},new int[]{android.R.id.text1,android.R.id.text2});
  setListAdapter(mAdapter);
  mResolver.registerContentObserver(Ptp.Device.CONTENT_URI,true,mDeviceObserver);
}
