{
  if (text instanceof String || text instanceof SpannedString || text instanceof SpannableString) {
    nDrawText(mRenderer,text.toString(),start,end,x,y,paint.mBidiFlags,paint.getNativeInstance(),paint.mNativeTypeface);
  }
 else   if (text instanceof GraphicsOperations) {
    ((GraphicsOperations)text).drawText(this,start,end,x,y,paint);
  }
 else {
    char[] buf=TemporaryBuffer.obtain(end - start);
    TextUtils.getChars(text,start,end,buf,0);
    nDrawText(mRenderer,buf,0,end - start,x,y,paint.mBidiFlags,paint.getNativeInstance(),paint.mNativeTypeface);
    TemporaryBuffer.recycle(buf);
  }
}
