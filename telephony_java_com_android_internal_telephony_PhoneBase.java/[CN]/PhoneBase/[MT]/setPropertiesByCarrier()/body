{
  String carrier=SystemProperties.get("ro.carrier");
  if (null == carrier || 0 == carrier.length()) {
    return;
  }
  CharSequence[] carrierLocales=mContext.getResources().getTextArray(R.array.carrier_properties);
  for (int i=0; i < carrierLocales.length; i+=3) {
    String c=carrierLocales[i].toString();
    if (carrier.equals(c)) {
      String l=carrierLocales[i + 1].toString();
      int wifiChannels=0;
      try {
        wifiChannels=Integer.parseInt(carrierLocales[i + 2].toString());
      }
 catch (      NumberFormatException e) {
      }
      String language=l.substring(0,2);
      String country="";
      if (l.length() >= 5) {
        country=l.substring(3,5);
      }
      setSystemLocale(language,country);
      if (wifiChannels != 0) {
        try {
          Settings.Secure.getInt(mContext.getContentResolver(),Settings.Secure.WIFI_NUM_ALLOWED_CHANNELS);
        }
 catch (        Settings.SettingNotFoundException e) {
          WifiManager wM=(WifiManager)mContext.getSystemService(Context.WIFI_SERVICE);
          wM.setNumAllowedChannels(wifiChannels,false);
        }
      }
      return;
    }
  }
}
