{
  if (mSilent) {
    mAudioManager.setRingerMode(mVibrate ? AudioManager.RINGER_MODE_VIBRATE : AudioManager.RINGER_MODE_SILENT);
  }
 else {
    mAudioManager.setRingerMode(AudioManager.RINGER_MODE_NORMAL);
    mAudioManager.setVibrateSetting(AudioManager.VIBRATE_TYPE_RINGER,mVibrate ? AudioManager.VIBRATE_SETTING_ON : AudioManager.VIBRATE_SETTING_OFF);
  }
}
