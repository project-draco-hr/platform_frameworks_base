{
  int result=-1;
  final Resources.Theme theme=mContext.getTheme();
  final TypedValue outValue=new TypedValue();
  theme.resolveAttribute(R.attr.timePickerHeaderTimeLabelTextAppearance,outValue,true);
  final int appearanceResId=outValue.resourceId;
  TypedArray appearance=null;
  if (appearanceResId != -1) {
    appearance=theme.obtainStyledAttributes(appearanceResId,com.android.internal.R.styleable.TextAppearance);
  }
  if (appearance != null) {
    result=appearance.getColor(com.android.internal.R.styleable.TextAppearance_textColor,defColor);
    appearance.recycle();
  }
  return result;
}
