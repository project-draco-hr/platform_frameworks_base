{
  int currentHour=mRadialTimePickerView.getCurrentHour();
  if (mIs24HourView) {
    return currentHour;
  }
 else {
switch (mRadialTimePickerView.getAmOrPm()) {
case PM:
      return (currentHour % HOURS_IN_HALF_DAY) + HOURS_IN_HALF_DAY;
case AM:
default :
    return currentHour % HOURS_IN_HALF_DAY;
}
}
}
