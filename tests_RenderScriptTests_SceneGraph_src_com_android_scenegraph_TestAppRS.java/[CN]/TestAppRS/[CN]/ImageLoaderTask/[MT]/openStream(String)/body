{
  InputStream is=null;
  try {
    if (!mLoadFromSD) {
      is=mRes.getAssets().open(name);
    }
 else {
      File f=new File(mSDCardPath + name);
      is=new BufferedInputStream(new FileInputStream(f));
    }
  }
 catch (  IOException e) {
    Log.e("PAINTSHADERS"," Message: " + e.getMessage());
  }
  return is;
}
