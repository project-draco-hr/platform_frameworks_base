{
  boolean windowFullScreen=ResourceHelper.getBooleanThemeValue(mResources,ATTR_WINDOW_FULL_SCREEN,true,false);
  if (!windowFullScreen && !mWindowIsFloating) {
    mStatusBarSize=getDimension(ATTR_STATUS_BAR_HEIGHT,true,DEFAULT_STATUS_BAR_HEIGHT);
    mTranslucentStatus=ResourceHelper.getBooleanThemeValue(mResources,ATTR_WINDOW_TRANSLUCENT_STATUS,true,false);
  }
}
