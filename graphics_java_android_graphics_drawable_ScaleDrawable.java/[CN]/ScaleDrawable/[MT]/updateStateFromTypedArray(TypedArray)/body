{
  final ScaleState state=mState;
  state.mChangingConfigurations|=a.getChangingConfigurations();
  state.mThemeAttrs=a.extractThemeAttrs();
  state.mScaleWidth=getPercent(a,R.styleable.ScaleDrawable_scaleWidth,state.mScaleWidth);
  state.mScaleHeight=getPercent(a,R.styleable.ScaleDrawable_scaleHeight,state.mScaleHeight);
  state.mGravity=a.getInt(R.styleable.ScaleDrawable_scaleGravity,Gravity.LEFT);
  state.mUseIntrinsicSizeAsMin=a.getBoolean(R.styleable.ScaleDrawable_useIntrinsicSizeAsMinimum,false);
  final Drawable dr=a.getDrawable(R.styleable.ScaleDrawable_drawable);
  if (dr != null) {
    state.mDrawable=dr;
    dr.setCallback(this);
  }
}
