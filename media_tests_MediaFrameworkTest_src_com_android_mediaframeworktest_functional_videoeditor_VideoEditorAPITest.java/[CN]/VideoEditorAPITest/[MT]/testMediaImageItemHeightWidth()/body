{
  final String imageItemFileName=INPUT_FILE_PATH + "IMG_640x480.jpg";
  final int imageItemRenderingMode=MediaItem.RENDERING_MODE_BLACK_BORDER;
  final MediaImageItem mediaImageItem1=mVideoEditorHelper.createMediaItem(mVideoEditor,"mediaImageItem1",imageItemFileName,imageItemRenderingMode,5000);
  mVideoEditor.addMediaItem(mediaImageItem1);
  assertEquals("Image Height = Image Scaled Height",mediaImageItem1.getScaledHeight(),mediaImageItem1.getHeight());
  assertEquals("Image Width = Image Scaled Width",mediaImageItem1.getScaledWidth(),mediaImageItem1.getWidth());
}
