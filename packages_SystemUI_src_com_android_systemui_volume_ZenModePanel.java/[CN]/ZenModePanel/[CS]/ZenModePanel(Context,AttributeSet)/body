{
  super(context,attrs);
  mContext=context;
  mPrefs=new Prefs();
  mInflater=LayoutInflater.from(mContext.getApplicationContext());
  mFastOutSlowInInterpolator=AnimationUtils.loadInterpolator(mContext,android.R.interpolator.fast_out_slow_in);
  final Resources res=mContext.getResources();
  mSubheadWarningColor=res.getColor(R.color.system_warning_color);
  mSubheadColor=res.getColor(R.color.qs_subhead);
  mZenToast=new ZenToast(mContext);
  if (DEBUG)   Log.d(mTag,"new ZenModePanel");
}
