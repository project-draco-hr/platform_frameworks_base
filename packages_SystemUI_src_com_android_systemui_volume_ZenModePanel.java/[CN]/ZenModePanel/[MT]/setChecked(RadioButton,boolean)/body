{
  final int N=getVisibleConditions();
  for (int i=0; i < N; i++) {
    final ConditionTag tag=getConditionTagAt(i);
    if (tag != null && tag.rb.isChecked() && !Objects.equals(tag.rb,rb)) {
      tag.rb.setChecked(false);
    }
  }
  if (rb.isChecked() != checked) {
    rb.setChecked(checked);
  }
}
