{
  if (mTransitionHelper.isTransitioning()) {
    return;
  }
  final int conditionCount=mConditions == null ? 0 : mConditions.length;
  if (DEBUG)   Log.d(mTag,"handleUpdateConditions conditionCount=" + conditionCount);
  bind(forever(),mZenConditions.getChildAt(FOREVER_CONDITION_INDEX),FOREVER_CONDITION_INDEX);
  if (mCountdownConditionSupported && mTimeCondition != null) {
    bind(mTimeCondition,mZenConditions.getChildAt(COUNTDOWN_CONDITION_INDEX),COUNTDOWN_CONDITION_INDEX);
  }
  if (mCountdownConditionSupported && mTimeUntilAlarmCondition != null) {
    bind(mTimeUntilAlarmCondition,mZenConditions.getChildAt(COUNTDOWN_ALARM_CONDITION_INDEX),COUNTDOWN_ALARM_CONDITION_INDEX);
  }
  if (mExpanded && isShown()) {
    ensureSelection();
  }
}
