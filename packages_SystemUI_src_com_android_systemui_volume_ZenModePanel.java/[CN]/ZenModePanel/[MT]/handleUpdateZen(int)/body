{
  if (mSessionZen != -1 && mSessionZen != zen) {
    setExpanded(isShown());
    mSessionZen=zen;
  }
  mZenButtons.setSelectedValue(zen,false);
  updateWidgets();
  handleUpdateConditions();
  if (mExpanded) {
    final Condition selected=getSelectedCondition();
    if (!Objects.equals(mExitCondition,selected)) {
      select(selected);
    }
  }
}
