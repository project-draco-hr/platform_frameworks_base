{
  final boolean confirmed=Prefs.getBoolean(mContext,Prefs.Key.DND_CONFIRMED_SILENCE_INTRODUCTION,false);
  if (confirmed == mConfirmedSilenceIntroduction)   return;
  mConfirmedSilenceIntroduction=confirmed;
  if (DEBUG)   Log.d(mTag,"Confirmed silence introduction: " + mConfirmedSilenceIntroduction);
}
