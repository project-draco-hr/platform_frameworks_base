{
switch (day) {
case SU:
    return r.getString(com.android.internal.R.string.sunday);
case MO:
  return r.getString(com.android.internal.R.string.monday);
case TU:
return r.getString(com.android.internal.R.string.tuesday);
case WE:
return r.getString(com.android.internal.R.string.wednesday);
case TH:
return r.getString(com.android.internal.R.string.thursday);
case FR:
return r.getString(com.android.internal.R.string.friday);
case SA:
return r.getString(com.android.internal.R.string.saturday);
default :
throw new IllegalArgumentException("bad day argument: " + day);
}
}
