{
switch (day) {
case SU:
    return r.getString(com.android.internal.R.string.day_of_week_long_sunday);
case MO:
  return r.getString(com.android.internal.R.string.day_of_week_long_monday);
case TU:
return r.getString(com.android.internal.R.string.day_of_week_long_tuesday);
case WE:
return r.getString(com.android.internal.R.string.day_of_week_long_wednesday);
case TH:
return r.getString(com.android.internal.R.string.day_of_week_long_thursday);
case FR:
return r.getString(com.android.internal.R.string.day_of_week_long_friday);
case SA:
return r.getString(com.android.internal.R.string.day_of_week_long_saturday);
default :
throw new IllegalArgumentException("bad day argument: " + day);
}
}
