{
  super(context);
  setLayoutParams(new LayoutParams(LayoutParams.MATCH_PARENT,LayoutParams.MATCH_PARENT));
  int qsCompensation=(int)context.getResources().getDimension(R.dimen.qs_header_neg_padding);
  setPadding(0,qsCompensation,0,0);
  ImageView downArrow=new ImageView(context);
  downArrow.setImageResource(R.drawable.ic_expand_more);
  downArrow.setImageTintList(ColorStateList.valueOf(context.getResources().getColor(android.R.color.white,null)));
  downArrow.setLayoutParams(generateLayoutParams());
  downArrow.setPadding(0,-qsCompensation,0,0);
  addView(downArrow);
  setOrientation(LinearLayout.HORIZONTAL);
}
