{
  super(context);
  setClipChildren(false);
  setClipToPadding(false);
  setGravity(Gravity.CENTER_VERTICAL);
  setLayoutParams(new LayoutParams(LayoutParams.MATCH_PARENT,LayoutParams.MATCH_PARENT));
  int padding=mContext.getResources().getDimensionPixelSize(R.dimen.qs_quick_tile_padding);
  mDownArrow=new ImageView(context);
  mDownArrow.setImageResource(R.drawable.ic_expand_more);
  mDownArrow.setImageTintList(ColorStateList.valueOf(context.getResources().getColor(android.R.color.white,null)));
  mDownArrow.setLayoutParams(generateLayoutParams());
  mDownArrow.setPadding(padding,padding,padding,padding);
  updateDownArrowMargin();
  addView(mDownArrow);
  setOrientation(LinearLayout.HORIZONTAL);
}
