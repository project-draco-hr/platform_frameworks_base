{
  super(context,attrs);
  if (mTileLayout != null) {
    for (int i=0; i < mRecords.size(); i++) {
      mTileLayout.removeTile(mRecords.get(i));
    }
    removeView((View)mTileLayout);
  }
  mTileLayout=new HeaderTileLayout(context);
  mTileLayout.setListening(mListening);
  addView((View)mTileLayout,1);
}
