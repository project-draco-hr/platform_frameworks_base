{
  if (!InetAddress.isNumeric(ipAddress)) {
    throw new IllegalArgumentException(String.format("IP address %s is not numeric",ipAddress));
  }
  try {
    return InetAddress.getByName(ipAddress);
  }
 catch (  UnknownHostException e) {
    throw new IllegalArgumentException(String.format("IP address %s could not be resolved",ipAddress));
  }
}
