{
  final float density=getResources().getDisplayMetrics().density;
  final int defaultSize=(int)(DRAG_HANDLE_DEFAULT_SIZE * density + 0.5f);
  mDragHandleSize=Math.max(handle != null ? handle.getIntrinsicHeight() : defaultSize,icon != null ? icon.getIntrinsicHeight() : defaultSize);
  mHandleDrawable=handle;
  mDragIconDrawable=icon;
}
