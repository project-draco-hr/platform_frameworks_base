{
  final int mode;
  final int size;
switch (childDimen) {
case LayoutParams.WRAP_CONTENT:
    mode=MeasureSpec.AT_MOST;
  size=maxSize;
break;
case LayoutParams.MATCH_PARENT:
mode=MeasureSpec.EXACTLY;
size=maxSize;
break;
default :
mode=MeasureSpec.EXACTLY;
size=Math.min(maxSize,childDimen);
break;
}
return MeasureSpec.makeMeasureSpec(size,mode);
}
