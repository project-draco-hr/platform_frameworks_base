{
  super.onDraw(c);
  if (!DEBUG)   return;
  Paint pt=new Paint();
  pt.setStyle(Paint.Style.STROKE);
  pt.setColor(0xFFCCCCCC);
  pt.setStrokeWidth(2.0f);
  final Rect check=new Rect();
  final int N=getChildCount();
  for (int i=0; i < N; i++) {
    View stone=getChildAt(i);
    stone.getHitRect(check);
    c.drawRect(check,pt);
  }
}
