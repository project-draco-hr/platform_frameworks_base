{
  super(context,attrs,flags);
  for (int i=0; i < 2; i++) {
    final View v=new View(context);
    v.setBackgroundColor(i % 2 == 0 ? Color.BLUE : Color.RED);
    addView(v);
  }
  mText=new TextView(context);
  mText.setTextColor(Color.BLACK);
  mText.setTextSize(14);
  mText.setTypeface(Typeface.create("monospace",Typeface.BOLD));
  addView(mText,new FrameLayout.LayoutParams(FrameLayout.LayoutParams.MATCH_PARENT,FrameLayout.LayoutParams.WRAP_CONTENT,Gravity.BOTTOM | Gravity.LEFT));
}
