{
  long photoId=-1;
  Cursor cursor=cr.query(contactUri,new String[]{Contacts.PHOTO_ID},null,null,null);
  try {
    if (!cursor.moveToNext()) {
      return null;
    }
    if (cursor.isNull(0)) {
      return null;
    }
    photoId=cursor.getLong(0);
  }
  finally {
    cursor.close();
  }
  return ContentUris.withAppendedId(ContactsContract.Data.CONTENT_URI,photoId);
}
