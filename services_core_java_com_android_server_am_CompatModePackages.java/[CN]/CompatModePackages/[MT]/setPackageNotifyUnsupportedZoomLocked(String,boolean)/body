{
  final int curFlags=getPackageFlags(packageName);
  final int newFlags=notify ? (curFlags & ~UNSUPPORTED_ZOOM_FLAG_DONT_NOTIFY) : (curFlags | UNSUPPORTED_ZOOM_FLAG_DONT_NOTIFY);
  if (curFlags != newFlags) {
    if (newFlags != 0) {
      mPackages.put(packageName,newFlags);
    }
 else {
      mPackages.remove(packageName);
    }
    scheduleWrite();
  }
}
