{
  int curFlags=getPackageFlags(packageName);
  int newFlags=ask ? (curFlags & ~COMPAT_FLAG_DONT_ASK) : (curFlags | COMPAT_FLAG_DONT_ASK);
  if (curFlags != newFlags) {
    if (newFlags != 0) {
      mPackages.put(packageName,newFlags);
    }
 else {
      mPackages.remove(packageName);
    }
    scheduleWrite();
  }
}
