{
  for (int i=0; i < mGridView.getChildCount(); i++) {
    TaskCardView view=(TaskCardView)mGridView.getChildAt(i);
    view.setTranslationX(-mTranslationX);
    view.setAlpha(0.0f);
    view.animate().alpha(1.0f).translationX(0).setDuration(mDuration).setStartDelay(mDelay * i).setInterpolator(Interpolators.FAST_OUT_SLOW_IN);
  }
}
