{
  mProjMatrix[0]=2f / (right - left);
  mProjMatrix[1]=0;
  mProjMatrix[2]=0;
  mProjMatrix[3]=0;
  mProjMatrix[4]=0;
  mProjMatrix[5]=2f / (top - bottom);
  mProjMatrix[6]=0;
  mProjMatrix[7]=0;
  mProjMatrix[8]=0;
  mProjMatrix[9]=0;
  mProjMatrix[10]=-2f / (zfar - znear);
  mProjMatrix[11]=0;
  mProjMatrix[12]=-(right + left) / (right - left);
  mProjMatrix[13]=-(top + bottom) / (top - bottom);
  mProjMatrix[14]=-(zfar + znear) / (zfar - znear);
  mProjMatrix[15]=1f;
}
