{
  if (mEnabled) {
    if (sendCommand(HdmiCecMessageBuilder.buildReportArcInitiated(mSourceAddress,mAvrAddress))) {
      setArcStatus(true);
      mState=STATE_WAITING_TIMEOUT;
      addTimer(mState,TIMEOUT_MS);
    }
 else {
      Slog.w(TAG,"Failed to send <Report ARC Initiated>:[source:" + mSourceAddress + ", avr Address:"+ mAvrAddress+ "]");
      setArcStatus(false);
      finish();
    }
  }
 else {
    setArcStatus(false);
    finish();
  }
  return true;
}
