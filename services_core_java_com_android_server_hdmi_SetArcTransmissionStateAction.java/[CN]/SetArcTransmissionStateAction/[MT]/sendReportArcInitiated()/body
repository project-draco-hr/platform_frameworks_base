{
  HdmiCecMessage command=HdmiCecMessageBuilder.buildReportArcInitiated(mSourceAddress,mAvrAddress);
  sendCommand(command,new HdmiControlService.SendMessageCallback(){
    @Override public void onSendCompleted(    int error){
      if (error == 0) {
        setArcStatus(true);
        mState=STATE_WAITING_TIMEOUT;
        addTimer(mState,TIMEOUT_MS);
      }
 else {
        Slog.w(TAG,"Failed to send <Report ARC Initiated>:[source:" + mSourceAddress + ", avr Address:"+ mAvrAddress+ "]");
        setArcStatus(false);
        finish();
      }
    }
  }
);
}
