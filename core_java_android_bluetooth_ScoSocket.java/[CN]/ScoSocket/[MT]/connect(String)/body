{
  if (VDBG)   log("connect() " + this);
  if (mState != STATE_READY) {
    if (DBG)     log("connect(): Bad state");
    return false;
  }
  acquireWakeLock();
  if (connectNative(address)) {
    mState=STATE_CONNECTING;
    return true;
  }
 else {
    mState=STATE_CLOSED;
    releaseWakeLockNow();
    return false;
  }
}
