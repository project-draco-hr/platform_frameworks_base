{
  if (mTransportControl == null) {
    LayoutInflater inflater=LayoutInflater.from(mContext);
    mTransportControl=(KeyguardTransportControlView)inflater.inflate(R.layout.keyguard_transport_control_view,this,false);
    mTransportControl.setTransportControlCallback(new TransportControlCallback(){
      public void userActivity(){
        mViewMediatorCallback.userActivity();
      }
    }
);
  }
  return mTransportControl;
}
