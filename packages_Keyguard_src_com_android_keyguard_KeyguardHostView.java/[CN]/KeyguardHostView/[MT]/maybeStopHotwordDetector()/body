{
  if (!ENABLE_HOTWORD)   return;
  if (sHotwordClient != null) {
    if (DEBUG)     Log.d(TAG,"maybeStopHotwordDetector()");
    try {
      sHotwordClient.stopRecognition();
    }
 catch (    Exception ex) {
      Log.e(TAG,"Failed to start hotword recognition",ex);
    }
 finally {
      sHotwordClient=null;
    }
  }
}
