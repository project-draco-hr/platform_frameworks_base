{
  if (getVisibility() != VISIBLE) {
    return;
  }
  int iconRes=mFaceUnlockRunning ? R.drawable.ic_account_circle : mUnlockMethodCache.isMethodInsecure() ? R.drawable.ic_lock_open_24dp : R.drawable.ic_lock_24dp;
  mLockIcon.setImageResource(iconRes);
  boolean trustManaged=mUnlockMethodCache.isTrustManaged();
  mLockIcon.setBackgroundResource(trustManaged && !mFaceUnlockRunning ? R.drawable.trust_circle : 0);
  mLockIcon.setClickable(trustManaged);
}
