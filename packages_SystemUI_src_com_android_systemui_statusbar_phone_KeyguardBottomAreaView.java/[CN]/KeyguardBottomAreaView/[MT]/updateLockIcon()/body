{
  boolean visible=isShown() && KeyguardUpdateMonitor.getInstance(mContext).isScreenOn();
  if (visible) {
    mTrustDrawable.start();
  }
 else {
    mTrustDrawable.stop();
  }
  if (!visible) {
    return;
  }
  int iconRes=mUnlockMethodCache.isFaceUnlockRunning() ? R.drawable.ic_account_circle : mUnlockMethodCache.isMethodInsecure() ? R.drawable.ic_lock_open_24dp : R.drawable.ic_lock_24dp;
  mLockIcon.setImageResource(iconRes);
  boolean trustManaged=mUnlockMethodCache.isTrustManaged();
  mTrustDrawable.setTrustManaged(trustManaged);
  updateLockIconClickability();
  updateLockIconContentDescription(mUnlockMethodCache.isFaceUnlockRunning(),mUnlockMethodCache.isMethodInsecure(),trustManaged);
}
