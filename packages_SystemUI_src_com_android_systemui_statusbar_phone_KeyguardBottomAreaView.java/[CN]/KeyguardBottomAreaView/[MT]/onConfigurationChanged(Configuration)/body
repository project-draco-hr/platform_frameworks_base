{
  super.onConfigurationChanged(newConfig);
  int indicationBottomMargin=getResources().getDimensionPixelSize(R.dimen.keyguard_indication_margin_bottom);
  MarginLayoutParams mlp=(MarginLayoutParams)mIndicationText.getLayoutParams();
  if (mlp.bottomMargin != indicationBottomMargin) {
    mlp.bottomMargin=indicationBottomMargin;
    mIndicationText.setLayoutParams(mlp);
  }
  mIndicationText.setTextSize(TypedValue.COMPLEX_UNIT_PX,getResources().getDimensionPixelSize(com.android.internal.R.dimen.text_size_small_material));
}
