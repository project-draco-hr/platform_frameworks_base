{
  if (!mPrewarmSent) {
    return;
  }
  mPrewarmSent=false;
  Intent intent=getCameraIntent();
  String targetPackage=PreviewInflater.getTargetPackage(mContext,intent,mLockPatternUtils.getCurrentUser());
  if (targetPackage != null) {
    Intent prewarm=new Intent(MediaStore.ACTION_STILL_IMAGE_CAMERA_COOLDOWN);
    prewarm.setPackage(targetPackage);
    mContext.sendBroadcast(prewarm);
  }
}
