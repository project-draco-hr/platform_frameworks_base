{
  UserInfo userInfo=mUserManager.createUser("Guest 1",UserInfo.FLAG_GUEST);
  assertTrue(userInfo != null);
  List<UserInfo> list=mUserManager.getUsers();
  boolean found=false;
  for (  UserInfo user : list) {
    if (user.id == userInfo.id && user.name.equals("Guest 1") && user.isGuest() && !user.isAdmin() && !user.isPrimary()) {
      found=true;
      Bundle restrictions=mUserManager.getUserRestrictions(user.getUserHandle());
      assertTrue("New user should have ALLOW_CONFIG_WIFI =true by default",restrictions.getBoolean(UserManager.ALLOW_CONFIG_WIFI));
    }
  }
  assertTrue(found);
  removeUser(userInfo.id);
}
