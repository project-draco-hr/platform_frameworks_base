{
  try {
    final int uid=AppGlobals.getPackageManager().getPackageUid(packageName,PackageManager.MATCH_UNINSTALLED_PACKAGES,userId);
    if (idle) {
      mBatteryStats.noteEvent(BatteryStats.HistoryItem.EVENT_PACKAGE_INACTIVE,packageName,uid);
    }
 else {
      mBatteryStats.noteEvent(BatteryStats.HistoryItem.EVENT_PACKAGE_ACTIVE,packageName,uid);
    }
  }
 catch (  RemoteException re) {
  }
}
