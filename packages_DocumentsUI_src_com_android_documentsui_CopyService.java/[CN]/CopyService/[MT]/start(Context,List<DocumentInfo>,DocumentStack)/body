{
  final Resources res=context.getResources();
  final Intent copyIntent=new Intent(context,CopyService.class);
  copyIntent.putParcelableArrayListExtra(EXTRA_SRC_LIST,new ArrayList<DocumentInfo>(srcDocs));
  copyIntent.putExtra(EXTRA_STACK,(Parcelable)dstStack);
  Toast.makeText(context,res.getQuantityString(R.plurals.copy_begin,srcDocs.size(),srcDocs.size()),Toast.LENGTH_SHORT).show();
  context.startService(copyIntent);
}
