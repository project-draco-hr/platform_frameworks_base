{
  final Resources res=activity.getResources();
  final Intent copyIntent=new Intent(activity,CopyService.class);
  copyIntent.putParcelableArrayListExtra(EXTRA_SRC_LIST,new ArrayList<DocumentInfo>(srcDocs));
  copyIntent.putExtra(Shared.EXTRA_STACK,(Parcelable)dstStack);
  copyIntent.putExtra(EXTRA_TRANSFER_MODE,mode);
  int toastMessage=(mode == TRANSFER_MODE_COPY) ? R.plurals.copy_begin : R.plurals.move_begin;
  Shared.makeSnackbar(activity,res.getQuantityString(toastMessage,srcDocs.size(),srcDocs.size()),Snackbar.LENGTH_SHORT).show();
  activity.startService(copyIntent);
}
