{
  if (Console.Enabled) {
    Console.log(Constants.Log.App.RecentsComponent,"[RecentsComponent|ServiceConnection|onServiceConnected]","toggleRecents: " + mToggleRecentsUponServiceBound);
  }
  mService=new Messenger(service);
  mServiceIsBound=true;
  if (hasValidTaskRects()) {
    if (mToggleRecentsUponServiceBound) {
      startRecentsActivity();
      mToggleRecentsUponServiceBound=false;
    }
  }
 else {
    updateAnimationRects();
  }
}
