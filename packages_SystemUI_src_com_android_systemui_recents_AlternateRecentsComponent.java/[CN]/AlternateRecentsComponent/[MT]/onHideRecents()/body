{
  Console.log(Constants.Log.App.RecentsComponent,"[RecentsComponent|hideRecents]");
  if (mServiceIsBound) {
    try {
      Bundle data=new Bundle();
      Message msg=Message.obtain(null,MSG_HIDE_RECENTS,0,0);
      msg.setData(data);
      mService.send(msg);
    }
 catch (    RemoteException re) {
      re.printStackTrace();
    }
  }
}
