{
  ActivityManager am=(ActivityManager)mContext.getSystemService(Context.ACTIVITY_SERVICE);
  List<ActivityManager.RecentTaskInfo> tasks=am.getRecentTasksForUser(1,ActivityManager.RECENT_IGNORE_UNAVAILABLE | ActivityManager.RECENT_INCLUDE_PROFILES,UserHandle.CURRENT.getIdentifier());
  for (  ActivityManager.RecentTaskInfo t : tasks) {
    if (am.isInHomeStack(t.persistentId)) {
      continue;
    }
    return true;
  }
  return false;
}
