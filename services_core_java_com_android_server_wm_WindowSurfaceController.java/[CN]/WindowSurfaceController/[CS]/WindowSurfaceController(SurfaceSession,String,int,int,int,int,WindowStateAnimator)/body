{
  mAnimator=animator;
  mSurfaceW=w;
  mSurfaceH=h;
  title=name;
  if (animator.mWin.isChildWindow() && animator.mWin.mSubLayer < 0) {
    mSurfaceControl=new SurfaceControlWithBackground(s,name,w,h,format,flags);
  }
 else   if (DEBUG_SURFACE_TRACE) {
    mSurfaceControl=new SurfaceTrace(s,name,w,h,format,flags);
  }
 else {
    mSurfaceControl=new SurfaceControl(s,name,w,h,format,flags);
  }
}
