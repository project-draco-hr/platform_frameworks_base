{
  if (SHOW_TRANSACTIONS)   logSurface("SHOW (performLayout)",null);
  if (DEBUG_VISIBILITY)   Slog.v(TAG,"Showing " + this + " during relayout");
  if (mHiddenForCrop) {
    return false;
  }
  try {
    mSurfaceShown=true;
    mSurfaceControl.show();
    return true;
  }
 catch (  RuntimeException e) {
    Slog.w(TAG,"Failure showing surface " + mSurfaceControl + " in "+ this,e);
  }
  mAnimator.reclaimSomeSurfaceMemory("show",true);
  return false;
}
