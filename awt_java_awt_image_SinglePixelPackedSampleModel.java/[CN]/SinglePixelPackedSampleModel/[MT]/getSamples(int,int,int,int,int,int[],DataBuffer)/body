{
  if ((x < 0) || (y < 0) || ((long)x + (long)w > this.width)|| ((long)y + (long)h > this.height)) {
    throw new ArrayIndexOutOfBoundsException(Messages.getString("awt.63"));
  }
  int samples[];
  int idx=0;
  if (iArray == null) {
    samples=new int[w * h];
  }
 else {
    samples=iArray;
  }
  for (int i=y; i < y + h; i++) {
    for (int j=x; j < x + w; j++) {
      samples[idx++]=getSample(j,i,b,data);
    }
  }
  return samples;
}
