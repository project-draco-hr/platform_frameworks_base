{
  if (items.length > Byte.MAX_VALUE) {
    throw new IllegalArgumentException("A List must have fewer than " + Byte.MAX_VALUE + " items in it.");
  }
  if (items.length < 1) {
    throw new IllegalArgumentException("A List must have at least one item in it.");
  }
  for (int i=0; i < items.length; i++) {
    final Object item=items[i];
    if (item == null) {
      items[i]="";
    }
 else     if (!(item instanceof List || item instanceof String || item instanceof Integer|| item instanceof Long)) {
      throw new IllegalArgumentException("Attempt to create a List with illegal item type.");
    }
  }
  this.mItems=items;
}
