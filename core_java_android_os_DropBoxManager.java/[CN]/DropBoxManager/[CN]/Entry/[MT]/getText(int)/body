{
  if ((mFlags & IS_TEXT) == 0)   return null;
  if (mData != null)   return new String(mData,0,Math.min(maxBytes,mData.length));
  InputStream is=null;
  try {
    is=getInputStream();
    if (is == null)     return null;
    byte[] buf=new byte[maxBytes];
    return new String(buf,0,Math.max(0,is.read(buf)));
  }
 catch (  IOException e) {
    return null;
  }
 finally {
    try {
      if (is != null)       is.close();
    }
 catch (    IOException e) {
    }
  }
}
