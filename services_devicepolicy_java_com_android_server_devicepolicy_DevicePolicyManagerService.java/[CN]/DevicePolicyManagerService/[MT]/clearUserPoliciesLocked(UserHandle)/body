{
  int userId=userHandle.getIdentifier();
  DevicePolicyData policy=getUserData(userId);
  policy.mPermissionPolicy=DevicePolicyManager.PERMISSION_POLICY_PROMPT;
  policy.mDelegatedCertInstallerPackage=null;
  policy.mStatusBarDisabled=false;
  saveSettingsLocked(userId);
  final long ident=binderClearCallingIdentity();
  try {
    clearUserRestrictions(userHandle);
    getIPackageManager().updatePermissionFlagsForAllApps(PackageManager.FLAG_PERMISSION_POLICY_FIXED,0,userHandle.getIdentifier());
  }
 catch (  RemoteException re) {
  }
 finally {
    binderRestoreCallingIdentity(ident);
  }
}
