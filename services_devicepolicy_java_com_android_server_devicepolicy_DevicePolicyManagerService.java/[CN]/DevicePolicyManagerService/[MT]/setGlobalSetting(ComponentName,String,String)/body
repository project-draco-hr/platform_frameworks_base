{
  final ContentResolver contentResolver=mContext.getContentResolver();
  Preconditions.checkNotNull(who,"ComponentName is null");
synchronized (this) {
    getActiveAdminForCallerLocked(who,DeviceAdminInfo.USES_POLICY_DEVICE_OWNER);
    if (!GLOBAL_SETTINGS_WHITELIST.contains(setting)) {
      if (!Settings.Global.BLUETOOTH_ON.equals(setting) && !Settings.Global.WIFI_ON.equals(setting)) {
        throw new SecurityException(String.format("Permission denial: device owners cannot update %1$s",setting));
      }
    }
    if (Settings.Global.STAY_ON_WHILE_PLUGGED_IN.equals(setting)) {
      long timeMs=getMaximumTimeToLock(who,UserHandle.getCallingUserId());
      if (timeMs > 0 && timeMs < Integer.MAX_VALUE) {
        return;
      }
    }
    long id=Binder.clearCallingIdentity();
    try {
      Settings.Global.putString(contentResolver,setting,value);
    }
  finally {
      restoreCallingIdentity(id);
    }
  }
}
