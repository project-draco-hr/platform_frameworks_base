{
  Bundle userRestrictions=mUserManager.getUserRestrictions();
  mUserManager.setUserRestrictions(new Bundle(),userHandle);
  IAudioService iAudioService=IAudioService.Stub.asInterface(ServiceManager.getService(Context.AUDIO_SERVICE));
  if (userRestrictions.getBoolean(UserManager.DISALLOW_ADJUST_VOLUME)) {
    try {
      iAudioService.setMasterMute(true,0,mContext.getPackageName(),userHandle.getIdentifier());
    }
 catch (    RemoteException e) {
    }
  }
  if (userRestrictions.getBoolean(UserManager.DISALLOW_UNMUTE_MICROPHONE)) {
    try {
      iAudioService.setMicrophoneMute(true,mContext.getPackageName(),userHandle.getIdentifier());
    }
 catch (    RemoteException e) {
    }
  }
}
