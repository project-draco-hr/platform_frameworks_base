{
  int callingUserId=UserHandle.getCallingUserId();
  final ContentResolver contentResolver=mContext.getContentResolver();
synchronized (this) {
    if (who == null) {
      throw new NullPointerException("ComponentName is null");
    }
    getActiveAdminForCallerLocked(who,DeviceAdminInfo.USES_POLICY_PROFILE_OWNER);
    if (!SECURE_SETTINGS_WHITELIST.contains(setting)) {
      throw new SecurityException(String.format("Permission denial: profile/device owners cannot update %1$s",setting));
    }
    long id=Binder.clearCallingIdentity();
    try {
      Settings.Secure.putStringForUser(contentResolver,setting,value,callingUserId);
    }
  finally {
      restoreCallingIdentity(id);
    }
  }
}
