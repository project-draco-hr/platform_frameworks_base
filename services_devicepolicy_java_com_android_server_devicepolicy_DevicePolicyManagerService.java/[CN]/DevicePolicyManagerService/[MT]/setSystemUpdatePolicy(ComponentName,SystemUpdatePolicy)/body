{
  if (policy != null && !policy.isValid()) {
    throw new IllegalArgumentException("Invalid system update policy.");
  }
synchronized (this) {
    getActiveAdminForCallerLocked(who,DeviceAdminInfo.USES_POLICY_DEVICE_OWNER);
    if (policy == null) {
      mOwners.clearSystemUpdatePolicy();
    }
 else {
      mOwners.setSystemUpdatePolicy(policy);
    }
    mOwners.writeDeviceOwner();
  }
  mContext.sendBroadcastAsUser(new Intent(DevicePolicyManager.ACTION_SYSTEM_UPDATE_POLICY_CHANGED),UserHandle.OWNER);
}
