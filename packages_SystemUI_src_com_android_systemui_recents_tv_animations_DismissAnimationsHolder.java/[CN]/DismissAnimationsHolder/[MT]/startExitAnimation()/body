{
  mDismissArea.animate().setDuration(mShortDuration);
  mDismissArea.animate().setInterpolator(mFastOutSlowIn);
  mDismissArea.animate().alpha(0.0f);
  mTaskCardView.animate().setDuration(mShortDuration);
