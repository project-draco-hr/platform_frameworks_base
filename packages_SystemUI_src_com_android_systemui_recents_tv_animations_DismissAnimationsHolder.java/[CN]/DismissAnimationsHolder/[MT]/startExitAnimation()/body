{
  mDismissArea.animate().setDuration(mShortDuration).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).alpha(0.0f);
  mInfoField.animate().setDuration(mShortDuration).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).translationYBy(-mCardYDelta).alpha(1.0f);
  mThumbnailView.animate().setDuration(mShortDuration).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).translationYBy(-mCardYDelta).alpha(1.0f);
}
