{
  mDismissArea.animate().setDuration(mShortDuration).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).alpha(1.0f);
  mInfoField.animate().setDuration(mShortDuration).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).translationYBy(mCardYDelta).alpha(0.5f);
  mThumbnailView.animate().setDuration(mShortDuration).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).translationYBy(mCardYDelta).alpha(0.5f);
}
