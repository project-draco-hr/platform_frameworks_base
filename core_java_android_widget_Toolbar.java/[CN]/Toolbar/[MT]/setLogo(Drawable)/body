{
  if (drawable != null) {
    if (mLogoView == null) {
      mLogoView=new ImageView(getContext());
    }
    if (mLogoView.getParent() == null) {
      addSystemView(mLogoView);
    }
  }
 else   if (mLogoView != null && mLogoView.getParent() != null) {
    removeView(mLogoView);
  }
  if (mLogoView != null) {
    mLogoView.setImageDrawable(drawable);
  }
}
