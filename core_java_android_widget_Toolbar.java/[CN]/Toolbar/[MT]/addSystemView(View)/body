{
  final ViewGroup.LayoutParams vlp=v.getLayoutParams();
  final LayoutParams lp;
  if (vlp == null) {
    lp=generateDefaultLayoutParams();
  }
 else   if (!checkLayoutParams(vlp)) {
    lp=generateLayoutParams(vlp);
  }
 else {
    lp=(LayoutParams)vlp;
  }
  lp.mViewType=LayoutParams.SYSTEM;
  addView(v,lp);
}
