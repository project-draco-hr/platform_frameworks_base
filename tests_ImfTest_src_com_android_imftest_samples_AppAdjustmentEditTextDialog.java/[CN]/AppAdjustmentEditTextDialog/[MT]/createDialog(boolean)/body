{
  View layout;
  EditText editText;
  if (scrollable) {
    layout=new ScrollView(AppAdjustmentEditTextDialog.this);
    ((ScrollView)layout).setMinimumHeight(mLayout.getHeight());
    ((ScrollView)layout).addView((LinearLayout)View.inflate(AppAdjustmentEditTextDialog.this,R.layout.dialog_edit_text_no_scroll,null));
  }
 else {
    layout=View.inflate(AppAdjustmentEditTextDialog.this,R.layout.dialog_edit_text_no_scroll,null);
  }
  Dialog d=new Dialog(AppAdjustmentEditTextDialog.this);
  d.setTitle(getString(R.string.test_dialog));
  d.setCancelable(true);
  d.setContentView(layout);
  return d;
}
