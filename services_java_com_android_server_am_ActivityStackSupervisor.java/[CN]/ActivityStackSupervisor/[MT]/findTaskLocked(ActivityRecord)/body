{
  for (int stackNdx=mStacks.size() - 1; stackNdx >= 0; --stackNdx) {
    final ActivityStack stack=mStacks.get(stackNdx);
    if (!r.isApplicationActivity() && !stack.isHomeStack()) {
      continue;
    }
    final ActivityRecord ar=stack.findTaskLocked(r);
    if (ar != null) {
      return ar;
    }
  }
  return null;
}
