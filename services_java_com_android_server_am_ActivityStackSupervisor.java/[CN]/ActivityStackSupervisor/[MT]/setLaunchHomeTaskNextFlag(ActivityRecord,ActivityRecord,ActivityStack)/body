{
  if (stack == mHomeStack) {
    return;
  }
  if ((sourceRecord == null && getLastStack() == mHomeStack) || (sourceRecord != null && sourceRecord.isHomeActivity())) {
    if (r == null) {
      r=stack.topRunningActivityLocked(null);
    }
    if (r != null && !r.isHomeActivity() && r.isRootActivity()) {
      r.task.mOnTopOfHome=true;
    }
  }
}
