{
  final int N=mAllViews.size();
  mQuickQsPanel.setAlpha(0);
  mQuickQsPanel.setVisibility(View.VISIBLE);
  for (int i=0; i < N; i++) {
    View v=mAllViews.get(i);
    v.setAlpha(1);
    v.setTranslationX(1);
    v.setTranslationY(1);
  }
  final int N2=mTopFiveQs.size();
  for (int i=0; i < N2; i++) {
    mTopFiveQs.get(i).setVisibility(View.VISIBLE);
  }
}
