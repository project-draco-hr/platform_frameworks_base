{
  int width=MeasureSpec.getSize(widthMeasureSpec);
  int height=MeasureSpec.getSize(heightMeasureSpec);
  Rect searchBarSpaceBounds=new Rect();
  if (mSearchBar != null) {
    mConfig.getSearchBarBounds(new Rect(0,0,width,height),mConfig.systemInsets.top,searchBarSpaceBounds);
    mSearchBar.measure(MeasureSpec.makeMeasureSpec(searchBarSpaceBounds.width(),MeasureSpec.EXACTLY),MeasureSpec.makeMeasureSpec(searchBarSpaceBounds.height(),MeasureSpec.EXACTLY));
  }
  Rect taskStackBounds=new Rect();
  mConfig.getAvailableTaskStackBounds(new Rect(0,0,width,height),mConfig.systemInsets.top,mConfig.systemInsets.right,searchBarSpaceBounds,taskStackBounds);
  if (mTaskStackView != null && mTaskStackView.getVisibility() != GONE) {
    mTaskStackView.setTaskStackBounds(taskStackBounds);
    mTaskStackView.measure(widthMeasureSpec,heightMeasureSpec);
  }
  setMeasuredDimension(width,height);
}
