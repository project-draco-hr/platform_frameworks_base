{
  Rect actionButtonRect=new Rect(mTaskStackView.mLayoutAlgorithm.mStackActionButtonRect);
  int left=isLayoutRtl() ? actionButtonRect.left - mStackActionButton.getPaddingLeft() : actionButtonRect.right + mStackActionButton.getPaddingRight() - mStackActionButton.getMeasuredWidth();
  int top=actionButtonRect.top + (actionButtonRect.height() - mStackActionButton.getMeasuredHeight()) / 2;
  actionButtonRect.set(left,top,left + mStackActionButton.getMeasuredWidth(),top + mStackActionButton.getMeasuredHeight());
  return actionButtonRect;
}
