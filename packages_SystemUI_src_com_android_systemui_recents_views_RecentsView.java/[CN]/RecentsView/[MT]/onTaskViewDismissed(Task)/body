{
  RecentsTaskLoader loader=RecentsTaskLoader.getInstance();
  loader.deleteTaskData(t,false);
  int flags=t.key.baseIntent.getFlags();
  boolean isDocument=(flags & Intent.FLAG_ACTIVITY_NEW_DOCUMENT) == Intent.FLAG_ACTIVITY_NEW_DOCUMENT;
  RecentsTaskLoader.getInstance().getSystemServicesProxy().removeTask(t.key.id,isDocument);
}
