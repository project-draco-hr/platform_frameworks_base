{
  if (mSearchBar != null) {
    Rect searchBarSpaceBounds=new Rect();
    mConfig.getSearchBarBounds(getMeasuredWidth(),getMeasuredHeight(),mConfig.systemInsets.top,searchBarSpaceBounds);
    mSearchBar.layout(searchBarSpaceBounds.left,searchBarSpaceBounds.top,searchBarSpaceBounds.right,searchBarSpaceBounds.bottom);
  }
  int childCount=getChildCount();
  for (int i=0; i < childCount; i++) {
    View child=getChildAt(i);
    if (child != mSearchBar && child.getVisibility() != GONE) {
      child.layout(left,top,left + child.getMeasuredWidth(),top + child.getMeasuredHeight());
    }
  }
}
