{
  Rect searchBarSpaceBounds=new Rect();
  Rect searchBarBounds=new Rect();
  RecentsConfiguration config=RecentsConfiguration.getInstance();
  config.getSearchBarBounds(getMeasuredWidth(),getMeasuredHeight(),searchBarSpaceBounds,searchBarBounds);
  Intent searchIntent=RecentsTaskLoader.getInstance().getSystemServicesProxy().getGlobalSearchIntent(searchBarBounds);
  if (searchIntent != null) {
    try {
      getContext().startActivity(searchIntent);
    }
 catch (    ActivityNotFoundException anfe) {
      Console.logError(getContext(),"Could not start Search activity");
    }
  }
}
