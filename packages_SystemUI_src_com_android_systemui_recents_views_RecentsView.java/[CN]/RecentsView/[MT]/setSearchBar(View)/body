{
  if (Constants.DebugFlags.App.EnableSearchLayout) {
    if (mSearchBar != null && indexOfChild(mSearchBar) > -1) {
      removeView(mSearchBar);
    }
    if (searchBar != null) {
      mSearchBar=searchBar;
      addView(mSearchBar);
      if (Console.Enabled) {
        Console.log(Constants.Log.App.SystemUIHandshake,"[RecentsView|setSearchBar]","" + (mSearchBar.getVisibility() == View.VISIBLE),Console.AnsiBlue);
      }
    }
  }
}
