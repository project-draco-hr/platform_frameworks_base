{
  String authority=getEncodedAuthority();
  if (authority == null) {
    return null;
  }
  int userInfoSeparator=authority.indexOf('@');
  int portSeparator=authority.indexOf(':',userInfoSeparator);
  String encodedHost=portSeparator == NOT_FOUND ? authority.substring(userInfoSeparator + 1) : authority.substring(userInfoSeparator + 1,portSeparator);
  return decode(encodedHost);
}
