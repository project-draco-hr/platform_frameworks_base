{
  mServices=tileServices;
  mHandler=handler;
  mStateManager=tileLifecycleManager;
  mType=tileServices.getContext().getSharedPreferences(PREFS_FILE,0).getInt(tileLifecycleManager.getComponent().flattenToString(),TileService.TILE_MODE_UNSET);
  mStateManager.setQSService(tileServices);
  if (mType == TileService.TILE_MODE_UNSET) {
    bindService();
    mStateManager.onTileAdded();
  }
}
