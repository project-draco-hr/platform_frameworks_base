{
  PackageManager pm=mContext.getPackageManager();
  boolean prev=(PackageManager.PERMISSION_GRANTED == pm.checkPermission(android.Manifest.permission.SYSTEM_ALERT_WINDOW,pkg));
  mPreviousManageOverlayPackage=null;
  if (!prev) {
    pm.grantRuntimePermission(pkg,android.Manifest.permission.SYSTEM_ALERT_WINDOW,userId);
    mPreviousManageOverlayPackage=pkg;
  }
}
