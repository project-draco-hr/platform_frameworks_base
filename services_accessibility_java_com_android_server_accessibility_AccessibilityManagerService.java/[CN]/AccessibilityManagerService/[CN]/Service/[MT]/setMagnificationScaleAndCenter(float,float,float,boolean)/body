{
synchronized (mLock) {
    final int resolvedUserId=mSecurityPolicy.resolveCallingUserIdEnforcingPermissionsLocked(UserHandle.USER_CURRENT);
    if (resolvedUserId != mCurrentUserId) {
      return false;
    }
    final boolean permissionGranted=mSecurityPolicy.canControlMagnification(this);
    if (!permissionGranted) {
      return false;
    }
  }
  final long identity=Binder.clearCallingIdentity();
  try {
    return getMagnificationController().setScaleAndCenter(scale,centerX,centerY,animate);
  }
  finally {
    Binder.restoreCallingIdentity(identity);
  }
}
