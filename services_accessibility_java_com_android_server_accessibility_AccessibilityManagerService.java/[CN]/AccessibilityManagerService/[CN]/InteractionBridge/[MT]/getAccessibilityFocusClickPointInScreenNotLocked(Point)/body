{
  AccessibilityNodeInfo focus=getAccessibilityFocusNotLocked();
  if (focus == null) {
    return false;
  }
synchronized (mLock) {
    Point point=mClient.computeClickPointInScreen(mConnectionId,focus.getWindowId(),focus.getSourceNodeId());
    if (point == null) {
      return false;
    }
    MagnificationSpec spec=getCompatibleMagnificationSpecLocked(focus.getWindowId());
    if (spec != null && !spec.isNop()) {
      point.offset((int)-spec.offsetX,(int)-spec.offsetY);
      point.x=(int)(point.x * (1 / spec.scale));
      point.y=(int)(point.y * (1 / spec.scale));
    }
    Point screenSize=mTempPoint;
    mDefaultDisplay.getRealSize(screenSize);
    if (point.x < 0 || point.x > screenSize.x || point.y < 0 || point.y > screenSize.y) {
      return false;
    }
    outPoint.set(point.x,point.y);
    return true;
  }
}
