{
  if (text == null) {
    throw new IllegalArgumentException("text cannot be null");
  }
  if ((start | end | (end - start)| (text.length() - end)) < 0) {
    throw new IndexOutOfBoundsException();
  }
  if (text.length() == 0 || start == end) {
    return 0f;
  }
  if (!mHasCompatScaling) {
    return (float)Math.ceil(native_getTextAdvances(mNativePaint,mNativeTypeface,text,start,end,start,end,mBidiFlags,null,0));
  }
  final float oldSize=getTextSize();
  setTextSize(oldSize * mCompatScaling);
  float w=native_getTextAdvances(mNativePaint,mNativeTypeface,text,start,end,start,end,mBidiFlags,null,0);
  setTextSize(oldSize);
  return (float)Math.ceil(w * mInvCompatScaling);
}
