{
  if (mNativePaint == 0)   throw new NullPointerException("Already finalized!");
  if (text == null) {
    throw new IllegalArgumentException("text cannot be null");
  }
  if ((index | count) < 0 || index + count > text.length) {
    throw new ArrayIndexOutOfBoundsException();
  }
  if (text.length == 0 || count == 0) {
    return 0f;
  }
  if (!mHasCompatScaling) {
    return (float)Math.ceil(nGetTextAdvances(mNativePaint,mNativeTypeface,text,index,count,index,count,mBidiFlags,null,0));
  }
  final float oldSize=getTextSize();
  setTextSize(oldSize * mCompatScaling);
  float w=nGetTextAdvances(mNativePaint,mNativeTypeface,text,index,count,index,count,mBidiFlags,null,0);
  setTextSize(oldSize);
  return (float)Math.ceil(w * mInvCompatScaling);
}
