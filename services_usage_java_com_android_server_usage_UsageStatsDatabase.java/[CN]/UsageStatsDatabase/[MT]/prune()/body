{
synchronized (mLock) {
    long timeNow=System.currentTimeMillis();
    mCal.setTimeInMillis(timeNow);
    mCal.add(Calendar.MONTH,-6);
    pruneFilesOlderThan(mBucketDirs[UsageStatsManager.MONTHLY_BUCKET],mCal.getTimeInMillis());
    mCal.setTimeInMillis(timeNow);
    mCal.add(Calendar.WEEK_OF_YEAR,-4);
    pruneFilesOlderThan(mBucketDirs[UsageStatsManager.WEEKLY_BUCKET],mCal.getTimeInMillis());
    mCal.setTimeInMillis(timeNow);
    mCal.add(Calendar.DAY_OF_YEAR,-7);
    pruneFilesOlderThan(mBucketDirs[UsageStatsManager.DAILY_BUCKET],mCal.getTimeInMillis());
  }
}
