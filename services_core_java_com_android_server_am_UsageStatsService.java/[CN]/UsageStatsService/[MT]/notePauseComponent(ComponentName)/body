{
  enforceCallingPermission();
synchronized (mStatsLock) {
    String pkgName;
    if ((componentName == null) || ((pkgName=componentName.getPackageName()) == null)) {
      return;
    }
    if (!mIsResumed) {
      if (REPORT_UNEXPECTED)       Slog.i(TAG,"Something wrong here, didn't expect " + pkgName + " to be paused");
      return;
    }
    mIsResumed=false;
    if (localLOGV)     Slog.i(TAG,"paused component:" + pkgName);
    PkgUsageStatsExtended pus=(PkgUsageStatsExtended)mStats.getPackageStats(pkgName);
    if (pus == null) {
      Slog.i(TAG,"No package stats for pkg:" + pkgName);
      return;
    }
    pus.pause();
  }
  writeStatsToFile(false,false);
}
