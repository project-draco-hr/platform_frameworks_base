{
  mContext.enforceCallingOrSelfPermission(BLUETOOTH_ADMIN_PERM,"Need BLUETOOTH ADMIN permissicacheNameAndAddresson");
  if (DBG) {
    Log.d(TAG,"disable(): mBluetooth = " + (mBluetooth == null ? "null" : mBluetooth) + " mBinding = "+ mBinding+ " isConnected = "+ isConnected());
  }
synchronized (mConnection) {
    if (mBluetooth == null)     return false;
  }
  Message msg=mHandler.obtainMessage(MESSAGE_DISABLE);
  msg.arg1=(persist ? 1 : 0);
  mHandler.sendMessage(msg);
  return true;
}
