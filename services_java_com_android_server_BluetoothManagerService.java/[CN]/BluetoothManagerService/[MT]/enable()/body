{
  mContext.enforceCallingOrSelfPermission(BLUETOOTH_ADMIN_PERM,"Need BLUETOOTH ADMIN permission");
  if (DBG) {
    Log.d(TAG,"enable():  mBluetooth =" + mBluetooth + " mBinding = "+ mBinding);
  }
synchronized (mConnection) {
    if (mBinding) {
      Log.w(TAG,"enable(): binding in progress. Returning..");
      return true;
    }
    if (mConnection == null)     mBinding=true;
  }
  Message msg=mHandler.obtainMessage(MESSAGE_ENABLE);
  msg.arg1=1;
  mHandler.sendMessage(msg);
  return true;
}
