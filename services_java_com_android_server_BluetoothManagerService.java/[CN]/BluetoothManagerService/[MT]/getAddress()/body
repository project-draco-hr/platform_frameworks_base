{
  mContext.enforceCallingOrSelfPermission(BLUETOOTH_ADMIN_PERM,"Need BLUETOOTH ADMIN permission");
synchronized (mConnection) {
    if (mBluetooth != null) {
      try {
        return mBluetooth.getAddress();
      }
 catch (      RemoteException e) {
        Log.e(TAG,"getAddress(): Unable to retrieve address remotely..Returning cached address",e);
      }
    }
  }
  return mAddress;
}
