{
  if (!checkIfCallerIsForegroundUser()) {
    Log.w(TAG,"isEnabled(): not allowed for non-active user");
    return false;
  }
synchronized (mConnection) {
    try {
      return (mBluetooth != null && mBluetooth.isEnabled());
    }
 catch (    RemoteException e) {
      Log.e(TAG,"isEnabled()",e);
    }
  }
  return false;
}
