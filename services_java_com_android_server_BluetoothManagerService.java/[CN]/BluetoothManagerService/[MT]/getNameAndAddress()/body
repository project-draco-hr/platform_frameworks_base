{
  if (DBG) {
    Log.d(TAG,"getNameAndAddress(): mBluetooth = " + (mBluetooth == null ? "null" : mBluetooth) + " mBinding = "+ mBinding+ " isConnected = "+ isConnected());
  }
synchronized (mConnection) {
    if (mBinding)     return;
    if (!isConnected())     mBinding=true;
  }
  Message msg=mHandler.obtainMessage(MESSAGE_GET_NAME_AND_ADDRESS);
  mHandler.sendMessage(msg);
}
