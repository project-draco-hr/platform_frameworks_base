{
  float x13=r1.x - r3.x;
  float y13=r1.y - r3.y;
  float x23=r2.x - r3.x;
  float y23=r2.y - r3.y;
  float x03=x0 - r3.x;
  float y03=y0 - r3.y;
  float determinant=(y23 * x13) - (x23 * y13);
  float lambda1=((y23 * x03) - (x23 * y03)) / determinant;
  float lambda2=((x13 * y03) - (y13 * x03)) / determinant;
  float lambda3=1 - lambda1 - lambda2;
  return lambda1 >= 0.0f && lambda2 >= 0.0f && lambda3 >= 0.0f;
}
