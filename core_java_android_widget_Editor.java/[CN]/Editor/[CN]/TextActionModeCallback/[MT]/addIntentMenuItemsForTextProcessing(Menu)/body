{
  if (mTextView.canProcessText()) {
    PackageManager packageManager=mTextView.getContext().getPackageManager();
    List<ResolveInfo> supportedActivities=packageManager.queryIntentActivities(createProcessTextIntent(),0);
    for (int i=0; i < supportedActivities.size(); ++i) {
      ResolveInfo info=supportedActivities.get(i);
      menu.add(Menu.NONE,Menu.NONE,MENU_ITEM_ORDER_PROCESS_TEXT_INTENT_ACTIONS_START + i,info.loadLabel(packageManager)).setIntent(createProcessTextIntentForResolveInfo(info)).setShowAsAction(MenuItem.SHOW_AS_ACTION_IF_ROOM);
    }
  }
}
