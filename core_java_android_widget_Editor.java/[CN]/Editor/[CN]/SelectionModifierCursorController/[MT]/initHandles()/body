{
  if (mStartHandle == null) {
    mStartHandle=new SelectionHandleView(mSelectHandleLeft,mSelectHandleRight,com.android.internal.R.id.selection_start_handle,HANDLE_TYPE_SELECTION_START);
  }
  if (mEndHandle == null) {
    mEndHandle=new SelectionHandleView(mSelectHandleRight,mSelectHandleLeft,com.android.internal.R.id.selection_end_handle,HANDLE_TYPE_SELECTION_END);
  }
  mStartHandle.show();
  mEndHandle.show();
  hideInsertionPointCursorController();
}
