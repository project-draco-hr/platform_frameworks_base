{
  if (hasWindowFocus) {
    if (mBlink != null) {
      mBlink.uncancel();
      makeBlink();
    }
  }
 else {
    if (mBlink != null) {
      mBlink.cancel();
    }
    if (mInputContentType != null) {
      mInputContentType.enterDown=false;
    }
    hideControllers();
    if (mSuggestionsPopupWindow != null) {
      mSuggestionsPopupWindow.onParentLostFocus();
    }
    ensureEndedBatchEdit();
  }
}
