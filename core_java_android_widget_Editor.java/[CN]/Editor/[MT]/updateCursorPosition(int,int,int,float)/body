{
  if (mCursorDrawable[cursorIndex] == null)   mCursorDrawable[cursorIndex]=mTextView.getContext().getDrawable(mTextView.mCursorDrawableRes);
  final Drawable drawable=mCursorDrawable[cursorIndex];
  final int left=clampCursorHorizontalPosition(drawable,horizontal);
  final int width=drawable.getIntrinsicWidth();
  drawable.setBounds(left,top - mTempRect.top,left + width,bottom + mTempRect.bottom);
}
