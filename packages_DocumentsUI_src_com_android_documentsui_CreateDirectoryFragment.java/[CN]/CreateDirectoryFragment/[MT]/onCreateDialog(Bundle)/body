{
  final Context context=getActivity();
  final ContentResolver resolver=context.getContentResolver();
  final AlertDialog.Builder builder=new AlertDialog.Builder(context,AlertDialog.THEME_DEVICE_DEFAULT_LIGHT);
  final LayoutInflater dialogInflater=LayoutInflater.from(builder.getContext());
  final View view=dialogInflater.inflate(R.layout.dialog_create_dir,null,false);
  final EditText editText=(EditText)view.findViewById(android.R.id.text1);
  builder.setTitle(R.string.menu_create_dir);
  builder.setView(view);
  builder.setPositiveButton(android.R.string.ok,new OnClickListener(){
    @Override public void onClick(    DialogInterface dialog,    int which){
      createDirectory(editText.getText().toString());
    }
  }
);
  builder.setNegativeButton(android.R.string.cancel,null);
  final AlertDialog dialog=builder.create();
  editText.setOnEditorActionListener(new OnEditorActionListener(){
    @Override public boolean onEditorAction(    TextView view,    int actionId,    KeyEvent event){
      if (event.getKeyCode() == KeyEvent.KEYCODE_ENTER && event.hasNoModifiers()) {
        createDirectory(editText.getText().toString());
        dialog.dismiss();
        return true;
      }
      return false;
    }
  }
);
  return dialog;
}
