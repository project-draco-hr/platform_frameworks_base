{
  if (mSurfaceSession == null) {
    if (WindowManagerService.localLOGV)     Slog.v(WindowManagerService.TAG,"First window added to " + this + ", creating SurfaceSession");
    mSurfaceSession=new SurfaceSession();
    if (WindowManagerService.SHOW_TRANSACTIONS)     Slog.i(WindowManagerService.TAG,"  NEW SURFACE SESSION " + mSurfaceSession);
    mService.mSessions.add(this);
  }
  mNumWindow++;
}
