{
  if (mNumWindow <= 0 && mClientDead) {
    mService.mSessions.remove(this);
    if (mSurfaceSession != null) {
      if (WindowManagerService.localLOGV)       Slog.v(WindowManagerService.TAG,"Last window removed from " + this + ", destroying "+ mSurfaceSession);
      if (WindowManagerService.SHOW_TRANSACTIONS)       Slog.i(WindowManagerService.TAG,"  KILL SURFACE SESSION " + mSurfaceSession);
      try {
        mSurfaceSession.kill();
      }
 catch (      Exception e) {
        Slog.w(WindowManagerService.TAG,"Exception thrown when killing surface session " + mSurfaceSession + " in session "+ this+ ": "+ e.toString());
      }
      mSurfaceSession=null;
    }
  }
}
