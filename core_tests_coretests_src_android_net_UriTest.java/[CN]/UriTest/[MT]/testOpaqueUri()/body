{
  Uri uri=Uri.parse("mailto:nobody");
  testOpaqueUri(uri);
  uri=uri.buildUpon().build();
  testOpaqueUri(uri);
  uri=Uri.fromParts("mailto","nobody",null);
  testOpaqueUri(uri);
  uri=uri.buildUpon().build();
  testOpaqueUri(uri);
  uri=new Uri.Builder().scheme("mailto").opaquePart("nobody").build();
  testOpaqueUri(uri);
  uri=uri.buildUpon().build();
  testOpaqueUri(uri);
}
