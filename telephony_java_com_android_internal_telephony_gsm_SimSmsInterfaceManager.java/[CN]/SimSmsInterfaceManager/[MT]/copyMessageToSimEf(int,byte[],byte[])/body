{
  if (DBG)   log("copyMessageToSimEf: status=" + status + " ==> "+ "pdu=("+ pdu+ "), smsm=("+ smsc+ ")");
  enforceReceiveAndSend("Copying message to SIM");
synchronized (mLock) {
    mSuccess=false;
    Message response=mHandler.obtainMessage(EVENT_UPDATE_DONE);
    mPhone.mCM.writeSmsToSim(status,SimUtils.bytesToHexString(smsc),SimUtils.bytesToHexString(pdu),response);
    try {
      mLock.wait();
    }
 catch (    InterruptedException e) {
      log("interrupted while trying to update by index");
    }
  }
  return mSuccess;
}
