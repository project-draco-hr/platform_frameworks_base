{
  HardwareConfig hardwareConfig=getParams().getHardwareConfig();
  if (hardwareConfig.getScreenSize() != ScreenSize.XLARGE) {
    boolean windowFullscreen=getBooleanThemeValue(resources,"windowFullscreen",false);
    if (!windowFullscreen && !mWindowIsFloating) {
      mStatusBarSize=DEFAULT_STATUS_BAR_HEIGHT;
      ResourceValue value=resources.getFrameworkResource(ResourceType.DIMEN,"status_bar_height");
      if (value != null) {
        TypedValue typedValue=ResourceHelper.getValue("status_bar_height",value.getValue(),true);
        if (typedValue != null) {
          mStatusBarSize=(int)typedValue.getDimension(metrics);
        }
      }
    }
  }
}
