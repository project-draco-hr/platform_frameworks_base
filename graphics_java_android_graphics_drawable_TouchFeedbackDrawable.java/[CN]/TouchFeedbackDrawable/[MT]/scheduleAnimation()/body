{
  if (mActiveRipples == null || mActiveRipples.isEmpty()) {
    mAnimating=false;
  }
 else   if (!mAnimating) {
    mAnimating=true;
    if (mAnimationRunnable == null) {
      mAnimationRunnable=new Runnable(){
        @Override public void run(){
          mAnimating=false;
          scheduleAnimation();
          invalidateSelf();
        }
      }
;
    }
    scheduleSelf(mAnimationRunnable,SystemClock.uptimeMillis() + 1000 / 60);
  }
}
