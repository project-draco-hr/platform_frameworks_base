{
  Message msg;
  if (mNetworkInfo.getDetailedState() == DetailedState.CONNECTED && !mScreenOff) {
    msg=Message.obtain(mAsyncServiceHandler,WifiManager.ENABLE_TRAFFIC_STATS_POLL,1,0);
  }
 else {
    msg=Message.obtain(mAsyncServiceHandler,WifiManager.ENABLE_TRAFFIC_STATS_POLL,0,0);
  }
  msg.sendToTarget();
}
