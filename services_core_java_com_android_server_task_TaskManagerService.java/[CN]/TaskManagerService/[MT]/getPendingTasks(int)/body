{
  ArrayList<Task> outList=new ArrayList<Task>(3);
synchronized (mTasks) {
    final SparseArray<TaskStatus> tasks=mTasks.getTasks();
    final int N=tasks.size();
    for (int i=0; i < N; i++) {
      TaskStatus ts=tasks.get(i);
      if (ts.getUid() == uid) {
        outList.add(ts.getTask());
      }
    }
  }
  return outList;
}
