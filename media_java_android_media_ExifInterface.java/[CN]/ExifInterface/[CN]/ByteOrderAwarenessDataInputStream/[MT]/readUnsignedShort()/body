{
  mPosition+=2;
  if (mPosition > mLength) {
    throw new EOFException();
  }
  int ch1=super.read();
  int ch2=super.read();
  if ((ch1 | ch2) < 0) {
    throw new EOFException();
  }
  if (mByteOrder == LITTLE_ENDIAN) {
    return ((ch2 << 8) + (ch1));
  }
 else   if (mByteOrder == BIG_ENDIAN) {
    return ((ch1 << 8) + (ch2));
  }
  throw new IOException("Invalid byte order: " + mByteOrder);
}
