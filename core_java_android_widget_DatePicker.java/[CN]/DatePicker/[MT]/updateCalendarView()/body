{
  mTempDate.setTimeInMillis(mCalendarView.getDate());
  if (mTempDate.get(Calendar.YEAR) != mYearSpinner.getValue() || mTempDate.get(Calendar.MONTH) != mMonthSpinner.getValue() || mTempDate.get(Calendar.DAY_OF_MONTH) != mDaySpinner.getValue()) {
    mTempDate.clear();
    mTempDate.set(mYearSpinner.getValue(),mMonthSpinner.getValue(),mDaySpinner.getValue());
    mCalendarView.setDate(mTempDate.getTimeInMillis(),false,false);
  }
}
