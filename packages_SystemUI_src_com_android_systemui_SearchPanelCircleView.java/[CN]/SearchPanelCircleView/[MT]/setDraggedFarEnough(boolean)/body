{
  if (farEnough != mDraggedFarEnough) {
    if (farEnough) {
      if (mCircleHidden) {
        startEnterAnimation();
      }
      if (mOffsetAnimator == null) {
        addRipple();
      }
 else {
        postDelayed(new Runnable(){
          @Override public void run(){
            addRipple();
          }
        }
,100);
      }
    }
 else {
      startAbortAnimation(null);
    }
    mDraggedFarEnough=farEnough;
  }
}
