{
  if (mOffsetAnimator != null) {
    mOffsetAnimator.addListener(new AnimatorListenerAdapter(){
      @Override public void onAnimationEnd(      Animator animation){
        if (runnable != null) {
          runnable.run();
        }
      }
    }
);
  }
 else {
    if (runnable != null) {
      runnable.run();
    }
  }
}
