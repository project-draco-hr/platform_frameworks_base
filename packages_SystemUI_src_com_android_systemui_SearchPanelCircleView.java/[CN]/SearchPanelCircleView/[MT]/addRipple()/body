{
  if (mRipples.size() > 1) {
    return;
  }
  float xInterpolation, yInterpolation;
  if (mHorizontal) {
    xInterpolation=0.75f;
    yInterpolation=0.5f;
  }
 else {
    xInterpolation=0.5f;
    yInterpolation=0.75f;
  }
  float circleCenterX=mStaticRect.left * (1.0f - xInterpolation) + mStaticRect.right * xInterpolation;
  float circleCenterY=mStaticRect.top * (1.0f - yInterpolation) + mStaticRect.bottom * yInterpolation;
  float radius=Math.max(mCircleSize,mCircleMinSize * 1.25f) * 0.75f;
  Ripple ripple=new Ripple(circleCenterX,circleCenterY,radius);
  ripple.start();
}
