{
  final int duration;
switch (transit) {
case TRANSIT_ACTIVITY_OPEN:
case TRANSIT_ACTIVITY_CLOSE:
    duration=mConfigShortAnimTime;
  break;
default :
duration=DEFAULT_APP_TRANSITION_DURATION;
break;
}
return prepareThumbnailAnimationWithDuration(a,appWidth,appHeight,duration,mDecelerateInterpolator);
}
