{
  getNextAppTransitionStartRect(taskId,mTmpStartRect);
  float width=containingFrame.width();
  float height=containingFrame.height();
  float scaleWidth=mTmpStartRect.width() / width;
  float scaleHeight=mTmpStartRect.height() / height;
  AnimationSet set=new AnimationSet(true);
  int surfaceInsetsHorizontal=surfaceInsets == null ? 0 : surfaceInsets.left + surfaceInsets.right;
  int surfaceInsetsVertical=surfaceInsets == null ? 0 : surfaceInsets.top + surfaceInsets.bottom;
  ScaleAnimation scale=new ScaleAnimation(scaleWidth,1,scaleHeight,1,(width + surfaceInsetsHorizontal) / 2,(height + surfaceInsetsVertical) / 2);
  int fromX=mTmpStartRect.left + mTmpStartRect.width() / 2 - (containingFrame.left + containingFrame.width() / 2);
  int fromY=mTmpStartRect.top + mTmpStartRect.height() / 2 - (containingFrame.top + containingFrame.height() / 2);
  TranslateAnimation translation=new TranslateAnimation(fromX,0,fromY,0);
  set.addAnimation(scale);
  set.addAnimation(translation);
  return set;
}
