{
  ensureAlarmService();
  if (alarmTimeElapsed == Long.MAX_VALUE) {
    mAlarmService.cancel(listener);
  }
 else {
    if (DEBUG) {
      Slog.d(TAG,"Setting " + tag + " for: "+ alarmTimeElapsed);
    }
    mAlarmService.set(AlarmManager.ELAPSED_REALTIME,alarmTimeElapsed,tag,listener,null);
  }
}
