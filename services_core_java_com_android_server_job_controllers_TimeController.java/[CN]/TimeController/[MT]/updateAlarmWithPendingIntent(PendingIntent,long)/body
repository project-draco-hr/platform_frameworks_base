{
  ensureAlarmService();
  if (alarmTimeElapsed == Long.MAX_VALUE) {
    mAlarmService.cancel(pi);
  }
 else {
    if (DEBUG) {
      Slog.d(TAG,"Setting " + pi.getIntent().getAction() + " for: "+ alarmTimeElapsed);
    }
    mAlarmService.set(AlarmManager.ELAPSED_REALTIME,alarmTimeElapsed,pi);
  }
}
