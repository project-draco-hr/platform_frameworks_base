{
  mHandler.post(new Runnable(){
    @Override public void run(){
      ClientRecord record=mClientRecords.get(callback.asBinder());
      if (record == null) {
        return;
      }
      if (DEBUG) {
        Log.d(TAG,"disconnect: client=" + record.getClientInfo());
      }
      record.disconnect();
    }
  }
);
}
