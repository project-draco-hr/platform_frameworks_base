{
  mHandler.post(new Runnable(){
    @Override public void run(){
      ClientRecord record=mClientRecords.get(callback.asBinder());
      if (record == null) {
        return;
      }
      if (DEBUG) {
        Log.d(TAG,"connect: client=" + record.getClientInfo() + ", seq="+ seq+ ", destinationId="+ destinationId+ ", routeId="+ routeId+ ", flags=0x"+ Integer.toHexString(flags)+ ", extras="+ extras);
      }
      record.connect(seq,destinationId,routeId,flags,extras);
    }
  }
);
}
