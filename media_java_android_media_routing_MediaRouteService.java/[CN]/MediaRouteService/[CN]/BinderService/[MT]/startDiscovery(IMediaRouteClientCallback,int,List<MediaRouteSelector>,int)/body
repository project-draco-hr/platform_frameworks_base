{
  mHandler.post(new Runnable(){
    @Override public void run(){
      ClientRecord record=mClientRecords.get(callback.asBinder());
      if (record == null) {
        return;
      }
      if (DEBUG) {
        Log.d(TAG,"startDiscovery: client=" + record.getClientInfo() + ", seq="+ seq+ ", selectors="+ selectors+ ", flags=0x"+ Integer.toHexString(flags));
      }
      record.startDiscovery(seq,selectors,flags);
    }
  }
);
}
