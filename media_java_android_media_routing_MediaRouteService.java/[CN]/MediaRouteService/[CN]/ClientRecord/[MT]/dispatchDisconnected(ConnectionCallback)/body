{
  if (callback == mConnectionCallback) {
    if (DEBUG) {
      Log.d(TAG,"disconnected");
    }
    if (mConnection != null) {
      mConnection.close();
      mConnection=null;
      try {
        mClientCallback.onDisconnected(mConnectionSeq);
      }
 catch (      RemoteException ex) {
      }
    }
  }
}
