{
  if (color != mColor || mode != mMode || onMS != mOnMS || offMS != mOffMS) {
    if (DEBUG)     Slog.v(TAG,"setLight #" + mId + ": color=#"+ Integer.toHexString(color));
    mColor=color;
    mMode=mode;
    mOnMS=onMS;
    mOffMS=offMS;
    setLight_native(mNativePointer,mId,color,mode,onMS,offMS,brightnessMode);
  }
}
