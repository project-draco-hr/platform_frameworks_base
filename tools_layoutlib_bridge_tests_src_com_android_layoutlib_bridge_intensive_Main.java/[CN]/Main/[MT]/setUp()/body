{
  File data_dir=new File(PLATFORM_DIR,"data");
  File res=new File(data_dir,"res");
  mFrameworkRepo=new FrameworkResources(new FolderWrapper(res));
  mFrameworkRepo.loadResources();
  mFrameworkRepo.loadPublicResources(getLogger());
  mProjectResources=new ResourceRepository(new FolderWrapper(TEST_RES_DIR + APP_TEST_RES),false){
    @NonNull @Override protected ResourceItem createResourceItem(    String name){
      return new ResourceItem(name);
    }
  }
;
  mProjectResources.loadResources();
  File fontLocation=new File(data_dir,"fonts");
  File buildProp=new File(PLATFORM_DIR,"build.prop");
  File attrs=new File(res,"values" + File.separator + "attrs.xml");
  mBridge=new Bridge();
  mBridge.init(ConfigGenerator.loadProperties(buildProp),fontLocation,ConfigGenerator.getEnumMap(attrs),getLayoutLog());
}
