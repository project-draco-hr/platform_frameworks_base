{
  if (!root.isDirectory()) {
    return null;
  }
  File out=new File(root,"out");
  if (!out.isDirectory()) {
    return null;
  }
  File host=new File(out,"host");
  if (!host.isDirectory()) {
    return null;
  }
  File[] hosts=host.listFiles(new FileFilter(){
    @Override public boolean accept(    File path){
      return path.isDirectory() && (path.getName().startsWith("linux-") || path.getName().startsWith("darwin-"));
    }
  }
);
  for (  File hostOut : hosts) {
    String platformDir=getPlatformDirFromHostOut(hostOut);
    if (platformDir != null) {
      return platformDir;
    }
  }
  return null;
}
