{
  for (int i=0; i < 3; i++) {
    if (sLmkdSocket == null) {
      if (openLmkdSocket() == false) {
        try {
          Thread.sleep(1000);
        }
 catch (        InterruptedException ie) {
        }
        continue;
      }
    }
    try {
      sLmkdOutputStream.write(buf.array(),0,buf.position());
      return;
    }
 catch (    IOException ex) {
      Slog.w(ActivityManagerService.TAG,"Error writing to lowmemorykiller socket");
      try {
        sLmkdSocket.close();
      }
 catch (      IOException ex2) {
      }
      sLmkdSocket=null;
    }
  }
}
