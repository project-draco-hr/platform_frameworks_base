{
  final int textLegth=mText.length();
  if (textLegth <= 0) {
    return null;
  }
  if (offset >= textLegth) {
    return null;
  }
  int start=-1;
  if (offset < 0) {
    offset=0;
    if (mImpl.isBoundary(offset)) {
      start=offset;
    }
  }
  if (start < 0) {
    start=mImpl.following(offset);
  }
  if (start < 0) {
    return null;
  }
  final int end=mImpl.following(start);
  return getRange(start,end);
}
