{
  RecentsConfiguration config=Recents.getConfiguration();
  int width=MeasureSpec.getSize(widthMeasureSpec);
  int height=MeasureSpec.getSize(heightMeasureSpec);
  Rect taskStackBounds=new Rect();
  config.getTaskStackBounds(new Rect(0,0,width,height),mSystemInsets.top,mSystemInsets.right,new Rect(),taskStackBounds);
  int stackWidthPadding=(int)(config.taskStackWidthPaddingPct * taskStackBounds.width());
  int stackHeightPadding=mContext.getResources().getDimensionPixelSize(R.dimen.recents_stack_top_padding);
  mRecyclerView.setPadding(stackWidthPadding + mSystemInsets.left,stackHeightPadding + mSystemInsets.top + mHeaderHeight,stackWidthPadding + mSystemInsets.right,mSystemInsets.bottom);
  super.onMeasure(widthMeasureSpec,heightMeasureSpec);
}
