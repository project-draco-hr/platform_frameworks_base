{
  setVisibility(View.VISIBLE);
  setAlpha(0f);
  postHideAnimationTrigger.addLastDecrementRunnable(new Runnable(){
    @Override public void run(){
      animate().alpha(1f).setDuration(mHistoryTransitionDuration).setInterpolator(mFastOutSlowInInterpolator).withLayer().start();
    }
  }
);
  mAdapter.updateTasks(getContext(),stack.computeAllTasksList());
  mIsVisible=true;
}
