{
  if (isVisible) {
    getViewTreeObserver().removeOnPreDrawListener(mEnableAnimationPredrawListener);
    getViewTreeObserver().addOnPreDrawListener(mEnableAnimationPredrawListener);
  }
 else {
    getViewTreeObserver().removeOnPreDrawListener(mEnableAnimationPredrawListener);
    mAnimate=false;
  }
}
