{
  if (!mRoundRectClippingEnabled) {
    return false;
  }
  boolean needsForContracted=mContractedChild != null && mContractedChild.getVisibility() == View.VISIBLE && mContractedWrapper.needsRoundRectClipping();
  boolean needsForExpanded=mExpandedChild != null && mExpandedChild.getVisibility() == View.VISIBLE && mExpandedWrapper.needsRoundRectClipping();
  boolean needsForHeadsUp=mExpandedChild != null && mExpandedChild.getVisibility() == View.VISIBLE && mExpandedWrapper.needsRoundRectClipping();
  return needsForContracted || needsForExpanded || needsForHeadsUp;
}
