{
  icon.setImageAlpha(1.0f,true,KeyguardAffordanceHelper.HINT_PHASE1_DURATION,Interpolators.FAST_OUT_SLOW_IN,new Runnable(){
    @Override public void run(){
      icon.setImageAlpha(icon.getRestingAlpha(),true,KeyguardAffordanceHelper.HINT_PHASE1_DURATION,Interpolators.FAST_OUT_SLOW_IN,null);
    }
  }
