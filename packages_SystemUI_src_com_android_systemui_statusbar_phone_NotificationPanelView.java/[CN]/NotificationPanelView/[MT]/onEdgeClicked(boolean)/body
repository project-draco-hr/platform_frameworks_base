{
  if ((right && getRightIcon().getVisibility() != View.VISIBLE) || (!right && getLeftIcon().getVisibility() != View.VISIBLE) || isDozing()) {
    return;
  }
  mHintAnimationRunning=true;
  mAfforanceHelper.startHintAnimation(right,new Runnable(){
    @Override public void run(){
      mHintAnimationRunning=false;
      mStatusBar.onHintFinished();
    }
  }
);
  boolean start=getLayoutDirection() == LAYOUT_DIRECTION_RTL ? right : !right;
  if (start) {
    mStatusBar.onPhoneHintStarted();
  }
 else {
    mStatusBar.onCameraHintStarted();
  }
}
