{
  super.onTrackingStopped(expand);
  mNotificationStackScroller.setOverScrolledPixels(0.0f,true,true);
  if (expand && (mStatusBar.getBarState() == StatusBarState.KEYGUARD || mStatusBar.getBarState() == StatusBarState.SHADE_LOCKED)) {
    mPageSwiper.showAllIcons(true);
  }
  if (!expand && (mStatusBar.getBarState() == StatusBarState.KEYGUARD || mStatusBar.getBarState() == StatusBarState.SHADE_LOCKED)) {
    mKeyguardBottomArea.getLockIcon().animate().alpha(0f).scaleX(2f).scaleY(2f).setInterpolator(mFastOutLinearInterpolator).setDuration(100);
  }
}
