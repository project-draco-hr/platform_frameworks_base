{
  if (!mQsExpansionEnabled || mCollapsedOnDown) {
    return false;
  }
  View header=mKeyguardShowing ? mKeyguardStatusBar : mQsContainer.getHeader();
  boolean onHeader=x >= mQsAutoReinflateContainer.getX() && x <= mQsAutoReinflateContainer.getX() + mQsAutoReinflateContainer.getWidth() && y >= header.getTop() && y <= header.getBottom();
  if (mQsExpanded) {
    return onHeader || (yDiff < 0 && isInQsArea(x,y));
  }
 else {
    return onHeader;
  }
}
