{
  mHeaderAnimating=true;
  mHeader.animate().y(-mHeader.getHeight()).setStartDelay(0).setDuration(StackStateAnimator.ANIMATION_DURATION_STANDARD).setInterpolator(mFastOutSlowInInterpolator).setListener(new AnimatorListenerAdapter(){
    @Override public void onAnimationEnd(    Animator animation){
      mHeader.animate().setListener(null);
      mHeaderAnimating=false;
      updateQsState();
    }
  }
).start();
  mQsContainer.animate().y(-mQsContainer.getHeight()).setStartDelay(0).setDuration(StackStateAnimator.ANIMATION_DURATION_STANDARD).setInterpolator(mFastOutSlowInInterpolator).start();
}
