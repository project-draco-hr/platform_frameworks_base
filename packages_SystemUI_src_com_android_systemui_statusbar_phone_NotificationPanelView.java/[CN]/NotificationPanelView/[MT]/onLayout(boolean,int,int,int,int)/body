{
  super.onLayout(changed,left,top,right,bottom);
  int keyguardBottomMargin=((MarginLayoutParams)mKeyguardStatusView.getLayoutParams()).bottomMargin;
  mNotificationStackScroller.setTopPadding(mStatusBar.getBarState() == StatusBarState.KEYGUARD ? mKeyguardStatusView.getBottom() + keyguardBottomMargin : mHeader.getBottom() + mNotificationTopPadding,mAnimateNextTopPaddingChange);
  mAnimateNextTopPaddingChange=false;
}
