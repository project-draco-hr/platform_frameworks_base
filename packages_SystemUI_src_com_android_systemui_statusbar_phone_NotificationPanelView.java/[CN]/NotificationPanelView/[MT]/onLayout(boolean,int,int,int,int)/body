{
  super.onLayout(changed,left,top,right,bottom);
  int keyguardBottomMargin=((MarginLayoutParams)mKeyguardStatusView.getLayoutParams()).bottomMargin;
  mNotificationStackScroller.setTopPadding(mStatusBar.isOnKeyguard() ? mKeyguardStatusView.getBottom() + keyguardBottomMargin : mHeader.getBottom() + mNotificationTopPadding);
}
