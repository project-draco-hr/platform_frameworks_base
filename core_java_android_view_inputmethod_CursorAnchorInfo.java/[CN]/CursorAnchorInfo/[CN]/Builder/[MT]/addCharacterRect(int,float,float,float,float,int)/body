{
  final int newFlags;
  final float left;
  final float right;
  if (leadingEdgeX <= trailingEdgeX) {
    newFlags=flags;
    left=leadingEdgeX;
    right=trailingEdgeX;
  }
 else {
    newFlags=flags | FLAG_IS_RTL;
    left=trailingEdgeX;
    right=leadingEdgeX;
  }
  return addCharacterBounds(index,left,leadingEdgeY,right,trailingEdgeY,newFlags);
}
