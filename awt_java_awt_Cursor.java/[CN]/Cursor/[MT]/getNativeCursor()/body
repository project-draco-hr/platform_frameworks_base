{
  if (nativeCursor != null) {
    return nativeCursor;
  }
  Toolkit toolkit=Toolkit.getDefaultToolkit();
  if (type != CUSTOM_CURSOR) {
    nativeCursor=toolkit.createNativeCursor(type);
  }
 else {
    nativeCursor=toolkit.createCustomNativeCursor(image,hotSpot,name);
  }
  return nativeCursor;
}
