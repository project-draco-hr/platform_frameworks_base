{
  mSyncFlexTimeSecs=b.mSyncFlexTimeSecs;
  mSyncRunTimeSecs=b.mSyncRunTimeSecs;
  mAccountToSync=b.mAccount;
  mAuthority=b.mAuthority;
  mIsPeriodic=(b.mSyncType == Builder.SYNC_TYPE_PERIODIC);
