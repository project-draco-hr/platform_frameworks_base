{
synchronized (mSyncRoot) {
    if (mHeadless) {
      registerDisplayAdapterLocked(new HeadlessDisplayAdapter(mSyncRoot,mContext,mHandler,mDisplayAdapterListener));
    }
 else {
      registerDisplayAdapterLocked(new LocalDisplayAdapter(mSyncRoot,mContext,mHandler,mDisplayAdapterListener));
    }
  }
}
