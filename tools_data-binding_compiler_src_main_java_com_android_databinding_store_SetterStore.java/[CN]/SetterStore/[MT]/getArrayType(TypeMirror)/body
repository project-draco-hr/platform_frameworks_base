{
switch (type.getKind()) {
case BOOLEAN:
    return "Z";
case BYTE:
  return "B";
case SHORT:
return "S";
case INT:
return "I";
case LONG:
return "J";
case CHAR:
return "C";
case FLOAT:
return "F";
case DOUBLE:
return "D";
case ARRAY:
return "[" + getArrayType(((ArrayType)type).getComponentType());
case DECLARED:
return "L" + ((TypeElement)((DeclaredType)type).asElement()).getQualifiedName().toString() + ";";
}
return "-- no type --";
}
