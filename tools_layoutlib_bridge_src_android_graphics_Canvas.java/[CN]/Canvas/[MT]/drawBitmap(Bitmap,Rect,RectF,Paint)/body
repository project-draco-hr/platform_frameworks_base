{
  if (src == null) {
    drawBitmap(bitmap,0,0,bitmap.getWidth(),bitmap.getHeight(),(int)dst.left,(int)dst.top,(int)dst.right,(int)dst.bottom,paint);
  }
 else {
    drawBitmap(bitmap,src.left,src.top,src.width(),src.height(),(int)dst.left,(int)dst.top,(int)dst.right,(int)dst.bottom,paint);
  }
}
