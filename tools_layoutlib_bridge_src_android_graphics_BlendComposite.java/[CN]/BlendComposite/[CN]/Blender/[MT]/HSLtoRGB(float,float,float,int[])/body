{
  int R, G, B;
  if (s - 0.01f <= 0.0f) {
    R=(int)(l * 255.0f);
    G=(int)(l * 255.0f);
    B=(int)(l * 255.0f);
  }
 else {
    float var_1, var_2;
    if (l < 0.5f) {
      var_2=l * (1 + s);
    }
 else {
      var_2=(l + s) - (s * l);
    }
    var_1=2 * l - var_2;
    R=(int)(255.0f * hue2RGB(var_1,var_2,h + (1.0f / 3.0f)));
    G=(int)(255.0f * hue2RGB(var_1,var_2,h));
    B=(int)(255.0f * hue2RGB(var_1,var_2,h - (1.0f / 3.0f)));
  }
  rgb[0]=R;
  rgb[1]=G;
  rgb[2]=B;
}
