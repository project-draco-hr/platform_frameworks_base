{
  int id=me.id;
  if (id != MouseEvent.MOUSE_CLICKED) {
    Event evt=new Event(me.source,id,null);
    evt.x=me.getX();
    evt.y=me.getY();
    int mod=me.getModifiers();
    evt.modifiers=mod & (Event.ALT_MASK | Event.META_MASK);
    if (id == MouseEvent.MOUSE_PRESSED) {
      evt.clickCount=me.getClickCount();
    }
    return evt;
  }
  return null;
}
