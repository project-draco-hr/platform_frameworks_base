{
  LayoutParams lp=getLayoutParams(child);
  int hMargins=getMargin(child,true,true) + getMargin(child,false,true);
  int childWidthMeasureSpec=getChildMeasureSpec(parentWidthMeasureSpec,mPaddingLeft + mPaddingRight + hMargins,lp.width);
  int vMargins=getMargin(child,true,false) + getMargin(child,false,false);
  int childHeightMeasureSpec=getChildMeasureSpec(parentHeightMeasureSpec,mPaddingTop + mPaddingBottom + vMargins,lp.height);
  child.measure(childWidthMeasureSpec,childHeightMeasureSpec);
}
