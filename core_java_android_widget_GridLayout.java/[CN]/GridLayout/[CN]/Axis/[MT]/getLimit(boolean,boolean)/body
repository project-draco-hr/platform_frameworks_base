{
  int defaultValue=maximizing ? MAX_VALUE : MIN_VALUE;
  if (lowerBound) {
    int[] result=init(defaultValue,defaultValue,1000);
    computeLocations(result,maximizing);
    int delta=result[0];
    for (int i=0; i < result.length; i++) {
      result[i]-=delta;
    }
    return result;
  }
 else {
    int[] result=init(defaultValue,0,defaultValue);
    computeLocations(result,maximizing);
    return result;
  }
}
