{
  int N=getCount() + 1;
  boolean changed=false;
  for (int i=0; i < N; i++) {
    changed=false;
    for (int j=0, length=arcs.length; j < length; j++) {
      changed=changed | relax(locations,arcs[j]);
    }
    if (!changed) {
      if (DEBUG) {
        Log.d(TAG,"Iteration " + " completed after " + (1 + i) + " steps out of "+ N);
      }
      break;
    }
  }
  if (changed) {
    Log.d(TAG,"*** Algorithm failed to terminate ***");
  }
  return locations;
}
