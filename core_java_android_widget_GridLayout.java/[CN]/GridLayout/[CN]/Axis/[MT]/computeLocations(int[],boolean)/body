{
  leadingMargins=computeMargins(true);
  trailingMargins=computeMargins(false);
  solve(getArcs(maximizing),locations,maximizing);
  int delta=0;
  for (int i=0; i < getCount(); i++) {
    int margins=leadingMargins[i] + trailingMargins[i + 1];
    delta+=margins;
    locations[i + 1]+=delta;
  }
}
