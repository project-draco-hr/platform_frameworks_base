{
  if (mBattery == null || !mBattery.isPowered(BatteryManager.BATTERY_PLUGGED_ANY)) {
    return "battery";
  }
  if (mMinScreenOff >= 0 && (mPower == null || mPower.timeSinceScreenWasLastOn() < mMinScreenOff)) {
    return "screen";
  }
  if (mMinAlarm >= 0 && (mAlarm == null || mAlarm.timeToNextAlarm() < mMinAlarm)) {
    return "alarm";
  }
  return null;
}
