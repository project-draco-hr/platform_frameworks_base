{
  if (DBG) {
    Log.d(LOG_TAG,"--- checkParams");
  }
  if (mBuilder == null) {
    Log.e(LOG_TAG,"--- builder is null.");
    return false;
  }
 else   if (mSizeTitle == null || mSizeNames == null || mSizeDisplayInts == null || mSizeSendInts == null) {
    Log.e(LOG_TAG,"--- size alert params are null.");
    return false;
  }
 else   if (mSizeNames.length != mSizeDisplayInts.length && mSizeSendInts.length != mSizeDisplayInts.length) {
    Log.e(LOG_TAG,"--- the length of size alert params are " + "different.");
    return false;
  }
  return true;
}
