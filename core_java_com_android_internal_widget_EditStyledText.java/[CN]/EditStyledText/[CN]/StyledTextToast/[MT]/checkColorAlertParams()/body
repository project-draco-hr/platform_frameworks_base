{
  if (DBG) {
    Log.d(LOG_TAG,"--- checkParams");
  }
  if (mBuilder == null) {
    Log.e(LOG_TAG,"--- builder is null.");
    return false;
  }
 else   if (mColorTitle == null || mColorNames == null || mColorInts == null) {
    Log.e(LOG_TAG,"--- color alert params are null.");
    return false;
  }
 else   if (mColorNames.length != mColorInts.length) {
    Log.e(LOG_TAG,"--- the length of color alert params are " + "different.");
    return false;
  }
  return true;
}
