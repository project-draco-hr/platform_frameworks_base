{
  Editable txt=mEST.getText();
  int len=txt.length();
  if (txt.getSpans(0,len - 1,ParagraphStyle.class).length > 0 || txt.getSpans(0,len - 1,QuoteSpan.class).length > 0 || txt.getSpans(0,len - 1,CharacterStyle.class).length > 0 || mEST.mBackgroundColor != DEFAULT_BACKGROUND_COLOR) {
    return true;
  }
  return false;
}
