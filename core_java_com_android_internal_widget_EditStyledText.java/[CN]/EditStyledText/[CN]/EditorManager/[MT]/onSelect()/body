{
  if (DBG) {
    Log.d(LOG_TAG,"--- onSelect:" + mCurStart + ","+ mCurEnd);
  }
  if (mCurStart >= 0 && mCurStart <= mEST.getText().length() && mCurEnd >= 0 && mCurEnd <= mEST.getText().length()) {
    mEST.setSelection(mCurStart,mCurEnd);
    mState=STATE_SELECTED;
  }
 else {
    Log.e(LOG_TAG,"Select is on, but cursor positions are illigal.:" + mEST.getText().length() + ","+ mCurStart+ ","+ mCurEnd);
  }
}
