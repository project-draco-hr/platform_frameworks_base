{
  if (DBG) {
    Log.d(LOG_TAG,"--- setSelectEndPos:" + mEST.getSelectionStart());
  }
  int curpos=mEST.getSelectionStart();
  if (curpos < mCurStart) {
    if (DBG) {
      Log.d(LOG_TAG,"--- setSelectEndPos: swap is done.");
    }
    mCurEnd=mCurStart;
    mCurStart=curpos;
  }
 else {
    mCurEnd=curpos;
  }
  onSelect();
}
