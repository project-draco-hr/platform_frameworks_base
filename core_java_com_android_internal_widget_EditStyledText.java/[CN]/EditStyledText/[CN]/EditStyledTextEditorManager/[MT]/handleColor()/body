{
  if (DBG) {
    Log.d(LOG_TAG,"--- handleColor");
  }
  if (!mEditFlag) {
    return;
  }
  if (mMode == MODE_NOTHING || mMode == MODE_SELECT) {
    mMode=MODE_COLOR;
    if (mState == STATE_SELECTED) {
      mState=STATE_SELECT_FIX;
    }
 else {
      handleSelect();
    }
  }
 else   if (mMode != MODE_COLOR) {
    handleCancel();
    mMode=MODE_COLOR;
    handleSize();
  }
 else   if (mState == STATE_SELECT_FIX) {
    mEST.setHintMessage(HINT_MSG_NULL);
  }
}
