{
  Slog.v(TAG,(enabled ? "en" : "dis") + "abling notifications for " + pkg);
  mAppOps.setMode(AppOpsManager.OP_POST_NOTIFICATION,uid,pkg,enabled ? AppOpsManager.MODE_ALLOWED : AppOpsManager.MODE_IGNORED);
  if (ENABLE_BLOCKED_NOTIFICATIONS && !enabled) {
    cancelAllNotificationsInt(MY_UID,MY_PID,pkg,0,0,true,UserHandle.getUserId(uid),REASON_PACKAGE_BANNED,null);
  }
}
