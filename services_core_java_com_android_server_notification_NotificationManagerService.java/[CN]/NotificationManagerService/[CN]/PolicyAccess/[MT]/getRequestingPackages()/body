{
  final ParceledListSlice list=AppGlobals.getPackageManager().getPackagesHoldingPermissions(PERM,0,ActivityManager.getCurrentUser());
  final List<PackageInfo> pkgs=list.getList();
  if (pkgs == null || pkgs.isEmpty())   return new String[0];
  final int N=pkgs.size();
  final String[] rt=new String[N];
  for (int i=0; i < N; i++) {
    rt[i]=pkgs.get(i).packageName;
  }
  return rt;
}
