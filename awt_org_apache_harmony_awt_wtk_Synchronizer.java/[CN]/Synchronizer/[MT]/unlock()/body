{
synchronized (this) {
    if (acquestCounter == 0) {
      throw new RuntimeException(Messages.getString("awt.20"));
    }
    if (owner != Thread.currentThread()) {
      throw new RuntimeException(Messages.getString("awt.21"));
    }
    acquestCounter--;
    if (acquestCounter == 0) {
      if (waitQueue.size() > 0) {
        acquestCounter=1;
        owner=waitQueue.removeFirst();
        owner.interrupt();
      }
 else {
        owner=null;
      }
    }
  }
}
