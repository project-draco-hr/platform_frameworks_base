{
  boolean state=mHoldingScreen.isHeld();
  if (holding != state) {
    if (holding) {
      mHoldingScreen.acquire();
    }
 else {
      long curTime=SystemClock.uptimeMillis();
      mPowerManager.userActivity(curTime,false,LocalPowerManager.OTHER_EVENT);
      mHoldingScreen.release();
    }
  }
}
