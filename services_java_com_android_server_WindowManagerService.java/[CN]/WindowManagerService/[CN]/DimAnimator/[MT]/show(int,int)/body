{
  if (!mDimShown) {
    if (SHOW_TRANSACTIONS)     Slog.i(TAG,"  DIM " + mDimSurface + ": SHOW pos=(0,0) ("+ dw+ "x"+ dh+ ")");
    mDimShown=true;
    try {
      mDimSurface.setPosition(0,0);
      mDimSurface.setSize(dw,dh);
      mDimSurface.show();
    }
 catch (    RuntimeException e) {
      Slog.w(TAG,"Failure showing dim surface",e);
    }
  }
}
