{
  mDataDescription=new ClipDescription(mData);
  mNotifiedWindows.clear();
  mDragInProgress=true;
  DragEvent evt=DragEvent.obtain(DragEvent.ACTION_DRAG_STARTED,touchX,touchY,mDataDescription,null);
  if (DEBUG_DRAG) {
    Slog.d(TAG,"broadcasting DRAG_STARTED: " + evt);
  }
  final int N=mWindows.size();
  for (int i=0; i < N; i++) {
    sendDragStartedLw(mWindows.get(i),evt);
  }
  evt.recycle();
}
