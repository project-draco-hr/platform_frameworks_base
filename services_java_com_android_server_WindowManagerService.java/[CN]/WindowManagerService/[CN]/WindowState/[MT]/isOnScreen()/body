{
  final AppWindowToken atoken=mAppToken;
  if (atoken != null) {
    return mSurface != null && mPolicyVisibility && !mDestroying && ((!mAttachedHidden && !atoken.hiddenRequested) || mAnimating || atoken.animating);
  }
 else {
    return mSurface != null && mPolicyVisibility && !mDestroying && (!mAttachedHidden || mAnimating);
  }
}
