{
  try {
    if (win.mSurface != null) {
      win.mSurface.show();
      if (win.mTurnOnScreen) {
        win.mTurnOnScreen=false;
        mTurnOnScreen=true;
      }
    }
    return true;
  }
 catch (  RuntimeException e) {
    Log.w(TAG,"Failure showing surface " + win.mSurface + " in "+ win);
  }
  reclaimSomeSurfaceMemoryLocked(win,"show");
  return false;
}
