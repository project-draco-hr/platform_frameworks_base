{
  if (id != null && id.provider != null && !id.provider.zombie && !id.host.zombie) {
    id.views=views;
    if (id.host.callbacks != null) {
      try {
        id.host.callbacks.updateGadget(id.gadgetId,views);
      }
 catch (      RemoteException e) {
        id.host.callbacks=null;
      }
    }
  }
}
