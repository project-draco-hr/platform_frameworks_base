{
  mContext=context;
  mServiceListener=l;
  mAdapter=BluetoothAdapter.getDefaultAdapter();
  mIsClosed=false;
  IBluetoothManager mgr=mAdapter.getBluetoothManager();
  if (mgr != null) {
    try {
      mgr.registerStateChangeCallback(mBluetoothStateChangeCallback);
    }
 catch (    RemoteException e) {
      Log.e(TAG,"",e);
    }
  }
  doBind();
}
