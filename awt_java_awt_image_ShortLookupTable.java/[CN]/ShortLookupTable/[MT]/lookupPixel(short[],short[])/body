{
  if (dst == null) {
    dst=new short[src.length];
  }
  int offset=getOffset();
  if (getNumComponents() == 1) {
    for (int i=0; i < src.length; i++) {
      dst[i]=data[0][src[i] - offset];
    }
  }
 else {
    for (int i=0; i < getNumComponents(); i++) {
      dst[i]=data[i][src[i] - offset];
    }
  }
  return dst;
}
