{
  int count=end - start;
  float[] advances=new float[count];
  native_getTextRunAdvances(nativePaint,nativeTypeface,text,start,count,contextStart,contextEnd - contextStart,isRtl,advances,0);
  int startOffset=offset - start;
  float sum=0;
  for (int i=0; i < startOffset; i++) {
    sum+=advances[i];
  }
  return sum;
}
