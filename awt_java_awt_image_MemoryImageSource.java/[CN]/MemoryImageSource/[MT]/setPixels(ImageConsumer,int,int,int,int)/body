{
  int pixelOff=scanline * y + offset + x;
switch (dataType) {
case DATA_TYPE_BYTE:
    con.setPixels(x,y,w,h,cm,bData,pixelOff,scanline);
  break;
case DATA_TYPE_INT:
con.setPixels(x,y,w,h,cm,iData,pixelOff,scanline);
break;
default :
throw new IllegalArgumentException(Messages.getString("awt.22A"));
}
}
