{
  con.setDimensions(width,height);
  con.setProperties(properties);
  con.setColorModel(cm);
  con.setHints(animated ? (fullbuffers ? (ImageConsumer.TOPDOWNLEFTRIGHT | ImageConsumer.COMPLETESCANLINES) : ImageConsumer.RANDOMPIXELORDER) : (ImageConsumer.TOPDOWNLEFTRIGHT | ImageConsumer.COMPLETESCANLINES | ImageConsumer.SINGLEPASS| ImageConsumer.SINGLEFRAME));
}
