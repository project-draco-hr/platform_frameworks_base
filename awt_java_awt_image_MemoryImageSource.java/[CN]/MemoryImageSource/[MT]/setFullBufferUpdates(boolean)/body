{
  if (this.fullbuffers == fullbuffers) {
    return;
  }
  this.fullbuffers=fullbuffers;
  if (animated) {
    Object consAr[]=consumers.toArray();
    for (    Object element : consAr) {
      ImageConsumer con=(ImageConsumer)element;
      try {
        if (fullbuffers) {
          con.setHints(ImageConsumer.TOPDOWNLEFTRIGHT | ImageConsumer.COMPLETESCANLINES);
        }
 else {
          con.setHints(ImageConsumer.RANDOMPIXELORDER);
        }
      }
 catch (      Exception e) {
        if (isConsumer(con)) {
          con.imageComplete(ImageConsumer.IMAGEERROR);
        }
        if (isConsumer(con)) {
          removeConsumer(con);
        }
      }
    }
  }
}
