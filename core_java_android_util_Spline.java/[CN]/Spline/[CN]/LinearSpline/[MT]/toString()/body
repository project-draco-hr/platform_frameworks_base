{
  StringBuilder str=new StringBuilder();
  final int n=mX.length;
  str.append("LinearSpline{[");
  for (int i=0; i < n; i++) {
    if (i != 0) {
      str.append(", ");
    }
    str.append("(").append(mX[i]);
    str.append(", ").append(mY[i]);
    if (i < n - 1) {
      str.append(": ").append(mM[i]);
    }
    str.append(")");
  }
  str.append("]}");
  return str.toString();
}
