{
  Request ret=null;
  if (mNetworkConnected && mPending.containsKey(host)) {
    LinkedList<Request> reqList=mPending.get(host);
    if (!reqList.isEmpty()) {
      ret=reqList.removeFirst();
    }
 else {
      mPending.remove(host);
    }
  }
  if (HttpLog.LOGV)   HttpLog.v("RequestQueue.getRequest(" + host + ") => "+ ret);
  return ret;
}
