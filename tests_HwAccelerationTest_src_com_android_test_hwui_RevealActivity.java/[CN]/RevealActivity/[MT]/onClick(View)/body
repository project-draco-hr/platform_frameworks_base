{
  ValueAnimator animator=ViewAnimationUtils.createCircularReveal(view,view.getWidth() / 2,view.getHeight() / 2,0,Math.max(view.getWidth(),view.getHeight()));
  animator.setDuration(DURATION);
  animator.setAllowRunningAsynchronously(true);
  animator.start();
  mShouldBlock=!mShouldBlock;
  if (mShouldBlock) {
    view.post(sBlockThread);
  }
}
