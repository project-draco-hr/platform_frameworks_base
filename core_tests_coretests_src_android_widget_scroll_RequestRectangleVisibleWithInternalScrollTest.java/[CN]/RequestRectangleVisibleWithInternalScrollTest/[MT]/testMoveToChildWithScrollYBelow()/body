{
  assertTrue(mScrollToBlob.hasFocus());
  ViewAsserts.assertOffScreenBelow(mScrollView,mTextBlob);
  sendKeys(KeyEvent.KEYCODE_DPAD_CENTER);
  getInstrumentation().waitForIdleSync();
  ViewAsserts.assertOnScreen(mScrollView,mTextBlob);
  ViewAsserts.assertHasScreenCoordinates(mScrollView,mTextBlob,0,mScrollView.getHeight() - mTextBlob.getHeight() - mScrollView.getVerticalFadingEdgeLength());
}
