{
  boolean rval=(domain != null && domain.length() != 0);
  if (rval) {
    try {
      rval=domain.equals(NetworkUtils.numericToInetAddress(domain).getHostAddress());
    }
 catch (    IllegalArgumentException e) {
      if (LOG_ENABLED) {
        Log.v(TAG,"DomainNameValidator.isIpAddress(): " + e);
      }
      rval=false;
    }
  }
  return rval;
}
