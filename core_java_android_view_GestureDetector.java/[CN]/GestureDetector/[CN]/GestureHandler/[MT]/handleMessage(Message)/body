{
switch (msg.what) {
case SHOW_PRESS:
    mListener.onShowPress(mCurrentDownEvent);
  break;
case LONG_PRESS:
dispatchLongPress();
break;
case TAP:
if (mDoubleTapListener != null && !mStillDown) {
mDoubleTapListener.onSingleTapConfirmed(mCurrentDownEvent);
}
break;
default :
throw new RuntimeException("Unknown message " + msg);
}
}
