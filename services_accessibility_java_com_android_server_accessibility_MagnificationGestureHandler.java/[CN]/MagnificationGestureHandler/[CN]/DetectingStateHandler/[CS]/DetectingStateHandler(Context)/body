{
  mMultiTapTimeSlop=ViewConfiguration.getDoubleTapTimeout() + context.getResources().getInteger(com.android.internal.R.integer.config_screen_magnification_multi_tap_adjustment);
  mTapDistanceSlop=ViewConfiguration.get(context).getScaledTouchSlop();
