{
  String testContent[]={"The five boxing wizards jump quickly","The quick brown fox jumps over the lazy dog","Jackdaws love my big sphinx of quartz"};
  String srcPaths[]={"/test0.txt","/test1.txt","/test2.txt"};
  List<Uri> testFiles=Lists.newArrayList(mStorage.createFile(SRC_ROOT,srcPaths[0],"text/plain",testContent[0].getBytes()),mStorage.createFile(SRC_ROOT,srcPaths[1],"text/plain",testContent[1].getBytes()),mStorage.createFile(SRC_ROOT,srcPaths[2],"text/plain",testContent[2].getBytes()));
  assertDstFileCountEquals(0);
  startService(createCopyIntent(testFiles));
  mResolver.waitForChanges(6);
  assertDstFileCountEquals(3);
  for (  String path : srcPaths) {
    assertCopied(path);
  }
}
