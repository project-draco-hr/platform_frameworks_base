{
  final Uri dstFileQuery=DocumentsContract.buildChildDocumentsUri(AUTHORITY,mRoots.get(1).documentId);
  Cursor cursor=null;
  try {
    cursor=mClient.query(dstFileQuery,null,null,null,null);
    while (cursor.moveToNext()) {
      if (filename.equals(getCursorString(cursor,Document.COLUMN_DISPLAY_NAME))) {
        return DocumentsContract.buildDocumentUri(AUTHORITY,getCursorString(cursor,Document.COLUMN_DOCUMENT_ID));
      }
    }
  }
  finally {
    IoUtils.closeQuietly(cursor);
  }
  return null;
}
