{
  int nt=mPhone.getServiceState().getNetworkType();
  if ((nt == TelephonyManager.NETWORK_TYPE_CDMA) || (nt == TelephonyManager.NETWORK_TYPE_1xRTT) || (nt == TelephonyManager.NETWORK_TYPE_EVDO_0)|| (nt == TelephonyManager.NETWORK_TYPE_EVDO_A)|| (nt == TelephonyManager.NETWORK_TYPE_EVDO_B)|| (nt == TelephonyManager.NETWORK_TYPE_EHRPD)) {
    return SystemProperties.get("ro.cdma.data_retry_config");
  }
 else {
    if (forDefault) {
      return SystemProperties.get("ro.gsm.data_retry_config");
    }
 else {
      return SystemProperties.get("ro.gsm.2nd_data_retry_config");
    }
  }
}
