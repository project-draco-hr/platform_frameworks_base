{
  if (DBG)   Log.d(LOG_TAG,"setEnabled(" + id + ", "+ enable+ ") with old state = "+ dataEnabled[id]+ " and enabledCount = "+ enabledCount);
  if (dataEnabled[id] != enable) {
    dataEnabled[id]=enable;
    if (enable) {
      enabledCount++;
      if (enabledCount == 1) {
        setPrivateDataEnabled(true);
      }
    }
 else {
      enabledCount--;
      if (enabledCount == 0) {
        setPrivateDataEnabled(false);
      }
    }
  }
}
