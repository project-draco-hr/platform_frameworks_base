{
  super(context,attrs);
  mDensity=getResources().getDisplayMetrics().density;
  setOutlineProvider(new ViewOutlineProvider(){
    @Override public boolean getOutline(    View view,    Outline outline){
      if (!mCustomOutline) {
        outline.setRect(0,mClipTopAmount,getWidth(),Math.max(mActualHeight,mClipTopAmount));
      }
 else {
        outline.setRect(mOutlineRect);
      }
      return true;
    }
  }
);
}
