{
  mRS.scriptCBegin();
  mRS.scriptCSetClearColor(0.0f,0.0f,0.1f,0.5f);
  mRS.scriptCSetScript(mRes,R.raw.rollo2);
  mRS.scriptCSetRoot(true);
  mScript=mRS.scriptCCreate();
  mAllocStateBuf=new int[]{0,38,0};
  mAllocState=mRS.allocationCreatePredefSized(RenderScript.ElementPredefined.USER_I32,mAllocStateBuf.length);
  mScript.bindAllocation(mAllocState,0);
  mScript.bindAllocation(mAllocIconID,1);
  setPosition(0,0);
  mRS.contextBindRootScript(mScript);
}
