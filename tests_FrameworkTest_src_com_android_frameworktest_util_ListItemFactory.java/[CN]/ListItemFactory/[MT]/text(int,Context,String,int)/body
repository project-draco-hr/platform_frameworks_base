{
  TextView result=new TextView(context);
  result.setHeight(desiredHeight);
  result.setText(text);
  final ViewGroup.LayoutParams lp=new AbsListView.LayoutParams(ViewGroup.LayoutParams.FILL_PARENT,ViewGroup.LayoutParams.WRAP_CONTENT);
  result.setLayoutParams(lp);
  result.setId(position);
  result.setTag("text");
  return result;
}
