{
switch (mStackBoxes.size()) {
case 0:
    throw new RuntimeException("moveHomeStackBox: No home StackBox!");
case 1:
  return false;
case 2:
if (mHomeOnTop != toTop) {
  final StackBox home=mStackBoxes.remove(toTop ? 0 : 1);
  mStackBoxes.add(toTop ? 1 : 0,home);
  mHomeOnTop=toTop;
  return true;
}
return false;
default :
throw new RuntimeException("moveHomeStackBox: Too many toplevel StackBoxes!");
}
}
