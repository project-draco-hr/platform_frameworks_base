{
  if (position < getCount()) {
    RemoteViews rv=mRemoteViewsList.get(position);
    View v;
    if (convertView != null && rv != null && convertView.getId() == rv.getLayoutId()) {
      v=convertView;
      rv.reapply(mContext,v);
    }
 else {
      v=rv.apply(mContext,parent);
    }
    return v;
  }
 else {
    return null;
  }
}
