{
  mCurDisplay=mDisplayManager.getDisplay(Display.DEFAULT_DISPLAY);
  boolean screenOn=mCurDisplay.getState() != Display.STATE_OFF;
  ;
  if (!screenOn && mScreenOn) {
    mScreenOn=false;
    becomeInactiveIfAppropriateLocked();
  }
 else   if (screenOn) {
    mScreenOn=true;
    becomeActiveLocked("screen");
  }
}
