{
  if (TextUtils.isEmpty(charSequence)) {
    throw new IllegalArgumentException("charSequence is empty");
  }
  final SpannableStringBuilder spannableString=new SpannableStringBuilder(charSequence,start,end);
  final SpellCheckSpan[] spans=spannableString.getSpans(0,spannableString.length(),SpellCheckSpan.class);
  for (int i=0; i < spans.length; ++i) {
    spannableString.removeSpan(spans[i]);
  }
  mCharSequence=spannableString;
  mCookie=cookie;
  mSequenceNumber=sequenceNumber;
}
