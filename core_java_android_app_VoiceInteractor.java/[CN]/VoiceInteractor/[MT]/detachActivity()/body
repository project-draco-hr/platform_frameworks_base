{
  ArrayList<Request> reqs=makeRequestList();
  if (reqs != null) {
    for (int i=0; i < reqs.size(); i++) {
      Request req=reqs.get(i);
      req.onDetached();
      req.mActivity=null;
      req.mContext=null;
    }
  }
  if (!mRetaining) {
    reqs=makeRequestList();
    if (reqs != null) {
      for (int i=0; i < reqs.size(); i++) {
        Request req=reqs.get(i);
        req.cancel();
      }
    }
    mActiveRequests.clear();
  }
  mContext=null;
  mActivity=null;
}
