{
  if (mActivity == activity) {
    return;
  }
  mContext=activity;
  mActivity=activity;
  ArrayList<Request> reqs=makeRequestList();
  if (reqs != null) {
    for (int i=0; i < reqs.size(); i++) {
      Request req=reqs.get(i);
      req.mContext=activity;
      req.mActivity=activity;
      req.onAttached(activity);
    }
  }
}
