{
  if (mStatusBarKeyguardViewManager.isShowing()) {
    if (UnlockMethodCache.getInstance(mContext).isMethodInsecure() && mNotificationPanel.isLaunchTransitionRunning()) {
      action.onDismiss();
      mNotificationPanel.setLaunchTransitionEndRunnable(new Runnable(){
        @Override public void run(){
          mStatusBarKeyguardViewManager.dismiss();
        }
      }
);
    }
 else {
      mStatusBarKeyguardViewManager.dismissWithAction(action);
    }
  }
 else {
    action.onDismiss();
  }
}
