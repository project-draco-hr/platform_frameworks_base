{
  mDisplay=((WindowManager)mContext.getSystemService(Context.WINDOW_SERVICE)).getDefaultDisplay();
  mWindowManager=IWindowManager.Stub.asInterface(ServiceManager.getService(Context.WINDOW_SERVICE));
  mDreamManager=IDreamManager.Stub.asInterface(ServiceManager.checkService("dreams"));
  super.start();
  addNavigationBar();
  if (ENABLE_INTRUDERS)   addIntruderView();
  mUniverseBackground=new UniverseBackground(mContext);
  mUniverseBackground.setVisibility(View.GONE);
  WindowManagerImpl.getDefault().addView(mUniverseBackground,mUniverseBackground.getLayoutParams(mDisplay));
  mIconPolicy=new PhoneStatusBarPolicy(mContext);
}
