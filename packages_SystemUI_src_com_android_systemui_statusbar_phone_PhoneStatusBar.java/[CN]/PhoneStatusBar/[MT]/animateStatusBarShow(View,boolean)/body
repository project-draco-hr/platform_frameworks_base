{
  v.animate().cancel();
  v.setVisibility(View.VISIBLE);
  if (!animate) {
    v.setAlpha(1f);
    return;
  }
  v.animate().alpha(1f).setDuration(320).setInterpolator(ALPHA_IN).setStartDelay(50).withEndAction(null);
  if (mKeyguardFadingAway) {
    v.animate().setDuration(mKeyguardFadingAwayDuration).setInterpolator(mLinearOutSlowIn).setStartDelay(mKeyguardFadingAwayDelay).start();
  }
}
