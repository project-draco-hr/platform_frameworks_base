{
  if (view == null) {
    return;
  }
  WindowManager.LayoutParams lp=(WindowManager.LayoutParams)view.getLayoutParams();
  if (slippery) {
    lp.flags|=WindowManager.LayoutParams.FLAG_SLIPPERY;
  }
 else {
    lp.flags&=~WindowManager.LayoutParams.FLAG_SLIPPERY;
  }
  WindowManagerImpl.getDefault().updateViewLayout(view,lp);
}
