{
  mNotificationPanel.animate().alpha(0f).setStartDelay(0).setDuration(FADE_KEYGUARD_DURATION_PULSING).setInterpolator(ScrimController.KEYGUARD_FADE_OUT_INTERPOLATOR).withLayer().withEndAction(new Runnable(){
    @Override public void run(){
      mNotificationPanel.setAlpha(1f);
      hideKeyguard();
    }
  }
).start();
}
