{
  if (mState != StatusBarState.KEYGUARD && !mNotificationPanel.isDozing()) {
    return;
  }
  mNotificationPanel.setDozing(mDozing,mDozeScrimController.isPulsing());
  if (mDozing) {
    mStackScroller.setDark(true,false);
  }
 else {
    mStackScroller.setDark(false,false);
  }
  mScrimController.setDozing(mDozing);
  mDozeScrimController.setDozing(mDozing,mDozeScrimController.isPulsing());
}
