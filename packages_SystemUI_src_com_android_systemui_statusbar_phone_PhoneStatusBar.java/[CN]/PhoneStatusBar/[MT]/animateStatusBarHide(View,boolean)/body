{
  v.animate().cancel();
  if (!animate) {
    v.setAlpha(0f);
    v.setVisibility(View.INVISIBLE);
    return;
  }
  v.animate().alpha(0f).setDuration(160).setStartDelay(0).setInterpolator(ALPHA_OUT).withEndAction(new Runnable(){
    @Override public void run(){
      v.setVisibility(View.INVISIBLE);
    }
  }
);
}
