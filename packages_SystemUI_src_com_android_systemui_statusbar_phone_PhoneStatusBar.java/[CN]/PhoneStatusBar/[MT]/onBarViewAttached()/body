{
  WindowManager.LayoutParams lp;
  int pixelFormat;
  Drawable bg;
  pixelFormat=PixelFormat.RGBX_8888;
  bg=mTrackingView.getBackground();
  if (bg != null) {
    pixelFormat=bg.getOpacity();
  }
  lp=new WindowManager.LayoutParams(ViewGroup.LayoutParams.MATCH_PARENT,ViewGroup.LayoutParams.MATCH_PARENT,WindowManager.LayoutParams.TYPE_STATUS_BAR_SUB_PANEL,0 | WindowManager.LayoutParams.FLAG_LAYOUT_IN_SCREEN | WindowManager.LayoutParams.FLAG_LAYOUT_NO_LIMITS| WindowManager.LayoutParams.FLAG_ALT_FOCUSABLE_IM,pixelFormat);
  lp.gravity=Gravity.TOP | Gravity.FILL_HORIZONTAL;
  lp.setTitle("TrackingView");
  lp.y=mTrackingPosition;
  mTrackingParams=lp;
  WindowManagerImpl.getDefault().addView(mTrackingView,lp);
}
