{
  super.onConfigurationChanged(newConfig);
  if (DEBUG) {
    Log.v(TAG,"configuration changed: " + mContext.getResources().getConfiguration());
  }
  updateDisplaySize();
  updateResources();
  updateClockSize();
  repositionNavigationBar();
  updateExpandedViewPos(EXPANDED_LEAVE_ALONE);
  updateShowSearchHoldoff();
  updateRowStates();
}
