{
  if (mStackScroller == null)   return;
  boolean onKeyguard=mState == StatusBarState.KEYGUARD;
  mStackScroller.setDimmed(onKeyguard,false);
  mStackScroller.setVisibility(!mShowLockscreenNotifications && onKeyguard ? View.INVISIBLE : View.VISIBLE);
  mStackScroller.setScrollingEnabled(!onKeyguard);
  mStackScroller.setExpandingEnabled(!onKeyguard);
  ActivatableNotificationView activatedChild=mStackScroller.getActivatedChild();
  mStackScroller.setActivatedChild(null);
  if (activatedChild != null) {
    activatedChild.makeInactive(false);
  }
}
