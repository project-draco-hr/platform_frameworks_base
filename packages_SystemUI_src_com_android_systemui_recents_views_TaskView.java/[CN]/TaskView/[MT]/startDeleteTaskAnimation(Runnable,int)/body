{
  setClipViewInStack(false);
  animate().translationX(mConfig.taskViewRemoveAnimTranslationXPx).alpha(0f).setStartDelay(delay).setUpdateListener(null).setInterpolator(mConfig.fastOutSlowInInterpolator).setDuration(mConfig.taskViewRemoveAnimDuration).withEndAction(new Runnable(){
    @Override public void run(){
      if (r != null) {
        r.run();
      }
      setClipViewInStack(true);
    }
  }
).start();
}
