{
  mActionButtonView.setAlpha(0f);
  ViewPropertyAnimator animator=mActionButtonView.animate().alpha(1f).setDuration(mConfig.taskBarEnterAnimDuration).setInterpolator(PhoneStatusBar.ALPHA_IN).withLayer();
  if (withDelay) {
    animator.setStartDelay(mConfig.taskBarEnterAnimDelay);
  }
  animator.start();
}
