{
  RecentsConfiguration config=RecentsConfiguration.getInstance();
  int translate=config.pxFromDp(10);
  mBarView.animate().alpha(0f).scaleX(1.1f).scaleY(1.1f).translationX(translate / 2).translationY(-translate).setStartDelay(0).setInterpolator(BakedBezierInterpolator.INSTANCE).setDuration(Utilities.calculateTranslationAnimationDuration(translate)).withLayer().withEndAction(new Runnable(){
    @Override public void run(){
      post(r);
    }
  }
).start();
}
