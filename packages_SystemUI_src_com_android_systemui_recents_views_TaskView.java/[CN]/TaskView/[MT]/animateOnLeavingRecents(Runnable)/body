{
  RecentsConfiguration config=RecentsConfiguration.getInstance();
  mBarView.animate().alpha(0f).setStartDelay(0).setInterpolator(config.defaultBezierInterpolator).setDuration(config.taskBarExitAnimDuration).withLayer().withEndAction(new Runnable(){
    @Override public void run(){
      post(r);
    }
  }
).start();
}
