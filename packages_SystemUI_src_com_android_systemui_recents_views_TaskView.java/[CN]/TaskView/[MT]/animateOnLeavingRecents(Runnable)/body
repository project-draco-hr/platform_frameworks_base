{
  RecentsConfiguration config=RecentsConfiguration.getInstance();
  mBarView.animate().translationY(-mBarView.getMeasuredHeight()).setStartDelay(0).setInterpolator(config.fastOutLinearInInterpolator).setDuration(config.taskBarExitAnimDuration).withLayer().withEndAction(new Runnable(){
    @Override public void run(){
      post(r);
    }
  }
).start();
}
