{
  int taskViewExitToHomeDuration=getResources().getInteger(R.integer.recents_task_exit_to_home_duration);
  animate().translationY(ctx.offscreenTranslationY).setStartDelay(0).setUpdateListener(null).setInterpolator(mFastOutLinearInInterpolator).setDuration(taskViewExitToHomeDuration).withEndAction(ctx.postAnimationTrigger.decrementAsRunnable()).start();
  ctx.postAnimationTrigger.increment();
}
