{
  setClipViewInStack(false);
  animate().translationX(mConfig.taskViewRemoveAnimTranslationXPx).alpha(0f).setStartDelay(0).setUpdateListener(null).setInterpolator(mConfig.fastOutSlowInInterpolator).setDuration(mConfig.taskViewRemoveAnimDuration).withLayer().withEndAction(new Runnable(){
