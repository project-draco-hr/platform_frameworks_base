{
  if (duration > 0) {
    if (animateFromTransform != null) {
      setTranslationY(animateFromTransform.translationY);
      setScaleX(animateFromTransform.scale);
      setScaleY(animateFromTransform.scale);
    }
    animate().translationY(transform.translationY).scaleX(transform.scale).scaleY(transform.scale).setDuration(duration).setInterpolator(new AccelerateDecelerateInterpolator()).start();
  }
 else {
    setTranslationY(transform.translationY);
    setScaleX(transform.scale);
    setScaleY(transform.scale);
  }
}
