{
  if (mDimAlpha > 0) {
    ObjectAnimator anim=ObjectAnimator.ofInt(this,DIM,getDim(),0);
    anim.setDuration(duration);
    anim.setInterpolator(Interpolators.ALPHA_OUT);
    anim.start();
  }
  postAnimationTrigger.increment();
  hideActionButton(true,duration,!screenPinningRequested,postAnimationTrigger.decrementOnAnimationEnd());
}
