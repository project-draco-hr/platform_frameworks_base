{
  if (Constants.Values.TaskView.AnimateFrontTaskIconOnEnterUseClip) {
    mIconView.setCircularClipRadius(0f);
    mIconView.animateCircularClip(true,1f,Constants.Values.TaskView.Animation.TaskIconOnEnterDuration,300,new AccelerateInterpolator(),null);
  }
 else {
    RecentsConfiguration config=RecentsConfiguration.getInstance();
    int translate=config.pxFromDp(10);
    mIconView.setScaleX(1.25f);
    mIconView.setScaleY(1.25f);
    mIconView.setAlpha(0f);
    mIconView.setTranslationX(translate / 2);
    mIconView.setTranslationY(-translate);
    mIconView.animate().alpha(1f).scaleX(1f).scaleY(1f).translationX(0).translationY(0).setStartDelay(235).setDuration(Constants.Values.TaskView.Animation.TaskIconOnEnterDuration).start();
  }
}
