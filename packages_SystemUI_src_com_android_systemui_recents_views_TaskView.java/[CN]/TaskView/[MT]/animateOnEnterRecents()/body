{
  RecentsConfiguration config=RecentsConfiguration.getInstance();
  mBarView.setVisibility(View.VISIBLE);
  mBarView.setTranslationY(-mBarView.getMeasuredHeight());
  mBarView.animate().translationY(0).setStartDelay(config.taskBarEnterAnimDelay).setInterpolator(config.fastOutSlowInInterpolator).setDuration(config.taskBarEnterAnimDuration).withLayer().start();
}
