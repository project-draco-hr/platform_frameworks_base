{
  final EditText editText=new EditText(getContext());
  new AlertDialog.Builder(getContext()).setTitle(R.string.broadcast_tile).setView(editText).setNegativeButton(android.R.string.cancel,null).setPositiveButton(android.R.string.ok,new DialogInterface.OnClickListener(){
    public void onClick(    DialogInterface dialog,    int which){
      String action=editText.getText().toString();
      if (isValid(action)) {
        add(IntentTile.PREFIX + action + ')');
      }
    }
  }
).show();
}
