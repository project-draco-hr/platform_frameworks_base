{
  if (!mShowFooter) {
    Util.setVisOrGone(mFooter,false);
    return;
  }
  if (mShowZenFooter) {
    Util.setVisOrGone(mTextFooter,false);
    final boolean ringActive=mActiveStream == AudioManager.STREAM_RING;
    Util.setVisOrGone(mZenFooter,mZenFooter.isZen() && ringActive || mShowing && (mExpanded || mZenFooter.getVisibility() == View.VISIBLE));
    mZenFooter.update();
  }
 else {
    Util.setVisOrGone(mZenFooter,false);
    updateTextFooterH();
  }
}
