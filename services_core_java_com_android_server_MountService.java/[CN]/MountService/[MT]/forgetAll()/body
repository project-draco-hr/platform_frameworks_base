{
synchronized (mLock) {
    for (int i=0; i < mRecords.size(); i++) {
      final String fsUuid=mRecords.keyAt(i);
      mCallbacks.notifyVolumeForgotten(fsUuid);
    }
    mRecords.clear();
    writeSettingsLocked();
    mPrimaryStorageUuid=StorageManager.UUID_PRIVATE_INTERNAL;
    resetIfReadyAndConnected();
  }
}
