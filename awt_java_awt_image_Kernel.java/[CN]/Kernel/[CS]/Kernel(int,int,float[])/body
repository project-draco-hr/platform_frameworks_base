{
  int dataLength=width * height;
  if (data.length < dataLength) {
    throw new IllegalArgumentException(Messages.getString("awt.22B"));
  }
  this.width=width;
  this.height=height;
  this.data=new float[dataLength];
  System.arraycopy(data,0,this.data,0,dataLength);
  xOrigin=(width - 1) / 2;
  yOrigin=(height - 1) / 2;
}
