{
  if (!hasSavedSurface()) {
    return;
  }
  if (DEBUG_APP_TRANSITIONS || DEBUG_ANIM)   Slog.v(TAG,"Restoring saved surfaces: " + this + ", allDrawn="+ allDrawn);
  mAnimatingWithSavedSurface=true;
  for (int i=windows.size() - 1; i >= 0; i--) {
    WindowState ws=windows.get(i);
    ws.restoreSavedSurface();
  }
}
