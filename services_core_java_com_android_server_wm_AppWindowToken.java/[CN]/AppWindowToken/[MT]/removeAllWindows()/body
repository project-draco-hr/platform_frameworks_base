{
  for (int winNdx=allAppWindows.size() - 1; winNdx >= 0; winNdx=Math.min(winNdx - 1,allAppWindows.size() - 1)) {
    WindowState win=allAppWindows.get(winNdx);
    if (WindowManagerService.DEBUG_WINDOW_MOVEMENT) {
      Slog.w(WindowManagerService.TAG,"removeAllWindows: removing win=" + win);
    }
    service.removeWindowLocked(win.mSession,win);
  }
  allAppWindows.clear();
  windows.clear();
}
