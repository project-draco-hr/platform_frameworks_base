{
  mContext=context;
  mServiceListener=l;
  mAdapter=BluetoothAdapter.getDefaultAdapter();
  Log.d(TAG,"BluetoothPan() call bindService");
  if (!context.bindService(new Intent(IBluetoothPan.class.getName()),mConnection,0)) {
