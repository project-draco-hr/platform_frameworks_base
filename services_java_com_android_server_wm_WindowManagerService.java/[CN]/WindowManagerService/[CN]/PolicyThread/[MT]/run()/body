{
  Looper.prepare();
  WindowManagerPolicyThread.set(this,Looper.myLooper());
  android.os.Process.setThreadPriority(android.os.Process.THREAD_PRIORITY_FOREGROUND);
  android.os.Process.setCanSelfBackground(false);
  mPolicy.init(mContext,mService,mService,mPM);
  mService.mAnimator.mAboveUniverseLayer=mPolicy.getAboveUniverseLayer() * TYPE_LAYER_MULTIPLIER + TYPE_LAYER_OFFSET;
synchronized (this) {
    mRunning=true;
    notifyAll();
  }
  if (StrictMode.conditionallyEnableDebugLogging()) {
    Slog.i(TAG,"Enabled StrictMode for PolicyThread's Looper");
  }
  Looper.loop();
}
