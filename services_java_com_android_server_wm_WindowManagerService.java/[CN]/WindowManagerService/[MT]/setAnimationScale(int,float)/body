{
  if (!checkCallingPermission(android.Manifest.permission.SET_ANIMATION_SCALE,"setAnimationScale()")) {
    throw new SecurityException("Requires SET_ANIMATION_SCALE permission");
  }
  if (scale < 0)   scale=0;
 else   if (scale > 20)   scale=20;
  scale=Math.abs(scale);
switch (which) {
case 0:
    mWindowAnimationScale=fixScale(scale);
  break;
case 1:
mTransitionAnimationScale=fixScale(scale);
break;
case 2:
mAnimatorDurationScale=fixScale(scale);
break;
}
mH.sendEmptyMessage(H.PERSIST_ANIMATION_SCALE);
}
