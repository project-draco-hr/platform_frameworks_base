{
  boolean first=false;
synchronized (mWindowMap) {
    if (!mShowingBootMessages) {
      if (!always) {
        return;
      }
      first=true;
    }
    if (mSystemBooted) {
      return;
    }
    mShowingBootMessages=true;
    mPolicy.showBootMessage(msg,always);
  }
  if (first) {
    performEnableScreen();
  }
}
