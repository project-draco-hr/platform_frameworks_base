{
  long origId=Binder.clearCallingIdentity();
  try {
synchronized (mWindowMap) {
      WindowState w=windowForClientLocked(session,client,false);
      WindowStateAnimator winAnimator=w.mWinAnimator;
      if ((w != null) && (winAnimator.mSurface != null)) {
        if (SHOW_LIGHT_TRANSACTIONS)         Slog.i(TAG,">>> OPEN TRANSACTION setTransparentRegion");
        Surface.openTransaction();
        try {
          if (SHOW_TRANSACTIONS)           logSurface(w,"transparentRegionHint=" + region,null);
          winAnimator.mSurface.setTransparentRegionHint(region);
        }
  finally {
          Surface.closeTransaction();
          if (SHOW_LIGHT_TRANSACTIONS)           Slog.i(TAG,"<<< CLOSE TRANSACTION setTransparentRegion");
        }
      }
    }
  }
  finally {
    Binder.restoreCallingIdentity(origId);
  }
}
