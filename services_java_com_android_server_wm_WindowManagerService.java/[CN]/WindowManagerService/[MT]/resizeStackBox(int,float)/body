{
  if (weight < STACK_WEIGHT_MIN || weight > STACK_WEIGHT_MAX) {
    throw new IllegalArgumentException("resizeStack: weight must be between " + STACK_WEIGHT_MIN + " and "+ STACK_WEIGHT_MAX+ ", weight="+ weight);
  }
synchronized (mWindowMap) {
    final int numDisplays=mDisplayContents.size();
    for (int displayNdx=0; displayNdx < numDisplays; ++displayNdx) {
      if (mDisplayContents.valueAt(displayNdx).resizeStack(stackBoxId,weight)) {
        performLayoutAndPlaceSurfacesLocked();
        return;
      }
    }
  }
  throw new IllegalArgumentException("resizeStack: stackBoxId " + stackBoxId + " not found.");
}
