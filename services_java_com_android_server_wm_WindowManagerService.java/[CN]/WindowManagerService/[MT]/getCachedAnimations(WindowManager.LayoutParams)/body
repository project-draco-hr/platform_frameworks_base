{
  if (DEBUG_ANIM)   Slog.v(TAG,"Loading animations: layout params pkg=" + (lp != null ? lp.packageName : null) + " resId=0x"+ (lp != null ? Integer.toHexString(lp.windowAnimations) : null));
  if (lp != null && lp.windowAnimations != 0) {
    String packageName=lp.packageName != null ? lp.packageName : "android";
    int resId=lp.windowAnimations;
    if ((resId & 0xFF000000) == 0x01000000) {
      packageName="android";
    }
    if (DEBUG_ANIM)     Slog.v(TAG,"Loading animations: picked package=" + packageName);
    return AttributeCache.instance().get(packageName,resId,com.android.internal.R.styleable.WindowAnimation);
  }
  return null;
}
