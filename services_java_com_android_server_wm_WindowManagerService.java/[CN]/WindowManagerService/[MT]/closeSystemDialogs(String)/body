{
synchronized (mWindowMap) {
    final AllWindowsIterator iterator=new AllWindowsIterator();
    while (iterator.hasNext()) {
      final WindowState w=iterator.next();
      if (w.mHasSurface) {
        try {
          w.mClient.closeSystemDialogs(reason);
        }
 catch (        RemoteException e) {
        }
      }
    }
  }
}
