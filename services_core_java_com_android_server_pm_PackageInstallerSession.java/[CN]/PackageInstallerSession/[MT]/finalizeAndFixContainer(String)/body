{
  if (!PackageHelper.finalizeSdDir(cid)) {
    throw new PackageManagerException(INSTALL_FAILED_CONTAINER_ERROR,"Failed to finalize container " + cid);
  }
  final int uid=mPm.getPackageUid(PackageManagerService.DEFAULT_CONTAINER_PACKAGE,UserHandle.USER_OWNER);
  final int gid=UserHandle.getSharedAppGid(uid);
  if (!PackageHelper.fixSdPermissions(cid,gid,null)) {
    throw new PackageManagerException(INSTALL_FAILED_CONTAINER_ERROR,"Failed to fix permissions on container " + cid);
  }
}
