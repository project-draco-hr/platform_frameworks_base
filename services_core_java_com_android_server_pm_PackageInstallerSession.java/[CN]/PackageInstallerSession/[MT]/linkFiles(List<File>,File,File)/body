{
  for (  File fromFile : fromFiles) {
    final String relativePath=getRelativePath(fromFile,fromDir);
    final int ret=mPm.mInstaller.linkFile(relativePath,fromDir.getAbsolutePath(),toDir.getAbsolutePath());
    if (ret < 0) {
      throw new IOException("failed linkOrCreateDir(" + relativePath + ", "+ fromDir+ ", "+ toDir+ ")");
    }
  }
  Slog.d(TAG,"Linked " + fromFiles.size() + " files into "+ toDir);
}
