{
  if ((modifiersEx & InputEvent.BUTTON1_DOWN_MASK) != 0) {
    text+=((text.length() > 0) ? "+" : "") + Toolkit.getProperty("AWT.button1","Button1");
  }
  if ((modifiersEx & InputEvent.BUTTON2_DOWN_MASK) != 0) {
    text+=((text.length() > 0) ? "+" : "") + Toolkit.getProperty("AWT.button2","Button2");
  }
  if ((modifiersEx & InputEvent.BUTTON3_DOWN_MASK) != 0) {
    text+=((text.length() > 0) ? "+" : "") + Toolkit.getProperty("AWT.button3","Button3");
  }
  return text;
}
