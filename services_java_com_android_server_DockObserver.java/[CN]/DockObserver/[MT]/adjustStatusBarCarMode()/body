{
  if (mStatusBarManager == null) {
    mStatusBarManager=(StatusBarManager)mContext.getSystemService(Context.STATUS_BAR_SERVICE);
  }
  if (mStatusBarManager != null) {
    long ident=Binder.clearCallingIdentity();
    mStatusBarManager.disable(mCarModeEnabled ? StatusBarManager.DISABLE_NOTIFICATION_TICKER : StatusBarManager.DISABLE_NONE);
    Binder.restoreCallingIdentity(ident);
  }
  if (mNotificationManager == null) {
    mNotificationManager=(NotificationManager)mContext.getSystemService(Context.NOTIFICATION_SERVICE);
  }
  if (mNotificationManager != null) {
    long ident=Binder.clearCallingIdentity();
    if (mCarModeEnabled) {
      Intent carModeOffIntent=new Intent(mContext,DisableCarModeActivity.class);
      Notification n=new Notification();
      n.icon=R.drawable.stat_notify_car_mode;
      n.defaults=Notification.DEFAULT_LIGHTS;
      n.flags=Notification.FLAG_ONGOING_EVENT;
      n.when=0;
      n.setLatestEventInfo(mContext,mContext.getString(R.string.car_mode_disable_notification_title),mContext.getString(R.string.car_mode_disable_notification_message),PendingIntent.getActivity(mContext,0,carModeOffIntent,0));
      mNotificationManager.notify(0,n);
    }
 else {
      mNotificationManager.cancel(0);
    }
    Binder.restoreCallingIdentity(ident);
  }
}
