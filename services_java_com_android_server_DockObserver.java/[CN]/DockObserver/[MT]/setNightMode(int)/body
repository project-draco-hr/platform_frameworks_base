{
  if (mNightMode != mode) {
    mNightMode=mode;
switch (mode) {
case MODE_NIGHT_NO:
case MODE_NIGHT_YES:
      setMode(Configuration.UI_MODE_TYPE_CAR,mode << 4);
    break;
case MODE_NIGHT_AUTO:
  long ident=Binder.clearCallingIdentity();
updateTwilight();
Binder.restoreCallingIdentity(ident);
break;
default :
setMode(Configuration.UI_MODE_TYPE_CAR,MODE_NIGHT_NO << 4);
break;
}
}
}
