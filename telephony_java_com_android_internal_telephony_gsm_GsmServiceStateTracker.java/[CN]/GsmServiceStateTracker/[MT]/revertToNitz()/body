{
  if (Settings.System.getInt(phone.getContext().getContentResolver(),Settings.System.AUTO_TIME,0) == 0) {
    return;
  }
  Log.d(LOG_TAG,"Reverting to NITZ: tz='" + mSavedTimeZone + "' mSavedTime="+ mSavedTime+ " mSavedAtTime="+ mSavedAtTime);
  if (mSavedTimeZone != null && mSavedTime != 0 && mSavedAtTime != 0) {
    setAndBroadcastNetworkSetTimeZone(mSavedTimeZone);
    setAndBroadcastNetworkSetTime(mSavedTime + (SystemClock.elapsedRealtime() - mSavedAtTime));
  }
}
