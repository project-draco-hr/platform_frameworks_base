{
  if (metadata == null) {
    throw new IllegalArgumentException("You must specify a non-null MediaMetadata to build an Item.");
  }
  if (uri == null) {
    throw new IllegalArgumentException("You must specify a non-null Uri to build an Item.");
  }
  if (id == UNKNOWN_ID) {
    throw new IllegalArgumentException("You must specify an id other than UNKNOWN_ID to build an Item.");
  }
  mMetadata=metadata;
  mId=id;
  mUri=uri;
}
