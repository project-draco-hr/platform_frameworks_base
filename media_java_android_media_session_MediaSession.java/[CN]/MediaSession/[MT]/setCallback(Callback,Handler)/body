{
synchronized (mLock) {
    if (callback == null) {
      if (mCallback != null) {
        mCallback.mCallback.mSession=null;
      }
      mCallback=null;
      return;
    }
    if (mCallback != null) {
      mCallback.mCallback.mSession=null;
    }
    if (handler == null) {
      handler=new Handler();
    }
    callback.mSession=this;
    CallbackMessageHandler msgHandler=new CallbackMessageHandler(handler.getLooper(),callback);
    mCallback=msgHandler;
  }
}
