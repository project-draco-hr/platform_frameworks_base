{
  super(context,attrs,defStyle);
  TypedArray a=context.obtainStyledAttributes(attrs,com.android.internal.R.styleable.QuickContactBadge,defStyle,0);
  mMode=a.getInt(com.android.internal.R.styleable.QuickContactBadge_quickContactWindowSize,QuickContact.MODE_MEDIUM);
  a.recycle();
  TypedArray styledAttributes=mContext.obtainStyledAttributes(R.styleable.Theme);
  mOverlay=styledAttributes.getDrawable(com.android.internal.R.styleable.Theme_quickContactBadgeOverlay);
  styledAttributes.recycle();
  init();
  mBadgeBackground=getBackground();
}
