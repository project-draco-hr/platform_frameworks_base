{
  final int mask=StorageManager.DEBUG_SDCARDFS_FORCE_ON | StorageManager.DEBUG_SDCARDFS_FORCE_OFF;
switch (nextArg()) {
case "on":
    mSm.setDebugFlags(StorageManager.DEBUG_SDCARDFS_FORCE_ON,mask);
  break;
case "off":
mSm.setDebugFlags(StorageManager.DEBUG_SDCARDFS_FORCE_OFF,mask);
break;
case "default":
mSm.setDebugFlags(0,mask);
break;
}
}
