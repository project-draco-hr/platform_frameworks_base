{
  if (certs != null) {
    X509Certificate[] newCerts=new X509Certificate[certs.length];
    for (int i=0; i < certs.length; i++) {
      if (certs[i].getBasicConstraints() >= 0) {
        newCerts[i]=certs[i];
      }
 else {
        throw new IllegalArgumentException("Not a CA certificate");
      }
    }
    mCaCerts=newCerts;
  }
 else {
    mCaCerts=null;
  }
}
