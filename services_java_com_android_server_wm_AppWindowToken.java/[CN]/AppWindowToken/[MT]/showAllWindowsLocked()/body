{
  boolean isAnimating=false;
  final int NW=allAppWindows.size();
  for (int i=0; i < NW; i++) {
    WindowState w=allAppWindows.get(i);
    if (WindowManagerService.DEBUG_VISIBILITY)     Slog.v(WindowManagerService.TAG,"performing show on: " + w);
    w.performShowLocked();
    isAnimating|=w.mWinAnimator.isAnimating();
  }
  return isAnimating;
}
