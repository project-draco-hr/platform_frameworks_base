{
  if (cur == null) {
    return null;
  }
  final int N=cur.length;
  for (int i=0; i < N; i++) {
    if (cur[i] == val) {
      int[] ret=new int[N - 1];
      if (i > 0) {
        System.arraycopy(cur,0,ret,0,i);
      }
      if (i < (N - 1)) {
        System.arraycopy(cur,i,ret,i + 1,N - i - 1);
      }
      return ret;
    }
  }
  return cur;
}
