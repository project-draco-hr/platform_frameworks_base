{
  if (GET_CERTIFICATES) {
    if (ps == null || !ps.codePath.equals(srcFile) || ps.timeStamp != srcFile.lastModified()) {
      Log.i(TAG,srcFile.toString() + " changed; collecting certs");
      if (!pp.collectCertificates(pkg,parseFlags)) {
        mLastScanError=pp.getParseError();
        return false;
      }
    }
  }
  return true;
}
