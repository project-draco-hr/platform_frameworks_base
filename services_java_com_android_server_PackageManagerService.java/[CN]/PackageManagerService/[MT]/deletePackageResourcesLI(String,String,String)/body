{
  File sourceFile=new File(sourceDir);
  if (!sourceFile.exists()) {
    Log.w(TAG,"Package source " + sourceDir + " does not exist.");
  }
  sourceFile.delete();
  final File publicSourceFile=new File(publicSourceDir);
  if (publicSourceFile.exists()) {
    publicSourceFile.delete();
  }
  if (mInstaller != null) {
    int retCode=mInstaller.rmdex(sourceFile.toString());
    if (retCode < 0) {
      Log.w(TAG,"Couldn't remove dex file for package: " + packageName + " at location "+ sourceFile.toString()+ ", retcode="+ retCode);
    }
  }
}
