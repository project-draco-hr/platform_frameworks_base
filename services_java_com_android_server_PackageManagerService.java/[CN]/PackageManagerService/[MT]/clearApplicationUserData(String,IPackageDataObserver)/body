{
  mContext.enforceCallingOrSelfPermission(android.Manifest.permission.CLEAR_APP_USER_DATA,null);
  mHandler.post(new Runnable(){
    public void run(){
      mHandler.removeCallbacks(this);
      final boolean succeded;
synchronized (mInstallLock) {
        succeded=clearApplicationUserDataLI(packageName);
      }
      if (succeded) {
        DeviceMemoryMonitorService dmm=(DeviceMemoryMonitorService)ServiceManager.getService("devicememorymonitor");
        if (dmm != null) {
          dmm.updateMemory();
        }
      }
      if (observer != null) {
        try {
          observer.onRemoveCompleted(packageName,succeded);
        }
 catch (        RemoteException e) {
          Log.i(TAG,"Observer no longer exists.");
        }
      }
    }
  }
);
}
