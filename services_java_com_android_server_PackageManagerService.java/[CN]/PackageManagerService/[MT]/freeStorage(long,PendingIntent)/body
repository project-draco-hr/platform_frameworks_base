{
  mContext.enforceCallingOrSelfPermission(android.Manifest.permission.CLEAR_APP_CACHE,null);
  mHandler.post(new Runnable(){
    public void run(){
      mHandler.removeCallbacks(this);
      int retCode=-1;
      if (mInstaller != null) {
        retCode=mInstaller.freeCache(freeStorageSize);
        if (retCode < 0) {
          Log.w(TAG,"Couldn't clear application caches");
        }
      }
      if (opFinishedIntent != null) {
        try {
          opFinishedIntent.send((retCode >= 0) ? 1 : 0);
        }
 catch (        CanceledException e1) {
          Log.i(TAG,"Failed to send pending intent");
        }
      }
    }
  }
);
}
