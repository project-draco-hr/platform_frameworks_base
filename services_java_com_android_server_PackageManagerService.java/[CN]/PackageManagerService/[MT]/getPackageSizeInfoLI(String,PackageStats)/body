{
  if (packageName == null) {
    Log.w(TAG,"Attempt to get size of null packageName.");
    return false;
  }
  PackageParser.Package p;
synchronized (mPackages) {
    p=mPackages.get(packageName);
  }
  if (p == null) {
    Log.w(TAG,"Package named '" + packageName + "' doesn't exist.");
    return false;
  }
  final ApplicationInfo applicationInfo=p.applicationInfo;
  if (applicationInfo == null) {
    Log.w(TAG,"Package " + packageName + " has no applicationInfo.");
    return false;
  }
  if (mInstaller != null) {
    int res=mInstaller.getSizeInfo(packageName,p.mPath,isForwardLocked(p) ? applicationInfo.publicSourceDir : null,pStats);
    if (res < 0) {
      return false;
    }
 else {
      return true;
    }
  }
  return true;
}
