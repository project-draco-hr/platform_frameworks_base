{
  if (packageName == null) {
    Log.w(TAG,"Attempt to get size of null packageName.");
    return false;
  }
  PackageParser.Package p;
  boolean dataOnly=false;
synchronized (mPackages) {
    p=mPackages.get(packageName);
    if (p == null) {
      dataOnly=true;
      PackageSetting ps=mSettings.mPackages.get(packageName);
      if ((ps == null) || (ps.pkg == null)) {
        Log.w(TAG,"Package named '" + packageName + "' doesn't exist.");
        return false;
      }
      p=ps.pkg;
    }
  }
  String publicSrcDir=null;
  if (!dataOnly) {
    final ApplicationInfo applicationInfo=p.applicationInfo;
    if (applicationInfo == null) {
      Log.w(TAG,"Package " + packageName + " has no applicationInfo.");
      return false;
    }
    publicSrcDir=isForwardLocked(p) ? applicationInfo.publicSourceDir : null;
  }
  if (mInstaller != null) {
    int res=mInstaller.getSizeInfo(packageName,p.mPath,publicSrcDir,pStats);
    if (res < 0) {
      return false;
    }
 else {
      return true;
    }
  }
  return true;
}
