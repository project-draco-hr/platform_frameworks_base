{
  ComponentName comp=intent.getComponent();
  if (comp != null) {
    List<ResolveInfo> list=new ArrayList<ResolveInfo>(1);
    ActivityInfo ai=getActivityInfo(comp,flags);
    if (ai != null) {
      ResolveInfo ri=new ResolveInfo();
      ri.activityInfo=ai;
      list.add(ri);
    }
    return list;
  }
synchronized (mPackages) {
    String pkgName=intent.getPackage();
    if (pkgName == null) {
      return (List<ResolveInfo>)mActivities.queryIntent(intent,resolvedType,flags);
    }
    PackageParser.Package pkg=mPackages.get(pkgName);
    if (pkg != null) {
      return (List<ResolveInfo>)mActivities.queryIntentForPackage(intent,resolvedType,flags,pkg.activities);
    }
    return null;
  }
}
