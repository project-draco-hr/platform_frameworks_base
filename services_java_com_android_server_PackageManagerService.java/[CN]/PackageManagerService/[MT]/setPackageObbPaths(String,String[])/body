{
  if (DEBUG_OBB)   Log.v(TAG,"Setting .obb paths for " + packageName + " to: "+ Arrays.toString(paths));
  final int uid=Binder.getCallingUid();
  final int permission=mContext.checkCallingPermission(android.Manifest.permission.INSTALL_PACKAGES);
  final boolean allowedByPermission=(permission == PackageManager.PERMISSION_GRANTED);
  if (!allowedByPermission) {
    throw new SecurityException("Permission denial: attempt to set .obb file from pid=" + Binder.getCallingPid());
  }
synchronized (mPackages) {
    final PackageSetting pkgSetting=mSettings.mPackages.get(packageName);
    if (pkgSetting == null) {
      throw new IllegalArgumentException("Unknown package: " + packageName);
    }
    if (paths != null) {
      if (paths.length == 0) {
        paths=null;
      }
 else {
        paths=paths.clone();
      }
    }
    if (!Arrays.equals(paths,pkgSetting.obbPathStrings)) {
      pkgSetting.obbPathStrings=paths;
      mSettings.writeLP();
    }
  }
}
