{
  PackageRemovedInfo info=new PackageRemovedInfo();
  boolean res=false;
synchronized (mInstallLock) {
    res=deletePackageLI(packageName,deleteCodeAndResources,flags,info);
    if (res) {
synchronized (mPackages) {
        mSettings.writeLP();
      }
    }
  }
  if (res && sendBroadCast) {
    info.sendBroadcast();
  }
  return res;
}
