{
  int i=list.size();
  if (localLOGV)   Slog.v(TAG,"Removing app " + app + " from list "+ list+ " with "+ i+ " entries");
  while (i > 0) {
    i--;
    ActivityRecord r=(ActivityRecord)list.get(i);
    if (localLOGV)     Slog.v(TAG,"Record #" + i + " "+ r+ ": app="+ r.app);
    if (r.app == app) {
      if (localLOGV)       Slog.v(TAG,"Removing this entry!");
      list.remove(i);
      removeTimeoutsForActivityLocked(r);
    }
  }
}
