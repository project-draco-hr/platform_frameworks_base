{
  mHandler.removeMessages(SLEEP_TIMEOUT_MSG);
  mSleepTimeout=false;
  if (mGoingToSleep.isHeld()) {
    mGoingToSleep.release();
  }
  for (int i=mHistory.size() - 1; i >= 0; i--) {
    ActivityRecord r=(ActivityRecord)mHistory.get(i);
    r.setSleeping(false);
  }
  mGoingToSleepActivities.clear();
}
