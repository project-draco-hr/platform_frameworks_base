{
  if (RecentsDebugFlags.Static.EnableSearchBar) {
    if (mSearchWidgetInfo != null) {
      event.addPostAnimationCallback(new Runnable(){
        @Override public void run(){
          if (mAppWidgetHost != null) {
            mAppWidgetHost.startListening();
          }
        }
      }
);
    }
  }
}
