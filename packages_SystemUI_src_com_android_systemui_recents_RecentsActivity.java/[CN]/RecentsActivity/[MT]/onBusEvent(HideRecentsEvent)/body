{
  if (event.triggeredFromAltTab) {
    if (!mIgnoreAltTabRelease) {
      dismissRecentsToFocusedTaskOrHome();
    }
  }
 else   if (event.triggeredFromHomeKey) {
    if (mRecentsView.isHistoryVisible()) {
      ActivityOptions opts=ActivityOptions.makeCustomAnimation(RecentsActivity.this,R.anim.recents_to_launcher_enter,R.anim.recents_to_launcher_exit);
      dismissRecentsToHome(false,opts);
    }
 else {
      dismissRecentsToHome(true);
    }
    EventBus.getDefault().send(mUserInteractionEvent);
  }
 else {
  }
}
