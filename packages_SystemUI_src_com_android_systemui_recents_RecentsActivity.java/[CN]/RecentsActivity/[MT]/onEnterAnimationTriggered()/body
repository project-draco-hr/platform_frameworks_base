{
  if (mConfig.hasNavBarScrim()) {
    mNavBarScrimView.setVisibility(View.VISIBLE);
    mNavBarScrimView.setAlpha(0f);
    mNavBarScrimView.animate().alpha(1f).setStartDelay(mConfig.taskBarEnterAnimDelay).setDuration(mConfig.navBarScrimEnterDuration).setInterpolator(mConfig.fastOutSlowInInterpolator).withLayer().start();
  }
}
