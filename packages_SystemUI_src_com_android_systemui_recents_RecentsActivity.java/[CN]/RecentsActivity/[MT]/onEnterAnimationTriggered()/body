{
  if (mConfig.hasStatusBarScrim() && mConfig.shouldAnimateStatusBarScrim()) {
    mStatusBarScrimView.setVisibility(View.VISIBLE);
    mStatusBarScrimView.setTranslationY(-mStatusBarScrimView.getMeasuredHeight());
    mStatusBarScrimView.animate().translationY(0).setStartDelay(mConfig.taskBarEnterAnimDelay).setDuration(mConfig.navBarScrimEnterDuration).setInterpolator(mConfig.quintOutInterpolator).start();
  }
  if (mConfig.hasNavBarScrim() && mConfig.shouldAnimateNavBarScrim()) {
    mNavBarScrimView.setVisibility(View.VISIBLE);
    mNavBarScrimView.setTranslationY(mNavBarScrimView.getMeasuredHeight());
    mNavBarScrimView.animate().translationY(0).setStartDelay(mConfig.taskBarEnterAnimDelay).setDuration(mConfig.navBarScrimEnterDuration).setInterpolator(mConfig.quintOutInterpolator).start();
  }
}
