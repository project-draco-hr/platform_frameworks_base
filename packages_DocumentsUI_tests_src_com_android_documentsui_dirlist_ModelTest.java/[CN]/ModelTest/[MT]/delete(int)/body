{
  Selection s=positionToSelection(positions);
  final CountDownLatch latch=new CountDownLatch(1);
  model.delete(s,new Model.DeletionListener(){
    @Override public void onError(){
      latch.countDown();
    }
    @Override void onCompletion(){
      latch.countDown();
    }
  }
);
  latch.await();
}
