{
  UserSwitcherController.UserRecord item=getItem(position);
  UserDetailItemView v=UserDetailItemView.convertOrInflate(mContext,convertView,parent);
  String name;
  if (item.isGuest) {
    name=mContext.getString(item.info == null ? R.string.guest_new_guest : R.string.guest_nickname);
  }
 else {
    name=item.info.name;
  }
  if (item.picture == null) {
    v.bind(name,mContext.getDrawable(R.drawable.ic_account_circle));
  }
 else {
    v.bind(name,item.picture);
  }
  v.setActivated(item.isCurrent);
  v.setTag(item);
  return v;
}
