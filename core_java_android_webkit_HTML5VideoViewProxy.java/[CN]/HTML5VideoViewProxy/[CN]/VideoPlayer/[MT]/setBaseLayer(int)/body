{
  if (mHTML5VideoView != null && !mHTML5VideoView.isFullScreenMode()) {
    mBaseLayer=layer;
    SurfaceTexture surfTexture=mHTML5VideoView.getSurfaceTexture();
    int textureName=mHTML5VideoView.getTextureName();
    int currentVideoLayerId=mHTML5VideoView.getVideoLayerId();
    if (layer != 0 && surfTexture != null && currentVideoLayerId != -1) {
      boolean readyToUseSurfTex=mHTML5VideoView.getReadyToUseSurfTex();
      boolean foundInTree=nativeSendSurfaceTexture(surfTexture,layer,currentVideoLayerId,textureName,readyToUseSurfTex);
      if (readyToUseSurfTex && !foundInTree) {
        mHTML5VideoView.pauseAndDispatch(mCurrentProxy);
        mHTML5VideoView.deleteSurfaceTexture();
      }
    }
  }
}
