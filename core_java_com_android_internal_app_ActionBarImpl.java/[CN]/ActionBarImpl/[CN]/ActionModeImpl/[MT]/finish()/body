{
  if (mActionMode != this) {
    return;
  }
  mCallback.onDestroyActionMode(this);
  mCallback=null;
  animateTo(NORMAL_VIEW);
  mUpperContextView.closeMode();
  if (mLowerView != null && mLowerView.getVisibility() != View.GONE) {
    mLowerView.setVisibility(View.GONE);
  }
  mActionMode=null;
  if (mWasHiddenBeforeMode) {
    hide();
  }
}
