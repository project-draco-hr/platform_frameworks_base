{
  if (mActionMode != this) {
    return;
  }
  if (mWasHiddenBeforeMode) {
    mDeferredDestroyActionMode=this;
    mDeferredModeDestroyCallback=mCallback;
  }
 else {
    mCallback.onDestroyActionMode(this);
  }
  mCallback=null;
  animateToMode(false);
  mContextView.closeMode();
  mActionMode=null;
  if (mWasHiddenBeforeMode) {
    hide();
  }
}
