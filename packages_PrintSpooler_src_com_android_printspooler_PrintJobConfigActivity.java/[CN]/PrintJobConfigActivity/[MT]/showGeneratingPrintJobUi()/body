{
  getWindow().getDecorView().setVisibility(View.GONE);
  DialogFragment fragment=new DialogFragment(){
    @Override public Dialog onCreateDialog(    Bundle savedInstanceState){
      return new AlertDialog.Builder(PrintJobConfigActivity.this).setTitle(getString(R.string.generating_print_job)).setView(PrintJobConfigActivity.this.getLayoutInflater().inflate(R.layout.generating_print_job_dialog,null)).setCancelable(false).setPositiveButton(getString(R.string.cancel),new DialogInterface.OnClickListener(){
        @Override public void onClick(        DialogInterface dialog,        int which){
          mEditor.cancel();
          PrintJobConfigActivity.this.finish();
        }
      }
).create();
    }
  }
;
  fragment.show(getFragmentManager(),getString(R.string.generating_print_job));
}
