{
  mContext=context;
  mParent=parent;
synchronized (mParent) {
    mPeriodCount=6;
    mPeriodRxData=new long[mPeriodCount];
    mPeriodTxData=new long[mPeriodCount];
    mPeriodStart=Calendar.getInstance();
    mPeriodEnd=Calendar.getInstance();
    mSharedPreferences=mContext.getSharedPreferences("ThrottleData",android.content.Context.MODE_PRIVATE);
    zeroData(0);
    retrieve();
  }
}
