{
  ContentResolver resolver=context.getContentResolver();
  resolver.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.THROTTLE_POLLING_SEC),false,this);
  resolver.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.THROTTLE_THRESHOLD),false,this);
  resolver.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.THROTTLE_VALUE),false,this);
  resolver.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.THROTTLE_RESET_DAY),false,this);
  resolver.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.THROTTLE_NOTIFICATION_TYPE),false,this);
  resolver.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.THROTTLE_IFACE),false,this);
}
