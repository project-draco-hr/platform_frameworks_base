{
  final boolean isSummaryWithChildren=BaseStatusBar.ENABLE_CHILD_NOTIFICATIONS && mGroupManager.hasGroupChildren(mStatusBarNotification);
  if (isSummaryWithChildren) {
    if (mChildrenContainer == null) {
      mChildrenContainerStub.inflate();
    }
    if (!mIsSummaryWithChildren) {
      recreateNotificationHeader();
    }
  }
  mIsSummaryWithChildren=isSummaryWithChildren;
  mPrivateLayout.updateExpandButtons(isExpandable());
  updateHeaderChildCount();
  updateChildrenVisibility(true);
}
