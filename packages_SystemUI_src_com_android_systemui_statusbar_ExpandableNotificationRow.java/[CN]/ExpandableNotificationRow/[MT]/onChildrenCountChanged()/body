{
  mIsSummaryWithChildren=BaseStatusBar.ENABLE_CHILD_NOTIFICATIONS && mChildrenContainer != null && mChildrenContainer.getNotificationChildCount() > 0;
  if (mIsSummaryWithChildren && mChildrenContainer.getHeaderView() == null) {
    mChildrenContainer.recreateNotificationHeader(mExpandClickListener,mEntry.notification);
  }
  getShowingLayout().updateBackgroundColor(false);
  mPrivateLayout.updateExpandButtons(isExpandable());
  updateChildrenHeaderAppearance();
  updateChildrenVisibility();
}
