{
  TaskStack stack=stackView.getStack();
  Task launchTask=stack.getLaunchTarget();
  if (launchTask != null) {
    runningTaskOut.copyFrom(launchTask);
  }
 else {
    launchTask=stack.getStackFrontMostTask(true);
    runningTaskOut.copyFrom(launchTask);
  }
  stackView.updateLayoutAlgorithm(true);
  stackView.updateToInitialState(true);
  stackView.getStackAlgorithm().getStackTransformScreenCoordinates(launchTask,stackView.getScroller().getStackScroll(),mTmpTransform,null);
  return mTmpTransform;
}
