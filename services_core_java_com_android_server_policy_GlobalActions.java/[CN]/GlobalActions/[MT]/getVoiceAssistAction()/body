{
  return new SinglePressAction(com.android.internal.R.drawable.ic_voice_search,R.string.global_action_voice_assist){
    @Override public void onPress(){
      Intent intent=new Intent(Intent.ACTION_VOICE_ASSIST);
      intent.addFlags(Intent.FLAG_ACTIVITY_NEW_TASK | Intent.FLAG_ACTIVITY_CLEAR_TOP);
      mContext.startActivity(intent);
    }
    @Override public boolean showDuringKeyguard(){
      return true;
    }
    @Override public boolean showBeforeProvisioning(){
      return true;
    }
  }
;
}
