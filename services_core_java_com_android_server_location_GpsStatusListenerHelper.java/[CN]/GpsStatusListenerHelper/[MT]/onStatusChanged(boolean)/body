{
  Operation operation;
  if (isNavigating) {
    operation=new Operation(){
      @Override public void execute(      IGpsStatusListener listener) throws RemoteException {
        listener.onGpsStarted();
      }
    }
;
  }
 else {
    operation=new Operation(){
      @Override public void execute(      IGpsStatusListener listener) throws RemoteException {
        listener.onGpsStopped();
      }
    }
;
  }
  foreach(operation);
}
