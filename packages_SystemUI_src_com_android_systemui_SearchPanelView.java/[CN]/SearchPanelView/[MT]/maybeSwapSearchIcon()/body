{
  Intent intent=((SearchManager)mContext.getSystemService(Context.SEARCH_SERVICE)).getAssistIntent(mContext,false,UserHandle.USER_CURRENT);
  if (intent != null) {
    ComponentName component=intent.getComponent();
    if (component == null || !mGlowPadView.replaceTargetDrawablesIfPresent(component,ASSIST_ICON_METADATA_NAME,com.android.internal.R.drawable.ic_action_assist_generic)) {
      if (DEBUG)       Slog.v(TAG,"Couldn't grab icon for component " + component);
    }
  }
}
