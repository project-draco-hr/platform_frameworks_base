{
  mCard.animate().cancel();
  mAnimatingOut=true;
  if (mHorizontal) {
    mCard.animate().x(getWidth());
  }
 else {
    mCard.animate().y(getHeight());
  }
  mCard.animate().setDuration(150).setInterpolator(mFastOutLinearInInterpolator).withEndAction(new Runnable(){
    @Override public void run(){
      mAnimatingOut=false;
      setVisibility(View.INVISIBLE);
    }
  }
);
  mScrim.animate().alpha(0f).setDuration(150).setStartDelay(0).setInterpolator(PhoneStatusBar.ALPHA_OUT);
}
