{
  if (show) {
    maybeSwapSearchIcon();
    if (getVisibility() != View.VISIBLE) {
      setVisibility(View.VISIBLE);
      vibrate();
      mCard.setAlpha(1f);
      if (animate) {
        startEnterAnimation();
      }
 else {
        mScrim.setAlpha(1f);
        if (mHorizontal) {
          mCard.setX(getWidth() - mPeekHeight);
        }
 else {
          mCard.setY(getHeight() - mPeekHeight);
        }
      }
    }
    setFocusable(true);
    setFocusableInTouchMode(true);
    requestFocus();
  }
 else {
    if (animate) {
      startAbortAnimation();
    }
 else {
      setVisibility(View.INVISIBLE);
    }
  }
}
