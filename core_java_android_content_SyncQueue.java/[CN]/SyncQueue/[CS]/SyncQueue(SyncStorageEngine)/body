{
  mSyncStorageEngine=syncStorageEngine;
  ArrayList<SyncStorageEngine.PendingOperation> ops=mSyncStorageEngine.getPendingOperations();
  final int N=ops.size();
  for (int i=0; i < N; i++) {
    SyncStorageEngine.PendingOperation op=ops.get(i);
    final int delay=op.expedited ? -1 : 0;
    SyncOperation syncOperation=new SyncOperation(op.account,op.syncSource,op.authority,op.extras,delay);
    syncOperation.pendingOperation=op;
    add(syncOperation,op);
  }
}
