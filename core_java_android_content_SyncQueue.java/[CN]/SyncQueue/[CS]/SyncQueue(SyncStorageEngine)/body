{
  mSyncStorageEngine=syncStorageEngine;
  ArrayList<SyncStorageEngine.PendingOperation> ops=mSyncStorageEngine.getPendingOperations();
  final int N=ops.size();
  for (int i=0; i < N; i++) {
    SyncStorageEngine.PendingOperation op=ops.get(i);
    final Pair<Long,Long> backoff=syncStorageEngine.getBackoff(op.account,op.authority);
    SyncOperation syncOperation=new SyncOperation(op.account,op.syncSource,op.authority,op.extras,0,backoff != null ? backoff.first : 0,syncStorageEngine.getDelayUntilTime(op.account,op.authority));
    syncOperation.expedited=op.expedited;
    syncOperation.pendingOperation=op;
    add(syncOperation,op);
  }
}
