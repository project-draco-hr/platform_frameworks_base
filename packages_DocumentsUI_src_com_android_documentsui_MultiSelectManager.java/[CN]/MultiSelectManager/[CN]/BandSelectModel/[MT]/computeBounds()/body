{
  Rect rect=new Rect();
  rect.left=getCoordinateValue(min(mRelativeOrigin.xLocation,mRelativePointer.xLocation),mXLimitsList,true);
  rect.right=getCoordinateValue(max(mRelativeOrigin.xLocation,mRelativePointer.xLocation),mXLimitsList,false);
  rect.top=getCoordinateValue(min(mRelativeOrigin.yLocation,mRelativePointer.yLocation),mYLimitsList,true);
  rect.bottom=getCoordinateValue(max(mRelativeOrigin.yLocation,mRelativePointer.yLocation),mYLimitsList,false);
  return rect;
}
