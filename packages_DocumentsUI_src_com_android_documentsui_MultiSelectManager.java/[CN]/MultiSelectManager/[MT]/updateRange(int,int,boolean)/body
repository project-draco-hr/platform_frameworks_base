{
  checkState(end >= begin);
  for (int i=begin; i <= end; i++) {
    if (selected) {
      boolean canSelect=notifyBeforeItemStateChange(i,true);
      if (canSelect) {
        if (mSingleSelect && !mSelection.isEmpty()) {
          clearSelectionQuietly();
        }
        selectAndNotify(i);
      }
    }
 else {
      attemptDeselect(i);
    }
  }
}
