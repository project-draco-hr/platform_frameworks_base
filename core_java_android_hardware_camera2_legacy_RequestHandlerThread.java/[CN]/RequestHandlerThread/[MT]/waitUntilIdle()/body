{
  Handler handler=waitAndGetHandler();
  Looper looper=handler.getLooper();
  if (looper.isIdling()) {
    return;
  }
  mIdle.close();
  looper.getQueue().addIdleHandler(mIdleHandler);
  handler.sendEmptyMessage(MSG_POKE_IDLE_HANDLER);
  if (looper.isIdling()) {
    return;
  }
  mIdle.block();
}
