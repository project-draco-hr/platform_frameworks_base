{
  int lo=0;
  int hi=size - 1;
  while (lo <= hi) {
    int mid=(lo + hi) >>> 1;
    int midVal=(array[mid] >> OFFSET_TYPE_SHIFT) & OFFSET_TYPE_MASK;
    if (midVal < value) {
      lo=mid + 1;
    }
 else     if (midVal > value) {
      hi=mid - 1;
    }
 else {
      return mid;
    }
  }
  return ~lo;
}
