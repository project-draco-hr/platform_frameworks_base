{
  super.onFinishInflate();
  mGearIcon=(AlphaOptimizedImageView)findViewById(R.id.gear_icon);
  mGearIcon.setOnClickListener(this);
  final float iconMargin=((ViewGroup.MarginLayoutParams)mGearIcon.getLayoutParams()).getMarginStart();
  final float iconWidth=getResources().getDimensionPixelOffset(R.dimen.notification_gear_size);
  mHorizSpaceForGear=(iconWidth + iconMargin * 2);
  resetState();
}
