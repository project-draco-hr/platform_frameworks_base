{
  Transaction current=event.isServerTransaction() ? mServerTransaction : mClientTransaction;
  Transaction target=event.isServerTransaction() ? event.getServerTransaction() : event.getClientTransaction();
  if ((current != target) && (mState != SipSession.State.PINGING)) {
    if (SSI_DBG)     log("not the current transaction; current=" + toString(current) + ", target="+ toString(target));
    return false;
  }
 else   if (current != null) {
    if (SSI_DBG)     log("transaction terminated: " + toString(current));
    return true;
  }
 else {
    return true;
  }
}
