{
  if (mWifiGroup == null)   return;
  if (mWifiVisible) {
    mWifi.setImageResource(mWifiStrengthId);
    mWifiGroup.setContentDescription(mWifiDescription);
    mWifiGroup.setVisibility(View.VISIBLE);
  }
 else {
    mWifiGroup.setVisibility(View.GONE);
  }
  if (DEBUG)   Log.d(TAG,String.format("wifi: %s sig=%d",(mWifiVisible ? "VISIBLE" : "GONE"),mWifiStrengthId));
  if (mMobileVisible && !mIsAirplaneMode) {
    mMobile.setImageResource(mMobileStrengthId);
    mMobileType.setImageResource(mMobileTypeId);
    mMobileGroup.setContentDescription(mMobileTypeDescription + " " + mMobileDescription);
    mMobileGroup.setVisibility(View.VISIBLE);
  }
 else {
    mMobileGroup.setVisibility(View.GONE);
  }
  if (mIsAirplaneMode) {
    mAirplane.setImageResource(mAirplaneIconId);
    mAirplane.setVisibility(View.VISIBLE);
  }
 else {
    mAirplane.setVisibility(View.GONE);
  }
  if (mMobileVisible && mWifiVisible && mIsAirplaneMode) {
    mSpacer.setVisibility(View.INVISIBLE);
  }
 else {
    mSpacer.setVisibility(View.GONE);
  }
  if (DEBUG)   Log.d(TAG,String.format("mobile: %s sig=%d typ=%d",(mMobileVisible ? "VISIBLE" : "GONE"),mMobileStrengthId,mMobileTypeId));
  mMobileType.setVisibility(!mWifiVisible ? View.VISIBLE : View.GONE);
}
