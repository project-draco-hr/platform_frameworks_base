{
  if (mWifiGroup == null)   return;
  if (mWifiVisible) {
    mWifiGroup.setVisibility(View.VISIBLE);
    mWifi.setImageResource(mWifiStrengthId);
    mWifiActivity.setImageResource(mWifiActivityId);
  }
 else {
    mWifiGroup.setVisibility(View.GONE);
  }
  if (DEBUG)   Slog.d(TAG,String.format("wifi: %s sig=%d act=%d",(mWifiVisible ? "VISIBLE" : "GONE"),mWifiStrengthId,mWifiActivityId));
  if (mMobileVisible) {
    mMobileGroup.setVisibility(View.VISIBLE);
    mMobile.setImageResource(mMobileStrengthId);
    mMobileActivity.setImageResource(mMobileActivityId);
    mMobileType.setImageResource(mMobileTypeId);
  }
 else {
    mMobileGroup.setVisibility(View.GONE);
  }
  if (DEBUG)   Slog.d(TAG,String.format("mobile: %s sig=%d act=%d typ=%d",(mMobileVisible ? "VISIBLE" : "GONE"),mMobileStrengthId,mMobileActivityId,mMobileTypeId));
  mMobileType.setVisibility(!mWifiVisible ? View.VISIBLE : View.GONE);
}
