{
  final MtpDeviceRecord[] result=new MtpDeviceRecord[mDevices.size()];
  for (int i=0; i < mDevices.size(); i++) {
    final MtpDeviceRecord device=mDevices.valueAt(i);
    if (device.opened) {
      result[i]=device;
    }
 else {
      result[i]=new MtpDeviceRecord(device.deviceId,device.name,device.opened,new MtpRoot[0],new int[0]);
    }
  }
  return result;
}
