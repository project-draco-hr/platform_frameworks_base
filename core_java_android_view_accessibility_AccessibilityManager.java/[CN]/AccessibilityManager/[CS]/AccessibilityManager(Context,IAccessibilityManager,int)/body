{
  mHandler=new MyHandler(context.getMainLooper());
  mService=service;
  mUserId=userId;
  if (mService == null) {
    mIsEnabled=false;
  }
  try {
    if (mService != null) {
      final int stateFlags=mService.addClient(mClient,userId);
      setState(stateFlags);
    }
  }
 catch (  RemoteException re) {
    Log.e(LOG_TAG,"AccessibilityManagerService is dead",re);
  }
}
