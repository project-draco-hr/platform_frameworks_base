{
  try {
    ParcelFileDescriptor fd=mService.getWallpaper(this);
    if (fd != null) {
      Bitmap bm=BitmapFactory.decodeFileDescriptor(fd.getFileDescriptor());
      if (bm != null) {
        bm.setDensity(0);
        return new BitmapDrawable(context.getResources(),bm);
      }
    }
  }
 catch (  RemoteException e) {
  }
  return null;
}
