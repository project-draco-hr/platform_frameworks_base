{
  xPoints=new float[pts.size()];
  yPoints=new float[pts.size()];
  timestamps=new long[pts.size()];
  RectF bx=null;
  float len=0;
  int index=0;
  int count=pts.size();
  float[] xpts=xPoints;
  float[] ypts=yPoints;
  long[] times=timestamps;
  for (int i=0; i < count; i++) {
    GesturePoint p=pts.get(i);
    xpts[index]=p.xpos;
    ypts[index]=p.ypos;
    times[index]=p.timestamp;
    if (bx == null) {
      bx=new RectF();
      bx.top=p.ypos;
      bx.left=p.xpos;
      bx.right=p.xpos;
      bx.bottom=p.ypos;
      len=0;
    }
 else {
      len+=Math.sqrt(Math.pow(p.xpos - xpts[index - 1],2) + Math.pow(p.ypos - ypts[index - 1],2));
      bx.union(p.xpos,p.ypos);
    }
    index++;
  }
  boundingBox=bx;
  length=len;
}
