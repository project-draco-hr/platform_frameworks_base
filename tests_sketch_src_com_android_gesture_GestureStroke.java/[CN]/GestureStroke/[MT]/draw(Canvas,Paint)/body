{
  if (mCachedPath == null) {
    float[] xpts=xPoints;
    float[] ypts=yPoints;
    int count=xpts.length;
    Path path=null;
    float mX=0, mY=0;
    for (int i=0; i < count; i++) {
      float x=xpts[i];
      float y=ypts[i];
      if (path == null) {
        path=new Path();
        path.moveTo(x,y);
        mX=x;
        mY=y;
      }
 else {
        float dx=Math.abs(x - mX);
        float dy=Math.abs(y - mY);
        if (dx >= 3 || dy >= 3) {
          path.quadTo(mX,mY,(x + mX) / 2,(y + mY) / 2);
          mX=x;
          mY=y;
        }
      }
    }
    mCachedPath=path;
  }
  canvas.drawPath(mCachedPath,paint);
}
