{
  if (DEBUG)   Slog.d(TAG,"Entering thread");
  while (true) {
synchronized (this) {
      if (mStopped) {
        if (DEBUG)         Slog.d(TAG,"Exiting thread");
        return;
      }
      try {
        openSocketLocked();
      }
 catch (      Exception e) {
        SystemClock.sleep(1000);
      }
    }
    try {
      listenToSocket();
    }
 catch (    IOException e) {
      SystemClock.sleep(1000);
    }
  }
}
