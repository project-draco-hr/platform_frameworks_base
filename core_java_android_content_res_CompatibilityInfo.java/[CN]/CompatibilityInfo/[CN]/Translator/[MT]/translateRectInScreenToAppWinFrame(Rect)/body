{
  if (rect.isEmpty())   return;
switch (mShiftMode) {
case X_SHIFT_AND_CLIP_CONTENT:
    rect.intersect(0,0,mWidth,mHeight);
  break;
case X_SHIFT_CONTENT:
rect.intersect(0,0,mWidth + mXOffset,mHeight);
break;
case X_SHIFT_WINDOW:
case X_SHIFT_NONE:
break;
}
if (scalingRequired) {
rect.scale(applicationInvertedScale);
}
}
