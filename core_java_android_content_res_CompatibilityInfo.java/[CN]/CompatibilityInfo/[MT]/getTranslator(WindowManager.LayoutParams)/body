{
  if ((mCompatibilityFlags & CompatibilityInfo.SCALING_EXPANDABLE_MASK) == CompatibilityInfo.EXPANDABLE) {
    if (DBG)     Log.d(TAG,"no translation required");
    return null;
  }
  if (!isScalingRequired() || (params.flags & WindowManager.LayoutParams.FLAG_NO_COMPATIBILITY_SCALING) != 0) {
    return null;
  }
  return new Translator();
}
