{
  if (orig != null) {
    mThemeAttrs=orig.mThemeAttrs;
    mPaint=orig.mPaint;
    mShape=orig.mShape;
    mTint=orig.mTint;
    mTintMode=orig.mTintMode;
    mPadding=orig.mPadding;
    mIntrinsicWidth=orig.mIntrinsicWidth;
    mIntrinsicHeight=orig.mIntrinsicHeight;
    mAlpha=orig.mAlpha;
    mShaderFactory=orig.mShaderFactory;
  }
 else {
    mPaint=new Paint();
  }
}
