{
  if (x > bounds.getMaxX()) {
    return breaker.isLTR() ? TextHitInfo.trailing(breaker.getCharCount() - 1) : TextHitInfo.leading(0);
  }
  if (x < bounds.getMinX()) {
    return breaker.isLTR() ? TextHitInfo.leading(0) : TextHitInfo.trailing(breaker.getCharCount() - 1);
  }
  return breaker.hitTest(x,y);
}
