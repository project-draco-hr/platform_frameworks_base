{
  Builder b;
  b=new Builder(mRS,Element.RGBA_8888(mRS));
  b.setX(width).setY(height);
  mScreen=Allocation.createTyped(mRS,b.create(),Allocation.USAGE_GRAPHICS_TEXTURE | Allocation.USAGE_GRAPHICS_RENDER_TARGET);
  mScript.set_gScreen(mScreen);
  b=new Builder(mRS,Element.createPixel(mRS,DataType.UNSIGNED_16,DataKind.PIXEL_DEPTH));
  b.setX(width).setY(height);
  mScreenDepth=Allocation.createTyped(mRS,b.create(),Allocation.USAGE_GRAPHICS_RENDER_TARGET);
  mScript.set_gScreenDepth(mScreenDepth);
}
