{
  if (mView == null) {
    return;
  }
  setBounds(x,y,width,height);
  final AbsoluteLayout.LayoutParams lp=new AbsoluteLayout.LayoutParams(ctvX(width),ctvX(height),ctvX(x),ctvY(y));
  mWebView.mPrivateHandler.post(new Runnable(){
    public void run(){
      if (mView.getParent() != null) {
        mView.setLayoutParams(lp);
      }
 else {
        attachViewOnUIThread(lp);
      }
    }
  }
);
}
