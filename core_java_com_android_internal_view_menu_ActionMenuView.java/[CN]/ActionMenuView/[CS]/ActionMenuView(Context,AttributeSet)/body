{
  super(context,attrs);
  TypedArray a=context.obtainStyledAttributes(attrs,com.android.internal.R.styleable.Theme);
  mItemPadding=a.getDimensionPixelOffset(com.android.internal.R.styleable.Theme_actionButtonPadding,0);
  mItemMargin=mItemPadding / 2;
  a.recycle();
  mMaxItems=measureMaxActionButtons();
  final int screen=getResources().getConfiguration().screenLayout;
  mReserveOverflow=(screen & Configuration.SCREENLAYOUT_SIZE_MASK) == Configuration.SCREENLAYOUT_SIZE_XLARGE;
}
