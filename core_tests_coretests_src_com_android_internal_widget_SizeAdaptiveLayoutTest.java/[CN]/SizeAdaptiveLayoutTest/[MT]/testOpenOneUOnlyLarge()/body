{
  inflate(R.layout.size_adaptive_singleton);
  assertNull("largeView should be NULL in the singleton layout",mLargeView);
  SizeAdaptiveLayout.LayoutParams lp=(SizeAdaptiveLayout.LayoutParams)mSmallView.getLayoutParams();
  int height=(int)lp.maxHeight + 10;
  measureAndLayout(height);
  assertEquals("1U should be visible",View.VISIBLE,mSmallView.getVisibility());
}
