{
  if (trimStart > 1 || trimEnd > 1 || trimOffset > 1 || trimStart < 0 || trimEnd < 0 || trimOffset < 0) {
    throw new IllegalArgumentException("trim must be between 0 and 1");
  }
  if (trimStart > trimEnd) {
    throw new IllegalArgumentException("trim end cannot be less than start");
  }
  long dstNative=0;
  if (dst != null) {
    dstNative=dst.mNativePath;
    dst.isSimplePath=false;
    dst.clearMeasure();
  }
  mNativePathMeasure=native_trim(mNativePath,dstNative,mNativePathMeasure,trimStart,trimEnd,trimOffset);
}
