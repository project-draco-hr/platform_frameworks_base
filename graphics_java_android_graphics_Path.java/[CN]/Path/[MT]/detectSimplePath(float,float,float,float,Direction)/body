{
  if (mDetectSimplePaths) {
    if (mLastDirection == null) {
      mLastDirection=dir;
    }
    if (mLastDirection != dir) {
      isSimplePath=false;
    }
 else {
      if (rects == null)       rects=new Region();
      rects.op((int)left,(int)top,(int)right,(int)bottom,Region.Op.UNION);
    }
  }
}
