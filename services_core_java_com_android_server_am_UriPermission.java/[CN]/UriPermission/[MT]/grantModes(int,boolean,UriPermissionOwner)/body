{
  if (persistable) {
    persistableModeFlags|=modeFlags;
  }
  if (owner == null) {
    globalModeFlags|=modeFlags;
  }
 else {
    if ((modeFlags & Intent.FLAG_GRANT_READ_URI_PERMISSION) != 0) {
      addReadOwner(owner);
    }
    if ((modeFlags & Intent.FLAG_GRANT_WRITE_URI_PERMISSION) != 0) {
      addWriteOwner(owner);
    }
  }
  updateModeFlags();
}
