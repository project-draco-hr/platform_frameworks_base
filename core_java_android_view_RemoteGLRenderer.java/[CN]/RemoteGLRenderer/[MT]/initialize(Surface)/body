{
  if (isRequested() && !isEnabled()) {
    mNativeCanvasContext=createContext();
    boolean surfaceCreated=createEglSurface(surface);
    if (surfaceCreated) {
      if (mCanvas == null) {
        mCanvas=createCanvas();
        mCanvas.setName(mName);
      }
      setEnabled(true);
      initAtlas();
      return true;
    }
 else {
      destroy(true);
      setRequested(false);
    }
  }
  return false;
}
