{
  mNextAlarm=nextAlarm;
  if (nextAlarm != null) {
    String alarmString=KeyguardStatusView.formatNextAlarm(getContext(),nextAlarm);
    mAlarmStatus.setText(alarmString);
    mAlarmStatus.setContentDescription(mContext.getString(R.string.accessibility_quick_settings_alarm,alarmString));
    mAlarmStatusCollapsed.setContentDescription(mContext.getString(R.string.accessibility_quick_settings_alarm,alarmString));
  }
  if (mAlarmShowing != (nextAlarm != null)) {
    mAlarmShowing=nextAlarm != null;
    updateEverything();
  }
}
