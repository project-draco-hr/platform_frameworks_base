{
  final Task task=getTask();
  if (task == null) {
    return false;
  }
  if (mAttrs.width != MATCH_PARENT || mAttrs.height != MATCH_PARENT) {
    return false;
  }
  if (task.isDragResizing()) {
    return true;
  }
  return (mDisplayContent.mDividerControllerLocked.isResizing() || mAppToken != null && !mAppToken.mFrozenBounds.isEmpty()) && !task.inFreeformWorkspace() && !isGoneForLayoutLw();
}
