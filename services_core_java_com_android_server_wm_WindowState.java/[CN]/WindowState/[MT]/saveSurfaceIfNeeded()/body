{
  if (ActivityManager.isLowRamDeviceStatic()) {
    return false;
  }
  Task task=getTask();
  if (task == null || task.inHomeStack()) {
    return false;
  }
  if (mAppToken.allDrawn || mAppToken.mAnimatingWithSavedSurface) {
    mAppToken.mHasSavedSurface=true;
    return true;
  }
  return false;
}
