{
  final Task task=getTask();
  if (task != null) {
    task.getBounds(bounds);
    if (forTouch == BOUNDS_FOR_TOUCH) {
      if (task.inFreeformWorkspace()) {
        final int delta=calculatePixelFromDp(RESIZE_HANDLE_WIDTH_IN_DP);
        bounds.inset(-delta,-delta);
      }
    }
    return;
  }
  bounds.set(mFrame);
}
