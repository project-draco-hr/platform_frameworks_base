{
  Handler handler;
  if (mAttachInfo != null) {
    handler=mAttachInfo.mHandler;
  }
 else {
    handler=ViewRoot.sUiThreads.get();
    if (handler == null) {
      ViewRoot.sRunQueue.postDelayed(action,delayMillis);
      return true;
    }
  }
  return handler.postDelayed(action,delayMillis);
}
