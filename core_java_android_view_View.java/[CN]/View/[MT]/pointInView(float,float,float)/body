{
  if (!mMatrixIsIdentity && mAttachInfo != null) {
    final float[] localXY=mAttachInfo.mTmpTransformLocation;
    localXY[0]=localX;
    localXY[1]=localY;
    getInverseMatrix().mapPoints(localXY);
    localX=localXY[0];
    localY=localXY[1];
  }
  if (localX > -slop && localY > -slop && localX < ((mRight - mLeft) + slop) && localY < ((mBottom - mTop) + slop)) {
    return true;
  }
  return false;
}
