{
  if (right != mRight) {
    updateMatrix();
    if (mMatrixIsIdentity) {
      final ViewParent p=mParent;
      if (p != null && mAttachInfo != null) {
        final Rect r=mAttachInfo.mTmpInvalRect;
        int maxRight;
        if (right < mRight) {
          maxRight=mRight;
        }
 else {
          maxRight=right;
        }
        r.set(0,0,maxRight - mLeft,mBottom - mTop);
        p.invalidateChild(this,r);
      }
    }
 else {
      invalidate();
    }
    mRight=right;
    if (!mMatrixIsIdentity) {
      mPrivateFlags|=DRAWN;
      invalidate();
    }
  }
}
