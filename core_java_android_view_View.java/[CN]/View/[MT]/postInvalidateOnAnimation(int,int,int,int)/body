{
  final AttachInfo attachInfo=mAttachInfo;
  if (attachInfo != null) {
    final AttachInfo.InvalidateInfo info=AttachInfo.InvalidateInfo.acquire();
    info.target=this;
    info.left=left;
    info.top=top;
    info.right=right;
    info.bottom=bottom;
    attachInfo.mViewRootImpl.dispatchInvalidateRectOnAnimation(info);
  }
}
