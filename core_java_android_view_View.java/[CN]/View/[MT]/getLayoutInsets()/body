{
  if (mLayoutInsets == null) {
    if (mBackground == null) {
      mLayoutInsets=Insets.NONE;
    }
 else {
      Rect insetRect=new Rect();
      boolean hasInsets=mBackground.getLayoutInsets(insetRect);
      mLayoutInsets=hasInsets ? Insets.of(insetRect) : Insets.NONE;
    }
  }
  return mLayoutInsets;
}
