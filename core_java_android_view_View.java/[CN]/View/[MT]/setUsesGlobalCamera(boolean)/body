{
  if (getUsesGlobalCamera() != usesGlobalCamera) {
    if (usesGlobalCamera) {
      mPrivateFlags3|=PFLAG3_USES_GLOBAL_CAMERA;
    }
 else {
      mPrivateFlags3&=~PFLAG3_USES_GLOBAL_CAMERA;
    }
    if (mDisplayList != null) {
      mDisplayList.setUsesGlobalCamera(usesGlobalCamera);
    }
  }
}
