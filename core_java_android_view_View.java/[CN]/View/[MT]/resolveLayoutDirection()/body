{
  mPrivateFlags2&=~RESOLVED_LAYOUT_RTL;
switch (getLayoutDirection()) {
case LAYOUT_DIRECTION_INHERIT:
    if (mParent != null && mParent instanceof ViewGroup && ((ViewGroup)mParent).isLayoutRtl()) {
      mPrivateFlags2|=RESOLVED_LAYOUT_RTL;
    }
  break;
case LAYOUT_DIRECTION_RTL:
mPrivateFlags2|=RESOLVED_LAYOUT_RTL;
break;
}
}
