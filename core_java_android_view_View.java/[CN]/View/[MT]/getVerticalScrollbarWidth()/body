{
  ScrollabilityCache cache=mScrollCache;
  if (cache != null) {
    ScrollBarDrawable scrollBar=cache.scrollBar;
    if (scrollBar != null) {
      int size=scrollBar.getSize(true);
      if (size <= 0) {
        size=cache.scrollBarSize;
      }
      return size;
    }
    return 0;
  }
  return 0;
}
