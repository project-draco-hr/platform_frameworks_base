{
  int layerType=getLayerType();
  if (layerType != LAYER_TYPE_NONE) {
    mLayerPaint=paint == null ? new Paint() : paint;
    if (layerType == LAYER_TYPE_HARDWARE) {
      if (mRenderNode.setLayerPaint(mLayerPaint)) {
        invalidateViewProperty(false,false);
      }
    }
 else {
      invalidate();
    }
  }
}
