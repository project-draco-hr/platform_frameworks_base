{
  if (top != mTop) {
    updateMatrix();
    if (mMatrixIsIdentity) {
      final ViewParent p=mParent;
      if (p != null && mAttachInfo != null) {
        final Rect r=mAttachInfo.mTmpInvalRect;
        int minTop;
        int yLoc;
        if (top < mTop) {
          minTop=top;
          yLoc=top - mTop;
        }
 else {
          minTop=mTop;
          yLoc=0;
        }
        r.set(0,yLoc,mRight - mLeft,mBottom - minTop);
        p.invalidateChild(this,r);
      }
    }
 else {
      invalidate();
    }
    mTop=top;
    if (!mMatrixIsIdentity) {
      mPrivateFlags|=DRAWN;
      invalidate();
    }
  }
}
