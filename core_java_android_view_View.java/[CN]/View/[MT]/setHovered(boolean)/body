{
  if (hovered) {
    if ((mPrivateFlags & HOVERED) == 0) {
      mPrivateFlags|=HOVERED;
      refreshDrawableState();
      sendAccessibilityEvent(AccessibilityEvent.TYPE_VIEW_HOVER_ENTER);
    }
  }
 else {
    if ((mPrivateFlags & HOVERED) != 0) {
      mPrivateFlags&=~HOVERED;
      refreshDrawableState();
      sendAccessibilityEvent(AccessibilityEvent.TYPE_VIEW_HOVER_EXIT);
    }
  }
}
