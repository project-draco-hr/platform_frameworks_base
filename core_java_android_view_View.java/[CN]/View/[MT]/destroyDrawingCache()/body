{
  if (mDrawingCache != null) {
    final Bitmap bitmap=mDrawingCache.get();
    if (bitmap != null)     bitmap.recycle();
    mDrawingCache=null;
  }
  if (mUnscaledDrawingCache != null) {
    final Bitmap bitmap=mUnscaledDrawingCache.get();
    if (bitmap != null)     bitmap.recycle();
    mUnscaledDrawingCache=null;
  }
}
