{
  if (mHardwareLayer != null) {
    AttachInfo info=mAttachInfo;
    if (info != null && info.mHardwareRenderer != null && info.mHardwareRenderer.isEnabled() && info.mHardwareRenderer.validate()) {
      mHardwareLayer.destroy();
      mHardwareLayer=null;
      invalidate(true);
      invalidateParentCaches();
    }
    return true;
  }
  return false;
}
