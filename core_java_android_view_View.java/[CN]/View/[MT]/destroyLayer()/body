{
  if (mHardwareLayer != null) {
    AttachInfo info=mAttachInfo;
    if (info != null && info.mHardwareRenderer != null && info.mHardwareRenderer.isEnabled()) {
      if (!info.mHardwareRenderer.validate()) {
        mHardwareLayer.destroy();
        mHardwareLayer=null;
      }
    }
    return true;
  }
  return false;
}
