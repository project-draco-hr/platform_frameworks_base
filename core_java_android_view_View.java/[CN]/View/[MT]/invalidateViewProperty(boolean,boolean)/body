{
  if (mDisplayList == null || (mPrivateFlags & PFLAG_DRAW_ANIMATION) == PFLAG_DRAW_ANIMATION) {
    if (invalidateParent) {
      invalidateParentCaches();
    }
    if (forceRedraw) {
      mPrivateFlags|=PFLAG_DRAWN;
    }
    invalidate(false);
  }
 else {
    damageInParent();
  }
  if (invalidateParent && getTranslationZ() != 0) {
    damageShadowReceiver();
  }
}
