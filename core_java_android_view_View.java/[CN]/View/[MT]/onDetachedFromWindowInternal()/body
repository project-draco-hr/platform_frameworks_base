{
  mPrivateFlags&=~PFLAG_CANCEL_NEXT_UP_EVENT;
  mPrivateFlags3&=~PFLAG3_IS_LAID_OUT;
  removeUnsetPressCallback();
  removeLongPressCallback();
  removePerformClickCallback();
  removeSendViewScrolledAccessibilityEventCallback();
  stopNestedScroll();
