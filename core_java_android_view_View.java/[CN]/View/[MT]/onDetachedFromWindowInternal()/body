{
  mPrivateFlags&=~PFLAG_CANCEL_NEXT_UP_EVENT;
  mPrivateFlags3&=~PFLAG3_IS_LAID_OUT;
  mPrivateFlags3&=~PFLAG3_TEMPORARY_DETACH;
  removeUnsetPressCallback();
