{
  ensureTransformationInfo();
  if (mTransformationInfo.mAlpha != alpha) {
    mTransformationInfo.mAlpha=alpha;
    invalidateParentCaches();
    if (onSetAlpha((int)(alpha * 255))) {
      mPrivateFlags|=ALPHA_SET;
      invalidate(true);
    }
 else {
      mPrivateFlags&=~ALPHA_SET;
      invalidate(false);
    }
  }
}
