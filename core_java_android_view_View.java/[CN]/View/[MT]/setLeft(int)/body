{
  if (left != mLeft) {
    if (hasIdentityMatrix()) {
      final ViewParent p=mParent;
      if (p != null && mAttachInfo != null) {
        final Rect r=mAttachInfo.mTmpInvalRect;
        int minLeft;
        int xLoc;
        if (left < mLeft) {
          minLeft=left;
          xLoc=left - mLeft;
        }
 else {
          minLeft=mLeft;
          xLoc=0;
        }
        r.set(xLoc,0,mRight - minLeft,mBottom - mTop);
        p.invalidateChild(this,r);
      }
    }
 else {
      invalidate();
    }
    mLeft=left;
    if (!mMatrixIsIdentity) {
      mPrivateFlags|=DRAWN;
      invalidate();
    }
  }
}
