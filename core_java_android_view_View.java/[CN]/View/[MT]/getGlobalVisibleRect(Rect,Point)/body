{
  int width=mRight - mLeft;
  int height=mBottom - mTop;
  if (width > 0 && height > 0) {
    r.set(0,0,width,height);
    if (globalOffset != null) {
      globalOffset.set(-mScrollX,-mScrollY);
    }
    return mParent == null || mParent.getChildVisibleRect(this,r,globalOffset);
  }
  return false;
}
