{
  final AttachInfo ai=mAttachInfo;
  if (ai != null) {
    ViewParent p=getParent();
    while (p != null) {
      if (p instanceof ViewGroup) {
        final ViewGroup vg=(ViewGroup)p;
        if (vg.hasIsolatedZVolume()) {
          vg.damageInParent();
          return;
        }
      }
      p=p.getParent();
    }
  }
}
