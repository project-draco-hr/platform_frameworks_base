{
  Matrix m=getMatrix();
  if (mMatrixIsIdentity || mAttachInfo == null) {
    outRect.set(mLeft,mTop,mRight,mBottom);
  }
 else {
    final RectF tmpRect=mAttachInfo.mTmpTransformRect;
    tmpRect.set(-mPivotX,-mPivotY,getWidth() - mPivotX,getHeight() - mPivotY);
    m.mapRect(tmpRect);
    outRect.set((int)tmpRect.left + mLeft,(int)tmpRect.top + mTop,(int)tmpRect.right + mLeft,(int)tmpRect.bottom + mTop);
  }
}
