{
  if (mInfo == null) {
    mInfo=new DisplayDeviceInfo();
    mInfo.name=mName;
    mInfo.width=mWidth;
    mInfo.height=mHeight;
    mInfo.refreshRate=mRefreshRate;
    mInfo.flags=mFlags;
    mInfo.touch=DisplayDeviceInfo.TOUCH_EXTERNAL;
    mInfo.setAssumedDensityForExternalDisplay(mWidth,mHeight);
  }
  return mInfo;
}
