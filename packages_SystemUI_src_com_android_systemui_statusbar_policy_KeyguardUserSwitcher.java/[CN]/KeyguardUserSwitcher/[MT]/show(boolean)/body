{
  if (mUserSwitcher != null && mUserSwitcherContainer.getVisibility() != View.VISIBLE) {
    cancelAnimations();
    mAdapter.refresh();
    mUserSwitcherContainer.setVisibility(View.VISIBLE);
    mStatusBarView.setKeyguardUserSwitcherShowing(true,animate);
    if (animate) {
      startAppearAnimation();
    }
  }
}
