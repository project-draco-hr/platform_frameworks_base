{
  if (mUserSwitcher != null) {
    new AsyncTask<Void,Void,ArrayList<UserData>>(){
      @Override protected ArrayList<UserData> doInBackground(      Void... params){
        return loadUsers();
      }
      @Override protected void onPostExecute(      ArrayList<UserData> userInfos){
        bind(userInfos);
      }
    }
.execute((Void[])null);
  }
}
