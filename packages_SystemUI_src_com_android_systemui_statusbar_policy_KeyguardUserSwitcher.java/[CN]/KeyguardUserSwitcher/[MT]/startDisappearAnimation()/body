{
  mAnimating=true;
  mUserSwitcher.animate().alpha(0f).setDuration(300).setInterpolator(Interpolators.ALPHA_OUT).withEndAction(new Runnable(){
    @Override public void run(){
      mUserSwitcherContainer.setVisibility(View.GONE);
      mUserSwitcher.setAlpha(1f);
      mAnimating=false;
    }
  }
);
}
