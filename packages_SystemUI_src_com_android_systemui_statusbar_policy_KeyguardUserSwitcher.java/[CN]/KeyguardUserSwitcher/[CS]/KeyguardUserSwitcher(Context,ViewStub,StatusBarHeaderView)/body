{
  mContext=context;
  if (context.getResources().getBoolean(R.bool.config_keyguardUserSwitcher)) {
    mUserSwitcher=(ViewGroup)userSwitcher.inflate();
    mUserManager=(UserManager)context.getSystemService(Context.USER_SERVICE);
    mHeader=header;
    refresh();
  }
 else {
    mUserSwitcher=null;
    mUserManager=null;
    mHeader=null;
  }
}
