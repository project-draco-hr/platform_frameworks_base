{
  int n=getNumComponents();
  maxValues=new float[n];
  minValues=new float[n];
switch (getType()) {
case ColorSpace.TYPE_XYZ:
    minValues[0]=0;
  minValues[1]=0;
minValues[2]=0;
maxValues[0]=MAX_XYZ;
maxValues[1]=MAX_XYZ;
maxValues[2]=MAX_XYZ;
break;
case ColorSpace.TYPE_Lab:
minValues[0]=0;
minValues[1]=-128;
minValues[2]=-128;
maxValues[0]=100;
maxValues[1]=127;
maxValues[2]=127;
break;
default :
for (int i=0; i < n; i++) {
minValues[i]=0;
maxValues[i]=1;
}
}
}
