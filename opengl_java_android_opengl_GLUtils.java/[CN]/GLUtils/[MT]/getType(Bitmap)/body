{
  if (bitmap == null) {
    throw new NullPointerException("getType can't be used with a null Bitmap");
  }
  int type;
switch (bitmap.getConfig()) {
case ARGB_4444:
    type=GL10.GL_UNSIGNED_SHORT_4_4_4_4;
  break;
case RGB_565:
type=GL10.GL_UNSIGNED_SHORT_5_6_5;
break;
case ALPHA_8:
case ARGB_8888:
default :
type=GL10.GL_UNSIGNED_BYTE;
break;
}
return type;
}
