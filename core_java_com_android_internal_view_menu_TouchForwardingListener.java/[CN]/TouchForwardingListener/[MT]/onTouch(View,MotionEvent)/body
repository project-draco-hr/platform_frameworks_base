{
  final int actionMasked=ev.getActionMasked();
  if (mForwarding) {
    if (!onTouchForwarded(v,ev) || actionMasked == MotionEvent.ACTION_UP || actionMasked == MotionEvent.ACTION_CANCEL) {
      stopForwarding();
    }
  }
 else {
    if (onTouchObserved(v,ev)) {
      startForwarding();
    }
  }
  return mForwarding;
}
