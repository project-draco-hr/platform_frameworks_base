{
  super(handler);
  ContentResolver cr=mContext.getContentResolver();
  cr.registerContentObserver(Settings.System.getUriFor(Settings.System.WIFI_USE_STATIC_IP),false,this);
  cr.registerContentObserver(Settings.System.getUriFor(Settings.System.WIFI_STATIC_IP),false,this);
  cr.registerContentObserver(Settings.System.getUriFor(Settings.System.WIFI_STATIC_GATEWAY),false,this);
  cr.registerContentObserver(Settings.System.getUriFor(Settings.System.WIFI_STATIC_NETMASK),false,this);
  cr.registerContentObserver(Settings.System.getUriFor(Settings.System.WIFI_STATIC_DNS1),false,this);
  cr.registerContentObserver(Settings.System.getUriFor(Settings.System.WIFI_STATIC_DNS2),false,this);
}
