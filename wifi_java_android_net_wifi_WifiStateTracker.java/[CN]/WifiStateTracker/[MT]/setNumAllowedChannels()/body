{
  if (mWifiState.get() != WIFI_STATE_ENABLED && !isDriverStopped()) {
    return false;
  }
  try {
    return setNumAllowedChannels(Settings.Secure.getInt(mContext.getContentResolver(),Settings.Secure.WIFI_NUM_ALLOWED_CHANNELS));
  }
 catch (  Settings.SettingNotFoundException e) {
    if (mNumAllowedChannels != 0) {
      WifiNative.setNumAllowedChannelsCommand(mNumAllowedChannels);
    }
  }
  return true;
}
