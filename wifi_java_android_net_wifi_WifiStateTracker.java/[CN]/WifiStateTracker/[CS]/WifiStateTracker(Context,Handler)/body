{
  super(context,target,ConnectivityManager.TYPE_WIFI,0,"WIFI","");
  mWifiInfo=new WifiInfo();
  mWifiMonitor=new WifiMonitor(this);
  mHaveIpAddress=false;
  mObtainingIpAddress=false;
