{
  if (mHintText != null && mHintText.length() > 0) {
    final TextView hintView=(TextView)LayoutInflater.from(context).inflate(mHintResource,null).findViewById(com.android.internal.R.id.text1);
    hintView.setText(mHintText);
    hintView.setId(HINT_VIEW_ID);
    return hintView;
  }
 else {
    return null;
  }
}
