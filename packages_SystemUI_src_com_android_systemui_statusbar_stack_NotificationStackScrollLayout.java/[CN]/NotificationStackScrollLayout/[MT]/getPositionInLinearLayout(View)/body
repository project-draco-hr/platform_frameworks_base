{
  int position=0;
  for (int i=0; i < getChildCount(); i++) {
    View child=getChildAt(i);
    if (child == requestedChild) {
      return position;
    }
    if (child.getVisibility() != View.GONE) {
      position+=getIntrinsicHeight(child);
      if (i < getChildCount() - 1) {
        position+=mPaddingBetweenElements;
      }
    }
  }
  return 0;
}
