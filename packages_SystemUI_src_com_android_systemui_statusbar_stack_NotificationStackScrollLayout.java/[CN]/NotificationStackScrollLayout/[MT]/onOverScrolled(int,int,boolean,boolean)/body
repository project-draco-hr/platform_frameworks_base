{
  if (!mScroller.isFinished()) {
    final int oldX=mScrollX;
    final int oldY=mOwnScrollY;
    mScrollX=scrollX;
    mOwnScrollY=scrollY;
    if (clampedY) {
      springBack();
    }
 else {
      onScrollChanged(mScrollX,mOwnScrollY,oldX,oldY);
      invalidateParentIfNeeded();
      updateChildren();
    }
  }
 else {
    customScrollTo(scrollY);
    scrollTo(scrollX,mScrollY);
  }
}
