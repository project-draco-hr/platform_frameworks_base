{
  if (userId < 1)   return;
synchronized (mAppWidgetServices) {
    AppWidgetServiceImpl impl=mAppWidgetServices.get(userId);
    mAppWidgetServices.remove(userId);
    if (impl == null) {
      AppWidgetServiceImpl.getSettingsFile(userId).delete();
    }
 else {
      impl.onUserRemoved();
    }
  }
}
