{
  mSilentMode=!mSilentMode;
  if (mSilentMode) {
    final boolean vibe=(Settings.System.getInt(getContext().getContentResolver(),Settings.System.VIBRATE_IN_SILENT,1) == 1);
    mAudioManager.setRingerMode(vibe ? AudioManager.RINGER_MODE_VIBRATE : AudioManager.RINGER_MODE_SILENT);
  }
 else {
    mAudioManager.setRingerMode(AudioManager.RINGER_MODE_NORMAL);
  }
}
