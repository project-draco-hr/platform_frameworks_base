{
  final String bestDateTimePattern=DateFormat.getBestDateTimePattern(locale,is24Hour ? "Hm" : "hm");
  final int lengthPattern=bestDateTimePattern.length();
  boolean showLeadingZero=false;
  char hourFormat='\0';
  for (int i=0; i < lengthPattern; i++) {
    final char c=bestDateTimePattern.charAt(i);
    if (c == 'H' || c == 'h' || c == 'K' || c == 'k') {
      hourFormat=c;
      if (i + 1 < lengthPattern && c == bestDateTimePattern.charAt(i + 1)) {
        showLeadingZero=true;
      }
      break;
    }
  }
  mHourFormatShowLeadingZero=showLeadingZero;
  mHourFormatStartsAtZero=hourFormat == 'K' || hourFormat == 'H';
}
