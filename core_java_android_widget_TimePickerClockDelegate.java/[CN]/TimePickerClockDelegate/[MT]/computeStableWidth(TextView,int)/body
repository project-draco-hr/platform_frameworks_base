{
  int maxWidth=0;
  for (int i=0; i < maxNumber; i++) {
    final String text=String.format("%02d",i);
    v.setText(text);
    v.measure(View.MeasureSpec.UNSPECIFIED,View.MeasureSpec.UNSPECIFIED);
    final int width=v.getMeasuredWidth();
    if (width > maxWidth) {
      maxWidth=width;
    }
  }
  return maxWidth;
}
