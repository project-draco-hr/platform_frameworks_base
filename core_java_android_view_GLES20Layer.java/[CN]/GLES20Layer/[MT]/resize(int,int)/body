{
  if (!isValid() || width <= 0 || height <= 0)   return;
  if (width > mLayerWidth || height > mLayerHeight) {
    mWidth=width;
    mHeight=height;
    int[] layerInfo=new int[2];
    GLES20Canvas.nResizeLayer(mLayer,width,height,layerInfo);
    mLayerWidth=layerInfo[0];
    mLayerHeight=layerInfo[1];
  }
}
