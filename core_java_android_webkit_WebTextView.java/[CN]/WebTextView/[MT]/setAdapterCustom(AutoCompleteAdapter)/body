{
  if (adapter != null) {
    setInputType(getInputType() | EditorInfo.TYPE_TEXT_FLAG_AUTO_COMPLETE);
    adapter.setTextView(this);
    if (mAutoFillable) {
      setOnItemClickListener(this);
    }
 else {
      setOnItemClickListener(null);
    }
    showDropDown();
  }
 else {
    dismissDropDown();
  }
  super.setAdapter(adapter);
}
