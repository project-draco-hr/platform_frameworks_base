{
  this.account=account;
  this.userId=userId;
  this.authority=authority;
  this.service=null;
  this.ident=ident;
  enabled=SYNC_ENABLED_DEFAULT;
  syncable=-1;
  backoffTime=-1;
  backoffDelay=-1;
  periodicSyncs=new ArrayList<PeriodicSync>();
  periodicSyncs.add(new PeriodicSync(account,authority,new Bundle(),DEFAULT_POLL_FREQUENCY_SECONDS,calculateDefaultFlexTime(DEFAULT_POLL_FREQUENCY_SECONDS)));
}
