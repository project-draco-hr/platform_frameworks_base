{
  mValues[0]=1;
  mValues[1]=0;
  mValues[2]=-px;
  mValues[3]=0;
  mValues[4]=1;
  mValues[5]=-py;
  mValues[6]=0;
  mValues[7]=0;
  mValues[8]=1;
  double rad=Math.toRadians(degrees);
  float cos=(float)Math.cos(rad);
  float sin=(float)Math.sin(rad);
  addTransform(new float[]{cos,-sin,0,sin,cos,0,0,0,1});
  addTransform(new float[]{1,0,px,0,1,py,0,0,1});
}
