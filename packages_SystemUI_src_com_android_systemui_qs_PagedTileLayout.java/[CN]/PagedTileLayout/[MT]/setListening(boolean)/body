{
  if (mListening == listening)   return;
  mListening=listening;
  if (mListening) {
    mPages.get(mPosition).setListening(listening);
    if (mOffPage) {
      mPages.get(mPosition + 1).setListening(listening);
    }
  }
 else {
    for (int i=0; i < mPages.size(); i++) {
      mPages.get(i).setListening(false);
    }
  }
}
