{
  super.onMeasure(widthMeasureSpec,heightMeasureSpec);
  int maxHeight=0;
  final int N=getChildCount();
  for (int i=0; i < N; i++) {
    int height=getChildAt(i).getMeasuredHeight();
    if (height > maxHeight) {
      maxHeight=height;
    }
  }
  setMeasuredDimension(getMeasuredWidth(),maxHeight + mPageIndicator.getMeasuredHeight());
}
