{
  if (mMenuButton.getVisibility() == View.VISIBLE) {
    on=true;
  }
  Slog.v(TAG,"setLightsOn(" + on + ")");
  if (on) {
    setSystemUiVisibility(mSystemUiVisibility & ~View.SYSTEM_UI_FLAG_LOW_PROFILE);
  }
 else {
    setSystemUiVisibility(mSystemUiVisibility | View.SYSTEM_UI_FLAG_LOW_PROFILE);
  }
}
