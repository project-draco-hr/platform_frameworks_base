{
  if (DEBUG)   Slog.d(TAG,"clicked notification icons; disabled=" + mDisabled);
  if ((mDisabled & StatusBarManager.DISABLE_EXPAND) == 0) {
    if (!mNotificationsOn) {
      mNotificationsOn=true;
      mIconLayout.setVisibility(View.VISIBLE);
      refreshNotificationTrigger();
    }
 else {
      int msg=!mNotificationPanel.isShowing() ? MSG_OPEN_NOTIFICATION_PANEL : MSG_CLOSE_NOTIFICATION_PANEL;
      mHandler.removeMessages(msg);
      mHandler.sendEmptyMessage(msg);
    }
  }
}
