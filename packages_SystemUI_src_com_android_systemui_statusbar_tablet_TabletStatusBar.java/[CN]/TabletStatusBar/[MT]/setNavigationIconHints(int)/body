{
  if (hints == mNavigationIconHints)   return;
  if (DEBUG) {
    android.widget.Toast.makeText(mContext,"Navigation icon hints = " + hints,500).show();
  }
  mNavigationIconHints=hints;
  mBackButton.setAlpha((0 != (hints & StatusBarManager.NAVIGATION_HINT_BACK_NOP)) ? 0.5f : 1.0f);
  mHomeButton.setAlpha((0 != (hints & StatusBarManager.NAVIGATION_HINT_HOME_NOP)) ? 0.5f : 1.0f);
  mRecentButton.setAlpha((0 != (hints & StatusBarManager.NAVIGATION_HINT_RECENT_NOP)) ? 0.5f : 1.0f);
  mBackButton.setImageResource((0 != (hints & StatusBarManager.NAVIGATION_HINT_BACK_ALT)) ? R.drawable.ic_sysbar_back_ime : R.drawable.ic_sysbar_back);
}
