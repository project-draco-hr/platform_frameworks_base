{
  if (DBG)   log("Connecting to carrier: '" + apn.carrier + "' APN: '"+ apn.apn+ "' proxy: '"+ apn.proxy+ "' port: '"+ apn.port);
  setHttpProxy(apn.proxy,apn.port);
  state=State.ACTIVATING;
  this.apn=apn;
  onConnectCompleted=onCompleted;
  createTime=-1;
  lastFailTime=-1;
  lastFailCause=FailCause.NONE;
  receivedDisconnectReq=false;
  if (FAKE_FAIL) {
    if (apn.apn.equalsIgnoreCase("badapn")) {
      notifyFail(FailCause.BAD_APN,onConnectCompleted);
      return;
    }
  }
  phone.mCM.setupDataCall(Integer.toString(RILConstants.GSM_PHONE),null,apn.apn,apn.user,apn.password,obtainMessage(EVENT_SETUP_DATA_CONNECTION_DONE));
}
