{
  super.onDraw(canvas);
  final RectF r=mTmpRect;
  final Paint p=mTmpPaint;
  final int w=getWidth();
  final int h=getHeight();
  r.set(0,0,w,h);
  p.setColor(mBackgroundColor);
  canvas.drawRect(r,p);
  r.set(0,0,w * mUsageLevel / (float)mMaxLevel,h);
  p.setColor(mUsageColor);
  canvas.drawRect(r,p);
}
