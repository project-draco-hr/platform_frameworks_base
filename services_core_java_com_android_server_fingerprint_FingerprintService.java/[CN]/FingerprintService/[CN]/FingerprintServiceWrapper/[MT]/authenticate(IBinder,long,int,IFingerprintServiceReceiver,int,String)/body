{
  if (!canUseFingerprint(opPackageName,true)) {
    if (DEBUG)     Slog.v(TAG,"authenticate(): reject " + opPackageName);
    return;
  }
  final int effectiveGroupId=getEffectiveUserId(groupId);
  final int realUserId=Binder.getCallingUid();
  final boolean restricted=isRestricted();
  mHandler.post(new Runnable(){
    @Override public void run(){
      MetricsLogger.histogram(mContext,"fingerprint_token",opId != 0L ? 1 : 0);
      startAuthentication(token,opId,realUserId,effectiveGroupId,receiver,flags,restricted,opPackageName);
    }
  }
);
}
