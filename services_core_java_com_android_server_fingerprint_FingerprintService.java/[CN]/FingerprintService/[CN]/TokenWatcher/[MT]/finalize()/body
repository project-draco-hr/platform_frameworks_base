{
  try {
    if (token != null) {
      if (DEBUG)       Slog.w(TAG,"removing leaked reference: " + token);
      if (mAuthClient != null && mAuthClient.token == token) {
        mAuthClient.destroy();
        mAuthClient=null;
      }
      if (mEnrollClient != null && mEnrollClient.token == token) {
        mAuthClient.destroy();
        mEnrollClient=null;
      }
    }
  }
  finally {
    super.finalize();
  }
}
