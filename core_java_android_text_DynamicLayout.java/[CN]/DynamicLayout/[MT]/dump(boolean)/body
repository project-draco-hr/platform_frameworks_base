{
  int n=getLineCount();
  for (int i=0; i < n; i++) {
    System.out.print("line " + i + ": "+ getLineStart(i)+ " to "+ getLineEnd(i)+ " ");
    if (show) {
      System.out.print(getText().subSequence(getLineStart(i),getLineEnd(i)));
    }
    System.out.println("");
  }
  System.out.println("");
}
