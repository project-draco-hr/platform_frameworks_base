{
synchronized (mAppWidgetIds) {
    ensureStateLoadedLocked();
    final int N=mInstalledProviders.size();
    ArrayList<AppWidgetProviderInfo> result=new ArrayList<AppWidgetProviderInfo>(N);
    for (int i=0; i < N; i++) {
      Provider p=mInstalledProviders.get(i);
      if (!p.zombie) {
        result.add(p.info);
      }
    }
    return result;
  }
}
