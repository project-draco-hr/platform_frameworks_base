{
  int appWidgetId=id.appWidgetId;
  Iterator<Pair<Integer,Intent.FilterComparison>> it=mBoundRemoteViewsServices.keySet().iterator();
  while (it.hasNext()) {
    final Pair<Integer,Intent.FilterComparison> key=it.next();
    if (key.first.intValue() == appWidgetId) {
      final ServiceConnectionProxy conn=(ServiceConnectionProxy)mBoundRemoteViewsServices.get(key);
      conn.disconnect();
      mContext.unbindService(conn);
      it.remove();
    }
  }
}
