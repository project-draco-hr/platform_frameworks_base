{
  float topPeekHeightPct=(float)mFocusedTopPeekHeight / mStackRect.height();
  float bottomPeekHeightPct=Math.max(mSystemInsets.bottom + mFocusedRange.relativeMax * mFocusedBottomTaskPeekHeight,mStackBottomOffset + mFocusedBottomTaskPeekHeight) / mStackRect.height();
  Path p=new Path();
  p.moveTo(0f,1f);
  p.lineTo(0.5f,1f - topPeekHeightPct);
  p.lineTo(0.5f + (0.5f / mFocusedRange.relativeMax),bottomPeekHeightPct);
  p.lineTo(1f,0f);
  return p;
}
