{
  Utilities.cancelAnimationWithoutCallbacks(mFocusStateAnimator);
  if (Float.compare(newState,getFocusState()) != 0) {
    mFocusStateAnimator=ObjectAnimator.ofFloat(this,FOCUS_STATE,getFocusState(),newState);
    mFocusStateAnimator.setDuration(mContext.getResources().getInteger(R.integer.recents_animate_task_stack_scroll_duration));
    mFocusStateAnimator.setInterpolator(Interpolators.LINEAR_OUT_SLOW_IN);
    mFocusStateAnimator.start();
  }
}
