{
  if (mCheckedOpacity) {
    return mOpacity;
  }
  createAllFutures();
  mCheckedOpacity=true;
  final int N=mNumChildren;
  final Drawable[] drawables=mDrawables;
  int op=(N > 0) ? drawables[0].getOpacity() : PixelFormat.TRANSPARENT;
  for (int i=1; i < N; i++) {
    op=Drawable.resolveOpacity(op,drawables[i].getOpacity());
  }
  mOpacity=op;
  return op;
}
