{
  HandlerThread thread=new HandlerThread(MEDIA_PLAYER_THREAD_NAME);
  thread.start();
  Handler handler=new Handler(thread.getLooper());
  mFinished=false;
  handler.post(new Runnable(){
    @Override public void run(){
      startPlaying();
    }
  }
);
  mDone.block();
  handler.post(new Runnable(){
    @Override public void run(){
      finish();
      Looper.myLooper().quit();
    }
  }
);
  return mFinished;
}
