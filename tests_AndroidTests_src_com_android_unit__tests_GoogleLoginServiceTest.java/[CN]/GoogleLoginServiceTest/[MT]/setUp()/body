{
  super.setUp();
  getContext().bindService((new Intent()).setClassName("com.google.android.gsf","com.google.android.gsf.loginservice.GoogleLoginService"),mConnection,Context.BIND_AUTO_CREATE);
  mGlsLock.lock();
  try {
    while (mGls == null) {
      try {
        mGlsCv.await();
      }
 catch (      InterruptedException ignore) {
      }
    }
  }
  finally {
    mGlsLock.unlock();
  }
}
