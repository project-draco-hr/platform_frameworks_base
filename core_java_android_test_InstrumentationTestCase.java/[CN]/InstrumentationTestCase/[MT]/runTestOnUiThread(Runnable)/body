{
  final Throwable[] exceptions=new Throwable[1];
  getInstrumentation().runOnMainSync(new Runnable(){
    public void run(){
      try {
        r.run();
      }
 catch (      Throwable throwable) {
        exceptions[0]=throwable;
      }
    }
  }
);
  if (exceptions[0] != null) {
    throw exceptions[0];
  }
}
