{
  if (address.length != 4 && address.length != 16) {
    throw new IllegalArgumentException("IpPrefix has " + address.length + " bytes which is neither 4 nor 16");
  }
  if (prefixLength < 0 || prefixLength > (address.length * 8)) {
    throw new IllegalArgumentException("IpPrefix with " + address.length + " bytes has invalid prefix length "+ prefixLength);
  }
  this.address=address.clone();
  this.prefixLength=prefixLength;
}
