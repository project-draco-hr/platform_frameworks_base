{
  String xmlRecord="<?xml version=\"1.0\" encoding=\"UTF-8\" ?>\n" + "<record>\n" + "  <attribute id=\"0x0001\">\n"+ "    <sequence>\n"+ "      <uuid value=\"" + uuid.toString() + "\"/>\n"+ "    </sequence>\n"+ "  </attribute>\n"+ "  <attribute id=\"0x0004\">\n"+ "    <sequence>\n"+ "      <sequence>\n"+ "        <uuid value=\"0x0100\"/>\n"+ "      </sequence>\n"+ "      <sequence>\n"+ "        <uuid value=\"0x0003\"/>\n"+ "        <uint8 value=\""+ socket.getPort()+ "\" name=\"channel\"/>\n"+ "      </sequence>\n"+ "    </sequence>\n"+ "  </attribute>\n"+ "  <attribute id=\"0x0100\">\n"+ "    <text value=\""+ serviceName+ "\"/>\n"+ "  </attribute>\n"+ "</record>\n";
  Log.i(sLogName,xmlRecord);
  return addServiceRecordFromXml(xmlRecord);
