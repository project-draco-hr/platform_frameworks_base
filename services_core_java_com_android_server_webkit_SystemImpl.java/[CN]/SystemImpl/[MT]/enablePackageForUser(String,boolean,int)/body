{
  try {
    AppGlobals.getPackageManager().setApplicationEnabledSetting(packageName,enable ? PackageManager.COMPONENT_ENABLED_STATE_DEFAULT : PackageManager.COMPONENT_ENABLED_STATE_DISABLED_USER,0,userId,null);
  }
 catch (  RemoteException|IllegalArgumentException e) {
    Log.w(TAG,"Tried to " + (enable ? "enable " : "disable ") + packageName+ " for user "+ userId+ ": "+ e);
  }
}
