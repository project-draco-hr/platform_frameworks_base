{
  clearNetlinkSocket();
  mSocket=new NetlinkSocket(OsConstants.NETLINK_ROUTE);
  final NetlinkSocketAddress listenAddr=new NetlinkSocketAddress(0,OsConstants.RTMGRP_NEIGH);
  mSocket.bind(listenAddr);
  if (VDBG) {
    final NetlinkSocketAddress nlAddr=mSocket.getLocalAddress();
    Log.d(TAG,"bound to sockaddr_nl{" + ((long)(nlAddr.getPortId() & 0xffffffff)) + ", "+ nlAddr.getGroupsMask()+ "}");
  }
}
