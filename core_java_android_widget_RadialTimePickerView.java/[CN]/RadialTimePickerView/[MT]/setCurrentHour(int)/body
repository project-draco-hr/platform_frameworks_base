{
  final int degrees=(hour % 12) * DEGREES_FOR_ONE_HOUR;
  mSelectionDegrees[HOURS]=degrees;
  mSelectionDegrees[HOURS_INNER]=degrees;
  mAmOrPm=(hour == 0 || (hour % 24) < 12) ? AM : PM;
  mIsOnInnerCircle=mIs24HourMode && hour >= 1 && hour <= 12;
  initData();
  updateLayoutData();
  invalidate();
}
