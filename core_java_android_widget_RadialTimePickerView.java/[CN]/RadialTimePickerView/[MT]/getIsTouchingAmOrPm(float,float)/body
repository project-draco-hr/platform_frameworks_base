{
  final boolean isLayoutRtl=isLayoutRtl();
  int squaredYDistance=(int)((y - mAmPmYCenter) * (y - mAmPmYCenter));
  int distanceToAmCenter=(int)Math.sqrt((x - mLeftIndicatorXCenter) * (x - mLeftIndicatorXCenter) + squaredYDistance);
  if (distanceToAmCenter <= mAmPmCircleRadius) {
    return (isLayoutRtl ? PM : AM);
  }
  int distanceToPmCenter=(int)Math.sqrt((x - mRightIndicatorXCenter) * (x - mRightIndicatorXCenter) + squaredYDistance);
  if (distanceToPmCenter <= mAmPmCircleRadius) {
    return (isLayoutRtl ? AM : PM);
  }
  return -1;
}
