{
  drawTextElements(canvas,mTextSize[HOURS],mTypeface,mTextColor[HOURS],mOuterTextHours,mOuterTextX[HOURS],mOuterTextY[HOURS],mPaint[HOURS],hoursAlpha,showActivated && !mIsOnInnerCircle,mSelectionDegrees[HOURS],showActivated);
  if (mIs24HourMode && mInnerTextHours != null) {
    drawTextElements(canvas,mTextSize[HOURS_INNER],mTypeface,mTextColor[HOURS_INNER],mInnerTextHours,mInnerTextX,mInnerTextY,mPaint[HOURS],hoursAlpha,showActivated && mIsOnInnerCircle,mSelectionDegrees[HOURS],showActivated);
  }
}
