{
  final float numbersRadius=mCircleRadius * mNumbersRadiusMultiplier[HOURS];
  calculatePositions(mPaint[HOURS],numbersRadius,mXCenter,mYCenter,mTextSize[HOURS],mOuterTextX[HOURS],mOuterTextY[HOURS]);
  if (mIs24HourMode) {
    final float innerNumbersRadius=mCircleRadius * mNumbersRadiusMultiplier[HOURS_INNER];
    calculatePositions(mPaint[HOURS],innerNumbersRadius,mXCenter,mYCenter,mTextSize[HOURS_INNER],mInnerTextX,mInnerTextY);
  }
}
