{
  int hours=mSelectionDegrees[mIsOnInnerCircle ? HOURS_INNER : HOURS] / DEGREES_FOR_ONE_HOUR;
  if (mIs24HourMode) {
    if (mIsOnInnerCircle) {
      hours=hours % 12;
    }
 else {
      if (hours != 0) {
        hours+=12;
      }
    }
  }
 else {
    hours=hours % 12;
    if (hours == 0) {
      if (mAmOrPm == PM) {
        hours=12;
      }
    }
 else {
      if (mAmOrPm == PM) {
        hours+=12;
      }
    }
  }
  return hours;
}
