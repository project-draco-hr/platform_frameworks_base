{
  int hour=(mSelectionDegrees[mIsOnInnerCircle ? HOURS_INNER : HOURS] / DEGREES_FOR_ONE_HOUR) % 12;
  if (mIs24HourMode) {
    if (mIsOnInnerCircle && hour == 0) {
      hour=12;
    }
 else     if (!mIsOnInnerCircle && hour != 0) {
      hour+=12;
    }
  }
 else   if (mAmOrPm == PM) {
    hour+=12;
  }
  return hour;
}
