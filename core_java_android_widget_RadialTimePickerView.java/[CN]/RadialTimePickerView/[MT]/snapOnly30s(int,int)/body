{
  final int stepSize=DEGREES_FOR_ONE_HOUR;
  int floor=(degrees / stepSize) * stepSize;
  final int ceiling=floor + stepSize;
  if (forceHigherOrLower == 1) {
    degrees=ceiling;
  }
 else   if (forceHigherOrLower == -1) {
    if (degrees == floor) {
      floor-=stepSize;
    }
    degrees=floor;
  }
 else {
    if ((degrees - floor) < (ceiling - degrees)) {
      degrees=floor;
    }
 else {
      degrees=ceiling;
    }
  }
  return degrees;
}
