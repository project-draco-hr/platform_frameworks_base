{
  final int minutesAlpha=(int)(mAlpha[MINUTES].getValue() * alphaMod + 0.5f);
  if (minutesAlpha > 0) {
    drawSelector(canvas,MINUTES,mSelectorPath,alphaMod);
    canvas.save(Canvas.CLIP_SAVE_FLAG);
    canvas.clipPath(mSelectorPath,Region.Op.DIFFERENCE);
    drawTextElements(canvas,mTextSize[MINUTES],mTypeface,mTextColor[MINUTES],mMinutesText,mOuterTextX[MINUTES],mOuterTextY[MINUTES],mPaint[MINUTES],minutesAlpha,false,0,false);
    canvas.restore();
    canvas.save(Canvas.CLIP_SAVE_FLAG);
    canvas.clipPath(mSelectorPath,Region.Op.INTERSECT);
    drawTextElements(canvas,mTextSize[MINUTES],mTypeface,mTextColor[MINUTES],mMinutesText,mOuterTextX[MINUTES],mOuterTextY[MINUTES],mPaint[MINUTES],minutesAlpha,true,mSelectionDegrees[MINUTES],true);
    canvas.restore();
  }
}
