{
  if (isShowing()) {
    return true;
  }
  if (mAnchorView == null) {
    return false;
  }
  mPopup=createMenuPopup();
  mPopup.setAnchorView(mAnchorView);
  mPopup.setGravity(mDropDownGravity);
  mPopup.setCallback(mPresenterCallback);
  mPopup.setOnDismissListener(this);
  mPopup.addMenu(mMenu);
  mPopup.show();
  return true;
}
