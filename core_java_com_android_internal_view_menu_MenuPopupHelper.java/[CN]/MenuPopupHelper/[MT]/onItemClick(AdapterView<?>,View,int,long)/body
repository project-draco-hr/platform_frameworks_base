{
  if (!isShowing())   return;
  MenuItem item=null;
  if (mOverflowOnly) {
    item=mMenu.getOverflowItem(position);
  }
 else {
    item=mMenu.getVisibleItems().get(position);
  }
  dismiss();
  final MenuItem performItem=item;
  mHandler.post(new Runnable(){
    public void run(){
      mMenu.performItemAction(performItem,0);
    }
  }
);
}
