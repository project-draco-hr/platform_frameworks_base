{
  mBitmapState.mTint=tint;
  if (mTintFilter == null) {
    if (tint != null) {
      final int color=tint.getColorForState(getState(),0);
      mTintFilter=new PorterDuffColorFilter(color,mBitmapState.mTintMode);
    }
  }
 else {
    if (tint == null) {
      mTintFilter=null;
    }
  }
  invalidateSelf();
}
