{
  log("Data Connection activate failed. Scheduling next attempt for " + (delay / 1000) + "s");
  AlarmManager am=(AlarmManager)mPhone.getContext().getSystemService(Context.ALARM_SERVICE);
  Intent intent=new Intent(INTENT_RECONNECT_ALARM);
  intent.putExtra(INTENT_RECONNECT_ALARM_EXTRA_REASON,reason);
  mReconnectIntent=PendingIntent.getBroadcast(mPhone.getContext(),0,intent,0);
  am.set(AlarmManager.ELAPSED_REALTIME_WAKEUP,SystemClock.elapsedRealtime() + delay,mReconnectIntent);
}
