{
  int x=viewToContentX((int)mLastTouchX + mScrollX);
  int y=viewToContentY((int)mLastTouchY + mScrollY);
  setUpSelect();
  if (mNativeClass != 0 && nativeWordSelection(x,y)) {
    nativeSetExtendSelection();
    mDrawSelectionPointer=false;
    return true;
  }
  selectionDone();
  return false;
}
