{
  final int viewWidth=getViewWidth();
  final int viewHeight=getViewHeightWithTitle();
  float scale=Math.min((float)viewWidth / view.width,(float)viewHeight / view.height);
  scale=mZoomManager.computeScaleWithLimits(scale);
  return !mZoomManager.willScaleTriggerZoom(scale) && contentToViewX(view.x) >= mScrollX && contentToViewX(view.x + view.width) <= mScrollX + viewWidth && contentToViewY(view.y) >= mScrollY && contentToViewY(view.y + view.height) <= mScrollY + viewHeight;
}
