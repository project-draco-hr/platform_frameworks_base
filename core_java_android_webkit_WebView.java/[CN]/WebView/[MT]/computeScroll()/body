{
  if (mScroller.computeScrollOffset()) {
    int oldX=mScrollX;
    int oldY=mScrollY;
    int x=mScroller.getCurrX();
    int y=mScroller.getCurrY();
    invalidate();
    if (!mScroller.isFinished()) {
      final int rangeX=computeMaxScrollX();
      final int rangeY=computeMaxScrollY();
      overScrollBy(x - oldX,y - oldY,oldX,oldY,rangeX,rangeY,mOverflingDistance,mOverflingDistance,false);
      if (mOverScrollGlow != null) {
        mOverScrollGlow.absorbGlow(x,y,oldX,oldY,rangeX,rangeY);
      }
    }
 else {
      mScrollX=x;
      mScrollY=y;
      abortAnimation();
      mPrivateHandler.removeMessages(RESUME_WEBCORE_PRIORITY);
      WebViewCore.resumePriority();
      if (!mSelectingText) {
        WebViewCore.resumeUpdatePicture(mWebViewCore);
      }
    }
  }
 else {
    super.computeScroll();
  }
}
