{
  if (mScroller.computeScrollOffset()) {
    int oldX=mScrollX;
    int oldY=mScrollY;
    mScrollX=mScroller.getCurrX();
    mScrollY=mScroller.getCurrY();
    postInvalidate();
    if (oldX != mScrollX || oldY != mScrollY) {
      onScrollChanged(mScrollX,mScrollY,oldX,oldY);
    }
  }
 else {
    super.computeScroll();
  }
}
