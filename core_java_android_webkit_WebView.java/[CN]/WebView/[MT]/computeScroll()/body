{
  if (mScroller.computeScrollOffset()) {
    int oldX=mScrollX;
    int oldY=mScrollY;
    int x=mScroller.getCurrX();
    int y=mScroller.getCurrY();
    postInvalidate();
    if (oldX != x || oldY != y) {
      overscrollBy(x - oldX,y - oldY,oldX,oldY,computeMaxScrollX(),computeMaxScrollY(),getViewWidth() / 3,getViewHeight() / 3,false);
    }
  }
 else {
    super.computeScroll();
  }
}
