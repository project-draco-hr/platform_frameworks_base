{
  x=pinLocX(x);
  y=pinLocY(y);
  int dx=x - mScrollX;
  int dy=y - mScrollY;
  if ((dx | dy) == 0) {
    return false;
  }
  if (getVisibleTitleHeight() > 0 && x == 0 && y <= getTitleHeight() + 1) {
    y=0;
    animate=false;
  }
  if (animate) {
    mScroller.startScroll(mScrollX,mScrollY,dx,dy,animationDuration > 0 ? animationDuration : computeDuration(dx,dy));
    invalidate();
  }
 else {
    abortAnimation();
    scrollTo(x,y);
  }
  return true;
}
