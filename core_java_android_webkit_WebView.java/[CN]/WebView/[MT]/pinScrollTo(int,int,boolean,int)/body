{
  x=pinLocX(x);
  y=pinLocY(y);
  int dx=x - mScrollX;
  int dy=y - mScrollY;
  if ((dx | dy) == 0) {
    return false;
  }
  if (animate) {
    mScroller.startScroll(mScrollX,mScrollY,dx,dy,animationDuration > 0 ? animationDuration : computeDuration(dx,dy));
    awakenScrollBars(mScroller.getDuration());
    invalidate();
  }
 else {
    abortAnimation();
    scrollTo(x,y);
  }
  return true;
}
