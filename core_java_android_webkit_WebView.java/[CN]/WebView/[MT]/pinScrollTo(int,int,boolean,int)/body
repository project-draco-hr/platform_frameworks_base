{
  x=pinLocX(x);
  y=pinLocY(y);
  int dx=x - mScrollX;
  int dy=y - mScrollY;
  if ((dx | dy) == 0) {
    return false;
  }
  boolean slideTitle=getVisibleTitleHeight() > 0 && y <= getTitleHeight() + 1;
  if (DebugFlags.WEB_VIEW) {
    Log.v(LOGTAG,"pinScrollTo slideTitle=" + slideTitle + " getVisibleTitleHeight()="+ getVisibleTitleHeight()+ " animationDuration="+ animationDuration+ " y="+ y);
  }
  if (slideTitle || animate) {
    if (slideTitle && animationDuration < SLIDE_TITLE_DURATION)     animationDuration=SLIDE_TITLE_DURATION;
    mScroller.startScroll(mScrollX,mScrollY,dx,dy,animationDuration > 0 ? animationDuration : computeDuration(dx,dy));
    invalidate();
  }
 else {
    abortAnimation();
    scrollTo(x,y);
  }
  return true;
}
