{
  if (null == v) {
    if (mSelectCallback != null) {
      mSelectCallback.setTitleBar(null);
    }
 else     if (mFindCallback != null) {
      mFindCallback.setTitleBar(null);
    }
  }
  if (mTitleBar == v)   return;
  if (mTitleBar != null) {
    removeView(mTitleBar);
  }
  if (null != v) {
    addView(v,new AbsoluteLayout.LayoutParams(ViewGroup.LayoutParams.MATCH_PARENT,ViewGroup.LayoutParams.WRAP_CONTENT,0,0));
    if (mTitleShadow == null) {
      mTitleShadow=(Drawable)mContext.getResources().getDrawable(com.android.internal.R.drawable.title_bar_shadow);
    }
  }
  mTitleBar=v;
}
