{
  if ((w | h) == 0) {
    return;
  }
  if (mContentWidth != w || mContentHeight != h) {
    mContentWidth=w;
    mContentHeight=h;
    if (!mDrawHistory) {
      int oldX=mScrollX;
      int oldY=mScrollY;
      mScrollX=pinLocX(mScrollX);
      mScrollY=pinLocY(mScrollY);
      mScroller.abortAnimation();
      if (oldX != mScrollX || oldY != mScrollY) {
        sendOurVisibleRect();
      }
    }
  }
  contentSizeChanged(updateLayout);
}
