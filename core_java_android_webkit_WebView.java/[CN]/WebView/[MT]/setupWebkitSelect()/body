{
  syncSelectionCursors();
  ClipboardManager cm=(ClipboardManager)(mContext.getSystemService(Context.CLIPBOARD_SERVICE));
  if (!mIsCaretSelection || cm.hasPrimaryClip()) {
    if (!startSelectActionMode()) {
      selectionDone();
      return false;
    }
  }
  mSelectingText=true;
  mTouchMode=TOUCH_DRAG_MODE;
  return true;
}
