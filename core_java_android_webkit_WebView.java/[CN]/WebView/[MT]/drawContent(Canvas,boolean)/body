{
  boolean pressed=(mTouchMode == TOUCH_SHORTPRESS_START_MODE || mTouchMode == TOUCH_INIT_MODE || mTouchMode == TOUCH_SHORTPRESS_MODE);
  recordButtons(canvas,hasFocus() && hasWindowFocus(),(pressed && !USE_WEBKIT_RINGS) || mTrackballDown || mGotCenterDown,false);
  drawCoreAndCursorRing(canvas,mBackgroundColor,mDrawCursorRing && drawRings);
}
