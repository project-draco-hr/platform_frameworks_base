{
  x=pinLocX(x);
  y=pinLocY(y);
  int dx=x - mScrollX;
  int dy=y - mScrollY;
  if ((dx | dy) == 0) {
    return false;
  }
  if (true && animate) {
    mScroller.startScroll(mScrollX,mScrollY,dx,dy,computeDuration(dx,dy));
    invalidate();
  }
 else {
    mScroller.abortAnimation();
    scrollTo(x,y);
  }
  return true;
}
