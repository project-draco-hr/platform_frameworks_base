{
  super.onSizeChanged(w,h,ow,oh);
  mZoomCenterX=getViewWidth() * .5f;
  mZoomCenterY=getViewHeight() * .5f;
  if (!mMinZoomScaleFixed) {
    mMinZoomScale=(float)getViewWidth() / Math.max(ZOOM_OUT_WIDTH,mDrawHistory ? mHistoryPicture.getWidth() : (mZoomOverviewWidth > 0 ? mZoomOverviewWidth : mContentWidth));
  }
  setNewZoomScale(mActualScale,true);
}
