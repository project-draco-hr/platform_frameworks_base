{
  InputMethodManager imm=(InputMethodManager)getContext().getSystemService(Context.INPUT_METHOD_SERVICE);
  if (isTextView) {
    rebuildWebTextView();
    if (!inEditingMode())     return;
    imm.showSoftInput(mWebTextView,0);
    if (mInZoomOverview) {
      doDoubleTap();
    }
  }
 else {
    imm.showSoftInput(this,0);
  }
}
