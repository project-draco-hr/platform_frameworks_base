{
  if (mSelectingText) {
    mSelectingText=false;
    if (mSelectCallback != null) {
      mSelectCallback.finish();
      mSelectCallback=null;
    }
    if (!mIsCaretSelection) {
      updateWebkitSelection();
    }
    mIsCaretSelection=false;
    invalidate();
    mAutoScrollX=0;
    mAutoScrollY=0;
    mSentAutoScrollMessage=false;
  }
}
