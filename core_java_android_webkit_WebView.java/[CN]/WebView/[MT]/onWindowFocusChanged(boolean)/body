{
  if (hasWindowFocus) {
    if (hasFocus()) {
      mDrawFocusRing=true;
      if (mNeedsUpdateTextEntry) {
        updateTextEntry();
      }
    }
 else {
      mDrawFocusRing=false;
    }
  }
 else {
    mDrawFocusRing=false;
    mGotKeyDown=false;
    mShiftIsPressed=false;
    if (inEditingMode()) {
      clearTextEntry();
      mNeedsUpdateTextEntry=true;
    }
  }
  invalidate();
  super.onWindowFocusChanged(hasWindowFocus);
}
