{
  if (x == mScrollingLayerRect.left && y == mScrollingLayerRect.top) {
    return;
  }
  nativeScrollLayer(mCurrentScrollingLayerId,x,y);
  mScrollingLayerRect.left=x;
  mScrollingLayerRect.top=y;
  mWebViewCore.sendMessage(WebViewCore.EventHub.SCROLL_LAYER,mCurrentScrollingLayerId,mScrollingLayerRect);
  onScrollChanged(mScrollX,mScrollY,mScrollX,mScrollY);
  invalidate();
}
