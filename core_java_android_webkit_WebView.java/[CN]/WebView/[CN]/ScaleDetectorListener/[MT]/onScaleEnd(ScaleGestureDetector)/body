{
  if (mPreviewZoomOnly) {
    mPreviewZoomOnly=false;
    mAnchorX=viewToContentX((int)mZoomCenterX + mScrollX);
    mAnchorY=viewToContentY((int)mZoomCenterY + mScrollY);
    float scale=mPreviewExtraZoomScale * mActualScale;
    boolean reflowNow=(scale - mMinZoomScale <= 0.01f) || ((scale <= 0.8 * mTextWrapScale));
    setNewZoomScale(scale,reflowNow,false);
    invalidate();
  }
  if (inEditingMode()) {
    adjustTextView(true);
  }
  mTouchMode=TOUCH_PINCH_DRAG;
  startTouch(detector.getFocusX(),detector.getFocusY(),mLastTouchTime);
}
