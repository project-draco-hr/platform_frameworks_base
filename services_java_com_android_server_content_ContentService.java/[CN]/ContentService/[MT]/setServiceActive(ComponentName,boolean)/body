{
  mContext.enforceCallingOrSelfPermission(Manifest.permission.WRITE_SYNC_SETTINGS,"no permission to write the sync settings");
  verifySignatureForPackage(Binder.getCallingUid(),cname.getPackageName(),"setIsEnabled");
  int userId=UserHandle.getCallingUserId();
  long identityToken=clearCallingIdentity();
  try {
    SyncManager syncManager=getSyncManager();
    if (syncManager != null) {
      int syncable=active ? 1 : 0;
      syncManager.getSyncStorageEngine().setIsEnabled(cname,userId,syncable);
    }
  }
  finally {
    restoreCallingIdentity(identityToken);
  }
}
