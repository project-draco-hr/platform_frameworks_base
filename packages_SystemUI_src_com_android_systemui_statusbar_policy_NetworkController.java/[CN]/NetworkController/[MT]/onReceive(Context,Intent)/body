{
  final String action=intent.getAction();
  if (action.equals(WifiManager.RSSI_CHANGED_ACTION) || action.equals(WifiManager.WIFI_STATE_CHANGED_ACTION) || action.equals(WifiManager.SUPPLICANT_STATE_CHANGED_ACTION)|| action.equals(WifiManager.NETWORK_STATE_CHANGED_ACTION)) {
    updateWifiState(intent);
    refreshViews();
  }
 else   if (action.equals(TelephonyIntents.ACTION_SIM_STATE_CHANGED)) {
    updateSimState(intent);
    updateDataIcon();
    refreshViews();
  }
 else   if (action.equals(ConnectivityManager.CONNECTIVITY_ACTION) || action.equals(ConnectivityManager.INET_CONDITION_ACTION)) {
    updateConnectivity(intent);
    refreshViews();
  }
}
