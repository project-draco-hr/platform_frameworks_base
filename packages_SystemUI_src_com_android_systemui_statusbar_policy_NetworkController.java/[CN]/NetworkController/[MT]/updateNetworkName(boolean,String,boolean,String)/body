{
  if (false) {
    Slog.d("CarrierLabel","updateNetworkName showSpn=" + showSpn + " spn="+ spn+ " showPlmn="+ showPlmn+ " plmn="+ plmn);
  }
  StringBuilder str=new StringBuilder();
  boolean something=false;
  if (showPlmn && plmn != null) {
    str.append(plmn);
    something=true;
  }
  if (showSpn && spn != null) {
    if (something) {
      str.append(mNetworkNameSeparator);
    }
    str.append(spn);
    something=true;
  }
  if (something) {
    mNetworkName=str.toString();
  }
 else {
    mNetworkName=mNetworkNameDefault;
  }
}
