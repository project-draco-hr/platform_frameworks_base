{
  boolean wifiEnabled=mWifiEnabled && (mWifiConnected || !mHasMobileDataFeature);
  String wifiDesc=wifiEnabled ? mWifiSsid : null;
  cb.onWifiSignalChanged(wifiEnabled,mQSWifiIconId,mContentDescriptionWifi,wifiDesc);
  if (isEmergencyOnly()) {
    cb.onMobileDataSignalChanged(false,mQSPhoneSignalIconId,mContentDescriptionPhoneSignal,mQSDataTypeIconId,mContentDescriptionDataType,null);
  }
 else {
    if (mIsWimaxEnabled && mWimaxConnected) {
      cb.onMobileDataSignalChanged(true,mQSPhoneSignalIconId,mContentDescriptionPhoneSignal,mQSDataTypeIconId,mContentDescriptionDataType,mNetworkName);
    }
 else {
      cb.onMobileDataSignalChanged(mHasMobileDataFeature,mQSPhoneSignalIconId,mContentDescriptionPhoneSignal,mQSDataTypeIconId,mContentDescriptionDataType,mNetworkName);
    }
  }
  cb.onAirplaneModeChanged(mAirplaneMode);
}
