{
synchronized (mLocks) {
    if (mSpew) {
      Log.d(TAG,"setKeyboardVisibility: " + visible);
    }
    if (mKeyboardVisible != visible) {
      mKeyboardVisible=visible;
      if ((mPowerState & SCREEN_ON_BIT) != 0) {
        userActivity(SystemClock.uptimeMillis(),false,BUTTON_EVENT,true);
      }
    }
  }
}
