{
  int err=Power.setScreenState(on);
  if (err == 0) {
    mLastScreenOnTime=(on ? SystemClock.elapsedRealtime() : 0);
    if (mUseSoftwareAutoBrightness) {
      enableLightSensor(on);
      if (!on) {
        mButtonLight.turnOff();
        mKeyboardLight.turnOff();
        mLightSensorValue=-1;
        mHighestLightSensorValue=-1;
      }
    }
  }
  return err;
}
