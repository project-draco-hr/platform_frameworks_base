{
  int err=Power.setScreenState(on);
  if (err == 0) {
    mLastScreenOnTime=(on ? SystemClock.elapsedRealtime() : 0);
    if (mUseSoftwareAutoBrightness) {
      enableLightSensor(on);
      if (!on) {
        int brightnessMode=(mUseSoftwareAutoBrightness ? LightsService.BRIGHTNESS_MODE_SENSOR : LightsService.BRIGHTNESS_MODE_USER);
        mLightsService.setLightBrightness(LightsService.LIGHT_ID_BUTTONS,0,brightnessMode);
        mLightsService.setLightBrightness(LightsService.LIGHT_ID_KEYBOARD,0,brightnessMode);
        mLightSensorValue=-1;
      }
    }
  }
  return err;
}
