{
synchronized (mLocks) {
    mStayOnConditions=getInt(STAY_ON_WHILE_PLUGGED_IN,BatteryManager.BATTERY_PLUGGED_AC);
    updateWakeLockLocked();
    mScreenOffTimeoutSetting=getInt(SCREEN_OFF_TIMEOUT,DEFAULT_SCREEN_OFF_TIMEOUT);
    setScreenBrightnessMode(getInt(SCREEN_BRIGHTNESS_MODE,Settings.System.SCREEN_BRIGHTNESS_MODE_MANUAL));
    setScreenOffTimeoutsLocked();
  }
}
