{
synchronized (mLocks) {
    long now=SystemClock.uptimeMillis();
    boolean more=mScreenBrightness.stepLocked();
    if (mKeyboardBrightness.stepLocked()) {
      more=true;
    }
    if (mButtonBrightness.stepLocked()) {
      more=true;
    }
    if (more) {
      mHandler.postAtTime(mLightAnimator,now + (1000 / 60));
    }
  }
}
