{
  if (!initialized) {
    initialized=true;
    curValue=(float)initialValue;
  }
  targetValue=target;
  delta=(targetValue - curValue) / stepsToTarget;
  if (mSpew) {
    Log.i(TAG,"Setting target " + mask + ": cur="+ curValue+ " target="+ targetValue+ " delta="+ delta);
  }
  animating=true;
}
