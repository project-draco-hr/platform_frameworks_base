{
  final PackageInfo pi=getPackageInfo(packageName,userId);
  if (pi == null) {
    Slog.w(TAG,"Package not found: " + packageName);
    return;
  }
synchronized (mLock) {
    final ShortcutPackageInfo spi=getUserShortcutsLocked(userId).getPackageInfos().get(packageName);
    if (spi != null) {
      spi.refreshAndSave(this,userId);
    }
  }
}
