{
  if (DEBUG) {
    Slog.d(TAG,String.format("handlePackageUpdateFinished: %s user=%d",packageName,userId));
  }
synchronized (mLock) {
    final ShortcutPackageInfo spi=getUserShortcutsLocked(userId).getPackageInfo(userId,packageName);
    if (spi != null) {
      spi.refreshAndSave(this,userId);
    }
  }
}
