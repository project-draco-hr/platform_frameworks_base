{
  Preconditions.checkNotNull(shortcut,"shortcut");
synchronized (mLock) {
    final ShortcutInfo shortcutInfo=getPackageShortcutsLocked(shortcut.getPackageName(),userId).findShortcutById(shortcut.getId());
    if (shortcutInfo == null || !shortcutInfo.hasIconFile()) {
      return null;
    }
    try {
      return ParcelFileDescriptor.open(new File(shortcutInfo.getBitmapPath()),ParcelFileDescriptor.MODE_READ_ONLY);
    }
 catch (    FileNotFoundException e) {
      Slog.e(TAG,"Icon file not found: " + shortcutInfo.getBitmapPath());
      return null;
    }
  }
}
