{
  char[] chars=mChars;
  for (int s=start, e=limit - 1; s < e; ++s, --e) {
    char ch=chars[s];
    chars[s]=chars[e];
    chars[e]=ch;
  }
  for (int s=start, e=limit - 1; s < e; ++s) {
    char c1=chars[s];
    if (c1 >= 0xdc00 && c1 < 0xe000) {
      char c2=chars[s + 1];
      if (c2 >= 0xd800 && c2 < 0xdc00) {
        chars[s++]=c2;
        chars[s]=c1;
      }
    }
  }
}
