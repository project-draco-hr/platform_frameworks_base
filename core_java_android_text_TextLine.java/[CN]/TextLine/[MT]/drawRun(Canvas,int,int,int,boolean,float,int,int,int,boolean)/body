{
  if ((mDir == Layout.DIR_LEFT_TO_RIGHT) == runIsRtl) {
    float w=-measureRun(runIndex,start,limit,limit,runIsRtl,null);
    handleRun(runIndex,start,limit,limit,runIsRtl,c,x + w,top,y,bottom,null,false,PREP_NONE);
    return w;
  }
  return handleRun(runIndex,start,limit,limit,runIsRtl,c,x,top,y,bottom,null,needWidth,PREP_NEEDED);
}
