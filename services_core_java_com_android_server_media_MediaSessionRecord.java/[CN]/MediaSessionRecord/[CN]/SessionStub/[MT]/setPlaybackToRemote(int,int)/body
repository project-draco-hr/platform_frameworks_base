{
  boolean typeChanged;
synchronized (mLock) {
    typeChanged=mVolumeType == PlaybackInfo.PLAYBACK_TYPE_LOCAL;
    mVolumeType=PlaybackInfo.PLAYBACK_TYPE_REMOTE;
    mVolumeControlType=control;
    mMaxVolume=max;
  }
  if (typeChanged) {
    mService.onSessionPlaybackTypeChanged(MediaSessionRecord.this);
  }
}
