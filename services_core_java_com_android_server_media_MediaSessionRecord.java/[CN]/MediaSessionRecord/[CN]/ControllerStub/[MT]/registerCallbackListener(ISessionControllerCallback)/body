{
synchronized (mLock) {
    if (mDestroyed) {
      try {
        cb.onSessionDestroyed();
      }
 catch (      Exception e) {
      }
      return;
    }
    if (getControllerCbIndexForCb(cb) < 0) {
      mControllerCallbacks.add(cb);
      if (DEBUG) {
        Log.d(TAG,"registering controller callback " + cb);
      }
    }
  }
}
