{
  if (mTransformationAnimator.isRunning()) {
    mTransformationAnimator.cancel();
  }
synchronized (mLock) {
    final boolean changed=!mSentMagnificationSpec.equals(spec);
    if (changed) {
      if (animate) {
        animateMagnificationSpecLocked(spec);
      }
 else {
        setMagnificationSpecLocked(spec);
      }
    }
  }
}
