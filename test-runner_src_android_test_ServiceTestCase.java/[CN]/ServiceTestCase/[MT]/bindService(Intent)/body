{
  assertFalse(mServiceStarted);
  assertFalse(mServiceBound);
  if (!mServiceAttached) {
    setupService();
  }
  assertNotNull(mService);
  if (!mServiceCreated) {
    mService.onCreate();
    mServiceCreated=true;
  }
  mServiceIntent=intent.cloneFilter();
  IBinder result=mService.onBind(intent);
  mServiceBound=true;
  return result;
}
