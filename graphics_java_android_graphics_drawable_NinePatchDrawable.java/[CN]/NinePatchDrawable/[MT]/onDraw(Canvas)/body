{
  final Rect bounds=getBounds();
  final boolean needsMirroring=needsMirroring();
  if (needsMirroring) {
    canvas.save();
    canvas.translate(bounds.right - bounds.left,0);
    canvas.scale(-1.0f,1.0f);
  }
  mNinePatch.draw(canvas,bounds,mPaint);
  if (needsMirroring) {
    canvas.restore();
  }
}
