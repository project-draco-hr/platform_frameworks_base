{
  final int minutes=MINUTES[mMinutesIndex];
  final long millis=System.currentTimeMillis() + minutes * 60 * 1000;
  final Uri id=new Uri.Builder().scheme(Condition.SCHEME).authority("android").appendPath("countdown").appendPath(Long.toString(millis)).build();
  final int num=minutes < 60 ? minutes : minutes / 60;
  final String units=minutes < 60 ? "minutes" : minutes == 60 ? "hour" : "hours";
  return new Condition(id,"For " + num + " "+ units,"","",0,Condition.STATE_TRUE,Condition.FLAG_RELEVANT_NOW);
}
