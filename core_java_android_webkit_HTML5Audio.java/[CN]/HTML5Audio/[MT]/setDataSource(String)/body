{
  mUrl=url;
  try {
    if (mState != IDLE) {
      resetMediaPlayer();
    }
    mMediaPlayer.setDataSource(url);
    mState=INITIALIZED;
    mMediaPlayer.prepareAsync();
  }
 catch (  IOException e) {
    Log.e(LOGTAG,"couldn't load the resource: " + url + " exc: "+ e);
    resetMediaPlayer();
  }
}
