{
  mUrl=url;
  try {
    if (mState != IDLE) {
      resetMediaPlayer();
    }
    mMediaPlayer.setDataSource(url);
    mState=INITIALIZED;
    mMediaPlayer.prepareAsync();
  }
 catch (  IOException e) {
    String debugUrl=url.length() > 128 ? url.substring(0,128) + "..." : url;
    Log.e(LOGTAG,"couldn't load the resource: " + debugUrl + " exc: "+ e);
    resetMediaPlayer();
  }
}
