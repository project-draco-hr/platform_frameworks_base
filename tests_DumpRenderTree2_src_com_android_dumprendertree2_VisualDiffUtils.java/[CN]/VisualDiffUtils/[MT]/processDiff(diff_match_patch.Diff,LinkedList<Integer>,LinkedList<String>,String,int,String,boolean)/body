{
  String endSpan="</span>";
  String br="&nbsp;";
  if (diff.text.endsWith("\n") || forceOutputLine) {
    lineNums.add(i);
    line+=begSpan + diff.text.replace("  ","&nbsp;&nbsp;") + endSpan+ br;
    lines.add(line);
    line="";
  }
 else {
    line+=begSpan + diff.text.replace("  ","&nbsp;&nbsp;") + endSpan;
  }
  return line;
}
