{
  if (displayContent == null) {
    return;
  }
  if (mFullscreen) {
    setBounds(null,Configuration.EMPTY);
    return;
  }
  final int newRotation=displayContent.getDisplayInfo().rotation;
  if (mRotation == newRotation) {
    return;
  }
  mTmpRect2.set(mBounds);
  displayContent.rotateBounds(mRotation,newRotation,mTmpRect2);
  if (setBounds(mTmpRect2,mOverrideConfig) != BOUNDS_CHANGE_NONE) {
    if (mStack.mStackId == FREEFORM_WORKSPACE_STACK_ID) {
      mService.mH.sendMessage(mService.mH.obtainMessage(RESIZE_TASK,mTaskId,RESIZE_MODE_SYSTEM_SCREEN_ROTATION,mBounds));
    }
  }
}
