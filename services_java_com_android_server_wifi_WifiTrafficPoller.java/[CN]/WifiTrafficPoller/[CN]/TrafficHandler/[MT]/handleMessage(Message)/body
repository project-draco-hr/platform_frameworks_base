{
switch (msg.what) {
case ENABLE_TRAFFIC_STATS_POLL:
    mEnableTrafficStatsPoll=(msg.arg1 == 1);
  mTrafficStatsPollToken++;
if (mEnableTrafficStatsPoll) {
  notifyOnDataActivity();
  sendMessageDelayed(Message.obtain(this,TRAFFIC_STATS_POLL,mTrafficStatsPollToken,0),POLL_TRAFFIC_STATS_INTERVAL_MSECS);
}
break;
case TRAFFIC_STATS_POLL:
if (msg.arg1 == mTrafficStatsPollToken) {
notifyOnDataActivity();
sendMessageDelayed(Message.obtain(this,TRAFFIC_STATS_POLL,mTrafficStatsPollToken,0),POLL_TRAFFIC_STATS_INTERVAL_MSECS);
}
break;
case ADD_CLIENT:
mClients.add((Messenger)msg.obj);
break;
case REMOVE_CLIENT:
mClients.remove(msg.obj);
break;
}
}
