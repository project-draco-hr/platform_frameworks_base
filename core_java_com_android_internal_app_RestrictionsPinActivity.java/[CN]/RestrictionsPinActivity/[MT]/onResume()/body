{
  super.onResume();
  setPositiveButtonState(false);
  boolean hasPin=mUserManager.hasRestrictionsPin();
  if (hasPin) {
    mPinErrorMessage.setVisibility(View.INVISIBLE);
    mPinText.setOnEditorActionListener(this);
    updatePinTimer(-1);
  }
 else   if (verifyingPin()) {
    setResult(RESULT_OK);
    finish();
  }
}
