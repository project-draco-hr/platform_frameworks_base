{
  if (mMediaPlayer.isPlaying()) {
    mMediaPlayer.stop();
  }
  mPrepared=false;
  mGotSize=false;
  mPlaying=false;
  mPaused=false;
  mCompleted=false;
  mNewFrameAvailable=false;
  mMediaPlayer.release();
  mMediaPlayer=null;
  mSurfaceTexture.release();
  mSurfaceTexture=null;
  if (mLogVerbose)   Log.v(TAG,"MediaSource closed");
}
