{
  String orderMsg=ascendingOrder ? ("increasing order") : ("decreasing order");
  for (int i=0; i < array.length - 1; i++) {
    int compareResult=array[i + 1].compareTo(array[i]);
    boolean condition=compareResult >= 0;
    if (!ascendingOrder) {
      condition=compareResult <= 0;
    }
    expectTrue(String.format("Adjacent values (%s and %s) %s monotonicity is broken",array[i].toString(),array[i + 1].toString(),orderMsg),condition);
  }
  expectTrue("All values of this array are equal: " + array[0].toString(),array[0].compareTo(array[array.length - 1]) != 0);
}
