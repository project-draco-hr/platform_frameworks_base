{
  if (!animate) {
    mContentFrame.setVisibility(showing ? View.VISIBLE : View.GONE);
    mContentParent.setTranslationY(showing ? 0f : 100f);
    return;
  }
  mContentFrame.setVisibility(showing ? View.VISIBLE : View.GONE);
  AnimatorSet set=new AnimatorSet();
  float adjust=mContentFrame.getBackground().getMinimumHeight() + 8;
  set.play(ObjectAnimator.ofFloat(mContentFrame,"alpha",showing ? 0f : 1f,showing ? 1f : 0f)).with(ObjectAnimator.ofFloat(mContentParent,"translationY",showing ? adjust : 0f,showing ? 0f : adjust));
  set.setDuration(200);
  set.start();
}
