{
  final int keyCode=event.getKeyCode();
switch (keyCode) {
case KeyEvent.KEYCODE_BACK:
{
      if (event.getAction() == KeyEvent.ACTION_UP) {
        mBar.animateCollapse();
      }
      return true;
    }
case KeyEvent.KEYCODE_HOME:
{
    if (event.getAction() == KeyEvent.ACTION_UP) {
      mBar.animateCollapse();
    }
  }
break;
}
return super.dispatchKeyEvent(event);
}
