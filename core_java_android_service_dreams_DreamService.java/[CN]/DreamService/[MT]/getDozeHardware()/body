{
  if (mCanDoze && mDozeHardware == null && mWindowToken != null) {
    try {
      IDozeHardware hardware=mSandman.getDozeHardware(mWindowToken);
      if (hardware != null) {
        mDozeHardware=new DozeHardware(hardware);
      }
    }
 catch (    RemoteException ex) {
    }
  }
  return mDozeHardware;
}
