{
  if (DEBUG)   Slog.d(TAG,"rescheduleAlarm " + time);
  final AlarmManager alarms=(AlarmManager)mContext.getSystemService(Context.ALARM_SERVICE);
  final PendingIntent pendingIntent=PendingIntent.getBroadcast(mContext,REQUEST_CODE,new Intent(ACTION_TRIGGER).addFlags(Intent.FLAG_RECEIVER_FOREGROUND).putExtra(EXTRA_TRIGGER,time),PendingIntent.FLAG_UPDATE_CURRENT);
  alarms.cancel(pendingIntent);
  mScheduledAlarmTime=time;
  if (time > 0) {
    if (DEBUG)     Slog.d(TAG,String.format("Scheduling alarm for %s (in %s)",formatAlarmDebug(time),formatDuration(time - System.currentTimeMillis())));
    alarms.setExact(AlarmManager.RTC_WAKEUP,time,pendingIntent);
  }
}
