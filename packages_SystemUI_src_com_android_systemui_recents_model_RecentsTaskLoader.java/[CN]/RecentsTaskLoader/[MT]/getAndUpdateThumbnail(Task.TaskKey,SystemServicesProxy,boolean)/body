{
  Bitmap thumbnail=mThumbnailCache.getAndInvalidateIfModified(taskKey);
  if (thumbnail != null) {
    return thumbnail;
  }
  if (loadIfNotCached) {
    thumbnail=ssp.getTaskThumbnail(taskKey.id);
    if (thumbnail != null) {
      mThumbnailCache.put(taskKey,thumbnail);
      return thumbnail;
    }
  }
  return null;
}
