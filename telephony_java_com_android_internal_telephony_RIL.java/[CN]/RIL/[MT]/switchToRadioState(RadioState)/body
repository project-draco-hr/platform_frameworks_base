{
  if (mInitialRadioStateChange) {
    if (newState.isOn()) {
      if (RILJ_LOGD)       Log.d(LOG_TAG,"Radio ON @ init; reset to OFF");
      setRadioPower(false,null);
      RILRequest rrPnt=RILRequest.obtain(RIL_REQUEST_SET_PREFERRED_NETWORK_TYPE,null);
      rrPnt.mp.writeInt(1);
      rrPnt.mp.writeInt(mNetworkMode);
      if (RILJ_LOGD)       riljLog(rrPnt.serialString() + "> " + requestToString(rrPnt.mRequest)+ " : "+ mNetworkMode);
      send(rrPnt);
    }
 else {
      if (DBG)       Log.d(LOG_TAG,"Radio OFF @ init");
      setRadioState(newState);
    }
    mInitialRadioStateChange=false;
  }
 else {
    setRadioState(newState);
  }
}
