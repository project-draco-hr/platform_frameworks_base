{
  status=translateStatus(status);
  RILRequest rr=RILRequest.obtain(RIL_REQUEST_WRITE_SMS_TO_SIM,response);
  rr.mp.writeInt(status);
  rr.mp.writeString(pdu);
  rr.mp.writeString(smsc);
  if (Config.LOGD) {
    if (RILJ_LOGD)     riljLog(rr.serialString() + "> " + requestToString(rr.mRequest)+ " "+ status);
  }
  send(rr);
}
