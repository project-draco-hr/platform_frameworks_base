{
  if (mInitialRadioStateChange) {
synchronized (mStateMonitor) {
      if (!mState.isOn()) {
        RILRequest rrPnt=RILRequest.obtain(RIL_REQUEST_SET_PREFERRED_NETWORK_TYPE,null);
        rrPnt.mp.writeInt(1);
        rrPnt.mp.writeInt(mNetworkMode);
        if (RILJ_LOGD)         riljLog(rrPnt.serialString() + "> " + requestToString(rrPnt.mRequest)+ " : "+ mNetworkMode);
        send(rrPnt);
        RILRequest rrCs=RILRequest.obtain(RIL_REQUEST_CDMA_SET_SUBSCRIPTION,null);
        rrCs.mp.writeInt(1);
        rrCs.mp.writeInt(mCdmaSubscription);
        if (RILJ_LOGD)         riljLog(rrCs.serialString() + "> " + requestToString(rrCs.mRequest)+ " : "+ mCdmaSubscription);
        send(rrCs);
      }
    }
  }
  RILRequest rr=RILRequest.obtain(RIL_REQUEST_RADIO_POWER,result);
  rr.mp.writeInt(1);
  rr.mp.writeInt(on ? 1 : 0);
  if (RILJ_LOGD)   riljLog(rr.serialString() + "> " + requestToString(rr.mRequest));
  send(rr);
}
