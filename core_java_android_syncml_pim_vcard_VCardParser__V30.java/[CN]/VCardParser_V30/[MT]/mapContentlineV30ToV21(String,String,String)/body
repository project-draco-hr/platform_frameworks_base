{
  String result;
  if (propV30ToV21Map.containsKey(propName)) {
    result=propV30ToV21Map.get(propName);
  }
 else {
    result=propName;
  }
  if (acceptablePropsWithParam.contains(propName) && params.length() > 0)   result=result + ";" + params.replaceAll(",",";").replaceAll("ENCODING=B","ENCODING=BASE64").replaceAll("ENCODING=b","ENCODING=BASE64");
  return result + ":" + value+ V21LINEBREAKER;
}
