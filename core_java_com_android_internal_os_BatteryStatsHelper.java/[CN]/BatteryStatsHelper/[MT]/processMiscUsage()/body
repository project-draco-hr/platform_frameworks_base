{
  addUserUsage();
  addPhoneUsage();
  addScreenUsage();
  addFlashlightUsage();
  addWiFiUsage();
  addBluetoothUsage();
  addIdleUsage();
  ConnectivityManager cm=(ConnectivityManager)mContext.getSystemService(Context.CONNECTIVITY_SERVICE);
  if (cm.isNetworkSupported(ConnectivityManager.TYPE_MOBILE)) {
    addRadioUsage();
  }
}
