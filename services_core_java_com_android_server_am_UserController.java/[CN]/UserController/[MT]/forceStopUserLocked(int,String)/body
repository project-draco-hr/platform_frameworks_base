{
  mService.forceStopPackageLocked(null,-1,false,false,true,false,false,userId,reason);
  Intent intent=new Intent(Intent.ACTION_USER_STOPPED);
  intent.addFlags(Intent.FLAG_RECEIVER_REGISTERED_ONLY | Intent.FLAG_RECEIVER_FOREGROUND);
  intent.putExtra(Intent.EXTRA_USER_HANDLE,userId);
  mService.broadcastIntentLocked(null,null,intent,null,null,0,null,null,null,AppOpsManager.OP_NONE,null,false,false,ActivityManagerService.MY_PID,Process.SYSTEM_UID,UserHandle.USER_ALL);
}
