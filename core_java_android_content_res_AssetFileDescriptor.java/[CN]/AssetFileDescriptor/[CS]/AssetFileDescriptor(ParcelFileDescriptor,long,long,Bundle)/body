{
  if (fd == null) {
    throw new IllegalArgumentException("fd must not be null");
  }
  if (length < 0 && startOffset != 0) {
    throw new IllegalArgumentException("startOffset must be 0 when using UNKNOWN_LENGTH");
  }
  mFd=fd;
  mStartOffset=startOffset;
  mLength=length;
  mExtras=extras;
}
