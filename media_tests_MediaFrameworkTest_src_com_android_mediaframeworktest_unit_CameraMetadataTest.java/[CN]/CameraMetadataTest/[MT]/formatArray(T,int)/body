{
  StringBuilder builder=new StringBuilder();
  builder.append("[");
  int len=Array.getLength(array);
  for (int i=0; i < len; ++i) {
    Object elem=Array.get(array,i);
    if (i == badIndex) {
      builder.append("**");
    }
    if (elem instanceof Number) {
      builder.append(String.format("%x",elem));
    }
 else {
      builder.append(elem);
    }
    if (i == badIndex) {
      builder.append("**");
    }
    if (i != len - 1) {
      builder.append(", ");
    }
  }
  builder.append("]");
  return builder.toString();
}
