{
  if (!array.getClass().isArray()) {
    throw new IllegalArgumentException("actual must be array");
  }
  int len=Array.getLength(array);
  for (int i=0; i < len; ++i) {
    Object actualElement=Array.get(array,i);
    if (needle.equals(actualElement)) {
      return;
    }
  }
  fail(String.format("could not find element in array (needle %s). " + "Array was: %s.",needle,formatArray(array,len)));
}
