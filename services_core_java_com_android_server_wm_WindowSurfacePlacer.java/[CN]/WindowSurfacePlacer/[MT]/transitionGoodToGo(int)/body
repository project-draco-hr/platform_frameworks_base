{
  if (DEBUG_APP_TRANSITIONS)   Slog.v(TAG_WM,"Checking " + appsCount + " opening apps (frozen="+ mService.mDisplayFrozen+ " timeout="+ mService.mAppTransition.isTimeout()+ ")...");
  if (!mService.mAppTransition.isTimeout()) {
    for (int i=0; i < appsCount; i++) {
      AppWindowToken wtoken=mService.mOpeningApps.valueAt(i);
      if (DEBUG_APP_TRANSITIONS)       Slog.v(TAG_WM,"Check opening app=" + wtoken + ": allDrawn="+ wtoken.allDrawn+ " startingDisplayed="+ wtoken.startingDisplayed+ " startingMoved="+ wtoken.startingMoved);
      if (wtoken.hasSavedSurface() || wtoken.mAnimatingWithSavedSurface) {
        continue;
      }
      if (!wtoken.allDrawn && !wtoken.startingDisplayed && !wtoken.startingMoved) {
        return false;
      }
    }
    if (mService.mAppTransition.isFetchingAppTransitionsSpecs()) {
      if (DEBUG_APP_TRANSITIONS)       Slog.v(TAG_WM,"isFetchingAppTransitionSpecs=true");
      return false;
    }
    return !mWallpaperControllerLocked.isWallpaperVisible() || mWallpaperControllerLocked.wallpaperTransitionReady();
  }
  return true;
}
