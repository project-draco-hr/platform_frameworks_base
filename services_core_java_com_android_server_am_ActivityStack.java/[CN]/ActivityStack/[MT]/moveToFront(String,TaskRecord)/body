{
  if (isAttached()) {
    final ActivityStack lastFocusStack=mStacks.get(mStacks.size() - 1);
    mStacks.remove(this);
    mStacks.add(this);
    if (isOnHomeDisplay()) {
      mStackSupervisor.setFocusStack(reason,lastFocusStack);
    }
    if (task != null) {
      insertTaskAtTop(task,null);
    }
 else {
      task=topTask();
    }
    if (task != null) {
      mWindowManager.moveTaskToTop(task.taskId);
    }
  }
}
