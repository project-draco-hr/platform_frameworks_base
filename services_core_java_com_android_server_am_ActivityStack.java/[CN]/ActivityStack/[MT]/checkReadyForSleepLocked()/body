{
  if (mResumedActivity != null) {
    if (DEBUG_PAUSE)     Slog.v(TAG_PAUSE,"Sleep needs to pause " + mResumedActivity);
    if (DEBUG_USER_LEAVING)     Slog.v(TAG_USER_LEAVING,"Sleep => pause with userLeaving=false");
    startPausingLocked(false,true,false,false);
    return true;
  }
  if (mPausingActivity != null) {
    if (DEBUG_PAUSE)     Slog.v(TAG_PAUSE,"Sleep still waiting to pause " + mPausingActivity);
    return true;
  }
  if (hasVisibleBehindActivity()) {
    final ActivityRecord r=mActivityContainer.mActivityDisplay.mVisibleBehindActivity;
    mStackSupervisor.mStoppingActivities.add(r);
    if (DEBUG_STATES)     Slog.v(TAG,"Sleep still waiting to stop visible behind " + r);
    return true;
  }
  return false;
}
