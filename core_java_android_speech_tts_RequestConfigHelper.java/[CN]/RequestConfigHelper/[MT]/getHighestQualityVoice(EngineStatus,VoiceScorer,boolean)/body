{
  VoiceInfo bestVoice=null;
  int bestScoreMatch=1;
  int bestVoiceQuality=0;
  for (  VoiceInfo voice : engineStatus.getVoices()) {
    int score=voiceScorer.scoreVoice(voice);
    if (score <= 0 || hasToBeEmbedded && voice.getRequiresNetworkConnection() || voice.getQuality() < bestVoiceQuality) {
      continue;
    }
    if (bestVoice == null || voice.getQuality() > bestVoiceQuality || score > bestScoreMatch) {
      bestVoice=voice;
      bestScoreMatch=score;
      bestVoiceQuality=voice.getQuality();
    }
  }
  return bestVoice;
}
