{
  com.android.internal.widget.TransportControlView tcv=(TransportControlView)view.findViewById(R.id.transport);
  if (tcv == null) {
    if (DEBUG)     Log.w(TAG,"Couldn't find transport control widget");
  }
 else {
    mUpdateMonitor.reportClockVisible(true);
    tcv.setVisibility(View.GONE);
    tcv.setCallback(mWidgetCallback);
  }
}
