{
  if (mMode == Mode.LockScreen) {
    ((KeyguardScreen)mLockScreen).onResume();
  }
 else {
    ((KeyguardScreen)mUnlockScreen).onResume();
  }
  if (mLockPatternUtils.usingBiometricWeak() && mLockPatternUtils.isBiometricWeakInstalled() && !mHasOverlay) {
    showFaceLockArea();
  }
 else {
    hideFaceLockArea();
  }
}
