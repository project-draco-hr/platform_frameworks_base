{
  ComponentName comp=getCurRecognizer();
  if (comp != null) {
    try {
      mContext.getPackageManager().getServiceInfo(comp,0);
    }
 catch (    NameNotFoundException e) {
      comp=findAvailRecognizer(null);
      if (comp != null) {
        setCurRecognizer(comp);
      }
    }
  }
 else {
    comp=findAvailRecognizer(null);
    if (comp != null) {
      setCurRecognizer(comp);
    }
  }
}
