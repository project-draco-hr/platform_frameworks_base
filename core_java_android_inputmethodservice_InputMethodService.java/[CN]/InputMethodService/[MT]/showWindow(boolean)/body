{
  if (true || DEBUG)   Slog.v(TAG,"Showing window: showInput=" + showInput + " mShowInputRequested="+ mShowInputRequested+ " mWindowAdded="+ mWindowAdded+ " mWindowCreated="+ mWindowCreated+ " mWindowVisible="+ mWindowVisible+ " mInputStarted="+ mInputStarted);
  if (mInShowWindow) {
    Log.w(TAG,"Re-entrance in to showWindow");
    return;
  }
  try {
    mWindowWasVisible=mWindowVisible;
    mInShowWindow=true;
    showWindowInner(showInput);
  }
  finally {
    mWindowWasVisible=true;
    mInShowWindow=false;
  }
}
