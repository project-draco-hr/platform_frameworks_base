{
  if (DEBUG)   Log.v(TAG,"clearInsetOfPreviousIme() " + " mShouldClearInsetOfPreviousIme=" + mShouldClearInsetOfPreviousIme);
  if (!mShouldClearInsetOfPreviousIme || mWindow == null)   return;
  try {
    mWindow.show();
    mWindow.hide();
  }
 catch (  WindowManager.BadTokenException e) {
    if (DEBUG)     Log.v(TAG,"clearInsetOfPreviousIme: BadTokenException: IME is done.");
    mWindowVisible=false;
    mWindowAdded=false;
  }
  mShouldClearInsetOfPreviousIme=false;
}
