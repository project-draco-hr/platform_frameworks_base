{
  if (mExtractEditText != null && getCurrentInputStarted() && isFullscreenMode()) {
    mExtractedToken++;
    ExtractedTextRequest req=new ExtractedTextRequest();
    req.token=mExtractedToken;
    req.hintMaxLines=10;
    req.hintMaxChars=10000;
    mExtractedText=mInputConnection.getExtractedText(req,InputConnection.EXTRACTED_TEXT_MONITOR);
    if (mExtractedText != null) {
      mExtractEditText.setExtractedText(mExtractedText);
    }
    mExtractEditText.setInputType(getCurrentInputEditorInfo().inputType);
    mExtractEditText.setHint(mInputEditorInfo.hintText);
  }
}
