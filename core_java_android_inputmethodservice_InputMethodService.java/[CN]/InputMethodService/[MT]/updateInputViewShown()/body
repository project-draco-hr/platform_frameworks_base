{
  boolean isShown=onEvaluateInputViewShown();
  if (mIsInputViewShown != isShown && mWindowVisible) {
    mIsInputViewShown=isShown;
    mInputFrame.setVisibility(isShown ? View.VISIBLE : View.GONE);
    if (mInputView == null) {
      View v=onCreateInputView();
      if (v != null) {
        setInputView(v);
      }
    }
  }
}
