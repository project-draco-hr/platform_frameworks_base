{
  if (mShowInputRequested) {
    if (doIt)     requestHideSelf(0);
    return true;
  }
 else   if (mWindowVisible) {
    if (mCandidatesVisibility == View.VISIBLE) {
      if (doIt)       setCandidatesViewShown(false);
    }
 else {
      if (doIt)       hideWindow();
    }
    return true;
  }
  return false;
}
