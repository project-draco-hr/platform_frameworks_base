{
  SurfaceControl ctrl=null;
  try {
    if (DEBUG_SURFACE_TRACE) {
      ctrl=new SurfaceTrace(session,"FocusedStackFrame",1,1,PixelFormat.TRANSLUCENT,SurfaceControl.HIDDEN);
    }
 else {
      ctrl=new SurfaceControl(session,"FocusedStackFrame",1,1,PixelFormat.TRANSLUCENT,SurfaceControl.HIDDEN);
    }
    ctrl.setLayerStack(display.getLayerStack());
    ctrl.setAlpha(ALPHA);
    mSurface.copyFrom(ctrl);
  }
 catch (  OutOfResourcesException e) {
  }
  mSurfaceControl=ctrl;
}
