{
  if (mPolicyType == TYPE_INSTALL_AUTOMATIC || mPolicyType == TYPE_POSTPONE) {
    return true;
  }
 else   if (mPolicyType == TYPE_INSTALL_WINDOWED) {
    return mMaintenanceWindowStart >= 0 && mMaintenanceWindowStart < WINDOW_BOUNDARY && mMaintenanceWindowEnd >= 0 && mMaintenanceWindowEnd < WINDOW_BOUNDARY;
  }
 else {
    return false;
  }
}
