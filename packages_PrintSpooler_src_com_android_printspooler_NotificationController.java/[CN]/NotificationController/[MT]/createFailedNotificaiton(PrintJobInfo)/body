{
  Notification.Builder builder=new Notification.Builder(mContext).setSmallIcon(android.R.drawable.ic_secure).setContentTitle(mContext.getString(R.string.failed_notification_title_template,printJob.getLabel())).addAction(android.R.drawable.ic_secure,mContext.getString(R.string.cancel),createCancelIntent(printJob)).addAction(android.R.drawable.ic_secure,mContext.getString(R.string.restart),createRestartIntent(printJob.getId())).setContentText(printJob.getFailureReason()).setWhen(System.currentTimeMillis()).setOngoing(true).setShowWhen(true);
  mNotificationManager.notify(printJob.getId(),builder.build());
}
