{
  int i=1;
  while (i < length - 1) {
    if (points[i] < points[i - 1]) {
      System.arraycopy(points,i + 1,points,i - 1,length - i - 1);
      length-=2;
    }
 else     if (points[i] >= points[i + 1] - 1) {
      System.arraycopy(points,i + 2,points,i,length - i - 2);
      length-=2;
    }
 else {
      i+=2;
    }
  }
  return length;
}
