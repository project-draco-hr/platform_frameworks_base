{
  DisplayMetrics metrics=mRes.getDisplayMetrics();
  mTextScript=new ScriptC_text_test(mRS,mRes,R.raw.text_test);
  mTextScript.set_gFontSans(Font.create(mRS,mRes,"sans-serif",Font.Style.NORMAL,8.0f / metrics.density));
  mTextScript.set_gFontSerif(Font.create(mRS,mRes,"serif",Font.Style.NORMAL,8.0f / metrics.density));
}
