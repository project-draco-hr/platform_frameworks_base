{
  if (!enabled)   return;
  if (!pending) {
    pending=true;
    snapshotWriter.execute(new Runnable(){
      public void run(){
        String dir="/sdcard/snapshots";
        if (!dirMade) {
          makeDirectory(dir);
          dirMade=true;
        }
        try {
          writeSnapshot(dir,name);
        }
  finally {
          pending=false;
        }
      }
    }
);
  }
}
