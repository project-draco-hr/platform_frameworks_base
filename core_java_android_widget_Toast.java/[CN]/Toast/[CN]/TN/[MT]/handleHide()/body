{
  final Toast toast=mToast.get();
  if (toast != null) {
    if (localLOGV)     Log.v(TAG,"HANDLE HIDE: " + this + " mView="+ toast.mView);
    if (toast.mView != null) {
      if (toast.mView.getParent() != null) {
        if (localLOGV)         Log.v(TAG,"REMOVE! " + toast.mView + " in "+ this);
        mWM.removeView(toast.mView);
      }
      toast.mView=null;
    }
  }
}
