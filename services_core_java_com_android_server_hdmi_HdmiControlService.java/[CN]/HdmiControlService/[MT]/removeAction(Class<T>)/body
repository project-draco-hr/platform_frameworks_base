{
  runOnServiceThread(new Runnable(){
    @Override public void run(){
      Iterator<FeatureAction> iter=mActions.iterator();
      while (iter.hasNext()) {
        FeatureAction action=iter.next();
        if (action.getClass().equals(clazz)) {
          action.clear();
          mActions.remove(action);
        }
      }
    }
  }
);
}
