{
synchronized (mLock) {
    mInputChangeListenerRecord=new InputChangeListenerRecord();
    try {
      listener.asBinder().linkToDeath(mInputChangeListenerRecord,0);
    }
 catch (    RemoteException e) {
      Slog.w(TAG,"Listener already died");
      return;
    }
    mInputChangeListener=listener;
  }
}
