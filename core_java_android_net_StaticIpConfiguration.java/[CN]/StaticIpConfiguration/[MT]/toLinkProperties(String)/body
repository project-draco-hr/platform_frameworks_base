{
  LinkProperties lp=new LinkProperties();
  lp.setInterfaceName(iface);
  if (ipAddress != null) {
    lp.addLinkAddress(ipAddress);
  }
  for (  RouteInfo route : getRoutes(iface)) {
    lp.addRoute(route);
  }
  for (  InetAddress dns : dnsServers) {
    lp.addDnsServer(dns);
  }
  lp.setDomains(domains);
  return lp;
}
