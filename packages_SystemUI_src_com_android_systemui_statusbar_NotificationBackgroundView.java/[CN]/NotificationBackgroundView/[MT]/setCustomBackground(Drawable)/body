{
  if (mBackground != null) {
    mBackground.setCallback(null);
    unscheduleDrawable(mBackground);
  }
  mBackground=background;
  if (mBackground != null) {
    mBackground.setCallback(this);
  }
  if (mBackground instanceof RippleDrawable) {
    ((RippleDrawable)mBackground).setForceSoftware(true);
  }
  invalidate();
}
