{
  if (i < 0 || i >= NUM_WIFI_BATCHED_SCAN_BINS)   return;
  ArrayList<StopwatchTimer> collected=mBsi.mWifiBatchedScanTimers.get(i);
  if (collected == null) {
    collected=new ArrayList<StopwatchTimer>();
    mBsi.mWifiBatchedScanTimers.put(i,collected);
  }
  if (in == null) {
    mWifiBatchedScanTimer[i]=new StopwatchTimer(mBsi.mClocks,this,WIFI_BATCHED_SCAN,collected,mBsi.mOnBatteryTimeBase);
  }
 else {
    mWifiBatchedScanTimer[i]=new StopwatchTimer(mBsi.mClocks,this,WIFI_BATCHED_SCAN,collected,mBsi.mOnBatteryTimeBase,in);
  }
}
