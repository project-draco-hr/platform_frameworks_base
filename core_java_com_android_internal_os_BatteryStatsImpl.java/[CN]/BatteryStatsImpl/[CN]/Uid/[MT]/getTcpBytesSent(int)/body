{
  if (which == STATS_LAST) {
    return mLoadedTcpBytesSent;
  }
 else {
    long current=computeCurrentTcpBytesSent();
    if (which == STATS_UNPLUGGED) {
      current-=mTcpBytesSentAtLastUnplug;
    }
 else     if (which == STATS_TOTAL) {
      current+=mLoadedTcpBytesSent;
    }
    return current;
  }
}
