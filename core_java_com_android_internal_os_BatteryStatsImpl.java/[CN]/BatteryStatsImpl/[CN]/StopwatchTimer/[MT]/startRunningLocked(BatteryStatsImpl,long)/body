{
  if (mNesting++ == 0) {
    final long batteryRealtime=stats.getBatteryRealtimeLocked(elapsedRealtime * 1000);
    mUpdateTime=batteryRealtime;
    if (mTimerPool != null) {
      refreshTimersLocked(stats,batteryRealtime,mTimerPool,null);
      mTimerPool.add(this);
    }
    mCount++;
    mAcquireTime=mTotalTime;
    if (DEBUG && mType < 0) {
      Log.v(TAG,"start #" + mType + ": mUpdateTime="+ mUpdateTime+ " mTotalTime="+ mTotalTime+ " mCount="+ mCount+ " mAcquireTime="+ mAcquireTime);
    }
  }
}
