{
  if (mScreenOn) {
    final long elapsedRealtime=SystemClock.elapsedRealtime();
    mHistoryCur.states&=~HistoryItem.STATE_SCREEN_ON_FLAG;
    if (DEBUG_HISTORY)     Slog.v(TAG,"Screen off to: " + Integer.toHexString(mHistoryCur.states));
    addHistoryRecordLocked(elapsedRealtime);
    mScreenOn=false;
    mScreenOnTimer.stopRunningLocked(this,elapsedRealtime);
    if (mScreenBrightnessBin >= 0) {
      mScreenBrightnessTimer[mScreenBrightnessBin].stopRunningLocked(this,elapsedRealtime);
    }
    noteStopWakeLocked(-1,-1,"dummy",WAKE_TYPE_PARTIAL);
    if (mOnBatteryInternal) {
      updateDischargeScreenLevelsLocked(true,false);
    }
  }
}
