{
  if (mWifiOn) {
    mHistoryCur.states&=~BatteryHistoryRecord.STATE_WIFI_ON_FLAG;
    if (DEBUG_HISTORY)     Slog.v(TAG,"WIFI off to: " + Integer.toHexString(mHistoryCur.states));
    addHistoryRecord(SystemClock.elapsedRealtime());
    mWifiOn=false;
    mWifiOnTimer.stopRunningLocked(this);
  }
  if (mWifiOnUid >= 0) {
    getUidStatsLocked(mWifiOnUid).noteWifiTurnedOffLocked();
    mWifiOnUid=-1;
  }
}
