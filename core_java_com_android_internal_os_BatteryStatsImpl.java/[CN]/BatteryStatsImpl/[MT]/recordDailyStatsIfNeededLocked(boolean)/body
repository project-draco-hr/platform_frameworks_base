{
  long currentTime=System.currentTimeMillis();
  if (currentTime >= mNextMaxDailyDeadline) {
    recordDailyStatsLocked();
  }
 else   if (settled && currentTime >= mNextMinDailyDeadline) {
    recordDailyStatsLocked();
  }
 else   if (currentTime < (mDailyStartTime - (1000 * 60 * 60* 24))) {
    recordDailyStatsLocked();
  }
}
