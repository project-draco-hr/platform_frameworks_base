{
  if (!mWifiOn) {
    mHistoryCur.states|=BatteryHistoryRecord.STATE_WIFI_ON_FLAG;
    if (DEBUG_HISTORY)     Slog.v(TAG,"WIFI on to: " + Integer.toHexString(mHistoryCur.states));
    addHistoryRecord(SystemClock.elapsedRealtime());
    mWifiOn=true;
    mWifiOnTimer.startRunningLocked(this);
  }
  if (mWifiOnUid != uid) {
    if (mWifiOnUid >= 0) {
      getUidStatsLocked(mWifiOnUid).noteWifiTurnedOffLocked();
    }
    mWifiOnUid=uid;
    getUidStatsLocked(uid).noteWifiTurnedOnLocked();
  }
}
