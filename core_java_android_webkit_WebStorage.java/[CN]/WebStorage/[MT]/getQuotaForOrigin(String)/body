{
  long ret=0;
  if (origin == null) {
    return ret;
  }
  mLock.lock();
  try {
    mUpdateAvailable=false;
    update();
    while (!mUpdateAvailable) {
      mUpdateCondition.await();
    }
    Long quota=mQuotas.get(origin);
    if (quota != null) {
      ret=quota.longValue();
    }
  }
 catch (  InterruptedException e) {
    Log.e(TAG,"Exception while waiting on the updated origins",e);
  }
 finally {
    mLock.unlock();
  }
  return ret;
}
