{
  Set<String> result=new HashSet<>();
  TelephonyManager tm=TelephonyManager.from(context);
  if (tm != null) {
    String iso=tm.getSimCountryIso().toUpperCase(Locale.US);
    if (!iso.isEmpty()) {
      result.add(iso);
    }
    iso=tm.getNetworkCountryIso().toUpperCase(Locale.US);
    if (!iso.isEmpty()) {
      result.add(iso);
    }
  }
  return result;
}
