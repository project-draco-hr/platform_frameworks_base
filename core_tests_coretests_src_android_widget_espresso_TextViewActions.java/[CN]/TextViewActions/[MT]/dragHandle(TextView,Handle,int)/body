{
  final int currentOffset=handleType == Handle.SELECTION_START ? textView.getSelectionStart() : textView.getSelectionEnd();
  return actionWithAssertions(new DragAction(DragAction.Drag.TAP,new HandleCoordinates(textView,handleType,currentOffset),new HandleCoordinates(textView,handleType,endIndex),Press.FINGER,Editor.HandleView.class));
}
