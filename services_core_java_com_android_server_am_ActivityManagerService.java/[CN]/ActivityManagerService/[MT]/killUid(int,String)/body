{
  enforceCallingPermission(Manifest.permission.KILL_UID,"killUid");
synchronized (this) {
    final long identity=Binder.clearCallingIdentity();
    try {
      killPackageProcessesLocked(null,UserHandle.getAppId(uid),UserHandle.getUserId(uid),ProcessList.PERSISTENT_PROC_ADJ,false,true,true,true,reason != null ? reason : "kill uid");
    }
  finally {
      Binder.restoreCallingIdentity(identity);
    }
  }
}
