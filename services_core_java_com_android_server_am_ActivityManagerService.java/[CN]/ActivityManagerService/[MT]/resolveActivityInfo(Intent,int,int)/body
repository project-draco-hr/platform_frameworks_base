{
  ActivityInfo ai=null;
  ComponentName comp=intent.getComponent();
  try {
    if (comp != null) {
      ai=AppGlobals.getPackageManager().getActivityInfo(comp,flags,userId);
    }
 else {
      ComponentName preferredComponent=mPreferredSetupActivities.get(userId);
      if (preferredComponent != null) {
        ai=AppGlobals.getPackageManager().getActivityInfo(preferredComponent,flags,userId);
      }
      if (ai == null) {
        ResolveInfo info=AppGlobals.getPackageManager().resolveIntent(intent,intent.resolveTypeIfNeeded(mContext.getContentResolver()),flags,userId);
        if (info != null) {
          ai=info.activityInfo;
        }
      }
    }
  }
 catch (  RemoteException e) {
  }
  return ai;
}
