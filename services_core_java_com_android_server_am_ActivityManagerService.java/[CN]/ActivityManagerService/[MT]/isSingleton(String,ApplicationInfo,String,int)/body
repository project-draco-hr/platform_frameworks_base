{
  boolean result=false;
  if (UserHandle.getAppId(aInfo.uid) >= Process.FIRST_APPLICATION_UID) {
    if ((flags & ServiceInfo.FLAG_SINGLE_USER) != 0) {
      if (ActivityManager.checkUidPermission(android.Manifest.permission.INTERACT_ACROSS_USERS,aInfo.uid) != PackageManager.PERMISSION_GRANTED) {
        ComponentName comp=new ComponentName(aInfo.packageName,className);
        String msg="Permission Denial: Component " + comp.flattenToShortString() + " requests FLAG_SINGLE_USER, but app does not hold "+ android.Manifest.permission.INTERACT_ACROSS_USERS;
        Slog.w(TAG,msg);
        throw new SecurityException(msg);
      }
      result=true;
    }
  }
 else   if (componentProcessName == aInfo.packageName) {
    result=(aInfo.flags & ApplicationInfo.FLAG_PERSISTENT) != 0;
  }
 else   if ("system".equals(componentProcessName)) {
    result=true;
  }
  if (DEBUG_MU) {
    Slog.v(TAG,"isSingleton(" + componentProcessName + ", "+ aInfo+ ", "+ className+ ", 0x"+ Integer.toHexString(flags)+ ") = "+ result);
  }
  return result;
}
