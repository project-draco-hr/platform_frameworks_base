{
  long ident=Binder.clearCallingIdentity();
  try {
    final TaskRecord task;
synchronized (this) {
      final ActivityRecord r=ActivityRecord.forToken(token);
      if (r == null) {
        return;
      }
      task=r.task;
    }
    if (task != null) {
      startLockTaskMode(task);
    }
  }
  finally {
    Binder.restoreCallingIdentity(ident);
  }
}
