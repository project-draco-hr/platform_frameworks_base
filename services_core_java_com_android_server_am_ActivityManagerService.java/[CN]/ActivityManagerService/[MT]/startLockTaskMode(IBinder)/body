{
  final TaskRecord task;
  long ident=Binder.clearCallingIdentity();
  try {
synchronized (this) {
      final ActivityRecord r=ActivityRecord.forTokenLocked(token);
      if (r == null) {
        return;
      }
      task=r.task;
    }
  }
  finally {
    Binder.restoreCallingIdentity(ident);
  }
  if (task != null) {
    startLockTaskMode(task);
  }
}
