{
  final DevicePolicyManager dpm=(DevicePolicyManager)mContext.getSystemService(Context.DEVICE_POLICY_SERVICE);
  try {
    int uid=mContext.getPackageManager().getPackageUid(pkg,Binder.getCallingUserHandle().getIdentifier());
    return (uid == Binder.getCallingUid()) && dpm != null && dpm.isLockTaskPermitted(pkg);
  }
 catch (  NameNotFoundException e) {
    return false;
  }
}
