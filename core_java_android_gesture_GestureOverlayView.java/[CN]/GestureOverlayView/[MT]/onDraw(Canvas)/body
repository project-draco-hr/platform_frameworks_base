{
  super.onDraw(canvas);
  if (mIsFadingOut) {
    mBitmapPaint.setAlpha((int)(255 * mFadingAlpha));
    canvas.drawBitmap(mBitmap,0,0,mBitmapPaint);
  }
 else {
    mBitmapPaint.setAlpha(255);
    canvas.drawBitmap(mBitmap,0,0,mBitmapPaint);
  }
  if (mPath != null) {
    canvas.drawPath(mPath,mGesturePaint);
  }
}
