{
  if (fadeOut) {
    mFadingAlpha=1.0f;
    mIsFadingOut=true;
    removeCallbacks(mFadingOut);
    mFadingStart=AnimationUtils.currentAnimationTimeMillis() + mFadeOffset;
    postDelayed(mFadingOut,mFadeOffset);
  }
 else {
    mPath.rewind();
    mCurrentGesture=null;
    if (mBitmap != null) {
      mBitmap.eraseColor(TRANSPARENT_BACKGROUND);
      invalidate();
    }
  }
}
