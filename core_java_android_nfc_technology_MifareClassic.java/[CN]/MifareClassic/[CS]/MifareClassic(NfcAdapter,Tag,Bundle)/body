{
  super(adapter,tag,TagTechnology.MIFARE_CLASSIC);
  NfcA a=(NfcA)adapter.getTechnology(tag,TagTechnology.NFC_A);
  mIsEmulated=false;
  mType=TYPE_UNKNOWN;
  mSize=SIZE_UNKNOWN;
switch (a.getSak()) {
case 0x00:
    mType=TYPE_ULTRALIGHT;
  break;
case 0x08:
mType=TYPE_CLASSIC;
mSize=SIZE_1K;
break;
case 0x09:
mType=TYPE_CLASSIC;
mSize=SIZE_MINI;
break;
case 0x10:
mType=TYPE_PLUS;
mSize=SIZE_2K;
break;
case 0x11:
mType=TYPE_PLUS;
mSize=SIZE_4K;
break;
case 0x18:
mType=TYPE_CLASSIC;
mSize=SIZE_4K;
break;
case 0x20:
if (a.getAtqa()[0] == 0x03) {
mType=TYPE_DESFIRE;
}
 else {
mType=TYPE_PLUS;
mSize=SIZE_UNKNOWN;
}
break;
case 0x28:
mType=TYPE_CLASSIC;
mSize=SIZE_1K;
mIsEmulated=true;
break;
case 0x38:
mType=TYPE_CLASSIC;
mSize=SIZE_4K;
mIsEmulated=true;
break;
case 0x88:
mType=TYPE_CLASSIC;
mSize=SIZE_1K;
break;
case 0x98:
case 0xB8:
mType=TYPE_PRO;
mSize=SIZE_4K;
break;
default :
mType=TYPE_UNKNOWN;
mSize=SIZE_UNKNOWN;
break;
}
}
