{
  if (mList != null) {
    return true;
  }
  View root=getView();
  if (root == null) {
    return false;
  }
  View rawListView=root.findViewById(android.R.id.list);
  if (!(rawListView instanceof ListView)) {
    return false;
  }
  mList=(ListView)rawListView;
  if (mList == null) {
    return false;
  }
  return true;
}
