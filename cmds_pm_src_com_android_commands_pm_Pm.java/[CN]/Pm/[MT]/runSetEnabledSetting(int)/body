{
  String pkg=nextArg();
  if (pkg == null) {
    System.err.println("Error: no package or component specified");
    showUsage();
    return;
  }
  ComponentName cn=ComponentName.unflattenFromString(pkg);
  if (cn == null) {
    try {
      mPm.setApplicationEnabledSetting(pkg,state,0);
      System.err.println("Package " + pkg + " new state: "+ enabledSettingToString(mPm.getApplicationEnabledSetting(pkg)));
    }
 catch (    RemoteException e) {
      System.err.println(e.toString());
      System.err.println(PM_NOT_RUNNING_ERR);
    }
  }
 else {
    try {
      mPm.setComponentEnabledSetting(cn,state,0);
      System.err.println("Component " + cn.toShortString() + " new state: "+ enabledSettingToString(mPm.getComponentEnabledSetting(cn)));
    }
 catch (    RemoteException e) {
      System.err.println(e.toString());
      System.err.println(PM_NOT_RUNNING_ERR);
    }
  }
}
