{
  if (input == null) {
    return null;
  }
  final int inputLength=input.length();
  if ((inputLength % 2) != 0) {
    System.err.print("Invalid length; must be multiple of 2");
    return null;
  }
  final int byteLength=inputLength / 2;
  final byte[] output=new byte[byteLength];
  int inputIndex=0;
  int byteIndex=0;
  while (inputIndex < inputLength) {
    output[byteIndex++]=(byte)Integer.parseInt(input.substring(inputIndex,inputIndex + 2),16);
    inputIndex+=2;
  }
  return output;
}
