{
  Mesh.TriangleMeshBuilder tmb=new Mesh.TriangleMeshBuilder(mRS,2,Mesh.TriangleMeshBuilder.TEXTURE_0);
  float xOffset=width / 2;
  float yOffset=height / 2;
  tmb.setTexture(0,0);
  tmb.addVertex(-1.0f * xOffset,-1.0f * yOffset);
  tmb.setTexture(1,0);
  tmb.addVertex(xOffset,-1.0f * yOffset);
  tmb.setTexture(1,1);
  tmb.addVertex(xOffset,yOffset);
  tmb.setTexture(0,1);
  tmb.addVertex(-1.0f * xOffset,yOffset);
  tmb.addTriangle(0,3,1);
  tmb.addTriangle(1,3,2);
  return tmb.create(true);
}
