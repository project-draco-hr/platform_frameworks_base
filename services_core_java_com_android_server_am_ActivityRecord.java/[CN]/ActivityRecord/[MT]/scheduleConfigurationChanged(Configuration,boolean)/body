{
  if (app == null || app.thread == null) {
    return;
  }
  try {
    Configuration overrideConfig=new Configuration(config);
    overrideConfig.fontScale=service.mConfiguration.fontScale;
    if (DEBUG_CONFIGURATION)     Slog.v(TAG,"Sending new config to " + this + " "+ "reportToActivity="+ reportToActivity+ " and config: "+ overrideConfig);
    app.thread.scheduleActivityConfigurationChanged(appToken,overrideConfig,reportToActivity);
  }
 catch (  RemoteException e) {
  }
}
