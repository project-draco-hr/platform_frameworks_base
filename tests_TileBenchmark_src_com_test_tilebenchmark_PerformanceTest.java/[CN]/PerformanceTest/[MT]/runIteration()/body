{
  File sdFile=Environment.getExternalStorageDirectory();
  for (  String testDirName : TEST_DIRS) {
    File testDir=new File(sdFile,TEST_LOCATION + "/" + testDirName);
    Log.d(LOGTAG,"Testing dir: '" + testDir.getAbsolutePath() + "', exists="+ testDir.exists());
    for (    File siteDir : testDir.listFiles()) {
      if (!siteDir.isDirectory())       continue;
      if (!loadUrl(URL_PREFIX + siteDir.getAbsolutePath() + URL_POSTFIX)) {
        return false;
      }
    }
  }
  return true;
}
