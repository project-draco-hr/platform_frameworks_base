{
  assertRunOnServiceThread();
  for (  int type : deviceTypes) {
    HdmiCecLocalDevice device=HdmiCecLocalDevice.create(this,type);
    if (device == null) {
      continue;
    }
    device.setPreferredAddress(HdmiCec.ADDR_UNREGISTERED);
    mLocalDevices.put(type,device);
    device.init();
  }
}
