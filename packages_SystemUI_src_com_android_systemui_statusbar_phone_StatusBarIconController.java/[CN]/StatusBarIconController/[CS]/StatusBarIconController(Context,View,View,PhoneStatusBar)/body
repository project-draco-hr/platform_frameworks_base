{
  mContext=context;
  mPhoneStatusBar=phoneStatusBar;
  mSystemIconArea=(LinearLayout)statusBar.findViewById(R.id.system_icon_area);
  mStatusIcons=(LinearLayout)statusBar.findViewById(R.id.statusIcons);
