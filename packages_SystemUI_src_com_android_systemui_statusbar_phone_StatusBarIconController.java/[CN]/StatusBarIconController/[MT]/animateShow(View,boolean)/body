{
  v.animate().cancel();
  v.setVisibility(View.VISIBLE);
  if (!animate) {
    v.setAlpha(1f);
    return;
  }
  v.animate().alpha(1f).setDuration(320).setInterpolator(PhoneStatusBar.ALPHA_IN).setStartDelay(50).withEndAction(null);
  if (mPhoneStatusBar.isKeyguardFadingAway()) {
    v.animate().setDuration(mPhoneStatusBar.getKeyguardFadingAwayDuration()).setInterpolator(mLinearOutSlowIn).setStartDelay(mPhoneStatusBar.getKeyguardFadingAwayDelay()).start();
  }
}
