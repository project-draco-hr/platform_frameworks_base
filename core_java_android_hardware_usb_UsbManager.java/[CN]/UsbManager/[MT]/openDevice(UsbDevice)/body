{
  try {
    ParcelFileDescriptor pfd=mService.openDevice(device.getDeviceName());
    if (pfd == null) {
      return false;
    }
    boolean result=device.open(pfd);
    pfd.close();
    return result;
  }
 catch (  Exception e) {
    Log.e(TAG,"exception in UsbManager.openDevice",e);
    return false;
  }
}
