{
  if (Log.isLoggable(TAG,Log.VERBOSE)) {
    Log.v(TAG,"setUserData: " + account + ", key "+ key+ ", caller's uid "+ Binder.getCallingUid()+ ", pid "+ Binder.getCallingPid());
  }
  if (key == null)   throw new IllegalArgumentException("key is null");
  if (account == null)   throw new IllegalArgumentException("account is null");
  checkAuthenticateAccountsPermission(account);
  long identityToken=clearCallingIdentity();
  if (account.type.equals(GOOGLE_ACCOUNT_TYPE) && key.equals("broadcast")) {
    sendAccountsChangedBroadcast();
    return;
  }
  try {
    writeUserdataIntoDatabase(account,key,value);
  }
  finally {
    restoreCallingIdentity(identityToken);
  }
}
