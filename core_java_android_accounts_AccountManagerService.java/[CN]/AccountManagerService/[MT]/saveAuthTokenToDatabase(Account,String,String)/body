{
  SQLiteDatabase db=mOpenHelper.getWritableDatabase();
  db.beginTransaction();
  try {
    if (saveAuthTokenToDatabase(db,account,type,authToken)) {
      mContext.sendBroadcast(ACCOUNTS_CHANGED_INTENT);
      db.setTransactionSuccessful();
      return true;
    }
    return false;
  }
  finally {
    db.endTransaction();
  }
}
