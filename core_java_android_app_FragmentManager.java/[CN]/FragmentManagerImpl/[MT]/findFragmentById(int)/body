{
  if (mAdded != null) {
    for (int i=mAdded.size() - 1; i >= 0; i--) {
      Fragment f=mAdded.get(i);
      if (f != null && f.mFragmentId == id) {
        return f;
      }
    }
  }
  if (mActive != null) {
    for (int i=mActive.size() - 1; i >= 0; i--) {
      Fragment f=mActive.get(i);
      if (f != null && f.mFragmentId == id) {
        return f;
      }
    }
  }
  return null;
}
