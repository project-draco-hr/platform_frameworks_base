{
synchronized (mLock) {
    for (    final IMediaProjectionCallback callback : mCallbacks) {
      mHandler.post(new Runnable(){
        @Override public void run(){
          try {
            callback.onStop();
          }
 catch (          RemoteException e) {
            Slog.w(TAG,"Failed to notify media projection has stopped",e);
          }
        }
      }
);
    }
  }
}
