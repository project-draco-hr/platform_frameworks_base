{
  initConnectivityManager();
synchronized (sCM) {
    if (mNetworkCallback != null) {
      try {
        sCM.unregisterNetworkCallback(mNetworkCallback);
      }
 catch (      SecurityException e) {
        Log.d(TAG,"Failed to unregister network callback",e);
      }
      mNetworkCallback=null;
    }
  }
}
