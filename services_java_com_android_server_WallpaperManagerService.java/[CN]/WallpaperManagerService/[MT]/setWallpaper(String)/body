{
  checkPermission(android.Manifest.permission.SET_WALLPAPER);
synchronized (mLock) {
    if (name == null)     name="";
    mName=name;
    saveSettingsLocked();
    try {
      ParcelFileDescriptor fd=ParcelFileDescriptor.open(WALLPAPER_FILE,MODE_CREATE | MODE_READ_WRITE);
      return fd;
    }
 catch (    FileNotFoundException e) {
      if (Config.LOGD)       Log.d(TAG,"Error setting wallpaper",e);
    }
    return null;
  }
}
