{
  if (DEBUG)   Log.v(TAG,"clearWallpaper");
synchronized (mLock) {
    File f=WALLPAPER_FILE;
    if (f.exists()) {
      f.delete();
    }
    final long ident=Binder.clearCallingIdentity();
    try {
      bindWallpaperComponentLocked(null);
    }
  finally {
      Binder.restoreCallingIdentity(ident);
    }
  }
}
