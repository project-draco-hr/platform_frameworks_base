{
  mTitle=title;
  for (int i=MenuBuilder.NUM_TYPES - 1; i >= 0; i--) {
    if (!hasItemView(i)) {
      continue;
    }
    ItemView itemView=mItemViews[i].get();
    if (!itemView.prefersCondensedTitle() || mTitleCondensed == null) {
      itemView.setTitle(title);
    }
  }
  if (mSubMenu != null) {
    mSubMenu.setHeaderTitle(title);
  }
  return this;
}
