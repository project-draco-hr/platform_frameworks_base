{
  (new LooperThread()).start();
synchronized (this) {
    long now=System.currentTimeMillis();
    long endTime=now + timeout;
    while (!mDone && now < endTime) {
      try {
        wait(endTime - now);
      }
 catch (      InterruptedException e) {
      }
      now=System.currentTimeMillis();
    }
  }
  mLooper.quit();
  if (!mDone) {
    throw new RuntimeException("test timed out");
  }
  if (!mSuccess) {
    throw mFailure;
  }
}
