{
  if (mViewTransformationAnimation != null) {
    mViewTransformationAnimation.cancel();
  }
  for (  Integer viewType : mTransformedViews.keySet()) {
    TransformState ownState=getCurrentState(viewType);
    if (ownState != null) {
      ownState.setVisible(visible,false);
      ownState.recycle();
    }
  }
}
