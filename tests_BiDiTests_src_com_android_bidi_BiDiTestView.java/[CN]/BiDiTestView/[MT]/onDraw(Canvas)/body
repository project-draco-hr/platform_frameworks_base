  deltaX+=testString(canvas,BOLD_TEXT,ORIGIN + deltaX,ORIGIN,paint,typeface,false,true,Paint.DIRECTION_LTR,currentTextSize);
  deltaX+=testString(canvas,BOLD_ITALIC_TEXT,ORIGIN + deltaX,ORIGIN,paint,typeface,true,true,Paint.DIRECTION_LTR,currentTextSize);
  deltaX=testString(canvas,NORMAL_LONG_TEXT,ORIGIN,ORIGIN + 2 * currentTextSize,paint,typeface,false,false,Paint.DIRECTION_LTR,currentTextSize);
  deltaX=testString(canvas,NORMAL_LONG_TEXT_2,ORIGIN,ORIGIN + 4 * currentTextSize,paint,typeface,false,false,Paint.DIRECTION_LTR,currentTextSize);
  deltaX=testString(canvas,NORMAL_LONG_TEXT_3,ORIGIN,ORIGIN + 6 * currentTextSize,paint,typeface,false,false,Paint.DIRECTION_LTR,currentTextSize);
  deltaX=testString(canvas,ARABIC_TEXT,ORIGIN,ORIGIN + 8 * currentTextSize,paint,typeface,false,false,Paint.DIRECTION_RTL,currentTextSize);
