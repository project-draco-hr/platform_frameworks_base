{
  if (icon != null) {
    h.iconView.setImageDrawable(icon);
    if (show && h.iconView.getVisibility() != View.VISIBLE) {
      if (anim) {
        h.iconView.setAnimation(AnimationUtils.loadAnimation(mContext,R.anim.recent_appear));
      }
      h.iconView.setVisibility(View.VISIBLE);
    }
  }
}
