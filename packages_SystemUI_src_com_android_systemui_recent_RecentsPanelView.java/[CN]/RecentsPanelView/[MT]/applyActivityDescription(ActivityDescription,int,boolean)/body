{
synchronized (ad) {
    if (mRecentsContainer != null) {
      ViewGroup container=mRecentsContainer;
      if (container instanceof HorizontalScrollView || container instanceof ScrollView) {
        container=(ViewGroup)container.findViewById(R.id.recents_linear_layout);
      }
      for (int i=0; i < container.getChildCount(); i++) {
        View v=container.getChildAt(i);
        if (v.getTag() instanceof ViewHolder) {
          ViewHolder h=(ViewHolder)v.getTag();
          if (h.activityDescription == ad) {
            if (DEBUG)             Log.v(TAG,"Updatating thumbnail #" + index + " in "+ h.activityDescription+ ": "+ ad.getThumbnail());
            h.iconView.setImageDrawable(ad.getIcon());
            if (anim) {
              h.iconView.setAnimation(AnimationUtils.loadAnimation(mContext,R.anim.recent_appear));
            }
            h.iconView.setVisibility(View.VISIBLE);
            h.labelView.setText(ad.getLabel());
            if (anim) {
              h.labelView.setAnimation(AnimationUtils.loadAnimation(mContext,R.anim.recent_appear));
            }
            h.labelView.setVisibility(View.VISIBLE);
            Bitmap thumbnail=ad.getThumbnail();
            if (thumbnail != null) {
              h.thumbnailViewImage.setImageBitmap(thumbnail);
              if (anim) {
                h.thumbnailViewImage.setAnimation(AnimationUtils.loadAnimation(mContext,R.anim.recent_appear));
              }
              h.thumbnailViewImage.setVisibility(View.VISIBLE);
            }
          }
        }
      }
    }
  }
}
