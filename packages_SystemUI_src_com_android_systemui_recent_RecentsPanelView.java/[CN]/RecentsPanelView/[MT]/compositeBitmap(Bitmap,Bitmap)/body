{
  Bitmap outBitmap=background.copy(background.getConfig(),true);
  if (thumbnail != null) {
    Canvas canvas=new Canvas(outBitmap);
    Paint paint=new Paint();
    paint.setAntiAlias(true);
    paint.setFilterBitmap(true);
    paint.setAlpha(255);
    final int srcWidth=thumbnail.getWidth();
    final int srcHeight=thumbnail.getHeight();
    if (DEBUG)     Log.v(TAG,"Source thumb: " + srcWidth + "x"+ srcHeight);
    canvas.drawBitmap(thumbnail,new Rect(0,0,srcWidth - 1,srcHeight - 1),new RectF(mGlowBitmapPaddingLeftPx,mGlowBitmapPaddingTopPx,outBitmap.getWidth() - mGlowBitmapPaddingRightPx,outBitmap.getHeight() - mGlowBitmapPaddingBottomPx),paint);
  }
  return outBitmap;
}
