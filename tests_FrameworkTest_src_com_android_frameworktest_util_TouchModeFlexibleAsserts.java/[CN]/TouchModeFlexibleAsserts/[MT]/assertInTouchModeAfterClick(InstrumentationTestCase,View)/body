{
  int numAttemptsAtTouchMode=0;
  while (numAttemptsAtTouchMode < MAX_ATTEMPTS && !viewToTouch.isInTouchMode()) {
    TouchUtils.clickView(test,viewToTouch);
    numAttemptsAtTouchMode++;
  }
  Assert.assertTrue("even after " + MAX_ATTEMPTS + " clicks, did not enter "+ "touch mode",viewToTouch.isInTouchMode());
}
