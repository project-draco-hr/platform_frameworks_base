{
  long startTime=SystemClock.uptimeMillis();
  while (true) {
    int state=mWifiManager.getWifiApState();
    if (state == expectedState) {
      logv("waitForWifiAPState success: state=" + state);
      return true;
    }
    if ((SystemClock.uptimeMillis() - startTime) > timeout) {
      logv(String.format("waitForWifiAPState timeout: expected=%d, actual=%d",expectedState,state));
      return false;
    }
    logv(String.format("waitForWifiAPState interim: expected=%d, actual=%d",expectedState,state));
    SystemClock.sleep(SHORT_TIMEOUT);
  }
}
