{
synchronized (startLock) {
    if (!started) {
      return false;
    }
    try {
      return itts.isSpeaking();
    }
 catch (    RemoteException e) {
      started=false;
      initTts();
    }
catch (    NullPointerException e) {
      started=false;
      initTts();
    }
catch (    IllegalStateException e) {
      started=false;
      initTts();
    }
    return false;
  }
}
