{
synchronized (startLock) {
    if (!started) {
      return;
    }
    try {
      itts.addSpeech(text,packagename,resourceId);
    }
 catch (    RemoteException e) {
      started=false;
      initTts();
    }
catch (    NullPointerException e) {
      started=false;
      initTts();
    }
catch (    IllegalStateException e) {
      started=false;
      initTts();
    }
  }
}
