{
  InputConnection ic=null;
synchronized (mH) {
    if (DEBUG)     Log.v(TAG,"focusOut: " + view + " mServedView="+ mServedView+ " winFocus="+ view.hasWindowFocus());
    if (mServedView == view) {
      ic=mServedInputConnection;
      if (false && view.hasWindowFocus()) {
        mLastServedView=view;
        Handler vh=view.getHandler();
        if (vh != null) {
          vh.removeMessages(ViewRoot.CHECK_FOCUS);
          vh.sendMessage(vh.obtainMessage(ViewRoot.CHECK_FOCUS,view));
        }
      }
    }
  }
  if (ic != null) {
    ic.finishComposingText();
  }
}
