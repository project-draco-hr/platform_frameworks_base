{
  if (view == null) {
    return "null";
  }
  final StringBuilder sb=new StringBuilder();
  sb.append(view);
  sb.append(",focus=" + view.hasFocus());
  sb.append(",windowFocus=" + view.hasWindowFocus());
  sb.append(",window=" + view.getWindowToken());
  sb.append(",temporaryDetach=" + view.isTemporarilyDetached());
  return sb.toString();
}
