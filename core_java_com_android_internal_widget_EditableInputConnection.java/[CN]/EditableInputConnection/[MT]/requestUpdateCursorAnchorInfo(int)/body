{
  if (DEBUG)   Log.v(TAG,"requestUpdateCursorAnchorInfo " + cursorUpdateMode);
  final int KNOWN_FLAGS_MASK=InputConnection.REQUEST_UPDATE_CURSOR_ANCHOR_INFO_IMMEDIATE | InputConnection.REQUEST_UPDATE_CURSOR_ANCHOR_INFO_MONITOR;
  final int unknownFlags=cursorUpdateMode & ~KNOWN_FLAGS_MASK;
  if (unknownFlags != 0) {
    if (DEBUG) {
      Log.d(TAG,"Rejecting requestUpdateCursorAnchorInfo due to unknown flags." + " cursorUpdateMode=" + cursorUpdateMode + " unknownFlags="+ unknownFlags);
    }
    return false;
  }
  if (mIMM == null) {
    return false;
  }
  mIMM.setUpdateCursorAnchorInfoMode(cursorUpdateMode);
  if ((cursorUpdateMode & InputConnection.REQUEST_UPDATE_CURSOR_ANCHOR_INFO_IMMEDIATE) != 0) {
    if (mTextView == null) {
    }
 else     if (mTextView.isInLayout()) {
    }
 else {
      mTextView.requestLayout();
    }
  }
  return true;
}
