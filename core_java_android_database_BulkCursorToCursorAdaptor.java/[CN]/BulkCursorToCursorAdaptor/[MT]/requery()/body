{
  throwIfCursorIsClosed();
  try {
    CursorWindow newWindow=new CursorWindow(false);
    try {
      mCount=mBulkCursor.requery(getObserver(),newWindow);
      if (mCount != -1) {
        mPos=-1;
        closeWindow();
        super.requery();
        return true;
      }
 else {
        deactivate();
        return false;
      }
    }
  finally {
      newWindow.close();
    }
  }
 catch (  Exception ex) {
    Log.e(TAG,"Unable to requery because the remote process exception " + ex.getMessage());
    deactivate();
    return false;
  }
}
