{
  if (v.getMeasuredWidth() == 0 || v.getMeasuredHeight() == 0) {
    return null;
  }
  Bitmap bitmap=Bitmap.createBitmap(v.getMeasuredWidth(),v.getMeasuredHeight(),Bitmap.Config.ARGB_8888);
  Canvas canvas=new Canvas(bitmap);
  float rotationX=v.getRotationX();
  v.setRotationX(0);
  canvas.concat(v.getMatrix());
  v.draw(canvas);
  v.setRotationX(rotationX);
  Bitmap outlineBitmap=Bitmap.createBitmap(v.getMeasuredWidth(),v.getMeasuredHeight(),Bitmap.Config.ARGB_8888);
  Canvas outlineCanvas=new Canvas(outlineBitmap);
  drawOutline(outlineCanvas,bitmap);
  bitmap.recycle();
  return outlineBitmap;
}
