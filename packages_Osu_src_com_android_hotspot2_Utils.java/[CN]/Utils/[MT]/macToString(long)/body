{
  int len=(mac & ~EUI48Mask) != 0 ? EUI64Length : EUI48Length;
  StringBuilder sb=new StringBuilder();
  boolean first=true;
  for (int n=(len - 1) * Byte.SIZE; n >= 0; n-=Byte.SIZE) {
    if (first) {
      first=false;
    }
 else {
      sb.append(':');
    }
    sb.append(String.format("%02x",(mac >>> n) & Constants.BYTE_MASK));
  }
  return sb.toString();
}
