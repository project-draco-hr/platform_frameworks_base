{
  while (true) {
synchronized (mFirstTaskLock) {
      if (mFirstTaskLoaded) {
        return mFirstTask;
      }
 else       if (!mFirstTaskLoaded && !mPreloadingFirstTask) {
        mFirstTask=loadFirstTask();
        mFirstTaskLoaded=true;
        return mFirstTask;
      }
    }
    try {
      Thread.sleep(3);
    }
 catch (    InterruptedException e) {
    }
  }
}
