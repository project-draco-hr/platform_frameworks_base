{
  if (mHotspot != null) {
    mHotspot.cancel();
    mHotspot=null;
  }
  final int count=mAnimatingRipplesCount;
  final Ripple[] ripples=mAnimatingRipples;
  for (int i=0; i < count; i++) {
    final Ripple ripple=ripples[i];
    ripples[i]=null;
    ripple.cancel();
  }
  mAnimatingRipplesCount=0;
  invalidateSelf();
}
