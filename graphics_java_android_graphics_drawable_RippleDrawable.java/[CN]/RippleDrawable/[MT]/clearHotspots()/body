{
  boolean needsDraw=false;
  if (mRipple != null) {
    needsDraw|=mRipple.isHardwareAnimating();
    mRipple.cancel();
    mRipple=null;
  }
  if (mBackground != null) {
    needsDraw|=mBackground.isHardwareAnimating();
    mBackground.cancel();
    mBackground=null;
  }
  needsDraw|=cancelExitingRipples();
  mNeedsDraw=needsDraw;
  invalidateSelf();
}
