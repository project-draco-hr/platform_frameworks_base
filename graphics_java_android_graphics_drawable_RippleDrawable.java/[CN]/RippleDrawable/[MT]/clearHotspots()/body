{
  mClearingHotspots=true;
  final int count=mAnimatingRipplesCount;
  final Ripple[] ripples=mAnimatingRipples;
  for (int i=0; i < count; i++) {
    final Ripple ripple=ripples[i];
    ripples[i]=null;
    ripple.cancel();
  }
  if (mRipple != null) {
    mRipple.cancel();
    mRipple=null;
  }
  if (mBackground != null) {
    mBackground.cancel();
    mBackground=null;
  }
  mClearingHotspots=false;
  mAnimatingRipplesCount=0;
  invalidateSelf();
}
