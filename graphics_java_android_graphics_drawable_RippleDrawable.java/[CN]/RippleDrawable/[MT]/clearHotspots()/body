{
  if (mRipple != null) {
    mRipple.cancel();
    mRipple=null;
  }
  if (mBackground != null) {
    mBackground.cancel();
    mBackground=null;
  }
  mClearingHotspots=true;
  final int count=mAnimatingRipplesCount;
  final Ripple[] ripples=mAnimatingRipples;
  for (int i=0; i < count; i++) {
    ripples[i].cancel();
  }
  if (ripples != null) {
    Arrays.fill(ripples,0,count,null);
  }
  mAnimatingRipplesCount=0;
  mClearingHotspots=false;
  invalidateSelf();
}
