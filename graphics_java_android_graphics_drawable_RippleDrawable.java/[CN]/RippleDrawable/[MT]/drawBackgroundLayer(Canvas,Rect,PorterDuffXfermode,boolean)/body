{
  int saveCount=-1;
  if (mBackground != null && mBackground.shouldDraw()) {
    if (drawMask || mode != SRC_OVER) {
      saveCount=canvas.saveLayer(bounds.left,bounds.top,bounds.right,bounds.bottom,getMaskingPaint(mode));
    }
    final float x=mHotspotBounds.exactCenterX();
    final float y=mHotspotBounds.exactCenterY();
    canvas.translate(x,y);
    mBackground.draw(canvas,getRipplePaint());
    canvas.translate(-x,-y);
  }
  return saveCount;
}
