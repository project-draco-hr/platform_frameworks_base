{
  final PointF p;
  if (mPendingHotspots == null) {
    mPendingHotspots=new SparseArray<>(2);
    p=null;
  }
 else {
    p=mPendingHotspots.get(id);
  }
  if (p == null) {
    final PointF newPoint=new PointF();
    mPendingHotspots.put(id,newPoint);
    return newPoint;
  }
 else {
    return p;
  }
}
