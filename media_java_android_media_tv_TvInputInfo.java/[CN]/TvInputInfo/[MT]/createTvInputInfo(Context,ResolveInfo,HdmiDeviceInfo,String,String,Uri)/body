{
  boolean isConnectedToHdmiSwitch=(deviceInfo.getPhysicalAddress() & 0x0FFF) != 0;
  return createTvInputInfo(context,service,generateInputIdForHdmiDevice(new ComponentName(service.serviceInfo.packageName,service.serviceInfo.name),deviceInfo),parentId,TYPE_HDMI,label,iconUri,isConnectedToHdmiSwitch);
}
