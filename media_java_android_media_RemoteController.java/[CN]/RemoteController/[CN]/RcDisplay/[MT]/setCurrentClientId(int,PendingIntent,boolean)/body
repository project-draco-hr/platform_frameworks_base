{
  final RemoteController rc=mController.get();
  if (rc == null) {
    return;
  }
  boolean isNew=false;
synchronized (mGenLock) {
    if (rc.mClientGenerationIdCurrent != genId) {
      rc.mClientGenerationIdCurrent=genId;
      isNew=true;
    }
  }
  if (clientMediaIntent != null) {
    sendMsg(rc.mEventHandler,MSG_NEW_PENDING_INTENT,SENDMSG_REPLACE,genId,0,clientMediaIntent,0);
  }
  if (isNew || clearing) {
    sendMsg(rc.mEventHandler,MSG_CLIENT_CHANGE,SENDMSG_REPLACE,genId,clearing ? 1 : 0,null,0);
  }
}
