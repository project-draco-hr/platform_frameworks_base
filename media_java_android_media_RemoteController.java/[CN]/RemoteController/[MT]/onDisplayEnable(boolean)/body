{
  final OnClientUpdateListener l;
synchronized (mInfoLock) {
    mEnabled=enabled;
    l=this.mOnClientUpdateListener;
  }
  if (!enabled) {
    final int genId;
synchronized (mGenLock) {
      genId=mClientGenerationIdCurrent;
    }
    final PlaybackInfo pi=new PlaybackInfo(RemoteControlClient.PLAYSTATE_STOPPED,SystemClock.elapsedRealtime(),0,0.0f);
    sendMsg(mEventHandler,MSG_NEW_PLAYBACK_INFO,SENDMSG_REPLACE,genId,0,pi,0);
    sendMsg(mEventHandler,MSG_NEW_TRANSPORT_INFO,SENDMSG_REPLACE,genId,0,null,0);
    Bundle metadata=new Bundle(3);
    metadata.putString(String.valueOf(MediaMetadataRetriever.METADATA_KEY_TITLE),"");
    metadata.putString(String.valueOf(MediaMetadataRetriever.METADATA_KEY_ARTIST),"");
    metadata.putLong(String.valueOf(MediaMetadataRetriever.METADATA_KEY_DURATION),0);
    sendMsg(mEventHandler,MSG_NEW_METADATA,SENDMSG_QUEUE,genId,0,metadata,0);
  }
}
