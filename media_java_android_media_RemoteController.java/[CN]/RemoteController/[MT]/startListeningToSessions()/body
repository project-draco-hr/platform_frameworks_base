{
  final ComponentName listenerComponent=new ComponentName(mContext,mOnClientUpdateListener.getClass());
  mSessionManager.addActiveSessionsListener(mSessionListener,listenerComponent,ActivityManager.getCurrentUser());
  mSessionListener.onActiveSessionsChanged(mSessionManager.getActiveSessions(listenerComponent));
  if (DEBUG) {
    Log.d(TAG,"Registered session listener with component " + listenerComponent + " for user "+ ActivityManager.getCurrentUser());
  }
}
