{
  SurfaceView surfaceView=mSurfaceView.get();
  if (surfaceView != null) {
    if (DEBUG)     Log.v("SurfaceView",surfaceView + " got resized: w=" + frame.width()+ " h="+ frame.height()+ ", cur w="+ mCurWidth+ " h="+ mCurHeight);
    surfaceView.mSurfaceLock.lock();
    try {
      if (reportDraw) {
        surfaceView.mUpdateWindowNeeded=true;
        surfaceView.mReportDrawNeeded=true;
        surfaceView.mHandler.sendEmptyMessage(UPDATE_WINDOW_MSG);
      }
 else       if (surfaceView.mWinFrame.width() != frame.width() || surfaceView.mWinFrame.height() != frame.height() || forceLayout) {
        surfaceView.mUpdateWindowNeeded=true;
        surfaceView.mHandler.sendEmptyMessage(UPDATE_WINDOW_MSG);
      }
    }
  finally {
      surfaceView.mSurfaceLock.unlock();
    }
  }
}
