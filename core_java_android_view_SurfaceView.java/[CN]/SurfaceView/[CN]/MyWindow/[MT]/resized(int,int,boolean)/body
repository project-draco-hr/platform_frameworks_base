{
  if (localLOGV)   Log.v("SurfaceView",SurfaceView.this + " got resized: w=" + w+ " h="+ h+ ", cur w="+ mCurWidth+ " h="+ mCurHeight);
synchronized (this) {
    if (mCurWidth != w || mCurHeight != h) {
      mCurWidth=w;
      mCurHeight=h;
    }
    if (reportDraw) {
      try {
        mSession.finishDrawing(mWindow);
      }
 catch (      RemoteException e) {
      }
    }
  }
}
