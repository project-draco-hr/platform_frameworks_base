{
  if (mContext.checkCallingOrSelfPermission("android.permission.MASTER_CLEAR") != PackageManager.PERMISSION_GRANTED) {
    Log.e(TAG,"Permission Denial: can't invoke masterClearAndToggleEFS from " + "pid=" + Binder.getCallingPid() + ", "+ "uid="+ Binder.getCallingUid());
    return;
  }
  try {
    RecoverySystem.rebootAndToggleEFS(efsEnabled);
  }
 catch (  IOException e) {
    Log.e(TAG,"Reboot for toggle EFS failed",e);
  }
}
