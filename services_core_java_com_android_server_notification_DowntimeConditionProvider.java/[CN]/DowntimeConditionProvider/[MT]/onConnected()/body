{
  if (DEBUG)   Slog.d(TAG,"onConnected");
  mConnected=true;
  mLookaheadThreshold=PropConfig.getInt(mContext,"downtime.condition.lookahead",R.integer.config_downtime_condition_lookahead_threshold_hrs) * HOURS;
  final IntentFilter filter=new IntentFilter();
  filter.addAction(ENTER_ACTION);
  filter.addAction(EXIT_ACTION);
  filter.addAction(Intent.ACTION_TIME_CHANGED);
  filter.addAction(Intent.ACTION_TIMEZONE_CHANGED);
  mContext.registerReceiver(mReceiver,filter);
  mTracker.addCallback(mTrackerCallback);
  mZenModeHelper.addCallback(mZenCallback);
  init();
}
