{
  if (Objects.equals(mConfig,config))   return;
  final boolean downtimeChanged=mConfig == null || config == null || !mConfig.toDowntimeInfo().equals(config.toDowntimeInfo());
  mConfig=config;
  if (DEBUG)   Slog.d(TAG,"setConfig downtimeChanged=" + downtimeChanged);
  if (mConnected && downtimeChanged) {
    mDowntimed=false;
    init();
  }
  if (mConfig != null && mConfig.exitCondition != null && ZenModeConfig.isValidDowntimeConditionId(mConfig.exitCondition.id)) {
    mDowntimed=true;
  }
}
