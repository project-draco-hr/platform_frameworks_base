{
  if (mIsWimaxEnabled) {
    if (mWimaxConnected) {
      int inetCondition=inetConditionForNetwork(ConnectivityManager.TYPE_WIMAX);
      if (mWimaxIdle)       mWimaxIconId=WimaxIcons.WIMAX_IDLE;
 else       mWimaxIconId=WimaxIcons.WIMAX_SIGNAL_STRENGTH[inetCondition][mWimaxSignal];
      mContentDescriptionWimax=mContext.getString(AccessibilityContentDescriptions.WIMAX_CONNECTION_STRENGTH[mWimaxSignal]);
    }
 else {
      mWimaxIconId=WimaxIcons.WIMAX_DISCONNECTED;
      mContentDescriptionWimax=mContext.getString(R.string.accessibility_no_wimax);
    }
  }
 else {
    mWimaxIconId=0;
  }
}
