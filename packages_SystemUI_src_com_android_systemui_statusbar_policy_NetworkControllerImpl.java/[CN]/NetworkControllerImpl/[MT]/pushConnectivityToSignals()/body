{
  for (  MobileSignalController mobileSignalController : mMobileSignalControllers.values()) {
    mobileSignalController.setInetCondition(mInetCondition ? 1 : 0,mValidatedTransports.get(mobileSignalController.getTransportType()) ? 1 : 0);
  }
  mWifiSignalController.setInetCondition(mValidatedTransports.get(mWifiSignalController.getTransportType()) ? 1 : 0);
  mEthernetSignalController.setConnected(mConnectedTransports.get(mEthernetSignalController.getTransportType()));
  mEthernetSignalController.setInetCondition(mValidatedTransports.get(mEthernetSignalController.getTransportType()) ? 1 : 0);
}
