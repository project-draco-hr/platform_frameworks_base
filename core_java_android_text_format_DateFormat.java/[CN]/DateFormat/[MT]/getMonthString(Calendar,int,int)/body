{
  boolean standalone=(kind == STANDALONE_MONTH);
  int month=inDate.get(Calendar.MONTH);
  if (count >= 4) {
    return standalone ? DateUtils.getStandaloneMonthString(month,DateUtils.LENGTH_LONG) : DateUtils.getMonthString(month,DateUtils.LENGTH_LONG);
  }
 else   if (count == 3) {
    return standalone ? DateUtils.getStandaloneMonthString(month,DateUtils.LENGTH_MEDIUM) : DateUtils.getMonthString(month,DateUtils.LENGTH_MEDIUM);
  }
 else {
    return zeroPad(month + 1,count);
  }
}
