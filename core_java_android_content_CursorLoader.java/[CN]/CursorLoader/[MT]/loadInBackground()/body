{
synchronized (this) {
    if (isLoadInBackgroundCanceled()) {
      throw new OperationCanceledException();
    }
    mCancelationSignal=new CancelationSignal();
  }
  try {
    Cursor cursor=getContext().getContentResolver().query(mUri,mProjection,mSelection,mSelectionArgs,mSortOrder,mCancelationSignal);
    if (cursor != null) {
      cursor.getCount();
      registerContentObserver(cursor,mObserver);
    }
    return cursor;
  }
  finally {
synchronized (this) {
      mCancelationSignal=null;
    }
  }
}
