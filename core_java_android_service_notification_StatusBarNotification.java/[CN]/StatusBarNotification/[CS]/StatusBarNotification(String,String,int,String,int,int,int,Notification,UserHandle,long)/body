{
  if (pkg == null)   throw new NullPointerException();
  if (notification == null)   throw new NullPointerException();
  this.pkg=pkg;
  this.opPkg=opPkg;
  this.id=id;
  this.tag=tag;
  this.uid=uid;
  this.initialPid=initialPid;
  this.notification=notification;
  this.user=user;
  this.postTime=postTime;
  this.key=key();
  this.groupKey=groupKey();
}
