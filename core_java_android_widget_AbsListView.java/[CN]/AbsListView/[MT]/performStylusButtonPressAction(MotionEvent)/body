{
  if (ev.getToolType(0) == MotionEvent.TOOL_TYPE_STYLUS && ev.isButtonPressed(MotionEvent.BUTTON_SECONDARY) && mChoiceMode == CHOICE_MODE_MULTIPLE_MODAL && mChoiceActionMode == null) {
    final View child=getChildAt(mMotionPosition - mFirstPosition);
    if (child != null) {
      final int longPressPosition=mMotionPosition;
      final long longPressId=mAdapter.getItemId(mMotionPosition);
      if (performLongPress(child,longPressPosition,longPressId)) {
        mTouchMode=TOUCH_MODE_REST;
        setPressed(false);
        child.setPressed(false);
        return true;
      }
    }
  }
  return false;
}
