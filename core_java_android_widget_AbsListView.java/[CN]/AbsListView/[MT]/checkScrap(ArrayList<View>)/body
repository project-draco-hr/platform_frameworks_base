{
  if (scrap == null)   return true;
  boolean result=true;
  final int count=scrap.size();
  for (int i=0; i < count; i++) {
    final View view=scrap.get(i);
    if (view.getParent() != null) {
      result=false;
      Log.d(ViewDebug.CONSISTENCY_LOG_TAG,"AbsListView " + this + " has a view in its scrap heap still attached to a parent: "+ view);
    }
    if (indexOfChild(view) >= 0) {
      result=false;
      Log.d(ViewDebug.CONSISTENCY_LOG_TAG,"AbsListView " + this + " has a view in its scrap heap that is also a direct child: "+ view);
    }
  }
  return result;
}
