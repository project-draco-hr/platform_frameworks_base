{
  final int firstRowPosition=getFirstPositionForRow(row);
  final int lastRowPosition=getFirstPositionForRow(row + 1);
  int maxHeight=0;
  for (int i=firstRowPosition; i < lastRowPosition; i++) {
    final int height=getHeightForPosition(i);
    if (height > maxHeight) {
      maxHeight=height;
    }
  }
  return maxHeight;
}
