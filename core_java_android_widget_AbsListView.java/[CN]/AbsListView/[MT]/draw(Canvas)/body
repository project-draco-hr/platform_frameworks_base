{
  super.draw(canvas);
  if (mFastScroller != null) {
    final int scrollY=mScrollY;
    if (scrollY != 0) {
      int restoreCount=canvas.save();
      canvas.translate(0,(float)scrollY);
      mFastScroller.draw(canvas);
      canvas.restoreToCount(restoreCount);
    }
 else {
      mFastScroller.draw(canvas);
    }
  }
}
