{
  final int childCount=getChildCount();
  if (childCount > 0) {
    mDataChanged=true;
    rememberSyncState();
    for (int i=0; i < childCount; i++) {
      final View child=getChildAt(i);
      final ViewGroup.LayoutParams lp=child.getLayoutParams();
      if (lp == null || lp.width < 1 || lp.height < 1) {
        child.forceLayout();
      }
    }
  }
}
