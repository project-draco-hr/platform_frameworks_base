{
  if (isInTouchMode) {
    hideSelector();
    if (getHeight() > 0 && getChildCount() > 0) {
      mLayoutMode=LAYOUT_NORMAL;
      layoutChildren();
    }
  }
 else {
    int touchMode=mTouchMode;
    if (touchMode == TOUCH_MODE_OVERSCROLL || touchMode == TOUCH_MODE_OVERFLING) {
      mScrollY=0;
      if (mFlingRunnable != null) {
        mFlingRunnable.endFling();
      }
    }
  }
}
