{
  boolean wait=false;
  boolean persistent=false;
  String opt;
  while ((opt=nextOption()) != null) {
    if (opt.equals("-w")) {
      wait=true;
    }
 else     if (opt.equals("--persistent")) {
      persistent=true;
    }
 else {
      System.err.println("Error: Unknown option: " + opt);
      showUsage();
      return;
    }
  }
  String pkg=nextArgRequired();
  mAm.setDebugApp(pkg,wait,persistent);
}
