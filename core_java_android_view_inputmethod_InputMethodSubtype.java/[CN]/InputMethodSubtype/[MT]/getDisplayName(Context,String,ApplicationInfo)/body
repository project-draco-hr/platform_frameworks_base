{
  final String locale=context.getResources().getConfiguration().locale.getDisplayName();
  if (mSubtypeNameResId == 0) {
    return locale;
  }
  final String subtypeName=context.getPackageManager().getText(packageName,mSubtypeNameResId,appInfo).toString();
  if (!TextUtils.isEmpty(subtypeName)) {
    return String.format(subtypeName,locale);
  }
 else {
    return locale;
  }
}
