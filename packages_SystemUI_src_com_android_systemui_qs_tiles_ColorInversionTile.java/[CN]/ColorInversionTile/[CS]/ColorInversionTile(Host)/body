{
  super(host);
  mSetting=new SecureSetting(mContext,mHandler,Secure.ACCESSIBILITY_DISPLAY_INVERSION_ENABLED){
    @Override protected void handleValueChanged(    int value){
      handleRefreshState(value);
      mUsageTracker.trackUsage();
    }
  }
;
  mUsageTracker=new UsageTracker(host.getContext(),ColorInversionTile.class);
  mUsageTracker.setListening(true);
}
