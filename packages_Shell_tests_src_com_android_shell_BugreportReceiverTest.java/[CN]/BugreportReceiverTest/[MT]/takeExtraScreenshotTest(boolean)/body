{
  resetProperties();
  sendBugreportStarted(1000);
  waitForScreenshotButtonEnabled(true);
  takeScreenshot();
  assertScreenshotButtonEnabled(false);
  waitForScreenshotButtonEnabled(true);
  sendBugreportFinished(ID,mPlainTextPath,mScreenshotPath);
  if (serviceDies) {
    waitShareNotification(ID);
    killService();
  }
  Bundle extras=acceptBugreportAndGetSharedIntent(ID);
  assertActionSendMultiple(extras,BUGREPORT_CONTENT,SCREENSHOT_CONTENT,ID,PID,ZIP_FILE,NAME,NO_TITLE,NO_DESCRIPTION,2,RENAMED_SCREENSHOTS);
  assertServiceNotRunning();
}
