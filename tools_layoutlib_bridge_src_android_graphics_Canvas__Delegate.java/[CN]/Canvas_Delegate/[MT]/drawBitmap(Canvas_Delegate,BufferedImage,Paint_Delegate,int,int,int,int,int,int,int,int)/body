{
  Graphics2D g=canvasDelegate.getGraphics2d();
  Composite c=null;
  if (paintDelegate != null) {
    if (paintDelegate.isFilterBitmap()) {
      g=(Graphics2D)g.create();
      g.setRenderingHint(RenderingHints.KEY_INTERPOLATION,RenderingHints.VALUE_INTERPOLATION_BILINEAR);
    }
    if (paintDelegate.getAlpha() != 0xFF) {
      c=g.getComposite();
      g.setComposite(AlphaComposite.getInstance(AlphaComposite.SRC_OVER,paintDelegate.getAlpha() / 255.f));
    }
  }
  g.drawImage(image,dleft,dtop,dright,dbottom,sleft,stop,sright,sbottom,null);
  if (paintDelegate != null) {
    if (paintDelegate.isFilterBitmap()) {
      g.dispose();
    }
    if (c != null) {
      g.setComposite(c);
    }
  }
}
