{
  if (v == mBackSpaceButton) {
    final Editable digits=mPinText.getText();
    final int len=digits.length();
    if (len > 0) {
      digits.delete(len - 1,len);
      mEnteredDigits--;
    }
    mCallback.pokeWakelock();
  }
 else   if (v == mEmergencyCallButton) {
    mCallback.takeEmergencyCallAction();
  }
 else   if (v == mOkButton) {
    checkPin();
  }
}
