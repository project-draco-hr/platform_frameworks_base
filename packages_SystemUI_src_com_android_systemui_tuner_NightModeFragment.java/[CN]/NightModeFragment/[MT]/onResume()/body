{
  super.onResume();
  mNightModeController.addListener(this);
  TunerService.get(getContext()).addTunable(this,Secure.BRIGHTNESS_USE_TWILIGHT,NightModeController.NIGHT_MODE_ADJUST_TINT);
  mDarkTheme.setChecked(mUiModeManager.getNightMode() == UiModeManager.MODE_NIGHT_AUTO);
  calculateDisabled();
}
