{
  Context context=getContext();
  IntentFilter filter=new IntentFilter();
  filter.addAction(Intent.ACTION_TIME_TICK);
  filter.addAction(Intent.ACTION_TIME_CHANGED);
  filter.addAction(Intent.ACTION_CONFIGURATION_CHANGED);
  filter.addAction(Intent.ACTION_TIMEZONE_CHANGED);
  context.registerReceiverAsUser(mBroadcastReceiver,android.os.Process.myUserHandle(),filter,null,null);
  Uri uri=Settings.System.getUriFor(Settings.System.DATE_FORMAT);
  context.getContentResolver().registerContentObserver(uri,true,mContentObserver,UserHandle.myUserId());
}
