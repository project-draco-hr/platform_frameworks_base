{
  boolean moved=false;
  if (direction == FOCUS_UP) {
    mLayoutMode=LAYOUT_SET_SELECTION;
    setSelectionInt(0);
    invokeOnItemScrollListener();
    moved=true;
  }
 else   if (direction == FOCUS_DOWN) {
    mLayoutMode=LAYOUT_SET_SELECTION;
    setSelectionInt(mItemCount - 1);
    invokeOnItemScrollListener();
    moved=true;
  }
  return moved;
}
