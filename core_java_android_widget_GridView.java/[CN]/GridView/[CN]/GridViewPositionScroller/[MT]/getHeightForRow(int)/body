{
  final int firstRowPosition=row * mNumColumns;
  final int lastRowPosition=Math.min(getCount(),firstRowPosition + mNumColumns);
  int maxHeight=0;
  for (int i=firstRowPosition; i < lastRowPosition; i++) {
    final int height=getHeightForPosition(i);
    if (height > maxHeight) {
      maxHeight=height;
    }
  }
  return maxHeight;
}
