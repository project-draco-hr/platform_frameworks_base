{
  state.value=arg instanceof Boolean ? (Boolean)arg : mDataSaverController.isDataSaverEnabled();
  state.label=mContext.getString(R.string.data_saver);
  state.contentDescription=state.label;
  state.icon=ResourceIcon.get(state.value ? R.drawable.ic_data_saver : R.drawable.ic_data_saver_off);
  state.minimalAccessibilityClassName=state.expandedAccessibilityClassName=Switch.class.getName();
}
