{
  view.animate().cancel();
  if (view.getVisibility() == View.INVISIBLE) {
    view.setAlpha(0.0f);
    view.setVisibility(View.VISIBLE);
  }
  view.animate().alpha(1f).setDuration(ANIMATION_DURATION_LENGTH).setInterpolator(PhoneStatusBar.ALPHA_IN);
  if (view.hasOverlappingRendering()) {
    view.animate().withLayer();
  }
}
