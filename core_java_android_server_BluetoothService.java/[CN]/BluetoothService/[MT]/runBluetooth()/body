{
  mIsDiscovering=false;
  mBondState.readAutoPairingData();
  mBondState.initBondState();
  initProfileState();
  autoConnect();
  long ident=Binder.clearCallingIdentity();
  try {
    mBatteryStats.noteBluetoothOn();
  }
 catch (  RemoteException e) {
    Log.e(TAG,"",e);
  }
 finally {
    Binder.restoreCallingIdentity(ident);
  }
}
