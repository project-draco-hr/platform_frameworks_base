{
  String airplaneModeRadios=Settings.System.getString(mContext.getContentResolver(),Settings.System.AIRPLANE_MODE_RADIOS);
  mIsAirplaneSensitive=airplaneModeRadios == null ? true : airplaneModeRadios.contains(Settings.System.RADIO_BLUETOOTH);
  if (mIsAirplaneSensitive) {
    filter.addAction(Intent.ACTION_AIRPLANE_MODE_CHANGED);
  }
}
