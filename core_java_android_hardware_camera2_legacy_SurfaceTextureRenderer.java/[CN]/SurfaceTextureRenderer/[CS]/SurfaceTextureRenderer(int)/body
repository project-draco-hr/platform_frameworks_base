{
  if (facing == CameraCharacteristics.LENS_FACING_BACK) {
    mTriangleVertices=ByteBuffer.allocateDirect(sBackCameraTriangleVertices.length * FLOAT_SIZE_BYTES).order(ByteOrder.nativeOrder()).asFloatBuffer();
    mTriangleVertices.put(sBackCameraTriangleVertices).position(0);
  }
 else {
    mTriangleVertices=ByteBuffer.allocateDirect(sFrontCameraTriangleVertices.length * FLOAT_SIZE_BYTES).order(ByteOrder.nativeOrder()).asFloatBuffer();
    mTriangleVertices.put(sFrontCameraTriangleVertices).position(0);
  }
  Matrix.setIdentityM(mSTMatrix,0);
}
