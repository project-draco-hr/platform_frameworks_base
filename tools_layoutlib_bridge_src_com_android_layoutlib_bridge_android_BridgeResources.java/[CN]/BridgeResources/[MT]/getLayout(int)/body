{
  ResourceValue value=getResourceValue(id,mPlatformResourceFlag);
  if (value != null) {
    XmlPullParser parser=null;
    try {
      if (mPlatformResourceFlag[0] == false) {
        parser=mProjectCallback.getParser(value);
      }
      if (parser == null) {
        File xml=new File(value.getValue());
        if (xml.isFile()) {
          parser=new KXmlParser();
          parser.setFeature(XmlPullParser.FEATURE_PROCESS_NAMESPACES,true);
          parser.setInput(new FileInputStream(xml),"UTF-8");
        }
      }
      if (parser != null) {
        return new BridgeXmlBlockParser(parser,mContext,mPlatformResourceFlag[0]);
      }
    }
 catch (    XmlPullParserException e) {
      Bridge.getLog().error(LayoutLog.TAG_BROKEN,"Failed to configure parser for " + value.getValue(),e,null);
    }
catch (    FileNotFoundException e) {
    }
  }
  throwException(id);
  return null;
}
