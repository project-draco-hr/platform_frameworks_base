{
  String[] resourceInfo=Bridge.resolveResourceValue(id);
  if (resourceInfo == null && mProjectCallback != null) {
    resourceInfo=mProjectCallback.resolveResourceValue(id);
  }
  String message=null;
  if (resourceInfo != null) {
    message=String.format("Could not find %1$s resource matching value 0x%2$X (resolved name: %3$s) in current configuration.",resourceInfo[1],id,resourceInfo[0]);
  }
 else {
    message=String.format("Could not resolve resource value: 0x%1$X.",id);
  }
  throw new NotFoundException(message);
}
