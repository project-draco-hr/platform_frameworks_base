{
  try {
    try {
      openInner();
    }
 catch (    SQLiteDatabaseCorruptException ex) {
      onCorruption();
      openInner();
    }
    setJournalMode("TRUNCATE");
  }
 catch (  SQLiteException ex) {
    Log.e(TAG,"Failed to open database '" + getLabel() + "'.",ex);
    close();
    throw ex;
  }
}
