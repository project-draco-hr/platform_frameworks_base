{
  if (isInMemoryDatabase() || isReadOnly()) {
    return;
  }
  String s=DatabaseUtils.stringForQuery(this,"PRAGMA journal_mode=" + mode,null);
  if (!s.equalsIgnoreCase(mode)) {
    Log.e(TAG,"setting journal_mode to " + mode + " failed for db: "+ getLabel()+ " (on pragma set journal_mode, sqlite returned:"+ s);
  }
}
