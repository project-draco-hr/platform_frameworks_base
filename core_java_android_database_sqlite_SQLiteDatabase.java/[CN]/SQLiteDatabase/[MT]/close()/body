{
  if (!isOpen()) {
    return;
  }
  if (SQLiteDebug.DEBUG_SQL_STATEMENTS) {
    Log.i(TAG,"closing db: " + mPath + " (connection # "+ mConnectionNum);
  }
  lock();
  try {
    closeClosable();
    closePendingStatements();
    releaseCustomFunctions();
    dbclose();
    if (mConnectionPool != null) {
      mConnectionPool.close();
    }
  }
  finally {
    unlock();
  }
}
