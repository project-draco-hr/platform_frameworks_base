{
  if (!isOpen()) {
    return null;
  }
  ArrayList<Pair<String,String>> attachedDbs=new ArrayList<Pair<String,String>>();
  Cursor c=null;
  try {
    c=rawQuery("pragma database_list;",null);
    while (c.moveToNext()) {
      attachedDbs.add(new Pair<String,String>(c.getString(1),c.getString(2)));
    }
  }
  finally {
    if (c != null) {
      c.close();
    }
  }
  return attachedDbs;
}
