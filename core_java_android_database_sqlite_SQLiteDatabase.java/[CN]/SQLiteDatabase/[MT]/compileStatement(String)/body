{
  verifyDbIsOpen();
  String prefixSql=sql.trim().substring(0,6);
  SQLiteDatabase db=this;
  if (prefixSql.equalsIgnoreCase("SELECT")) {
    db=getDbConnection(sql);
  }
  db.lock();
  try {
    return new SQLiteStatement(db,sql);
  }
  finally {
    releaseDbConnection(db);
    db.unlock();
  }
}
