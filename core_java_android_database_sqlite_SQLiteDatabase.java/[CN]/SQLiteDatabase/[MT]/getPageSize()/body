{
  if (!isOpen()) {
    throw new IllegalStateException("database not open");
  }
  SQLiteStatement prog=null;
  lock();
  try {
    prog=new SQLiteStatement(this,"PRAGMA page_size;");
    long size=prog.simpleQueryForLong();
    return size;
  }
  finally {
    if (prog != null)     prog.close();
    unlock();
  }
}
