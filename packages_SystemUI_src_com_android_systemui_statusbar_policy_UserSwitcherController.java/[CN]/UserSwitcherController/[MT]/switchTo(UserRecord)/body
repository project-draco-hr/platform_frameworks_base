{
  int id;
  if (record.isGuest && record.info == null) {
    id=mUserManager.createGuest(mContext,mContext.getResources().getString(R.string.guest_nickname)).id;
  }
 else {
    id=record.info.id;
  }
  if (ActivityManager.getCurrentUser() == id) {
    if (record.isGuest) {
      exitGuest(id);
    }
    return;
  }
  switchToUserId(id);
}
