{
  final int num=minutes < 60 ? minutes : Math.round(minutes / 60f);
  final int resId=minutes < 60 ? com.android.internal.R.plurals.zen_mode_duration_minutes : com.android.internal.R.plurals.zen_mode_duration_hours;
  final String caption=Resources.getSystem().getQuantityString(resId,num,num);
  final Uri id=toCountdownConditionId(time);
  return new Condition(id,caption,"","",0,Condition.STATE_TRUE,Condition.FLAG_RELEVANT_NOW);
}
