{
  return new Uri.Builder().scheme(Condition.SCHEME).authority(SYSTEM_AUTHORITY).appendPath(DOWNTIME_PATH).appendQueryParameter("start",downtime.startHour + "." + downtime.startMinute).appendQueryParameter("end",downtime.endHour + "." + downtime.endMinute).appendQueryParameter("mode",downtime.mode).appendQueryParameter("none",Boolean.toString(downtime.none)).build();
}
