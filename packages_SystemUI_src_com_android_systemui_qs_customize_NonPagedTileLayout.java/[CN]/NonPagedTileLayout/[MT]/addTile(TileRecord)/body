{
  mTiles.add(record);
  distributeTiles();
  if (record.tile.getTileType() == QSTileView.QS_TYPE_QUICK || record.tileView.getTag() == record.tile) {
    return;
  }
  record.tileView.setTag(record.tile);
  record.tileView.setVisibility(View.VISIBLE);
  record.tileView.init(null,null,null);
  record.tileView.setOnTouchListener(this);
  if (mCurrentClip != null && mCurrentClip.getItemAt(0).getText().toString().equals(record.tile.getTileSpec())) {
    record.tileView.setAlpha(.3f);
    mCurrentView=record.tileView;
  }
}
