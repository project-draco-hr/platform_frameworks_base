{
  mContext=context;
  mName=name;
  mWidth=width;
  mHeight=height;
  mDensityDpi=densityDpi;
  mGravity=gravity;
  mSecure=secure;
  mListener=listener;
  mTitle=context.getResources().getString(com.android.internal.R.string.display_manager_overlay_display_title,mName,mWidth,mHeight,mDensityDpi);
  if (secure) {
    mTitle+=context.getResources().getString(com.android.internal.R.string.display_manager_overlay_display_secure_suffix);
  }
  mDisplayManager=(DisplayManager)context.getSystemService(Context.DISPLAY_SERVICE);
  mWindowManager=(WindowManager)context.getSystemService(Context.WINDOW_SERVICE);
  mDefaultDisplay=mWindowManager.getDefaultDisplay();
  updateDefaultDisplayInfo();
  createWindow();
}
