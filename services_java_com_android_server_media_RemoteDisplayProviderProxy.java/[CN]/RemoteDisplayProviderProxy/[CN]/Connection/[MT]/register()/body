{
  try {
    mProvider.asBinder().linkToDeath(this,0);
    mProvider.setCallback(mCallback);
    mHandler.post(new Runnable(){
      @Override public void run(){
        onConnectionReady(Connection.this);
      }
    }
);
    return true;
  }
 catch (  RemoteException ex) {
    binderDied();
  }
  return false;
}
