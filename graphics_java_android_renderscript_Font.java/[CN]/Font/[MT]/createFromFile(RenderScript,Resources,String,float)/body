{
  rs.validate();
  try {
    int dpi=res.getDisplayMetrics().densityDpi;
    int fontId=rs.nFontCreateFromFile(path,pointSize,dpi);
    if (fontId == 0) {
      throw new IllegalStateException("Failed loading a font");
    }
    Font rsFont=new Font(fontId,rs);
    return rsFont;
  }
 catch (  Exception e) {
  }
  return null;
}
