{
  final byte[] hash=passwordToHash(password);
  try {
    RandomAccessFile raf=new RandomAccessFile(sLockPasswordFilename,"rw");
    if (password == null) {
      raf.setLength(0);
    }
 else {
      raf.write(hash,0,hash.length);
    }
    raf.close();
    DevicePolicyManager dpm=getDevicePolicyManager();
    if (password != null) {
      setLong(PASSWORD_TYPE_KEY,mode);
      int quality=computePasswordQuality(password);
      if (quality != DevicePolicyManager.PASSWORD_QUALITY_UNSPECIFIED) {
        dpm.setActivePasswordState(quality,password.length());
      }
 else {
        dpm.setActivePasswordState(DevicePolicyManager.PASSWORD_QUALITY_UNSPECIFIED,0);
      }
    }
 else {
      dpm.setActivePasswordState(DevicePolicyManager.PASSWORD_QUALITY_UNSPECIFIED,0);
    }
  }
 catch (  FileNotFoundException fnfe) {
    Log.e(TAG,"Unable to save lock pattern to " + sLockPasswordFilename);
  }
catch (  IOException ioe) {
    Log.e(TAG,"Unable to save lock pattern to " + sLockPasswordFilename);
  }
}
