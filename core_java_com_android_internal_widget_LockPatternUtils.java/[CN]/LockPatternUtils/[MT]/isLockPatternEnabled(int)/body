{
  final boolean backupEnabled=getLong(PASSWORD_TYPE_ALTERNATE_KEY,DevicePolicyManager.PASSWORD_QUALITY_UNSPECIFIED,userId) == DevicePolicyManager.PASSWORD_QUALITY_SOMETHING;
  return getBoolean(Settings.Secure.LOCK_PATTERN_ENABLED,false,userId) && (getLong(PASSWORD_TYPE_KEY,DevicePolicyManager.PASSWORD_QUALITY_UNSPECIFIED,userId) == DevicePolicyManager.PASSWORD_QUALITY_SOMETHING || (usingBiometricWeak(userId) && backupEnabled));
}
