{
  final byte[] hash=LockPatternUtils.patternToHash(pattern);
  try {
    RandomAccessFile raf=new RandomAccessFile(sLockPatternFilename,"rw");
    if (pattern == null) {
      raf.setLength(0);
    }
 else {
      raf.write(hash,0,hash.length);
    }
    raf.close();
    DevicePolicyManager dpm=getDevicePolicyManager();
    if (pattern != null) {
      setBoolean(PATTERN_EVER_CHOSEN_KEY,true);
      setLong(PASSWORD_TYPE_KEY,DevicePolicyManager.PASSWORD_QUALITY_SOMETHING);
      dpm.setActivePasswordState(DevicePolicyManager.PASSWORD_QUALITY_SOMETHING,pattern.size());
    }
 else {
      dpm.setActivePasswordState(DevicePolicyManager.PASSWORD_QUALITY_UNSPECIFIED,0);
    }
  }
 catch (  FileNotFoundException fnfe) {
    Log.e(TAG,"Unable to save lock pattern to " + sLockPatternFilename);
  }
catch (  IOException ioe) {
    Log.e(TAG,"Unable to save lock pattern to " + sLockPatternFilename);
  }
}
