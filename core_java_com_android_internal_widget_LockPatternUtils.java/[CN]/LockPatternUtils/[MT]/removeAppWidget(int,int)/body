{
  int[] widgets=getAppWidgets();
  int[] newWidgets=new int[widgets.length - 1];
  for (int i=0, j=0; i < widgets.length; i++) {
    if (index == i) {
      if (widgets[i] != widgetId) {
        return false;
      }
    }
 else {
      newWidgets[j]=widgets[i];
      j++;
    }
  }
  writeAppWidgets(newWidgets);
  return true;
}
