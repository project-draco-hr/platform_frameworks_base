{
  if (mSingletonByName.containsKey(name)) {
    if (DBG)     Slog.i(TAG,"Removing from globalByName name=" + name);
    mSingletonByName.remove(name);
  }
 else {
    if (DBG)     Slog.i(TAG,"Removing from providersByName name=" + name + " user="+ (optionalUserId == -1 ? Binder.getOrigCallingUser() : optionalUserId));
    HashMap<String,ContentProviderRecord> map=getProvidersByName(optionalUserId);
    map.remove(name);
    if (map.size() == 0) {
      mProvidersByNamePerUser.remove(optionalUserId);
    }
  }
}
