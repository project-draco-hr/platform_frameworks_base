{
synchronized (sPackageRemovedSync) {
    if (sPackageRemovedReceiver == null) {
      sPackageRemovedReceiver=new PackageRemovedReceiver();
      IntentFilter filter=new IntentFilter(Intent.ACTION_PACKAGE_REMOVED);
      filter.addDataScheme("package");
      mContext.registerReceiverInternal(sPackageRemovedReceiver,filter,null,null,null);
      IntentFilter sdFilter=new IntentFilter();
      sdFilter.addAction(Intent.ACTION_EXTERNAL_APPLICATIONS_UNAVAILABLE);
      mContext.registerReceiverInternal(sPackageRemovedReceiver,sdFilter,null,null,null);
    }
  }
}
