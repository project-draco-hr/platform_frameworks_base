{
synchronized (mSync) {
    if (mFilesDir == null) {
      mFilesDir=new File(getDataDirFile(),"files");
    }
    if (!mFilesDir.exists()) {
      if (!mFilesDir.mkdirs()) {
        if (mFilesDir.exists()) {
          return mFilesDir;
        }
        Log.w(TAG,"Unable to create files directory " + mFilesDir.getPath());
        return null;
      }
      FileUtils.setPermissions(mFilesDir.getPath(),FileUtils.S_IRWXU | FileUtils.S_IRWXG | FileUtils.S_IXOTH,-1,-1);
    }
    return mFilesDir;
  }
}
