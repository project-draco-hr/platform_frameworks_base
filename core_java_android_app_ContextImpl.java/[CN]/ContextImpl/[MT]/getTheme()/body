{
  if (mTheme == null) {
    if (mThemeResource == 0) {
      final Context outerContext=getOuterContext();
      mThemeResource=(outerContext.getApplicationInfo().targetSdkVersion >= Build.VERSION_CODES.HONEYCOMB) ? com.android.internal.R.style.Theme_Holo : com.android.internal.R.style.Theme;
    }
    mTheme=mResources.newTheme();
    mTheme.applyStyle(mThemeResource,true);
  }
  return mTheme;
}
