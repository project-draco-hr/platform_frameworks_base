{
synchronized (sSync) {
    if (sNfcManager == null) {
      IBinder b=ServiceManager.getService(NFC_SERVICE);
      if (b == null) {
        return null;
      }
      INfcManager service=INfcManager.Stub.asInterface(b);
      sNfcManager=new NfcManager(service,mMainThread.getHandler());
    }
  }
  return sNfcManager;
}
