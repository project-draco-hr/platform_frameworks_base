{
  final Iterator<Transition> it=mTransitions.iterator();
  while (it.hasNext()) {
    Transition t=it.next();
    if (t.getAfterMediaItem() == mediaItem || t.getBeforeMediaItem() == mediaItem) {
      it.remove();
      t.invalidate();
      mediaItem.setBeginTransition(null);
      mediaItem.setEndTransition(null);
      break;
    }
  }
}
