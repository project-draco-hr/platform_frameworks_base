{
  mIsScrolling=autoScrolling;
  mCallback=callback;
  mIsTesting=false;
  mContentInvalMillis=System.currentTimeMillis();
  registerPageSwapCallback();
  contentInvalidateAll();
  invalidate();
  mTestCount++;
  final int testCount=mTestCount;
  if (autoScrolling) {
    new CountDownTimer(LOAD_STALL_MILLIS,LOAD_STALL_MILLIS){
      @Override public void onTick(      long millisUntilFinished){
      }
      @Override public void onFinish(){
        if (testCount == mTestCount && !mIsTesting) {
          mHadToBeForced=true;
          Log.d("ProfiledWebView","num " + testCount + " forcing a page swap with a scroll...");
          scrollBy(0,1);
          invalidate();
        }
      }
    }
.start();
  }
}
