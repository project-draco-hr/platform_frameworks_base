{
  if (text == null) {
    throw new NullPointerException("text is null");
  }
  if (paint == null) {
    throw new NullPointerException("paint is null");
  }
  if ((start | end | end - start | text.length() - end) < 0) {
    throw new IndexOutOfBoundsException();
  }
  int flags=dir == 0 ? 0 : 1;
  if (text instanceof String || text instanceof SpannedString || text instanceof SpannableString) {
    native_drawTextRun(mNativeCanvas,text.toString(),start,end,x,y,flags,paint.mNativePaint);
  }
 else   if (text instanceof GraphicsOperations) {
    ((GraphicsOperations)text).drawTextRun(this,start,end,x,y,flags,paint);
  }
 else {
    char[] buf=TemporaryBuffer.obtain(end - start);
    TextUtils.getChars(text,start,end,buf,0);
    native_drawTextRun(mNativeCanvas,buf,0,end - start,x,y,flags,paint.mNativePaint);
    TemporaryBuffer.recycle(buf);
  }
}
