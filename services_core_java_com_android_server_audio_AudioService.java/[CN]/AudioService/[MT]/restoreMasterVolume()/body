{
  if (mUseFixedVolume) {
    AudioSystem.setMasterVolume(1.0f);
    return;
  }
  if (mUseMasterVolume) {
    float volume=Settings.System.getFloatForUser(mContentResolver,Settings.System.VOLUME_MASTER,-1.0f,UserHandle.USER_CURRENT);
    if (volume >= 0.0f) {
      AudioSystem.setMasterVolume(volume);
    }
  }
}
