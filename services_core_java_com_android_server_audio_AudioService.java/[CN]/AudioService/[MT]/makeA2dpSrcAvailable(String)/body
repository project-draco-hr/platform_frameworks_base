{
  AudioSystem.setDeviceConnectionState(AudioSystem.DEVICE_IN_BLUETOOTH_A2DP,AudioSystem.DEVICE_STATE_AVAILABLE,address,DEVICE_NAME_A2DP);
  mConnectedDevices.put(makeDeviceListKey(AudioSystem.DEVICE_IN_BLUETOOTH_A2DP,address),new DeviceListSpec(AudioSystem.DEVICE_IN_BLUETOOTH_A2DP,DEVICE_NAME_A2DP,address));
}
