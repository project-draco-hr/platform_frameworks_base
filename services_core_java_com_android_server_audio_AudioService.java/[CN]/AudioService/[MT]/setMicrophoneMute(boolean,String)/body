{
  if (mAppOps.noteOp(AppOpsManager.OP_MUTE_MICROPHONE,Binder.getCallingUid(),callingPackage) != AppOpsManager.MODE_ALLOWED) {
    return;
  }
  if (!checkAudioSettingsPermission("setMicrophoneMute()")) {
    return;
  }
  AudioSystem.muteMicrophone(on);
  sendMsg(mAudioHandler,MSG_PERSIST_MICROPHONE_MUTE,SENDMSG_REPLACE,on ? 1 : 0,UserHandle.getCallingUserId(),null,PERSIST_DELAY);
}
