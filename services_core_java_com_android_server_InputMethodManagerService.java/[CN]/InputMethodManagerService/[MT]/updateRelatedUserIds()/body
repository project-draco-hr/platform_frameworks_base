{
  List<UserInfo> relatedUsers=UserManager.get(mContext).getRelatedUsers(mSettings.getCurrentUserId());
  int[] relatedUserIds=new int[relatedUsers.size()];
  for (int i=0; i < relatedUserIds.length; i++) {
    relatedUserIds[i]=relatedUsers.get(i).id;
  }
  mSettings.setRelatedUserIds(relatedUserIds);
}
