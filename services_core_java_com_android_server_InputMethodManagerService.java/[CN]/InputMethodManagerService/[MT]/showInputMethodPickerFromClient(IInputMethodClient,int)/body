{
  if (!calledFromValidUser()) {
    return;
  }
synchronized (mMethodMap) {
    if (mCurClient == null || client == null || mCurClient.client.asBinder() != client.asBinder()) {
      Slog.w(TAG,"Ignoring showInputMethodPickerFromClient of uid " + Binder.getCallingUid() + ": "+ client);
    }
    mHandler.sendMessage(mCaller.obtainMessageI(MSG_SHOW_IM_SUBTYPE_PICKER,auxiliarySubtypeMode));
  }
}
