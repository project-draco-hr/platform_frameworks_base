{
  if (!calledFromValidUser()) {
    return false;
  }
synchronized (mMethodMap) {
    if (!calledWithValidToken(token)) {
      final int uid=Binder.getCallingUid();
      Slog.e(TAG,"Ignoring shouldOfferSwitchingToNextInputMethod due to an invalid " + "token. uid:" + uid + " token:"+ token);
      return false;
    }
    final ImeSubtypeListItem nextSubtype=mSwitchingController.getNextInputMethodLocked(false,mMethodMap.get(mCurMethodId),mCurrentSubtype,true);
    if (nextSubtype == null) {
      return false;
    }
    return true;
  }
}
