{
  if (mCurMethod != null) {
    for (    ClientState cs : mClients.values()) {
      clearClientSessionLocked(cs);
    }
    finishSessionLocked(mEnabledSession);
    mEnabledSession=null;
    mCurMethod=null;
  }
  if (mStatusBar != null) {
    mStatusBar.setIconVisibility(mSlotIme,false);
  }
}
