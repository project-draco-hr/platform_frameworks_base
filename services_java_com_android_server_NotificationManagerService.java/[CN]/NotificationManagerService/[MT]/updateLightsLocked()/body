{
  if (mBatteryLow) {
    if (mBatteryCharging) {
      mLightsService.setLightColor(LightsService.LIGHT_ID_BATTERY,BATTERY_LOW_ARGB);
    }
 else {
      mLightsService.setLightFlashing(LightsService.LIGHT_ID_BATTERY,BATTERY_LOW_ARGB,LightsService.LIGHT_FLASH_TIMED,BATTERY_BLINK_ON,BATTERY_BLINK_OFF);
    }
  }
 else   if (mBatteryCharging) {
    if (mBatteryFull) {
      mLightsService.setLightColor(LightsService.LIGHT_ID_BATTERY,BATTERY_FULL_ARGB);
    }
 else {
      mLightsService.setLightColor(LightsService.LIGHT_ID_BATTERY,BATTERY_MEDIUM_ARGB);
    }
  }
 else {
    mLightsService.setLightOff(LightsService.LIGHT_ID_BATTERY);
  }
  if (mLedNotification == null) {
    int n=mLights.size();
    if (n > 0) {
      mLedNotification=mLights.get(n - 1);
    }
  }
  if (mLedNotification == null) {
    mLightsService.setLightOff(LightsService.LIGHT_ID_NOTIFICATIONS);
  }
 else {
    mLightsService.setLightFlashing(LightsService.LIGHT_ID_NOTIFICATIONS,mLedNotification.notification.ledARGB,LightsService.LIGHT_FLASH_TIMED,mLedNotification.notification.ledOnMS,mLedNotification.notification.ledOffMS);
  }
}
