{
  if (mBatteryLow) {
    if (mBatteryCharging) {
      mBatteryLight.setColor(BATTERY_LOW_ARGB);
    }
 else {
      mBatteryLight.setFlashing(BATTERY_LOW_ARGB,LightsService.LIGHT_FLASH_TIMED,BATTERY_BLINK_ON,BATTERY_BLINK_OFF);
    }
  }
 else   if (mBatteryCharging) {
    if (mBatteryFull) {
      mBatteryLight.setColor(BATTERY_FULL_ARGB);
    }
 else {
      mBatteryLight.setColor(BATTERY_MEDIUM_ARGB);
    }
  }
 else {
    mBatteryLight.turnOff();
  }
  if (mLedNotification == null) {
    int n=mLights.size();
    if (n > 0) {
      mLedNotification=mLights.get(n - 1);
    }
  }
  if (mLedNotification == null) {
    mNotificationLight.turnOff();
  }
 else {
    mNotificationLight.setFlashing(mLedNotification.notification.ledARGB,LightsService.LIGHT_FLASH_TIMED,mLedNotification.notification.ledOnMS,mLedNotification.notification.ledOffMS);
  }
}
