{
  ArrayList<NotificationRecord> list=mNotificationList;
  final int len=list.size();
  for (int i=0; i < len; i++) {
    NotificationRecord r=list.get(i);
    if (r.userId != userId || r.id != id) {
      continue;
    }
    if (tag == null) {
      if (r.tag != null) {
        continue;
      }
    }
 else {
      if (!tag.equals(r.tag)) {
        continue;
      }
    }
    if (r.pkg.equals(pkg)) {
      return i;
    }
  }
  return -1;
}
