{
synchronized (this) {
    applyRequestHeadersToConnection();
    inBlockingOperation=true;
  }
  boolean success;
  try {
    if (logEnabled)     log("Connecting to remote");
    connection.connect();
    if (logEnabled)     log("Connected");
    success=true;
  }
 catch (  IOException e) {
    log("Got IOException in connect(): " + e.toString());
    success=false;
  }
 finally {
synchronized (this) {
      inBlockingOperation=false;
    }
  }
  return success;
}
