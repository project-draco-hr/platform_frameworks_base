{
  if (add) {
    Uri uri=Uri.parse(AUTHORITY_PLUS_MESSAGES + account + "/"+ messageId+ "/labels");
    ContentValues values=new ContentValues();
    values.put(LabelColumns.CANONICAL_NAME,label);
    contentResolver.insert(uri,values);
  }
 else {
    String encodedLabel;
    try {
      encodedLabel=URLEncoder.encode(label,"utf-8");
    }
 catch (    UnsupportedEncodingException e) {
      throw new RuntimeException(e);
    }
    Uri uri=Uri.parse(AUTHORITY_PLUS_MESSAGES + account + "/"+ messageId+ "/labels/"+ encodedLabel);
    contentResolver.delete(uri,null,null);
  }
}
