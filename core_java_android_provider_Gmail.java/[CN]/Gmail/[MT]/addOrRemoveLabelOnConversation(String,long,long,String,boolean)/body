{
  if (TextUtils.isEmpty(account)) {
    throw new IllegalArgumentException("account is empty");
  }
  if (add) {
    Uri uri=Uri.parse(AUTHORITY_PLUS_CONVERSATIONS + account + "/"+ conversationId+ "/labels");
    ContentValues values=new ContentValues();
    values.put(LabelColumns.CANONICAL_NAME,label);
    values.put(ConversationColumns.MAX_MESSAGE_ID,maxServerMessageId);
    mContentResolver.insert(uri,values);
  }
 else {
    String encodedLabel;
    try {
      encodedLabel=URLEncoder.encode(label,"utf-8");
    }
 catch (    UnsupportedEncodingException e) {
      throw new RuntimeException(e);
    }
    Uri uri=Uri.parse(AUTHORITY_PLUS_CONVERSATIONS + account + "/"+ conversationId+ "/labels/"+ encodedLabel);
    mContentResolver.delete(uri,ConversationColumns.MAX_MESSAGE_ID,new String[]{"" + maxServerMessageId});
  }
}
