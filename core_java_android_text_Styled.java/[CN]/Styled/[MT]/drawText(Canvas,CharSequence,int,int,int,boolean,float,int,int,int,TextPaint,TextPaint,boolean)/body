{
  if ((dir == Layout.DIR_RIGHT_TO_LEFT && !runIsRtl) || (runIsRtl && dir == Layout.DIR_LEFT_TO_RIGHT)) {
    float ch=drawDirectionalRun(null,text,start,end,Layout.DIR_LEFT_TO_RIGHT,false,0,0,0,0,null,paint,workPaint,true);
    ch*=dir;
    drawDirectionalRun(canvas,text,start,end,-dir,runIsRtl,x + ch,top,y,bottom,null,paint,workPaint,true);
    return ch;
  }
  return drawDirectionalRun(canvas,text,start,end,dir,runIsRtl,x,top,y,bottom,null,paint,workPaint,needWidth);
}
