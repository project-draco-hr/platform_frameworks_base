{
synchronized (mLock) {
    if (listener != null) {
      Looper looper;
      if ((looper=Looper.myLooper()) != null) {
        mEventHandler=new EventHandler(mProxy,looper);
      }
 else       if ((looper=Looper.getMainLooper()) != null) {
        mEventHandler=new EventHandler(mProxy,looper);
      }
 else {
        mEventHandler=null;
      }
    }
 else {
      mEventHandler=null;
    }
    mOnLoadCompleteListener=listener;
  }
}
