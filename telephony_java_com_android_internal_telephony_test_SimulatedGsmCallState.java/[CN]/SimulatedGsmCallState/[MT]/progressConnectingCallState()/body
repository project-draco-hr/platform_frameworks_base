{
synchronized (this) {
    for (int i=0; i < calls.length; i++) {
      CallInfo call=calls[i];
      if (call != null && call.state == CallInfo.State.DIALING) {
        call.state=CallInfo.State.ALERTING;
        if (autoProgressConnecting) {
          sendMessageDelayed(obtainMessage(EVENT_PROGRESS_CALL_STATE,call),CONNECTING_PAUSE_MSEC);
        }
        break;
      }
 else       if (call != null && call.state == CallInfo.State.ALERTING) {
        call.state=CallInfo.State.ACTIVE;
        break;
      }
    }
  }
}
