{
  super(new DummyWriter(),autoFlush);
  if (wr == null) {
    throw new NullPointerException("wr is null");
  }
  mBufferLen=bufferLen;
  mText=new char[bufferLen];
  mBytes=null;
  mOutputStream=null;
  mWriter=wr;
  mPrinter=null;
  mAutoFlush=autoFlush;
  mSeparator=System.lineSeparator();
  initDefaultEncoder();
}
