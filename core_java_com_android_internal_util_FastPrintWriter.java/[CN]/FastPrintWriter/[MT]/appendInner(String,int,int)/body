{
  if (length > BUFFER_LEN) {
    final int end=i + length;
    while (i < end) {
      int next=i + BUFFER_LEN;
      appendInner(str,i,next < end ? BUFFER_LEN : (end - i));
      i=next;
    }
    return;
  }
  int pos=mPos;
  if ((pos + length) > BUFFER_LEN) {
    flush();
    pos=mPos;
  }
  str.getChars(i,i + length,mText,pos);
  mPos=pos + length;
}
