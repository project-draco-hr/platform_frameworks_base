{
  buffer.put(new byte[]{0x05,0x0d,0x09,0x04,(byte)0xa1,0x01,(byte)0x85,(byte)mReportId,0x09,0x22,(byte)0xa1,0x00,0x09,0x55,0x15,0x00,0x25,(byte)mMaxContacts,0x75,0x08,(byte)0x95,0x01,(byte)0xb1,(byte)mMaxContacts,0x09,0x54,(byte)0x81,0x02});
