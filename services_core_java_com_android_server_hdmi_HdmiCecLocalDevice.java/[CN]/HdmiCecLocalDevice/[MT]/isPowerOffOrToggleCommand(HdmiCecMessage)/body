{
  byte[] params=message.getParams();
  return message.getOpcode() == HdmiCec.MESSAGE_USER_CONTROL_PRESSED && params.length == 1 && (params[0] == HdmiConstants.UI_COMMAND_POWER || params[0] == HdmiConstants.UI_COMMAND_POWER_OFF_FUNCTION || params[0] == HdmiConstants.UI_COMMAND_POWER_TOGGLE_FUNCTION);
}
