{
  final ViewHolder holder;
  if (convertView == null) {
    convertView=LayoutInflater.from(UsageStatsActivity.this).inflate(R.layout.row_item,parent,false);
    holder=new ViewHolder();
    holder.packageName=(TextView)convertView.findViewById(android.R.id.text1);
    holder.usageTime=(TextView)convertView.findViewById(android.R.id.text2);
    convertView.setTag(holder);
  }
 else {
    holder=(ViewHolder)convertView.getTag();
  }
  holder.packageName.setText(mStats.get(position).getPackageName());
  holder.usageTime.setText(DateUtils.formatDuration(mStats.get(position).getTotalTimeInForeground()));
  return convertView;
}
