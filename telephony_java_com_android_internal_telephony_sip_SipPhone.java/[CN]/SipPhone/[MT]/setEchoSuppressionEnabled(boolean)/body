{
synchronized (SipPhone.class) {
    AudioGroup audioGroup=foregroundCall.getAudioGroup();
    if (audioGroup == null)     return;
    int mode=audioGroup.getMode();
    audioGroup.setMode(enabled ? AudioGroup.MODE_ECHO_SUPPRESSION : AudioGroup.MODE_NORMAL);
    Log.d(LOG_TAG,String.format("audioGroup mode change: %d --> %d",mode,audioGroup.getMode()));
  }
}
