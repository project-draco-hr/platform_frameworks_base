{
  if (mPlugged) {
    if (mDockState == Intent.EXTRA_DOCK_STATE_CAR && mCarDockKeepsScreenOn) {
      if (!mDockWakeLock.isHeld()) {
        mDockWakeLock.acquire();
      }
      return;
    }
 else     if (mDockState == Intent.EXTRA_DOCK_STATE_DESK && mDeskDockKeepsScreenOn) {
      if (!mDockWakeLock.isHeld()) {
        mDockWakeLock.acquire();
      }
      return;
    }
  }
  if (mDockWakeLock.isHeld()) {
    mDockWakeLock.release();
  }
}
