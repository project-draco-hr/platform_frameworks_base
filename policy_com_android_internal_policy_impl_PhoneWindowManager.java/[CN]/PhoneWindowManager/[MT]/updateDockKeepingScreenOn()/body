{
  if (mPlugged != 0) {
    if (localLOGV)     Log.v(TAG,"Update: mUiMode=" + mUiMode + " mPlugged="+ mPlugged+ " mCarDockKeepsScreenOn"+ mCarDockKeepsScreenOn+ " mDeskDockKeepsScreenOn"+ mDeskDockKeepsScreenOn);
    if (mUiMode == Configuration.UI_MODE_TYPE_CAR && (mPlugged & mCarDockKeepsScreenOn) != 0) {
      if (!mDockWakeLock.isHeld()) {
        mDockWakeLock.acquire();
      }
      return;
    }
 else     if (mUiMode == Configuration.UI_MODE_TYPE_DESK && (mPlugged & mDeskDockKeepsScreenOn) != 0) {
      if (!mDockWakeLock.isHeld()) {
        mDockWakeLock.acquire();
      }
      return;
    }
  }
  if (mDockWakeLock.isHeld()) {
    mDockWakeLock.release();
  }
}
