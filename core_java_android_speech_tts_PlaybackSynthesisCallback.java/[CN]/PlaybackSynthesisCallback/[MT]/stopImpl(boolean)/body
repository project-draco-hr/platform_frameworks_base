{
  if (DBG)   Log.d(TAG,"stop()");
  mLogger.onStopped();
  SynthesisPlaybackQueueItem item;
synchronized (mStateLock) {
    if (mStopped) {
      Log.w(TAG,"stop() called twice");
      return;
    }
    item=mItem;
    mStopped=true;
  }
  if (item != null) {
    item.stop(wasError);
  }
 else {
    mLogger.onWriteData();
    if (wasError) {
      mDispatcher.dispatchOnError();
    }
  }
}
