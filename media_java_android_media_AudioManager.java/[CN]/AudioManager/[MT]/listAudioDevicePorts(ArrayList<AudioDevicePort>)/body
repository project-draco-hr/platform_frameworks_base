{
  ArrayList<AudioPort> ports=new ArrayList<AudioPort>();
  int status=updateAudioPortCache(ports,null);
  if (status == SUCCESS) {
    devices.clear();
    for (int i=0; i < ports.size(); i++) {
      if (ports.get(i) instanceof AudioDevicePort) {
        devices.add((AudioDevicePort)ports.get(i));
      }
    }
  }
  return status;
}
