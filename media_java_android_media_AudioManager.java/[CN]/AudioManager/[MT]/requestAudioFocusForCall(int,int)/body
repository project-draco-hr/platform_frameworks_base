{
  IAudioService service=getService();
  try {
    service.requestAudioFocus(new AudioAttributes.Builder().setInternalLegacyStreamType(streamType).build(),durationHint,mICallBack,null,MediaFocusControl.IN_VOICE_COMM_FOCUS_ID,mContext.getOpPackageName(),0);
  }
 catch (  RemoteException e) {
    Log.e(TAG,"Can't call requestAudioFocusForCall() on AudioService due to " + e);
  }
}
