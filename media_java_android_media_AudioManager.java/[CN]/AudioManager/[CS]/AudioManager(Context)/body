{
  mApplicationContext=context.getApplicationContext();
  mUseMasterVolume=mApplicationContext.getResources().getBoolean(com.android.internal.R.bool.config_useMasterVolume);
  mUseVolumeKeySounds=mApplicationContext.getResources().getBoolean(com.android.internal.R.bool.config_useVolumeKeySounds);
