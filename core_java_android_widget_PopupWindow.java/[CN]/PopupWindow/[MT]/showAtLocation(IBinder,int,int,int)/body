{
  if (isShowing() || mContentView == null) {
    return;
  }
  TransitionManager.endTransitions(mDecorView);
  detachFromAnchor();
  mIsShowing=true;
  mIsDropdown=false;
  final WindowManager.LayoutParams p=createPopupLayoutParams(token);
  preparePopup(p);
  if (gravity != Gravity.NO_GRAVITY) {
    p.gravity=gravity;
  }
  p.x=x;
  p.y=y;
  invokePopup(p);
}
