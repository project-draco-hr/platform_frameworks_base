{
  if (isShowing() || mContentView == null) {
    return;
  }
  mIsShowing=true;
  WindowManager.LayoutParams p=createPopupLayout(anchor.getWindowToken());
  preparePopup(p);
  if (mBackground != null) {
    mPopupView.refreshDrawableState();
  }
  mAboveAnchor=findDropDownPosition(anchor,p,xoff,yoff);
  if (mAnimationStyle == -1) {
    p.windowAnimations=mAboveAnchor ? com.android.internal.R.style.Animation_DropDownUp : com.android.internal.R.style.Animation_DropDownDown;
  }
 else {
    p.windowAnimations=mAnimationStyle;
  }
  invokePopup(p);
}
