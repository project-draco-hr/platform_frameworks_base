{
  try {
    File externalDir=Environment.getExternalStorageDirectory();
    File resultsPassedFile=new File(externalDir,"layout_tests_passed.txt");
    File resultsFailedFile=new File(externalDir,"layout_tests_failed.txt");
    File resultsIgnoreResultFile=new File(externalDir,"layout_tests_ignored.txt");
    File noExpectedResultFile=new File(externalDir,"layout_tests_nontext.txt");
    mBufferedOutputPassedStream=new BufferedOutputStream(new FileOutputStream(resultsPassedFile,resume));
    mBufferedOutputFailedStream=new BufferedOutputStream(new FileOutputStream(resultsFailedFile,resume));
    mBufferedOutputIgnoreResultStream=new BufferedOutputStream(new FileOutputStream(resultsIgnoreResultFile,resume));
    mBufferedOutputNoResultStream=new BufferedOutputStream(new FileOutputStream(noExpectedResultFile,resume));
  }
 catch (  Exception e) {
    e.printStackTrace();
  }
}
