{
  x=pinLocX(x);
  y=pinLocY(y);
  int dx=x - getScrollX();
  int dy=y - getScrollY();
  if ((dx | dy) == 0) {
    return false;
  }
  abortAnimation();
  if (animate) {
    mScroller.startScroll(getScrollX(),getScrollY(),dx,dy,animationDuration > 0 ? animationDuration : computeDuration(dx,dy));
    awakenScrollBars(mScroller.getDuration());
    invalidate();
  }
 else {
    scrollTo(x,y);
  }
  return true;
}
