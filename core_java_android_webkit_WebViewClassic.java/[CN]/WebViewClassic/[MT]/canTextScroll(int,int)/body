{
  int scrollX=getTextScrollX();
  int scrollY=getTextScrollY();
  int maxScrollX=getMaxTextScrollX();
  int maxScrollY=getMaxTextScrollY();
  boolean canScrollX=(directionX > 0) ? (scrollX < maxScrollX) : (scrollX > 0);
  boolean canScrollY=(directionY > 0) ? (scrollY < maxScrollY) : (scrollY > 0);
  return canScrollX || canScrollY;
}
