{
  if (mSelectHandleCenter == null) {
    mSelectHandleCenter=mContext.getResources().getDrawable(com.android.internal.R.drawable.text_select_handle_middle).mutate();
    mSelectHandleLeft=mContext.getResources().getDrawable(com.android.internal.R.drawable.text_select_handle_left).mutate();
    mSelectHandleRight=mContext.getResources().getDrawable(com.android.internal.R.drawable.text_select_handle_right).mutate();
    mSelectOffset=new Point(0,-mSelectHandleLeft.getIntrinsicHeight());
  }
}
