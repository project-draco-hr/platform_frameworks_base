{
  if (mSelectHandleCenter == null) {
    mSelectHandleCenter=mContext.getResources().getDrawable(com.android.internal.R.drawable.text_select_handle_middle);
    mSelectHandleLeft=mContext.getResources().getDrawable(com.android.internal.R.drawable.text_select_handle_left);
    mSelectHandleRight=mContext.getResources().getDrawable(com.android.internal.R.drawable.text_select_handle_right);
    mHandleAlpha.setAlpha(mHandleAlpha.getAlpha());
    mSelectHandleCenterOffset=new Point(0,-mSelectHandleCenter.getIntrinsicHeight());
    mSelectHandleLeftOffset=new Point(0,-mSelectHandleLeft.getIntrinsicHeight());
    mSelectHandleRightOffset=new Point(-mSelectHandleLeft.getIntrinsicWidth() / 2,-mSelectHandleRight.getIntrinsicHeight());
  }
}
