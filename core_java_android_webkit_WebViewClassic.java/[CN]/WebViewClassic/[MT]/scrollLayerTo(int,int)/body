{
  int dx=mScrollingLayerRect.left - x;
  int dy=mScrollingLayerRect.top - y;
  if ((dx == 0 && dy == 0) || mNativeClass == 0) {
    return;
  }
  if (mSelectingText) {
    if (mSelectCursorLeftLayerId == mCurrentScrollingLayerId) {
      mSelectCursorLeft.offset(dx,dy);
      mSelectCursorLeftTextQuad.offset(dx,dy);
    }
    if (mSelectCursorRightLayerId == mCurrentScrollingLayerId) {
      mSelectCursorRight.offset(dx,dy);
      mSelectCursorRightTextQuad.offset(dx,dy);
    }
  }
 else   if (mHandleAlpha.getAlpha() > 0) {
    mHandleAlphaAnimator.end();
  }
  if (mAutoCompletePopup != null && mCurrentScrollingLayerId == mEditTextLayerId) {
    mEditTextContentBounds.offset(dx,dy);
    mAutoCompletePopup.resetRect();
  }
  nativeScrollLayer(mNativeClass,mCurrentScrollingLayerId,x,y);
  mScrollingLayerRect.left=x;
  mScrollingLayerRect.top=y;
  mWebViewCore.sendMessage(WebViewCore.EventHub.SCROLL_LAYER,mCurrentScrollingLayerId,mScrollingLayerRect);
  mWebViewPrivate.onScrollChanged(getScrollX(),getScrollY(),getScrollX(),getScrollY());
  invalidate();
}
