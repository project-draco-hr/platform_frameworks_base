{
  boolean canShowBase=mSelectingText;
  boolean canShowExtent=mSelectingText && !mIsCaretSelection;
  animateHandle(canShowBase,mBaseHandleAlphaAnimator,mSelectCursorBase,mSelectCursorBaseLayerId,mBaseAlpha);
  animateHandle(canShowExtent,mExtentHandleAlphaAnimator,mSelectCursorExtent,mSelectCursorExtentLayerId,mExtentAlpha);
}
