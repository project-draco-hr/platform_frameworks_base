{
  float maxScrollX=getMaxTextScrollX();
  float scrollPercentX=((float)scrollX) / maxScrollX;
  mEditTextContent.offsetTo(-scrollX,-scrollY);
  mWebViewCore.sendMessageAtFrontOfQueue(EventHub.SCROLL_TEXT_INPUT,0,scrollY,(Float)scrollPercentX);
  mPrivateHandler.sendEmptyMessageDelayed(ANIMATE_TEXT_SCROLL,TEXT_SCROLL_ANIMATION_DELAY_MS);
}
