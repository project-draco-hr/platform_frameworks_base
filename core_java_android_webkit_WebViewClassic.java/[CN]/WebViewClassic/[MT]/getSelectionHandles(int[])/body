{
  handles[0]=mSelectCursorBase.right;
  handles[1]=mSelectCursorBase.bottom - (mSelectCursorBase.height() / 4);
  handles[2]=mSelectCursorExtent.left;
  handles[3]=mSelectCursorExtent.bottom - (mSelectCursorExtent.height() / 4);
  if (!nativeIsBaseFirst(mNativeClass)) {
    int swap=handles[0];
    handles[0]=handles[2];
    handles[2]=swap;
    swap=handles[1];
    handles[1]=handles[3];
    handles[3]=swap;
  }
}
