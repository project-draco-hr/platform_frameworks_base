{
synchronized (mLock) {
    if (!mDrawScheduled) {
      mDrawScheduled=true;
      if (USE_ANIMATION_TIMER_FOR_DRAW) {
        scheduleAnimationLocked();
      }
 else {
        if (DEBUG) {
          Log.d(TAG,"Scheduling draw immediately.");
        }
        sendEmptyMessage(MSG_DO_DRAW);
      }
    }
  }
}
