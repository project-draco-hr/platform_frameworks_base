{
  if (!mDrawScheduled && (mOnDrawListeners != null || mOnDrawCallbacks != null)) {
    mDrawScheduled=true;
    if (USE_ANIMATION_TIMER_FOR_DRAW) {
      scheduleAnimationLocked(true);
    }
 else {
      if (DEBUG) {
        Log.d(TAG,"Scheduling draw immediately.");
      }
      mHandler.sendEmptyMessage(MSG_DO_DRAW);
    }
  }
}
