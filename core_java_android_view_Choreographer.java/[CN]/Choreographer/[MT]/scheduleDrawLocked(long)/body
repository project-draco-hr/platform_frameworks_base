{
  if (!mDrawScheduled) {
    mDrawScheduled=true;
    if (USE_ANIMATION_TIMER_FOR_DRAW) {
      scheduleAnimationLocked(now);
    }
 else {
      if (DEBUG) {
        Log.d(TAG,"Scheduling draw immediately.");
      }
      Message msg=mHandler.obtainMessage(MSG_DO_DRAW);
      msg.setAsynchronous(true);
      mHandler.sendMessageAtTime(msg,now);
    }
  }
}
