{
  checkPermissions();
  mContext=context;
  mMainLooper=mainLooper;
  IBinder b=ServiceManager.getService(ContextHubService.CONTEXTHUB_SERVICE);
  if (b != null) {
    mContextHubService=IContextHubService.Stub.asInterface(b);
