{
  mContext.enforceCallingOrSelfPermission(android.Manifest.permission.BIND_DEVICE_ADMIN,null);
synchronized (this) {
    if (mActivePasswordMode != mode || mActivePasswordLength != length || mFailedPasswordAttempts != 0) {
      long ident=Binder.clearCallingIdentity();
      try {
        mActivePasswordMode=mode;
        mActivePasswordLength=length;
        if (mFailedPasswordAttempts != 0) {
          mFailedPasswordAttempts=0;
          saveSettingsLocked();
        }
        sendAdminCommandLocked(DeviceAdmin.ACTION_PASSWORD_CHANGED,DeviceAdminInfo.USES_POLICY_LIMIT_PASSWORD);
      }
  finally {
        Binder.restoreCallingIdentity(ident);
      }
    }
  }
}
