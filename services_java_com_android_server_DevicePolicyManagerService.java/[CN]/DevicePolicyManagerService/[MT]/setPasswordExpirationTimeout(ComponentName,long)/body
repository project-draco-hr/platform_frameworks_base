{
synchronized (this) {
    if (who == null) {
      throw new NullPointerException("ComponentName is null");
    }
    if (timeout < 0) {
      throw new IllegalArgumentException("Timeout must be >= 0 ms");
    }
    ActiveAdmin ap=getActiveAdminForCallerLocked(who,DeviceAdminInfo.USES_POLICY_EXPIRE_PASSWORD);
    final long expiration=timeout > 0L ? (timeout + System.currentTimeMillis()) : 0L;
    ap.passwordExpirationDate=expiration;
    ap.passwordExpirationTimeout=timeout;
    if (timeout > 0L) {
      Slog.w(TAG,"setPasswordExpiration(): password will expire on " + DateFormat.getDateTimeInstance(DateFormat.DEFAULT,DateFormat.DEFAULT).format(new Date(expiration)));
    }
    saveSettingsLocked();
    setExpirationAlarmCheckLocked(mContext);
  }
}
