{
synchronized (this) {
    if (who != null) {
      ActiveAdmin ap=getActiveAdminForCallerLocked(who,DeviceAdminInfo.USES_ENCRYPTED_STORAGE);
      return ap.encryptionRequested;
    }
    final int N=mAdminList.size();
    for (int i=0; i < N; i++) {
      if (mAdminList.get(i).encryptionRequested) {
        return true;
      }
    }
    return false;
  }
}
