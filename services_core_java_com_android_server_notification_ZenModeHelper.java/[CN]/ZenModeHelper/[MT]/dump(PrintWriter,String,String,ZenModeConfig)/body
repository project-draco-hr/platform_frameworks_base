{
  pw.print(prefix);
  pw.print(var);
  pw.print('=');
  if (config == null) {
    pw.println(config);
    return;
  }
  pw.printf("allow(calls=%s,callsFrom=%s,repeatCallers=%s,messages=%s,messagesFrom=%s," + "events=%s,reminders=%s,lights=%s,peek=%s)\n",config.allowCalls,ZenModeConfig.sourceToString(config.allowCallsFrom),config.allowRepeatCallers,config.allowMessages,ZenModeConfig.sourceToString(config.allowMessagesFrom),config.allowEvents,config.allowReminders,config.allowLights,config.allowPeek);
  pw.print(prefix);
  pw.print("  manualRule=");
  pw.println(config.manualRule);
  if (config.automaticRules.isEmpty())   return;
  final int N=config.automaticRules.size();
  for (int i=0; i < N; i++) {
    pw.print(prefix);
    pw.print(i == 0 ? "  automaticRules=" : "                 ");
    pw.println(config.automaticRules.valueAt(i));
  }
}
