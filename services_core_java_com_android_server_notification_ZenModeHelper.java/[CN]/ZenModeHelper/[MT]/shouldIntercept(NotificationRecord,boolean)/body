{
  if (mZenMode != Global.ZEN_MODE_OFF) {
    if (previouslySeen && !record.isIntercepted()) {
      return false;
    }
    if (isSystem(record)) {
      return false;
    }
    if (isAlarm(record)) {
      return false;
    }
    if (!audienceMatches(record)) {
      return true;
    }
    if (isCall(record)) {
      return !mConfig.allowCalls;
    }
    if (isMessage(record)) {
      return !mConfig.allowMessages;
    }
    return true;
  }
  return false;
}
