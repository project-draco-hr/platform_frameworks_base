{
  if (runtime == defaultValue) {
    return "none";
  }
 else {
    long elapsedNow=SystemClock.elapsedRealtime();
    long nextRuntime=runtime - elapsedNow;
    if (nextRuntime > 0) {
      return DateUtils.formatElapsedTime(nextRuntime / 1000);
    }
 else {
      return "-" + DateUtils.formatElapsedTime(nextRuntime / -1000);
    }
  }
}
