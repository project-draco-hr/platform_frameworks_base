{
  enforceStatusBar();
  if (SPEW)   Slog.d(TAG,(visible ? "showing" : "hiding") + " IME Button");
synchronized (mLock) {
    mIMEButtonVisible=visible;
    mHandler.post(new Runnable(){
      public void run(){
        if (mBar != null) {
          try {
            mBar.setIMEButtonVisible(visible);
          }
 catch (          RemoteException ex) {
          }
        }
      }
    }
);
  }
}
