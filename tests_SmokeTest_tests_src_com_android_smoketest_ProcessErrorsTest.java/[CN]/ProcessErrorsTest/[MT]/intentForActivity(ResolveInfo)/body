{
  final ComponentName component=new ComponentName(app.activityInfo.packageName,app.activityInfo.name);
  if (getContext().getPackageManager().getComponentEnabledSetting(component) == PackageManager.COMPONENT_ENABLED_STATE_DISABLED) {
    return null;
  }
  final Intent intent=new Intent(Intent.ACTION_MAIN);
  intent.setComponent(component);
  intent.addFlags(Intent.FLAG_ACTIVITY_NEW_TASK);
  intent.addFlags(Intent.FLAG_ACTIVITY_RESET_TASK_IF_NEEDED);
  return intent;
}
