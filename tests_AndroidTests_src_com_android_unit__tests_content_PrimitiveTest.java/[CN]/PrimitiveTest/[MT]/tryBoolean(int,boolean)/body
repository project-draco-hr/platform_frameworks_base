{
  TypedValue v=new TypedValue();
  mContext.getResources().getValue(resid,v,true);
  assertEquals(TypedValue.TYPE_INT_BOOLEAN,v.type);
  assertEquals("Expecting boolean value " + expected + " got "+ v+ " from TypedValue: in resource 0x"+ Integer.toHexString(resid),expected,v.data != 0);
  assertEquals("Expecting boolean value " + expected + " got "+ v+ " from getBoolean(): in resource 0x"+ Integer.toHexString(resid),expected,mContext.getResources().getBoolean(resid));
}
