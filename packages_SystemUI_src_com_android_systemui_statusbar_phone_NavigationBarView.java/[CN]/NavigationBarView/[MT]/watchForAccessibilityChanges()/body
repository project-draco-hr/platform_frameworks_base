{
  final AccessibilityManager am=(AccessibilityManager)mContext.getSystemService(Context.ACCESSIBILITY_SERVICE);
  enableAccessibility(am.isTouchExplorationEnabled());
  am.addTouchExplorationStateChangeListener(new TouchExplorationStateChangeListener(){
    @Override public void onTouchExplorationStateChanged(    boolean enabled){
      enableAccessibility(enabled);
    }
  }
);
}
