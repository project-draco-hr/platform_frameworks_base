{
  super.setVisibility(visibility);
  boolean visible=visibility == View.VISIBLE;
  getBackButton().getBackground().setVisible(visible,false);
  getHomeButton().getBackground().setVisible(visible,false);
  getRecentsButton().getBackground().setVisible(visible,false);
  getMenuButton().getBackground().setVisible(visible,false);
  getImeSwitchButton().getBackground().setVisible(visible,false);
}
