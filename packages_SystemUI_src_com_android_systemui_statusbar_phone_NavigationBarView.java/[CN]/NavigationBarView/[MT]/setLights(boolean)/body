{
  float oldAlpha=mBackground.getAlpha();
  android.util.Log.d("NavigationBarView","animating alpha: " + oldAlpha + " -> "+ (on ? 1f : 0f));
  if (mLastAnimator != null && mLastAnimator.isRunning())   mLastAnimator.cancel();
  mLastAnimator=ObjectAnimator.ofFloat(mBackground,"alpha",oldAlpha,on ? 1f : 0f).setDuration(on ? 250 : 1500);
  mLastAnimator.addListener(new AnimatorListenerAdapter(){
    @Override public void onAnimationEnd(    Animator _a){
      mLastAnimator=null;
    }
  }
);
  mLastAnimator.start();
}
