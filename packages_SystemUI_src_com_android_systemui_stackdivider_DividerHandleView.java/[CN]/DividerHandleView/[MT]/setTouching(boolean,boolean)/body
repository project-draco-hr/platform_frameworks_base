{
  if (touching == mTouching) {
    return;
  }
  if (mAnimator != null) {
    mAnimator.cancel();
    mAnimator=null;
  }
  if (!animate) {
    if (touching) {
      mCurrentWidth=mCircleDiameter;
      mCurrentHeight=mCircleDiameter;
    }
 else {
      mCurrentWidth=mWidth;
      mCurrentHeight=mHeight;
    }
    invalidate();
  }
 else {
    animateToTarget(touching ? mCircleDiameter : mWidth,touching ? mCircleDiameter : mHeight,touching);
  }
  mTouching=touching;
}
