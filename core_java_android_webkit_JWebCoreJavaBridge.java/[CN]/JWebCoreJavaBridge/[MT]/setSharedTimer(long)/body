{
  if (Config.LOGV)   Log.v(LOGTAG,"setSharedTimer " + timemillis);
  if (timemillis <= 0) {
    if (mHasInstantTimer) {
      return;
    }
 else {
      mHasInstantTimer=true;
      Message msg=obtainMessage(TIMER_MESSAGE);
      sendMessageDelayed(msg,timemillis);
    }
  }
 else {
    Message msg=obtainMessage(TIMER_MESSAGE);
    sendMessageDelayed(msg,timemillis);
  }
}
