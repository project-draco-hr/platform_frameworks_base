{
  AutoCompleteTextViewSimple theActivity=getActivity();
  final AutoCompleteTextView textView=theActivity.getTextView();
  final Instrumentation instrumentation=getInstrumentation();
  textView.requestFocus();
  instrumentation.waitForIdleSync();
  sendKeys("A");
  assertEquals("getListSelection(-1)",ListView.INVALID_POSITION,textView.getListSelection());
  sendKeys("DPAD_DOWN");
  assertEquals("getListSelection(0)",0,textView.getListSelection());
  runTestOnUiThread(new Runnable(){
    public void run(){
      textView.clearListSelection();
    }
  }
);
  instrumentation.waitForIdleSync();
  assertEquals("setListSelection(ListView.INVALID_POSITION)",ListView.INVALID_POSITION,textView.getListSelection());
}
