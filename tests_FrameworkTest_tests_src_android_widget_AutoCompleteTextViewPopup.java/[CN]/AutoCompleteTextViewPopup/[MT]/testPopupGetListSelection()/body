{
  AutoCompleteTextViewSimple theActivity=getActivity();
  AutoCompleteTextView textView=theActivity.getTextView();
  final Instrumentation instrumentation=getInstrumentation();
  textView.requestFocus();
  instrumentation.waitForIdleSync();
  sendKeys("A");
  assertEquals("getListSelection(-1)",ListView.INVALID_POSITION,textView.getListSelection());
  sendKeys("DPAD_DOWN");
  assertEquals("move selection to (0)",0,textView.getListSelection());
  sendKeys("DPAD_DOWN");
  assertEquals("move selection to (1)",1,textView.getListSelection());
}
