{
  super();
  final Context context=getActivity();
  mInflater=LayoutInflater.from(context);
  final PackageManager pm=context.getPackageManager();
  final Intent intent=new Intent(MediaBrowserService.SERVICE_INTERFACE);
  final List<ResolveInfo> list=pm.queryIntentServices(intent,0);
  final int N=list.size();
  mItems=new ArrayList(N);
  for (int i=0; i < N; i++) {
    final ResolveInfo ri=list.get(i);
    mItems.add(new Item(ri.loadLabel(pm).toString(),new ComponentName(ri.serviceInfo.applicationInfo.packageName,ri.serviceInfo.name)));
  }
}
