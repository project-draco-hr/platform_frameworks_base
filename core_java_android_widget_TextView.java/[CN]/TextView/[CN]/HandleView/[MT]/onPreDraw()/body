{
  if (updateContainerPosition()) {
    if (isPositionVisible()) {
      mContainer.update(mContainerPositionX,mContainerPositionY,mRight - mLeft,mBottom - mTop);
      if (mIsActive && !isShowing()) {
        show();
      }
    }
 else {
      if (isShowing()) {
        dismiss();
      }
    }
    hideAssociatedPopupWindow();
  }
  return true;
}
