{
  if (TextView.this.mLayout == null)   return;
synchronized (sTempRect) {
    mPath.computeBounds(sTempRect,false);
    int left=getCompoundPaddingLeft();
    int top=getExtendedPaddingTop() + getVerticalOffset(true);
    if (delayed) {
      TextView.this.postInvalidateDelayed(16,left + (int)sTempRect.left,top + (int)sTempRect.top,left + (int)sTempRect.right,top + (int)sTempRect.bottom);
    }
 else {
      TextView.this.postInvalidate((int)sTempRect.left,(int)sTempRect.top,(int)sTempRect.right,(int)sTempRect.bottom);
    }
  }
}
