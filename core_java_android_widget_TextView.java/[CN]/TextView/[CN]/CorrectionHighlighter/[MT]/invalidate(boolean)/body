{
  if (TextView.this.mLayout == null)   return;
synchronized (TEMP_RECTF) {
    mPath.computeBounds(TEMP_RECTF,false);
    int left=getCompoundPaddingLeft();
    int top=getExtendedPaddingTop() + getVerticalOffset(true);
    if (delayed) {
      TextView.this.postInvalidateOnAnimation(left + (int)TEMP_RECTF.left,top + (int)TEMP_RECTF.top,left + (int)TEMP_RECTF.right,top + (int)TEMP_RECTF.bottom);
    }
 else {
      TextView.this.postInvalidate((int)TEMP_RECTF.left,(int)TEMP_RECTF.top,(int)TEMP_RECTF.right,(int)TEMP_RECTF.bottom);
    }
  }
}
