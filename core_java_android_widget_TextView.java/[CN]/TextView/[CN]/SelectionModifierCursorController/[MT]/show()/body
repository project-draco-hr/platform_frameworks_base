{
  if (isInBatchEditMode()) {
    return;
  }
  if (mStartHandle == null)   mStartHandle=new HandleView(this,HandleView.LEFT);
  if (mEndHandle == null)   mEndHandle=new HandleView(this,HandleView.RIGHT);
  mIsShowing=true;
  updatePosition();
  mStartHandle.show();
  mEndHandle.show();
  hideInsertionPointCursorController();
}
