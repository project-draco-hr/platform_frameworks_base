{
  final DisplayMetrics displayMetrics=mContext.getResources().getDisplayMetrics();
  mContentView.measure(View.MeasureSpec.makeMeasureSpec(displayMetrics.widthPixels,View.MeasureSpec.AT_MOST),View.MeasureSpec.makeMeasureSpec(displayMetrics.heightPixels,View.MeasureSpec.AT_MOST));
  TextView.this.getPositionListener().addSubscriber(this,false);
  computeLocalPosition();
  final PositionListener positionListener=TextView.this.getPositionListener();
  updatePosition(positionListener.getPositionX(),positionListener.getPositionY());
}
