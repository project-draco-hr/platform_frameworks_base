{
  error=TextUtils.stringOrSpannedString(error);
  mError=error;
  mErrorWasChanged=true;
  setCompoundDrawables(mDrawableLeft,mDrawableTop,icon,mDrawableBottom);
  if (error == null) {
    if (mPopup != null) {
      if (mPopup.isShowing()) {
        mPopup.dismiss();
      }
      mPopup=null;
    }
  }
 else {
    if (isFocused()) {
      showError();
    }
  }
}
