{
  invalidate();
  int curs=Selection.getSelectionStart(mText);
  if (curs >= 0 || (mGravity & Gravity.VERTICAL_GRAVITY_MASK) == Gravity.BOTTOM) {
    registerForPreDraw();
  }
  if (curs >= 0) {
    mHighlightPathBogus=true;
    if (isFocused()) {
      mShowCursor=SystemClock.uptimeMillis();
      makeBlink();
    }
  }
  checkForResize();
}
