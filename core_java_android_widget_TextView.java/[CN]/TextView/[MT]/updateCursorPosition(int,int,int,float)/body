{
  if (getEditor().mCursorDrawable[cursorIndex] == null)   getEditor().mCursorDrawable[cursorIndex]=mContext.getResources().getDrawable(mCursorDrawableRes);
  if (mTempRect == null)   mTempRect=new Rect();
  getEditor().mCursorDrawable[cursorIndex].getPadding(mTempRect);
  final int width=getEditor().mCursorDrawable[cursorIndex].getIntrinsicWidth();
  horizontal=Math.max(0.5f,horizontal - 0.5f);
  final int left=(int)(horizontal) - mTempRect.left;
  getEditor().mCursorDrawable[cursorIndex].setBounds(left,top - mTempRect.top,left + width,bottom + mTempRect.bottom);
}
