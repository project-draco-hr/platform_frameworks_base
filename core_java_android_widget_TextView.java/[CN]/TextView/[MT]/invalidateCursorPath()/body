{
  if (mHighlightPathBogus) {
    invalidateCursor();
  }
 else {
synchronized (sTempRect) {
      float thick=FloatMath.ceil(mTextPaint.getStrokeWidth());
      if (thick < 1.0f) {
        thick=1.0f;
      }
      thick/=2;
      mHighlightPath.computeBounds(sTempRect,false);
      int left=getCompoundPaddingLeft();
      int top=getExtendedPaddingTop() + getVerticalOffset(true);
      invalidate((int)FloatMath.floor(left + sTempRect.left - thick),(int)FloatMath.floor(top + sTempRect.top - thick),(int)FloatMath.ceil(left + sTempRect.right + thick),(int)FloatMath.ceil(top + sTempRect.bottom + thick));
    }
  }
}
