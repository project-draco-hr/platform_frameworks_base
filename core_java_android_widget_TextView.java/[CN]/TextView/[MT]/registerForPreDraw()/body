{
  final ViewTreeObserver observer=getViewTreeObserver();
  if (observer == null) {
    return;
  }
  if (mPreDrawState == PREDRAW_NOT_REGISTERED) {
    observer.addOnPreDrawListener(this);
    mPreDrawState=PREDRAW_PENDING;
  }
 else   if (mPreDrawState == PREDRAW_DONE) {
    mPreDrawState=PREDRAW_PENDING;
  }
}
