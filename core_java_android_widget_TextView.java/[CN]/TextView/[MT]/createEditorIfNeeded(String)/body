{
  if (mEditor == null) {
    if (!(this instanceof EditText)) {
      Log.e(LOG_TAG + " EDITOR","Creating Editor on TextView. " + reason);
    }
    mEditor=new Editor(this);
  }
 else {
    if (!(this instanceof EditText)) {
      Log.d(LOG_TAG + " EDITOR","Redundant Editor creation. " + reason);
    }
  }
}
