{
  int paddingTop=getExtendedPaddingTop();
  if ((mGravity & Gravity.VERTICAL_GRAVITY_MASK) != Gravity.TOP) {
    paddingTop+=getVerticalOffset(false);
  }
  r.top+=paddingTop;
  r.bottom+=paddingTop;
  int paddingLeft=getCompoundPaddingLeft();
  r.left+=paddingLeft;
  r.right+=paddingLeft;
  r.offset(-mScrollX,-mScrollY);
}
