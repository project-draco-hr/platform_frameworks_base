{
  if (enabled == isEnabled()) {
    return;
  }
  if (!enabled) {
    InputMethodManager imm=InputMethodManager.peekInstance();
    if (imm != null && imm.isActive(this)) {
      imm.hideSoftInputFromWindow(getWindowToken(),0);
    }
  }
  super.setEnabled(enabled);
  prepareCursorControllers();
}
