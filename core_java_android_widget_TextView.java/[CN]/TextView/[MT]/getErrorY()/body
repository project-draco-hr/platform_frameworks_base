{
  int vspace=mBottom - mTop - getCompoundPaddingBottom()- getCompoundPaddingTop();
  final Drawables dr=mDrawables;
  int icontop=getCompoundPaddingTop() + (vspace - (dr != null ? dr.mDrawableHeightRight : 0)) / 2;
  return icontop + (dr != null ? dr.mDrawableHeightRight : 0) - getHeight() - 2;
}
