{
  if (mSelectionModifierCursorController != null) {
    int lastTapPosition=((SelectionModifierCursorController)mSelectionModifierCursorController).getMinTouchOffset();
    if (lastTapPosition >= 0) {
      if (lastTapPosition > mText.length()) {
        Log.e(LOG_TAG,"Invalid tap focus position (" + lastTapPosition + " vs "+ mText.length()+ ")");
        lastTapPosition=mText.length();
      }
      return lastTapPosition;
    }
  }
  return -1;
}
