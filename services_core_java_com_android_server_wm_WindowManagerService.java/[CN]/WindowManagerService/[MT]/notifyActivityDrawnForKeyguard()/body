{
  if (DEBUG_KEYGUARD)   Slog.d(TAG,"notifyActivityDrawnForKeyguard: waiting=" + mKeyguardWaitingForActivityDrawn + " Callers="+ Debug.getCallers(5));
synchronized (mWindowMap) {
    if (mKeyguardWaitingForActivityDrawn) {
      mPolicy.notifyActivityDrawnForKeyguardLw();
      mKeyguardWaitingForActivityDrawn=false;
    }
  }
}
