{
  if (DEBUG_TASK_POSITIONING)   Slog.d(TAG_WM,"startScrollingTask: " + "{" + startX + ", "+ startY+ "}");
  Task task=null;
synchronized (mWindowMap) {
    int taskId=displayContent.taskIdFromPoint(startX,startY);
    if (taskId >= 0) {
      task=mTaskIdToTask.get(taskId);
    }
    if (task == null || !task.isDockedInEffect() || !startPositioningLocked(task.getTopVisibleAppMainWindow(),false,startX,startY)) {
      return;
    }
  }
  try {
    mActivityManager.setFocusedTask(task.mTaskId);
  }
 catch (  RemoteException e) {
  }
}
