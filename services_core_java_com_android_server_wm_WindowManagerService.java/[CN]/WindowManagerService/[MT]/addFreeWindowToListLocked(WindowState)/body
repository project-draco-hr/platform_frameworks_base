{
  final WindowList windows=win.getWindowList();
  final int myLayer=win.mBaseLayer;
  int i;
  for (i=windows.size() - 1; i >= 0; i--) {
    final WindowState otherWin=windows.get(i);
    if (otherWin.getBaseType() != TYPE_WALLPAPER && otherWin.mBaseLayer <= myLayer) {
      break;
    }
  }
  i++;
  if (DEBUG_FOCUS_LIGHT || DEBUG_WINDOW_MOVEMENT || DEBUG_ADD_REMOVE)   Slog.v(TAG,"Free window: Adding window " + win + " at "+ i+ " of "+ windows.size());
  windows.add(i,win);
  mWindowsChanged=true;
}
