{
  boolean force=false;
  if (w.mWillReplaceWindow) {
    force=true;
  }
  if (!force) {
    final TaskStack stack=w.getStack();
    if (stack != null && (StackId.shouldIncreaseApplicationWindowLayer(stack.mStackId))) {
      force=true;
    }
  }
  if (force) {
    w.mLayer+=TYPE_LAYER_OFFSET;
    winAnimator.mAnimLayer+=TYPE_LAYER_OFFSET;
  }
}
