{
synchronized (mWindowMap) {
    if (DEBUG_STACK)     Slog.i(TAG,"positionTaskInStack: positioning taskId=" + taskId + " in stackId="+ stackId+ " at "+ position);
    Task task=mTaskIdToTask.get(taskId);
    if (task == null) {
      if (DEBUG_STACK)       Slog.i(TAG,"positionTaskInStack: could not find taskId=" + taskId);
      return;
    }
    TaskStack stack=mStackIdToStack.get(stackId);
    if (stack == null) {
      if (DEBUG_STACK)       Slog.i(TAG,"positionTaskInStack: could not find stackId=" + stackId);
      return;
    }
    task.positionTaskInStack(stack,position);
    final DisplayContent displayContent=stack.getDisplayContent();
    displayContent.layoutNeeded=true;
    performLayoutAndPlaceSurfacesLocked();
  }
}
