{
  if (!checkCallingPermission(Manifest.permission.READ_FRAME_BUFFER,"requestAssistScreenshot()")) {
    throw new SecurityException("Requires READ_FRAME_BUFFER permission");
  }
  FgThread.getHandler().post(new Runnable(){
    @Override public void run(){
      Bitmap bm=screenshotApplicationsInner(null,Display.DEFAULT_DISPLAY,-1,-1,true,1f,Bitmap.Config.ARGB_8888);
      try {
        receiver.send(bm);
      }
 catch (      RemoteException e) {
      }
    }
  }
);
  return true;
}
