{
  if (mContext.getResources().getConfiguration().isScreenRound() && mContext.getResources().getBoolean(com.android.internal.R.bool.config_windowShowCircularMask)) {
    final int currentUserId;
synchronized (mWindowMap) {
      currentUserId=mCurrentUserId;
    }
    int inversionState=Settings.Secure.getIntForUser(mContext.getContentResolver(),Settings.Secure.ACCESSIBILITY_DISPLAY_INVERSION_ENABLED,0,currentUserId);
    int showMask=(inversionState == 1) ? 0 : 1;
    Message m=mH.obtainMessage(H.SHOW_CIRCULAR_DISPLAY_MASK);
    m.arg1=showMask;
    mH.sendMessage(m);
  }
}
