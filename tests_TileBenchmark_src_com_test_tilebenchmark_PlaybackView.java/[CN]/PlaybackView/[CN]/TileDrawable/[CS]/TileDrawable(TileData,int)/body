{
  this.tile=t;
  getPaint().setColor(getResources().getColor(colorId));
  if (colorId == R.color.ready_tile || colorId == R.color.unready_tile) {
    label=(int)(t.left / TILE_SCALE) + ", " + (int)(t.top / TILE_SCALE);
    setBounds(t.left,t.top,t.right,t.bottom);
  }
 else {
    setBounds((int)(t.left * t.scale),(int)(t.top * t.scale),(int)(t.right * t.scale),(int)(t.bottom * t.scale));
  }
}
