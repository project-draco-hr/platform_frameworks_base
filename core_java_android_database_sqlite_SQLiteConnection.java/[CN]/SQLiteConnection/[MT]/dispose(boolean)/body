{
  if (mCloseGuard != null) {
    if (finalized) {
      mCloseGuard.warnIfOpen();
    }
    mCloseGuard.close();
  }
  if (mConnectionPtr != 0) {
    mRecentOperations.beginOperation("close",null,null);
    try {
      mPreparedStatementCache.evictAll();
      nativeClose(mConnectionPtr);
      mConnectionPtr=0;
    }
  finally {
      mRecentOperations.endOperation();
    }
  }
}
