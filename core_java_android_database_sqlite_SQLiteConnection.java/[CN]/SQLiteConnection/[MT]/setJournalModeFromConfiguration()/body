{
  if (!mConfiguration.isInMemoryDb() && !mIsReadOnlyConnection) {
    final String newValue=mConfiguration.journalMode;
    String value=executeForString("PRAGMA journal_mode",null,null);
    if (!value.equalsIgnoreCase(newValue)) {
      value=executeForString("PRAGMA journal_mode=" + newValue,null,null);
      if (!value.equalsIgnoreCase(newValue)) {
        Log.e(TAG,"setting journal_mode to " + newValue + " failed for db: "+ mConfiguration.label+ " (on pragma set journal_mode, sqlite returned:"+ value);
      }
    }
  }
}
