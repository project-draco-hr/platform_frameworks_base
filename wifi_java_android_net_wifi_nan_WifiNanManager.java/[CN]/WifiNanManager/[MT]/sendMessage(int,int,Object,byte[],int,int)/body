{
  if (peerHandle == null) {
    throw new IllegalArgumentException("sendMessage: invalid peerHandle - must be non-null");
  }
  if (VDBG) {
    Log.v(TAG,"sendMessage(): clientId=" + clientId + ", sessionId="+ sessionId+ ", peerHandle="+ ((OpaquePeerHandle)peerHandle).peerId+ ", messageId="+ messageId+ ", retryCount="+ retryCount);
  }
  try {
    mService.sendMessage(clientId,sessionId,((OpaquePeerHandle)peerHandle).peerId,message,messageId,retryCount);
  }
 catch (  RemoteException e) {
    throw e.rethrowFromSystemServer();
  }
}
