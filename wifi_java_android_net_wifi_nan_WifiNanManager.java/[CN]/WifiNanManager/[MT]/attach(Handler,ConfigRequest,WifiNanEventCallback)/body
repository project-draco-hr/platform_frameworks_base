{
  if (VDBG) {
    Log.v(TAG,"attach(): handler=" + handler + ", callback="+ callback+ ", configRequest="+ configRequest);
  }
synchronized (mLock) {
    Looper looper=(handler == null) ? Looper.getMainLooper() : handler.getLooper();
    try {
      Binder binder=new Binder();
      mService.connect(binder,mContext.getOpPackageName(),new WifiNanEventCallbackProxy(this,looper,binder,callback),configRequest);
    }
 catch (    RemoteException e) {
      throw e.rethrowFromSystemServer();
    }
  }
}
