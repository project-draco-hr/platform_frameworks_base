{
  try {
    if (VDBG)     Log.v(TAG,"connect()");
    if (listener == null) {
      throw new IllegalArgumentException("Invalid listener - must not be null");
    }
    if (mBinder == null) {
      mBinder=new Binder();
    }
    mService.connect(mBinder,listener.callback,events);
  }
 catch (  RemoteException e) {
    throw e.rethrowFromSystemServer();
  }
}
