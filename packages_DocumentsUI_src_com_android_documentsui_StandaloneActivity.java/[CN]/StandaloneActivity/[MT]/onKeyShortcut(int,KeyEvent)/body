{
  DirectoryFragment dir;
switch (keyCode) {
case KeyEvent.KEYCODE_A:
    dir=DirectoryFragment.get(getFragmentManager());
  dir.selectAllFiles();
return true;
case KeyEvent.KEYCODE_C:
dir=DirectoryFragment.get(getFragmentManager());
dir.copyToClipboard();
return true;
case KeyEvent.KEYCODE_V:
dir=DirectoryFragment.get(getFragmentManager());
dir.pasteFromClipboard();
return true;
default :
return super.onKeyUp(keyCode,event);
}
}
