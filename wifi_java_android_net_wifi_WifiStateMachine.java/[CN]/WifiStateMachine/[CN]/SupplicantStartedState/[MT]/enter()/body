{
  if (DBG)   log(getName() + "\n");
  EventLog.writeEvent(EVENTLOG_WIFI_STATE_CHANGED,getName());
  mIsScanMode=false;
  mNetworkInfo.setIsAvailable(true);
  long supplicantScanIntervalMs=Settings.Secure.getLong(mContext.getContentResolver(),Settings.Secure.WIFI_SUPPLICANT_SCAN_INTERVAL_MS,mDefaultSupplicantScanIntervalMs);
  mWifiNative.setScanInterval((int)supplicantScanIntervalMs / 1000);
}
