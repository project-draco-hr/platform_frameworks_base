{
  if (DBG) {
    log("handleBatchedScanPoll Request - mBatchedScanMinPollTime=" + mBatchedScanMinPollTime + " , mBatchedScanSettings="+ mBatchedScanSettings);
  }
  if (mBatchedScanMinPollTime == 0)   return;
  if (mBatchedScanSettings == null)   return;
  long now=System.currentTimeMillis();
  if (now > mBatchedScanMinPollTime) {
    startNextBatchedScan();
  }
 else {
    mAlarmManager.setExact(AlarmManager.RTC_WAKEUP,mBatchedScanMinPollTime,mBatchedScanIntervalIntent);
    mBatchedScanMinPollTime=0;
  }
}
