{
  int countryCodeSequence=mCountryCodeSequence.incrementAndGet();
  if (TextUtils.isEmpty(countryCode)) {
    String defaultCountryCode=mContext.getResources().getString(R.string.config_wifi_unknown_country_code);
    sendMessageDelayed(CMD_SET_COUNTRY_CODE,countryCodeSequence,persist ? 1 : 0,defaultCountryCode,COUNTRY_CODE_DELAY_MS);
  }
 else {
    sendMessage(CMD_SET_COUNTRY_CODE,countryCodeSequence,persist ? 1 : 0,countryCode);
  }
}
