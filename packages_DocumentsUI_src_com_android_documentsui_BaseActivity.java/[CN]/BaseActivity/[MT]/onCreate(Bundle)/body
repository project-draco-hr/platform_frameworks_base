{
  super.onCreate(icicle);
  setContentView(mLayoutId);
  mDrawer=DrawerController.create(this);
  mState=(icicle != null) ? icicle.<State>getParcelable(EXTRA_STATE) : buildState();
  Metrics.logActivityLaunch(this,mState,getIntent());
  mRoots=DocumentsApplication.getRootsCache(this);
  mRoots.setOnCacheUpdateListener(new RootsCache.OnCacheUpdateListener(){
    @Override public void onCacheUpdate(){
      new HandleRootsChangedTask().execute(getCurrentRoot());
    }
  }
);
  mSearchManager=new SearchManager(this);
  DocumentsToolbar toolbar=(DocumentsToolbar)findViewById(R.id.toolbar);
  setActionBar(toolbar);
  mNavigator=new NavigationView(mDrawer,toolbar,(Spinner)findViewById(R.id.stack),mState,this);
  setResult(Activity.RESULT_CANCELED);
}
