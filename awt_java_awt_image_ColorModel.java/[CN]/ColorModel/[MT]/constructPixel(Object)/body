{
  int pixel=0;
switch (getTransferType()) {
case DataBuffer.TYPE_BYTE:
    byte[] bPixel=(byte[])obj;
  if (bPixel.length > 1) {
    throw new UnsupportedOperationException(Messages.getString("awt.275"));
  }
pixel=bPixel[0] & 0xff;
break;
case DataBuffer.TYPE_USHORT:
short[] sPixel=(short[])obj;
if (sPixel.length > 1) {
throw new UnsupportedOperationException(Messages.getString("awt.275"));
}
pixel=sPixel[0] & 0xffff;
break;
case DataBuffer.TYPE_INT:
int[] iPixel=(int[])obj;
if (iPixel.length > 1) {
throw new UnsupportedOperationException(Messages.getString("awt.275"));
}
pixel=iPixel[0];
break;
default :
throw new UnsupportedOperationException(Messages.getString("awt.22D",transferType));
}
return pixel;
}
