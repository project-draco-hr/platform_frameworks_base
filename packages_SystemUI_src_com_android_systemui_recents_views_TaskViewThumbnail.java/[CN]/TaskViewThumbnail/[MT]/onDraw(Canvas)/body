{
  if (mInvisible) {
    return;
  }
  int thumbnailHeight=(int)(((float)mTaskViewRect.width() / mThumbnailRect.width()) * mThumbnailRect.height());
  if (thumbnailHeight >= mTaskViewRect.height()) {
    canvas.drawRoundRect(0,0,mTaskViewRect.width(),mTaskViewRect.height(),mCornerRadius,mCornerRadius,mDrawPaint);
  }
 else {
    int count=0;
    if (thumbnailHeight > 0) {
      count=canvas.save();
      canvas.clipRect(0,0,mTaskViewRect.width(),thumbnailHeight,Region.Op.REPLACE);
      canvas.drawRoundRect(0,0,mTaskViewRect.width(),thumbnailHeight + mCornerRadius,mCornerRadius,mCornerRadius,mDrawPaint);
    }
    canvas.clipRect(0,thumbnailHeight,mTaskViewRect.width(),mTaskViewRect.height(),Region.Op.REPLACE);
    canvas.drawRoundRect(0,Math.max(0,thumbnailHeight - mCornerRadius),mTaskViewRect.width(),mTaskViewRect.height(),mCornerRadius,mCornerRadius,mBgFillPaint);
    if (thumbnailHeight > 0) {
      canvas.restoreToCount(count);
    }
  }
}
