{
  if (bm != null) {
    mBitmapShader=new BitmapShader(bm,Shader.TileMode.CLAMP,Shader.TileMode.CLAMP);
    mDrawPaint.setShader(mBitmapShader);
    mBitmapRect.set(0,0,bm.getWidth(),bm.getHeight());
    updateBitmapScale();
  }
 else {
    mBitmapShader=null;
    mDrawPaint.setShader(null);
  }
  updateFilter();
}
