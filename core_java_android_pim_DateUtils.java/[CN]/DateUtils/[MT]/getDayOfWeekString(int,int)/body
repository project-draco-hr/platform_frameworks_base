{
  int[] list;
switch (abbrev) {
case LENGTH_LONG:
    list=sDaysLong;
  break;
case LENGTH_MEDIUM:
list=sDaysMedium;
break;
case LENGTH_SHORT:
list=sDaysShort;
break;
case LENGTH_SHORTER:
list=sDaysShorter;
break;
case LENGTH_SHORTEST:
list=sDaysShortest;
break;
default :
list=sDaysMedium;
break;
}
Resources r=Resources.getSystem();
return r.getString(list[dayOfWeek - Calendar.SUNDAY]);
}
