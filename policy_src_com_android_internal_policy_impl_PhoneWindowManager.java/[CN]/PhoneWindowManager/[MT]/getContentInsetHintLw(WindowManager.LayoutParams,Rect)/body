{
  final int fl=attrs.flags;
  if (mStatusBarCanHide && (fl & (FLAG_LAYOUT_IN_SCREEN | FLAG_FULLSCREEN | FLAG_LAYOUT_INSET_DECOR)) == (FLAG_LAYOUT_IN_SCREEN | FLAG_LAYOUT_INSET_DECOR)) {
    contentInset.set(mCurLeft,mCurTop,mW - mCurRight,mH - mCurBottom);
  }
 else {
    contentInset.setEmpty();
  }
}
