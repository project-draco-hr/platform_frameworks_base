{
synchronized (mLock) {
    if (isScreenSaverEnabled()) {
      IDreamManager dm=getDreamManager();
      if (dm == null)       return false;
      try {
        if (localLOGV)         Log.v(TAG,"startScreenSaver: entering dreamland...");
        dm.dream();
        return true;
      }
 catch (      RemoteException ex) {
      }
    }
  }
  return false;
}
