{
  final ITelephony phone=getPhoneInterface();
  if (phone == null) {
    Log.w(TAG,"couldn't get ITelephony reference");
    return false;
  }
  try {
    return phone.isOffhook();
  }
 catch (  RemoteException e) {
    Log.w(TAG,"ITelephony.isOffhhook threw RemoteException " + e);
    return false;
  }
}
