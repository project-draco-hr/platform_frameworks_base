{
  final IAudioService audio=getAudioInterface();
  if (audio == null) {
    Log.w(TAG,"handleVolumeKey: couldn't get IAudioService reference");
    return;
  }
  try {
    mBroadcastWakeLock.acquire();
    audio.adjustStreamVolume(stream,keycode == KeyEvent.KEYCODE_VOLUME_UP ? AudioManager.ADJUST_RAISE : AudioManager.ADJUST_LOWER,0);
  }
 catch (  RemoteException e) {
    Log.w(TAG,"IAudioService.adjustStreamVolume() threw RemoteException " + e);
  }
 finally {
    mBroadcastWakeLock.release();
  }
}
