{
  ContentResolver res=mContext.getContentResolver();
  mUserRotationMode=mode;
  if (mode == WindowManagerPolicy.USER_ROTATION_LOCKED) {
    mUserRotation=rot;
    Settings.System.putInt(res,Settings.System.ACCELEROMETER_ROTATION,0);
    Settings.System.putInt(res,Settings.System.USER_ROTATION,rot);
  }
 else {
    Settings.System.putInt(res,Settings.System.ACCELEROMETER_ROTATION,1);
  }
}
