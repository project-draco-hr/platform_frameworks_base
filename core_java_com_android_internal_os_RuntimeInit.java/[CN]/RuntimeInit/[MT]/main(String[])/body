{
  if (argv.length == 2 && argv[1].equals("application")) {
    if (DEBUG)     Slog.d(TAG,"RuntimeInit: Starting application");
    redirectLogStreams();
  }
 else {
    if (DEBUG)     Slog.d(TAG,"RuntimeInit: Starting tool");
  }
  commonInit();
  finishInit();
  if (DEBUG)   Slog.d(TAG,"Leaving RuntimeInit!");
}
