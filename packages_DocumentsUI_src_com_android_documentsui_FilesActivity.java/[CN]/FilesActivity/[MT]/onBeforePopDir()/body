{
  int size=mState.stack.size();
  if (mDrawer.isPresent() && (System.currentTimeMillis() - mDrawerLastFiddled) > DRAWER_NO_FIDDLE_DELAY) {
    if (mDrawer.isOpen()) {
      mDrawer.setOpen(false);
      mDrawerLastFiddled=System.currentTimeMillis();
      return true;
    }
    if (size <= 1) {
      mDrawer.setOpen(true);
      mDrawerLastFiddled=System.currentTimeMillis();
      return true;
    }
  }
  return false;
}
