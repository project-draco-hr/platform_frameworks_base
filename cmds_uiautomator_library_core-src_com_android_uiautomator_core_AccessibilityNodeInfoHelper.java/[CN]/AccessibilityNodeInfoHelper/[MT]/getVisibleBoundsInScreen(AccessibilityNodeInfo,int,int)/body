{
  if (node == null) {
    return null;
  }
  Rect nodeRect=new Rect();
  node.getBoundsInScreen(nodeRect);
  Rect displayRect=new Rect();
  displayRect.top=0;
  displayRect.left=0;
  displayRect.right=width;
  displayRect.bottom=height;
  if (nodeRect.intersect(displayRect)) {
    return nodeRect;
  }
 else {
    return new Rect();
  }
}
