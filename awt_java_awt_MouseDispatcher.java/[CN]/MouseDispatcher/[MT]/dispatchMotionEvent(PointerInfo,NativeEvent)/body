{
  propagateEvent(info,AWTEvent.MOUSE_MOTION_EVENT_MASK,MouseMotionListener.class,false);
  final Point pos=info.position;
  if ((lastUnderMotion != info.src) || !lastLocalPos.equals(pos)) {
    lastUnderMotion=info.src;
    lastLocalPos=pos;
    if (info.src.isIndirectlyEnabled()) {
      toolkit.getSystemEventQueueImpl().postEvent(new MouseEvent(info.src,event.getEventId(),event.getTime(),event.getInputModifiers(),pos.x,pos.y,0,false));
    }
  }
}
