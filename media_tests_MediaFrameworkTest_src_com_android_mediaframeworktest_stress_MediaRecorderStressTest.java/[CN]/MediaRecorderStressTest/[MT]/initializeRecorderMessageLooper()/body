{
  Log.v(TAG,"start looper");
  new Thread(){
    @Override public void run(){
      Looper.prepare();
      Log.v(TAG,"start loopRun");
      mRecorderLooper=Looper.myLooper();
      mRecorder=new MediaRecorder();
synchronized (recorderlock) {
        recorderlock.notify();
      }
      Looper.loop();
      Log.v(TAG,"initializeMessageLooper: quit.");
    }
  }
.start();
}
