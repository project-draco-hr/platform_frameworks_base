{
  if (mBiometricUnlock != null) {
    final boolean backupIsTimedOut=(mUpdateMonitor.getFailedAttempts() >= LockPatternUtils.FAILED_ATTEMPTS_BEFORE_TIMEOUT);
    if (!mSuppressBiometricUnlock && mUpdateMonitor.getPhoneState() == TelephonyManager.CALL_STATE_IDLE && !mUpdateMonitor.getMaxBiometricUnlockAttemptsReached() && !backupIsTimedOut) {
      mBiometricUnlock.start();
    }
 else {
      mBiometricUnlock.hide();
    }
  }
}
