{
  if (dimmed) {
    mTargetView.animate().cancel();
    if (fade) {
      mTargetView.animate().setInterpolator(mFastOutSlowInInterpolator).scaleX(DIMMED_SCALE).scaleY(DIMMED_SCALE);
    }
 else {
      mTargetView.setScaleX(DIMMED_SCALE);
      mTargetView.setScaleY(DIMMED_SCALE);
    }
    mState=STATE_DIMMED;
  }
 else {
    mTargetView.animate().cancel();
    if (fade) {
      mTargetView.animate().setInterpolator(mFastOutSlowInInterpolator).scaleX(1).scaleY(1);
    }
 else {
      mTargetView.animate().cancel();
      mTargetView.setScaleX(1);
      mTargetView.setScaleY(1);
    }
    mState=STATE_NORMAL;
  }
}
