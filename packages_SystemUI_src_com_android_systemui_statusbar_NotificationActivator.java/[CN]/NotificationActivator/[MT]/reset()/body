{
  if (mState == STATE_DIMMED) {
    return;
  }
  mTargetView.animate().cancel();
  mTargetView.animate().setInterpolator(mFastOutSlowInInterpolator).scaleX(DIMMED_SCALE).scaleY(DIMMED_SCALE).translationZBy(-mTranslationZ);
  if (mTargetView.getAlpha() != 1.0f) {
    mTargetView.animate().withLayer().alpha(1);
  }
  mState=STATE_DIMMED;
}
