{
  mTargetView=targetView;
  mHotspotView=hotspotView;
  Context ctx=targetView.getContext();
  mFastOutSlowInInterpolator=AnimationUtils.loadInterpolator(ctx,android.R.interpolator.fast_out_slow_in);
