{
  int toY=0;
  if (visible) {
    mNavBarScrimView.setVisibility(View.VISIBLE);
    mNavBarScrimView.setTranslationY(mNavBarScrimView.getMeasuredHeight());
  }
 else {
    toY=mNavBarScrimView.getMeasuredHeight();
  }
  if (animation != AnimationProps.IMMEDIATE) {
    mNavBarScrimView.animate().translationY(toY).setDuration(animation.getDuration(AnimationProps.BOUNDS)).setInterpolator(animation.getInterpolator(AnimationProps.BOUNDS)).start();
  }
 else {
    mNavBarScrimView.setTranslationY(toY);
  }
}
