{
  RecentsConfiguration config=Recents.getConfiguration();
  RecentsActivityLaunchState launchState=config.getLaunchState();
  int transitionEnterFromAppDelay=mContext.getResources().getInteger(R.integer.recents_enter_from_app_transition_duration);
  int transitionEnterFromHomeDelay=mContext.getResources().getInteger(R.integer.recents_enter_from_home_transition_duration);
  if (mHasStatusBarScrim && mShouldAnimateStatusBarScrim) {
    mStatusBarScrimView.setTranslationY(-mStatusBarScrimView.getMeasuredHeight());
    mStatusBarScrimView.animate().translationY(0).setStartDelay(launchState.launchedFromHome ? transitionEnterFromHomeDelay : transitionEnterFromAppDelay).setDuration(mNavBarScrimEnterDuration).setInterpolator(mQuintOutInterpolator).withStartAction(new Runnable(){
      @Override public void run(){
        mStatusBarScrimView.setVisibility(View.VISIBLE);
      }
    }
).start();
  }
  if (mHasNavBarScrim && mShouldAnimateNavBarScrim) {
    mNavBarScrimView.setTranslationY(mNavBarScrimView.getMeasuredHeight());
    mNavBarScrimView.animate().translationY(0).setStartDelay(launchState.launchedFromHome ? transitionEnterFromHomeDelay : transitionEnterFromAppDelay).setDuration(mNavBarScrimEnterDuration).setInterpolator(mQuintOutInterpolator).withStartAction(new Runnable(){
      @Override public void run(){
        mNavBarScrimView.setVisibility(View.VISIBLE);
      }
    }
).start();
  }
}
