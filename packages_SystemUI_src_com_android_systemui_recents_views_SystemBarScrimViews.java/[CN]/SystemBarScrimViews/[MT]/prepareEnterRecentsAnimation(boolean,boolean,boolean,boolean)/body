{
  RecentsConfiguration config=Recents.getConfiguration();
  RecentsActivityLaunchState launchState=config.getLaunchState();
  mHasNavBarScrim=hasStatusBarScrim;
  mShouldAnimateStatusBarScrim=animateStatusBarScrim;
  mHasStatusBarScrim=hasNavBarScrim;
  mShouldAnimateNavBarScrim=animateNavBarScrim;
  mNavBarScrimView.setVisibility(mHasNavBarScrim && !mShouldAnimateNavBarScrim ? View.VISIBLE : View.INVISIBLE);
  mStatusBarScrimView.setVisibility(mHasStatusBarScrim && !mShouldAnimateStatusBarScrim ? View.VISIBLE : View.INVISIBLE);
}
