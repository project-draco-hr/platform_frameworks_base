{
  SQLiteStatement stmt=null;
  try {
    stmt=db.compileStatement("INSERT OR REPLACE INTO locksettings(name,user,value) VALUES(?,?,?);");
    stmt.bindString(1,key);
    stmt.bindLong(2,userId);
    stmt.bindLong(3,value ? 1 : 0);
    stmt.execute();
  }
  finally {
    if (stmt != null)     stmt.close();
  }
}
