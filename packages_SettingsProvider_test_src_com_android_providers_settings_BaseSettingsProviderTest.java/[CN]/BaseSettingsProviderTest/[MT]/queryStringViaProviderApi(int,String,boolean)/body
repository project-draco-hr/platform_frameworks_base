{
  Uri uri=getBaseUriForType(type);
  String queryString=queryStringInQuotes ? "(name=?)" : "name=?";
  Cursor cursor=getContext().getContentResolver().query(uri,NAME_VALUE_COLUMNS,queryString,new String[]{name},null);
  if (cursor == null) {
    return null;
  }
  try {
    if (cursor.moveToFirst()) {
      final int valueColumnIdx=cursor.getColumnIndex(Settings.NameValueTable.VALUE);
      return cursor.getString(valueColumnIdx);
    }
  }
  finally {
    cursor.close();
  }
  return null;
}
