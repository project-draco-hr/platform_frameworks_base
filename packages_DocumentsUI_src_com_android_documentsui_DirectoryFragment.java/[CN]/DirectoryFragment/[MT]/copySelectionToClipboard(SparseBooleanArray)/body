{
  new GetDocumentsTask(){
    @Override void onDocumentsReady(    List<DocumentInfo> docs){
      mClipper.clipDocuments(docs);
      Activity activity=getActivity();
      Toast.makeText(activity,activity.getResources().getQuantityString(R.plurals.clipboard_files_clipped,docs.size(),docs.size()),Toast.LENGTH_SHORT).show();
    }
  }
.execute(selected);
}
