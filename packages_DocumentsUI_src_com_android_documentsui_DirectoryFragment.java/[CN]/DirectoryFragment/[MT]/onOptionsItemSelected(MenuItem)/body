{
  final int id=item.getItemId();
  if (id == R.id.menu_grid) {
    getArguments().putInt(EXTRA_MODE,MODE_GRID);
    updateMode();
    return true;
  }
 else   if (id == R.id.menu_list) {
    getArguments().putInt(EXTRA_MODE,MODE_LIST);
    updateMode();
    return true;
  }
 else {
    return super.onOptionsItemSelected(item);
  }
}
