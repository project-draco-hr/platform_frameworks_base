{
  if (model.info != null || model.error != null) {
    mMessageBar.setInfo(model.info);
    mMessageBar.setError(model.error);
    mMessageBar.show();
  }
  mProgressBar.setVisibility(model.isLoading() ? View.VISIBLE : View.GONE);
  if (model.isEmpty()) {
    showEmptyView();
  }
 else {
    showRecyclerView();
    mAdapter.notifyDataSetChanged();
  }
}
