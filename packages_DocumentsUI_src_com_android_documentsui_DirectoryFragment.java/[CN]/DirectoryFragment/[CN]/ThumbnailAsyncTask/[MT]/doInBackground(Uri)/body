{
  final Context context=mIconThumb.getContext();
  Bitmap result=null;
  try {
    result=DocumentsContract.getDocumentThumbnail(context.getContentResolver(),mUri,mThumbSize,mSignal);
    if (result != null) {
      final ThumbnailCache thumbs=DocumentsApplication.getThumbnailsCache(context,mThumbSize);
      thumbs.put(mUri,result);
    }
  }
 catch (  Exception e) {
    Log.w(TAG,"Failed to load thumbnail: " + e);
  }
  return result;
}
