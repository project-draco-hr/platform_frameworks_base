{
  final Context context=mTarget.getContext();
  final Uri uri=params[0];
  Bitmap result=null;
  try {
    result=DocumentsContract.getThumbnail(context.getContentResolver(),uri,mThumbSize);
    if (result != null) {
      final ThumbnailCache thumbs=DocumentsApplication.getThumbnailsCache(context,mThumbSize);
      thumbs.put(uri,result);
    }
  }
 catch (  Exception e) {
    Log.w(TAG,"Failed to load thumbnail: " + e);
  }
  return result;
}
