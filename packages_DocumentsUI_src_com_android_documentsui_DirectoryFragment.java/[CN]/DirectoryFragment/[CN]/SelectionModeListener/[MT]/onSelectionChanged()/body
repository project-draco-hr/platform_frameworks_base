{
  mModel.getSelection(mSelected);
  if (mSelected.size() > 0) {
    if (DEBUG)     Log.d(TAG,"Maybe starting action mode.");
    if (mActionMode == null) {
      if (DEBUG)       Log.d(TAG,"Yeah. Starting action mode.");
      mActionMode=getActivity().startActionMode(this);
      getActivity().getWindow().setStatusBarColor(getResources().getColor(R.color.action_mode_status_bar_background));
    }
    updateActionMenu();
  }
 else {
    if (DEBUG)     Log.d(TAG,"Finishing action mode.");
    if (mActionMode != null) {
      mActionMode.finish();
    }
    TypedValue color=new TypedValue();
    getActivity().getTheme().resolveAttribute(android.R.attr.colorPrimaryDark,color,true);
    getActivity().getWindow().setStatusBarColor(color.data);
  }
  if (mActionMode != null) {
    mActionMode.setTitle(TextUtils.formatSelectedCount(mSelected.size()));
  }
}
