{
  writer.print(prefix);
  if (view == null) {
    writer.println("null");
    return;
  }
  writer.println(view.toString());
  if (!(view instanceof ViewGroup)) {
    return;
  }
  ViewGroup grp=(ViewGroup)view;
  final int N=grp.getChildCount();
  if (N <= 0) {
    return;
  }
  prefix=prefix + "  ";
  for (int i=0; i < N; i++) {
    dumpViewHierarchy(prefix,writer,grp.getChildAt(i));
  }
}
