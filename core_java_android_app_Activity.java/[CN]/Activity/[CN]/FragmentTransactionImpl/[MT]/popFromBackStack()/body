{
  if (mAdded != null) {
    for (int i=mAdded.size() - 1; i >= 0; i--) {
      Fragment f=mAdded.get(i);
      if (mAddToBackStack) {
        f.mBackStackNesting--;
      }
      mFragments.removeFragment(f,FragmentManager.reverseTransit(mTransition),mTransitionStyle);
    }
  }
  if (mRemoved != null) {
    for (int i=mRemoved.size() - 1; i >= 0; i--) {
      mFragments.addFragment(mRemoved.get(i),false);
    }
  }
}
