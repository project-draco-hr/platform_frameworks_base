{
  final int lastItemPosition=mListView.getAdapter().getCount() - 1;
  for (int i=0; i < lastItemPosition; i++) {
    sendKeys(KeyEvent.KEYCODE_DPAD_DOWN);
  }
  assertEquals(lastItemPosition,mListView.getSelectedItemPosition());
  assertEquals("bottom of last item should be just above padding; no fading edge.",mListView.getHeight() - mListView.getListPaddingBottom(),mListView.getSelectedView().getBottom());
}
