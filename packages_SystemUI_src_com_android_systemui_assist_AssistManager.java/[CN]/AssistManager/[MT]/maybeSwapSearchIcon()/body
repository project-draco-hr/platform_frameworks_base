{
  Intent intent=((SearchManager)mContext.getSystemService(Context.SEARCH_SERVICE)).getAssistIntent(mContext,false,UserHandle.USER_CURRENT);
  ComponentName component=null;
  boolean isService=false;
  if (getVoiceInteractorSupportsAssistGesture()) {
    component=getVoiceInteractorComponentName();
    isService=true;
  }
 else   if (intent != null) {
    component=intent.getComponent();
  }
  if (component != null) {
    replaceDrawable(mView.getOrb().getLogo(),component,ASSIST_ICON_METADATA_NAME,isService);
  }
 else {
    mView.getOrb().getLogo().setImageDrawable(null);
  }
}
