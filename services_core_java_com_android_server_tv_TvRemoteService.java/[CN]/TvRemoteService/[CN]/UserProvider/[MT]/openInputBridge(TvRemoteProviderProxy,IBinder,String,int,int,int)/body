{
  if (DEBUG) {
    Slog.d(TAG,"openInputBridge(), token: " + token + ", name: "+ name+ ", width: "+ width+ ", height: "+ height+ ", maxPointers: "+ maxPointers);
  }
synchronized (mLock) {
    if (mProviderList.contains(provider)) {
      mService.openInputBridgeInternalLocked(provider,token,name,width,height,maxPointers);
    }
  }
}
