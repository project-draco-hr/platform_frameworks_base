{
  for (int i=0, n=windows.size(); i < n; i++) {
    final WindowState w=windows.get(i);
    final WindowStateAnimator winAnimator=w.mWinAnimator;
    Slog.v(TAG_WM,"Assign layer " + w + ": "+ "mBase="+ w.mBaseLayer+ " mLayer="+ w.mLayer+ (w.mAppToken == null ? "" : " mAppLayer=" + w.mAppToken.mAppAnimator.animLayerAdjustment)+ " =mAnimLayer="+ winAnimator.mAnimLayer);
  }
}
