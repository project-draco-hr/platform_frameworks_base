{
  if (mAnimatingOut) {
    if (endRunnable != null) {
      endRunnable.run();
    }
    return;
  }
  mAnimatingOut=true;
  mOrb.startExitAnimation(EXIT_START_DELAY);
  mScrim.animate().alpha(0f).setDuration(250).setStartDelay(EXIT_START_DELAY).setInterpolator(Interpolators.FAST_OUT_SLOW_IN);
  mNavbarScrim.animate().alpha(0f).setDuration(250).setStartDelay(EXIT_START_DELAY).setInterpolator(Interpolators.FAST_OUT_SLOW_IN).withEndAction(endRunnable);
}
