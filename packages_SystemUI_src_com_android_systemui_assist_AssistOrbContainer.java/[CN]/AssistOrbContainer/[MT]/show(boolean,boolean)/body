{
  if (show) {
    if (getVisibility() != View.VISIBLE) {
      setVisibility(View.VISIBLE);
      if (animate) {
        startEnterAnimation();
      }
 else {
        reset();
      }
    }
  }
 else {
    if (animate) {
      startExitAnimation(new Runnable(){
        @Override public void run(){
          mAnimatingOut=false;
          setVisibility(View.GONE);
        }
      }
);
    }
 else {
      setVisibility(View.GONE);
    }
  }
}
