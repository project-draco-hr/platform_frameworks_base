{
  final boolean changed=super.setVisible(visible,restart);
  if (mAnim != null) {
    if (visible) {
      if (restart) {
        mAnim.cancel();
        mAnim.start();
      }
 else       if (changed && mAnim.isPaused()) {
        mAnim.resume();
      }
    }
 else     if (mAnim.isRunning()) {
      mAnim.pause();
    }
  }
  return changed;
}
