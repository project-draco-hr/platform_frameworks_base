{
  try {
    serverSocket=new ServerSocket(ProxyService.PORT);
    serverSocket.setReuseAddress(true);
    while (mIsRunning) {
      try {
        ProxyConnection parser=new ProxyConnection(serverSocket.accept());
        threadExecutor.execute(parser);
      }
 catch (      IOException e) {
        e.printStackTrace();
      }
    }
  }
 catch (  SocketException e) {
    e.printStackTrace();
  }
catch (  IOException e) {
    e.printStackTrace();
  }
  mIsRunning=false;
}
