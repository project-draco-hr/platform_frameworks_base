{
  int colIndex=line.indexOf(":");
  if (colIndex != -1) {
    String headerName=line.substring(0,colIndex).trim();
    if (headerName.regionMatches(true,0,HEADER_CONNECTION,0,HEADER_CONNECTION.length()) || headerName.regionMatches(true,0,HEADER_PROXY_CONNECTION,0,HEADER_PROXY_CONNECTION.length())) {
      return true;
    }
  }
  return false;
}
