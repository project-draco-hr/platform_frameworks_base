{
  SurfaceControl.openTransaction();
  TaskStack stack=mDisplayContent.mService.mStackIdToStack.get(targetStackId);
  boolean visibleAndValid=visible && stack != null;
  if (visibleAndValid) {
    stack.getDimBounds(mTmpRect);
    if (mTmpRect.height() > 0) {
      mDimLayer.setBounds(mTmpRect);
      mDimLayer.show(mDisplayContent.mService.mLayersController.getResizeDimLayer(),alpha,0);
    }
 else {
      visibleAndValid=false;
    }
  }
  if (!visibleAndValid) {
    mDimLayer.hide();
  }
  SurfaceControl.closeTransaction();
}
