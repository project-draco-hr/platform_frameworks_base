{
  if (!isAnimationMaximizing() || stack == null || !mService.mAppTransition.hadClipRevealAnimation()) {
    return 1f;
  }
  final int minimizeDistance=stack.getMinimizeDistance();
  final float fraction=Math.abs(mService.mAppTransition.getLastClipRevealMaxTranslation()) / (float)minimizeDistance;
  final float t=Math.max(0,Math.min(1,(fraction - CLIP_REVEAL_MEET_FRACTION_MIN) / (CLIP_REVEAL_MEET_FRACTION_MAX - CLIP_REVEAL_MEET_FRACTION_MIN)));
  return CLIP_REVEAL_MEET_EARLIEST + (1 - t) * (CLIP_REVEAL_MEET_LAST - CLIP_REVEAL_MEET_EARLIEST);
}
