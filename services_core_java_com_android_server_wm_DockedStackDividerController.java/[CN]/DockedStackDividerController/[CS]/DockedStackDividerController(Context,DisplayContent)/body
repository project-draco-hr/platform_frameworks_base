{
  mContext=context;
  mDisplayContent=displayContent;
  final DisplayInfo info=displayContent.getDisplayInfo();
  mDisplayWidth=info.logicalWidth;
  mDisplayHeight=info.logicalHeight;
  mDividerWidth=context.getResources().getDimensionPixelSize(com.android.internal.R.dimen.docked_stack_divider_thickness);
  mSideMargin=dipToPixel(SIDE_MARGIN_DIP,mDisplayContent.getDisplayMetrics());
  mDimLayer=new DimLayer(displayContent.mService,this,displayContent.getDisplayId());
}
