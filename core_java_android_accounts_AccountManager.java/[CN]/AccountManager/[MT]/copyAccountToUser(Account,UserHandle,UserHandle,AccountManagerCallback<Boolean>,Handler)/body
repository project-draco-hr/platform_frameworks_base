{
  if (account == null)   throw new IllegalArgumentException("account is null");
  if (toUser == null || fromUser == null) {
    throw new IllegalArgumentException("fromUser and toUser cannot be null");
  }
  return new Future2Task<Boolean>(handler,callback){
    @Override public void doWork() throws RemoteException {
      mService.copyAccountToUser(mResponse,account,fromUser.getIdentifier(),toUser.getIdentifier());
    }
    @Override public Boolean bundleToResult(    Bundle bundle) throws AuthenticatorException {
      if (!bundle.containsKey(KEY_BOOLEAN_RESULT)) {
        throw new AuthenticatorException("no result in response");
      }
      return bundle.getBoolean(KEY_BOOLEAN_RESULT);
    }
  }
.start();
}
