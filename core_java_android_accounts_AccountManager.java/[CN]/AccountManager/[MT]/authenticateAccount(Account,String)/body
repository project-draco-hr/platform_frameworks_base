{
  AuthenticateAccountThread thread=new AuthenticateAccountThread(account,password);
  thread.mLock.lock();
  thread.start();
  try {
    while (!thread.mSuccess && !thread.mFailure) {
      try {
        thread.mCondition.await();
      }
 catch (      InterruptedException e) {
      }
    }
    return thread.mResult;
  }
  finally {
    thread.mLock.unlock();
  }
}
