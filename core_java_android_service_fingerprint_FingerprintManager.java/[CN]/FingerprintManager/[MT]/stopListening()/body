{
  if (mService != null) {
    try {
      if (mListening) {
        mService.removeListener(mToken,mServiceReceiver);
        mListening=false;
      }
    }
 catch (    RemoteException e) {
      Log.v(TAG,"Remote exception in stopListening(): ",e);
    }
  }
 else {
    Log.w(TAG,"stopListening(): Service not connected!");
  }
}
