{
  mSearchable=searchable;
  if (mSearchable != null) {
    updateSearchAutoComplete();
    updateQueryHint();
  }
  mVoiceButtonEnabled=hasVoiceSearch();
  if (mVoiceButtonEnabled) {
    mSearchSrcTextView.setPrivateImeOptions(IME_OPTION_NO_MICROPHONE);
  }
  updateViewsVisibility(isIconified());
}
