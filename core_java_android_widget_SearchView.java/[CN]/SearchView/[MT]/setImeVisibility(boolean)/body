{
  if (mIconifiedByDefault) {
    InputMethodManager imm=(InputMethodManager)getContext().getSystemService(Context.INPUT_METHOD_SERVICE);
    if (imm != null) {
      if (visible) {
        imm.showSoftInputUnchecked(0,null);
      }
 else {
        imm.hideSoftInputFromWindow(getWindowToken(),0);
      }
    }
  }
}
