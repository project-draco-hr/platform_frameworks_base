{
  Resources r=context.getResources();
  Notification n=new Notification.Builder(context).setTicker(r.getString(R.string.screenshot_failed_title)).setContentTitle(r.getString(R.string.screenshot_failed_title)).setContentText(r.getString(R.string.screenshot_failed_text)).setSmallIcon(android.R.drawable.ic_menu_report_image).setWhen(System.currentTimeMillis()).setAutoCancel(true).getNotification();
  nManager.notify(SCREENSHOT_NOTIFICATION_ID,n);
}
