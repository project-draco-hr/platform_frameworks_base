{
  final StringBuilder sb=new StringBuilder();
  try (BufferedReader br=new BufferedReader(new InputStreamReader(context.getResources().getAssets().open(assetPath)))){
    String line;
    while ((line=br.readLine()) != null) {
      sb.append(line);
      sb.append(System.lineSeparator());
    }
  }
   return sb.toString();
}
