{
  if (DEBUG)   Log.v(TAG,"onAttachedToWindow()");
  super.onAttachedToWindow();
  try {
    final IBinder token=mActivity.getActivityToken();
    mActivityContainer=ActivityManagerNative.getDefault().createActivityContainer(token,new ActivityContainerCallback());
  }
 catch (  RemoteException e) {
    throw new IllegalStateException("ActivityView: Unable to create ActivityContainer. " + e);
  }
  attachToSurfaceWhenReady();
}
