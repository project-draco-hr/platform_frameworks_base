{
  if (mRouteTypes == types)   return;
  if (mRouteTypes != 0) {
    mRouter.removeCallback(mCallback);
  }
  mRouteTypes=types;
  if (types != 0) {
    mRouter.addCallback(types,mCallback,MediaRouter.CALLBACK_FLAG_PASSIVE_DISCOVERY);
  }
  if (mView != null) {
    mView.setRouteTypes(mRouteTypes);
  }
}
