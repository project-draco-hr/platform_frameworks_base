{
  if (mTrackIsExplicit) {
    return;
  }
  SubtitleTrack track=getDefaultTrack();
  if (track != null) {
    selectTrack(track);
    mTrackIsExplicit=false;
    if (!mVisibilityIsExplicit) {
      if (CaptioningManager.isEnabled(mContext.getContentResolver())) {
        show();
      }
 else {
        hide();
      }
      mVisibilityIsExplicit=false;
    }
  }
}
