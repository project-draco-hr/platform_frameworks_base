{
  LocalSocket s=new LocalSocket();
  LocalSocketAddress a=new LocalSocketAddress(mName,LocalSocketAddress.Namespace.RESERVED);
  IOException excp=null;
  for (int i=0; i < 10; i++) {
    try {
      s.connect(a);
      return s;
    }
 catch (    IOException e) {
      if (DBG)       Log.d(mTag,"service not yet listen()ing; try again");
      excp=e;
      sleep(500);
    }
  }
  throw excp;
}
