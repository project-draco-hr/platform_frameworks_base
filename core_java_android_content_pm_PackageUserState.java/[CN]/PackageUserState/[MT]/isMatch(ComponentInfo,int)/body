{
  if (!isInstalled(flags))   return false;
  if (!isEnabled(componentInfo,flags))   return false;
  if ((flags & MATCH_SYSTEM_ONLY) != 0) {
    if (!componentInfo.applicationInfo.isSystemApp()) {
      return false;
    }
  }
  final boolean matchesUnaware=((flags & MATCH_ENCRYPTION_UNAWARE) != 0) && !componentInfo.encryptionAware;
  final boolean matchesAware=((flags & MATCH_ENCRYPTION_AWARE) != 0) && componentInfo.encryptionAware;
  return matchesUnaware || matchesAware;
}
