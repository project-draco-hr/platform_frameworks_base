{
  super(context,attrs);
  TypedArray a=context.obtainStyledAttributes(attrs,R.styleable.ArcMotion);
  float minimumVerticalAngle=a.getFloat(R.styleable.ArcMotion_minimumVerticalAngle,DEFAULT_MIN_ANGLE_DEGREES);
  setMinimumVerticalAngle(minimumVerticalAngle);
  float minimumHorizontalAngle=a.getFloat(R.styleable.ArcMotion_minimumHorizontalAngle,DEFAULT_MIN_ANGLE_DEGREES);
  setMinimumHorizontalAngle(minimumHorizontalAngle);
  float maximumAngle=a.getFloat(R.styleable.ArcMotion_maximumAngle,DEFAULT_MAX_ANGLE_DEGREES);
  setMaximumAngle(maximumAngle);
  a.recycle();
}
