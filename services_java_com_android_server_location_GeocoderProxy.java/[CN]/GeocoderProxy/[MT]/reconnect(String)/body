{
synchronized (mMutex) {
    if (mServiceConnection != null) {
      mContext.unbindService(mServiceConnection);
    }
    mServiceConnection=new Connection();
    mIntent.setPackage(packageName);
    mContext.bindService(mIntent,mServiceConnection,Context.BIND_AUTO_CREATE | Context.BIND_NOT_FOREGROUND | Context.BIND_ALLOW_OOM_MANAGEMENT);
  }
}
