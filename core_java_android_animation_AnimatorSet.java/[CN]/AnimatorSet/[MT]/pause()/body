{
  boolean previouslyPaused=mPaused;
  super.pause();
  if (!previouslyPaused && mPaused) {
    if (mDelayAnim.isStarted()) {
      mDelayAnim.pause();
    }
 else {
      int size=mNodes.size();
      for (int i=0; i < size; i++) {
        Node node=mNodes.get(i);
        if (node != mRootNode) {
          node.mAnimation.pause();
        }
      }
    }
  }
}
