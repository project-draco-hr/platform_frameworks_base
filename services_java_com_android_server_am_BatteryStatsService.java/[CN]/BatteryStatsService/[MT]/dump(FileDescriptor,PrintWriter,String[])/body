{
synchronized (mStats) {
    boolean isCheckin=false;
    if (args != null) {
      for (      String arg : args) {
        if ("--checkin".equals(arg)) {
          isCheckin=true;
        }
 else         if ("--reset".equals(arg)) {
          mStats.resetAllStatsLocked();
        }
      }
    }
    if (isCheckin)     mStats.dumpCheckinLocked(pw,args);
 else     mStats.dumpLocked(pw);
  }
}
