{
  if (mSocket != null) {
    return true;
  }
  Log.i(mTag,"connecting...");
  try {
    mSocket=new LocalSocket();
    LocalSocketAddress address=new LocalSocketAddress(mServiceName,LocalSocketAddress.Namespace.RESERVED);
    mSocket.connect(address);
    mIn=mSocket.getInputStream();
    mOut=mSocket.getOutputStream();
  }
 catch (  IOException ex) {
    disconnect();
    return false;
  }
  return true;
}
