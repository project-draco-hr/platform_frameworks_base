{
  int off=0, count;
  if (len < 0)   return false;
  while (off != len) {
    try {
      count=mIn.read(buffer,off,len - off);
      if (count <= 0) {
        Log.e(mTag,"read error " + count);
        break;
      }
      off+=count;
    }
 catch (    IOException ex) {
      Log.e(mTag,"read exception",ex);
      break;
    }
  }
  if (off == len)   return true;
  disconnect();
  return false;
}
