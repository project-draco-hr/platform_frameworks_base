{
  if (state == WifiManager.WIFI_STATE_ENABLED) {
    if (mScanner != null) {
      mScanner.resume();
    }
  }
 else {
    mLastInfo=null;
    mLastNetworkInfo=null;
    if (mScanner != null) {
      mScanner.pause();
    }
  }
  mMainHandler.obtainMessage(MainHandler.MSG_WIFI_STATE_CHANGED,state,0).sendToTarget();
}
