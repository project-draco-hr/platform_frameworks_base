{
  if (state == WifiManager.WIFI_STATE_ENABLED) {
    if (mScanner != null) {
      mScanner.resume();
    }
  }
 else {
    mLastInfo=null;
    mLastNetworkInfo=null;
    if (mScanner != null) {
      mScanner.pause();
    }
  }
  if (mListener != null) {
    mListener.onWifiStateChanged(state);
  }
}
