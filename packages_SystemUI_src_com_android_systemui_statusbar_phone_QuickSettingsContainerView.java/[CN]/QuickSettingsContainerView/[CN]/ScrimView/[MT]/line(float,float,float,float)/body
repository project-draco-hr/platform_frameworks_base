{
  final int a=mStrokeWidth * 2;
  final Path p=new Path();
  p.moveTo(x1,y1);
  p.lineTo(x2,y2);
  if (y1 == y2) {
    p.moveTo(x1 + a,y1 + a);
    p.lineTo(x1,y1);
    p.lineTo(x1 + a,y1 - a);
    p.moveTo(x2 - a,y2 - a);
    p.lineTo(x2,y2);
    p.lineTo(x2 - a,y2 + a);
  }
  if (x1 == x2) {
    p.moveTo(x1 - a,y1 + a);
    p.lineTo(x1,y1);
    p.lineTo(x1 + a,y1 + a);
    p.moveTo(x2 - a,y2 - a);
    p.lineTo(x2,y2);
    p.lineTo(x2 + a,y2 - a);
  }
  return p;
}
