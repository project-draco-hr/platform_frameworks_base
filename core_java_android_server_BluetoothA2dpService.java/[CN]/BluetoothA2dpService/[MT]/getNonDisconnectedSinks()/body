{
  mContext.enforceCallingOrSelfPermission(BLUETOOTH_PERM,"Need BLUETOOTH permission");
  Set<BluetoothDevice> sinks=lookupSinksMatchingStates(new int[]{BluetoothA2dp.STATE_CONNECTED,BluetoothA2dp.STATE_PLAYING,BluetoothA2dp.STATE_CONNECTING,BluetoothA2dp.STATE_DISCONNECTING});
  return sinks.toArray(new BluetoothDevice[sinks.size()]);
}
