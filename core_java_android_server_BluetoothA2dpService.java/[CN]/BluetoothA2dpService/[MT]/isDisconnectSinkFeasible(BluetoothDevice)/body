{
  String path=mBluetoothService.getObjectPathFromAddress(device.getAddress());
  if (path == null) {
    return false;
  }
  int state=getSinkState(device);
switch (state) {
case BluetoothA2dp.STATE_DISCONNECTED:
    return false;
case BluetoothA2dp.STATE_DISCONNECTING:
  return true;
}
return true;
}
