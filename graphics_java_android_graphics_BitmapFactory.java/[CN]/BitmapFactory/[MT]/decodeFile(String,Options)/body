{
  Bitmap bm=null;
  InputStream stream=null;
  try {
    stream=new FileInputStream(pathName);
    bm=decodeStream(stream,null,opts);
  }
 catch (  Exception e) {
    Log.e("BitmapFactory","Unable to decode stream: " + e);
  }
 finally {
    if (stream != null) {
      try {
        stream.close();
      }
 catch (      IOException e) {
      }
    }
  }
  return bm;
}
