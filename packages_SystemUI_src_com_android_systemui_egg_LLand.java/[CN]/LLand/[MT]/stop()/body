{
  if (mAnimating) {
    mAnim.cancel();
    mAnim=null;
    mAnimating=false;
    mScoreField.setTextColor(0xFFFFFFFF);
    mScoreField.setBackgroundResource(R.drawable.scorecard_gameover);
    mTimeOfDay=irand(0,SKIES.length);
    mFrozen=true;
    postDelayed(new Runnable(){
      @Override public void run(){
        mFrozen=false;
      }
    }
,250);
  }
}
