{
  if (!HIGH_END && (mode == MODE_SEMI_TRANSPARENT || mode == MODE_TRANSLUCENT || mode == MODE_TRANSPARENT)) {
    mode=MODE_OPAQUE;
  }
  if (!HIGH_END && (mode == MODE_LIGHTS_OUT_TRANSPARENT)) {
    mode=MODE_LIGHTS_OUT;
  }
  if (mMode == mode)   return;
  int oldMode=mMode;
  mMode=mode;
  if (DEBUG)   Log.d(mTag,String.format("%s -> %s animate=%s",modeToString(oldMode),modeToString(mode),animate));
  onTransition(oldMode,mMode,animate);
}
