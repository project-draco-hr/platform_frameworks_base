{
  Field field=null;
  try {
    field=clazz.getDeclaredField(fieldName);
    field.setAccessible(true);
  }
 catch (  NoSuchFieldException e) {
    Class<?> superClass=clazz.getSuperclass();
    if (superClass != null) {
      field=findFieldNamed(fieldName,superClass);
    }
  }
  return field;
}
