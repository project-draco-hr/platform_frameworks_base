{
  boolean trusted=(certs != null && (certs.length > 0));
  if (trusted) {
    try {
      SSLParameters.getDefaultTrustManager().checkServerTrusted((X509Certificate[])certs,"RSA");
    }
 catch (    GeneralSecurityException e) {
      String exceptionMessage=e != null ? e.getMessage() : "none";
      if (Config.LOGD) {
        Log.d(LOG_TAG,"hasValidCertificateChain(): sec. exception: " + exceptionMessage);
      }
      trusted=false;
    }
  }
  return trusted;
}
