{
  Cursor c=null;
  try {
    c=mMediaProvider.query(mObjectsUri,new String[]{Files.FileColumns._ID,column},ID_WHERE,new String[]{Integer.toString(id)},null);
    if (c != null && c.moveToNext()) {
      outValue[0]=c.getLong(1);
      return true;
    }
    return false;
  }
 catch (  Exception e) {
    return false;
  }
 finally {
    if (c != null) {
      c.close();
    }
  }
}
