{
  if (!mBrowserFrame.firstLayoutDone()) {
    mRestoredX=x;
    mRestoredY=y;
    return;
  }
  if (mWebView != null) {
    Message msg=Message.obtain(mWebView.mPrivateHandler,WebViewClassic.SCROLL_TO_MSG_ID,animate ? 1 : 0,onlyIfImeIsShowing ? 1 : 0,new Point(x,y));
    if (mDrawIsScheduled) {
      mEventHub.sendMessage(Message.obtain(null,EventHub.MESSAGE_RELAY,msg));
    }
 else {
      msg.sendToTarget();
    }
  }
}
