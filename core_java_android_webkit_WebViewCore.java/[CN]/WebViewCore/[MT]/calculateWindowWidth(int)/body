{
  int width=viewWidth;
  if (mSettings.getUseWideViewPort()) {
    if (mViewportWidth == -1) {
      width=WebViewClassic.DEFAULT_VIEWPORT_WIDTH;
    }
 else     if (mViewportWidth > 0) {
      width=mViewportWidth;
    }
 else {
      width=Math.round(mWebViewClassic.getViewWidth() / mWebViewClassic.getDefaultZoomScale());
    }
  }
  return width;
}
