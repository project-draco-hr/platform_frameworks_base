{
  if (!mBrowserFrame.firstLayoutDone()) {
    return;
  }
  if (mWebView != null) {
    Message msg=Message.obtain(mWebView.mPrivateHandler,WebView.SCROLL_BY_MSG_ID,dx,dy,new Boolean(animate));
    if (mDrawIsScheduled) {
      mEventHub.sendMessage(Message.obtain(null,EventHub.MESSAGE_RELAY,msg));
    }
 else {
      msg.sendToTarget();
    }
  }
}
