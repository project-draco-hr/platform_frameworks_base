{
synchronized (mEventHub) {
    boolean hasResume=mEventHub.hasMessages(EventHub.RESUME_TIMERS);
    boolean hasPause=mEventHub.hasMessages(EventHub.PAUSE_TIMERS);
    mEventHub.removeMessages();
    mEventHub.sendMessageAtFrontOfQueue(Message.obtain(null,EventHub.DESTROY));
    if (hasPause) {
      mEventHub.sendMessageAtFrontOfQueue(Message.obtain(null,EventHub.PAUSE_TIMERS));
    }
    if (hasResume) {
      mEventHub.sendMessageAtFrontOfQueue(Message.obtain(null,EventHub.RESUME_TIMERS));
    }
    mEventHub.blockMessages();
    mWebView=null;
  }
}
