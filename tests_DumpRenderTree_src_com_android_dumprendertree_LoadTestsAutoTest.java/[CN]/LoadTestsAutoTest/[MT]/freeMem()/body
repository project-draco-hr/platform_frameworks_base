{
  Log.v(LOGTAG,"freeMem: calling gc/finalization...");
  final VMRuntime runtime=VMRuntime.getRuntime();
  runtime.gcSoftReferences();
  runtime.runFinalizationSync();
  runtime.gcSoftReferences();
  runtime.runFinalizationSync();
  runtime.gcSoftReferences();
  runtime.runFinalizationSync();
  Runtime.getRuntime().runFinalization();
  Runtime.getRuntime().gc();
  Runtime.getRuntime().gc();
}
