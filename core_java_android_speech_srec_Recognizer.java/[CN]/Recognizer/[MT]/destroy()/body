{
  try {
    if (mVocabulary != 0)     SR_VocabularyDestroy(mVocabulary);
  }
  finally {
    mVocabulary=0;
    try {
      if (mRecognizer != 0)       SR_RecognizerUnsetup(mRecognizer);
    }
  finally {
      try {
        if (mRecognizer != 0)         SR_RecognizerDestroy(mRecognizer);
      }
  finally {
        mRecognizer=0;
        try {
          SR_SessionDestroy();
        }
  finally {
          PMemShutdown();
        }
      }
    }
  }
}
