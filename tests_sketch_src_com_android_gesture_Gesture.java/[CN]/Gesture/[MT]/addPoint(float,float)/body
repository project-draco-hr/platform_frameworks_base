{
  mPtsBuffer.add(new PointF(x,y));
  if (mBBX == null) {
    mBBX=new RectF();
    mBBX.top=y;
    mBBX.left=x;
    mBBX.right=x;
    mBBX.bottom=y;
    mLength=0;
  }
 else {
    PointF lst=mPtsBuffer.get(mPtsBuffer.size() - 2);
    mLength+=Math.sqrt(Math.pow(x - lst.x,2) + Math.pow(y - lst.y,2));
    mBBX.union(x,y);
  }
  mTimestamp=System.currentTimeMillis();
}
