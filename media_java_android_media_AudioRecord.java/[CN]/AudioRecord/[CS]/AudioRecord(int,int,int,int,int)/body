{
  mState=STATE_UNINITIALIZED;
  mRecordingState=RECORDSTATE_STOPPED;
  if ((mInitializationLooper=Looper.myLooper()) == null) {
    mInitializationLooper=Looper.getMainLooper();
  }
  audioParamCheck(audioSource,sampleRateInHz,channelConfig,audioFormat);
  audioBuffSizeCheck(bufferSizeInBytes);
  int initResult=native_setup(new WeakReference<AudioRecord>(this),mRecordSource,mSampleRate,mChannelCount,mAudioFormat,mNativeBufferSizeInBytes);
  if (initResult != SUCCESS) {
    loge("Error code " + initResult + " when initializing native AudioRecord object.");
    return;
  }
  mState=STATE_INITIALIZED;
}
