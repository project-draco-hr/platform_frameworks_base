{
  if (mState != STATE_INITIALIZED || mAudioFormat == AudioFormat.ENCODING_PCM_FLOAT) {
    return ERROR_INVALID_OPERATION;
  }
  if ((readMode != READ_BLOCKING) && (readMode != READ_NON_BLOCKING)) {
    Log.e(TAG,"AudioRecord.read() called with invalid blocking mode");
    return ERROR_BAD_VALUE;
  }
  if ((audioData == null) || (offsetInShorts < 0) || (sizeInShorts < 0)|| (offsetInShorts + sizeInShorts < 0)|| (offsetInShorts + sizeInShorts > audioData.length)) {
    return ERROR_BAD_VALUE;
  }
  return native_read_in_short_array(audioData,offsetInShorts,sizeInShorts,readMode == READ_BLOCKING);
}
