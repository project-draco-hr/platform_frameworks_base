{
  if (fd == null) {
    throw new IOException("socket not created");
  }
  if (optID == SocketOptions.SO_TIMEOUT) {
    return 0;
  }
  int value=getOption_native(fd,optID);
switch (optID) {
case SocketOptions.SO_RCVBUF:
case SocketOptions.SO_SNDBUF:
    return value;
case SocketOptions.SO_REUSEADDR:
default :
  return value;
}
}
