{
  Cursor c=null;
  try {
    c=mProvider.query(mPackageName,mUri,new String[]{Files.FileColumns._ID,column},ID_WHERE,new String[]{Integer.toString(id)},null,null);
    if (c != null && c.moveToNext()) {
      return new Long(c.getLong(1));
    }
  }
 catch (  Exception e) {
  }
 finally {
    if (c != null) {
      c.close();
    }
  }
  return null;
}
