{
  if (showing) {
    if ((getWindowSystemUiVisibility() & (SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN | SYSTEM_UI_FLAG_LAYOUT_STABLE)) == (SYSTEM_UI_FLAG_LAYOUT_FULLSCREEN | SYSTEM_UI_FLAG_LAYOUT_STABLE)) {
      setDisabledSystemUiVisibility(SYSTEM_UI_FLAG_FULLSCREEN);
    }
  }
 else {
    setDisabledSystemUiVisibility(0);
  }
}
