{
  if (mContent == null) {
    mContent=findViewById(com.android.internal.R.id.content);
    mActionBarTop=(ActionBarContainer)findViewById(com.android.internal.R.id.action_bar_container);
    mDecorToolbar=getDecorToolbar(findViewById(com.android.internal.R.id.action_bar));
    mActionBarBottom=(ActionBarContainer)findViewById(com.android.internal.R.id.split_action_bar);
  }
}
