{
  int off=0, count;
  if (len < 0)   return false;
  while (off != len) {
    try {
      count=mIn.read(buffer,off,len - off);
      if (count <= 0) {
        Slog.e(TAG,"read error " + count);
        break;
      }
      off+=count;
    }
 catch (    IOException ex) {
      Slog.e(TAG,"read exception");
      break;
    }
  }
  if (LOCAL_DEBUG) {
    Slog.i(TAG,"read " + len + " bytes");
  }
  if (off == len)   return true;
  disconnect();
  return false;
}
