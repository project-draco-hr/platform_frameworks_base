{
switch (item.getItemId()) {
case R.id.benchmark_mode:
    mView.setBenchmarkMode();
  return true;
case R.id.debug_mode:
AlertDialog.Builder builder=new AlertDialog.Builder(this);
builder.setTitle("Pick a Test");
builder.setItems(mView.getTestNames(),new DialogInterface.OnClickListener(){
public void onClick(DialogInterface dialog,int item){
Toast.makeText(getApplicationContext(),"Switching to: " + mView.getTestNames()[item],Toast.LENGTH_SHORT).show();
mView.setDebugMode(item);
}
}
);
builder.show();
return true;
default :
return super.onOptionsItemSelected(item);
}
}
