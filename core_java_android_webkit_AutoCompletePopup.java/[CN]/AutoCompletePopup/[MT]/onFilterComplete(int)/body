{
  boolean showDropDown=(count > 0) && (mInputConnection.getIsAutoFillable() || mText.length() > 0);
  if (showDropDown) {
    if (!mPopup.isShowing()) {
      mPopup.setInputMethodMode(ListPopupWindow.INPUT_METHOD_NEEDED);
    }
    mPopup.show();
    mPopup.getListView().setOverScrollMode(View.OVER_SCROLL_ALWAYS);
  }
 else {
    mPopup.dismiss();
  }
}
