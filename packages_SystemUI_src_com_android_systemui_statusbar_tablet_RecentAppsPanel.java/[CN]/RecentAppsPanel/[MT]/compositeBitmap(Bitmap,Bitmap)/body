{
  Bitmap outBitmap=background.copy(background.getConfig(),true);
  if (thumbnail != null) {
    Canvas canvas=new Canvas(outBitmap);
    Paint paint=new Paint();
    paint.setAntiAlias(true);
    paint.setFilterBitmap(true);
    paint.setAlpha(255);
    final int srcWidth=thumbnail.getWidth();
    final int srcHeight=thumbnail.getHeight();
    canvas.drawBitmap(thumbnail,new Rect(0,0,srcWidth - 1,srcHeight - 1),new RectF(GLOW_PADDING,GLOW_PADDING - 7.0f,outBitmap.getWidth() - GLOW_PADDING + 3.0f,outBitmap.getHeight() - GLOW_PADDING + 7.0f),paint);
  }
  return outBitmap;
}
