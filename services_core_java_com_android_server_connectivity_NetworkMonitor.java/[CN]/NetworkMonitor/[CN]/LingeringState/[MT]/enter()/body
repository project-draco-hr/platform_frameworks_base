{
  mBroadcastReceiver=new CustomIntentReceiver(ACTION_LINGER_EXPIRED,++mLingerToken,CMD_LINGER_EXPIRED);
  mIntent=mBroadcastReceiver.getPendingIntent();
  long wakeupTime=SystemClock.elapsedRealtime() + mLingerDelayMs;
  mAlarmManager.setWindow(AlarmManager.ELAPSED_REALTIME_WAKEUP,wakeupTime,mLingerDelayMs / 6,mIntent);
}
