{
  mList.removeCallbacks(mDeferHide);
  if (mAlwaysShow && state == STATE_NONE) {
    state=STATE_VISIBLE;
  }
  if (state == mState) {
    return;
  }
switch (state) {
case STATE_NONE:
    transitionToHidden();
  break;
case STATE_VISIBLE:
transitionToVisible();
break;
case STATE_DRAGGING:
if (transitionPreviewLayout(mCurrentSection)) {
transitionToDragging();
}
 else {
transitionToVisible();
}
break;
}
mState=state;
refreshDrawablePressedState();
}
