{
switch (state) {
case STATE_NONE:
    mHandler.removeCallbacks(mScrollFade);
  mList.invalidate();
break;
case STATE_VISIBLE:
if (mState != STATE_VISIBLE) {
resetThumbPos();
}
case STATE_DRAGGING:
mHandler.removeCallbacks(mScrollFade);
break;
case STATE_EXIT:
int viewWidth=mList.getWidth();
mList.invalidate(viewWidth - mThumbW,mThumbY,viewWidth,mThumbY + mThumbH);
break;
}
mState=state;
refreshDrawableState();
}
