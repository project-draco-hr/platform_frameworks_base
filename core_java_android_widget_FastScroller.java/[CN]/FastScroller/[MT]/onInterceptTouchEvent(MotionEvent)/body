{
switch (ev.getActionMasked()) {
case MotionEvent.ACTION_DOWN:
    if (isPointInside(ev.getX(),ev.getY())) {
      if (mList.isInScrollingContainer()) {
        mInitialTouchY=ev.getY();
        startPendingDrag();
        return false;
      }
      beginDrag();
      return true;
    }
  break;
case MotionEvent.ACTION_UP:
case MotionEvent.ACTION_CANCEL:
cancelPendingDrag();
break;
}
return false;
}
