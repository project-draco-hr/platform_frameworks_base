{
  boolean inTrack=false;
switch (mPosition) {
default :
case View.SCROLLBAR_POSITION_RIGHT:
    inTrack=x > mList.getWidth() - mThumbW;
  break;
case View.SCROLLBAR_POSITION_LEFT:
inTrack=x < mThumbW;
break;
}
return inTrack && (mTrackDrawable != null || y >= mThumbY && y <= mThumbY + mThumbH);
}
