{
  mPendingDrag=-1;
  setState(STATE_DRAGGING);
  if (mListAdapter == null && mList != null) {
    getSectionsFromIndexer();
  }
  if (mList != null) {
    mList.requestDisallowInterceptTouchEvent(true);
    mList.reportScrollStateChange(OnScrollListener.SCROLL_STATE_TOUCH_SCROLL);
  }
  cancelFling();
}
