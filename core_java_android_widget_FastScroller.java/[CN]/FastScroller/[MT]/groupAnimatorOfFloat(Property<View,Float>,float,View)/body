{
  AnimatorSet animSet=new AnimatorSet();
  AnimatorSet.Builder builder=null;
  for (int i=views.length - 1; i >= 0; i--) {
    final Animator anim=ObjectAnimator.ofFloat(views[i],property,value);
    if (builder == null) {
      builder=animSet.play(anim);
    }
 else {
      builder.with(anim);
    }
  }
  return animSet;
}
