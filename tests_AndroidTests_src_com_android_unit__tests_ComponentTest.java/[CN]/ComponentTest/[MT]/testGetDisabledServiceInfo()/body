{
  mPackageManager.setComponentEnabledSetting(DISABLED_SERVICE_COMPONENTNAME,COMPONENT_ENABLED_STATE_DEFAULT,PackageManager.DONT_KILL_APP);
  try {
    mPackageManager.getServiceInfo(DISABLED_SERVICE_COMPONENTNAME,0);
    fail("Attempt to get info on disabled component should fail.");
  }
 catch (  PackageManager.NameNotFoundException e) {
  }
  final ServiceInfo serviceInfo=mPackageManager.getServiceInfo(DISABLED_SERVICE_COMPONENTNAME,GET_DISABLED_COMPONENTS);
  assertNotNull(serviceInfo);
  assertFalse(serviceInfo.enabled);
}
