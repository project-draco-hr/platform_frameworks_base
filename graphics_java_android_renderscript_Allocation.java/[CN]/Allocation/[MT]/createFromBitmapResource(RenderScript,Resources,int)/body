{
  if (rs.getApplicationContext().getApplicationInfo().targetSdkVersion >= 18) {
    return createFromBitmapResource(rs,res,id,MipmapControl.MIPMAP_NONE,USAGE_SHARED | USAGE_SCRIPT | USAGE_GRAPHICS_TEXTURE);
  }
  return createFromBitmapResource(rs,res,id,MipmapControl.MIPMAP_NONE,USAGE_GRAPHICS_TEXTURE);
}
