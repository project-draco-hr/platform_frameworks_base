{
  rs.validate();
  if (type.getID(rs) == 0) {
    throw new RSInvalidStateException("Bad Type");
  }
  int id=rs.nAllocationCreateTyped(type.getID(rs),mips.mID,usage,0);
  if (id == 0) {
    throw new RSRuntimeException("Allocation creation failed.");
  }
  return new Allocation(id,rs,type,usage);
}
