{
  if (view == null)   return null;
  view.setAlpha(0f);
  view.setTranslationY(mStartTranslation);
  view.animate().alpha(1f).translationY(0).setInterpolator(mLinearOutSlowIn).setDuration(APPEAR_DURATION).setStartDelay(delay).setListener(null);
  if (view.hasOverlappingRendering()) {
    view.animate().withLayer();
  }
  return view.animate();
}
