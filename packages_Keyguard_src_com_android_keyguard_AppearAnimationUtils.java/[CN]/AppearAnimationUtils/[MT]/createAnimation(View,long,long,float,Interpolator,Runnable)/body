{
  if (view != null) {
    view.setAlpha(0f);
    view.setTranslationY(startTranslationY);
    view.animate().alpha(1f).translationY(0).setInterpolator(interpolator).setDuration(duration).setStartDelay(delay);
    if (view.hasOverlappingRendering()) {
      view.animate().withLayer();
    }
    if (endRunnable != null) {
      view.animate().withEndAction(endRunnable);
    }
  }
}
