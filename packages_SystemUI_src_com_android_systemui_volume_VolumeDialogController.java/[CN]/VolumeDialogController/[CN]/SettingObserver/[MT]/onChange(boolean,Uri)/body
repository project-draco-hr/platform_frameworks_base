{
  boolean changed=false;
  if (SERVICE_URI.equals(uri)) {
    final String setting=Settings.Secure.getString(mContext.getContentResolver(),Settings.Secure.VOLUME_CONTROLLER_SERVICE_COMPONENT);
    final boolean enabled=setting != null && mComponent != null && mComponent.equals(ComponentName.unflattenFromString(setting));
    if (enabled == mEnabled)     return;
    if (enabled) {
      register();
    }
    mEnabled=enabled;
  }
  if (ZEN_MODE_URI.equals(uri)) {
    changed=updateZenModeW();
  }
  if (ZEN_MODE_CONFIG_URI.equals(uri)) {
    changed=updateZenModeConfigW();
  }
  if (changed) {
    mCallbacks.onStateChanged(mState);
  }
}
