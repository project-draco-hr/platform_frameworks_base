{
  validateBlock(blockIndex);
  checkConnected();
  if (data.length != 16) {
    throw new IllegalArgumentException("must write 16-bytes");
  }
  byte[] cmd=new byte[data.length + 2];
  cmd[0]=(byte)0xA0;
  cmd[1]=(byte)blockIndex;
  System.arraycopy(data,0,cmd,2,data.length);
  transceive(cmd,false);
}
