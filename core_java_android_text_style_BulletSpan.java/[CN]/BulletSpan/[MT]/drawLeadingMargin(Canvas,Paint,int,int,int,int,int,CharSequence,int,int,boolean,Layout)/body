{
  if (((Spanned)text).getSpanStart(this) == start) {
    Paint.Style style=p.getStyle();
    int oldcolor=0;
    if (mWantColor) {
      oldcolor=p.getColor();
      p.setColor(mColor);
    }
    p.setStyle(Paint.Style.FILL);
    c.drawCircle(x + dir * BULLET_RADIUS,(top + bottom) / 2.0f,BULLET_RADIUS,p);
    if (mWantColor) {
      p.setColor(oldcolor);
    }
    p.setStyle(style);
  }
}
