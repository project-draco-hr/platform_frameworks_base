{
  ensureInUserProfiles(user,"Cannot resolve activity for unrelated profile " + user);
  if (!isUserEnabled(user)) {
    return null;
  }
  long ident=Binder.clearCallingIdentity();
  try {
    ResolveInfo app=mPm.resolveActivityAsUser(intent,PackageManager.MATCH_DIRECT_BOOT_AWARE | PackageManager.MATCH_DIRECT_BOOT_UNAWARE,user.getIdentifier());
    return app;
  }
  finally {
    Binder.restoreCallingIdentity(ident);
  }
}
