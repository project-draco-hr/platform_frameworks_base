{
  if (preference == mEnabledSwitch) {
    if (newValue != Boolean.TRUE) {
      mOnSwitch.setChecked(false);
      stopDemoMode();
    }
    setGlobal(DemoMode.DEMO_MODE_ALLOWED,newValue == Boolean.TRUE ? 1 : 0);
  }
 else   if (preference == mOnSwitch) {
    if (newValue == Boolean.TRUE) {
      startDemoMode();
    }
 else {
      stopDemoMode();
    }
  }
 else {
    return false;
  }
  return true;
}
