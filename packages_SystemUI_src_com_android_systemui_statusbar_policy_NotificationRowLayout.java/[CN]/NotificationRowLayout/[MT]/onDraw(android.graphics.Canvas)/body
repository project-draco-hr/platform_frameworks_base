{
  super.onDraw(c);
  if (DEBUG) {
    Slog.d(TAG,"onDraw: canvas height: " + c.getHeight() + "px; measured height: "+ getMeasuredHeight()+ "px");
    c.save();
    c.clipRect(6,6,c.getWidth() - 6,getMeasuredHeight() - 6,android.graphics.Region.Op.DIFFERENCE);
    c.drawColor(0xFFFF8000);
    c.restore();
  }
}
