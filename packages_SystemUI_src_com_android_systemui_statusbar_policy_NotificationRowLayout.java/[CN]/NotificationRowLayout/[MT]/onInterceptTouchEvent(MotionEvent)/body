{
  final int action=ev.getAction();
switch (action) {
case MotionEvent.ACTION_DOWN:
    mVT.clear();
  mVT.addMovement(ev);
mInitialTouchX=ev.getX();
mInitialTouchY=ev.getY();
mSlidingChild=null;
break;
case MotionEvent.ACTION_MOVE:
mVT.addMovement(ev);
if (mSlidingChild == null) {
if (Math.abs(ev.getX() - mInitialTouchX) > 4) {
final int count=getChildCount();
int y=0;
int childIdx=0;
for (; childIdx < count; childIdx++) {
mSlidingChild=getChildAt(childIdx);
if (mSlidingChild.getVisibility() == GONE) {
continue;
}
y+=mRowHeight;
if (mInitialTouchY < y) break;
}
mInitialTouchX-=mSlidingChild.getTranslationX();
mSlidingChild.animate().cancel();
if (DEBUG) {
Slog.d(TAG,String.format("now sliding child %d: %s (touchY=%.1f, rowHeight=%d, count=%d)",childIdx,mSlidingChild,mInitialTouchY,mRowHeight,count));
}
}
}
break;
}
return mSlidingChild != null;
}
