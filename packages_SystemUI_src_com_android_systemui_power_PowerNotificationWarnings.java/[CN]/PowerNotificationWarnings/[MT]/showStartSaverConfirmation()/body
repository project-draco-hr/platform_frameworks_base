{
  final AlertDialog d=new AlertDialog.Builder(mLightContext).setTitle(R.string.battery_saver_confirmation_title).setMessage(R.string.battery_saver_confirmation_text).setNegativeButton(android.R.string.cancel,null).setPositiveButton(R.string.battery_saver_confirmation_ok,mStartSaverMode).create();
  d.getWindow().setType(WindowManager.LayoutParams.TYPE_SYSTEM_ERROR);
  d.getWindow().getAttributes().privateFlags|=WindowManager.LayoutParams.PRIVATE_FLAG_SHOW_FOR_ALL_USERS;
  d.show();
}
