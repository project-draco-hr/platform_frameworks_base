{
  mDevicePolicyManager=IDevicePolicyManager.Stub.asInterface(ServiceManager.getService(Context.DEVICE_POLICY_SERVICE));
  if (mDevicePolicyManager == null) {
    showError("Error: Could not access the Device Policy Manager. Is the system running?");
    return;
  }
  String command=nextArgRequired();
switch (command) {
case COMMAND_SET_DEVICE_OWNER:
    runSetDeviceOwner(nextArgRequired());
  break;
default :
throw new IllegalArgumentException("unknown command '" + command + "'");
}
}
