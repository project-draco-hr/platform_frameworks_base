{
  try {
    Ringtone r=new Ringtone(context);
    if (streamType >= 0) {
      r.setStreamType(streamType);
    }
    r.open(ringtoneUri);
    return r;
  }
 catch (  Exception ex) {
    Log.e(TAG,"Failed to open ringtone " + ringtoneUri);
  }
  try {
    AssetFileDescriptor afd=context.getResources().openRawResourceFd(com.android.internal.R.raw.fallbackring);
    if (afd != null) {
      Ringtone r=new Ringtone(context);
      r.open(afd);
      afd.close();
      return r;
    }
  }
 catch (  Exception ex) {
  }
  Log.e(TAG,"unable to find a usable ringtone");
  return null;
}
