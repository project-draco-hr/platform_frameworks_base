{
  super(context,attrs,defStyle);
  TypedArray atts=context.obtainStyledAttributes(attrs,R.styleable.BatteryMeterView,defStyle,0);
  final int frameColor=atts.getColor(R.styleable.BatteryMeterView_frameColor,context.getColor(R.color.batterymeter_frame_color));
  mDrawable=new BatteryMeterDrawable(context,new Handler(),frameColor);
  atts.recycle();
  setImageDrawable(mDrawable);
}
