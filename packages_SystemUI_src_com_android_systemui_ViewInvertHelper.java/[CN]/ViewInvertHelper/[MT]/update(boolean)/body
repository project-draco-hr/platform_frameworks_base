{
  if (invert) {
    updateInvertPaint(1f);
    for (int i=0; i < mTargets.size(); i++) {
      mTargets.get(i).setLayerType(View.LAYER_TYPE_HARDWARE,mDarkPaint);
    }
  }
 else {
    for (int i=0; i < mTargets.size(); i++) {
      mTargets.get(i).setLayerType(View.LAYER_TYPE_NONE,null);
    }
  }
}
