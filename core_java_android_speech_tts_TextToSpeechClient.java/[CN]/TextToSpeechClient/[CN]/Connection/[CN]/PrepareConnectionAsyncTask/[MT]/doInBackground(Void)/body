{
synchronized (mLock) {
    if (isCancelled()) {
      return null;
    }
    try {
      mService.setCallback(getCallerIdentity(),mCallback);
      return requestEngineStatus(mService);
    }
 catch (    RemoteException re) {
      Log.e(TAG,"Error setting up the TTS service");
      return null;
    }
  }
}
