{
  if (context == null)   throw new IllegalArgumentException("context can't be null");
  if (defaultRequestCallbacks == null)   throw new IllegalArgumentException("defaultRequestCallbacks can't be null");
  if (connectionCallbacks == null)   throw new IllegalArgumentException("connectionCallbacks can't be null");
  mContext=context;
  mEnginesHelper=new TtsEngines(mContext);
  mCallbacks=new HashMap<String,Pair<UtteranceId,RequestCallbacks>>();
  mDefaultRequestCallbacks=defaultRequestCallbacks;
  mConnectionCallbacks=connectionCallbacks;
  mRequestedEngine=engine;
  mFallbackToDefault=fallbackToDefaultEngine;
}
