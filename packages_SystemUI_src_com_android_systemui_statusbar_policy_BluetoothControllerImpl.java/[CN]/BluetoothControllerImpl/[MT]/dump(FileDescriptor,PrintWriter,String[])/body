{
  pw.println("BluetoothController state:");
  pw.print("  mAdapter=");
  pw.println(mAdapter);
  pw.print("  mEnabled=");
  pw.println(mEnabled);
  pw.print("  mConnecting=");
  pw.println(mConnecting);
  pw.print("  mLastDevice=");
  pw.println(mLastDevice);
  pw.print("  mCallbacks.size=");
  pw.println(mCallbacks.size());
  pw.print("  mProfiles=");
  pw.println(profilesToString(mProfiles));
  pw.print("  mDeviceInfo.size=");
  pw.println(mDeviceInfo.size());
  for (int i=0; i < mDeviceInfo.size(); i++) {
    final BluetoothDevice device=mDeviceInfo.keyAt(i);
    final DeviceInfo info=mDeviceInfo.valueAt(i);
    pw.print("    ");
    pw.print(deviceToString(device));
    pw.print('(');
    pw.print(uuidsToString(device));
    pw.print(')');
    pw.print("    ");
    pw.println(infoToString(info));
  }
}
