{
  if (view instanceof KeyguardWidgetFrame) {
    removeView(view);
  }
 else {
    int pos=getWidgetPageIndex(view);
    if (pos != -1) {
      KeyguardWidgetFrame frame=(KeyguardWidgetFrame)getChildAt(pos);
      frame.removeView(view);
      removeView(frame);
    }
 else {
      Slog.w(TAG,"removeWidget() can't find:" + view);
    }
  }
}
