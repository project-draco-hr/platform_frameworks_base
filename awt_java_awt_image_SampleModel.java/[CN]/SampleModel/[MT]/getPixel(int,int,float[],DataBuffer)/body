{
  if (x < 0 || y < 0 || x >= this.width || y >= this.height) {
    throw new ArrayIndexOutOfBoundsException(Messages.getString("awt.63"));
  }
  float pixel[];
  if (fArray == null) {
    pixel=new float[numBands];
  }
 else {
    pixel=fArray;
  }
  for (int i=0; i < numBands; i++) {
    pixel[i]=getSampleFloat(x,y,i,data);
  }
  return pixel;
}
