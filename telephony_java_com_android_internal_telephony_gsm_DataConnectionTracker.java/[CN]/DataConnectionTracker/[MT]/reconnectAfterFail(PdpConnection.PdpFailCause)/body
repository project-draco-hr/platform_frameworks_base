{
  if (state == State.FAILED) {
    Log.d(LOG_TAG,"PDP activate failed. Scheduling next attempt for " + (nextReconnectDelay / 1000) + "s");
    try {
      IAlarmManager am=IAlarmManager.Stub.asInterface(ServiceManager.getService(Context.ALARM_SERVICE));
      PendingIntent sender=PendingIntent.getBroadcast(phone.getContext(),0,new Intent(INTENT_RECONNECT_ALARM),0);
      am.set(AlarmManager.ELAPSED_REALTIME_WAKEUP,SystemClock.elapsedRealtime() + nextReconnectDelay,sender);
    }
 catch (    RemoteException ex) {
    }
    nextReconnectDelay*=2;
    if (!shouldPostNotification(lastFailCauseCode)) {
      Log.d(LOG_TAG,"NOT Posting GPRS Unavailable notification " + "-- likely transient error");
    }
 else {
      notifyNoData(lastFailCauseCode);
    }
  }
}
