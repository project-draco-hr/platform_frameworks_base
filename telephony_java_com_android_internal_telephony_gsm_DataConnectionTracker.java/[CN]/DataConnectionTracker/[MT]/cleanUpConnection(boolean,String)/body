{
  if (DBG)   log("Clean up connection due to " + reason);
  for (  PdpConnection pdp : pdpList) {
    if (tearDown) {
      Message msg=obtainMessage(EVENT_DISCONNECT_DONE);
      pdp.disconnect(msg);
    }
 else {
      pdp.clearSettings();
    }
  }
  stopNetStatPoll();
  setState(State.IDLE);
  phone.notifyDataConnection(reason);
  mActiveApn=null;
}
