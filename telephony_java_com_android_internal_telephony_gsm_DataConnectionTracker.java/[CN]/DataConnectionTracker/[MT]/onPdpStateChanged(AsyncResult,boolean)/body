{
  ArrayList<PDPContextState> pdpStates;
  pdpStates=(ArrayList<PDPContextState>)(ar.result);
  if (ar.exception != null) {
    return;
  }
  if (state == State.CONNECTED && !pdpStatesHasCID(pdpStates,cidActive)) {
    Log.i(LOG_TAG,"PDP connection has dropped. Reconnecting");
    cleanUpConnection(true,null);
    trySetupData(null);
    return;
  }
  if (true) {
    if (state == State.CONNECTED && !pdpStatesHasActiveCID(pdpStates,cidActive)) {
      if (!explicitPoll) {
        phone.mCM.getPDPContextList(this.obtainMessage(EVENT_GET_PDP_LIST_COMPLETE));
      }
 else {
        Log.i(LOG_TAG,"PDP connection has dropped (active=false case). " + " Reconnecting");
        cleanUpConnection(true,null);
        trySetupData(null);
      }
    }
  }
}
