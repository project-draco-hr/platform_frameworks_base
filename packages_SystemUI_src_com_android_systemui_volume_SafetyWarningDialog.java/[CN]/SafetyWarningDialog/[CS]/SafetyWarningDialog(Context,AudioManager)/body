{
  super(context);
  mContext=context;
  mAudioManager=audioManager;
  getWindow().setType(WindowManager.LayoutParams.TYPE_SYSTEM_ERROR);
  setMessage(mContext.getString(com.android.internal.R.string.safe_media_volume_warning));
  setButton(DialogInterface.BUTTON_POSITIVE,mContext.getString(com.android.internal.R.string.yes),this);
  setButton(DialogInterface.BUTTON_NEGATIVE,mContext.getString(com.android.internal.R.string.no),(OnClickListener)null);
  setOnDismissListener(this);
  final IntentFilter filter=new IntentFilter(Intent.ACTION_CLOSE_SYSTEM_DIALOGS);
  context.registerReceiver(mReceiver,filter);
}
