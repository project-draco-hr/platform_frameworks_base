{
synchronized (mSurfaceAndCodecLock) {
    if (mCodec != null) {
      mBuffer.clear();
      mBuffer.putInt(mSurfaceWidth);
      mBuffer.putInt(mSurfaceHeight);
      mBuffer.putInt(mDensityDpi);
      mBuffer.flip();
      getTransport().sendMessage(Protocol.DisplaySourceService.ID,Protocol.DisplaySourceService.MSG_SINK_AVAILABLE,mBuffer);
    }
 else {
      getTransport().sendMessage(Protocol.DisplaySourceService.ID,Protocol.DisplaySourceService.MSG_SINK_NOT_AVAILABLE,null);
    }
  }
}
