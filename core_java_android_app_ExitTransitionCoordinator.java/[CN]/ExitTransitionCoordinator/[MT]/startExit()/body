{
  if (!mIsExitStarted) {
    mIsExitStarted=true;
    ViewGroup decorView=getDecor();
    if (decorView != null) {
      decorView.suppressLayout(true);
    }
    moveSharedElementsToOverlay();
    startTransition(new Runnable(){
      @Override public void run(){
        beginTransitions();
      }
    }
);
  }
}
