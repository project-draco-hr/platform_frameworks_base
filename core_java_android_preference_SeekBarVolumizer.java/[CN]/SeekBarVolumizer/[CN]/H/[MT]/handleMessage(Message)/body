{
  if (msg.what == UPDATE_SLIDER) {
    if (mSeekBar != null) {
      mLastProgress=msg.arg1;
      mLastAudibleStreamVolume=Math.abs(msg.arg2);
      final boolean muted=msg.arg2 < 0;
      if (muted != mMuted) {
        mMuted=muted;
        if (mCallback != null) {
          mCallback.onMuted(mMuted,isZenMuted());
        }
      }
      updateSeekBar();
    }
  }
}
