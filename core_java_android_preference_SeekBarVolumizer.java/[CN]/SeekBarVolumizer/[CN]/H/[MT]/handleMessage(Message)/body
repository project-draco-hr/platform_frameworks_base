{
  if (msg.what == UPDATE_SLIDER) {
    if (mSeekBar != null) {
      mLastProgress=msg.arg1;
      final boolean muted=msg.arg2 != 0;
      if (muted != mMuted) {
        mMuted=muted;
        if (mCallback != null) {
          mCallback.onMuted(mMuted);
        }
      }
      updateSeekBar();
    }
  }
}
