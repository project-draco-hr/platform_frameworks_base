{
  if (mSeekBar != null) {
    mSeekBar.setOnSeekBarChangeListener(null);
  }
  mSeekBar=seekBar;
  mSeekBar.setOnSeekBarChangeListener(null);
  mSeekBar.setMax(mMaxStreamVolume);
  mSeekBar.setProgress(mLastProgress > -1 ? mLastProgress : mOriginalStreamVolume);
  mSeekBar.setOnSeekBarChangeListener(this);
}
