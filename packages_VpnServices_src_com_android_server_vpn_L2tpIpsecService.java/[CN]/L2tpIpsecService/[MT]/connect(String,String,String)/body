{
  L2tpIpsecProfile p=getProfile();
  VpnDaemons daemons=getDaemons();
  DaemonProxy ipsec=daemons.startIpsecForL2tp(serverIp,Credentials.USER_PRIVATE_KEY + p.getUserCertificate(),Credentials.USER_CERTIFICATE + p.getUserCertificate(),Credentials.CA_CERTIFICATE + p.getCaCertificate());
  ipsec.closeControlSocket();
  sleep(2000);
  daemons.startL2tp(serverIp,(p.isSecretEnabled() ? p.getSecretString() : null),username,password);
}
