{
  String hostIp=getHostIp();
  AndroidServiceProxy ipsecService=startService(IPSEC_DAEMON);
  ipsecService.sendCommand(String.format("SETKEY %s %s",hostIp,serverIp));
  ipsecService.sendCommand(String.format("SET_CERTS %s %s %s %s",serverIp,getCaCertPath(),getUserCertPath(),getUserkeyPath()));
  L2tpIpsecProfile p=getProfile();
  MtpdHelper.sendCommand(this,L2tpService.L2TP_DAEMON,serverIp,L2tpService.L2TP_PORT,(p.isSecretEnabled() ? p.getSecretString() : null),username,password);
}
