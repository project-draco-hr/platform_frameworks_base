{
  Cursor cursor=contentResolver.query(CONTENT_URI,PROJECTION,KEY + "=?",new String[]{name},null);
  try {
    if (cursor != null && cursor.moveToFirst()) {
      return Boolean.parseBoolean(cursor.getString(1));
    }
  }
  finally {
    if (cursor != null)     cursor.close();
  }
  return def;
}
