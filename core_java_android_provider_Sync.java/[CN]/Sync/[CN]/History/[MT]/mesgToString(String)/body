{
  if (MESG_SUCCESS.equals(mesg))   return mesg;
  if (MESG_CANCELED.equals(mesg))   return mesg;
switch (Integer.parseInt(mesg)) {
case ERROR_SYNC_ALREADY_IN_PROGRESS:
    return "already in progress";
case ERROR_AUTHENTICATION:
  return "bad authentication";
case ERROR_IO:
return "network error";
case ERROR_PARSE:
return "parse error";
case ERROR_CONFLICT:
return "conflict detected";
case ERROR_TOO_MANY_DELETIONS:
return "too many deletions";
case ERROR_TOO_MANY_RETRIES:
return "too many retries";
case ERROR_INTERNAL:
return "internal error";
default :
return "unknown error";
}
}
