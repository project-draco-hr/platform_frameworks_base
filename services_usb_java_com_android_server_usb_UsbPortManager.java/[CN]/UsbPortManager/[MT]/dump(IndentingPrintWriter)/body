{
synchronized (mLock) {
    pw.print("USB Port State:");
    if (!mSimulatedPorts.isEmpty()) {
      pw.print(" (simulation active; end with 'dumpsys usb reset')");
    }
    pw.println();
    if (mPorts.isEmpty()) {
      pw.println("  <no ports>");
    }
 else {
      for (      PortInfo portInfo : mPorts.values()) {
        pw.println("  " + portInfo.mUsbPort.getId() + ": "+ portInfo);
      }
    }
  }
}
