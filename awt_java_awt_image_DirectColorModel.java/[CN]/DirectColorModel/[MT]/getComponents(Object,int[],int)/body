{
  if (components == null) {
    components=new int[numComponents + offset];
  }
  int intPixel=0;
switch (transferType) {
case DataBuffer.TYPE_BYTE:
    byte ba[]=(byte[])pixel;
  intPixel=ba[0] & 0xff;
break;
case DataBuffer.TYPE_USHORT:
short sa[]=(short[])pixel;
intPixel=sa[0] & 0xffff;
break;
case DataBuffer.TYPE_INT:
int ia[]=(int[])pixel;
intPixel=ia[0];
break;
default :
throw new UnsupportedOperationException(Messages.getString("awt.22D",transferType));
}
return getComponents(intPixel,components,offset);
}
