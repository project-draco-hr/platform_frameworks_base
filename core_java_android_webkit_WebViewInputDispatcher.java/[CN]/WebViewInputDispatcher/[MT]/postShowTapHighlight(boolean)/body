{
synchronized (mLock) {
    if (show) {
      if (!mPostShowTapHighlightScheduled) {
        return;
      }
      mPostShowTapHighlightScheduled=false;
    }
 else {
      if (!mPostHideTapHighlightScheduled) {
        return;
      }
      mPostHideTapHighlightScheduled=false;
    }
    mUiCallbacks.showTapHighlight(show);
  }
}
