{
synchronized (mDeviceListLock) {
    try {
      for (      final int id : mMtpManager.getOpenedDeviceIds()) {
        closeDeviceInternal(id);
      }
      mRootScanner.pause();
    }
 catch (    InterruptedException|IOException e) {
      throw new RuntimeException(e);
    }
 finally {
      mDatabase.close();
      mAppFuse.close();
      super.shutdown();
    }
  }
}
