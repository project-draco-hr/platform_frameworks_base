{
  if (!mDeviceToolkits.containsKey(deviceId)) {
    return;
  }
  if (DEBUG) {
    Log.d(TAG,"Close device " + deviceId);
  }
  getDeviceToolkit(deviceId).close();
  mDeviceToolkits.remove(deviceId);
  mMtpManager.closeDevice(deviceId);
  if (mDeviceToolkits.size() == 0) {
    mRootScanner.pause();
  }
}
