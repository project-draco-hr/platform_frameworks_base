{
synchronized (mMethodMap) {
    if (mCurMethod == method) {
      if (mCurClient != null) {
        mCurClient.curSession=new SessionState(mCurClient,method,session);
        mCurClient.sessionRequested=false;
        InputBindResult res=attachNewInputLocked(true,true);
        if (res.method != null) {
          executeOrSendMessage(mCurClient.client,mCaller.obtainMessageOO(MSG_BIND_METHOD,mCurClient.client,res));
        }
      }
    }
  }
}
