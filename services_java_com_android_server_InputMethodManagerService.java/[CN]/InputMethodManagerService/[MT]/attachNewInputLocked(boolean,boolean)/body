{
  if (!mBoundToMethod) {
    executeOrSendMessage(mCurMethod,mCaller.obtainMessageOO(MSG_BIND_INPUT,mCurMethod,mCurClient.binding));
    mBoundToMethod=true;
  }
  final SessionState session=mCurClient.curSession;
  if (initial) {
    executeOrSendMessage(session.method,mCaller.obtainMessageOO(MSG_START_INPUT,session,mCurAttribute));
  }
 else {
    executeOrSendMessage(session.method,mCaller.obtainMessageOO(MSG_RESTART_INPUT,session,mCurAttribute));
  }
  if (mShowRequested) {
    if (DEBUG)     Log.v(TAG,"Attach new input asks to show input");
    showCurrentInputLocked(mShowExplicitlyRequested ? 0 : InputMethodManager.SHOW_IMPLICIT);
  }
  return needResult ? new InputBindResult(session.session,mCurId,mCurSeq) : null;
}
