{
synchronized (mMethodMap) {
    if (DEBUG)     Log.v(TAG,"Service disconnected: " + name + " mCurIntent="+ mCurIntent);
    if (mCurMethod != null && mCurIntent != null && name.equals(mCurIntent.getComponent())) {
      clearCurMethod();
      mShowRequested=mInputShown;
      mInputShown=false;
      if (mCurClient != null) {
        executeOrSendMessage(mCurClient.client,mCaller.obtainMessageIO(MSG_UNBIND_METHOD,mCurSeq,mCurClient.client));
      }
    }
  }
}
