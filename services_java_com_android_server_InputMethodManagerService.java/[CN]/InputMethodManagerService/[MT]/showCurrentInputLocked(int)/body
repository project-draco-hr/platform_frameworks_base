{
  mShowRequested=true;
  if ((flags & InputMethodManager.SHOW_IMPLICIT) == 0) {
    mShowExplicitlyRequested=true;
  }
  if (mCurMethod != null) {
    executeOrSendMessage(mCurMethod,mCaller.obtainMessageIO(MSG_SHOW_SOFT_INPUT,mShowExplicitlyRequested ? 1 : 0,mCurMethod));
    mInputShown=true;
  }
}
