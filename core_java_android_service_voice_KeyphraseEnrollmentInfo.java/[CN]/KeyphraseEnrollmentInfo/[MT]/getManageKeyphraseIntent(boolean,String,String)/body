{
  if (mEnrollmentPackage == null || mEnrollmentPackage.isEmpty()) {
    Slog.w(TAG,"No enrollment application exists");
    return null;
  }
  if (isKeyphraseEnrollmentSupported(keyphrase,locale)) {
    Intent intent=new Intent(ACTION_MANAGE_VOICE_KEYPHRASES).setPackage(mEnrollmentPackage).putExtra(EXTRA_VOICE_KEYPHRASE_HINT_TEXT,keyphrase).putExtra(EXTRA_VOICE_KEYPHRASE_LOCALE,locale);
    if (!enroll)     intent.putExtra(EXTRA_VOICE_KEYPHRASE_UNENROLL,true);
    return intent;
  }
  return null;
}
