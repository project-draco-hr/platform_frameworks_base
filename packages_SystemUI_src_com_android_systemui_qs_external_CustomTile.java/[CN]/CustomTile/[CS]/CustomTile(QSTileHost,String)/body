{
  super(host);
  mWindowManager=WindowManagerGlobal.getWindowManagerService();
  mComponent=ComponentName.unflattenFromString(action);
  mServiceManager=host.getTileServices().getTileWrapper(this);
  mService=mServiceManager.getTileService();
  mTile=new Tile(mComponent);
  mUser=ActivityManager.getCurrentUser();
  android.graphics.drawable.Icon defaultIcon;
  try {
    PackageManager pm=mContext.getPackageManager();
    ServiceInfo info=pm.getServiceInfo(mComponent,PackageManager.MATCH_ENCRYPTION_AWARE_AND_UNAWARE);
    defaultIcon=info.icon != 0 ? android.graphics.drawable.Icon.createWithResource(mComponent.getPackageName(),info.icon) : null;
    mTile.setIcon(defaultIcon);
    mTile.setLabel(info.loadLabel(pm));
  }
 catch (  Exception e) {
    defaultIcon=null;
  }
  mDefaultIcon=defaultIcon;
  try {
    mService.setQSTile(mTile);
  }
 catch (  RemoteException e) {
  }
}
