{
synchronized (this) {
    final int token=mNextBarrierToken++;
    final Message msg=Message.obtain();
    msg.when=when;
    msg.arg1=token;
    Message prev=null;
    Message p=mMessages;
    if (when != 0) {
      while (p != null && p.when <= when) {
        prev=p;
        p=p.next;
      }
    }
    if (prev != null) {
      msg.next=p;
      prev.next=msg;
    }
 else {
      msg.next=p;
      mMessages=msg;
    }
    return token;
  }
}
