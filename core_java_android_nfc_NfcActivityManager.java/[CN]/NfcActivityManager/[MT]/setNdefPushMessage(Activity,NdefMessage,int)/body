{
  boolean isResumed;
synchronized (NfcActivityManager.this) {
    NfcActivityState state=getActivityState(activity);
    state.ndefMessage=message;
    state.flags=flags;
    isResumed=state.resumed;
  }
  if (isResumed) {
    requestNfcServiceCallback();
  }
 else {
    verifyNfcPermission();
  }
}
