{
  NfcActivityState state=getOrCreateState(activity,callback != null);
  if (state == null || state.ndefMessageCallback == callback) {
    return;
  }
  state.ndefMessageCallback=callback;
  if (callback == null) {
    maybeRemoveState(activity,state);
  }
  if (state.resumed) {
    updateNfcService(state);
  }
}
