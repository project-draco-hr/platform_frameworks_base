{
  mNeedsInput=needsInput;
  if (mWindowLayoutParams != null) {
    if (needsInput) {
      mWindowLayoutParams.flags&=~WindowManager.LayoutParams.FLAG_ALT_FOCUSABLE_IM;
    }
 else {
      mWindowLayoutParams.flags|=WindowManager.LayoutParams.FLAG_ALT_FOCUSABLE_IM;
    }
    mViewManager.updateViewLayout(mKeyguardHost,mWindowLayoutParams);
  }
}
