{
  if (DEBUG)   Log.d(TAG,"hide()");
  if (mKeyguardHost != null) {
    mKeyguardHost.setVisibility(View.GONE);
    if (mKeyguardView != null) {
      mKeyguardHost.postDelayed(new Runnable(){
        public void run(){
          mKeyguardHost.removeView(mKeyguardView);
          mKeyguardView.cleanUp();
          mKeyguardView=null;
        }
      }
,500);
    }
  }
}
