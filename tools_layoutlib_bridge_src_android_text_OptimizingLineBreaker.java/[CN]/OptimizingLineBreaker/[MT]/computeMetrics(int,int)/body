{
  boolean f=false;
  float w=0, pw=0;
  for (int i=start; i < end; i++) {
    Primitive p=mPrimitives.get(i);
    if (p.type == PrimitiveType.BOX || p.type == PrimitiveType.GLUE) {
      w+=p.width;
      if (p.type == PrimitiveType.BOX) {
        pw=w;
      }
    }
 else     if (p.type == PrimitiveType.VARIABLE) {
      w=mTabStops.width(w);
      f=true;
    }
  }
  return new LineMetrics(w,pw,f);
}
