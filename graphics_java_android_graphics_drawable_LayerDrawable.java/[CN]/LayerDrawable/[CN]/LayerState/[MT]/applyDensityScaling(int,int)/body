{
  if (mPaddingLeft > 0) {
    mPaddingLeft=Drawable.scaleFromDensity(mPaddingLeft,sourceDensity,targetDensity,false);
  }
  if (mPaddingTop > 0) {
    mPaddingTop=Drawable.scaleFromDensity(mPaddingTop,sourceDensity,targetDensity,false);
  }
  if (mPaddingRight > 0) {
    mPaddingRight=Drawable.scaleFromDensity(mPaddingRight,sourceDensity,targetDensity,false);
  }
  if (mPaddingBottom > 0) {
    mPaddingBottom=Drawable.scaleFromDensity(mPaddingBottom,sourceDensity,targetDensity,false);
  }
  if (mPaddingStart > 0) {
    mPaddingStart=Drawable.scaleFromDensity(mPaddingStart,sourceDensity,targetDensity,false);
  }
  if (mPaddingEnd > 0) {
    mPaddingEnd=Drawable.scaleFromDensity(mPaddingEnd,sourceDensity,targetDensity,false);
  }
}
