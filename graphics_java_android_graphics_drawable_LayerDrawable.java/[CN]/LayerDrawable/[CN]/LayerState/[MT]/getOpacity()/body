{
  if (mHaveOpacity) {
    return mOpacity;
  }
  final int N=mNum;
  int op=N > 0 ? mChildren[0].mDrawable.getOpacity() : PixelFormat.TRANSPARENT;
  for (int i=1; i < N; i++) {
    op=Drawable.resolveOpacity(op,mChildren[i].mDrawable.getOpacity());
  }
  mOpacity=op;
  mHaveOpacity=true;
  return op;
}
