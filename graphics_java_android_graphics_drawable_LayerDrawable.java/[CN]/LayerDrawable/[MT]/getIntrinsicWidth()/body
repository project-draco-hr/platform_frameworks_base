{
  int width=-1;
  final Rec[] array=mLayerState.mArray;
  final int N=mLayerState.mNum;
  int padL=0, padR=0;
  for (int i=0; i < N; i++) {
    final Rec r=array[i];
    int w=r.mDrawable.getIntrinsicWidth() + r.mInsetL + r.mInsetR+ padL+ padR;
    if (w > width) {
      width=w;
    }
    padL+=mPaddingL[i];
    padR+=mPaddingR[i];
  }
  return width;
}
