{
  if (!mMutated && super.mutate() == this) {
    mLayerState=createConstantState(mLayerState,null);
    final ChildDrawable[] array=mLayerState.mChildren;
    final int N=mLayerState.mNum;
    for (int i=0; i < N; i++) {
      final Drawable dr=array[i].mDrawable;
      if (dr != null) {
        dr.mutate();
      }
    }
    mMutated=true;
  }
  return this;
}
