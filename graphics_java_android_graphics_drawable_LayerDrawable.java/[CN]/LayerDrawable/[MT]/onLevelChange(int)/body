{
  final Rec[] array=mLayerState.mArray;
  final int N=mLayerState.mNum;
  boolean paddingChanged=false;
  boolean changed=false;
  for (int i=0; i < N; i++) {
    final Rec r=array[i];
    if (r.mDrawable.setLevel(level)) {
      changed=true;
    }
    if (reapplyPadding(i,r)) {
      paddingChanged=true;
    }
  }
  if (paddingChanged) {
    onBoundsChange(getBounds());
  }
  return changed;
}
