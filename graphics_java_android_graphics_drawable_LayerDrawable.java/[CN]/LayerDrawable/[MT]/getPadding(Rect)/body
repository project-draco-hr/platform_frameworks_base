{
  padding.left=0;
  padding.top=0;
  padding.right=0;
  padding.bottom=0;
  final Rec[] array=mLayerState.mArray;
  final int N=mLayerState.mNum;
  for (int i=0; i < N; i++) {
    reapplyPadding(i,array[i]);
    padding.left+=mPaddingL[i];
    padding.top+=mPaddingT[i];
    padding.right+=mPaddingR[i];
    padding.bottom+=mPaddingB[i];
  }
  return true;
}
