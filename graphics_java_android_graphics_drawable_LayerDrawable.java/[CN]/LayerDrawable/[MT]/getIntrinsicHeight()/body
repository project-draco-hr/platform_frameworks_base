{
  int height=-1;
  final Rec[] array=mLayerState.mArray;
  final int N=mLayerState.mNum;
  int padT=0, padB=0;
  for (int i=0; i < N; i++) {
    final Rec r=array[i];
    int h=r.mDrawable.getIntrinsicHeight() + r.mInsetT + r.mInsetB+ +padT+ padB;
    if (h > height) {
      height=h;
    }
    padT+=mPaddingT[i];
    padB+=mPaddingB[i];
  }
  return height;
}
