{
  if (!Gravity.isHorizontal(gravity)) {
    if (width < 0) {
      gravity|=Gravity.FILL_HORIZONTAL;
    }
 else {
      gravity|=Gravity.START;
    }
  }
  if (!Gravity.isVertical(gravity)) {
    if (height < 0) {
      gravity|=Gravity.FILL_VERTICAL;
    }
 else {
      gravity|=Gravity.TOP;
    }
  }
  return gravity;
}
