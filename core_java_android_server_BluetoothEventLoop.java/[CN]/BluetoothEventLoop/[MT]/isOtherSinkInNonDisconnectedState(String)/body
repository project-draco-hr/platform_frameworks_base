{
  List<BluetoothDevice> devices=mA2dp.getDevicesMatchingConnectionStates(new int[]{BluetoothA2dp.STATE_CONNECTED,BluetoothA2dp.STATE_CONNECTING,BluetoothA2dp.STATE_DISCONNECTING});
  if (devices.size() == 0)   return false;
  for (  BluetoothDevice dev : devices) {
    if (!dev.getAddress().equals(address))     return true;
  }
  return false;
}
