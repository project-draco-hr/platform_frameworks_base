{
synchronized (mAuthorities) {
    if (account != null) {
      AuthorityInfo authority=getAuthorityLocked(account,providerName,"getSyncProviderAutomatically");
      return authority != null ? authority.enabled : false;
    }
    int i=mAuthorities.size();
    while (i > 0) {
      i--;
      AuthorityInfo authority=mAuthorities.get(i);
      if (authority.authority.equals(providerName) && authority.enabled) {
        return true;
      }
    }
    return false;
  }
}
