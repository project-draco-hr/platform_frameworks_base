{
synchronized (mAuthorities) {
    mAuthorities.clear();
    mAccounts.clear();
    mPendingOperations.clear();
    mSyncStatus.clear();
    mSyncHistory.clear();
    readAccountInfoLocked();
    readStatusLocked();
    readPendingOperationsLocked();
    readStatisticsLocked();
    readLegacyAccountInfoLocked();
  }
}
