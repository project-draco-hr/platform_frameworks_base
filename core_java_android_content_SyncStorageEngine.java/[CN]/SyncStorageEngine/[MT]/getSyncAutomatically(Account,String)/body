{
synchronized (mAuthorities) {
    if (account != null) {
      AuthorityInfo authority=getAuthorityLocked(account,providerName,"getSyncAutomatically");
      return authority != null && authority.enabled;
    }
    int i=mAuthorities.size();
    while (i > 0) {
      i--;
      AuthorityInfo authority=mAuthorities.get(i);
      if (authority.authority.equals(providerName) && authority.enabled) {
        return true;
      }
    }
    return false;
  }
}
