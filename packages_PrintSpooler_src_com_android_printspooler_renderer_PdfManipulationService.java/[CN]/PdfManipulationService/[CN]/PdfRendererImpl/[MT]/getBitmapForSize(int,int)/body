{
  if (mBitmap != null) {
    if (mBitmap.getWidth() == width && mBitmap.getHeight() == height) {
      mBitmap.eraseColor(Color.WHITE);
      return mBitmap;
    }
    mBitmap.recycle();
  }
  mBitmap=Bitmap.createBitmap(width,height,Bitmap.Config.ARGB_8888);
  mBitmap.eraseColor(Color.WHITE);
  return mBitmap;
}
