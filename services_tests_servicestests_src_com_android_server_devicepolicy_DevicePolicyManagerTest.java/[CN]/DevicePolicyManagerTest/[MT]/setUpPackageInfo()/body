{
  final PackageInfo pi=mRealTestContext.getPackageManager().getPackageInfo(admin1.getPackageName(),0);
  assertTrue(pi.applicationInfo.flags != 0);
  doReturn(pi).when(mContext.ipackageManager).getPackageInfo(eq(admin1.getPackageName()),eq(0),eq(DpmMockContext.CALLER_USER_HANDLE));
  doReturn(pi).when(mContext.ipackageManager).getPackageInfo(eq(admin1.getPackageName()),eq(0),eq(UserHandle.USER_SYSTEM));
}
