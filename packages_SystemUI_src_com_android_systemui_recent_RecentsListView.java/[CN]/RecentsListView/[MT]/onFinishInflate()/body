{
  super.onFinishInflate();
  LayoutInflater inflater=(LayoutInflater)mContext.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
  View footer=inflater.inflate(R.layout.status_bar_recent_panel_footer,this,false);
