{
  super.onVisibilityChanged(changedView,visibility);
  int count=getAdapter().getCount();
  mLastVisiblePosition=count - 1;
  if (visibility == View.VISIBLE && changedView == this) {
    post(new Runnable(){
      public void run(){
        setSelection(mLastVisiblePosition);
      }
    }
);
  }
}
