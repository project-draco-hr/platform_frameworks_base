{
  mImageListener=listener;
  Looper looper;
  mHandler=handler;
  if (listener != null && mHandler == null) {
    if ((looper=Looper.myLooper()) != null) {
      mHandler=new Handler();
    }
 else {
      throw new IllegalArgumentException("Looper doesn't exist in the calling thread");
    }
  }
}
