{
  String currentUser=null;
  if (mUserManager.isUserSwitcherEnabled() && mUserSwitcherController != null) {
    currentUser=mUserSwitcherController.getCurrentUserName(mContext);
  }
  String text=null;
  if (!TextUtils.isEmpty(currentUser)) {
    text=mContext.getString(R.string.accessibility_quick_settings_user,currentUser);
  }
  if (!TextUtils.equals(getContentDescription(),text)) {
    setContentDescription(text);
  }
}
