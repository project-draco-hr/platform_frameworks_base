{
  super.finish();
  if (mPipManager.isRecentsShown()) {
    SystemUI[] services=((SystemUIApplication)getApplication()).getServices();
    for (int i=services.length - 1; i >= 0; i--) {
      if (services[i] instanceof Recents) {
        ((Recents)services[i]).showRecents(false,null);
        break;
      }
    }
  }
}
