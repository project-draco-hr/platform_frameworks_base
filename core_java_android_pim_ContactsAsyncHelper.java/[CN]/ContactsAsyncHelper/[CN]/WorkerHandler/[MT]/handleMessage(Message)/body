{
  WorkerArgs args=(WorkerArgs)msg.obj;
switch (msg.arg1) {
case EVENT_LOAD_IMAGE:
    InputStream inputStream=null;
  try {
    inputStream=Contacts.openContactPhotoInputStream(args.context.getContentResolver(),args.uri,true);
  }
 catch (  Exception e) {
    Log.e(LOG_TAG,"Error opening photo input stream",e);
  }
if (inputStream != null) {
  args.result=Drawable.createFromStream(inputStream,args.uri.toString());
  if (DBG)   Log.d(LOG_TAG,"Loading image: " + msg.arg1 + " token: "+ msg.what+ " image URI: "+ args.uri);
}
 else {
  args.result=null;
  if (DBG)   Log.d(LOG_TAG,"Problem with image: " + msg.arg1 + " token: "+ msg.what+ " image URI: "+ args.uri+ ", using default image.");
}
break;
default :
}
Message reply=ContactsAsyncHelper.this.obtainMessage(msg.what);
reply.arg1=msg.arg1;
reply.obj=msg.obj;
reply.sendToTarget();
}
