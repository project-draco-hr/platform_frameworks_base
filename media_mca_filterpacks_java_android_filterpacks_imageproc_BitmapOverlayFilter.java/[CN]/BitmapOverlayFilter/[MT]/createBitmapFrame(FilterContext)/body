{
  if (mBitmap != null) {
    FrameFormat format=ImageFormat.create(mBitmap.getWidth(),mBitmap.getHeight(),ImageFormat.COLORSPACE_RGBA,FrameFormat.TARGET_GPU);
    if (mFrame != null) {
      mFrame.release();
    }
    mFrame=context.getFrameManager().newFrame(format);
    mFrame.setBitmap(mBitmap);
    mBitmap.recycle();
    mBitmap=null;
  }
}
