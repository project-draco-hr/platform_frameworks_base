{
  if (isAvailable(status)) {
    handler.post(new Runnable(){
      @Override public void run(){
        listener.onCameraAvailable(id);
      }
    }
);
  }
 else {
    handler.post(new Runnable(){
      @Override public void run(){
        listener.onCameraUnavailable(id);
      }
    }
);
  }
}
