{
  mContactId=contactId;
  mContactUri=ContentUris.withAppendedId(Contacts.CONTENT_URI,mContactId);
  mContactSummaryUri=ContentUris.withAppendedId(Contacts.CONTENT_SUMMARY_URI,mContactId);
