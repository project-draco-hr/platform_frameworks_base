{
  Cursor photoCursor=null;
  Bitmap photoBm=null;
  try {
    photoCursor=mContentResolver.query(ContentUris.withAppendedId(Data.CONTENT_URI,photoId),new String[]{Photo.PHOTO},null,null,null);
    if (photoCursor != null && photoCursor.moveToFirst() && !photoCursor.isNull(0)) {
      byte[] photoData=photoCursor.getBlob(0);
      photoBm=BitmapFactory.decodeByteArray(photoData,0,photoData.length,options);
    }
  }
  finally {
    if (photoCursor != null) {
      photoCursor.close();
    }
  }
  return photoBm;
}
