{
  mDnsList=mDnsPinger.getDnsList();
  int numDnses=mDnsList.size();
  dnsCheckSuccesses=new int[numDnses];
  dnsResponseStrs=new String[numDnses];
  for (int i=0; i < numDnses; i++)   dnsResponseStrs[i]="";
  if (DBG) {
    dnsCheckLogStr=String.format("Pinging %s on ssid [%s]: ",mDnsList,mConnectionInfo.getSSID());
    log(dnsCheckLogStr);
  }
  idDnsMap.clear();
  for (int i=0; i < mNumDnsPings; i++) {
    for (int j=0; j < numDnses; j++) {
      idDnsMap.put(mDnsPinger.pingDnsAsync(mDnsList.get(j),mDnsPingTimeoutMs,DNS_START_DELAY_MS + DNS_INTRATEST_PING_INTERVAL_MS * i),j);
    }
  }
}
