{
  dnsCheckSuccesses=0;
  dnsCheckTries=0;
  ids.clear();
  InetAddress dns=mDnsPinger.getDns();
  if (DBG) {
    Slog.d(WWSM_TAG,"Starting DNS pings at " + SystemClock.elapsedRealtime());
    dnsCheckLogStr=String.format("Pinging %s on ssid [%s]: ",dns,mInitialConnInfo.getSSID());
  }
  for (int i=0; i < mNumDnsPings; i++) {
    ids.add(mDnsPinger.pingDnsAsync(dns,mDnsPingTimeoutMs,DNS_INTRATEST_PING_INTERVAL * i));
  }
}
