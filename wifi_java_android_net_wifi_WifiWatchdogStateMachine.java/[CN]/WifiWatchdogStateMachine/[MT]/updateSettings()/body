{
  if (DBG)   logd("Updating secure settings");
  if (sWifiOnly) {
    logd("Disabling poor network avoidance for wi-fi only device");
    mPoorNetworkDetectionEnabled=false;
  }
 else {
    mPoorNetworkDetectionEnabled=getSettingsGlobalBoolean(mContentResolver,Settings.Global.WIFI_WATCHDOG_POOR_NETWORK_TEST_ENABLED,DEFAULT_POOR_NETWORK_AVOIDANCE_ENABLED);
  }
}
