{
  Resources r=Resources.getSystem();
  CharSequence title=r.getText(com.android.internal.R.string.wifi_watchdog_network_disabled);
  CharSequence msg=r.getText(com.android.internal.R.string.wifi_watchdog_network_disabled_detailed);
  Notification wifiDisabledWarning=new Notification.Builder(mContext).setSmallIcon(com.android.internal.R.drawable.stat_sys_warning).setDefaults(Notification.DEFAULT_ALL).setTicker(title).setContentTitle(title).setContentText(msg).setContentIntent(PendingIntent.getActivity(mContext,0,new Intent(Settings.ACTION_WIFI_IP_SETTINGS).setFlags(Intent.FLAG_ACTIVITY_NEW_TASK),0)).setWhen(System.currentTimeMillis()).setAutoCancel(true).getNotification();
  NotificationManager notificationManager=(NotificationManager)mContext.getSystemService(Context.NOTIFICATION_SERVICE);
  notificationManager.notify("WifiWatchdog",wifiDisabledWarning.icon,wifiDisabledWarning);
}
