{
synchronized (mTextToSpeech) {
    if (!mReady) {
      if (DEBUG)       Log.w(WRAP_TAG,"[" + hashCode() + "] Attempted to speak before TTS init");
      return TextToSpeech.ERROR;
    }
 else {
      if (DEBUG)       Log.i(WRAP_TAG,"[" + hashCode() + "] Speak called from JS binder");
    }
    return mTextToSpeech.speak(text,queueMode,params);
  }
}
