{
synchronized (mTextToSpeech) {
    if (!mReady) {
      if (DEBUG)       Log.w(WRAP_TAG,"[" + hashCode() + "] Called shutdown before initialize");
    }
 else {
      if (DEBUG)       Log.i(WRAP_TAG,"[" + hashCode() + "] Shutting down text-to-speech from "+ "thread "+ Thread.currentThread().getId()+ "...");
    }
    mShutdown=true;
    mReady=false;
    mTextToSpeech.shutdown();
  }
}
