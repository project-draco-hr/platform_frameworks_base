{
  if (DEBUG) {
    Log.d(WRAP_TAG,"[" + hashCode() + "] Initializing text-to-speech on thread "+ Thread.currentThread().getId()+ "...");
  }
  final String pkgName=context.getPackageName();
  mReady=false;
  mShutdown=false;
  mTtsParams=new HashMap<String,String>();
  mTtsParams.put(Engine.KEY_PARAM_UTTERANCE_ID,WRAP_TAG);
  mTextToSpeech=new TextToSpeech(context,mInitListener,null,pkgName + ".**webview**",true);
  mTextToSpeech.setOnUtteranceProgressListener(mErrorListener);
}
