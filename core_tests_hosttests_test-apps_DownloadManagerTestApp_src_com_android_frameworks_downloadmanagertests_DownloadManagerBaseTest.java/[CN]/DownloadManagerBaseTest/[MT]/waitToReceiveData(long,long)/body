{
  int currentWaitTime=0;
  long expectedSize=getBytesDownloaded(id) + bytesToReceive;
  long currentSize=0;
  while ((currentSize=getBytesDownloaded(id)) <= expectedSize) {
    Log.i(LOG_TAG,String.format("expect: %d, cur: %d. Waiting for file to be written to...",expectedSize,currentSize));
    currentWaitTime=timeoutWait(currentWaitTime,WAIT_FOR_DOWNLOAD_POLL_TIME,MAX_WAIT_FOR_DOWNLOAD_TIME,"Timed out waiting for file to be written to.");
  }
}
