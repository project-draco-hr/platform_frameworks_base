{
  int currentWaitTime=0;
  long originalSize=getBytesDownloaded(id);
  long currentSize=0;
  while ((currentSize=getBytesDownloaded(id)) <= originalSize) {
    Log.i(LOG_TAG,String.format("orig: %d, cur: %d. Waiting for file to be written to...",originalSize,currentSize));
    currentWaitTime=timeoutWait(currentWaitTime,WAIT_FOR_DOWNLOAD_POLL_TIME,MAX_WAIT_FOR_DOWNLOAD_TIME,"Timed out waiting for file to be written to.");
  }
}
