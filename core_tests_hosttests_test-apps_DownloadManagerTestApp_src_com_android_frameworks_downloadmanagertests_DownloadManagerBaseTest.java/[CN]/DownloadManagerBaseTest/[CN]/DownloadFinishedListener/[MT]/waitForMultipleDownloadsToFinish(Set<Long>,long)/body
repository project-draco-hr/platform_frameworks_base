{
  long startTime=SystemClock.uptimeMillis();
synchronized (this) {
    while (!mFinishedDownloads.containsAll(ids)) {
      if (SystemClock.uptimeMillis() - startTime > timeout) {
        Log.i(LOG_TAG,"Timeout waiting for multiple downloads to finish");
        return false;
      }
 else {
        wait(timeout);
      }
    }
    return true;
  }
}
