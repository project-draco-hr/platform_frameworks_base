{
  int start=label.lastIndexOf('.');
  if (start >= 0)   start++;
 else   start=0;
  int end=label.length();
  for (int i=0; i < DUMP_MEM_BUCKETS.length; i++) {
    if (DUMP_MEM_BUCKETS[i] >= memKB) {
      long bucket=DUMP_MEM_BUCKETS[i] / 1024;
      out.append(bucket);
      out.append("MB ");
      out.append(label,start,end);
      return;
    }
  }
  out.append(memKB / 1024);
  out.append("MB ");
  out.append(label,start,end);
}
