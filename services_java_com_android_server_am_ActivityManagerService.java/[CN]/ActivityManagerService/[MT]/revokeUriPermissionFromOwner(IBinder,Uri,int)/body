{
synchronized (this) {
    UriPermissionOwner owner=UriPermissionOwner.fromExternalToken(token);
    if (owner == null) {
      throw new IllegalArgumentException("Unknown owner: " + token);
    }
    if (uri == null) {
      owner.removeUriPermissionsLocked(mode);
    }
 else {
      owner.removeUriPermissionLocked(uri,mode);
    }
  }
}
