{
  if (mAppSwitchesAllowedTime < SystemClock.uptimeMillis()) {
    return true;
  }
  final int perm=checkComponentPermission(android.Manifest.permission.STOP_APP_SWITCHES,callingPid,callingUid,-1,true);
  if (perm == PackageManager.PERMISSION_GRANTED) {
    return true;
  }
  Slog.w(TAG,name + " request from " + callingUid+ " stopped");
  return false;
}
