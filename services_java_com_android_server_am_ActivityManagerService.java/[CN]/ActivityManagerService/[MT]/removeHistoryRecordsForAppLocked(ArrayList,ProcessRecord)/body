{
  int i=list.size();
  if (localLOGV)   Log.v(TAG,"Removing app " + app + " from list "+ list+ " with "+ i+ " entries");
  while (i > 0) {
    i--;
    HistoryRecord r=(HistoryRecord)list.get(i);
    if (localLOGV)     Log.v(TAG,"Record #" + i + " "+ r+ ": app="+ r.app);
    if (r.app == app) {
      if (localLOGV)       Log.v(TAG,"Removing this entry!");
      list.remove(i);
    }
  }
}
