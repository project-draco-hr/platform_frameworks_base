{
  forceStopPackageLocked(packageName,UserHandle.getAppId(uid),false,false,true,false,UserHandle.getUserId(uid));
  Intent intent=new Intent(Intent.ACTION_PACKAGE_RESTARTED,Uri.fromParts("package",packageName,null));
  if (!mProcessesReady) {
    intent.addFlags(Intent.FLAG_RECEIVER_REGISTERED_ONLY | Intent.FLAG_RECEIVER_FOREGROUND);
  }
  intent.putExtra(Intent.EXTRA_UID,uid);
  intent.putExtra(Intent.EXTRA_USER_HANDLE,UserHandle.getUserId(uid));
  broadcastIntentLocked(null,null,intent,null,null,0,null,null,null,AppOpsManager.OP_NONE,false,false,MY_PID,Process.SYSTEM_UID,UserHandle.getUserId(uid));
}
