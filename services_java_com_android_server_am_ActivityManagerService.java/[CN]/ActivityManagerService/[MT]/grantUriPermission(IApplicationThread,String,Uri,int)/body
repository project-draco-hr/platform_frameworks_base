{
  enforceNotIsolatedCaller("grantUriPermission");
synchronized (this) {
    final ProcessRecord r=getRecordForAppLocked(caller);
    if (r == null) {
      throw new SecurityException("Unable to find app for caller " + caller + " when granting permission to uri "+ uri);
    }
    if (targetPkg == null) {
      throw new IllegalArgumentException("null target");
    }
    if (uri == null) {
      throw new IllegalArgumentException("null uri");
    }
    Preconditions.checkFlagsArgument(modeFlags,Intent.FLAG_GRANT_READ_URI_PERMISSION | Intent.FLAG_GRANT_WRITE_URI_PERMISSION);
    grantUriPermissionLocked(r.uid,targetPkg,uri,modeFlags,null);
  }
}
