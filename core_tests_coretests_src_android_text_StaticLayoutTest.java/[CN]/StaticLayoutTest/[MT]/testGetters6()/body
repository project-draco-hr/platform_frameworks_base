{
  int spacingAdd=2;
  LayoutBuilder b=builder().setText("This is a longer test").setIncludePad(true).setWidth(50).setSpacingAdd(spacingAdd);
  FontMetricsInt fmi=b.paint.getFontMetricsInt();
  Layout l=b.build();
  assertVertMetrics(l,fmi.top - fmi.ascent,fmi.bottom - fmi.descent,fmi.top,fmi.descent + spacingAdd,fmi.ascent,fmi.descent + spacingAdd,fmi.ascent,fmi.bottom + spacingAdd);
}
