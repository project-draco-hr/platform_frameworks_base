{
  if (working) {
    mSearchAutoComplete.setCompoundDrawablesWithIntrinsicBounds(null,null,mWorkingSpinner,null);
    ((Animatable)mWorkingSpinner).start();
  }
 else {
    mSearchAutoComplete.setCompoundDrawablesWithIntrinsicBounds(null,null,null,null);
    ((Animatable)mWorkingSpinner).stop();
  }
}
