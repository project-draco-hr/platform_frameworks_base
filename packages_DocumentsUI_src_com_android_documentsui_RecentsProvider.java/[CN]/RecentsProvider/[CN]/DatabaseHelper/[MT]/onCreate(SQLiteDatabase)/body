  db.execSQL("CREATE TABLE " + TABLE_RECENT + " ("+ RecentColumns.STACK+ " BLOB PRIMARY KEY ON CONFLICT REPLACE,"+ RecentColumns.TIMESTAMP+ " INTEGER"+ ")");
