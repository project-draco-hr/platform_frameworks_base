{
  Bundle extras=new Bundle(1);
  extras.putInt(Intent.EXTRA_UID,removedAppId >= 0 ? removedAppId : uid);
  extras.putBoolean(Intent.EXTRA_DATA_REMOVED,fullRemove);
  if (replacing) {
    extras.putBoolean(Intent.EXTRA_REPLACING,true);
  }
  extras.putBoolean(Intent.EXTRA_REMOVED_FOR_ALL_USERS,removedForAllUsers);
  if (removedPackage != null) {
    sendPackageBroadcast(Intent.ACTION_PACKAGE_REMOVED,removedPackage,extras,null,null,removedUsers);
    if (fullRemove && !replacing) {
      sendPackageBroadcast(Intent.ACTION_PACKAGE_FULLY_REMOVED,removedPackage,extras,null,null,removedUsers);
    }
  }
  if (removedAppId >= 0) {
    sendPackageBroadcast(Intent.ACTION_UID_REMOVED,null,extras,null,null,removedUsers);
  }
}
