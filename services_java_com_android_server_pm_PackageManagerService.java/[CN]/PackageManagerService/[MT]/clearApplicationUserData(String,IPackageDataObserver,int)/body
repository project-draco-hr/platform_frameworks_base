{
  mContext.enforceCallingOrSelfPermission(android.Manifest.permission.CLEAR_APP_USER_DATA,null);
  checkValidCaller(Binder.getCallingUid(),userId);
  mHandler.post(new Runnable(){
    public void run(){
      mHandler.removeCallbacks(this);
      final boolean succeeded;
synchronized (mInstallLock) {
        succeeded=clearApplicationUserDataLI(packageName,userId);
      }
      clearExternalStorageDataSync(packageName,true);
      if (succeeded) {
        DeviceStorageMonitorService dsm=(DeviceStorageMonitorService)ServiceManager.getService(DeviceStorageMonitorService.SERVICE);
        if (dsm != null) {
          dsm.updateMemory();
        }
      }
      if (observer != null) {
        try {
          observer.onRemoveCompleted(packageName,succeeded);
        }
 catch (        RemoteException e) {
          Log.i(TAG,"Observer no longer exists.");
        }
      }
    }
  }
);
}
