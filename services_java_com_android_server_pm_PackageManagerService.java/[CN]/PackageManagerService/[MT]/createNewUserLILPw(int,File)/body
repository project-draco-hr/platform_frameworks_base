{
  if (mInstaller != null) {
    path.mkdir();
    FileUtils.setPermissions(path.toString(),FileUtils.S_IRWXU | FileUtils.S_IRWXG | FileUtils.S_IXOTH,-1,-1);
    for (    PackageSetting ps : mSettings.mPackages.values()) {
      ps.setInstalled((ps.pkgFlags & ApplicationInfo.FLAG_SYSTEM) != 0,userHandle);
      mInstaller.createUserData(ps.name,UserHandle.getUid(userHandle,ps.appId),userHandle);
    }
    mSettings.writePackageRestrictionsLPr(userHandle);
  }
}
