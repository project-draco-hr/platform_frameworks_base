{
  final int preferredHeight=mDesiredDayHeight * mNumWeeks + mDesiredDayOfWeekHeight + mDesiredMonthHeight + getPaddingTop() + getPaddingBottom();
  final int preferredWidth=mDesiredCellWidth * DAYS_IN_WEEK + getPaddingStart() + getPaddingEnd();
  final int resolvedWidth=resolveSize(preferredWidth,widthMeasureSpec);
  final int resolvedHeight=resolveSize(preferredHeight,heightMeasureSpec);
  setMeasuredDimension(resolvedWidth,resolvedHeight);
}
