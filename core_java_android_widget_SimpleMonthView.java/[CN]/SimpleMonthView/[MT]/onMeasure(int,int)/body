{
  final int preferredHeight=mDayHeight * mNumWeeks + mDayOfWeekHeight + mMonthHeight + getPaddingTop() + getPaddingBottom();
  final int preferredWidth=mCellWidth * DAYS_IN_WEEK + getPaddingStart() + getPaddingEnd();
  final int resolvedWidth=resolveSize(preferredWidth,widthMeasureSpec);
  final int resolvedHeight=resolveSize(preferredHeight,heightMeasureSpec);
  setMeasuredDimension(resolvedWidth,resolvedHeight);
}
