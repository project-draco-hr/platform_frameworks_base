{
  int y=mMonthHeaderSize - (mMonthDayLabelTextSize / 2);
  int dayWidthHalf=(mWidth - mPadding * 2) / (mNumDays * 2);
  for (int i=0; i < mNumDays; i++) {
    int calendarDay=(i + mWeekStart) % mNumDays;
    int x=(2 * i + 1) * dayWidthHalf + mPadding;
    mDayLabelCalendar.set(Calendar.DAY_OF_WEEK,calendarDay);
    canvas.drawText(mDayLabelCalendar.getDisplayName(Calendar.DAY_OF_WEEK,Calendar.SHORT,Locale.getDefault()).toUpperCase(Locale.getDefault()),x,y,mMonthDayLabelPaint);
  }
}
