{
  final int v=mode == MODE_LIMITED ? Settings.Global.ZEN_MODE_LIMITED : mode == MODE_FULL ? Settings.Global.ZEN_MODE_FULL : Settings.Global.ZEN_MODE_OFF;
  AsyncTask.execute(new Runnable(){
    @Override public void run(){
      Settings.Global.putInt(mContext.getContentResolver(),Settings.Global.ZEN_MODE,v);
    }
  }
);
}
