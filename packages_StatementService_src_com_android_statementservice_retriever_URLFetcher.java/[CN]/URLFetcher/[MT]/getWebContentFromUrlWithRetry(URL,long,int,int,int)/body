{
  if (retry <= 0) {
    throw new IllegalArgumentException("retry should be a postive inetger.");
  }
  while (retry > 0) {
    try {
      return getWebContentFromUrl(url,fileSizeLimit,connectionTimeoutMillis);
    }
 catch (    IOException e) {
      retry--;
      if (retry == 0) {
        throw e;
      }
    }
    Thread.sleep(backoffMillis);
  }
  return null;
}
