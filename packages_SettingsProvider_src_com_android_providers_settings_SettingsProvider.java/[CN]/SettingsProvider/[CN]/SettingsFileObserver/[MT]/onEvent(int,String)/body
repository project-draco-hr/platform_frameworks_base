{
  int modsInFlight=sKnownMutationsInFlight.get();
  if (modsInFlight > 0) {
    return;
  }
  Log.d(TAG,"external modification to " + mPath + "; event="+ event);
  if (!mIsDirty.compareAndSet(false,true)) {
    return;
  }
  Log.d(TAG,"updating our caches for " + mPath);
  fullyPopulateCaches();
  mIsDirty.set(false);
}
