{
  final DragEvent ev;
synchronized (gRecyclerLock) {
    if (gRecyclerTop == null) {
      ev=new DragEvent();
      ev.init(action,x,y,description,data,dropPermissions,localState,result);
      return ev;
    }
    ev=gRecyclerTop;
    gRecyclerTop=ev.mNext;
    gRecyclerUsed-=1;
  }
  ev.mRecycledLocation=null;
  ev.mRecycled=false;
  ev.mNext=null;
  ev.init(action,x,y,description,data,dropPermissions,localState,result);
  return ev;
}
