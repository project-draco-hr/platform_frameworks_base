{
  if (!mDatePicker.getCalendarViewShown()) {
    mCalendar.set(Calendar.YEAR,year);
    mCalendar.set(Calendar.MONTH,month);
    mCalendar.set(Calendar.DAY_OF_MONTH,day);
    String title=DateUtils.formatDateTime(mContext,mCalendar.getTimeInMillis(),DateUtils.FORMAT_SHOW_DATE | DateUtils.FORMAT_SHOW_WEEKDAY | DateUtils.FORMAT_SHOW_YEAR| DateUtils.FORMAT_ABBREV_MONTH| DateUtils.FORMAT_ABBREV_WEEKDAY);
    setTitle(title);
    mTitleNeedsUpdate=true;
  }
 else {
    if (mTitleNeedsUpdate) {
      mTitleNeedsUpdate=false;
      setTitle(R.string.date_picker_dialog_title);
    }
  }
}
