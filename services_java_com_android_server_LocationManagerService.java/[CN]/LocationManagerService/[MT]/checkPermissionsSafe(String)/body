{
  if (LocationManager.GPS_PROVIDER.equals(provider) && (mContext.checkCallingPermission(ACCESS_FINE_LOCATION) != PackageManager.PERMISSION_GRANTED)) {
    throw new SecurityException("Requires ACCESS_FINE_LOCATION permission");
  }
  if (LocationManager.NETWORK_PROVIDER.equals(provider) && (mContext.checkCallingPermission(ACCESS_FINE_LOCATION) != PackageManager.PERMISSION_GRANTED) && (mContext.checkCallingPermission(ACCESS_COARSE_LOCATION) != PackageManager.PERMISSION_GRANTED)) {
    throw new SecurityException("Requires ACCESS_FINE_LOCATION or ACCESS_COARSE_LOCATION permission");
  }
}
