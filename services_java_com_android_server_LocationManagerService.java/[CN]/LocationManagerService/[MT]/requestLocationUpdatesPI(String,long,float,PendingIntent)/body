{
  try {
synchronized (mLock) {
      requestLocationUpdatesLocked(provider,minTime,minDistance,getReceiver(intent));
    }
  }
 catch (  SecurityException se) {
    throw se;
  }
catch (  IllegalArgumentException iae) {
    throw iae;
  }
catch (  Exception e) {
    Slog.e(TAG,"requestUpdates got exception:",e);
  }
}
