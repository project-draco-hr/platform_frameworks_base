{
  BlacklistObserver observer=new BlacklistObserver(mLocationHandler);
  mContext.getContentResolver().registerContentObserver(Settings.Secure.getUriFor(BLACKLIST_CONFIG_NAME),false,observer);
  mContext.getContentResolver().registerContentObserver(Settings.Secure.getUriFor(WHITELIST_CONFIG_NAME),false,observer);
  reloadBlacklist();
}
