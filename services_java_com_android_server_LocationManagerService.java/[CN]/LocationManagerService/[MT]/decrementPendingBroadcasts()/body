{
synchronized (mWakeLock) {
    if (--mPendingBroadcasts == 0) {
      try {
        if (mWakeLock.isHeld()) {
          mWakeLock.release();
          log("Released wakelock");
        }
 else {
          log("Can't release wakelock again!");
        }
      }
 catch (      Exception e) {
        Log.e(TAG,"exception in releaseWakeLock()",e);
      }
    }
  }
}
