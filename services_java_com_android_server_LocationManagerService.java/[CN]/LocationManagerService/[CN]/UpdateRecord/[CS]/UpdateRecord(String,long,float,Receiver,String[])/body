{
  mProvider=provider;
  mReceiver=receiver;
  mMinTime=minTime;
  mMinDistance=minDistance;
  mPackages=packages;
synchronized (mRecordsByProvider) {
    HashSet<UpdateRecord> records=mRecordsByProvider.get(provider);
    if (records == null) {
      records=new HashSet<UpdateRecord>();
      mRecordsByProvider.put(provider,records);
    }
    records.add(this);
  }
}
