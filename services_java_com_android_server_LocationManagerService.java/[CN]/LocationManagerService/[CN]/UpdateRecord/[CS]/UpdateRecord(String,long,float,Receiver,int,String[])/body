{
  mProvider=provider;
  mReceiver=receiver;
  mMinTime=minTime;
  mMinDistance=minDistance;
  mUid=uid;
  mPackages=packages;
  ArrayList<UpdateRecord> records=mRecordsByProvider.get(provider);
  if (records == null) {
    records=new ArrayList<UpdateRecord>();
    mRecordsByProvider.put(provider,records);
  }
  if (!records.contains(this)) {
    records.add(this);
  }
}
