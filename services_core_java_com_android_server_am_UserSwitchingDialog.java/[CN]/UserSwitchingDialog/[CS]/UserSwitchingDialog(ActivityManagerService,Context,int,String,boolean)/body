{
  super(context);
  mService=service;
  mUserId=userId;
  Resources res=context.getResources();
  setCancelable(false);
  setMessage(res.getString(com.android.internal.R.string.user_switching_message,userName));
  if (aboveSystem) {
    getWindow().setType(WindowManager.LayoutParams.TYPE_SYSTEM_ERROR);
  }
  WindowManager.LayoutParams attrs=getWindow().getAttributes();
  attrs.privateFlags=WindowManager.LayoutParams.PRIVATE_FLAG_SYSTEM_ERROR | WindowManager.LayoutParams.PRIVATE_FLAG_SHOW_FOR_ALL_USERS;
  getWindow().setAttributes(attrs);
}
