{
  state.visible=!(mKeyguard.isSecure() && mKeyguard.isShowing()) && mController.isHotspotSupported() && isHotspotRecentlyUsed();
  state.label=mContext.getString(R.string.quick_settings_hotspot_label);
  state.value=mController.isHotspotEnabled();
  state.iconId=state.visible && state.value ? R.drawable.ic_qs_hotspot_on : R.drawable.ic_qs_hotspot_off;
}
