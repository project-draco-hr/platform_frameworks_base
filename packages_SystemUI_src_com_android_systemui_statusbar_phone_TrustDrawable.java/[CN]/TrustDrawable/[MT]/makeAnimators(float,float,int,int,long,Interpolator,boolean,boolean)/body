{
  ValueAnimator alphaAnimator=configureAnimator(ValueAnimator.ofInt(startAlpha,endAlpha),duration,mAlphaUpdateListener,interpolator,repeating);
  ValueAnimator sizeAnimator=configureAnimator(ValueAnimator.ofFloat(startRadius,endRadius),duration,mRadiusUpdateListener,interpolator,repeating);
  AnimatorSet set=new AnimatorSet();
  set.playTogether(alphaAnimator,sizeAnimator);
  if (stateUpdateListener) {
    set.addListener(new StateUpdateAnimatorListener());
  }
  return set;
}
