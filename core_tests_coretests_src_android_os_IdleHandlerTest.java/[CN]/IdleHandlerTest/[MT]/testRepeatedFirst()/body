{
  TestHandlerThread tester=new BaseTestHandler(){
    int mCount;
    public void go(){
      super.go();
      mCount=0;
      mHandler.sendMessageDelayed(mHandler.obtainMessage(0),100);
      addIdleHandler();
    }
    public void handleMessage(    Message msg){
      if (msg.what == 0) {
        mHandler.sendMessageDelayed(mHandler.obtainMessage(1),100);
      }
 else       if (msg.what == 1) {
        if (mCount == 2) {
          success();
        }
 else {
          failure(new RuntimeException("Idle handler called " + mCount + " times"));
        }
      }
    }
    public boolean queueIdle(){
      mCount++;
      return true;
    }
  }
;
  tester.doTest(1000);
}
