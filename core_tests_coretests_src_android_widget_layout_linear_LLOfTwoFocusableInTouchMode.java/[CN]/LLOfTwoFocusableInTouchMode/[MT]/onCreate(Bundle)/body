      mB1Fired=true;
    }
  }
);
  mButton2.setOnClickListener(new View.OnClickListener(){
    public void onClick(    View v){
      mB2Fired=true;
    }
  }
);
  mButton3.setOnClickListener(new View.OnClickListener(){
    public void onClick(    View v){
      mB3Fired=true;
    }
  }
);
}
