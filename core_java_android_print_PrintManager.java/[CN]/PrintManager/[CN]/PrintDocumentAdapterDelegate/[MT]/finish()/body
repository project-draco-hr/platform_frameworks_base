{
synchronized (mLock) {
    if (!mStartReqeusted || mFinishRequested || mDestroyed) {
      return;
    }
    mFinishRequested=true;
    if (mLastLayoutSpec != null || mLastWriteSpec != null) {
      if (DEBUG) {
        Log.i(LOG_TAG,"Waiting for current operation");
      }
      return;
    }
    doPendingWorkLocked();
  }
}
