{
  final boolean destroyed;
synchronized (mLock) {
    if (!mDestroyed) {
      mObserver=observer;
    }
    destroyed=mDestroyed;
  }
  if (destroyed) {
    try {
      observer.onDestroy();
    }
 catch (    RemoteException re) {
      Log.e(LOG_TAG,"Error announcing destroyed state",re);
    }
  }
}
