{
  mPrinterRegistry.setOnPrintersChangeListener(new PrinterRegistry.OnPrintersChangeListener(){
    @Override public void onPrintersChanged(    List<PrinterInfo> printers){
synchronized (mLock) {
        mPrinters.clear();
        mPrinters.addAll(printers);
        mFilteredPrinters.clear();
        mFilteredPrinters.addAll(printers);
        if (!TextUtils.isEmpty(mLastSearchString)) {
          getFilter().filter(mLastSearchString);
        }
      }
      notifyDataSetChanged();
    }
    @Override public void onPrintersInvalid(){
synchronized (mLock) {
        mPrinters.clear();
        mFilteredPrinters.clear();
      }
      notifyDataSetInvalidated();
    }
  }
);
}
