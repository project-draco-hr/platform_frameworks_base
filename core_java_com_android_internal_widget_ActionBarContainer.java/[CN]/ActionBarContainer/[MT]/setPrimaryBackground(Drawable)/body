{
  if (mBackground != null) {
    mBackground.setCallback(null);
    unscheduleDrawable(mBackground);
  }
  mBackground=bg;
  if (bg != null) {
    bg.setCallback(this);
  }
  setWillNotDraw(mIsSplit ? mSplitBackground == null : mBackground == null && mStackedBackground == null);
  invalidate();
}
