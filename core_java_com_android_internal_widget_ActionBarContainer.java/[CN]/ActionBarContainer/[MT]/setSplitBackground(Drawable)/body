{
  if (mSplitBackground != null) {
    mSplitBackground.setCallback(null);
    unscheduleDrawable(mSplitBackground);
  }
  mSplitBackground=bg;
  if (bg != null) {
    bg.setCallback(this);
  }
  setWillNotDraw(mIsSplit ? mSplitBackground == null : mBackground == null && mStackedBackground == null);
  invalidate();
}
