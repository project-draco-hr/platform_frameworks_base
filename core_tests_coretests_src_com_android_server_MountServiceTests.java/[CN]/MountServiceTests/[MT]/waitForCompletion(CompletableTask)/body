{
  long waitTime=0;
synchronized (task) {
    while (!task.isDone() && waitTime < MAX_WAIT_TIME) {
      try {
        task.wait(WAIT_TIME_INCR);
        waitTime+=WAIT_TIME_INCR;
      }
 catch (      InterruptedException e) {
        Log.i(TAG,"Interrupted during sleep",e);
      }
    }
  }
  return task.isDone();
}
