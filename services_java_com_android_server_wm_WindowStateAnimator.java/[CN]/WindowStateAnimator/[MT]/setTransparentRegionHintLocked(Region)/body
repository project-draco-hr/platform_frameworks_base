{
  if (mSurface == null) {
    Slog.w(TAG,"setTransparentRegionHint: null mSurface after mHasSurface true");
    return;
  }
  if (SHOW_LIGHT_TRANSACTIONS)   Slog.i(TAG,">>> OPEN TRANSACTION setTransparentRegion");
  SurfaceControl.openTransaction();
  try {
    if (SHOW_TRANSACTIONS)     WindowManagerService.logSurface(mWin,"transparentRegionHint=" + region,null);
    mSurface.setTransparentRegionHint(region);
  }
  finally {
    SurfaceControl.closeTransaction();
    if (SHOW_LIGHT_TRANSACTIONS)     Slog.i(TAG,"<<< CLOSE TRANSACTION setTransparentRegion");
  }
}
