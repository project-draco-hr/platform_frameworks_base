{
  if (!mLastHidden) {
    mLastHidden=true;
    if (WindowManagerService.SHOW_TRANSACTIONS)     WindowManagerService.logSurface(mWin,"HIDE (performLayout)",null);
    if (mSurface != null) {
      mSurfaceShown=false;
      try {
        mSurface.hide();
      }
 catch (      RuntimeException e) {
        Slog.w(TAG,"Exception hiding surface in " + mWin);
      }
    }
  }
}
