{
synchronized (sCache) {
    WeakReference<ColorStateList> ref=sCache.get(color);
    ColorStateList csl=ref != null ? ref.get() : null;
    if (csl != null) {
      return csl;
    }
    csl=new ColorStateList(EMPTY,new int[]{color});
    sCache.put(color,new WeakReference<ColorStateList>(csl));
    return csl;
  }
}
