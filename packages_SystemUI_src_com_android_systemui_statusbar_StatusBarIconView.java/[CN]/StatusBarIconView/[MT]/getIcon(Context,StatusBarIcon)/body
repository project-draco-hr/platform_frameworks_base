{
  Resources r=null;
  if (icon.iconPackage != null) {
    try {
      r=context.getPackageManager().getResourcesForApplication(icon.iconPackage);
    }
 catch (    PackageManager.NameNotFoundException ex) {
      Slog.e(StatusBar.TAG,"Icon package not found: " + icon.iconPackage);
      return null;
    }
  }
 else {
    r=context.getResources();
  }
  if (icon.iconId == 0) {
    return null;
  }
  try {
    return r.getDrawable(icon.iconId);
  }
 catch (  RuntimeException e) {
    Slog.w(StatusBar.TAG,"Icon not found in " + (icon.iconPackage != null ? icon.iconId : "<system>") + ": "+ Integer.toHexString(icon.iconId));
  }
  return null;
}
