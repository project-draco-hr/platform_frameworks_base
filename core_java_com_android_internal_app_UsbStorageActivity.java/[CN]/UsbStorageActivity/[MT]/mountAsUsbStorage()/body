{
  IMountService mountService=IMountService.Stub.asInterface(ServiceManager.getService("mount"));
  if (mountService == null) {
    showSharingError();
    return;
  }
  try {
    if (mountService.shareVolume(Environment.getExternalStorageDirectory().getPath(),"ums") != MountServiceResultCode.OperationSucceeded) {
      showSharingError();
    }
  }
 catch (  RemoteException e) {
    showSharingError();
  }
}
