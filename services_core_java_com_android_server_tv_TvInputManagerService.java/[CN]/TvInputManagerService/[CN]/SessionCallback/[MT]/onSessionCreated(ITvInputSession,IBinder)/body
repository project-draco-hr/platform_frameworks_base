{
  if (DEBUG) {
    Slog.d(TAG,"onSessionCreated(inputId=" + mSessionState.info.getId() + ")");
  }
synchronized (mLock) {
    mSessionState.session=session;
    mSessionState.hardwareSessionToken=hardwareSessionToken;
    if (session != null && addSessionTokenToClientStateLocked(session)) {
      sendSessionTokenToClientLocked(mSessionState.client,mSessionState.info.getId(),mSessionState.sessionToken,mChannels[0],mSessionState.seq);
    }
 else {
      removeSessionStateLocked(mSessionState.sessionToken,mSessionState.userId);
      sendSessionTokenToClientLocked(mSessionState.client,mSessionState.info.getId(),null,null,mSessionState.seq);
    }
    mChannels[0].dispose();
  }
}
