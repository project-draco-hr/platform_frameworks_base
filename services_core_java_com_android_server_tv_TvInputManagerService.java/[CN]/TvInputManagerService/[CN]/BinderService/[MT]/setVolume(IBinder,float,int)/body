{
  final float REMOTE_VOLUME_ON=1.0f;
  final float REMOTE_VOLUME_OFF=0f;
  final int callingUid=Binder.getCallingUid();
  final int resolvedUserId=resolveCallingUserId(Binder.getCallingPid(),callingUid,userId,"setVolume");
  final long identity=Binder.clearCallingIdentity();
  try {
synchronized (mLock) {
      try {
        SessionState sessionState=getSessionStateLocked(sessionToken,callingUid,resolvedUserId);
        getSessionLocked(sessionState).setVolume(volume);
        if (sessionState.mHardwareSessionToken != null) {
          getSessionLocked(sessionState.mHardwareSessionToken,Process.SYSTEM_UID,resolvedUserId).setVolume((volume > 0.0f) ? REMOTE_VOLUME_ON : REMOTE_VOLUME_OFF);
        }
      }
 catch (      RemoteException e) {
        Slog.e(TAG,"error in setVolume",e);
      }
    }
  }
  finally {
    Binder.restoreCallingIdentity(identity);
  }
}
