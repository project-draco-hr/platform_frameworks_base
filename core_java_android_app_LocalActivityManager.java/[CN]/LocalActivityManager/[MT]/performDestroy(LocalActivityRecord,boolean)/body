{
  Window win=null;
  win=r.window;
  if (r.curState == RESUMED && !finish) {
    performPause(r,finish);
  }
  if (localLOGV)   Log.v(TAG,r.id + ": destroying");
  mActivityThread.performDestroyActivity(r,finish);
  r.activity=null;
  r.window=null;
  if (finish) {
    r.instanceState=null;
  }
  r.curState=DESTROYED;
  return win;
}
