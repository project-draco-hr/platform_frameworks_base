{
  if (mSystemUiVisibility != vis) {
    mSystemUiVisibility=vis;
    mHandler.post(new Runnable(){
      public void run(){
        if (mBar != null) {
          try {
            mBar.setSystemUiVisibility(vis,mask);
          }
 catch (          RemoteException ex) {
          }
        }
      }
    }
);
  }
}
