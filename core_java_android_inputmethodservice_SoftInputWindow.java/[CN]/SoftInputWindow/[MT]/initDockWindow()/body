{
  WindowManager.LayoutParams lp=getWindow().getAttributes();
  lp.type=WindowManager.LayoutParams.TYPE_INPUT_METHOD;
  lp.setTitle("InputMethod");
  lp.gravity=Gravity.BOTTOM;
  lp.width=-1;
  lp.screenOrientation=ActivityInfo.SCREEN_ORIENTATION_USER;
  getWindow().setAttributes(lp);
  getWindow().setFlags(WindowManager.LayoutParams.FLAG_LAYOUT_IN_SCREEN | WindowManager.LayoutParams.FLAG_NOT_FOCUSABLE,WindowManager.LayoutParams.FLAG_LAYOUT_IN_SCREEN | WindowManager.LayoutParams.FLAG_NOT_FOCUSABLE | WindowManager.LayoutParams.FLAG_DIM_BEHIND);
}
