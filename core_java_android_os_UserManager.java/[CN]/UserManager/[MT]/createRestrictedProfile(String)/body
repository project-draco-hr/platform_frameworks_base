{
  try {
    if (isSplitSystemUser()) {
      return mService.createProfileForUser(name,UserInfo.FLAG_RESTRICTED,UserHandle.getCallingUserId());
    }
 else {
      return mService.createProfileForUser(name,UserInfo.FLAG_RESTRICTED,UserHandle.USER_SYSTEM);
    }
  }
 catch (  RemoteException e) {
    Log.w(TAG,"Could not create a restricted profile",e);
  }
  return null;
}
