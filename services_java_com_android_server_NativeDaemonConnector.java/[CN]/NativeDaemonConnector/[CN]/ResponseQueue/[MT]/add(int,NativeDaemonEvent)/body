{
  Response found=null;
synchronized (mResponses) {
    for (    Response r : mResponses) {
      if (r.cmdNum == cmdNum) {
        found=r;
        break;
      }
    }
    if (found == null) {
      while (mResponses.size() >= mMaxCount) {
        Slog.e("NativeDaemonConnector.ResponseQueue","more buffered than allowed: " + mResponses.size() + " >= "+ mMaxCount);
        Response r=mResponses.remove();
        Slog.e("NativeDaemonConnector.ResponseQueue","Removing request: " + r.request + " ("+ r.cmdNum+ ")");
      }
      found=new Response(cmdNum,null);
      mResponses.add(found);
    }
    found.responses.add(response);
  }
synchronized (found) {
    found.notify();
  }
}
