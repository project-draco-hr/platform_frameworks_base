{
  HandlerThread thread=new HandlerThread(TAG + ".CallbackHandler");
  thread.start();
  mCallbackHandler=new Handler(thread.getLooper(),this);
  while (true) {
    try {
      listenToSocket();
    }
 catch (    Exception e) {
      Slog.e(TAG,"Error in NativeDaemonConnector",e);
      SystemClock.sleep(5000);
    }
  }
}
