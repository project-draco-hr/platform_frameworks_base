{
  super.onDraw(canvas);
  Paint paint=new Paint(Paint.DITHER_FLAG);
  if (mIsFadingOut) {
    paint.setAlpha((int)(255 * mFadingAlpha));
    canvas.drawBitmap(mBitmap,0,0,paint);
  }
 else {
    canvas.drawBitmap(mBitmap,0,0,paint);
  }
  if (mPath != null) {
    canvas.drawPath(mPath,mGesturePaint);
  }
}
