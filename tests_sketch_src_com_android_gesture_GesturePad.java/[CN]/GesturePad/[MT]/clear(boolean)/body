{
  if (fadeOut) {
    mFadingAlpha=1;
    mIsFadingOut=true;
    mHandler.removeCallbacks(mFadingOut);
    mHandler.postDelayed(mFadingOut,100);
  }
 else {
    mPath=null;
    this.mCurrentGesture=null;
    if (mBitmap != null) {
      mBitmap.eraseColor(Color.argb(0,0,0,0));
      this.invalidate();
    }
  }
}
