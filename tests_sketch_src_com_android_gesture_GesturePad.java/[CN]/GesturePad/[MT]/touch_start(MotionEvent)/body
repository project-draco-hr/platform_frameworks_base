{
  mIsFadingOut=false;
  mHandler.removeCallbacks(mFadingOut);
  float x=event.getX();
  float y=event.getY();
  mCurrentGesture=new Gesture();
  mCurrentGesture.addPoint(x,y);
  mPath.reset();
  mPath.moveTo(x,y);
  mX=x;
  mY=y;
  Iterator<GestureListener> it=mGestureListeners.iterator();
  while (it.hasNext()) {
    it.next().onStartGesture(this,event);
  }
}
