{
  mMode=SCROLL_MODE;
  mFinished=false;
  mDuration=duration;
  mStartTime=AnimationUtils.currentAnimationTimeMillis();
  mStartX=startX;
  mStartY=startY;
  mFinalX=startX + dx;
  mFinalY=startY + dy;
  mDeltaX=dx;
  mDeltaY=dy;
  mDurationReciprocal=1.0f / mDuration;
  mViscousFluidScale=8.0f;
  mViscousFluidNormalize=1.0f;
  mViscousFluidNormalize=1.0f / viscousFluid(1.0f);
}
