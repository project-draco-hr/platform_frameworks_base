{
  int id=rules[relation];
  if (id != 0) {
    View v=findViewById(id);
    if (v == null) {
      return null;
    }
    while (v.getVisibility() == View.GONE) {
      rules=((LayoutParams)v.getLayoutParams()).getRules();
      v=v.findViewById(rules[relation]);
      if (v == null) {
        return null;
      }
    }
    return v;
  }
  return null;
}
