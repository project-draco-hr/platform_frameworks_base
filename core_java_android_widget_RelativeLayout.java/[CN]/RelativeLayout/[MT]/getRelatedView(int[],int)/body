{
  int id=rules[relation];
  if (id != 0) {
    View v=mGraph.mNodes.get(id).view;
    if (v == null) {
      return null;
    }
    while (v.getVisibility() == View.GONE) {
      rules=((LayoutParams)v.getLayoutParams()).getRules();
      v=mGraph.mNodes.get((rules[relation])).view;
      if (v == null) {
        return null;
      }
    }
    return v;
  }
  return null;
}
