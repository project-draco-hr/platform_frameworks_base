{
  final String entry=getPasswordText();
  setPasswordEntryInputEnabled(false);
  if (mPendingLockCheck != null) {
    mPendingLockCheck.cancel(false);
  }
  mPendingLockCheck=LockPatternChecker.checkPassword(mLockPatternUtils,entry,KeyguardUpdateMonitor.getCurrentUser(),new LockPatternChecker.OnCheckCallback(){
    @Override public void onChecked(    boolean matched){
      setPasswordEntryInputEnabled(true);
      mPendingLockCheck=null;
      onPasswordChecked(entry,matched);
    }
  }
);
}
