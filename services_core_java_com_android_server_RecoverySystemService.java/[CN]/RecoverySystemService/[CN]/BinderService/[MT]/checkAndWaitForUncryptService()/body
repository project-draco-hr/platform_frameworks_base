{
  for (int retry=0; retry < SOCKET_CONNECTION_MAX_RETRY; retry++) {
    final String uncryptService=SystemProperties.get(INIT_SERVICE_UNCRYPT);
    final String setupBcbService=SystemProperties.get(INIT_SERVICE_SETUP_BCB);
    final String clearBcbService=SystemProperties.get(INIT_SERVICE_CLEAR_BCB);
    final boolean busy="running".equals(uncryptService) || "running".equals(setupBcbService) || "running".equals(clearBcbService);
    if (DEBUG) {
      Slog.i(TAG,"retry: " + retry + " busy: "+ busy+ " uncrypt: ["+ uncryptService+ "]"+ " setupBcb: ["+ setupBcbService+ "]"+ " clearBcb: ["+ clearBcbService+ "]");
    }
    if (!busy) {
      return true;
    }
    try {
      Thread.sleep(1000);
    }
 catch (    InterruptedException e) {
      Slog.w(TAG,"Interrupted:",e);
    }
  }
  return false;
}
