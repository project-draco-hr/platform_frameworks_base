{
  if (mUri != null || mResource != resId) {
    updateDrawable(null);
    mResource=resId;
    mUri=null;
    final int oldWidth=mDrawableWidth;
    final int oldHeight=mDrawableHeight;
    resolveUri();
    if (oldWidth != mDrawableWidth || oldHeight != mDrawableHeight) {
      requestLayout();
    }
    invalidate();
  }
}
