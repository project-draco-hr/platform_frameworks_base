{
synchronized (this) {
    if (mConnected) {
      if (Config.LOGV) {
        Log.v(TAG,"Disconnecting from Media Scanner");
      }
      try {
        mContext.unbindService(this);
      }
 catch (      IllegalArgumentException ex) {
        if (Config.LOGV) {
          Log.v(TAG,"disconnect failed: " + ex);
        }
      }
      mConnected=false;
    }
  }
}
