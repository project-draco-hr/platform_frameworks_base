{
  String stl="plain";
  String result;
  if (this.isBold() && this.isItalic()) {
    stl="bolditalic";
  }
  if (this.isBold() && !this.isItalic()) {
    stl="bold";
  }
  if (!this.isBold() && this.isItalic()) {
    stl="italic";
  }
  result=this.getClass().getName() + "[family=" + this.getFamily()+ ",name="+ this.name+ ",style="+ stl+ ",size="+ this.size+ "]";
  return result;
}
