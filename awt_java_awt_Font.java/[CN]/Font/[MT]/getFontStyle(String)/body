{
  int result=Font.PLAIN;
  if (fontStyleName.toUpperCase().equals("BOLDITALIC")) {
    result=Font.BOLD | Font.ITALIC;
  }
 else   if (fontStyleName.toUpperCase().equals("BOLD")) {
    result=Font.BOLD;
  }
 else   if (fontStyleName.toUpperCase().equals("ITALIC")) {
    result=Font.ITALIC;
  }
  return result;
}
