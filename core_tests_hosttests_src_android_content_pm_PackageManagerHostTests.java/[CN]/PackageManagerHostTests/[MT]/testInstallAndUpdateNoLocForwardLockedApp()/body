{
  Log.i(LOG_TAG,"Test updating a forward-locked app with no installLocation pref set");
  try {
    mPMHostUtils.installFwdLockedAppAndVerifyExists(getTestAppFilePath(NO_LOC_VERSION_V1_APK),NO_LOC_VERSION_PKG,false);
    mPMHostUtils.installFwdLockedAppAndVerifyExists(getTestAppFilePath(NO_LOC_VERSION_V2_APK),NO_LOC_VERSION_PKG,true);
  }
  finally {
    mPMHostUtils.uninstallApp(NO_LOC_VERSION_PKG);
  }
}
