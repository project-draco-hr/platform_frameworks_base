{
  Log.i(LOG_TAG,"Test an app with no installLocation gets installed on device");
  PackageManagerHostTestUtils.InstallLocPreference savedPref=PackageManagerHostTestUtils.InstallLocPreference.AUTO;
  try {
    savedPref=mPMHostUtils.getDevicePreferredInstallLocation();
    mPMHostUtils.setDevicePreferredInstallLocation(PackageManagerHostTestUtils.InstallLocPreference.AUTO);
    mPMHostUtils.installAppAndVerifyExistsOnDevice(getTestAppFilePath(NO_LOC_APK),NO_LOC_PKG,false);
  }
  finally {
    mPMHostUtils.setDevicePreferredInstallLocation(savedPref);
    mPMHostUtils.uninstallApp(NO_LOC_PKG);
  }
}
