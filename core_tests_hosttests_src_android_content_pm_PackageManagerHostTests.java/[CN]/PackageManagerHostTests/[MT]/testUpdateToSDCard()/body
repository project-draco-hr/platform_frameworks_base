{
  Log.i(LOG_TAG,"Test updating an app on the SD card stays on the SD card");
  try {
    mPMHostUtils.installAppAndVerifyExistsOnSDCard(getTestAppFilePath(UPDATE_EXTERNAL_LOC_V1_EXT_APK),UPDATE_EXTERNAL_LOC_PKG,false);
    mPMHostUtils.installAppAndVerifyExistsOnSDCard(getTestAppFilePath(UPDATE_EXTERNAL_LOC_V2_NONE_APK),UPDATE_EXTERNAL_LOC_PKG,true);
  }
  finally {
    mPMHostUtils.uninstallApp(UPDATE_EXTERNAL_LOC_PKG);
  }
}
