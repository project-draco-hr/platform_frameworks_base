{
  Log.i(LOG_TAG,"Test installing an app first to the device, then to the SD Card");
  try {
    mPMHostUtils.installAppAndVerifyExistsOnDevice(getTestAppFilePath(VERSATILE_LOC_INTERNAL_APK),VERSATILE_LOC_PKG,false);
    mPMHostUtils.uninstallApp(VERSATILE_LOC_PKG);
    mPMHostUtils.installAppAndVerifyExistsOnSDCard(getTestAppFilePath(VERSATILE_LOC_EXTERNAL_APK),VERSATILE_LOC_PKG,false);
  }
  finally {
    mPMHostUtils.uninstallApp(VERSATILE_LOC_PKG);
  }
}
