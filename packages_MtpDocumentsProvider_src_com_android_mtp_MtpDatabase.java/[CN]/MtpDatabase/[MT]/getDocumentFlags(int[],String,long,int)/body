{
  int flag=0;
  if (MtpDeviceRecord.isWritingSupported(operationsSupported) && protectionState == MtpConstants.PROTECTION_STATUS_NONE) {
    flag|=Document.FLAG_SUPPORTS_WRITE;
  }
  if (MtpDeviceRecord.isSupported(operationsSupported,MtpConstants.OPERATION_DELETE_OBJECT) && (protectionState == MtpConstants.PROTECTION_STATUS_NONE || protectionState == MtpConstants.PROTECTION_STATUS_NON_TRANSFERABLE_DATA)) {
    flag|=Document.FLAG_SUPPORTS_DELETE;
  }
  if (mimeType.equals(Document.MIME_TYPE_DIR) && MtpDeviceRecord.isWritingSupported(operationsSupported) && protectionState == MtpConstants.PROTECTION_STATUS_NONE) {
    flag|=Document.FLAG_DIR_SUPPORTS_CREATE;
  }
  if (thumbnailSize > 0) {
    flag|=Document.FLAG_SUPPORTS_THUMBNAIL;
  }
  return flag;
}
