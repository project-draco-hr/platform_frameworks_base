{
  final String mappingModeKey=getChildDocumentsMappingStateKey(parentId);
switch (mMappingMode.get(mappingModeKey)) {
case MAP_BY_MTP_IDENTIFIER:
    mDatabase.stopAddingDocuments(SELECTION_CHILD_DOCUMENTS,parentId,COLUMN_OBJECT_HANDLE);
  break;
case MAP_BY_NAME:
mDatabase.stopAddingDocuments(SELECTION_CHILD_DOCUMENTS,parentId,Document.COLUMN_DISPLAY_NAME);
break;
default :
throw new Error("Unexpected mapping state.");
}
mMappingMode.remove(mappingModeKey);
}
