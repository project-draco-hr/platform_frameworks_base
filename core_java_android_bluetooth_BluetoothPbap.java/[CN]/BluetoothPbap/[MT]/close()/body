{
  IBluetoothManager mgr=mAdapter.getBluetoothManager();
  if (mgr != null) {
    try {
      mgr.unregisterStateChangeCallback(mBluetoothStateChangeCallback);
    }
 catch (    Exception e) {
      Log.e(TAG,"",e);
    }
  }
synchronized (mConnection) {
    if (mService != null) {
      try {
        mService=null;
        mContext.unbindService(mConnection);
      }
 catch (      Exception re) {
        Log.e(TAG,"",re);
      }
    }
  }
  mServiceListener=null;
}
