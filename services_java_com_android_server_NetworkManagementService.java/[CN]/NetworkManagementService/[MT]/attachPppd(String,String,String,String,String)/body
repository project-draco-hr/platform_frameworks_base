{
  try {
    mContext.enforceCallingOrSelfPermission(android.Manifest.permission.CHANGE_NETWORK_STATE,"NetworkManagementService");
    mConnector.doCommand(String.format("pppd attach %s %s %s %s %s",tty,NetworkUtils.numericToInetAddress(localAddr).getHostAddress(),NetworkUtils.numericToInetAddress(remoteAddr).getHostAddress(),NetworkUtils.numericToInetAddress(dns1Addr).getHostAddress(),NetworkUtils.numericToInetAddress(dns2Addr).getHostAddress()));
  }
 catch (  IllegalArgumentException e) {
    throw new IllegalStateException("Error resolving addr",e);
  }
catch (  NativeDaemonConnectorException e) {
    throw new IllegalStateException("Error communicating to native daemon to attach pppd",e);
  }
}
