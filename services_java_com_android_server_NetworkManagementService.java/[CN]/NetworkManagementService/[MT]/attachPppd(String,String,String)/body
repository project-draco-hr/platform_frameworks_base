{
  try {
    mContext.enforceCallingOrSelfPermission(android.Manifest.permission.CHANGE_NETWORK_STATE,"NetworkManagementService");
    mConnector.doCommand(String.format("pppd attach %s %s %s",tty,InetAddress.getByName(localAddr).toString(),InetAddress.getByName(localAddr).toString()));
  }
 catch (  UnknownHostException e) {
    throw new IllegalStateException("Error resolving addr",e);
  }
}
