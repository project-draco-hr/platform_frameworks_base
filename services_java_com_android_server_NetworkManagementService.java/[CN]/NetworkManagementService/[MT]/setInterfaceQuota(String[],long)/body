{
  mContext.enforceCallingOrSelfPermission(android.Manifest.permission.MANAGE_NETWORK_POLICY,"NetworkManagementService");
  try {
    mConnector.doCommand(String.format("bandwidth setquota %s %d",iface[0],quota));
  }
 catch (  NativeDaemonConnectorException e) {
    throw new IllegalStateException("Error communicating to native daemon to set Interface quota",e);
  }
}
