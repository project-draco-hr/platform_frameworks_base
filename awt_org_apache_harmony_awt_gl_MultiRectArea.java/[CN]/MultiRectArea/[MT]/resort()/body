{
  int[] buf=new int[4];
  for (int i=1; i < rect[0]; i+=4) {
    int k=i;
    int x1=rect[k];
    int y1=rect[k + 1];
    for (int j=i + 4; j < rect[0]; j+=4) {
      int x2=rect[j];
      int y2=rect[j + 1];
      if (y1 > y2 || (y1 == y2 && x1 > x2)) {
        x1=x2;
        y1=y2;
        k=j;
      }
    }
    if (k != i) {
      System.arraycopy(rect,i,buf,0,4);
      System.arraycopy(rect,k,rect,i,4);
      System.arraycopy(buf,0,rect,k,4);
    }
  }
  invalidate();
}
