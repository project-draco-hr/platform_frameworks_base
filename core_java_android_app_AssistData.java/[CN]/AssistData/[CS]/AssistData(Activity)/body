{
  ArrayList<ViewRootImpl> views=WindowManagerGlobal.getInstance().getRootViews(activity.getActivityToken());
  for (int i=0; i < views.size(); i++) {
    ViewRootImpl root=views.get(i);
    View view=root.getView();
    Rect rect=new Rect();
    view.getBoundsOnScreen(rect);
    CharSequence title=root.getTitle();
    mRootViews.add(new ViewNodeImpl(this,view,rect.left,rect.top,title != null ? title : view.getContentDescription()));
  }
}
