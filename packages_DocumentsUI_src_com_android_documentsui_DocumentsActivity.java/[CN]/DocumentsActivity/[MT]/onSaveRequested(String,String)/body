{
  final DocumentInfo cwd=getCurrentDirectory();
  final String authority=cwd.uri.getAuthority();
  final ContentProviderClient client=getContentResolver().acquireUnstableContentProviderClient(authority);
  try {
    final Uri childUri=DocumentsContract.createDocument(getContentResolver(),cwd.uri,mimeType,displayName);
    onFinished(childUri);
  }
 catch (  Exception e) {
    Toast.makeText(this,R.string.save_error,Toast.LENGTH_SHORT).show();
  }
 finally {
    ContentProviderClient.closeQuietly(client);
  }
}
