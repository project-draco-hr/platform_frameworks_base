{
  mRoots.clear();
  final List<ProviderInfo> providers=getPackageManager().queryContentProviders(null,-1,PackageManager.GET_META_DATA);
  for (  ProviderInfo info : providers) {
    if (info.metaData != null && info.metaData.containsKey(DocumentsContract.META_DATA_DOCUMENT_PROVIDER)) {
      final Uri uri=DocumentsContract.buildRootsUri(info.authority);
      final Cursor cursor=getContentResolver().query(uri,null,null,null,null);
      try {
        while (cursor.moveToNext()) {
          mRoots.add(Root.fromCursor(this,info,cursor));
        }
      }
  finally {
        cursor.close();
      }
    }
  }
}
