{
  if (mApplication != null) {
    if (context.getUserId() == UserHandle.getUserId(mApplication.uid) && context.getPackageName().equals(mApplication.packageName)) {
      return context;
    }
    try {
      return context.createApplicationContext(mApplication,Context.CONTEXT_RESTRICTED);
    }
 catch (    NameNotFoundException e) {
      Log.e(LOG_TAG,"Package name " + mPackage + " not found");
    }
  }
  if (mPackage != null) {
    if (context.getPackageName().equals(mPackage)) {
      return context;
    }
    try {
      return context.createPackageContext(mPackage,Context.CONTEXT_RESTRICTED);
    }
 catch (    NameNotFoundException e) {
      Log.e(LOG_TAG,"Package name " + mPackage + " not found");
    }
  }
  return context;
}
