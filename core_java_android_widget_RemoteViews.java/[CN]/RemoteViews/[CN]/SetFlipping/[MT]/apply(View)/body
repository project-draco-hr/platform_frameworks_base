{
  final View target=root.findViewById(viewId);
  if (target instanceof ViewFlipper) {
    final ViewFlipper flipper=(ViewFlipper)target;
    if (milliseconds != -1) {
      flipper.setFlipInterval(milliseconds);
    }
    if (flipping) {
      flipper.startFlipping();
    }
 else {
      flipper.stopFlipping();
    }
  }
}
