{
  child.mLayoutParams=params;
  if (index < 0) {
    index=mChildrenCount;
  }
  addInArray(child,index);
  child.mParent=this;
  child.mPrivateFlags=(child.mPrivateFlags & ~DIRTY_MASK & ~DRAWING_CACHE_VALID) | DRAWN;
  if (child.hasFocus()) {
    requestChildFocus(child,child.findFocus());
  }
}
