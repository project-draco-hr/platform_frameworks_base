{
  if (mLayoutMode == LAYOUT_MODE_UNDEFINED || mLayoutMode == layoutModeOfRoot || getBooleanFlag(FLAG_LAYOUT_MODE_WAS_EXPLICITLY_SET)) {
    return;
  }
  setLayoutMode(LAYOUT_MODE_UNDEFINED,false);
  for (int i=0, N=getChildCount(); i < N; i++) {
    getChildAt(i).invalidateInheritedLayoutMode(layoutModeOfRoot);
  }
}
