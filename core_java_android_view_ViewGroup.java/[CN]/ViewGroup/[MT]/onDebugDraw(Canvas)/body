{
  Paint paint=new Paint();
  paint.setStyle(Paint.Style.STROKE);
  if (getLayoutMode() == LAYOUT_BOUNDS) {
    paint.setColor(Color.RED);
    for (int i=0; i < getChildCount(); i++) {
      View c=getChildAt(i);
      Insets insets=c.getLayoutInsets();
      drawRect(canvas,c.getLeft() + insets.left,c.getTop() + insets.top,c.getRight() - insets.right,c.getBottom() - insets.bottom,paint);
    }
  }
  paint.setColor(Color.BLUE);
  for (int i=0; i < getChildCount(); i++) {
    View c=getChildAt(i);
    drawRect(canvas,c.getLeft(),c.getTop(),c.getRight(),c.getBottom(),paint);
  }
  onDebugDrawMargins(canvas);
}
