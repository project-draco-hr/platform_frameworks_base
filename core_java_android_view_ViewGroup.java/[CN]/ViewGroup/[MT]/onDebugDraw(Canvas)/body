{
  if (getLayoutMode() == LAYOUT_BOUNDS) {
    for (int i=0; i < getChildCount(); i++) {
      View c=getChildAt(i);
      Insets insets=c.getLayoutInsets();
      drawRect(canvas,c.getLeft() + insets.left,c.getTop() + insets.top,c.getRight() - insets.right,c.getBottom() - insets.bottom,Color.RED);
    }
  }
  onDebugDrawMargins(canvas);
  for (int i=0; i < getChildCount(); i++) {
    View c=getChildAt(i);
    drawRect(canvas,c.getLeft(),c.getTop(),c.getRight(),c.getBottom(),Color.BLUE);
  }
}
