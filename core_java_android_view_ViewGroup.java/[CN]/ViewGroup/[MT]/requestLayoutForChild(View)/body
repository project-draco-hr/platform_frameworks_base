{
  if (child == null || child.getParent() != this) {
    throw new IllegalArgumentException("child parameter must be a direct child view of this ViewGroup");
  }
  final ViewParent parent=getParent();
  if (parent == null) {
    requestLayout();
    return;
  }
  if (child.isLaidOut() && findDependentLayoutAxes(child,FLAG_LAYOUT_AXIS_ANY) == 0) {
    requestPartialLayoutForChild(child);
  }
 else {
    requestLayout();
  }
}
