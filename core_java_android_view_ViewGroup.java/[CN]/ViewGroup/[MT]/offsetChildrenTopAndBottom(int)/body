{
  final int count=mChildrenCount;
  final View[] children=mChildren;
  for (int i=0; i < count; i++) {
    final View v=children[i];
    v.mTop+=offset;
    v.mBottom+=offset;
    if (v.mDisplayList != null) {
      v.mDisplayList.offsetTopBottom(offset);
      invalidateViewProperty(false,false);
    }
  }
}
