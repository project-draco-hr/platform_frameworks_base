{
  if (child == null) {
    throw new IllegalArgumentException("child must be non-null");
  }
  final HoverTarget target;
synchronized (sRecycleLock) {
    if (sRecycleBin == null) {
      target=new HoverTarget();
    }
 else {
      target=sRecycleBin;
      sRecycleBin=target.next;
      sRecycledCount--;
      target.next=null;
    }
  }
  target.child=child;
  return target;
}
