{
  ViewLocationHolder holder=null;
synchronized (sPoolLock) {
    if (sPool != null) {
      holder=sPool;
      sPool=holder.mNext;
      holder.mNext=null;
      holder.mIsPooled=false;
      sPoolSize--;
    }
 else {
      holder=new ViewLocationHolder();
    }
    holder.init(root,view);
    return holder;
  }
}
