{
  if (mWidth != width || mHeight != height || mDensityDpi != densityDpi) {
    sendDisplayDeviceEventLocked(this,DISPLAY_DEVICE_EVENT_CHANGED);
    sendTraversalRequestLocked();
    mWidth=width;
    mHeight=height;
    mDensityDpi=densityDpi;
    mInfo=null;
    mPendingChanges|=PENDING_RESIZE;
  }
}
