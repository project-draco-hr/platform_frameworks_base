{
  if (DBG)   log("EVENT_DISCONNECT_DONE connId=" + connId);
  String reason=null;
  if (ar.userObj instanceof String) {
    reason=(String)ar.userObj;
  }
  setState(State.IDLE);
  notifyDataConnection(reason);
  mActiveApn=null;
  if (retryAfterDisconnected(reason)) {
    trySetupData(reason);
  }
}
