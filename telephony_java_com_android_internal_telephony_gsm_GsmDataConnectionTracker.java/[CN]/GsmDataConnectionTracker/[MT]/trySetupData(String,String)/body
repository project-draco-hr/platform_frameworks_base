{
  if (DBG) {
    log("***trySetupData for type:" + type + " due to "+ (reason == null ? "(unspecified)" : reason)+ " isPsRestricted="+ mIsPsRestricted);
  }
  if (type == null) {
    type=Phone.APN_TYPE_DEFAULT;
  }
  ApnContext apnContext=mApnContexts.get(type);
  if (apnContext == null) {
    if (DBG)     log("new apn context for type:" + type);
    apnContext=new ApnContext(type,LOG_TAG);
    mApnContexts.put(type,apnContext);
  }
  apnContext.setReason(reason);
  return trySetupData(apnContext);
}
