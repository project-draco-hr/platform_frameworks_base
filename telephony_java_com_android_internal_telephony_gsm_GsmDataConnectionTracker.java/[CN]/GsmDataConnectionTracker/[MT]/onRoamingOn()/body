{
  if (getDataRoaming()) {
    if (getDataOnRoamingEnabled()) {
      trySetupData(Phone.REASON_ROAMING_ON);
    }
 else {
      if (DBG)       log("Tear down data connection on roaming.");
      cleanUpConnection(true,Phone.REASON_ROAMING_ON);
    }
  }
 else {
    sendMessage(obtainMessage(EVENT_ROAMING_OFF));
  }
}
