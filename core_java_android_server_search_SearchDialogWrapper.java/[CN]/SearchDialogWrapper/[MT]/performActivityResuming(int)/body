{
  if (DBG)   debug("performResumingActivity(): mStartedIdent=" + mStartedIdent + ", resuming: "+ ident);
  this.mResumedIdent=ident;
  if (mStartedIdent != 0) {
    if (mStartedIdent == mResumedIdent) {
      if (DBG)       Log.v(TAG,"******************* DIALOG: show");
      mSearchDialog.show();
      mVisible=true;
    }
 else {
      if (DBG)       Log.v(TAG,"******************* DIALOG: hide");
      mSearchDialog.hide();
      mVisible=false;
    }
  }
}
