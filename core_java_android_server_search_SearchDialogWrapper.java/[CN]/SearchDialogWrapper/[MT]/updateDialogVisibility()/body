{
  if (mStartedIdent != 0) {
    if (mResumedIdent == 0 || mStartedIdent == mResumedIdent) {
      if (DBG)       Log.v(TAG,"******************* DIALOG: show");
      mSearchDialog.show();
    }
 else {
      if (DBG)       Log.v(TAG,"******************* DIALOG: hide");
      mSearchDialog.hide();
    }
  }
}
