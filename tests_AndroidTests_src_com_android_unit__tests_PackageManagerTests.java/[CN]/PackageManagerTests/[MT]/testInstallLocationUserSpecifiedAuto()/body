{
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.SET_INSTALL_LOCATION,1);
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.DEFAULT_INSTALL_LOCATION,0);
  invokeRecommendAppInstallLocation("install.apk",R.raw.install_loc_unspecified,PackageManager.INSTALL_ON_INTERNAL_FLASH);
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.SET_INSTALL_LOCATION,0);
}
