{
  boolean newState=getMediaState();
  if (newState != mOrigState) {
    if (mOrigState) {
      getMs().mountVolume(Environment.getExternalStorageDirectory().getPath());
    }
 else {
      getMs().unmountVolume(Environment.getExternalStorageDirectory().getPath(),true);
    }
  }
  super.tearDown();
}
