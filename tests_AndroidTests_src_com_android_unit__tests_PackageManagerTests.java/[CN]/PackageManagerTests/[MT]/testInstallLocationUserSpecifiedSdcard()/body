{
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.SET_INSTALL_LOCATION,1);
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.DEFAULT_INSTALL_LOCATION,2);
  int i=Settings.System.getInt(mContext.getContentResolver(),Settings.System.DEFAULT_INSTALL_LOCATION,0);
  invokeRecommendAppInstallLocation("install.apk",R.raw.install_loc_unspecified,PackageManager.INSTALL_ON_SDCARD);
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.SET_INSTALL_LOCATION,0);
}
