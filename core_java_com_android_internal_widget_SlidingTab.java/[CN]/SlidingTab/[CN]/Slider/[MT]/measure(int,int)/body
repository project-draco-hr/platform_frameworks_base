{
  int width=MeasureSpec.getSize(widthMeasureSpec);
  int height=MeasureSpec.getSize(heightMeasureSpec);
  tab.measure(View.MeasureSpec.makeSafeMeasureSpec(width,View.MeasureSpec.UNSPECIFIED),View.MeasureSpec.makeSafeMeasureSpec(height,View.MeasureSpec.UNSPECIFIED));
  text.measure(View.MeasureSpec.makeSafeMeasureSpec(width,View.MeasureSpec.UNSPECIFIED),View.MeasureSpec.makeSafeMeasureSpec(height,View.MeasureSpec.UNSPECIFIED));
}
