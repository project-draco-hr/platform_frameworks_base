{
synchronized (sLock) {
    if (sCallback == null) {
      maybeInitConnectivityManager(context);
      sCallback=new Callback();
      try {
        sCM.registerNetworkCallback(request,sCallback);
      }
 catch (      SecurityException e) {
        Log.d(TAG,"Failed to register network callback",e);
        sCallback=null;
      }
    }
  }
}
