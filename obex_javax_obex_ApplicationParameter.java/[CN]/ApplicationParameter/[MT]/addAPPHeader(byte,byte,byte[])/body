{
  if ((length + len + 2) > max_length_ini) {
    byte[] array_tmp=new byte[length + 4 * len];
    System.arraycopy(b_array,0,array_tmp,0,length);
    b_array=array_tmp;
    max_length_ini=length + 4 * len;
  }
  b_array[length++]=tag;
  b_array[length++]=len;
  System.arraycopy(value,0,b_array,length,len);
  length+=len;
}
