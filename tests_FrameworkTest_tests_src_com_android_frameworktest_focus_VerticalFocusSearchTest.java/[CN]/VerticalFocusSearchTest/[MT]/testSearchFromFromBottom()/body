{
  assertNull("going down from bottom button should have no next focus.",mFocusFinder.findNextFocus(mLayout,mBottomWide,View.FOCUS_DOWN));
  assertNull("going left from bottom button should have no next focus.",mFocusFinder.findNextFocus(mLayout,mBottomWide,View.FOCUS_LEFT));
  assertNull("going right from bottom button should have no next focus.",mFocusFinder.findNextFocus(mLayout,mBottomWide,View.FOCUS_RIGHT));
  assertEquals("going up from bottom button should go to mMidSkinny2Right.",mMidSkinny2Right,mFocusFinder.findNextFocus(mLayout,mBottomWide,View.FOCUS_UP));
}
