{
  if (!checkOpenConnection()) {
    return;
  }
  try {
    scp.mCallback.isCorrectResult(scp.mText,scp.mStart,scp.mEnd,scp.mLocale,mSpellCheckerService.isCorrect(scp.mText,scp.mStart,scp.mEnd,scp.mLocale.toString()));
  }
 catch (  RemoteException e) {
    Log.e(TAG,"Remote exception in isCorrect.");
  }
}
