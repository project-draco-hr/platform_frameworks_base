{
  final Bitmap result=Bitmap.createBitmap(mIconTextureWidth,mIconTextureHeight,Bitmap.Config.ARGB_8888);
  final Canvas dest=new Canvas(result);
  dest.drawColor(0,PorterDuff.Mode.CLEAR);
  int[] xy=new int[2];
  Bitmap mask=src.extractAlpha(mBlurPaint,xy);
  dest.drawBitmap(mask,xy[0],xy[1],pressed ? mGlowColorPressedPaint : mGlowColorFocusedPaint);
  mask.recycle();
  dest.drawBitmap(src,0,0,mPaint);
  return result;
}
