{
  if (mArrowAlpha > 0) {
    canvas.save();
    canvas.translate(mCenterX,mCenterY);
    if (mIsLeft) {
      canvas.scale(-1.0f,1.0f);
    }
    canvas.translate(-mCircleRadius - mHintChevronPadding - mArrowDrawable.getIntrinsicWidth() / 2,-mArrowDrawable.getIntrinsicHeight() / 2);
    mArrowDrawable.setAlpha((int)(mArrowAlpha * 255));
    mArrowDrawable.draw(canvas);
    canvas.restore();
  }
}
