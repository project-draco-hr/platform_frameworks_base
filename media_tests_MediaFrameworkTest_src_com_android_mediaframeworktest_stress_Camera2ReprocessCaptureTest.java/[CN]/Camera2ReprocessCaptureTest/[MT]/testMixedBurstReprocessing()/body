{
  for (  String id : mCameraIds) {
    if (!isYuvReprocessSupported(id) && !isOpaqueReprocessSupported(id)) {
      continue;
    }
    try {
      openDevice(id);
      for (int repeat=0; repeat < getRepeatCount(); ++repeat) {
        Log.v(TAG,String.format("Reprocessing mixed burst with or without preview: " + "%d/%d",repeat + 1,getRepeatCount()));
        testReprocessingAllCombinations(id,null,CaptureTestCase.MIXED_BURST);
        testReprocessingAllCombinations(id,mOrderedPreviewSizes.get(0),CaptureTestCase.MIXED_BURST);
        getResultPrinter().printStatus(getRepeatCount(),repeat + 1,id);
        Thread.sleep(getTestWaitIntervalMs());
      }
    }
  finally {
      closeDevice();
    }
  }
}
