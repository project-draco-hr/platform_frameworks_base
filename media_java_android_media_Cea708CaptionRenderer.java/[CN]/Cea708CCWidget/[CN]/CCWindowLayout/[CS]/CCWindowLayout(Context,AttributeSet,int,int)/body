{
  super(context,attrs,defStyleAttr,defStyleRes);
  mCCView=new CCView(context);
  LayoutParams params=new RelativeLayout.LayoutParams(ViewGroup.LayoutParams.WRAP_CONTENT,ViewGroup.LayoutParams.WRAP_CONTENT);
  addView(mCCView,params);
  CaptioningManager captioningManager=(CaptioningManager)context.getSystemService(Context.CAPTIONING_SERVICE);
  mFontScale=captioningManager.getFontScale();
  setCaptionStyle(captioningManager.getUserStyle());
  mCCView.setText("");
  updateWidestChar();
}
