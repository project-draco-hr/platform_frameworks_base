{
  if (DEBUG)   Log.d(TAG,"reset at " + SystemClock.uptimeMillis());
  mLaunchCameraStart=0;
  mTransitioning=false;
  mRecovering=false;
  mDown=false;
  cancelTransitionToCamera();
  mHandler.removeCallbacks(mRecoverRunnable);
  animate().cancel();
  setScaleX(1);
  setScaleY(1);
  setTranslationY(0);
  enableWindowExitAnimation(true);
}
