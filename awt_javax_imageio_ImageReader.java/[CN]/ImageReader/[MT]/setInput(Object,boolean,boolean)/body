{
  if (input != null) {
    if (!isSupported(input) && !(input instanceof ImageInputStream)) {
      throw new IllegalArgumentException("input " + input + " is not supported");
    }
  }
  this.minIndex=0;
  this.seekForwardOnly=seekForwardOnly;
  this.ignoreMetadata=ignoreMetadata;
  this.input=input;
}
