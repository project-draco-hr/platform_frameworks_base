{
  BluetoothServerSocket socket=new BluetoothServerSocket(BluetoothSocket.TYPE_RFCOMM,false,true,port);
  int errno=socket.mSocket.bindListen();
  if (errno != 0) {
    try {
      socket.close();
    }
 catch (    IOException e) {
    }
    socket.mSocket.throwErrnoNative(errno);
  }
  return socket;
}
