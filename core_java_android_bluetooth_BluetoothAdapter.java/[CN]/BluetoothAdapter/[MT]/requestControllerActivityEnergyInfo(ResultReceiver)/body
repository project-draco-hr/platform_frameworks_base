{
  try {
    mServiceLock.readLock().lock();
    if (mService != null) {
      mService.requestActivityInfo(result);
      result=null;
    }
  }
 catch (  RemoteException e) {
    Log.e(TAG,"getControllerActivityEnergyInfoCallback: " + e);
  }
 finally {
    mServiceLock.readLock().unlock();
    if (result != null) {
      result.send(0,null);
    }
  }
}
