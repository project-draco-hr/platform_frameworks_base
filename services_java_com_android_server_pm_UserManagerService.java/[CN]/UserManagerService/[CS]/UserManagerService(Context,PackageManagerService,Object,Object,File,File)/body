    userZeroDir.mkdirs();
    mBaseUserPath=baseUserPath;
    FileUtils.setPermissions(mUsersDir.toString(),FileUtils.S_IRWXU | FileUtils.S_IRWXG | FileUtils.S_IROTH| FileUtils.S_IXOTH,-1,-1);
    mUserListFile=new File(mUsersDir,USER_LIST_FILENAME);
    readUserList();
    sInstance=this;
  }
}
