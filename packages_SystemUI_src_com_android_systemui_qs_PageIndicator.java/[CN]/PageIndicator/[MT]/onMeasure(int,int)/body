{
  final int N=getChildCount();
  if (N == 0) {
    super.onMeasure(widthMeasureSpec,heightMeasureSpec);
    return;
  }
  final int widthChildSpec=MeasureSpec.makeMeasureSpec(mPageIndicatorWidth,MeasureSpec.EXACTLY);
  final int heightChildSpec=MeasureSpec.makeMeasureSpec(mPageIndicatorHeight,MeasureSpec.EXACTLY);
  for (int i=0; i < N; i++) {
    getChildAt(i).measure(widthChildSpec,heightChildSpec);
  }
  int width=(mPageIndicatorWidth - mPageDotWidth) * N + mPageDotWidth;
  setMeasuredDimension(width,mPageIndicatorHeight);
}
