{
  int index=(int)location;
  location-=index;
  final int N=getChildCount();
  for (int i=0; i < N; i++) {
    float amount=0;
    if (i == index) {
      amount=1 - location;
    }
 else     if (i == index + 1) {
      amount=location;
    }
    ((SinglePageIndicator)getChildAt(i)).setAmount(amount);
  }
}
