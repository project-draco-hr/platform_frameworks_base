{
  final int i;
  try {
    i=super.read(buffer,byteOffset,byteCount);
  }
 catch (  IOException e) {
    throw new IOException("Error reading data for " + entry.getName() + " near offset "+ bytesRead,e);
  }
  if (i == -1) {
    if (entry.getSize() != bytesRead) {
      throw new IOException("Size mismatch on inflated file: " + bytesRead + " vs "+ entry.getSize());
    }
  }
 else {
    bytesRead+=i;
  }
  return i;
}
