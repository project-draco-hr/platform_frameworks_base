{
switch (propertyConstant) {
case TRANSLATION_X:
    mView.mTranslationX=value;
  break;
case TRANSLATION_Y:
mView.mTranslationY=value;
break;
case ROTATION:
mView.mRotation=value;
break;
case ROTATION_X:
mView.mRotationX=value;
break;
case ROTATION_Y:
mView.mRotationY=value;
break;
case SCALE_X:
mView.mScaleX=value;
break;
case SCALE_Y:
mView.mScaleY=value;
break;
case X:
mView.mTranslationX=value - mView.mLeft;
break;
case Y:
mView.mTranslationY=value - mView.mTop;
break;
case ALPHA:
mView.mAlpha=value;
break;
}
}
