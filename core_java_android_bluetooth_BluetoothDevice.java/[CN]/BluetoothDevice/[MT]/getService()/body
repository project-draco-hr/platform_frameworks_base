{
synchronized (BluetoothDevice.class) {
    if (sService == null) {
      IBinder b=ServiceManager.getService(Context.BLUETOOTH_SERVICE);
      if (b == null) {
        throw new RuntimeException("Bluetooth service not available");
      }
      sService=IBluetooth.Stub.asInterface(b);
    }
  }
  return sService;
}
