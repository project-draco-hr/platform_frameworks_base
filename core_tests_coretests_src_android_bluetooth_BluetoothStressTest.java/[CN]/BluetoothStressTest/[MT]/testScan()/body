{
  int iterations=BluetoothTestRunner.sScanIterations;
  BluetoothAdapter adapter=BluetoothAdapter.getDefaultAdapter();
  enable(adapter);
  for (int i=0; i < iterations; i++) {
    writeOutput("scan iteration " + (i + 1) + " of "+ iterations);
    startScan(adapter);
    stopScan(adapter);
  }
  disable(adapter);
}
