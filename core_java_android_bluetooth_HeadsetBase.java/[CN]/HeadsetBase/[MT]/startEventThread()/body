{
  mEventThread=new Thread("HeadsetBase Event Thread"){
    public void run(){
      int last_read_error;
      while (!mEventThreadInterrupted) {
        String input=readNative(500);
        if (input != null) {
          handleInput(input);
        }
 else {
          last_read_error=getLastReadStatusNative();
          if (last_read_error != 0) {
            Log.i(TAG,"headset read error " + last_read_error);
            if (mEventThreadHandler != null) {
              mEventThreadHandler.obtainMessage(RFCOMM_DISCONNECTED).sendToTarget();
            }
            disconnectNative();
            break;
          }
        }
      }
    }
  }
;
  mEventThreadInterrupted=false;
  mEventThread.start();
}
