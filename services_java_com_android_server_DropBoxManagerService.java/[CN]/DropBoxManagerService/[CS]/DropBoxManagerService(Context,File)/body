{
  mDropBoxDir=path;
  mContext=context;
  mContentResolver=context.getContentResolver();
  context.registerReceiver(mReceiver,new IntentFilter(Intent.ACTION_DEVICE_STORAGE_LOW));
  mContentResolver.registerContentObserver(Settings.Secure.CONTENT_URI,true,new ContentObserver(new Handler()){
    public void onChange(    boolean selfChange){
      mReceiver.onReceive(context,(Intent)null);
    }
  }
);
}
