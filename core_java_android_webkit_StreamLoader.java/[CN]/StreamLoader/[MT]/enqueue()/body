{
synchronized (sStreamQueueLock) {
    if (sStreamQueueHandler == null) {
      HandlerThread thread=new HandlerThread(StreamQueueHandler.THREAD_NAME,android.os.Process.THREAD_PRIORITY_DEFAULT + android.os.Process.THREAD_PRIORITY_LESS_FAVORABLE);
      thread.start();
      sStreamQueueHandler=new StreamQueueHandler(thread.getLooper());
    }
  }
  sStreamQueueHandler.obtainMessage(StreamQueueHandler.MSG_ADD_LOADER,this).sendToTarget();
}
