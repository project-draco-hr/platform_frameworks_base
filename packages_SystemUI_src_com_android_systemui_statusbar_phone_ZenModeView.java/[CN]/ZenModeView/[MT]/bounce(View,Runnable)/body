{
  v.animate().scaleX(BOUNCE_SCALE).scaleY(BOUNCE_SCALE).setDuration(DURATION / 3).setListener(new AnimatorListenerAdapter(){
    private boolean mFired;
    @Override public void onAnimationEnd(    Animator animation){
      if (!mFired) {
        mFired=true;
        if (midBounce != null) {
          midBounce.run();
        }
        v.animate().scaleX(1).scaleY(1).setListener(null).start();
      }
    }
  }
).start();
}
