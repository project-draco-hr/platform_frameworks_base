{
  super.onAttachedToWindow();
  if (mAutoActivate) {
    mAutoActivate=false;
    postDelayed(new Runnable(){
      @Override public void run(){
        if (!mModeSwitch.isChecked()) {
          mInit=false;
          mModeSwitch.setChecked(true);
        }
      }
    }
,AUTO_ACTIVATE_DELAY);
  }
}
