{
  final ContentResolver cr=context.getContentResolver();
  boolean hasColorTransform=Settings.Secure.getIntForUser(cr,Settings.Secure.ACCESSIBILITY_DISPLAY_INVERSION_ENABLED,0,userId) == 1;
  if (!hasColorTransform) {
    hasColorTransform|=Settings.Secure.getIntForUser(cr,Settings.Secure.ACCESSIBILITY_DISPLAY_DALTONIZER_ENABLED,0,userId) == 1;
  }
  return hasColorTransform;
}
