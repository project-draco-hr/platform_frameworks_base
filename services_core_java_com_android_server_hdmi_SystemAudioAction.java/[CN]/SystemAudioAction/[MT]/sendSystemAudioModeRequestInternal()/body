{
  int avrPhysicalAddress=tv().getAvrDeviceInfo().getPhysicalAddress();
  HdmiCecMessage command=HdmiCecMessageBuilder.buildSystemAudioModeRequest(getSourceAddress(),mAvrLogicalAddress,avrPhysicalAddress,mTargetAudioStatus);
  sendCommand(command,new HdmiControlService.SendMessageCallback(){
    @Override public void onSendCompleted(    int error){
      if (error != Constants.SEND_RESULT_SUCCESS) {
        HdmiLogger.debug("Failed to send <System Audio Mode Request>:" + error);
        setSystemAudioMode(false);
        finishWithCallback(HdmiControlManager.RESULT_COMMUNICATION_FAILED);
      }
    }
  }
);
  mState=STATE_WAIT_FOR_SET_SYSTEM_AUDIO_MODE;
  addTimer(mState,mTargetAudioStatus ? ON_TIMEOUT_MS : OFF_TIMEOUT_MS);
}
