{
  if (data.length > (MAX_USER_DATA_BYTES - 7)) {
    Log.e(LOG_TAG,"SMS data message may only contain " + (MAX_USER_DATA_BYTES - 7) + " bytes");
    return null;
  }
  SubmitPdu ret=new SubmitPdu();
  ByteArrayOutputStream bo=getSubmitPduHead(scAddress,destinationAddress,(byte)0x41,statusReportRequested,ret);
  bo.write(0x04);
  bo.write(data.length + 7);
  bo.write(0x06);
  bo.write(SmsHeader.APPLICATION_PORT_ADDRESSING_16_BIT);
  bo.write(0x04);
  bo.write((destinationPort >> 8) & 0xFF);
  bo.write(destinationPort & 0xFF);
  bo.write(0x00);
  bo.write(0x00);
  bo.write(data,0,data.length);
  ret.encodedMessage=bo.toByteArray();
  return ret;
}
