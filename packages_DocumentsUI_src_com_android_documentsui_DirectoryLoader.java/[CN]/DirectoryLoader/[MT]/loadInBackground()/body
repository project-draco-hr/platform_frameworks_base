{
synchronized (this) {
    if (isLoadInBackgroundCanceled()) {
      throw new OperationCanceledException();
    }
    mSignal=new CancellationSignal();
  }
  final DirectoryResult result=new DirectoryResult();
  try {
    result.client=getContext().getContentResolver().acquireUnstableContentProviderClient(mUri.getAuthority());
    final Cursor cursor=result.client.query(mUri,null,null,null,getQuerySortOrder(),mSignal);
    result.cursor=new SortingCursorWrapper(cursor,mSortOrder);
    result.cursor.registerContentObserver(mObserver);
  }
 catch (  Exception e) {
    result.exception=e;
    ContentProviderClient.closeQuietly(result.client);
  }
 finally {
synchronized (this) {
      mSignal=null;
    }
  }
  return result;
}
