{
  if (mUsbStorageNotification == null) {
    CharSequence title=mContext.getString(com.android.internal.R.string.usb_storage_notification_title);
    CharSequence message=mContext.getString(com.android.internal.R.string.usb_storage_notification_message);
    mUsbStorageNotification=new Notification();
    mUsbStorageNotification.icon=com.android.internal.R.drawable.stat_sys_data_usb;
    mUsbStorageNotification.tickerText=title;
    mUsbStorageNotification.when=0;
    mUsbStorageNotification.flags=Notification.FLAG_AUTO_CANCEL;
    mUsbStorageNotification.defaults|=Notification.DEFAULT_SOUND;
    mUsbStorageNotification.setLatestEventInfo(mContext,title,message,getUsbStorageDialogIntent());
  }
  return mUsbStorageNotification;
}
