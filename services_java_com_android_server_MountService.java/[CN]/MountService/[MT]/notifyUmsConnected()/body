{
  String storageState=Environment.getExternalStorageState();
  if (!storageState.equals(Environment.MEDIA_REMOVED) && !storageState.equals(Environment.MEDIA_BAD_REMOVAL) && !storageState.equals(Environment.MEDIA_CHECKING)) {
    updateUsbMassStorageNotification(false,true);
  }
  Intent intent=new Intent(Intent.ACTION_UMS_CONNECTED);
  mContext.sendBroadcast(intent);
}
