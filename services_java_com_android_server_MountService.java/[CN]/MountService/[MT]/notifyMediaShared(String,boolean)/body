{
  if (mounted) {
    Log.e(TAG,"Live shared mounts not supported yet!");
    return;
  }
  updatePublicVolumeState(path,Environment.MEDIA_SHARED);
  if (mUmsActiveNotify) {
    Intent intent=new Intent();
    intent.setClass(mContext,com.android.internal.app.UsbStorageStopActivity.class);
    PendingIntent pi=PendingIntent.getActivity(mContext,0,intent,0);
    setUsbStorageNotification(com.android.internal.R.string.usb_storage_stop_notification_title,com.android.internal.R.string.usb_storage_stop_notification_message,com.android.internal.R.drawable.stat_sys_warning,false,true,pi);
  }
  handlePossibleExplicitUnmountBroadcast(path);
  Intent intent=new Intent(Intent.ACTION_MEDIA_SHARED,Uri.parse("file://" + path));
  mContext.sendBroadcast(intent);
}
