{
  if (mContext.checkCallingOrSelfPermission(android.Manifest.permission.WRITE_SETTINGS) != PackageManager.PERMISSION_GRANTED) {
    throw new SecurityException("Requires WRITE_SETTINGS permission");
  }
  mPlaySounds=enabled;
  SystemProperties.set("persist.service.mount.playsnd",(enabled ? "1" : "0"));
}
