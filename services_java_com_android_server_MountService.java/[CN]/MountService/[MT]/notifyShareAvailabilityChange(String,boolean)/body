{
  if (!method.equals("ums")) {
    Log.w(TAG,"Ignoring unsupported share method {" + method + "}");
    return;
  }
  new Thread(){
    public void run(){
      try {
        if (avail) {
          notifyUmsConnected();
        }
 else {
          notifyUmsDisconnected();
        }
      }
 catch (      Exception ex) {
        Log.w(TAG,"Failed to mount media on insertion");
      }
    }
  }
.start();
}
