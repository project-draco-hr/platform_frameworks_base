{
  if (mContext.checkCallingOrSelfPermission(android.Manifest.permission.ASEC_ACCESS) != PackageManager.PERMISSION_GRANTED) {
    throw new SecurityException("Requires ASEC_ACCESS permission");
  }
  ArrayList<String> rsp=mConnector.doCommand("asec_path " + id);
  for (  String line : rsp) {
    String[] tok=line.split(" ");
    int code=Integer.parseInt(tok[0]);
    if (code == VoldResponseCode.AsecPathResult) {
      return tok[1];
    }
 else {
      throw new IllegalStateException(String.format("Unexpected response code %d",code));
    }
  }
  throw new IllegalStateException("Got an empty response");
}
