{
  super(handler);
  ContentResolver cr=mContext.getContentResolver();
  cr.registerContentObserver(Settings.System.getUriFor(Settings.Secure.MOUNT_PLAY_NOTIFICATION_SND),false,this);
  cr.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.MOUNT_UMS_AUTOSTART),false,this);
  cr.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.MOUNT_UMS_PROMPT),false,this);
  cr.registerContentObserver(Settings.Secure.getUriFor(Settings.Secure.MOUNT_UMS_NOTIFY_ENABLED),false,this);
}
