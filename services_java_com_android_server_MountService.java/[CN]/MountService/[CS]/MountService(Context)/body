{
  mContext=context;
  mPms=(PackageManagerService)ServiceManager.getService("package");
  mContext.registerReceiver(mBroadcastReceiver,new IntentFilter(Intent.ACTION_BOOT_COMPLETED),null,null);
  mConnector=new NativeDaemonConnector(this,"vold",10,"VoldConnector");
  mShowSafeUnmountNotificationWhenUnmounted=false;
  mPlaySounds=SystemProperties.get("persist.service.mount.playsnd","1").equals("1");
  ContentResolver cr=mContext.getContentResolver();
  mAutoStartUms=(Settings.Secure.getInt(cr,Settings.Secure.MOUNT_UMS_AUTOSTART,0) == 1);
  mPromptUms=(Settings.Secure.getInt(cr,Settings.Secure.MOUNT_UMS_PROMPT,1) == 1);
  mUmsActiveNotify=(Settings.Secure.getInt(cr,Settings.Secure.MOUNT_UMS_NOTIFY_ENABLED,1) == 1);
  mSettingsWatcher=new SettingsWatcher(new Handler());
}
