{
  super.onCreate(savedInstanceState);
  setContentView(R.layout.test_interaction);
  if (!isVoiceInteraction()) {
    Log.w(TAG,"Not running as a voice interaction!");
    finish();
    return;
  }
  mInteractor=getVoiceInteractor();
  mInteractor.startConfirmation(new VoiceInteractor.Callback(){
    @Override public void onConfirmationResult(    VoiceInteractor.Request request,    boolean confirmed,    Bundle result){
      Log.i(TAG,"Confirmation result: confirmed=" + confirmed + " result="+ result);
      finish();
    }
    @Override public void onCancel(    VoiceInteractor.Request request){
      Log.i(TAG,"Canceled!");
      finish();
    }
  }
,"This is a confirmation",null);
}
