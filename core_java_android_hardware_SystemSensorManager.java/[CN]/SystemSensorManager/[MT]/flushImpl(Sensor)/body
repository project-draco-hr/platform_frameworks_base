{
  if (sensor == null)   throw new IllegalArgumentException("sensor cannot be null");
  if (Sensor.getReportingMode(sensor) == Sensor.REPORTING_MODE_ONE_SHOT)   throw new IllegalArgumentException("Trigger Sensors cannot call flush");
  FlushEventQueue queue=new FlushEventQueue(mMainLooper,this);
  if (queue.flushSensor(sensor) != 0) {
    return false;
  }
  return true;
}
