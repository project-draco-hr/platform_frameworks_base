{
  if (mHost.isPulsingBlocked()) {
    return;
  }
  mHost.pulseWhileDozing(new DozeHost.PulseCallback(){
    @Override public void onPulseStarted(){
      if (mPulsing && mDreaming) {
        turnDisplayOn();
      }
    }
    @Override public void onPulseFinished(){
      if (mPulsing && mDreaming) {
        mPulsing=false;
        turnDisplayOff();
      }
      mWakeLock.release();
    }
  }
,reason);
}
