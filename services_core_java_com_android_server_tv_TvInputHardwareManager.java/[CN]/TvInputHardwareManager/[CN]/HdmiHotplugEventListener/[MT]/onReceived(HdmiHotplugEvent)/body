{
synchronized (mLock) {
    mHdmiStateMap.put(event.getPort(),event.isConnected());
    TvInputHardwareInfo hardwareInfo=findHardwareInfoForHdmiPortLocked(event.getPort());
    if (hardwareInfo == null) {
      return;
    }
    String inputId=mHardwareInputIdMap.get(hardwareInfo.getDeviceId());
    if (inputId == null) {
      return;
    }
    int state=event.isConnected() ? INPUT_STATE_CONNECTED : INPUT_STATE_CONNECTED_STANDBY;
    mHandler.obtainMessage(ListenerHandler.STATE_CHANGED,state,0,inputId).sendToTarget();
  }
}
