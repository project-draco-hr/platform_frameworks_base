{
synchronized (mLock) {
    Connection connection=mConnections.get(deviceId);
    if (connection == null) {
      Slog.e(TAG,"StreamConfigurationChanged: Cannot find a connection with " + deviceId);
      return;
    }
    connection.updateConfigsLocked(configs);
    String inputId=mHardwareInputIdMap.get(deviceId);
    if (inputId != null) {
      mHandler.obtainMessage(ListenerHandler.STATE_CHANGED,convertConnectedToState(configs.length > 0),0,inputId).sendToTarget();
    }
    ITvInputHardwareCallback callback=connection.getCallbackLocked();
    if (callback != null) {
      try {
        callback.onStreamConfigChanged(configs);
      }
 catch (      RemoteException e) {
        Slog.e(TAG,"error in onStreamConfigurationChanged",e);
      }
    }
  }
}
