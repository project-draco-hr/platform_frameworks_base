{
  try {
    String mPath=Environment.getExternalStorageDirectory().getPath();
    String actual=getMs().getVolumeState(mPath);
    if (desired.equals(actual)) {
      return true;
    }
 else {
      return false;
    }
  }
 catch (  RemoteException e) {
    Log.e(TAG,"Exception while checking media state",e);
    return false;
  }
}
