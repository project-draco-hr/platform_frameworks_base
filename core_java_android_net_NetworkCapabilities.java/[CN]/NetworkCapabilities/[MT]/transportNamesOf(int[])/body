{
  String transports="";
  for (int i=0; i < types.length; ) {
switch (types[i]) {
case TRANSPORT_CELLULAR:
      transports+="CELLULAR";
    break;
case TRANSPORT_WIFI:
  transports+="WIFI";
break;
case TRANSPORT_BLUETOOTH:
transports+="BLUETOOTH";
break;
case TRANSPORT_ETHERNET:
transports+="ETHERNET";
break;
case TRANSPORT_VPN:
transports+="VPN";
break;
}
if (++i < types.length) transports+="|";
}
return transports;
}
