{
  byte[] octets=new byte[size];
  payload.get(octets);
  long value=0;
  if (bo == ByteOrder.LITTLE_ENDIAN) {
    for (int n=octets.length - 1; n >= 0; n--) {
      value=(value << Byte.SIZE) | (octets[n] & BYTE_MASK);
    }
  }
 else {
    for (    byte octet : octets) {
      value=(value << Byte.SIZE) | (octet & BYTE_MASK);
    }
  }
  return value;
}
