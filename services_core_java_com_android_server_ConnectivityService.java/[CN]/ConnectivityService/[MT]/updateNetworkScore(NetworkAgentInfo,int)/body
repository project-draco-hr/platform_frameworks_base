{
  if (DBG)   log("updateNetworkScore for " + nai.name() + " to "+ score);
  if (score < 0) {
    loge("updateNetworkScore for " + nai.name() + " got a negative score ("+ score+ ").  Bumping score to min of 0");
    score=0;
  }
  final int oldScore=nai.getCurrentScore();
  nai.setCurrentScore(score);
  rematchAllNetworksAndRequests(nai,oldScore,NascentState.NOT_JUST_VALIDATED);
  sendUpdatedScoreToFactories(nai);
}
