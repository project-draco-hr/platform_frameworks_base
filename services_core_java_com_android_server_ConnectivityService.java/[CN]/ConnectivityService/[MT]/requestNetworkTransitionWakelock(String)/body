{
  int serialNum=0;
synchronized (this) {
    if (mNetTransitionWakeLock.isHeld())     return;
    serialNum=++mNetTransitionWakeLockSerialNumber;
    mNetTransitionWakeLock.acquire();
    mNetTransitionWakeLockCausedBy=forWhom;
  }
  mHandler.sendMessageDelayed(mHandler.obtainMessage(EVENT_EXPIRE_NET_TRANSITION_WAKELOCK,serialNum,0),mNetTransitionWakeLockTimeout);
  return;
}
