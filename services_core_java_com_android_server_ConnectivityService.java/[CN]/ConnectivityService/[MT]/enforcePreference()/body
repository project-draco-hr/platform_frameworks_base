{
  if (mNetTrackers[mNetworkPreference].getNetworkInfo().isConnected())   return;
  if (!mNetTrackers[mNetworkPreference].isAvailable())   return;
  for (int t=0; t <= ConnectivityManager.MAX_RADIO_TYPE; t++) {
    if (t != mNetworkPreference && mNetTrackers[t] != null && mNetTrackers[t].getNetworkInfo().isConnected()) {
      if (DBG) {
        log("tearing down " + mNetTrackers[t].getNetworkInfo() + " in enforcePreference");
      }
      teardown(mNetTrackers[t]);
    }
  }
}
