{
  if (nai != null) {
synchronized (nai) {
      if (nai.created) {
        NetworkCapabilities nc=new NetworkCapabilities(nai.networkCapabilities);
        if (nai.lastValidated) {
          nc.addCapability(NET_CAPABILITY_VALIDATED);
        }
 else {
          nc.removeCapability(NET_CAPABILITY_VALIDATED);
        }
        return nc;
      }
    }
  }
  return null;
}
