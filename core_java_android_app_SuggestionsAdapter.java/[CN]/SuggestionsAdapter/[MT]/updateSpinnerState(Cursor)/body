{
  if (DBG) {
    Log.d(LOG_TAG,"updateSpinnerState - extra = " + (cursor != null ? cursor.getExtras().getBoolean(SearchManager.CURSOR_EXTRA_KEY_IN_PROGRESS) : null));
  }
  if (cursor != null && cursor.getExtras().getBoolean(SearchManager.CURSOR_EXTRA_KEY_IN_PROGRESS)) {
    mSearchDialog.getWindow().getDecorView().post(mStartSpinnerRunnable);
    return;
  }
  mSearchDialog.getWindow().getDecorView().post(mStopSpinnerRunnable);
}
