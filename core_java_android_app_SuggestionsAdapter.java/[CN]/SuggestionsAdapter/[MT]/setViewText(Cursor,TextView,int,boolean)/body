{
  if (v == null) {
    return;
  }
  CharSequence text=null;
  if (textCol >= 0) {
    String str=cursor.getString(textCol);
    if (isHtml && looksLikeHtml(str)) {
      text=Html.fromHtml(str);
    }
 else {
      text=str;
    }
  }
  v.setText(text);
  if (TextUtils.isEmpty(text)) {
    v.setVisibility(View.GONE);
  }
 else {
    v.setVisibility(View.VISIBLE);
  }
}
