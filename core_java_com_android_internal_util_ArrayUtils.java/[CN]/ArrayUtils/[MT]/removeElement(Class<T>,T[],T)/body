{
  if (array != null) {
    final int length=array.length;
    for (int i=0; i < length; i++) {
      if (array[i] == element) {
        if (length == 1) {
          return null;
        }
        T[] result=(T[])Array.newInstance(kind,length - 1);
        System.arraycopy(array,0,result,0,i);
        System.arraycopy(array,i + 1,result,i,length - i - 1);
        return result;
      }
    }
  }
  return array;
}
