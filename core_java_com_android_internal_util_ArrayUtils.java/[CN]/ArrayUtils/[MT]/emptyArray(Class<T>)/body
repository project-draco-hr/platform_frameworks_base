{
  if (kind == Object.class) {
    return (T[])EMPTY;
  }
  int bucket=((System.identityHashCode(kind) / 8) & 0x7FFFFFFF) % CACHE_SIZE;
  Object cache=sCache[bucket];
  if (cache == null || cache.getClass().getComponentType() != kind) {
    cache=Array.newInstance(kind,0);
    sCache[bucket]=cache;
  }
  return (T[])cache;
}
