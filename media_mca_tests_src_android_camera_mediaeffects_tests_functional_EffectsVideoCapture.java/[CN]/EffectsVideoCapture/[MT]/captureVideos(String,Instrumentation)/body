{
  int total_num_of_videos=1;
  int video_duration=4 * 1000;
  Log.v(TAG,reportTag);
  for (int i=0; i < total_num_of_videos; i++) {
    Thread.sleep(WAIT_FOR_PREVIEW);
    inst.sendCharacterSync(KeyEvent.KEYCODE_CAMERA);
    Thread.sleep(video_duration);
    inst.sendCharacterSync(KeyEvent.KEYCODE_CAMERA);
  }
}
