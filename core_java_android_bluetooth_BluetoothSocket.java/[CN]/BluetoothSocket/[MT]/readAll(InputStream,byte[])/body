{
  int left=b.length;
  while (left > 0) {
    int ret=is.read(b,b.length - left,left);
    if (ret < 0)     throw new IOException("read failed, socket might closed, read ret: " + ret);
    left-=ret;
    if (left != 0)     Log.w(TAG,"readAll() looping, read partial size: " + (b.length - left) + ", expect size: "+ b.length);
  }
  return b.length;
}
