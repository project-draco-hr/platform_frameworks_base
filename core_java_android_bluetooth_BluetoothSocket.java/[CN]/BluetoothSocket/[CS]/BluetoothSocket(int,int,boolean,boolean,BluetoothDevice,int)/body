{
  mType=type;
  mAuth=auth;
  mEncrypt=encrypt;
  mDevice=device;
  if (device == null) {
    mAddress=null;
  }
 else {
    mAddress=device.getAddress();
  }
  mPort=port;
  if (fd == -1) {
    initSocketNative();
  }
 else {
    initSocketFromFdNative(fd);
  }
  mInputStream=new BluetoothInputStream(this);
  mOutputStream=new BluetoothOutputStream(this);
}
