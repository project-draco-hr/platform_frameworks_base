{
  if (mHasSelectedDay) {
    int selectedPosition=mSelectedDay - mTempCalendar.getFirstDayOfWeek();
    if (selectedPosition < 0) {
      selectedPosition+=7;
    }
    if (mShowWeekNumber) {
      selectedPosition++;
    }
    mSelectedLeft=selectedPosition * (mWidth - mWeekDayPadding * 2) / mNumCells + mWeekDayPadding;
    mSelectedRight=(selectedPosition + 1) * (mWidth - mWeekDayPadding * 2) / mNumCells + mWeekDayPadding;
  }
}
