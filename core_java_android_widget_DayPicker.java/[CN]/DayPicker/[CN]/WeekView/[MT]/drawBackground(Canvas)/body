{
  if (!mHasSelectedDay) {
    return;
  }
  mDrawPaint.setColor(mSelectionBackgroundColor);
  mTempRect.top=mWeekSeperatorWidth;
  mTempRect.bottom=mHeight;
  mTempRect.left=mShowWeekNumber ? mWeekDayPadding + (mWidth - mWeekDayPadding * 2) / mNumCells : mWeekDayPadding;
  mTempRect.right=mSelectedLeft - 2;
  canvas.drawRect(mTempRect,mDrawPaint);
  mTempRect.left=mSelectedRight + 3;
  mTempRect.right=mWidth - mWeekDayPadding;
  canvas.drawRect(mTempRect,mDrawPaint);
}
