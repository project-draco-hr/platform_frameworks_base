{
  if (Build.IS_DEBUGGABLE)   return true;
  Signature[] packageSignatures;
  try {
    if (signatures == null || signatures.length == 0)     return getPackageInfo().applicationInfo.isSystemApp();
    packageSignatures=getPackageInfo().signatures;
  }
 catch (  WebViewPackageNotFoundException e) {
    return false;
  }
  if (packageSignatures.length != 1)   return false;
  final byte[] packageSignature=packageSignatures[0].toByteArray();
  for (  String signature : signatures) {
    final byte[] validSignature=Base64.decode(signature,Base64.DEFAULT);
    if (Arrays.equals(packageSignature,validSignature))     return true;
  }
  return false;
}
