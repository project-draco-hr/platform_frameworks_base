{
  if (mName != null) {
    collapsePanels();
    final ContentResolver cr=mContext.getContentResolver();
switch (mType) {
case TYPE_GLOBAL:
{
        final boolean enable=Settings.Global.getInt(cr,mName,0) == 0;
        Settings.Global.putInt(cr,mName,enable ? 1 : 0);
      }
    break;
case TYPE_SECURE:
{
    final boolean enable=Settings.Secure.getIntForUser(cr,mName,0,UserHandle.USER_CURRENT) == 0;
    Settings.Secure.putIntForUser(cr,mName,enable ? 1 : 0,UserHandle.USER_CURRENT);
  }
break;
case TYPE_SYSTEM:
{
final boolean enable=Settings.System.getIntForUser(cr,mName,0,UserHandle.USER_CURRENT) == 0;
Settings.System.putIntForUser(cr,mName,enable ? 1 : 0,UserHandle.USER_CURRENT);
}
break;
}
return true;
}
return false;
}
