{
  Resources r=mContext.getResources();
  mWifiState.enabled=enabled;
  mWifiState.iconId=(enabled ? R.drawable.ic_qs_wifi_enabled : R.drawable.ic_qs_wifi_normal);
  mWifiState.label=(enabled ? description : r.getString(R.string.quick_settings_wifi_no_network));
  mWifiCallback.refreshView(mWifiTile,mWifiState);
}
