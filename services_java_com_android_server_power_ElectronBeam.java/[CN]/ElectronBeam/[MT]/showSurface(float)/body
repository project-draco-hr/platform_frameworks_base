{
  if (!mSurfaceVisible || mSurfaceAlpha != alpha) {
    Surface.openTransaction();
    try {
      mSurface.setLayer(ELECTRON_BEAM_LAYER);
      mSurface.setAlpha(alpha);
      mSurface.show();
    }
  finally {
      Surface.closeTransaction();
    }
    mSurfaceVisible=true;
    mSurfaceAlpha=alpha;
  }
  return true;
}
