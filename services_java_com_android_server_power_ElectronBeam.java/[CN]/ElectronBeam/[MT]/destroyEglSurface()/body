{
  if (mEglSurface != null) {
    if (!EGL14.eglDestroySurface(mEglDisplay,mEglSurface)) {
      logEglError("eglDestroySurface");
    }
    mEglSurface=null;
  }
  if (mSurface != null) {
    Surface.openTransaction();
    try {
      mSurface.destroy();
    }
  finally {
      Surface.closeTransaction();
    }
    mSurface=null;
    mSurfaceVisible=false;
  }
}
