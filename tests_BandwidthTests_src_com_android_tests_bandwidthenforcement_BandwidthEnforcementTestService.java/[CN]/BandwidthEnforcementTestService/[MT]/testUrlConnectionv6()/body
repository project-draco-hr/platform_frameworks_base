{
  try {
    final HttpURLConnection conn=(HttpURLConnection)new URL("http://ipv6.google.com/").openConnection();
    try {
      conn.connect();
      final String content=Streams.readFully(new InputStreamReader(conn.getInputStream()));
      if (content.contains("Google")) {
        return true;
      }
    }
  finally {
      conn.disconnect();
    }
  }
 catch (  IOException e) {
    Log.d(TAG,"error: " + e);
  }
  return false;
}
