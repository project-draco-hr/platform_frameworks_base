{
  super.endAnimation(vh);
  for (int i=mPendingAnimations.size() - 1; i >= 0; --i) {
    ColorAnimation anim=mPendingAnimations.get(i);
    if (anim.viewHolder == vh) {
      mPendingAnimations.remove(i);
      anim.end();
    }
  }
  ColorAnimation anim=mRunningAnimations.get(vh);
  if (anim != null) {
    anim.cancel();
  }
}
