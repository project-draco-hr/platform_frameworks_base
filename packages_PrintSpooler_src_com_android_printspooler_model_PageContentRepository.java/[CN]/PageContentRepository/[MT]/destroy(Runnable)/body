{
  if (mState == STATE_OPENED) {
    close(new Runnable(){
      @Override public void run(){
        destroy(callback);
      }
    }
);
    return;
  }
  mCloseGuard.close();
  mState=STATE_DESTROYED;
  if (DEBUG) {
    Log.i(LOG_TAG,"STATE_DESTROYED");
  }
  mRenderer.destroy();
  if (callback != null) {
    callback.run();
  }
}
