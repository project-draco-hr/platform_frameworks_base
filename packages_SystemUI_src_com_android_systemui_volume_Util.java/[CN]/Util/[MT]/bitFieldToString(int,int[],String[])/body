{
  if (value == 0)   return "";
  final StringBuilder sb=new StringBuilder();
  for (int i=0; i < values.length; i++) {
    if ((value & values[i]) != 0) {
      if (sb.length() > 0)       sb.append(',');
      sb.append(names[i]);
    }
    value&=~values[i];
  }
  if (value != 0) {
    if (sb.length() > 0)     sb.append(',');
    sb.append("UNKNOWN_").append(value);
  }
  return sb.toString();
}
