{
  String idString=null;
  String locString=null;
  String paramString=null;
  String keyCharString=(keyChar == '\n') ? keyCharString=getKeyText(VK_ENTER) : "'" + keyChar + "'";
switch (id) {
case KEY_PRESSED:
    idString="KEY_PRESSED";
  break;
case KEY_RELEASED:
idString="KEY_RELEASED";
break;
case KEY_TYPED:
idString="KEY_TYPED";
break;
default :
idString="unknown type";
}
switch (keyLocation) {
case KEY_LOCATION_STANDARD:
locString="KEY_LOCATION_STANDARD";
break;
case KEY_LOCATION_LEFT:
locString="KEY_LOCATION_LEFT";
break;
case KEY_LOCATION_RIGHT:
locString="KEY_LOCATION_RIGHT";
break;
case KEY_LOCATION_NUMPAD:
locString="KEY_LOCATION_NUMPAD";
break;
case KEY_LOCATION_UNKNOWN:
locString="KEY_LOCATION_UNKNOWN";
break;
default :
locString="unknown type";
}
paramString=idString + ",keyCode=" + keyCode;
if (isActionKey()) {
paramString+="," + getKeyText(keyCode);
}
 else {
paramString+=",keyChar=" + keyCharString;
}
if (getModifiersEx() > 0) {
paramString+=",modifiers=" + getModifiersExText(getModifiersEx()) + ",extModifiers="+ getModifiersExText(getModifiersEx());
}
paramString+=",keyLocation=" + locString;
return paramString;
}
