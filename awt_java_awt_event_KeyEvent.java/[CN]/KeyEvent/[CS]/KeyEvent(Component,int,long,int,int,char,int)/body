{
  super(src,id,when,modifiers);
  if (id == KEY_TYPED) {
    if (keyCode != VK_UNDEFINED) {
      throw new IllegalArgumentException(Messages.getString("awt.191"));
    }
    if (keyChar == CHAR_UNDEFINED) {
      throw new IllegalArgumentException(Messages.getString("awt.192"));
    }
  }
  if ((keyLocation < KEY_LOCATION_UNKNOWN) || (keyLocation > KEY_LOCATION_NUMPAD)) {
    throw new IllegalArgumentException(Messages.getString("awt.297"));
  }
  this.keyChar=keyChar;
  this.keyLocation=keyLocation;
  this.keyCode=keyCode;
}
