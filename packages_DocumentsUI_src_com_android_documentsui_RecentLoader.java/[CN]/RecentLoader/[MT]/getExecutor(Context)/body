{
  if (sExecutor == null) {
    final ActivityManager am=(ActivityManager)context.getSystemService(Context.ACTIVITY_SERVICE);
    final int maxOutstanding=am.isLowRamDevice() ? MAX_OUTSTANDING_RECENTS_SVELTE : MAX_OUTSTANDING_RECENTS;
    final ThreadPoolExecutor executor=new ThreadPoolExecutor(maxOutstanding,maxOutstanding,10,TimeUnit.SECONDS,new LinkedBlockingQueue<Runnable>());
    executor.allowCoreThreadTimeOut(true);
    sExecutor=executor;
  }
  return sExecutor;
}
