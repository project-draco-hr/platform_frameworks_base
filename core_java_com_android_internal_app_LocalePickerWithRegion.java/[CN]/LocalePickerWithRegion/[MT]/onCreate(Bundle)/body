{
  super.onCreate(savedInstanceState);
  setHasOptionsMenu(true);
  final Locale sortingLocale=(mCountryMode && mParentLocale != null) ? mParentLocale.getLocale() : Locale.getDefault();
  mAdapter=new SuggestedLocaleAdapter(mLocaleList,mCountryMode);
  final LocaleHelper.LocaleInfoComparator comp=new LocaleHelper.LocaleInfoComparator(sortingLocale);
  mAdapter.sort(comp);
  setListAdapter(mAdapter);
}
