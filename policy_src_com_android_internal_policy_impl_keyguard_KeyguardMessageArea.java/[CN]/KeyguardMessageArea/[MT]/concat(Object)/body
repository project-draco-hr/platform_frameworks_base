{
  StringBuilder b=new StringBuilder();
  for (int i=0; i < args.length; i++) {
    final Object arg=args[i];
    if (arg instanceof CharSequence) {
      b.append((CharSequence)args[i]);
      b.append(SEPARATOR);
    }
 else     if (arg instanceof String) {
      b.append((String)args[i]);
      b.append(SEPARATOR);
    }
  }
  return b.toString();
}
