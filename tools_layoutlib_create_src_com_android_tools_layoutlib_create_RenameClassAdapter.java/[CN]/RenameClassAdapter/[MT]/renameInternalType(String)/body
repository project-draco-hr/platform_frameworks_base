{
  if (type == null) {
    return null;
  }
  if (type.equals(mOldName)) {
    return mNewName;
  }
  if (mOldBase != mOldName && type.equals(mOldBase)) {
    return mNewBase;
  }
  int pos=type.indexOf('$');
  if (pos == mOldBase.length() && type.startsWith(mOldBase)) {
    return mNewBase + type.substring(pos);
  }
  return type;
}
