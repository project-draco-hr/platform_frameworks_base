{
  Intent intent=new Intent(VoiceInteractionService.SERVICE_INTERFACE);
  intent.setComponent(mComponent);
  try {
    ServiceInfo si=mContext.getPackageManager().getServiceInfo(mComponent,0);
    if (!android.Manifest.permission.BIND_VOICE_INTERACTION.equals(si.permission)) {
      Slog.w(TAG,"Not using voice interaction service " + mComponent + ": does not require permission "+ android.Manifest.permission.BIND_VOICE_INTERACTION);
      return;
    }
  }
 catch (  PackageManager.NameNotFoundException e) {
    Slog.w(TAG,"Unable to find voice interaction service: " + mComponent,e);
    return;
  }
  mContext.bindServiceAsUser(intent,mConnection,Context.BIND_AUTO_CREATE,new UserHandle(mUser));
  mBound=true;
}
