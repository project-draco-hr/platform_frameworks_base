{
  if (isRequested() && !isEnabled()) {
    boolean contextCreated=initializeEgl();
    mGl=createEglSurface(surface);
    mDestroyed=false;
    if (mGl != null) {
      int err=sEgl.eglGetError();
      if (err != EGL_SUCCESS) {
        destroy(true);
        setRequested(false);
      }
 else {
        if (mCanvas == null) {
          mCanvas=createCanvas();
        }
        setEnabled(true);
        if (contextCreated) {
          initAtlas();
        }
      }
      return mCanvas != null;
    }
  }
  return false;
}
