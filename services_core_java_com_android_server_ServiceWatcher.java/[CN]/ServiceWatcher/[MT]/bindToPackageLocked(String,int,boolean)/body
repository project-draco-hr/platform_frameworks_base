{
  unbindLocked();
  Intent intent=new Intent(mAction);
  intent.setPackage(packageName);
  mPackageName=packageName;
  mVersion=version;
  mIsMultiuser=isMultiuser;
  if (D)   Log.d(mTag,"binding " + packageName + " (version "+ version+ ") ("+ (isMultiuser ? "multi" : "single")+ "-user)");
  mContext.bindServiceAsUser(intent,this,Context.BIND_AUTO_CREATE | Context.BIND_NOT_FOREGROUND | Context.BIND_NOT_VISIBLE,mIsMultiuser ? UserHandle.SYSTEM : UserHandle.CURRENT);
}
