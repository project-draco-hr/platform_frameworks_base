{
  try {
    IWindowManager wm=getWindowManager();
    wm.getCurrentSizeRange(outSmallestSize,outLargestSize);
  }
 catch (  RemoteException e) {
    Slog.w("Display","Unable to get display size range",e);
    outSmallestSize.x=0;
    outSmallestSize.y=0;
    outLargestSize.x=0;
    outLargestSize.y=0;
  }
}
