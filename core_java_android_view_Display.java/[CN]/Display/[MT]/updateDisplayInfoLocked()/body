{
  DisplayInfo newInfo=mGlobal.getDisplayInfo(mDisplayId);
  if (newInfo == null) {
    if (mIsValid) {
      mIsValid=false;
      if (DEBUG) {
        Log.d(TAG,"Logical display " + mDisplayId + " was removed.");
      }
    }
  }
 else {
    mDisplayInfo=newInfo;
    if (!mIsValid) {
      mIsValid=true;
      if (DEBUG) {
        Log.d(TAG,"Logical display " + mDisplayId + " was recreated.");
      }
    }
  }
}
