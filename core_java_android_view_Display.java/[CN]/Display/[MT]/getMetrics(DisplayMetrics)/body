{
synchronized (mTmpPoint) {
    getSizeInternal(mTmpPoint,false);
    outMetrics.widthPixels=mTmpPoint.x;
    outMetrics.heightPixels=mTmpPoint.y;
  }
  getNonSizeMetrics(outMetrics);
  CompatibilityInfo ci=mCompatibilityInfo.getIfNeeded();
  if (ci != null) {
    ci.applyToDisplayMetrics(outMetrics);
  }
  if (DEBUG_COMPAT)   Slog.v(TAG,"Returning DisplayMetrics: " + outMetrics.widthPixels + "x"+ outMetrics.heightPixels+ " "+ outMetrics.density);
}
