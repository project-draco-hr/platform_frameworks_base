{
synchronized (this) {
    if (LOG_THREADS) {
      Log.i("GLThread","surfaceDestroyed tid=" + getId());
    }
    mHasSurface=false;
    notifyAll();
    while (!mWaitingForSurface && isAlive() && !mDone) {
      try {
        wait();
      }
 catch (      InterruptedException e) {
        Thread.currentThread().interrupt();
      }
    }
  }
}
