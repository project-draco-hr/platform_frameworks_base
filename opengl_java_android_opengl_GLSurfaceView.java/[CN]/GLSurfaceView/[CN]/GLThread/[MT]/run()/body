{
  setName("GLThread " + getId());
  if (LOG_THREADS) {
    Log.i("GLThread","starting tid=" + getId());
  }
  try {
    try {
      sGLThreadManager.start(this);
    }
 catch (    InterruptedException e) {
      return;
    }
    guardedRun();
  }
 catch (  InterruptedException e) {
  }
 finally {
    try {
      sGLThreadManager.end(this);
    }
  finally {
synchronized (this) {
        if (LOG_THREADS) {
          Log.i("GLThread","exiting tid=" + getId());
        }
        mDone=true;
        notifyAll();
      }
    }
  }
}
