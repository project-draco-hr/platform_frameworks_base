{
  if (!mGLESVersionCheckComplete) {
    mGLESVersion=SystemProperties.getInt("ro.opengles.version",ConfigurationInfo.GL_ES_VERSION_UNDEFINED);
    if (mGLESVersion >= kGLES_20) {
      mMultipleGLESContextsAllowed=true;
    }
    mGLESVersionCheckComplete=true;
  }
  GLThread oldThread=null;
synchronized (this) {
    mMostRecentGLThread=thread;
    oldThread=mMostRecentGLThread;
    while ((!mMultipleGLESContextsAllowed) && mGLContextCount > 0) {
      wait();
    }
    mGLContextCount++;
  }
  if (oldThread != null && !mMultipleGLESContextsAllowed) {
synchronized (oldThread) {
      oldThread.notifyAll();
    }
  }
}
