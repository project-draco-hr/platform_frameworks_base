{
  if (DEBUG)   Log.d(TAG," service started!");
  mContext=context;
  mConnectivityReceiver=new ConnectivityReceiver();
  context.registerReceiver(mConnectivityReceiver,new IntentFilter(ConnectivityManager.CONNECTIVITY_ACTION));
  context.registerReceiver(mWifiStateReceiver,new IntentFilter(WifiManager.WIFI_STATE_CHANGED_ACTION));
  mTimer=new WakeupTimer(context);
  mWifiOnly=SipManager.isSipWifiOnly(context);
}
