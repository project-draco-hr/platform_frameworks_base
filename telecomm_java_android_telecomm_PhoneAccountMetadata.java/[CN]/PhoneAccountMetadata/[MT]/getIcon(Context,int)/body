{
  Context packageContext;
  try {
    packageContext=context.createPackageContext(mAccount.getComponentName().getPackageName(),0);
  }
 catch (  PackageManager.NameNotFoundException e) {
    Log.w(this,"Cannot find package %s",mAccount.getComponentName().getPackageName());
    return null;
  }
  try {
    return packageContext.getResources().getDrawable(resId);
  }
 catch (  MissingResourceException e) {
    Log.e(this,e,"Cannot find icon %d in package %s",resId,mAccount.getComponentName().getPackageName());
    return null;
  }
}
