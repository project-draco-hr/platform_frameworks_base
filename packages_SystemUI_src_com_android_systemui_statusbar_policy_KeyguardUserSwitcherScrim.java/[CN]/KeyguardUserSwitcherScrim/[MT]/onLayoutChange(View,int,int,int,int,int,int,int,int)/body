{
  if (left != oldLeft || top != oldTop || right != oldRight || bottom != oldBottom) {
    int width=right - left;
    float radius=width * OUTER_EXTENT;
    boolean isLtr=getLayoutDirection() == LayoutDirection.LTR;
    mRadialGradientPaint.setShader(new RadialGradient(isLtr ? width : 0,0,radius,new int[]{mDarkColor,Color.TRANSPARENT},new float[]{Math.max(0f,width * INNER_EXTENT / radius),1f},Shader.TileMode.CLAMP));
    mTop=top;
  }
}
