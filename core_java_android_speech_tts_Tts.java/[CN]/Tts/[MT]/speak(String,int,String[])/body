{
synchronized (startLock) {
    Log.i("TTS received: ",text);
    if (!started) {
      return;
    }
    try {
      itts.speak(text,queueMode,params);
    }
 catch (    RemoteException e) {
      started=false;
      initTts();
    }
catch (    NullPointerException e) {
      started=false;
      initTts();
    }
catch (    IllegalStateException e) {
      started=false;
      initTts();
    }
  }
}
