{
  boolean isSuccess=mManager.initialize();
  if (isSuccess) {
    checkProperties();
    mNfcSecureElementState=Settings.System.getInt(mContext.getContentResolver(),Settings.System.NFC_SECURE_ELEMENT_ON,0);
    if (mNfcSecureElementState == 1) {
      int secureElementId=Settings.System.getInt(mContext.getContentResolver(),Settings.System.NFC_SECURE_ELEMENT_ID,0);
      int[] Se_list=mManager.doGetSecureElementList();
      if (Se_list != null) {
        for (int i=0; i < Se_list.length; i++) {
          if (Se_list[i] == secureElementId) {
            mManager.doSelectSecureElement(Se_list[i]);
            mSelectedSeId=Se_list[i];
            break;
          }
        }
      }
    }
    mManager.enableDiscovery(DISCOVERY_MODE_READER);
    mIsNfcEnabled=true;
  }
 else {
    mIsNfcEnabled=false;
  }
  updateNfcOnSetting();
  return isSuccess;
}
