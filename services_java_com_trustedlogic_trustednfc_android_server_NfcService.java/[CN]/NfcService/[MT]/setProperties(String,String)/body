{
  mContext.enforceCallingPermission(android.Manifest.permission.NFC_ADMIN,"NFC_ADMIN permission required to set NFC Properties");
  if (isEnabled()) {
    return ErrorCodes.ERROR_NFC_ON;
  }
  int val;
  if (param == null || value == null) {
    return ErrorCodes.ERROR_INVALID_PARAM;
  }
  if (param.equals(PROPERTY_LLCP_LTO_VALUE)) {
    val=Integer.parseInt(value);
    if (val > LLCP_LTO_MAX_VALUE)     return ErrorCodes.ERROR_INVALID_PARAM;
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_LLCP_LTO,val);
    mManager.doSetProperties(PROPERTY_LLCP_LTO,val);
  }
 else   if (param.equals(PROPERTY_LLCP_MIU_VALUE)) {
    val=Integer.parseInt(value);
    if ((val < LLCP_MIU_DEFAULT_VALUE) || (val > LLCP_MIU_MAX_VALUE))     return ErrorCodes.ERROR_INVALID_PARAM;
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_LLCP_MIU,val);
    mManager.doSetProperties(PROPERTY_LLCP_MIU,val);
  }
 else   if (param.equals(PROPERTY_LLCP_WKS_VALUE)) {
    val=Integer.parseInt(value);
    if (val > LLCP_WKS_MAX_VALUE)     return ErrorCodes.ERROR_INVALID_PARAM;
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_LLCP_WKS,val);
    mManager.doSetProperties(PROPERTY_LLCP_WKS,val);
  }
 else   if (param.equals(PROPERTY_LLCP_OPT_VALUE)) {
    val=Integer.parseInt(value);
    if (val > LLCP_OPT_MAX_VALUE)     return ErrorCodes.ERROR_INVALID_PARAM;
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_LLCP_OPT,val);
    mManager.doSetProperties(PROPERTY_LLCP_OPT,val);
  }
 else   if (param.equals(PROPERTY_NFC_DISCOVERY_A_VALUE)) {
    if (value.equals("true")) {
      val=1;
    }
 else     if (value.equals("false")) {
      val=0;
    }
 else {
      return ErrorCodes.ERROR_INVALID_PARAM;
    }
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_DISCOVERY_A,val);
    mManager.doSetProperties(PROPERTY_NFC_DISCOVERY_A,val);
  }
 else   if (param.equals(PROPERTY_NFC_DISCOVERY_B_VALUE)) {
    if (value.equals("true")) {
      val=1;
    }
 else     if (value.equals("false")) {
      val=0;
    }
 else {
      return ErrorCodes.ERROR_INVALID_PARAM;
    }
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_DISCOVERY_B,val);
    mManager.doSetProperties(PROPERTY_NFC_DISCOVERY_B,val);
  }
 else   if (param.equals(PROPERTY_NFC_DISCOVERY_F_VALUE)) {
    if (value.equals("true")) {
      val=1;
    }
 else     if (value.equals("false")) {
      val=0;
    }
 else {
      return ErrorCodes.ERROR_INVALID_PARAM;
    }
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_DISCOVERY_F,val);
    mManager.doSetProperties(PROPERTY_NFC_DISCOVERY_F,val);
  }
 else   if (param.equals(PROPERTY_NFC_DISCOVERY_15693_VALUE)) {
    if (value.equals("true")) {
      val=1;
    }
 else     if (value.equals("false")) {
      val=0;
    }
 else {
      return ErrorCodes.ERROR_INVALID_PARAM;
    }
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_DISCOVERY_15693,val);
    mManager.doSetProperties(PROPERTY_NFC_DISCOVERY_15693,val);
  }
 else   if (param.equals(PROPERTY_NFC_DISCOVERY_NFCIP_VALUE)) {
    if (value.equals("true")) {
      val=1;
    }
 else     if (value.equals("false")) {
      val=0;
    }
 else {
      return ErrorCodes.ERROR_INVALID_PARAM;
    }
    Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_DISCOVERY_NFCIP,val);
    mManager.doSetProperties(PROPERTY_NFC_DISCOVERY_NFCIP,val);
  }
 else {
    return ErrorCodes.ERROR_INVALID_PARAM;
  }
  return ErrorCodes.SUCCESS;
}
