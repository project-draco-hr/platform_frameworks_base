{
  if (!mIsNfcEnabled) {
    return ErrorCodes.ERROR_NOT_INITIALIZED;
  }
  if (mSelectedSeId == 0) {
    return ErrorCodes.ERROR_NO_SE_CONNECTED;
  }
  mContext.enforceCallingPermission(android.Manifest.permission.NFC_ADMIN,"NFC_ADMIN permission required to deselect NFC Secure Element");
  mManager.doDeselectSecureElement(mSelectedSeId);
  mNfcSecureElementState=0;
  mSelectedSeId=0;
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_SECURE_ELEMENT_ON,0);
  Settings.System.putInt(mContext.getContentResolver(),Settings.System.NFC_SECURE_ELEMENT_ID,0);
  return ErrorCodes.SUCCESS;
}
