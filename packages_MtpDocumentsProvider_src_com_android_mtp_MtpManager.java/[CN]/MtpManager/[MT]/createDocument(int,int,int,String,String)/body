{
  final MtpDevice device=getDevice(deviceId);
  final MtpObjectInfo objectInfo=new MtpObjectInfo.Builder().setName(name).setStorageId(storageId).setParent(parentObjectHandle).setFormat(MtpDocument.mimeTypeToFormatType(mimeType)).build();
  final MtpObjectInfo result=device.sendObjectInfo(objectInfo);
  if (result == null) {
    throw new IOException("Failed to create a document");
  }
  return result.getObjectHandle();
}
