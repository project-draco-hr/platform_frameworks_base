{
  final int type=ExpandableListView.getPackedPositionType(packedPosition);
  if (type == ExpandableListView.PACKED_POSITION_TYPE_CHILD) {
    return mGroups.get(ExpandableListView.getPackedPositionGroup(packedPosition)).children.get(ExpandableListView.getPackedPositionChild(packedPosition)).name;
  }
 else   if (type == ExpandableListView.PACKED_POSITION_TYPE_GROUP) {
    return mGroups.get(ExpandableListView.getPackedPositionGroup(packedPosition)).name;
  }
 else {
    throw new IllegalStateException("packedPosition is not a valid position.");
  }
}
