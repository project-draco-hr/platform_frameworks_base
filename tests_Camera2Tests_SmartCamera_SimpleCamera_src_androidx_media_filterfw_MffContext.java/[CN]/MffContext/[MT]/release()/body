{
synchronized (mState) {
    if (mState.current != State.STATE_DESTROYED) {
      if (mCameraStreamer != null) {
        mCameraStreamer.stop();
        mCameraStreamer.tearDown();
      }
      if (Build.VERSION.SDK_INT >= 11) {
        maybeDestroyRenderScript();
      }
      stopRunners(false);
      waitUntilStopped();
      tearDown();
      mState.current=State.STATE_DESTROYED;
    }
  }
}
