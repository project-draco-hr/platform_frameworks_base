{
  final int activeTarget=mActiveTarget;
  boolean targetHit=activeTarget != -1;
  hideTargets(true);
  mHandleDrawable.setAlpha(targetHit ? 0.0f : 1.0f);
  if (targetHit) {
    mTargetDrawables.get(activeTarget).setState(TargetDrawable.STATE_ACTIVE);
    hideUnselected(activeTarget);
    if (DEBUG)     Log.v(TAG,"Finish with target hit = " + targetHit);
    dispatchTriggerEvent(mActiveTarget);
    mHandleAnimation=Tweener.to(mHandleDrawable,0,"ease",Ease.Quart.easeOut,"delay",RETURN_TO_HOME_DELAY,"alpha",1.0f,"x",mWaveCenterX,"y",mWaveCenterY,"onUpdate",mUpdateListener,"onComplete",mResetListener);
  }
 else {
    mHandleAnimation=Tweener.to(mHandleDrawable,RETURN_TO_HOME_DURATION,"ease",Ease.Quart.easeOut,"delay",0,"alpha",1.0f,"x",mWaveCenterX,"y",mWaveCenterY,"onUpdate",mUpdateListener,"onComplete",mResetListener);
  }
  setGrabbedState(OnTriggerListener.NO_HANDLE);
}
