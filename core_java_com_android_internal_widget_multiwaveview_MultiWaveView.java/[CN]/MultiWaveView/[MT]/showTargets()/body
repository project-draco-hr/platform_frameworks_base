{
  if (mTargetAnimations.size() > 0) {
    stopTargetAnimation();
  }
  for (  TargetDrawable target : mTargetDrawables) {
    target.setState(TargetDrawable.STATE_INACTIVE);
    mTargetAnimations.add(Tweener.to(target,SHOW_ANIMATION_DURATION,"alpha",1.0f,"delay",SHOW_ANIMATION_DELAY,"onUpdate",this));
  }
  mTargetAnimations.add(Tweener.to(mOuterRing,SHOW_ANIMATION_DURATION,"alpha",1.0f,"delay",SHOW_ANIMATION_DELAY,"onUpdate",this));
}
