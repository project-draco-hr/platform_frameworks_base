{
  mHandleDrawable.setState(TargetDrawable.STATE_ACTIVE);
  if (mAlwaysTrackFinger) {
    mHandleAnimations.stop();
    mHandleDrawable.setAlpha(0.0f);
    mHandleAnimations.add(Tweener.to(mHandleDrawable,INITIAL_SHOW_HANDLE_DURATION,"ease",Ease.Cubic.easeIn,"alpha",1.0f,"onUpdate",mUpdateListener));
    mHandleAnimations.start();
  }
}
