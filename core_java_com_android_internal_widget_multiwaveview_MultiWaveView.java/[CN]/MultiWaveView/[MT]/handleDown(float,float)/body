{
  final float dx=x - mWaveCenterX;
  final float dy=y - mWaveCenterY;
  if (dist2(dx,dy) <= square(mTapRadius)) {
    if (DEBUG)     Log.v(TAG,"** Handle HIT");
    switchToState(STATE_FIRST_TOUCH,x,y);
    mDragging=true;
  }
 else {
    mDragging=false;
    stopTargetAnimation();
    ping();
  }
}
