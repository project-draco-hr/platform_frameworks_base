{
  if (mTargetAnimations.size() > 0) {
    stopTargetAnimation();
  }
  for (  TargetDrawable target : mTargetDrawables) {
    target.setState(TargetDrawable.STATE_INACTIVE);
    mTargetAnimations.add(Tweener.to(target,animate ? HIDE_ANIMATION_DURACTION : 0,"alpha",0.0f,"delay",HIDE_ANIMATION_DELAY,"onUpdate",this));
  }
  mTargetAnimations.add(Tweener.to(mOuterRing,animate ? HIDE_ANIMATION_DURACTION : 0,"alpha",0.0f,"delay",HIDE_ANIMATION_DELAY,"onUpdate",this));
}
