{
  super.onLayout(changed,left,top,right,bottom);
  final int width=right - left;
  final int height=bottom - top;
  float newWaveCenterX=mHorizontalOffset + mHorizontalInset + Math.max(width,mMaxTargetWidth + mOuterRing.getWidth()) / 2;
  float newWaveCenterY=mVerticalOffset + mVerticalInset + Math.max(height,+mMaxTargetHeight + mOuterRing.getHeight()) / 2;
  if (newWaveCenterX != mWaveCenterX || newWaveCenterY != mWaveCenterY) {
    if (mWaveCenterX == 0 && mWaveCenterY == 0) {
      performInitialLayout(newWaveCenterX,newWaveCenterY);
    }
    mWaveCenterX=newWaveCenterX;
    mWaveCenterY=newWaveCenterY;
    mOuterRing.setX(mWaveCenterX);
    mOuterRing.setY(Math.max(mWaveCenterY,mWaveCenterY));
  }
  updateTargetPositions();
  if (DEBUG)   dump();
}
