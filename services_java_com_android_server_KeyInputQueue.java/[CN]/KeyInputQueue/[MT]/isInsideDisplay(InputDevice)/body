{
  final InputDevice.AbsoluteInfo absx=dev.absX;
  final InputDevice.AbsoluteInfo absy=dev.absY;
  final InputDevice.MotionState absm=dev.mAbs;
  if (absx == null || absy == null || absm == null) {
    return true;
  }
  if (absm.mNextData[MotionEvent.SAMPLE_X] >= absx.minValue && absm.mNextData[MotionEvent.SAMPLE_X] <= absx.maxValue && absm.mNextData[MotionEvent.SAMPLE_Y] >= absy.minValue && absm.mNextData[MotionEvent.SAMPLE_Y] <= absy.maxValue) {
    if (DEBUG_VIRTUAL_KEYS)     Log.v(TAG,"Input (" + absm.mNextData[MotionEvent.SAMPLE_X] + ","+ absm.mNextData[MotionEvent.SAMPLE_Y]+ ") inside of display");
    return true;
  }
  return false;
}
