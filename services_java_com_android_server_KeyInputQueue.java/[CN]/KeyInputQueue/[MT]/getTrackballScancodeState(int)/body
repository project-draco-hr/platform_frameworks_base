{
synchronized (mFirst) {
    final int N=mDevices.size();
    for (int i=0; i < N; i++) {
      InputDevice dev=mDevices.valueAt(i);
      if ((dev.classes & RawInputEvent.CLASS_TRACKBALL) != 0) {
        int res=nativeGetScancodeState(dev.id,code);
        if (res > 0) {
          return res;
        }
      }
    }
  }
  return 0;
}
