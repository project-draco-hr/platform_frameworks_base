{
  super(context,attrs,defStyleRes);
  TypedArray a=context.obtainStyledAttributes(attrs,com.android.internal.R.styleable.ButtonGroup,defStyleRes,0);
  mDivider=a.getDrawable(com.android.internal.R.styleable.ButtonGroup_divider);
  mButtonBackground=a.getDrawable(com.android.internal.R.styleable.ButtonGroup_buttonBackground);
  mShowDividers=a.getInt(com.android.internal.R.styleable.ButtonGroup_showDividers,SHOW_DIVIDER_MIDDLE);
  a.recycle();
}
