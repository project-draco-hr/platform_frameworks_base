{
  if (npoints == xpoints.length) {
    int[] tmp;
    tmp=new int[xpoints.length + BUFFER_CAPACITY];
    System.arraycopy(xpoints,0,tmp,0,xpoints.length);
    xpoints=tmp;
    tmp=new int[ypoints.length + BUFFER_CAPACITY];
    System.arraycopy(ypoints,0,tmp,0,ypoints.length);
    ypoints=tmp;
  }
  xpoints[npoints]=px;
  ypoints[npoints]=py;
  npoints++;
  if (bounds != null) {
    bounds.setFrameFromDiagonal(Math.min(bounds.getMinX(),px),Math.min(bounds.getMinY(),py),Math.max(bounds.getMaxX(),px),Math.max(bounds.getMaxY(),py));
  }
}
