{
  int length=0;
  for (  NdefRecord r : mRecords) {
    length+=r.getByteLength();
  }
  ByteBuffer buffer=ByteBuffer.allocate(length);
  for (int i=0; i < mRecords.length; i++) {
    boolean mb=(i == 0);
    boolean me=(i == mRecords.length - 1);
    mRecords[i].writeToByteBuffer(buffer,mb,me);
  }
  return buffer.array();
}
