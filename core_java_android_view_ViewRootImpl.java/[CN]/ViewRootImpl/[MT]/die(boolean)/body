{
  if (immediate) {
    doDie();
  }
 else {
    if (!mIsDrawing) {
      destroyHardwareRenderer();
    }
 else {
      Log.e(TAG,"Attempting to destroy the window while drawing!\n" + "  window=" + this + ", title="+ mWindowAttributes.getTitle());
    }
    mHandler.sendEmptyMessage(MSG_DIE);
  }
}
