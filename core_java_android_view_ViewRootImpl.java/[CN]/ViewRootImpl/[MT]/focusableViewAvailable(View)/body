{
  checkThread();
  if (mView != null) {
    if (!mView.hasFocus()) {
      v.requestFocus();
    }
 else {
      View focused=mView.findFocus();
      if (focused instanceof ViewGroup) {
        ViewGroup group=(ViewGroup)focused;
        if (group.getDescendantFocusability() == ViewGroup.FOCUS_AFTER_DESCENDANTS && isViewDescendantOf(v,focused)) {
          v.requestFocus();
        }
      }
    }
  }
}
