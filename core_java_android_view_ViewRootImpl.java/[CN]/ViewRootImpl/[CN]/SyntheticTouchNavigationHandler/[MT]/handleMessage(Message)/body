{
switch (msg.what) {
case MSG_FLICK:
{
      final long time=SystemClock.uptimeMillis();
      final int keyCode=msg.arg2;
      enqueueInputEvent(new KeyEvent(time,time,KeyEvent.ACTION_DOWN,keyCode,0,mLastMetaState,mLastDeviceId,0,KeyEvent.FLAG_FALLBACK,mLastSource));
      enqueueInputEvent(new KeyEvent(time,time,KeyEvent.ACTION_UP,keyCode,0,mLastMetaState,mLastDeviceId,0,KeyEvent.FLAG_FALLBACK,mLastSource));
      final int delay=(int)Math.ceil(mFlickDecay * msg.arg1);
      if (delay <= mMaxRepeatDelay) {
        Message next=obtainMessage(MSG_FLICK,delay,keyCode);
        next.setAsynchronous(true);
        sendMessageDelayed(next,delay);
      }
      break;
    }
}
}
