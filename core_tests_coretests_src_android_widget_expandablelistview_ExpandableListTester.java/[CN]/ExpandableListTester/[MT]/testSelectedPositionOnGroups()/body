{
  int index=0;
  for (int i=0; i < mExpandableListView.getHeaderViewsCount(); i++) {
    mListUtil.arrowScrollToSelectedPosition(index);
    Assert.assertEquals("Header item is selected",ExpandableListView.PACKED_POSITION_VALUE_NULL,mExpandableListView.getSelectedPosition());
    index++;
  }
  final int groupCount=mAdapter.getGroupCount();
  for (int groupIndex=0; groupIndex < groupCount; groupIndex++) {
    mListUtil.arrowScrollToSelectedPosition(index);
    Assert.assertEquals("Group item is not selected",ExpandableListView.getPackedPositionForGroup(groupIndex),mExpandableListView.getSelectedPosition());
    index++;
  }
  for (int i=0; i < mExpandableListView.getFooterViewsCount(); i++) {
    mListUtil.arrowScrollToSelectedPosition(index);
    Assert.assertEquals("Footer item is selected",ExpandableListView.PACKED_POSITION_VALUE_NULL,mExpandableListView.getSelectedPosition());
    index++;
  }
}
