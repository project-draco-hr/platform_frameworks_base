{
  for (int i=1; i <= num; i++) {
    Tab tab=mActionBar.newTab().setText("Tab" + i).setTabListener(new TabListener(){
      @Override public void onTabUnselected(      Tab t,      FragmentTransaction ft){
      }
      @Override public void onTabSelected(      Tab t,      FragmentTransaction ft){
      }
      @Override public void onTabReselected(      Tab t,      FragmentTransaction ft){
      }
    }
);
    mActionBar.addTab(tab);
  }
}
