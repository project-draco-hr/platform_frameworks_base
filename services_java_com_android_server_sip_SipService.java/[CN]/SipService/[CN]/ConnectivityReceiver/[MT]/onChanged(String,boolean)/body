{
synchronized (SipService.this) {
    if (connected) {
      if (mTask != null)       mTask.cancel();
      mTask=new MyTimerTask(type,connected);
      mTimer.schedule(mTask,2 * 1000L);
    }
 else {
      if ((mTask != null) && mTask.mNetworkType.equals(type)) {
        mTask.cancel();
      }
      onConnectivityChanged(type,false);
    }
  }
}
