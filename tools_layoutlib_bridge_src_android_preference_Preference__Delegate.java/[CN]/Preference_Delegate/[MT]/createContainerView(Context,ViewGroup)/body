{
  TypedArray a=context.obtainStyledAttributes(null,R.styleable.PreferenceFragment,R.attr.preferenceFragmentStyle,0);
  int mLayoutResId=a.getResourceId(R.styleable.PreferenceFragment_layout,R.layout.preference_list_fragment);
  a.recycle();
  LayoutInflater inflater=(LayoutInflater)context.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
  inflater.inflate(mLayoutResId,root,true);
  return (ListView)root.findViewById(android.R.id.list);
}
