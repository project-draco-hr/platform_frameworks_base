{
  RecentsConfiguration config=RecentsConfiguration.getInstance();
  if (duration > 0) {
    if (animateFromTransform != null) {
      mDismissButton.setAlpha(animateFromTransform.dismissAlpha);
    }
    mDismissButton.animate().alpha(toTransform.dismissAlpha).setStartDelay(0).setDuration(duration).setInterpolator(config.defaultBezierInterpolator).withLayer().start();
  }
 else {
    mDismissButton.setAlpha(toTransform.dismissAlpha);
  }
  mDismissButton.invalidate();
}
