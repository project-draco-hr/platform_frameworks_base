{
  RecentsConfiguration config=RecentsConfiguration.getInstance();
  float offset=config.taskViewHighlightPx / 2f;
  float radius=config.taskViewRoundedCornerRadiusPx;
  canvas.drawRoundRect(-offset,0f,(float)getMeasuredWidth() + offset,getMeasuredHeight() + radius,radius,radius,sHighlightPaint);
}
