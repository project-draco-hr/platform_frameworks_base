{
  if (visualBounds == null) {
    visualBounds=TextDecorator.extendVisualBounds(this,getGlyphVector().getVisualBounds(),decoration);
    visualBounds.setRect(x + visualBounds.getX(),y + visualBounds.getY(),visualBounds.getWidth(),visualBounds.getHeight());
  }
  return (Rectangle2D)visualBounds.clone();
}
