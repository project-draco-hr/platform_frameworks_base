{
synchronized (mLock) {
    if (mActiveConnection == this && Binder.getCallingUid() == mUid) {
      if (DEBUG_KEY) {
        Slog.d(TAG,this + ": sendPointerSync," + " token="+ token);
      }
      final long idToken=Binder.clearCallingIdentity();
      try {
        if (mProviderMethods != null) {
          mProviderMethods.sendPointerSync(TvRemoteProviderProxy.this,token);
        }
      }
  finally {
        Binder.restoreCallingIdentity(idToken);
      }
    }
 else {
      if (DEBUG) {
        Slog.w(TAG,"sendPointerSync, Invalid connection or incorrect uid: " + Binder.getCallingUid());
      }
    }
  }
}
