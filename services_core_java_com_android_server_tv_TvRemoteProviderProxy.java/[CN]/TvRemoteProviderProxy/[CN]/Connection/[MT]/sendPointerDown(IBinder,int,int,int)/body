{
synchronized (mLock) {
    if (mActiveConnection == this && Binder.getCallingUid() == mUid) {
      if (DEBUG_KEY) {
        Slog.d(TAG,this + ": sendPointerDown," + " token="+ token+ ", pointerId="+ pointerId);
      }
      final long idToken=Binder.clearCallingIdentity();
      try {
        if (mProviderMethods != null) {
          mProviderMethods.sendPointerDown(TvRemoteProviderProxy.this,token,pointerId,x,y);
        }
      }
  finally {
        Binder.restoreCallingIdentity(idToken);
      }
    }
 else {
      if (DEBUG) {
        Slog.w(TAG,"sendPointerDown, Invalid connection or incorrect uid: " + Binder.getCallingUid());
      }
    }
  }
}
