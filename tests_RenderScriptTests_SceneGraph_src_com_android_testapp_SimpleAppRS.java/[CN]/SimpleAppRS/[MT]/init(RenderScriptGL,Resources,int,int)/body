{
  mRS=rs;
  mRes=res;
  mSceneManager=SceneManager.getInstance();
  mSceneManager.initRS(mRS,mRes,width,height);
  mScene=new Scene();
  setupGeometry();
  setupCamera();
  setupRenderPass();
  setupShaders();
  mSceneManager.setActiveScene(mScene);
  mScene.initRS();
  mRS.bindRootScript(mSceneManager.getRenderLoop());
}
