{
  LocaleData d=LocaleData.get(Locale.getDefault());
  String[] names;
switch (abbrev) {
case LENGTH_LONG:
    names=d.longWeekdayNames;
  break;
case LENGTH_MEDIUM:
names=d.shortWeekdayNames;
break;
case LENGTH_SHORT:
names=d.shortWeekdayNames;
break;
case LENGTH_SHORTER:
names=d.shortWeekdayNames;
break;
case LENGTH_SHORTEST:
names=d.tinyWeekdayNames;
break;
default :
names=d.shortWeekdayNames;
break;
}
return names[dayOfWeek];
}
