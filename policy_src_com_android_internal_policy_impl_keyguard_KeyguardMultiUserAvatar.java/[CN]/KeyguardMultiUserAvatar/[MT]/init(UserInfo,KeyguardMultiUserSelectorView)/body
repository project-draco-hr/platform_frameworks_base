{
  mUserInfo=user;
  mUserSelector=userSelector;
  mUserImage=(ImageView)findViewById(R.id.keyguard_user_avatar);
  mUserName=(TextView)findViewById(R.id.keyguard_user_name);
  mFramed=new KeyguardCircleFramedDrawable(BitmapFactory.decodeFile(rewriteIconPath(user.iconPath)),(int)mIconSize,mFrameColor,mStroke,mFrameShadowColor,mShadowRadius,mHighlightColor);
  mUserImage.setImageDrawable(mFramed);
  mUserName.setText(mUserInfo.name);
  setOnClickListener(mUserSelector);
  mInit=false;
}
