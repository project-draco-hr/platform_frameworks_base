{
  int N=mAppWidgetIds.size();
  for (int i=0; i < N; i++) {
    AppWidgetId id=mAppWidgetIds.get(i);
    if (packageName.equals(id.host.packageName)) {
      return true;
    }
    Provider p=id.provider;
    if (p != null && packageName.equals(p.info.provider.getPackageName())) {
      return true;
    }
  }
  return false;
}
