{
  if (DEBUG_BACKUP) {
    Slog.i(TAG,"Find restored widget: id=" + restoredId + " host="+ host+ " provider="+ p);
  }
  if (p == null || host == null) {
    return null;
  }
  final int N=mAppWidgetIds.size();
  for (int i=0; i < N; i++) {
    AppWidgetId widget=mAppWidgetIds.get(i);
    if (widget.restoredId == restoredId && widget.host.hostId == host.hostId && widget.host.packageName.equals(host.packageName) && widget.provider.info.provider.equals(p.info.provider)) {
      if (DEBUG_BACKUP) {
        Slog.i(TAG,"   Found at " + i + " : "+ widget);
      }
      return widget;
    }
  }
  return null;
}
