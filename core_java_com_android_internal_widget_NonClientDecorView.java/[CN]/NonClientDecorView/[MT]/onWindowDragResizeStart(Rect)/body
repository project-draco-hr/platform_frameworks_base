{
  if (mOwner.isDestroyed()) {
    releaseResources();
    return;
  }
  if (mFrameRendererThread != null) {
    return;
  }
  final ThreadedRenderer renderer=(ThreadedRenderer)mOwner.getDecorView().getHardwareRenderer();
  if (renderer != null) {
    mFrameRendererThread=new ResizeFrameThread(renderer,initialBounds);
    updateElevation();
  }
}
