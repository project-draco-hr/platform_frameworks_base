{
  mInfoType=infoType;
  mMimeType=mimeType;
  try {
    mData=DrmUtils.readBytes(path);
  }
 catch (  IOException e) {
    mData=null;
  }
  if (!isValid()) {
    final String msg="infoType: " + infoType + ","+ "mimeType: "+ mimeType+ ","+ "data: "+ mData;
    throw new IllegalArgumentException();
  }
}
