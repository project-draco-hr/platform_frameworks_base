{
  if (duration > 0) {
    long bedtime=SystemClock.uptimeMillis();
    do {
      try {
        this.wait(duration);
      }
 catch (      InterruptedException e) {
      }
      if (mDone) {
        break;
      }
      duration=duration - SystemClock.uptimeMillis() - bedtime;
    }
 while (duration > 0);
  }
}
