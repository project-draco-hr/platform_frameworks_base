{
  if (mContext.checkCallingOrSelfPermission(android.Manifest.permission.FLASHLIGHT) != PackageManager.PERMISSION_GRANTED && mContext.checkCallingOrSelfPermission(android.Manifest.permission.HARDWARE_TEST) != PackageManager.PERMISSION_GRANTED) {
    throw new SecurityException("Requires FLASHLIGHT or HARDWARE_TEST permission");
  }
  Hardware.setFlashlightEnabled(on);
}
