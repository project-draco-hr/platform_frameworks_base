{
  super(name);
  mLogVerbose=Log.isLoggable(TAG,Log.VERBOSE);
  String adjStr=SystemProperties.get("ro.media.effect.bgdropper.adj");
  if (adjStr.length() > 0) {
    try {
      mAcceptStddev+=Float.parseFloat(adjStr);
      if (mLogVerbose) {
        Log.v(TAG,"Adjusting accept threshold by " + adjStr + ", now "+ mAcceptStddev);
      }
    }
 catch (    NumberFormatException e) {
      Log.e(TAG,"Badly formatted property ro.media.effect.bgdropper.adj: " + adjStr);
    }
  }
}
