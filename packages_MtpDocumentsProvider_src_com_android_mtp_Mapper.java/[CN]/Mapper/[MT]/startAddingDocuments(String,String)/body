{
  final SQLiteDatabase database=mDatabase.getSQLiteDatabase();
  database.beginTransaction();
  try {
    mDatabase.deleteDocumentsAndRootsRecursively(selection + " AND " + COLUMN_ROW_STATE+ "=?",strings(arg,ROW_STATE_PENDING));
    final ContentValues values=new ContentValues();
    values.put(COLUMN_ROW_STATE,ROW_STATE_INVALIDATED);
    database.update(TABLE_DOCUMENTS,values,selection,new String[]{arg});
    final boolean useNameForResolving=DatabaseUtils.queryNumEntries(database,TABLE_DOCUMENTS,selection + " AND " + COLUMN_STORAGE_ID+ " IS NULL",new String[]{arg}) > 0;
    database.setTransactionSuccessful();
    return useNameForResolving ? MAP_BY_NAME : MAP_BY_MTP_IDENTIFIER;
  }
  finally {
    database.endTransaction();
  }
}
