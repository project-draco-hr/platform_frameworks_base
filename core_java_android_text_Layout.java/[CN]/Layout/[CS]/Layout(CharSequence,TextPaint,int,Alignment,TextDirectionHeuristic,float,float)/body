{
  if (width < 0)   throw new IllegalArgumentException("Layout: " + width + " < 0");
  if (paint != null) {
    paint.bgColor=0;
    paint.baselineShift=0;
  }
  mText=text;
  mPaint=paint;
  mWorkPaint=new TextPaint();
  mWidth=width;
  mAlignment=align;
  mSpacingMult=spacingMult;
  mSpacingAdd=spacingAdd;
  mSpannedText=text instanceof Spanned;
  mTextDir=textDir;
}
