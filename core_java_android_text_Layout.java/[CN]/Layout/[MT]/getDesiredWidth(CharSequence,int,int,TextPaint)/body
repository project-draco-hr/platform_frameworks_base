{
  float need=0;
  TextPaint workPaint=new TextPaint();
  int next;
  for (int i=start; i <= end; i=next) {
    next=TextUtils.indexOf(source,'\n',i,end);
    if (next < 0)     next=end;
    float w=measureText(paint,workPaint,source,i,next,null,true,null);
    if (w > need)     need=w;
    next++;
  }
  return need;
}
