{
  int id=event.getEventId();
switch (id) {
case MouseEvent.MOUSE_MOVED:
    if (syntheticGrabOwner != null) {
      syntheticGrabOwner=null;
      syntheticGrabDepth=0;
    }
  if (lastSyntheticGrabOwner != null) {
    lastSyntheticGrabOwner=null;
  }
case MouseEvent.MOUSE_DRAGGED:
if (syntheticGrabOwner == null && lastSyntheticGrabOwner != null) {
  syntheticGrabOwner=lastSyntheticGrabOwner;
  syntheticGrabDepth=0;
  int mask=event.getInputModifiers();
  syntheticGrabDepth+=(mask & InputEvent.BUTTON1_DOWN_MASK) != 0 ? 1 : 0;
  syntheticGrabDepth+=(mask & InputEvent.BUTTON2_DOWN_MASK) != 0 ? 1 : 0;
  syntheticGrabDepth+=(mask & InputEvent.BUTTON3_DOWN_MASK) != 0 ? 1 : 0;
}
}
}
