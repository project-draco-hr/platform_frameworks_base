{
  LocalSocket socket=null;
  try {
    socket=new LocalSocket();
    LocalSocketAddress address=new LocalSocketAddress(VOLD_SOCKET,LocalSocketAddress.Namespace.RESERVED);
    socket.connect(address);
    mService.onVoldConnected();
    InputStream inputStream=socket.getInputStream();
    mOutputStream=socket.getOutputStream();
    byte[] buffer=new byte[4096];
    while (true) {
      int count=inputStream.read(buffer);
      if (count < 0)       break;
      int start=0;
      for (int i=0; i < count; i++) {
        if (buffer[i] == 0) {
          String event=new String(buffer,start,i - start);
          String[] tokens=event.split(" ");
          try {
            int code=Integer.parseInt(tokens[0]);
            if (code >= ResponseCode.UnsolicitedInformational) {
              try {
                handleUnsolicitedEvent(code,event,tokens);
              }
 catch (              Exception ex) {
                Log.e(TAG,String.format("Error handling '%s'",event),ex);
              }
            }
 else {
              try {
                mResponseQueue.put(event);
              }
 catch (              InterruptedException ex) {
                Log.e(TAG,"InterruptedException");
              }
            }
          }
 catch (          NumberFormatException nfe) {
            Log.w(TAG,"Unknown msg from Vold '" + event + "'");
          }
          start=i + 1;
        }
      }
    }
  }
 catch (  IOException ex) {
    Log.e(TAG,"IOException in listenToSocket");
  }
synchronized (this) {
    if (mOutputStream != null) {
      try {
        mOutputStream.close();
      }
 catch (      IOException e) {
        Log.w(TAG,"IOException closing output stream");
      }
      mOutputStream=null;
    }
  }
  try {
    if (socket != null) {
      socket.close();
    }
  }
 catch (  IOException ex) {
    Log.w(TAG,"IOException closing socket");
  }
  Log.e(TAG,"Failed to connect to Vold",new IllegalStateException());
  SystemClock.sleep(5000);
}
