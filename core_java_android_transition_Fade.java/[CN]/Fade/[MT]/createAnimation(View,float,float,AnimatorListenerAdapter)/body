{
  if (startAlpha == endAlpha) {
    if (listener != null) {
      listener.onAnimationEnd(null);
    }
    return null;
  }
  final ObjectAnimator anim=ObjectAnimator.ofFloat(view,"alpha",startAlpha,endAlpha);
  if (listener != null) {
    anim.addListener(listener);
    anim.addPauseListener(listener);
  }
  return anim;
}
