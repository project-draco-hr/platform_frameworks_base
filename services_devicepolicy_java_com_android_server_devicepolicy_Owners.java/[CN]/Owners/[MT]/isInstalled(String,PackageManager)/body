{
  try {
    PackageInfo pi;
    if ((pi=pm.getPackageInfo(packageName,0)) != null) {
      if ((pi.applicationInfo.flags) != 0) {
        return true;
      }
    }
  }
 catch (  NameNotFoundException nnfe) {
    Slog.w(TAG,"Device Owner package " + packageName + " not installed.");
  }
  return false;
}
