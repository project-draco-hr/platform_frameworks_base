{
  Looper looper;
  if ((looper=Looper.myLooper()) != null) {
    mEventHandler=new EventHandler(looper);
  }
 else   if ((looper=Looper.getMainLooper()) != null) {
    mEventHandler=new EventHandler(looper);
  }
 else {
    mEventHandler=null;
  }
  nativeInit(texName,new WeakReference<SurfaceTexture>(this));
}
