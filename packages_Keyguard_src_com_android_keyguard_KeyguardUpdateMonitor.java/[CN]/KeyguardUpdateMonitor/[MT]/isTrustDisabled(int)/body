{
  final DevicePolicyManager dpm=(DevicePolicyManager)mContext.getSystemService(Context.DEVICE_POLICY_SERVICE);
  if (dpm != null) {
    final boolean disabledByGlobalActions=false;
    final boolean disabledBySettings=false;
    final boolean disabledBySimPin=isSimPinSecure();
    final boolean disabledByDpm=(dpm.getKeyguardDisabledFeatures(null,userId) & DevicePolicyManager.KEYGUARD_DISABLE_TRUST_AGENTS) != 0;
    return disabledByDpm || disabledByGlobalActions || disabledBySettings|| disabledBySimPin;
  }
  return false;
}
