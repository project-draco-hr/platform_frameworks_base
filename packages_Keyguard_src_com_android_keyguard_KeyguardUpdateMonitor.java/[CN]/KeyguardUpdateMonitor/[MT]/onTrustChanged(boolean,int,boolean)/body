{
  mUserHasTrust.put(userId,enabled);
  for (int i=0; i < mCallbacks.size(); i++) {
    KeyguardUpdateMonitorCallback cb=mCallbacks.get(i).get();
    if (cb != null) {
      cb.onTrustChanged(userId);
      if (enabled && initiatedByUser) {
        cb.onTrustInitiatedByUser(userId);
      }
    }
  }
}
