{
  int act=ev.getAction();
  if (act == ev.ACTION_UP) {
    mRender.newTouchPosition(0,0,0);
    return false;
  }
  float rate=(ev.getPressure() * 50.f);
  rate*=rate;
  if (rate > 2000.f) {
    rate=2000.f;
  }
  mRender.newTouchPosition((int)ev.getX(),(int)ev.getY(),(int)rate);
  return true;
}
