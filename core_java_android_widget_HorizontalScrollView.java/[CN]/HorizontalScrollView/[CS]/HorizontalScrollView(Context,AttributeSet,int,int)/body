{
  super(context,attrs,defStyleAttr,defStyleRes);
  initScrollView();
  final TypedArray a=context.obtainStyledAttributes(attrs,android.R.styleable.HorizontalScrollView,defStyleAttr,defStyleRes);
  setFillViewport(a.getBoolean(android.R.styleable.HorizontalScrollView_fillViewport,false));
  a.recycle();
}
