{
  cancelFadeAnimations();
  if (shouldHideBackground()) {
    mBackgroundDimmed.setVisibility(View.INVISIBLE);
    mBackgroundNormal.setVisibility(View.INVISIBLE);
  }
 else   if (mDimmed) {
    final boolean dontShowDimmed=isGroupExpansionChanging() && isChildInGroup();
    mBackgroundDimmed.setVisibility(dontShowDimmed ? View.INVISIBLE : View.VISIBLE);
    mBackgroundNormal.setVisibility((mActivated || dontShowDimmed) ? View.VISIBLE : View.INVISIBLE);
  }
 else {
    mBackgroundDimmed.setVisibility(View.INVISIBLE);
    mBackgroundNormal.setVisibility(View.VISIBLE);
    mBackgroundNormal.setAlpha(1f);
    removeCallbacks(mTapTimeoutRunnable);
    makeInactive(false);
  }
  setNormalBackgroundVisibilityAmount(mBackgroundNormal.getVisibility() == View.VISIBLE ? 1.0f : 0.0f);
}
