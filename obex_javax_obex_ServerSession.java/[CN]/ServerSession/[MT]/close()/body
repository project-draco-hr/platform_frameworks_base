{
  if (mListener != null) {
    mListener.onClose();
  }
  try {
    mClosed=true;
    if (mInput != null)     mInput.close();
    if (mOutput != null)     mOutput.close();
    if (mTransport != null)     mTransport.close();
  }
 catch (  Exception e) {
    if (V)     Log.d(TAG,"Exception occured during close() - ignore",e);
  }
  mTransport=null;
  mInput=null;
  mOutput=null;
  mListener=null;
}
