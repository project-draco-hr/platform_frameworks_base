{
  if (!mItemData.shouldShowIcon(mMenuType)) {
    return;
  }
  if (mIconView == null && icon == null) {
    return;
  }
  if (mIconView == null) {
    insertIconView();
  }
  if (icon != null) {
    mIconView.setImageDrawable(icon);
    if (mIconView.getVisibility() != VISIBLE) {
      mIconView.setVisibility(VISIBLE);
    }
  }
 else {
    mIconView.setVisibility(GONE);
  }
}
