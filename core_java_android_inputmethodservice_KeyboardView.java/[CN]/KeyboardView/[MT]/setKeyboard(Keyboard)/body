{
  if (mKeyboard != null) {
    showPreview(NOT_A_KEY);
  }
  mKeyboard=keyboard;
  List<Key> keys=mKeyboard.getKeys();
  mKeys=keys.toArray(new Key[keys.size()]);
  requestLayout();
  mKeyboardChanged=true;
  invalidateAllKeys();
  computeProximityThreshold(keyboard);
  mMiniKeyboardCache.clear();
  mAbortKey=true;
}
