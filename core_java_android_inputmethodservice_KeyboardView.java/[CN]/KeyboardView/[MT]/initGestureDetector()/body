{
  mGestureDetector=new GestureDetector(new GestureDetector.SimpleOnGestureListener(){
    @Override public boolean onFling(    MotionEvent me1,    MotionEvent me2,    float velocityX,    float velocityY){
      final float absX=Math.abs(velocityX);
      final float absY=Math.abs(velocityY);
      if (velocityX > 500 && absY < absX) {
        swipeRight();
        return true;
      }
 else       if (velocityX < -500 && absY < absX) {
        swipeLeft();
        return true;
      }
 else       if (velocityY < -500 && absX < absY) {
        swipeUp();
        return true;
      }
 else       if (velocityY > 500 && absX < 200) {
        swipeDown();
        return true;
      }
 else       if (absX > 800 || absY > 800) {
        return true;
      }
      return false;
    }
  }
);
  mGestureDetector.setIsLongpressEnabled(false);
}
