{
switch (alignment) {
case TextTrackCue.ALIGNMENT_START:
    return layoutDirection == View.LAYOUT_DIRECTION_LTR ? TextTrackCue.ALIGNMENT_LEFT : TextTrackCue.ALIGNMENT_RIGHT;
case TextTrackCue.ALIGNMENT_END:
  return layoutDirection == View.LAYOUT_DIRECTION_LTR ? TextTrackCue.ALIGNMENT_RIGHT : TextTrackCue.ALIGNMENT_LEFT;
}
return alignment;
}
