{
  setUidPolicyUncheckedLocked(uid,policy,persist);
  if ((oldPolicy == POLICY_NONE && policy == POLICY_REJECT_METERED_BACKGROUND) || (oldPolicy == POLICY_REJECT_METERED_BACKGROUND && policy == POLICY_NONE)) {
    mHandler.obtainMessage(MSG_RESTRICT_BACKGROUND_WHITELIST_CHANGED,uid,0).sendToTarget();
  }
}
