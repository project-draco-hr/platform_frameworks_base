{
  final PackageManager pm=mContext.getPackageManager();
  updateRulesForDeviceIdleLocked();
  updateRulesForAppIdleLocked();
  updateRulesForRestrictPowerLocked();
  final List<UserInfo> users=mUserManager.getUsers();
  final List<ApplicationInfo> apps=pm.getInstalledApplications(PackageManager.GET_UNINSTALLED_PACKAGES | PackageManager.GET_DISABLED_COMPONENTS | PackageManager.MATCH_ENCRYPTION_AWARE_AND_UNAWARE);
  for (  UserInfo user : users) {
    for (    ApplicationInfo app : apps) {
      final int uid=UserHandle.getUid(user.id,app.uid);
      updateRulesForUidLocked(uid);
    }
  }
  updateRulesForUidLocked(android.os.Process.MEDIA_UID);
  updateRulesForUidLocked(android.os.Process.DRM_UID);
  if (restrictedNetworksChanged) {
    normalizePoliciesLocked();
    updateNetworkRulesLocked();
  }
}
