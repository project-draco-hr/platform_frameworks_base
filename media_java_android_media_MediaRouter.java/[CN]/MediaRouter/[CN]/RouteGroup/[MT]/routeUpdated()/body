{
  int types=0;
  final int count=mRoutes.size();
  if (count == 0) {
    MediaRouter.removeRoute(this);
    return;
  }
  for (int i=0; i < count; i++) {
    types|=mRoutes.get(i).mSupportedTypes;
  }
  mSupportedTypes=types;
  mIcon=count == 1 ? mRoutes.get(0).getIconDrawable() : null;
  super.routeUpdated();
}
