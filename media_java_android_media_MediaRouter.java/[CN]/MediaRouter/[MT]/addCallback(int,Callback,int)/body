{
  CallbackInfo info;
  int index=findCallbackInfo(cb);
  if (index >= 0) {
    info=sStatic.mCallbacks.get(index);
    info.type|=types;
    info.flags|=flags;
  }
 else {
    info=new CallbackInfo(cb,types,flags,this);
    sStatic.mCallbacks.add(info);
  }
  if ((info.flags & CALLBACK_FLAG_ACTIVE_SCAN) != 0) {
    sStatic.updateActiveScan();
  }
}
