{
  mAppContext=context;
  mHandler=new Handler(mAppContext.getMainLooper());
  mAudioManager=(AudioManager)mAppContext.getSystemService(Context.AUDIO_SERVICE);
  mSystemCategory=new RouteCategory(mAppContext.getText(com.android.internal.R.string.default_audio_route_category_name),ROUTE_TYPE_LIVE_AUDIO,false);
  registerReceivers();
  createDefaultRoutes();
}
