{
  checkThread();
  if (LOCAL_LOGV)   Log.v(TAG,"Invalidate child: " + dirty);
  if (mCurScrollY != 0 || mAppScale != 1.0f) {
    mTempRect.set(dirty);
    if (mCurScrollY != 0) {
      mTempRect.offset(0,-mCurScrollY);
    }
    if (mAppScale != 1.0f) {
      mTempRect.scale(mAppScale);
    }
    dirty=mTempRect;
  }
  mDirty.union(dirty);
  if (!mWillDrawSoon) {
    scheduleTraversals();
  }
}
