{
  checkThread();
  if (DEBUG_DRAW)   Log.v(TAG,"Invalidate child: " + dirty);
  if (mCurScrollY != 0 || mTranslator != null) {
    mTempRect.set(dirty);
    if (mCurScrollY != 0) {
      mTempRect.offset(0,-mCurScrollY);
    }
    if (mTranslator != null) {
      mTranslator.translateRectInAppWindowToScreen(mTempRect);
    }
    dirty=mTempRect;
  }
  mDirty.union(dirty);
  if (!mWillDrawSoon) {
    scheduleTraversals();
  }
}
