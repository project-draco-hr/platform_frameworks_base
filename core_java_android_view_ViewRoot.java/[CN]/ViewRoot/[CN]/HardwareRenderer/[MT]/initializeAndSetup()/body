{
  if (mRequested) {
    checkErrors();
    if (mRequested && !mEnabled) {
      initializeGL();
      if (mGlCanvas != null) {
        float appScale=mAttachInfo.mApplicationScale;
        mGlCanvas.setViewport((int)(mWidth * appScale + 0.5f),(int)(mHeight * appScale + 0.5f));
      }
    }
  }
}
