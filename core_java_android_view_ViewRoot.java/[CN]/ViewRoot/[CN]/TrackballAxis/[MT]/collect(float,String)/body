{
  if (off > 0) {
    if (dir < 0) {
      if (DEBUG_TRACKBALL)       Log.v(TAG,axis + " reversed to positive!");
      position=0;
      step=0;
      acceleration=1;
    }
    dir=1;
  }
 else   if (off < 0) {
    if (dir > 0) {
      if (DEBUG_TRACKBALL)       Log.v(TAG,axis + " reversed to negative!");
      position=0;
      step=0;
      acceleration=1;
    }
    dir=-1;
  }
  position+=off;
  return (absPosition=Math.abs(position));
}
