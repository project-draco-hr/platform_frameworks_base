{
  CharSequence carrierText=null;
  StatusMode status=getStatusForIccState(simState);
switch (status) {
case Normal:
    carrierText=concatenate(plmn,spn);
  break;
case SimNotReady:
carrierText=null;
break;
case NetworkLocked:
carrierText=makeCarrierStringOnEmergencyCapable(mContext.getText(R.string.lockscreen_network_locked_message),plmn);
break;
case SimMissing:
carrierText=makeCarrierStringOnEmergencyCapable(getContext().getText(R.string.lockscreen_missing_sim_message_short),plmn);
break;
case SimPermDisabled:
carrierText=getContext().getText(R.string.lockscreen_permanent_disabled_sim_message_short);
break;
case SimMissingLocked:
carrierText=makeCarrierStringOnEmergencyCapable(getContext().getText(R.string.lockscreen_missing_sim_message_short),plmn);
break;
case SimLocked:
carrierText=makeCarrierStringOnEmergencyCapable(getContext().getText(R.string.lockscreen_sim_locked_message),plmn);
break;
case SimPukLocked:
carrierText=makeCarrierStringOnEmergencyCapable(getContext().getText(R.string.lockscreen_sim_puk_locked_message),plmn);
break;
}
return carrierText;
}
