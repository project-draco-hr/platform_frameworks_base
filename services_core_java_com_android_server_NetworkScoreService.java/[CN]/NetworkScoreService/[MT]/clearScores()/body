{
  if (NetworkScorerAppManager.isCallerActiveScorer(mContext,getCallingUid()) || mContext.checkCallingOrSelfPermission(permission.BROADCAST_SCORE_NETWORKS) == PackageManager.PERMISSION_GRANTED) {
    clearInternal();
    return true;
  }
 else {
    throw new SecurityException("Caller is neither the active scorer nor the scorer manager.");
  }
}
