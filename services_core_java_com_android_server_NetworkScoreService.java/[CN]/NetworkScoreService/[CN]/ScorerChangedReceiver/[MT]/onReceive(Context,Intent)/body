{
  String action=intent.getAction();
  if (Intent.ACTION_PACKAGE_CHANGED.equals(action) || Intent.ACTION_PACKAGE_REPLACED.equals(action) || Intent.ACTION_PACKAGE_FULLY_REMOVED.equals(action)) {
    NetworkScorerAppData activeScorer=NetworkScorerAppManager.getActiveScorer(mContext);
    if (activeScorer == null) {
      Log.i(TAG,"Package " + mRegisteredPackage + " is no longer valid, disabling scoring.");
      setScorerInternal(null);
    }
 else     if (activeScorer.mScoringServiceClassName == null) {
      unbindFromScoringServiceIfNeeded();
    }
 else {
      bindToScoringServiceIfNeeded(activeScorer);
    }
  }
}
