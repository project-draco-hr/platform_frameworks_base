{
  super(c);
  setOutlineProvider(new ViewOutlineProvider(){
    @Override public void getOutline(    View view,    Outline outline){
      int w=getWidth() / 2;
      int h=getHeight() / 2;
      mRect.set(0,0,w,h);
      mRect.offset((int)(mClipPosition * w),getHeight() / 4);
      outline.setRoundRect(mRect,w / 2);
    }
  }
);
  setClipToOutline(true);
}
