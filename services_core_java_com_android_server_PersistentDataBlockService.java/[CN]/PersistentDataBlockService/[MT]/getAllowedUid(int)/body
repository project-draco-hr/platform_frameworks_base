{
  String allowedPackage=mContext.getResources().getString(R.string.config_persistentDataPackageName);
  PackageManager pm=mContext.getPackageManager();
  int allowedUid=-1;
  try {
    allowedUid=pm.getPackageUidAsUser(allowedPackage,PackageManager.MATCH_SYSTEM_ONLY,userHandle);
  }
 catch (  PackageManager.NameNotFoundException e) {
    Slog.e(TAG,"not able to find package " + allowedPackage,e);
  }
  return allowedUid;
}
