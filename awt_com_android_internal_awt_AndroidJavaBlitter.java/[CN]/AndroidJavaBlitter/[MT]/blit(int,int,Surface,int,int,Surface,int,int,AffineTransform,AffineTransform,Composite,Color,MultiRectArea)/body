{
  if (xform == null) {
    blit(srcX,srcY,srcSurf,dstX,dstY,dstSurf,width,height,sysxform,comp,bgcolor,clip);
  }
 else {
    double scaleX=xform.getScaleX();
    double scaleY=xform.getScaleY();
    double scaledX=dstX / scaleX;
    double scaledY=dstY / scaleY;
    AffineTransform at=new AffineTransform();
    at.setToTranslation(scaledX,scaledY);
    xform.concatenate(at);
    sysxform.concatenate(xform);
    blit(srcX,srcY,srcSurf,0,0,dstSurf,width,height,sysxform,comp,bgcolor,clip);
  }
}
