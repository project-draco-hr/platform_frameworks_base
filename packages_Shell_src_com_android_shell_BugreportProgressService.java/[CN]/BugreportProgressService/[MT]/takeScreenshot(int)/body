{
  MetricsLogger.action(this,MetricsEvent.ACTION_BUGREPORT_NOTIFICATION_ACTION_SCREENSHOT);
  if (getInfo(id) == null) {
    Log.w(TAG,"takeScreenshot(): canceling notification because id " + id + " was not found");
    NotificationManager.from(mContext).cancel(id);
    return;
  }
  setTakingScreenshot(true);
  collapseNotificationBar();
  final String msg=mContext.getResources().getQuantityString(com.android.internal.R.plurals.bugreport_countdown,SCREENSHOT_DELAY_SECONDS,SCREENSHOT_DELAY_SECONDS);
  Log.i(TAG,msg);
  Toast.makeText(mContext,msg,Toast.LENGTH_SHORT).show();
  takeScreenshot(id,SCREENSHOT_DELAY_SECONDS);
}
