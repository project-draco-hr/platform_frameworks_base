{
  final String title=context.getString(R.string.bugreport_updating_title);
  final Notification.Builder builder=new Notification.Builder(context).setSmallIcon(com.android.internal.R.drawable.stat_sys_adb).setContentTitle(title).setTicker(title).setContentText(context.getString(R.string.bugreport_updating_wait)).setLocalOnly(true).setColor(context.getColor(com.android.internal.R.color.system_notification_accent_color));
  Log.v(TAG,"Sending 'Updating zip' notification for pid " + pid + ": "+ title);
  NotificationManager.from(context).notify(TAG,pid,builder.build());
}
