{
synchronized (mProcesses) {
    final BugreportInfo info=mProcesses.get(pid);
    if (info == null) {
      Log.w(TAG,"No bugreport info for PID " + pid);
      return;
    }
    info.title=title;
    info.description=description;
    if (name != null && !info.name.equals(name)) {
      info.name=name;
      updateProgress(info);
    }
  }
}
