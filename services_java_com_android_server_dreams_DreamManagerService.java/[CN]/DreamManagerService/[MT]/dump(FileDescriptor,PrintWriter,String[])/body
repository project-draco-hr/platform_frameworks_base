{
  if (mContext.checkCallingOrSelfPermission("android.permission.DUMP") != PackageManager.PERMISSION_GRANTED) {
    pw.println("Permission Denial: can't dump DreamManager from pid=" + Binder.getCallingPid() + ", uid="+ Binder.getCallingUid());
    return;
  }
  pw.println("DREAM MANAGER (dumpsys dreams)");
  pw.println();
  pw.println("mCurrentDreamToken=" + mCurrentDreamToken);
  pw.println("mCurrentDreamName=" + mCurrentDreamName);
  pw.println("mCurrentDreamUserId=" + mCurrentDreamUserId);
  pw.println("mCurrentDreamIsTest=" + mCurrentDreamIsTest);
  pw.println();
  DumpUtils.dumpAsync(mHandler,new DumpUtils.Dump(){
    @Override public void dump(    PrintWriter pw){
      mController.dump(pw);
    }
  }
,pw,200);
}
