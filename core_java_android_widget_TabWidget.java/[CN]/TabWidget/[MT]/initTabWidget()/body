{
  setOrientation(LinearLayout.HORIZONTAL);
  mGroupFlags|=FLAG_USE_CHILD_DRAWING_ORDER;
  mBottomLeftStrip=mContext.getResources().getDrawable(com.android.internal.R.drawable.tab_bottom_left);
  mBottomRightStrip=mContext.getResources().getDrawable(com.android.internal.R.drawable.tab_bottom_right);
  setFocusable(true);
  setOnFocusChangeListener(this);
}
