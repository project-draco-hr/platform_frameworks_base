{
  setChildrenDrawingOrderEnabled(true);
  final Context context=mContext;
  if (context.getApplicationInfo().targetSdkVersion <= Build.VERSION_CODES.DONUT) {
    if (mLeftStrip == null) {
      mLeftStrip=context.getDrawable(com.android.internal.R.drawable.tab_bottom_left_v4);
    }
    if (mRightStrip == null) {
      mRightStrip=context.getDrawable(com.android.internal.R.drawable.tab_bottom_right_v4);
    }
  }
 else {
    if (mLeftStrip == null) {
      mLeftStrip=context.getDrawable(com.android.internal.R.drawable.tab_bottom_left);
    }
    if (mRightStrip == null) {
      mRightStrip=context.getDrawable(com.android.internal.R.drawable.tab_bottom_right);
    }
  }
  setFocusable(true);
  setOnFocusChangeListener(this);
}
