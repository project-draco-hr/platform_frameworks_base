{
  if (child.getLayoutParams() == null) {
    final LinearLayout.LayoutParams lp=new LayoutParams(0,ViewGroup.LayoutParams.WRAP_CONTENT,1);
    lp.setMargins(0,0,0,0);
    child.setLayoutParams(lp);
  }
  child.setFocusable(true);
  child.setClickable(true);
  if (mDividerDrawable != null && getTabCount() > 0) {
    View divider=new View(mContext);
    final LinearLayout.LayoutParams lp=new LayoutParams(mDividerDrawable.getIntrinsicWidth(),mDividerDrawable.getIntrinsicHeight());
    lp.setMargins(0,0,0,0);
    divider.setLayoutParams(lp);
    divider.setBackgroundDrawable(mDividerDrawable);
    super.addView(divider);
  }
  super.addView(child);
  child.setOnClickListener(new TabClickListener(getTabCount() - 1));
  child.setOnFocusChangeListener(this);
}
