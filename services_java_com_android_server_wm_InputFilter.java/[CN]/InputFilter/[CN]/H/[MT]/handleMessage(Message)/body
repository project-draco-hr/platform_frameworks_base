{
switch (msg.what) {
case MSG_INSTALL:
    mHost=(Host)msg.obj;
  onInstalled();
break;
case MSG_UNINSTALL:
try {
onUninstalled();
}
  finally {
mHost=null;
}
break;
case MSG_INPUT_EVENT:
{
final InputEvent event=(InputEvent)msg.obj;
try {
onInputEvent(event,msg.arg1);
}
  finally {
event.recycle();
}
break;
}
}
}
