{
  try {
    mService.requestAccessoryPermission(new android.hardware.usb.UsbAccessory(accessory.getManufacturer(),accessory.getModel(),accessory.getDescription(),accessory.getVersion(),accessory.getUri()),mContext.getPackageName(),pi);
  }
 catch (  RemoteException e) {
    Log.e(TAG,"RemoteException in requestPermission",e);
  }
}
