{
  if (!isEnabled() || mDestroyed)   return;
  mDestroyed=true;
  checkCurrent();
  destroyCanvas();
  sEgl.eglMakeCurrent(sEglDisplay,EGL10.EGL_NO_SURFACE,EGL10.EGL_NO_SURFACE,EGL10.EGL_NO_CONTEXT);
  sEgl.eglDestroySurface(sEglDisplay,mEglSurface);
  mEglSurface=null;
  mGl=null;
  setEnabled(false);
}
