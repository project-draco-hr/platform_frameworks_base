{
  if (!sEglContext.equals(sEgl.eglGetCurrentContext()) || !mEglSurface.equals(sEgl.eglGetCurrentSurface(EGL10.EGL_DRAW))) {
    if (!sEgl.eglMakeCurrent(sEglDisplay,mEglSurface,mEglSurface,sEglContext)) {
      fallback(true);
      Log.e(LOG_TAG,"eglMakeCurrent failed " + getEGLErrorString(sEgl.eglGetError()));
      return SURFACE_STATE_ERROR;
    }
 else {
      return SURFACE_STATE_UPDATED;
    }
  }
  return SURFACE_STATE_SUCCESS;
}
