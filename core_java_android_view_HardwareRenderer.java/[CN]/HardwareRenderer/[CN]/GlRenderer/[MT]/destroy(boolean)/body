{
  if (full && mCanvas != null) {
    mCanvas=null;
  }
  if (!isEnabled() || mDestroyed)   return;
  mDestroyed=true;
  sEgl.eglMakeCurrent(sEglDisplay,EGL_NO_SURFACE,EGL_NO_SURFACE,EGL_NO_CONTEXT);
  sEgl.eglDestroySurface(sEglDisplay,mEglSurface);
  mEglSurface=null;
  mGl=null;
  setEnabled(false);
}
