{
  if (isEnabled()) {
    int error=sEgl.eglGetError();
    if (error != EGL10.EGL_SUCCESS) {
      destroy(true);
      if (error != EGL11.EGL_CONTEXT_LOST) {
        setRequested(false);
      }
 else {
        Log.w(LOG_TAG,"Mountain View, we've had a problem here. " + "Switching back to software rendering.");
      }
      Log.w(LOG_TAG,"EGL error: " + getEGLErrorString(error));
    }
  }
}
