{
  if (isRequested() && !isEnabled()) {
    initializeEgl();
    mGl=createEglSurface(holder);
    mDestroyed=false;
    if (mGl != null) {
      int err=sEgl.eglGetError();
      if (err != EGL10.EGL_SUCCESS) {
        destroy();
        setRequested(false);
      }
 else {
        if (mCanvas != null) {
          destroyCanvas();
        }
        mCanvas=createCanvas();
        if (mCanvas != null) {
          setEnabled(true);
        }
 else {
          Log.w(LOG_TAG,"Hardware accelerated Canvas could not be created");
        }
      }
      return mCanvas != null;
    }
  }
  return false;
}
