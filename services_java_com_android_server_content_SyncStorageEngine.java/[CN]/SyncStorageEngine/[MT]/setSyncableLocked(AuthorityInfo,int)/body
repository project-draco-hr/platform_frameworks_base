{
  if (syncable > 1) {
    syncable=1;
  }
 else   if (syncable < -1) {
    syncable=-1;
  }
  if (DEBUG)   Log.d(TAG,"setIsSyncable: " + aInfo.toString() + " -> "+ syncable);
  if (aInfo.syncable == syncable) {
    if (DEBUG)     Log.d(TAG,"setIsSyncable: already set to " + syncable + ", doing nothing");
    return;
  }
  aInfo.syncable=syncable;
  writeAccountInfoLocked();
  if (syncable > 0) {
    requestSync(aInfo,SyncOperation.REASON_IS_SYNCABLE,new Bundle());
  }
  reportChange(ContentResolver.SYNC_OBSERVER_TYPE_SETTINGS);
}
