{
  if (android.os.Process.myUid() == android.os.Process.SYSTEM_UID && mSyncRequestListener != null) {
    mSyncRequestListener.onSyncRequest(authorityInfo.base,reason,extras);
  }
 else {
    SyncRequest.Builder req=new SyncRequest.Builder().syncOnce(0,0).setExtras(extras);
    if (authorityInfo.base.target_provider) {
      req.setSyncAdapter(authorityInfo.base.account,authorityInfo.base.provider);
    }
 else {
      req.setSyncAdapter(authorityInfo.base.service);
    }
    ContentResolver.requestSync(req.build());
  }
}
