{
  PendingOperation pop;
synchronized (mAuthorities) {
    if (Log.isLoggable(TAG,Log.VERBOSE)) {
      Log.v(TAG,"insertIntoPending: authority=" + op.target + " extras="+ op.extras);
    }
    final EndPoint info=op.target;
    AuthorityInfo authority=getOrCreateAuthorityLocked(info,-1,true);
    if (authority == null) {
      return null;
    }
    pop=new PendingOperation(authority,op.reason,op.syncSource,op.extras,op.expedited);
    mPendingOperations.add(pop);
    appendPendingOperationLocked(pop);
    SyncStatusInfo status=getOrCreateSyncStatusLocked(authority.ident);
    status.pending=true;
  }
  reportChange(ContentResolver.SYNC_OBSERVER_TYPE_PENDING);
  return pop;
}
