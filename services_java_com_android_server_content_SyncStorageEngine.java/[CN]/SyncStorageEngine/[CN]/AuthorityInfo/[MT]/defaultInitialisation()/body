    defaultSync=new PeriodicSync(base.account,base.provider,new Bundle(),DEFAULT_POLL_FREQUENCY_SECONDS,calculateDefaultFlexTime(DEFAULT_POLL_FREQUENCY_SECONDS));
    periodicSyncs.add(defaultSync);
  }
}
