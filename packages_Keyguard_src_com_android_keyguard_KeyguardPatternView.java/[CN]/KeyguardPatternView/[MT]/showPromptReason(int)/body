{
switch (reason) {
case PROMPT_REASON_RESTART:
    mSecurityMessageDisplay.setMessage(R.string.kg_prompt_reason_restart_pattern,true);
  break;
case PROMPT_REASON_TIMEOUT:
mSecurityMessageDisplay.setMessage(R.string.kg_prompt_reason_timeout_pattern,true);
break;
case PROMPT_REASON_DEVICE_ADMIN:
mSecurityMessageDisplay.setMessage(R.string.kg_prompt_reason_device_admin,true);
break;
case PROMPT_REASON_USER_REQUEST:
mSecurityMessageDisplay.setMessage(R.string.kg_prompt_reason_user_request,true);
break;
case PROMPT_REASON_NONE:
break;
default :
mSecurityMessageDisplay.setMessage(R.string.kg_prompt_reason_timeout_pattern,true);
break;
}
}
