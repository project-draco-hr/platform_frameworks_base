{
  super(handler);
  mResolver=resolver;
  mHasWatch=getContext().getPackageManager().hasSystemFeature(PackageManager.FEATURE_WATCH);
  mResolver.registerContentObserver(Settings.Global.getUriFor(mHasWatch ? Settings.Global.DEVICE_IDLE_CONSTANTS_WATCH : Settings.Global.DEVICE_IDLE_CONSTANTS),false,this);
  updateConstants();
}
