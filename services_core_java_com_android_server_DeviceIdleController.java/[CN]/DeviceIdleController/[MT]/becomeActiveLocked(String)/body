{
  if (mState != STATE_ACTIVE) {
    EventLogTags.writeDeviceIdle(STATE_ACTIVE,reason);
    scheduleReportActiveLocked(false);
    mState=STATE_ACTIVE;
    mInactiveTimeout=DEFAULT_INACTIVE_TIMEOUT;
    mNextIdlePendingDelay=0;
    mNextIdleDelay=0;
    cancelAlarmLocked();
    stopMonitoringSignificantMotion();
  }
}
