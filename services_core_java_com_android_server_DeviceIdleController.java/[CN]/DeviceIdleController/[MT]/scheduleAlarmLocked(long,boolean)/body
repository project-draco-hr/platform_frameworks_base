{
  if (mSigMotionSensor == null) {
    return;
  }
  mNextAlarmTime=SystemClock.elapsedRealtime() + delay;
  if (idleUntil) {
    mAlarmManager.setIdleUntil(AlarmManager.ELAPSED_REALTIME_WAKEUP,mNextAlarmTime,mAlarmIntent);
  }
 else {
    mAlarmManager.set(AlarmManager.ELAPSED_REALTIME_WAKEUP,mNextAlarmTime,mAlarmIntent);
  }
}
