{
  if (DEBUG)   Slog.d(TAG,"scheduleAlarmLocked(" + delay + ", "+ idleUntil+ ")");
  if (mMotionSensor == null) {
    return;
  }
  mNextAlarmTime=SystemClock.elapsedRealtime() + delay;
  if (idleUntil) {
    mAlarmManager.setIdleUntil(AlarmManager.ELAPSED_REALTIME_WAKEUP,mNextAlarmTime,"DeviceIdleController.deep",mDeepAlarmListener,mHandler);
  }
 else {
    mAlarmManager.set(AlarmManager.ELAPSED_REALTIME_WAKEUP,mNextAlarmTime,"DeviceIdleController.deep",mDeepAlarmListener,mHandler);
  }
}
