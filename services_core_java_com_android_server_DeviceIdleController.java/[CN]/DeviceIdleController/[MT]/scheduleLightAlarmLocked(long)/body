{
  if (DEBUG)   Slog.d(TAG,"scheduleLightAlarmLocked(" + delay + ")");
  if (mMotionSensor == null) {
    return;
  }
  mNextLightAlarmTime=SystemClock.elapsedRealtime() + delay;
  mAlarmManager.set(AlarmManager.ELAPSED_REALTIME_WAKEUP,mNextLightAlarmTime,"DeviceIdleController.light",mLightAlarmListener,mHandler);
}
