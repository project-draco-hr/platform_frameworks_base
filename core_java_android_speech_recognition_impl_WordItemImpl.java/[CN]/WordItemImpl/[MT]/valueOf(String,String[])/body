{
  if (word == null)   throw new IllegalArgumentException("Word may not be null");
 else   if (pronunciations == null)   throw new IllegalArgumentException("Pronunciations may not be null");
  for (int i=0, size=pronunciations.length; i < size; ++i) {
    if (pronunciations[i] == null) {
      throw new IllegalArgumentException("Pronunciations element may not be null");
    }
 else {
      if (pronunciations[i].trim().equals(""))       throw new IllegalArgumentException("Pronunciations may not contain empty strings");
    }
  }
  return new WordItemImpl(word,pronunciations);
}
