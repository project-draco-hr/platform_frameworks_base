{
  String[] pronunciations;
  if (word == null)   throw new IllegalArgumentException("Word may not be null");
 else   if (pronunciation == null)   pronunciations=guessPronunciations;
 else   if (pronunciation.trim().equals(""))   throw new IllegalArgumentException("Pronunciation may not be an empty string");
 else   pronunciations=new String[]{pronunciation};
  return new WordItemImpl(word,pronunciations);
}
