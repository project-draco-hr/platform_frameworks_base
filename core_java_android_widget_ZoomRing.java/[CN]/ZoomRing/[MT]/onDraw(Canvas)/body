{
  super.onDraw(canvas);
  if (mDrawThumb) {
    if (DRAW_TRAIL) {
      mTrail.draw(canvas);
    }
    if ((mThumbArrowsToDraw & THUMB_ARROW_PLUS) != 0) {
      mThumbPlusArrowDrawable.draw(canvas);
    }
    if ((mThumbArrowsToDraw & THUMB_ARROW_MINUS) != 0) {
      mThumbMinusArrowDrawable.draw(canvas);
    }
    mThumbDrawable.draw(canvas);
  }
}
