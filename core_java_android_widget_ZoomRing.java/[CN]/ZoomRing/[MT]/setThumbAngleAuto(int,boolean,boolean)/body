{
  if (mThumbScroller == null || mThumbScroller.isFinished() || Math.abs(getDelta(angle,getThumbScrollerAngle())) < THUMB_GRAB_SLOP) {
    setThumbAngleInt(angle);
  }
 else {
    if (useDirection) {
      setThumbAngleAnimated(angle,0,ccw);
    }
 else {
      setThumbAngleAnimated(angle,0);
    }
  }
}
