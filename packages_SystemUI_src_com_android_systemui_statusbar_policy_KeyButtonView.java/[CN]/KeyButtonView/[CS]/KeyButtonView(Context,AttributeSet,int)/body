{
  super(context,attrs);
  TypedArray a=context.obtainStyledAttributes(attrs,R.styleable.KeyButtonView,defStyle,0);
  mCode=a.getInteger(R.styleable.KeyButtonView_keyCode,0);
  if (mCode == 0) {
    Slog.w(TAG,"KeyButtonView without key code id=0x" + Integer.toHexString(getId()));
  }
  a.recycle();
  mWindowManager=IWindowManager.Stub.asInterface(ServiceManager.getService(Context.WINDOW_SERVICE));
  setClickable(true);
  mTouchSlop=ViewConfiguration.get(context).getScaledTouchSlop();
}
