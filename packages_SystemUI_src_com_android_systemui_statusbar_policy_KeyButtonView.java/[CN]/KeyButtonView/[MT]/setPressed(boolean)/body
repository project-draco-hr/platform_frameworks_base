{
  if (pressed != isPressed()) {
    if (mPressedAnim != null && mPressedAnim.isRunning()) {
      mPressedAnim.cancel();
    }
    final AnimatorSet as=mPressedAnim=new AnimatorSet();
    final ObjectAnimator scaleAnimator=ObjectAnimator.ofFloat(this,"glowScale",GLOW_MAX_SCALE_FACTOR);
    scaleAnimator.setInterpolator(mInterpolator);
    if (pressed) {
      mGlowScale=0f;
      if (mGlowAlpha < mQuiescentAlpha)       mGlowAlpha=mQuiescentAlpha;
      setDrawingAlpha(1f);
      as.playTogether(ObjectAnimator.ofFloat(this,"glowAlpha",1f),scaleAnimator);
      as.setDuration(500);
    }
 else {
      mAnimateToQuiescent.cancel();
      mAnimateToQuiescent=animateToQuiescent();
      as.playTogether(ObjectAnimator.ofFloat(this,"glowAlpha",mGlowAlpha,mGlowAlpha * .2f,0f),scaleAnimator,mAnimateToQuiescent);
      as.setDuration(500);
    }
    as.start();
  }
  super.setPressed(pressed);
}
