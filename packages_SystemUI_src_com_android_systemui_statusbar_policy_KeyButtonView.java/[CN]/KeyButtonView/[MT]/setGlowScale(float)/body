{
  if (mGlowBG == null)   return;
  mGlowScale=x;
  final float w=getWidth();
  final float h=getHeight();
  if (x < 1.0f) {
    invalidate();
  }
 else {
    x=(w * (x - 1.0f)) / 2.0f;
    com.android.systemui.SwipeHelper.invalidateGlobalRegion(this,new RectF(getLeft() - x,getTop() - x,getRight() + x,getBottom() + x));
  }
}
