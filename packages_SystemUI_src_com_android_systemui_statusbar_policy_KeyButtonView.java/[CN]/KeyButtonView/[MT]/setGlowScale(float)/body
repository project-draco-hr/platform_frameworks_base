{
  if (mGlowBG == null)   return;
  mGlowScale=x;
  final float w=getWidth();
  final float h=getHeight();
  if (x < 1.0f) {
    invalidate();
  }
 else {
    final float rx=(w * (x - 1.0f)) / 2.0f;
    final float ry=(h * (x - 1.0f)) / 2.0f;
    com.android.systemui.SwipeHelper.invalidateGlobalRegion(this,new RectF(getLeft() - rx,getTop() - ry,getRight() + rx,getBottom() + ry));
  }
}
