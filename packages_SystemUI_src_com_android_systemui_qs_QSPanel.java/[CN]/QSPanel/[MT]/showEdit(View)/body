{
  v.post(new Runnable(){
    @Override public void run(){
      if (mCustomizePanel != null) {
        if (!mCustomizePanel.isCustomizing()) {
          int[] loc=new int[2];
          v.getLocationInWindow(loc);
          int x=loc[0];
          int y=loc[1];
          mCustomizePanel.show(x,y);
        }
      }
    }
  }
);
}
