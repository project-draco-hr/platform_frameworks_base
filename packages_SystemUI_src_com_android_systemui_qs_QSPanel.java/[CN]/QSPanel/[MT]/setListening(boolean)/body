{
  if (mListening == listening)   return;
  mListening=listening;
  for (  TileRecord r : mRecords) {
    r.tile.setListening(mListening);
    if (mListening) {
      r.tile.refreshState();
    }
  }
  if (listening) {
    mBrightnessController.registerCallbacks();
  }
 else {
    mBrightnessController.unregisterCallbacks();
  }
}
