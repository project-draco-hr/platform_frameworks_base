{
  if (show) {
    if (!mExpanded) {
      mTriggeredExpand=true;
      mHost.animateToggleQSExpansion();
    }
 else {
      mTriggeredExpand=false;
    }
  }
 else   if (mTriggeredExpand) {
    mHost.animateToggleQSExpansion();
    mTriggeredExpand=false;
  }
  if (r instanceof TileRecord) {
    handleShowDetailTile((TileRecord)r,show);
  }
 else {
    int x=0;
    int y=0;
    if (r != null) {
      x=r.x;
      y=r.y;
    }
    handleShowDetailImpl(r,show,x,y);
  }
}
