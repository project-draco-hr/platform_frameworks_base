{
  if (mSurface != null) {
    if (WindowManagerService.SHOW_TRANSACTIONS || WindowManagerService.SHOW_SURFACE_ALLOC)     Slog.i(WindowManagerService.TAG,"  FREEZE " + mSurface + ": DESTROY");
    mSurface.destroy();
    mSurface=null;
  }
  if (mBlackFrame != null) {
    mBlackFrame.kill();
  }
  if (mExitAnimation != null) {
    mExitAnimation.cancel();
    mExitAnimation=null;
  }
  if (mEnterAnimation != null) {
    mEnterAnimation.cancel();
    mEnterAnimation=null;
  }
}
