{
  if (DEBUG_STATE)   Slog.v(TAG,"Kill!");
  if (mSurface != null) {
    if (WindowManagerService.SHOW_TRANSACTIONS || WindowManagerService.SHOW_SURFACE_ALLOC)     Slog.i(WindowManagerService.TAG,"  FREEZE " + mSurface + ": DESTROY");
    mSurface.destroy();
    mSurface=null;
  }
  if (mBlackFrame != null) {
    mBlackFrame.kill();
    mBlackFrame=null;
  }
  if (mStartExitAnimation != null) {
    mStartExitAnimation.cancel();
    mStartExitAnimation=null;
  }
  if (mStartEnterAnimation != null) {
    mStartEnterAnimation.cancel();
    mStartEnterAnimation=null;
  }
  if (mFinishExitAnimation != null) {
    mFinishExitAnimation.cancel();
    mFinishExitAnimation=null;
  }
  if (mStartEnterAnimation != null) {
    mStartEnterAnimation.cancel();
    mStartEnterAnimation=null;
  }
  if (mRotateExitAnimation != null) {
    mRotateExitAnimation.cancel();
    mRotateExitAnimation=null;
  }
  if (mRotateEnterAnimation != null) {
    mRotateEnterAnimation.cancel();
    mRotateEnterAnimation=null;
  }
}
