{
  if (!mWindowVisible) {
    mDisplayManager.registerDisplayListener(mDisplayListener,null);
    if (!updateDefaultDisplayInfo()) {
      mDisplayManager.unregisterDisplayListener(mDisplayListener);
      return;
    }
    clearLiveState();
    updateWindowParams();
    mWindowManager.addView(mWindowContent,mWindowParams);
    mWindowVisible=true;
  }
}
