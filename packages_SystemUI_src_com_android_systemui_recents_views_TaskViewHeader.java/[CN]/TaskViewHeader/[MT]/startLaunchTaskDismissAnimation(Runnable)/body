{
  if (mDismissButton.getVisibility() == View.VISIBLE) {
    int taskViewExitToAppDuration=mContext.getResources().getInteger(R.integer.recents_task_exit_to_app_duration);
    mDismissButton.animate().cancel();
    mDismissButton.animate().alpha(0f).setStartDelay(0).setInterpolator(mFastOutSlowInInterpolator).setDuration(taskViewExitToAppDuration).withEndAction(postAnimationRunanble).start();
  }
}
