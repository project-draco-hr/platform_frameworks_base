{
  float offset=(float)Math.ceil(mHighlightHeight / 2f);
  float radius=mCornerRadius;
  int count=canvas.save(Canvas.CLIP_SAVE_FLAG);
  canvas.clipRect(0,0,mTaskViewRect.width(),getMeasuredHeight());
  canvas.drawRoundRect(-offset,0f,(float)mTaskViewRect.width() + offset,getMeasuredHeight() + radius,radius,radius,sHighlightPaint);
  canvas.restoreToCount(count);
}
