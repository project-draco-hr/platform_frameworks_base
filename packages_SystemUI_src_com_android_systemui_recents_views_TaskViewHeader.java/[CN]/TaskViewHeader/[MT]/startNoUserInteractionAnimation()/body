{
  if (mDismissButton.getVisibility() != View.VISIBLE) {
    mDismissButton.setVisibility(View.VISIBLE);
    mDismissButton.setAlpha(0f);
    mDismissButton.animate().alpha(1f).setStartDelay(0).setInterpolator(Interpolators.FAST_OUT_LINEAR_IN).setDuration(getResources().getInteger(R.integer.recents_task_enter_from_app_duration)).start();
  }
}
