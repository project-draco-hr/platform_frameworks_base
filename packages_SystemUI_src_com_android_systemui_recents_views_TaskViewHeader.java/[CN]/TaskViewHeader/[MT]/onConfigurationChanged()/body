{
  Resources res=getResources();
  int headerBarHeight=TaskStackLayoutAlgorithm.getDimensionForDevice(res,R.dimen.recents_task_view_header_height,R.dimen.recents_task_view_header_height,R.dimen.recents_task_view_header_height,R.dimen.recents_task_view_header_height_tablet_land,R.dimen.recents_task_view_header_height,R.dimen.recents_task_view_header_height_tablet_land);
  int headerButtonPadding=TaskStackLayoutAlgorithm.getDimensionForDevice(res,R.dimen.recents_task_view_header_button_padding,R.dimen.recents_task_view_header_button_padding,R.dimen.recents_task_view_header_button_padding,R.dimen.recents_task_view_header_button_padding_tablet_land,R.dimen.recents_task_view_header_button_padding,R.dimen.recents_task_view_header_button_padding_tablet_land);
  if (headerBarHeight != mHeaderBarHeight || headerButtonPadding != mHeaderButtonPadding) {
    mHeaderBarHeight=headerBarHeight;
    mHeaderButtonPadding=headerButtonPadding;
    updateLayoutParams(mIconView,mTitleView,mMoveTaskButton,mDismissButton);
    if (mAppOverlayView != null) {
      updateLayoutParams(mAppIconView,mAppTitleView,null,mAppInfoView);
    }
  }
}
