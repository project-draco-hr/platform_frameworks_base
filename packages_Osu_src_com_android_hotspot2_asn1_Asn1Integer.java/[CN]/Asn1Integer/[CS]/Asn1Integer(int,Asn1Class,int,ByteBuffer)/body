{
  super(tag,asn1Class,false,length);
  if (length <= 8) {
    long value=(data.get(data.position()) & SignBit) != 0 ? -1 : 0;
    for (int n=0; n < length; n++) {
      value=(value << Byte.SIZE) | data.get();
    }
    mValue=value;
    mBigValue=null;
  }
 else {
    byte[] payload=new byte[length];
    data.get(payload);
    mValue=0;
    mBigValue=new BigInteger(payload);
  }
}
