{
  super(context,attrs);
  TypedArray a=context.obtainStyledAttributes(attrs,com.android.internal.R.styleable.ScaleAnimation);
  mFromX=a.getFloat(com.android.internal.R.styleable.ScaleAnimation_fromXScale,0.0f);
  mToX=a.getFloat(com.android.internal.R.styleable.ScaleAnimation_toXScale,0.0f);
  mFromY=a.getFloat(com.android.internal.R.styleable.ScaleAnimation_fromYScale,0.0f);
  mToY=a.getFloat(com.android.internal.R.styleable.ScaleAnimation_toYScale,0.0f);
  Description d=Description.parseValue(a.peekValue(com.android.internal.R.styleable.ScaleAnimation_pivotX));
  mPivotXType=d.type;
  mPivotXValue=d.value;
  d=Description.parseValue(a.peekValue(com.android.internal.R.styleable.ScaleAnimation_pivotY));
  mPivotYType=d.type;
  mPivotYValue=d.value;
  a.recycle();
}
