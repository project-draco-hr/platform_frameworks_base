{
  byte[] buffer=(string + "\0").getBytes();
  int len=conn.controlTransfer(UsbConstants.USB_DIR_OUT | UsbConstants.USB_TYPE_VENDOR,UsbAccessoryConstants.ACCESSORY_SEND_STRING,0,index,buffer,buffer.length,10000);
  if (len != buffer.length) {
    mLogger.logError("Failed to send string " + index + ": \""+ string+ "\"");
  }
 else {
    mLogger.log("Sent string " + index + ": \""+ string+ "\"");
  }
}
