{
  assertNotNull(getActivity().getLayout());
  assertNotNull(getActivity().getGoneGroup());
  assertNotNull(getActivity().getButton());
  assertTrue("button should have focus",getActivity().getButton().hasFocus());
  assertEquals("gone group should be, well, gone!",View.GONE,getActivity().getGoneGroup().getVisibility());
  assertFalse("the activity should have received no key events",getActivity().isUnhandledKeyEvent());
}
