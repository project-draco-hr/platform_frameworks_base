{
  L("poke(%d)",playerIndex);
  if (mFrozen)   return;
  if (!mAnimating) {
    reset();
  }
  if (!mPlaying) {
    start(true);
  }
 else {
    final Player p=getPlayer(playerIndex);
    if (p == null)     return;
    p.boost(x,y);
    mTaps++;
    if (DEBUG) {
      p.dv*=DEBUG_SPEED_MULTIPLIER;
      p.animate().setDuration((long)(200 / DEBUG_SPEED_MULTIPLIER));
    }
  }
}
