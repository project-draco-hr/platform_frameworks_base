{
  mPlayers.add(p);
  realignPlayers();
  TextView scoreField=(TextView)LayoutInflater.from(getContext()).inflate(R.layout.mland_scorefield,null);
  if (mScoreFields != null) {
    mScoreFields.addView(scoreField,new MarginLayoutParams(MarginLayoutParams.WRAP_CONTENT,MarginLayoutParams.MATCH_PARENT));
  }
  p.setScoreField(scoreField);
  return mPlayers.size() - 1;
}
