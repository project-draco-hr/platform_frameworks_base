{
  StringBuilder builder=new StringBuilder(prefix);
  for (int i=offset; i < count; i++) {
    String hex=Integer.toHexString(value[i]);
    int length=hex.length();
    if (length == 1) {
      hex="0x" + hex;
    }
 else {
      hex=hex.substring(length - 2,length);
    }
    builder.append(hex);
    if (i != value.length - 1) {
      builder.append(", ");
    }
  }
  Log.d(TAG,builder.toString());
}
