{
synchronized (mBluetoothDevice) {
    mEventScheduler.close();
    if (mDeviceServer != null) {
      IoUtils.closeQuietly(mDeviceServer);
      mDeviceServer=null;
      mService.deviceClosed(mBluetoothDevice);
    }
    if (mBluetoothGatt != null) {
      mBluetoothGatt.close();
      mBluetoothGatt=null;
    }
  }
}
