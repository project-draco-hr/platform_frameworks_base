{
  StringBuilder buf=new StringBuilder();
  buf.append("{\n");
  int arrLen=arr.length;
  for (int i=0; i < n; i++) {
    int index=offset + i;
    buf.append(" [" + index + "] = ");
    if (index < 0 || index >= arrLen) {
      buf.append("out of bounds");
    }
 else {
      buf.append(arr[index]);
    }
    buf.append('\n');
  }
  buf.append("}");
  return buf.toString();
}
