{
  while (mRun) {
    boolean doGC=false;
synchronized (this) {
      if (currentSize >= targetSize) {
        doGC=true;
      }
    }
    if (doGC == true) {
      System.gc();
    }
    try {
      sleep(1,0);
    }
 catch (    InterruptedException e) {
    }
  }
  Log.d(LOG_TAG,"GCThread exiting.");
}
