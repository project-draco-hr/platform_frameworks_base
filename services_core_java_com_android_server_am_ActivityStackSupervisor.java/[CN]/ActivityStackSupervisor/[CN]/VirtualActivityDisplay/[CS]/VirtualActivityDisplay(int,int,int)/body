{
  DisplayManagerGlobal dm=DisplayManagerGlobal.getInstance();
  mVirtualDisplay=dm.createVirtualDisplay(mService.mContext,VIRTUAL_DISPLAY_BASE_NAME,width,height,density,null,DisplayManager.VIRTUAL_DISPLAY_FLAG_PUBLIC | DisplayManager.VIRTUAL_DISPLAY_FLAG_OWN_CONTENT_ONLY);
  init(mVirtualDisplay.getDisplay());
  mWindowManager.handleDisplayAdded(mDisplayId);
}
