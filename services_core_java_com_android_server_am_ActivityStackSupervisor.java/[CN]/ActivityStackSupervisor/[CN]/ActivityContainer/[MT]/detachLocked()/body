{
  if (DEBUG_STACK)   Slog.d(TAG,"detachLocked: " + this + " from display="+ mActivityDisplay+ " Callers="+ Debug.getCallers(2));
  if (mActivityDisplay != null) {
    mActivityDisplay.detachActivitiesLocked(mStack);
    mActivityDisplay=null;
    mStack.mDisplayId=-1;
    mStack.mStacks=null;
    mWindowManager.detachStack(mStackId);
  }
}
