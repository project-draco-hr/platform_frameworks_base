{
  left=l;
  top=t;
  surface=new Surface(session,0,"BlackSurface",-1,w,h,PixelFormat.OPAQUE,Surface.FX_SURFACE_DIM);
  if (WindowManagerService.SHOW_TRANSACTIONS || WindowManagerService.SHOW_SURFACE_ALLOC)   Slog.i(WindowManagerService.TAG,"  BLACK " + surface + ": CREATE layer="+ layer);
  surface.setAlpha(1.0f);
  surface.setLayer(layer);
}
