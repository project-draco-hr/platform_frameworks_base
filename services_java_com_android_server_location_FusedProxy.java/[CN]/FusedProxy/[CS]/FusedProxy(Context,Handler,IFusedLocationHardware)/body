{
  mLocationHardware=new FusedLocationHardwareSecure(locationHardware,context,Manifest.permission.LOCATION_HARDWARE);
  Runnable newServiceWork=new Runnable(){
    @Override public void run(){
      bindProvider(mLocationHardware);
    }
  }
;
  mServiceWatcher=new ServiceWatcher(context,TAG,"com.android.location.service.FusedProvider",com.android.internal.R.bool.config_enableFusedLocationOverlay,com.android.internal.R.string.config_fusedLocationProviderPackageName,com.android.internal.R.array.config_locationProviderPackageNames,newServiceWork,handler);
}
