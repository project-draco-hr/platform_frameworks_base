{
  for (int i=getChildCount() - 1; i >= 0; --i) {
    View view=getChildAt(i);
    AppInfo appInfo=(AppInfo)view.getTag();
    if (appInfo == null)     return;
    if (!appInfo.getUser().equals(removedProfile))     continue;
    removeViewAt(i);
  }
  if (getChildCount() != sAppsModel.getApps().size()) {
    saveApps();
  }
}
