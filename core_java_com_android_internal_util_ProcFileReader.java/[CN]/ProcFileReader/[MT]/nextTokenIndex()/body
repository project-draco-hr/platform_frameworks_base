{
  if (mLineFinished) {
    throw new IOException("no tokens remaining on current line");
  }
  int i=0;
  do {
    for (; i < mTail; i++) {
      final byte b=mBuffer[i];
      if (b == '\n') {
        mLineFinished=true;
        return i;
      }
      if (b == ' ') {
        return i;
      }
    }
  }
 while (fillBuf() > 0);
  throw new IOException("end of stream while looking for token boundary");
}
