{
  if (mRootToken.waitingToShow && mService.mNextAppTransition != WindowManagerPolicy.TRANSIT_UNSET) {
    return false;
  }
  final AppWindowToken atoken=mAppToken;
  if (atoken == null && !mPolicyVisibility) {
    return false;
  }
  return mHasSurface && !mDestroying && ((!mAttachedHidden && mViewVisibility == View.VISIBLE && !mRootToken.hidden) || mWinAnimator.mAnimation != null || ((atoken != null) && (atoken.mAppAnimator.animation != null)));
}
