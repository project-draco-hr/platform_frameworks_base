{
  if (mRootToken.waitingToShow && mService.mNextAppTransition != WindowManagerPolicy.TRANSIT_UNSET) {
    return false;
  }
  final AppWindowToken atoken=mAppToken;
  final boolean animating=atoken != null ? (atoken.mAppAnimator.animation != null) : false;
  return mHasSurface && !mDestroying && !mExiting&& (atoken == null ? mPolicyVisibility : !atoken.hiddenRequested)&& ((!mAttachedHidden && mViewVisibility == View.VISIBLE && !mRootToken.hidden) || mWinAnimator.mAnimation != null || animating);
}
