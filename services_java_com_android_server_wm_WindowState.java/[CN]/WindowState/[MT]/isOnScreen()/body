{
  final AppWindowToken atoken=mAppToken;
  if (atoken != null) {
    return mSurface != null && mPolicyVisibility && !mDestroying && ((!mAttachedHidden && !atoken.hiddenRequested) || mWinAnimator.mAnimation != null || atoken.animation != null);
  }
 else {
    return mSurface != null && mPolicyVisibility && !mDestroying && (!mAttachedHidden || mWinAnimator.mAnimation != null);
  }
}
