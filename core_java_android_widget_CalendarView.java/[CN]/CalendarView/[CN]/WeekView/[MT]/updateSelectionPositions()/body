{
  if (mHasSelectedDay) {
    int selectedPosition=mSelectedDate - mFirstDayOfWeek;
    if (selectedPosition < 0) {
      selectedPosition+=7;
    }
    if (mShowWeekNumber) {
      selectedPosition++;
    }
    mSelectedLeft=selectedPosition * mWidth / mNumCells;
    mSelectedRight=(selectedPosition + 1) * mWidth / mNumCells;
  }
}
