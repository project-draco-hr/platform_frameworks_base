{
  SystemProperties.set(name,value);
  for (int i=0; i < 5; i++) {
    String v=SystemProperties.get(name);
    if (v.equals(value)) {
      return;
    }
 else {
      Log.d(TAG,"sys_prop: wait for " + name + " to settle in");
      sleep(400);
    }
  }
  throw new IOException("Failed to set system property: " + name);
}
