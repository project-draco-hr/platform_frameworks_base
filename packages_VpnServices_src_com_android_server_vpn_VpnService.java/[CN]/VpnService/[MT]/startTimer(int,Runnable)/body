{
  Thread thread=new Thread(new Runnable(){
    public void run(){
      Log.d(TAG,"watchdog timer started");
      Thread t=Thread.currentThread();
      try {
synchronized (t) {
          t.wait(milliseconds);
        }
        task.run();
      }
 catch (      InterruptedException e) {
      }
      Log.d(TAG,"watchdog timer stopped");
    }
  }
);
  thread.start();
