{
  try {
    Log.d(TAG,"       disconnecting VPN...");
    mState=VpnState.DISCONNECTING;
    broadcastConnectivity(VpnState.DISCONNECTING);
    mNotification.showDisconnect();
    if (cleanUpServices)     disconnect();
    mServiceHelper.stop();
  }
 catch (  Throwable e) {
    Log.e(TAG,"onDisconnect()",e);
    onFinalCleanUp();
  }
}
