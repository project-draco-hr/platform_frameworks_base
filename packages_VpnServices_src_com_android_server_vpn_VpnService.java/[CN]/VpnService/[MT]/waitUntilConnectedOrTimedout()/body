{
  sleep(2000);
  for (int i=0; i < 60; i++) {
    if (VPN_IS_UP.equals(SystemProperties.get(VPN_UP))) {
      onConnected();
      return;
    }
    sleep(500);
  }
synchronized (this) {
    if (mState == VpnState.CONNECTING) {
      Log.d(TAG,"       connecting timed out !!");
      onError();
    }
  }
}
