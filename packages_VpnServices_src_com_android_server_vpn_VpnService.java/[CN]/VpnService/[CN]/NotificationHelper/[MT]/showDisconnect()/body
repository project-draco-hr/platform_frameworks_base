{
  String title=getNotificationTitle(false);
  Notification n=new Notification(R.drawable.vpn_disconnected,title,System.currentTimeMillis());
  n.setLatestEventInfo(mContext,title,getNotificationMessage(false),prepareNotificationIntent());
  n.flags|=Notification.FLAG_AUTO_CANCEL;
  disableNotification();
  enableNotification(n);
}
