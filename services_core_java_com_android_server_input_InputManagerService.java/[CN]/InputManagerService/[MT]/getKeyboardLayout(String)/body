{
  if (keyboardLayoutDescriptor == null) {
    throw new IllegalArgumentException("keyboardLayoutDescriptor must not be null");
  }
  final KeyboardLayout[] result=new KeyboardLayout[1];
  visitKeyboardLayout(keyboardLayoutDescriptor,new KeyboardLayoutVisitor(){
    @Override public void visitKeyboardLayout(    Resources resources,    String descriptor,    String label,    String collection,    int keyboardLayoutResId,    int priority){
      result[0]=new KeyboardLayout(descriptor,label,collection,priority);
    }
  }
);
  if (result[0] == null) {
    Log.w(TAG,"Could not get keyboard layout with descriptor '" + keyboardLayoutDescriptor + "'.");
  }
  return result[0];
}
