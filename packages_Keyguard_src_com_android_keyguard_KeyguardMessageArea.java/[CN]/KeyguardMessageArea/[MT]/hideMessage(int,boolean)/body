{
  if (duration > 0) {
    Animator anim=ObjectAnimator.ofFloat(this,"alpha",0f);
    anim.setDuration(duration);
    if (thenUpdate) {
      anim.addListener(new AnimatorListenerAdapter(){
        @Override public void onAnimationEnd(        Animator animation){
          update();
        }
      }
);
    }
    anim.start();
  }
 else {
    setAlpha(0f);
    if (thenUpdate) {
      update();
    }
  }
}
