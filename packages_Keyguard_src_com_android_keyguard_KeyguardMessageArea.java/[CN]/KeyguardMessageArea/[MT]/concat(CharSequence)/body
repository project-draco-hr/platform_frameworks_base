{
  StringBuilder b=new StringBuilder();
  if (!TextUtils.isEmpty(args[0])) {
    b.append(args[0]);
  }
  for (int i=1; i < args.length; i++) {
    CharSequence text=args[i];
    if (!TextUtils.isEmpty(text)) {
      if (b.length() > 0) {
        b.append(mSeparator);
      }
      b.append(text);
    }
  }
  return b.toString();
}
