{
  mState=STATE_UNKNOWN;
  mFence=fence;
  mExpireAt=expireAt;
  mPackageName=packageName;
  mIntent=intent;
  mLocation=new Location("");
  mLocation.setLatitude(fence.getLatitude());
  mLocation.setLongitude(fence.getLongitude());
  if (prevLocation != null) {
    processLocation(prevLocation);
  }
}
