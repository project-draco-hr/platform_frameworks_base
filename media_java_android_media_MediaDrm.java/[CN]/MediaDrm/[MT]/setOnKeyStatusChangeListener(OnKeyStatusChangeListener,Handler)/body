{
  if (listener != null) {
    Looper looper=handler != null ? handler.getLooper() : Looper.myLooper();
    if (looper != null) {
      if (mEventHandler == null || mEventHandler.getLooper() != looper) {
        mEventHandler=new EventHandler(this,looper);
      }
    }
  }
  mOnKeyStatusChangeListener=listener;
}
