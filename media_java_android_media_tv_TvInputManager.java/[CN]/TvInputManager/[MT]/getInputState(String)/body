{
  if (inputId == null) {
    throw new IllegalArgumentException("inputId cannot be null");
  }
synchronized (mLock) {
    Integer state=mStateMap.get(inputId);
    if (state == null) {
      Log.w(TAG,"Unrecognized input ID: " + inputId);
      return INPUT_STATE_DISCONNECTED;
    }
    return state.intValue();
  }
}
