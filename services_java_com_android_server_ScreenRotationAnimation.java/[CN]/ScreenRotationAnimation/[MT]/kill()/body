{
  if (mSurface != null) {
    mSurface.destroy();
    mSurface=null;
  }
  if (mBlackSurface != null) {
    mBlackSurface.destroy();
    mBlackSurface=null;
  }
  if (mExitAnimation != null) {
    mExitAnimation.cancel();
    mExitAnimation=null;
  }
  if (mEnterAnimation != null) {
    mEnterAnimation.cancel();
    mEnterAnimation=null;
  }
}
