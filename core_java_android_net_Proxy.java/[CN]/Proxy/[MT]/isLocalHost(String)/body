{
  if (host == null) {
    return false;
  }
  try {
    if (host != null) {
      if (host.equalsIgnoreCase("localhost")) {
        return true;
      }
      if (InetAddress.isNumeric(host)) {
        if (InetAddress.getByName(host).isLoopbackAddress()) {
          return true;
        }
      }
    }
  }
 catch (  UnknownHostException ignored) {
  }
catch (  IllegalArgumentException iex) {
  }
  return false;
}
