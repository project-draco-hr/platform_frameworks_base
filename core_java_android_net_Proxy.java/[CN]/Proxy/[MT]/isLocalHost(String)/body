{
  if (url == null) {
    return false;
  }
  try {
    final URI uri=URI.create(url);
    final String host=uri.getHost();
    if (host != null) {
      if (host.equalsIgnoreCase("localhost") || host.equals("127.0.0.1") || host.equals("[::1]")) {
        return true;
      }
    }
  }
 catch (  IllegalArgumentException iex) {
  }
  return false;
}
