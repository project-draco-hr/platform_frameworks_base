{
  if (!mComputed) {
    float sum=0;
    final int count=inputs.length;
    final float[] weights=mWeights;
    for (int i=0; i < count; i++) {
      sum+=inputs[i] * weights[i];
    }
    sum+=weights[weights.length - 1];
    mResult=1.0f / (float)(1 + Math.exp(-sum));
    mComputed=true;
  }
  return mResult;
}
