{
  if (false) {
    Slog.d("CarrierLabel","updateNetworkName showSpn=" + showSpn + " spn="+ spn+ " showPlmn="+ showPlmn+ " plmn="+ plmn);
  }
  StringBuilder str=new StringBuilder();
  boolean something=false;
  if (showPlmn && plmn != null) {
    str.append(plmn);
    something=true;
  }
  if (showSpn && spn != null) {
    if (something) {
      str.append(' ');
    }
    str.append(spn);
    something=true;
  }
  if (something) {
    setText(str.toString());
  }
 else {
    setText(com.android.internal.R.string.lockscreen_carrier_default);
  }
}
