{
  int size=0;
  Cursor cursor=mContext.getContentResolver().query(Uri.parse(uri),new String[]{OpenableColumns.SIZE},null,null,null);
  if (cursor != null) {
    try {
      if (cursor.moveToNext()) {
        size=cursor.getInt(0);
      }
    }
  finally {
      cursor.close();
    }
  }
  return size;
}
