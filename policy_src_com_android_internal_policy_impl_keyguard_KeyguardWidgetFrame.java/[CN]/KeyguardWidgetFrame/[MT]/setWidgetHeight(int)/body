{
  System.out.println("Set widget height: " + this + " : "+ height);
  boolean needLayout=false;
  View widget=getContent();
  if (widget != null) {
    LayoutParams lp=(LayoutParams)widget.getLayoutParams();
    if (lp.height != height) {
      needLayout=true;
      lp.height=height;
    }
  }
  if (needLayout) {
    requestLayout();
  }
}
