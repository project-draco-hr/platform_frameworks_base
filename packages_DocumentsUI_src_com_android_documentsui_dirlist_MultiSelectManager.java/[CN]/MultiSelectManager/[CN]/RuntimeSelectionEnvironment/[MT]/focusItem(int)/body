{
  RecyclerView.ViewHolder vh=mView.findViewHolderForAdapterPosition(pos);
  if (vh != null) {
    vh.itemView.requestFocus();
  }
 else {
    mView.smoothScrollToPosition(pos);
    mView.addOnScrollListener(new RecyclerView.OnScrollListener(){
      @Override public void onScrollStateChanged(      RecyclerView view,      int newState){
        if (newState == RecyclerView.SCROLL_STATE_IDLE) {
          RecyclerView.ViewHolder vh=view.findViewHolderForAdapterPosition(pos);
          if (vh != null) {
            vh.itemView.requestFocus();
          }
 else {
            Log.w(TAG,"Unable to focus position " + pos + " after a scroll");
          }
          view.removeOnScrollListener(this);
        }
      }
    }
);
  }
}
