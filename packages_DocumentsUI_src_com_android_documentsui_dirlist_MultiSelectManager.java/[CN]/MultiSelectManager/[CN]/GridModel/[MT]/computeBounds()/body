{
  Rect rect=new Rect();
  rect.left=getCoordinateValue(min(mRelativeOrigin.xLocation,mRelativePointer.xLocation),mColumnBounds,true);
  rect.right=getCoordinateValue(max(mRelativeOrigin.xLocation,mRelativePointer.xLocation),mColumnBounds,false);
  rect.top=getCoordinateValue(min(mRelativeOrigin.yLocation,mRelativePointer.yLocation),mRowBounds,true);
  rect.bottom=getCoordinateValue(max(mRelativeOrigin.yLocation,mRelativePointer.yLocation),mRowBounds,false);
  return rect;
}
