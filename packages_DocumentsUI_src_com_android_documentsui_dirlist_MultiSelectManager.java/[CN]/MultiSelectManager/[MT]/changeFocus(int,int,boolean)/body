{
  mEnvironment.focusItem(targetPosition);
  if (extendSelection) {
    if (mSingleSelect) {
      clearSelection();
      toggleSelection(targetPosition);
    }
 else {
      if (!hasSelection()) {
        toggleSelection(startPosition);
        setSelectionRangeBegin(startPosition);
      }
      mRanger.snapSelection(targetPosition);
      notifySelectionChanged();
    }
  }
  return true;
}
