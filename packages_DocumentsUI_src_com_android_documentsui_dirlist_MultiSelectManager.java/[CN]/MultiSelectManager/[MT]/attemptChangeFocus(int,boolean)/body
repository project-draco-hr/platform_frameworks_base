{
  mEnvironment.focusItem(targetPosition);
  if (extendSelection) {
    if (!hasSelection()) {
      toggleSelection(targetPosition);
      setSelectionRangeBegin(targetPosition);
    }
 else     if (!mSingleSelect) {
      mRanger.snapSelection(targetPosition);
      notifySelectionChanged();
    }
 else {
      clearSelection();
      toggleSelection(targetPosition);
    }
  }
  return true;
}
