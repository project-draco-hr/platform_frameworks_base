{
synchronized (mStartLock) {
    try {
      if (mService == null) {
        Log.w(TAG,method + " failed: not connected to TTS engine");
        return errorResult;
      }
      return action.run(mService);
    }
 catch (    RemoteException ex) {
      Log.e(TAG,method + " failed",ex);
      if (reconnect) {
        disconnect();
        initTts();
      }
      return errorResult;
    }
  }
}
