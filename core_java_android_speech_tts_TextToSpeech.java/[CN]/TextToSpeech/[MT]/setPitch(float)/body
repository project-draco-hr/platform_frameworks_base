{
synchronized (mStartLock) {
    int result=TTS_ERROR;
    if (!mStarted) {
      return result;
    }
    try {
      if (pitch > 0) {
        result=mITts.setPitch((int)(pitch * 100));
      }
    }
 catch (    RemoteException e) {
      mStarted=false;
      initTts();
    }
 finally {
      return result;
    }
  }
}
