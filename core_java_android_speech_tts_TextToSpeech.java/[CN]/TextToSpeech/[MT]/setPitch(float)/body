{
synchronized (mStartLock) {
    if (!mStarted) {
      return TTS_ERROR;
    }
    try {
      if (pitch > 0) {
        mITts.setPitch((int)(pitch * 100));
        return TTS_SUCCESS;
      }
    }
 catch (    RemoteException e) {
      mStarted=false;
      initTts();
    }
    return TTS_ERROR;
  }
}
