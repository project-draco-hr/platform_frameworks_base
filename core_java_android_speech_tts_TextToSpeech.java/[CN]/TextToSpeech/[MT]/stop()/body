{
synchronized (mStartLock) {
    if (!mStarted) {
      return TTS_ERROR;
    }
    try {
      mITts.stop();
      return TTS_SUCCESS;
    }
 catch (    RemoteException e) {
      mStarted=false;
      initTts();
    }
catch (    NullPointerException e) {
      mStarted=false;
      initTts();
    }
catch (    IllegalStateException e) {
      mStarted=false;
      initTts();
    }
    return TTS_ERROR;
  }
}
