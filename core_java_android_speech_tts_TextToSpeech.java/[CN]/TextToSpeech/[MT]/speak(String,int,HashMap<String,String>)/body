{
synchronized (mStartLock) {
    Log.i("TTS received: ",text);
    if (!mStarted) {
      return TTS_ERROR;
    }
    try {
      mITts.speak(text,queueMode,mCachedParams);
      return TTS_SUCCESS;
    }
 catch (    RemoteException e) {
      mStarted=false;
      initTts();
    }
catch (    NullPointerException e) {
      mStarted=false;
      initTts();
    }
catch (    IllegalStateException e) {
      mStarted=false;
      initTts();
    }
    return TTS_ERROR;
  }
}
