{
synchronized (KeyguardViewMediator.this) {
    if (DEBUG)     Log.d(TAG,"handleHide");
    try {
      if (mShowing) {
        mWM.keyguardGoingAway();
      }
 else {
        handleStartKeyguardExitAnimation(0,0);
      }
    }
 catch (    RemoteException e) {
      Log.e(TAG,"Error while calling WindowManager",e);
    }
  }
}
