{
synchronized (KeyguardViewMediator.this) {
    if (DEBUG)     Log.d(TAG,"handleHide");
    if (UserManager.isSplitSystemUser() && KeyguardUpdateMonitor.getCurrentUser() == UserHandle.USER_SYSTEM) {
      if (DEBUG)       Log.d(TAG,"Split system user, quit unlocking.");
      return;
    }
    mHiding=true;
    if (mShowing && !mOccluded) {
      if (!mHideAnimationRun) {
        mStatusBarKeyguardViewManager.startPreHideAnimation(mKeyguardGoingAwayRunnable);
      }
 else {
        mKeyguardGoingAwayRunnable.run();
      }
    }
 else {
      handleStartKeyguardExitAnimation(SystemClock.uptimeMillis() + mHideAnimation.getStartOffset(),mHideAnimation.getDuration());
    }
  }
}
