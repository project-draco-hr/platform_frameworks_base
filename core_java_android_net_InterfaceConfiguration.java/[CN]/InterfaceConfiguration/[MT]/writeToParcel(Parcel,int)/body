{
  dest.writeString(hwAddr);
  if (addr != null) {
    dest.writeByte((byte)1);
    dest.writeByteArray(addr.getAddress());
  }
 else {
    dest.writeByte((byte)0);
  }
  if (mask != null) {
    dest.writeByte((byte)1);
    dest.writeByteArray(mask.getAddress());
  }
 else {
    dest.writeByte((byte)0);
  }
  dest.writeString(interfaceFlags);
}
