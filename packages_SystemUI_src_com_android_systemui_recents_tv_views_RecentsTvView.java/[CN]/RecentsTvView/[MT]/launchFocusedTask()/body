{
  if (mTaskStackHorizontalView != null) {
    Task task=mTaskStackHorizontalView.getFocusedTask();
    if (task != null) {
      SystemServicesProxy ssp=Recents.getSystemServices();
      ssp.startActivityFromRecents(getContext(),task.key.id,task.title,null);
      return true;
    }
  }
  return false;
}
