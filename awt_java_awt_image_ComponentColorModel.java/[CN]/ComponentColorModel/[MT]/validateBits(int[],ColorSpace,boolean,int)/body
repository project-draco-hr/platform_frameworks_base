{
  if (bits != null) {
    return bits;
  }
  int numComponents=colorSpace.getNumComponents();
  if (hasAlpha) {
    numComponents++;
  }
  bits=new int[numComponents];
  int componentLength=DataBuffer.getDataTypeSize(transferType);
  for (int i=0; i < numComponents; i++) {
    bits[i]=componentLength;
  }
  return bits;
}
