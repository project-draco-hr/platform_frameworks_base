{
  long now=SystemClock.elapsedRealtime();
  if (mTimer == -1) {
    mTimer=now;
    Thread.sleep(1);
  }
 else   if (now - mTimer <= 60000) {
    Thread.sleep(yield ? 200 : 1);
  }
 else {
    updateState(DetailedState.FAILED,"checkpoint");
    throw new IllegalStateException("Time is up");
  }
}
