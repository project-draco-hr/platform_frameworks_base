{
  final long token=Binder.clearCallingIdentity();
  try {
    final ContentResolver cr=mContext.getContentResolver();
    Settings.Secure.putStringForUser(cr,Settings.Secure.ALWAYS_ON_VPN_APP,getAlwaysOnPackage(),mUserHandle);
    Settings.Secure.putIntForUser(cr,Settings.Secure.ALWAYS_ON_VPN_LOCKDOWN,(mLockdown ? 1 : 0),mUserHandle);
  }
  finally {
    Binder.restoreCallingIdentity(token);
  }
}
