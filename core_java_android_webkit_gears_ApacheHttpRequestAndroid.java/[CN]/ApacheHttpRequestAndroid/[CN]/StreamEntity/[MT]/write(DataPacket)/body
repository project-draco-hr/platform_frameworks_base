{
  try {
    if (mOutputStream == null) {
      if (Config.LOGV) {
        Log.i(LOG_TAG,"NO OUTPUT STREAM !!!");
      }
      return;
    }
    mOutputStream.write(packet.getBytes(),0,packet.getLength());
    mOutputStream.flush();
  }
 catch (  IOException e) {
    if (Config.LOGV) {
      Log.i(LOG_TAG,"exc: " + e);
    }
    mConnectionFailedLock.lock();
    mConnectionFailed=true;
    mConnectionFailedLock.unlock();
  }
}
