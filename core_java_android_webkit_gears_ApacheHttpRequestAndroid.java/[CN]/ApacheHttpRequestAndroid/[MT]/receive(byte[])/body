{
  if (mBodyInputStream == null) {
    try {
      if (mResponse != null) {
        HttpEntity entity=mResponse.getEntity();
        mBodyInputStream=entity.getContent();
      }
    }
 catch (    IOException inputException) {
      if (LOGV_ENABLED) {
        Log.i(LOG_TAG,"Failed to connect InputStream: " + inputException);
      }
    }
    if (mBodyInputStream == null) {
      if (LOGV_ENABLED) {
        Log.i(LOG_TAG,"No InputStream");
      }
      return 0;
    }
  }
  int ret;
  try {
    int got=mBodyInputStream.read(buf);
    if (got > 0) {
      ret=got;
    }
 else {
      mBodyInputStream.close();
      ret=0;
    }
  }
 catch (  IOException e) {
    if (LOGV_ENABLED) {
      Log.i(LOG_TAG,"Got IOException in mBodyInputStream.read(): ",e);
    }
    ret=-1;
  }
  return ret;
}
