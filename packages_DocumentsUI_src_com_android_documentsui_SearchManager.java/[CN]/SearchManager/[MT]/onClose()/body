{
  mSearchExpanded=false;
  if (mIgnoreNextClose) {
    mIgnoreNextClose=false;
    return false;
  }
  mView.setBackgroundColor(mView.getResources().getColor(android.R.color.transparent,null));
  if (currentSearch != null) {
    currentSearch=null;
    if (mListener != null) {
      mListener.onSearchQueryChanged(currentSearch);
      mListener.onSearchChanged();
    }
  }
  return false;
}
