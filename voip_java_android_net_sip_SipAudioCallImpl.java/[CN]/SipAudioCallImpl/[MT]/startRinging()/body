{
  if (!mRingtoneEnabled)   return;
  ((Vibrator)mContext.getSystemService(Context.VIBRATOR_SERVICE)).vibrate(new long[]{0,1000,1000},1);
  AudioManager am=(AudioManager)mContext.getSystemService(Context.AUDIO_SERVICE);
  if (am.getStreamVolume(AudioManager.STREAM_RING) > 0) {
    String ringtoneUri=Settings.System.DEFAULT_RINGTONE_URI.toString();
    mRingtone=RingtoneManager.getRingtone(mContext,Uri.parse(ringtoneUri));
    mRingtone.play();
  }
}
