{
  if (DBG)   log("addSimRecordToEf: efType=" + efType + ", name="+ name+ ", number="+ number);
  boolean success=false;
  try {
    ISimPhoneBook simIpb=ISimPhoneBook.Stub.asInterface(ServiceManager.getService("simphonebook"));
    if (simIpb != null) {
      success=simIpb.updateAdnRecordsInEfBySearch(efType,"","",name,number,pin2);
    }
  }
 catch (  RemoteException ex) {
  }
catch (  SecurityException ex) {
    if (DBG)     log(ex.toString());
  }
  if (DBG)   log("addSimRecordToEf: " + success);
  return success;
}
