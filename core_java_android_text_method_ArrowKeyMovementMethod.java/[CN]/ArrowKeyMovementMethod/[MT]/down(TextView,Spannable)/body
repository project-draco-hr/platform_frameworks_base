{
  boolean cap=MetaKeyKeyListener.getMetaState(buffer,KeyEvent.META_SHIFT_ON) == 1;
  boolean alt=MetaKeyKeyListener.getMetaState(buffer,KeyEvent.META_ALT_ON) == 1;
  Layout layout=widget.getLayout();
  if (cap) {
    if (alt) {
      Selection.extendSelection(buffer,buffer.length());
      return true;
    }
 else {
      return Selection.extendDown(buffer,layout);
    }
  }
 else {
    if (alt) {
      Selection.setSelection(buffer,buffer.length());
      return true;
    }
 else {
      return Selection.moveDown(buffer,layout);
    }
  }
}
