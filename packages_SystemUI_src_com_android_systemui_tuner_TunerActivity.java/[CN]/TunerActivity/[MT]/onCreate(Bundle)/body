{
  super.onCreate(savedInstanceState);
  if (getFragmentManager().findFragmentByTag(TAG_TUNER) == null) {
    boolean showNightMode=getIntent().getBooleanExtra(NightModeFragment.EXTRA_SHOW_NIGHT_MODE,false);
    getFragmentManager().beginTransaction().replace(R.id.content_frame,showNightMode ? new NightModeFragment() : new TunerFragment(),TAG_TUNER).commit();
  }
}
