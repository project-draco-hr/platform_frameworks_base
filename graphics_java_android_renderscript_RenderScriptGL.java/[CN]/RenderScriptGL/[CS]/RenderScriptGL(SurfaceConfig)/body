{
  mSurfaceConfig=new SurfaceConfig(sc);
  mSurface=null;
  mWidth=0;
  mHeight=0;
  mDev=nDeviceCreate();
  mContext=nContextCreateGL(mDev,0,mSurfaceConfig.mColorMin,mSurfaceConfig.mColorPref,mSurfaceConfig.mAlphaMin,mSurfaceConfig.mAlphaPref,mSurfaceConfig.mDepthMin,mSurfaceConfig.mDepthPref,mSurfaceConfig.mStencilMin,mSurfaceConfig.mStencilPref,mSurfaceConfig.mSamplesMin,mSurfaceConfig.mSamplesPref,mSurfaceConfig.mSamplesQ);
  if (mContext == 0) {
    throw new RSDriverException("Failed to create RS context.");
  }
  mMessageThread=new MessageThread(this);
  mMessageThread.start();
}
