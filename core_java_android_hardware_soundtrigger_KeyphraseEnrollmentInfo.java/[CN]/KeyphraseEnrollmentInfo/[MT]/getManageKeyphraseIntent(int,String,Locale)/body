{
  if (mEnrollmentPackage == null || mEnrollmentPackage.isEmpty()) {
    Slog.w(TAG,"No enrollment application exists");
    return null;
  }
  if (getKeyphraseMetadata(keyphrase,locale) != null) {
    Intent intent=new Intent(ACTION_MANAGE_VOICE_KEYPHRASES).setPackage(mEnrollmentPackage).putExtra(EXTRA_VOICE_KEYPHRASE_HINT_TEXT,keyphrase).putExtra(EXTRA_VOICE_KEYPHRASE_LOCALE,locale.toLanguageTag()).putExtra(EXTRA_VOICE_KEYPHRASE_ACTION,action);
    return intent;
  }
  return null;
}
