{
  super(context,attrs,defStyle);
  TypedArray a=context.obtainStyledAttributes(attrs,com.android.internal.R.styleable.PreferenceFrameLayout,defStyle,0);
  float density=context.getResources().getDisplayMetrics().density;
  int defaultTopPadding=(int)(density * DEFAULT_TOP_PADDING + 0.5f);
  int defaultBottomPadding=(int)(density * DEFAULT_BOTTOM_PADDING + 0.5f);
  mTopPadding=a.getDimensionPixelSize(com.android.internal.R.styleable.PreferenceFrameLayout_topPadding,defaultTopPadding);
  mBottomPadding=a.getDimensionPixelSize(com.android.internal.R.styleable.PreferenceFrameLayout_bottomPadding,defaultBottomPadding);
  a.recycle();
}
