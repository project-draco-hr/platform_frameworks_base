{
  Notification n=sbn.getNotification();
  final StatusBarIconView iconView=new StatusBarIconView(mContext,sbn.getPackageName() + "/0x" + Integer.toHexString(sbn.getId()),n);
  iconView.setScaleType(ImageView.ScaleType.CENTER_INSIDE);
  final StatusBarIcon ic=new StatusBarIcon(sbn.getUser(),n.getSmallIcon(),n.iconLevel,n.number,n.tickerText);
  if (!iconView.set(ic)) {
    handleNotificationError(sbn,"Couldn't create icon: " + ic);
    return null;
  }
  return iconView;
}
