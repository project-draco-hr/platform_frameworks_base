{
  View v=content.findViewById(com.android.internal.R.id.right_icon);
  if (v != null & v instanceof ImageView) {
    ImageView iv=(ImageView)v;
    Drawable d=iv.getDrawable();
    if (isMonochrome(d)) {
      d.mutate();
      d.setColorFilter(mLightThemeContext.getResources().getColor(R.color.notification_action_legacy_color_filter),PorterDuff.Mode.MULTIPLY);
    }
  }
}
