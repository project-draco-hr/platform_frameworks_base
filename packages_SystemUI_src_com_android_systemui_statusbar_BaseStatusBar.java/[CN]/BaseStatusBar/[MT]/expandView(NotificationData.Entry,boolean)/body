{
  if (entry.expandable()) {
    int rowHeight=mContext.getResources().getDimensionPixelSize(R.dimen.notification_height);
    ViewGroup.LayoutParams lp=entry.row.getLayoutParams();
    if (expand) {
      lp.height=ViewGroup.LayoutParams.WRAP_CONTENT;
    }
 else {
      lp.height=rowHeight;
    }
    entry.row.setLayoutParams(lp);
    return expand;
  }
 else {
    return false;
  }
}
