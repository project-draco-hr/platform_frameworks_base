{
  boolean isCasting=false;
  for (  CastDevice device : mCast.getCastDevices()) {
    if (device.state == CastDevice.STATE_CONNECTING || device.state == CastDevice.STATE_CONNECTED) {
      isCasting=true;
      break;
    }
  }
  if (DEBUG)   Log.v(TAG,"updateCast: isCasting: " + isCasting);
  mHandler.removeCallbacks(mRemoveCastIconRunnable);
  if (isCasting) {
    mIconController.setIcon(SLOT_CAST,R.drawable.stat_sys_cast,mContext.getString(R.string.accessibility_casting));
    mIconController.setIconVisibility(SLOT_CAST,true);
  }
 else {
    if (DEBUG)     Log.v(TAG,"updateCast: hiding icon in 3 sec...");
    mHandler.postDelayed(mRemoveCastIconRunnable,3000);
  }
}
