{
  View child=null;
  if (getChildCount() > 0) {
    child=getChildAt(0);
  }
 else   if (mAdapter != null && mAdapter.getCount() > 0) {
    child=makeAndAddView(0);
    mRecycler.put(0,child);
    removeAllViewsInLayout();
  }
  if (child != null) {
    return child.getTop() + child.getBaseline();
  }
 else {
    return -1;
  }
}
