{
  boolean handled=super.performClick();
  if (!handled) {
    handled=true;
    if (!mPopup.isShowing()) {
      if (mLayoutObserver != null) {
        final ViewTreeObserver vto=getViewTreeObserver();
        vto.addOnGlobalLayoutListener(mLayoutObserver);
        vto.addOnScrollChangedListener(mLayoutObserver);
      }
      mPopup.show();
    }
  }
  return handled;
}
