{
  if (mHintView == null) {
    final TextView textView=(TextView)LayoutInflater.from(getContext()).inflate(mHintResource,null).findViewById(com.android.internal.R.id.text1);
    textView.setText(mHintText);
    setPromptView(textView);
    mHintView=textView;
  }
  setContentWidth(Math.min(Math.max(measureContentWidth(getAdapter()),Spinner.this.getWidth()),mPopupMaxWidth));
  super.show();
  getListView().setChoiceMode(ListView.CHOICE_MODE_SINGLE);
  setSelection(Spinner.this.getSelectedItemPosition());
}
