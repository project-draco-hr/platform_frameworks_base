{
  if (mWasting) {
    if (!mWakeLock.isHeld()) {
      mWakeLock.acquire();
    }
  }
 else {
    if (mWakeLock.isHeld()) {
      mWakeLock.release();
    }
  }
  if (mWaking) {
    if (!mPartialWakeLock.isHeld()) {
      mPartialWakeLock.acquire();
    }
  }
 else {
    if (mPartialWakeLock.isHeld()) {
      mPartialWakeLock.release();
    }
  }
}
