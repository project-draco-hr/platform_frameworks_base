{
  String modeLower=mode.toLowerCase(Locale.US);
  if ("ecb".equals(modeLower)) {
    return ECB;
  }
 else   if ("cbc".equals(modeLower)) {
    return CBC;
  }
 else   if ("ctr".equals(modeLower)) {
    return CTR;
  }
 else {
    throw new IllegalArgumentException("Unknown block mode: " + mode);
  }
}
