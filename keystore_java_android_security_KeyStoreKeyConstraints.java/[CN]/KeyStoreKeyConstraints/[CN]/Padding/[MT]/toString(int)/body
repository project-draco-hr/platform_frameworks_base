{
switch (padding) {
case NONE:
    return "NONE";
case PKCS7:
  return "PKCS#7";
case RSA_PKCS1_ENCRYPTION:
return "RSA PKCS#1 (encryption)";
case RSA_PKCS1_SIGNATURE:
return "RSA PKCS#1 (signature)";
case RSA_OAEP:
return "RSA OAEP";
case RSA_PSS:
return "RSA PSS";
default :
throw new IllegalArgumentException("Unknown padding: " + padding);
}
}
