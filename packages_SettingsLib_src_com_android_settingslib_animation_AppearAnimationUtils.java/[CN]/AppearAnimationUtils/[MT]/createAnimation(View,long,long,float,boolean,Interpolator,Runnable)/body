{
  if (view != null) {
    view.setAlpha(appearing ? 0f : 1.0f);
    view.setTranslationY(appearing ? translationY : 0);
    view.animate().alpha(appearing ? 1f : 0f).translationY(appearing ? 0 : translationY).setInterpolator(interpolator).setDuration(duration).setStartDelay(delay);
    if (view.hasOverlappingRendering()) {
      view.animate().withLayer();
    }
    if (endRunnable != null) {
      view.animate().withEndAction(endRunnable);
    }
  }
}
