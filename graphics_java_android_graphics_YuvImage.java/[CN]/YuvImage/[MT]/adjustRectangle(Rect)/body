{
  int width=rect.width();
  int height=rect.height();
  if (mFormat == PixelFormat.YCbCr_420_SP) {
    width&=~1;
    height&=~1;
    rect.left&=~1;
    rect.top&=~1;
    rect.right=rect.left + width;
    rect.bottom=rect.top + height;
  }
  if (mFormat == PixelFormat.YCbCr_422_I) {
    width&=~1;
    rect.left&=~1;
    rect.right=rect.left + width;
  }
}
