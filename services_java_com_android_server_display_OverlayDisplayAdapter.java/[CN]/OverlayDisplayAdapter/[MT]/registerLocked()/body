{
  super.registerLocked();
  getHandler().post(new Runnable(){
    @Override public void run(){
      getContext().getContentResolver().registerContentObserver(Settings.System.getUriFor(Settings.Secure.OVERLAY_DISPLAY_DEVICES),true,new SettingsObserver(getHandler()));
synchronized (getSyncRoot()) {
        updateOverlayDisplayDevicesLocked();
      }
    }
  }
);
}
