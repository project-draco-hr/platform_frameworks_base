{
  super.registerLocked();
  getContext().getContentResolver().registerContentObserver(Settings.System.getUriFor(Settings.Secure.OVERLAY_DISPLAY_DEVICES),true,new ContentObserver(getHandler()){
    @Override public void onChange(    boolean selfChange){
synchronized (getSyncRoot()) {
        updateOverlayDisplayDevicesLocked();
      }
    }
  }
);
  updateOverlayDisplayDevicesLocked();
}
