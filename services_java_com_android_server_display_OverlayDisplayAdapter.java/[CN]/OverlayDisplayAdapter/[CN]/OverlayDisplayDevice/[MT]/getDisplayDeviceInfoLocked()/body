{
  if (mInfo == null) {
    mInfo=new DisplayDeviceInfo();
    mInfo.name=mName;
    mInfo.width=mWidth;
    mInfo.height=mHeight;
    mInfo.refreshRate=mRefreshRate;
    mInfo.densityDpi=mDensityDpi;
    mInfo.xDpi=mDensityDpi;
    mInfo.yDpi=mDensityDpi;
    mInfo.flags=DisplayDeviceInfo.FLAG_SECURE;
  }
  return mInfo;
}
