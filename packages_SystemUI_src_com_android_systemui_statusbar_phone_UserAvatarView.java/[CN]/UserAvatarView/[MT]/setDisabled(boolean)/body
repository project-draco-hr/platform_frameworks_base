{
  if (mIsDisabled == disabled) {
    return;
  }
  mIsDisabled=disabled;
  int disabledColor=getContext().getColor(R.color.qs_tile_disabled_color);
  PorterDuffColorFilter filter=new PorterDuffColorFilter(disabledColor,PorterDuff.Mode.SRC_ATOP);
  if (mBitmap != null) {
    if (disabled) {
      mBitmapPaint.setColorFilter(filter);
    }
 else {
      mBitmapPaint.setColorFilter(null);
    }
  }
 else   if (mDrawable != null) {
    if (disabled) {
      mDrawable.setColorFilter(filter);
    }
 else {
      mDrawable.setColorFilter(null);
    }
  }
  invalidate();
}
