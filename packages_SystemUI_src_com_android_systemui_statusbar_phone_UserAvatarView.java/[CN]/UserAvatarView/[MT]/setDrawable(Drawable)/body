{
  if (mDrawable != null) {
    mDrawable.setCallback(null);
    unscheduleDrawable(mDrawable);
  }
  mDrawable=d;
  if (d != null) {
    d.setCallback(this);
    if (d.isStateful()) {
      d.setState(getDrawableState());
    }
    d.setLayoutDirection(getLayoutDirection());
    configureBounds();
  }
  if (d != null) {
    mBitmap=null;
  }
  configureBounds();
  invalidate();
}
