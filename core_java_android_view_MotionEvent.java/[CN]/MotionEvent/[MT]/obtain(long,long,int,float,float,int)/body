{
  MotionEvent ev=obtain();
  ev.mDeviceId=0;
  ev.mEdgeFlags=0;
  ev.mDownTime=downTime;
  ev.mEventTime=eventTime;
  ev.mAction=action;
  ev.mX=ev.mRawX=x;
  ev.mY=ev.mRawY=y;
  ev.mPressure=1.0f;
  ev.mSize=1.0f;
  ev.mMetaState=metaState;
  ev.mXPrecision=1.0f;
  ev.mYPrecision=1.0f;
  return ev;
}
