{
  if (filename.length() > MAX_FILENAME_LENGTH) {
    return false;
  }
  if (text.length() >= MAX_SPEECH_ITEM_CHAR_LENGTH) {
    return false;
  }
  mSpeechQueue.add(new SpeechItem(text,params,SpeechItem.TEXT_TO_FILE,filename));
  if (!mIsSpeaking) {
    processSpeechQueue();
  }
  return true;
}
