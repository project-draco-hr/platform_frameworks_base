{
  int numStreamTypes=AudioSystem.getNumStreamTypes();
  for (int streamType=0; streamType < numStreamTypes; streamType++) {
    if (streamType != mStreamVolumeAlias[streamType]) {
      mStreamStates[streamType].setAllIndexes(mStreamStates[mStreamVolumeAlias[streamType]],false);
      mStreamStates[streamType].setAllIndexes(mStreamStates[mStreamVolumeAlias[streamType]],true);
    }
    if (mStreamStates[streamType].muteCount() == 0) {
      mStreamStates[streamType].applyAllVolumes();
    }
  }
}
