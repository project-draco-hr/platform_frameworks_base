{
  int oldIndex=getIndex(device,false);
  index=getValidIndex(index);
  mIndex.put(device,getValidIndex(index));
  if (oldIndex != index) {
    if (lastAudible) {
      mLastAudibleIndex.put(device,index);
    }
    int numStreamTypes=AudioSystem.getNumStreamTypes();
    for (int streamType=numStreamTypes - 1; streamType >= 0; streamType--) {
      if (streamType != mStreamType && STREAM_VOLUME_ALIAS[streamType] == mStreamType) {
        mStreamStates[streamType].setIndex(rescaleIndex(index,mStreamType,streamType),device,lastAudible);
      }
    }
    return true;
  }
 else {
    return false;
  }
}
