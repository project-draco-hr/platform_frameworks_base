{
  int oldIndex=getIndex(device,false);
  index=getValidIndex(index);
  mIndex.put(device,getValidIndex(index));
  if (oldIndex != index) {
    if (lastAudible) {
      mLastAudibleIndex.put(device,index);
    }
    boolean currentDevice=(device == getDeviceForStream(mStreamType));
    int numStreamTypes=AudioSystem.getNumStreamTypes();
    for (int streamType=numStreamTypes - 1; streamType >= 0; streamType--) {
      if (streamType != mStreamType && mStreamVolumeAlias[streamType] == mStreamType) {
        int scaledIndex=rescaleIndex(index,mStreamType,streamType);
        mStreamStates[streamType].setIndex(scaledIndex,device,lastAudible);
        if (currentDevice) {
          mStreamStates[streamType].setIndex(scaledIndex,getDeviceForStream(streamType),lastAudible);
        }
      }
    }
    return true;
  }
 else {
    return false;
  }
}
