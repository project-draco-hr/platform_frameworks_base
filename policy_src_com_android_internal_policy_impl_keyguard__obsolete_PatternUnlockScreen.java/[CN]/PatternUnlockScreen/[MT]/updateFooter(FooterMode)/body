{
switch (mode) {
case Normal:
    if (DEBUG)     Log.d(TAG,"mode normal");
  hideForgotPatternButton();
break;
case ForgotLockPattern:
if (DEBUG) Log.d(TAG,"mode ForgotLockPattern");
showForgotPatternButton();
break;
case VerifyUnlocked:
if (DEBUG) Log.d(TAG,"mode VerifyUnlocked");
hideForgotPatternButton();
}
}
