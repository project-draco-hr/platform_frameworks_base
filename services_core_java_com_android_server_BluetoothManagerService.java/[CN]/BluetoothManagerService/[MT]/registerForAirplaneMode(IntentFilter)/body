{
  final ContentResolver resolver=mContext.getContentResolver();
  final String airplaneModeRadios=Settings.Global.getString(resolver,Settings.Global.AIRPLANE_MODE_RADIOS);
  final String toggleableRadios=Settings.Global.getString(resolver,Settings.Global.AIRPLANE_MODE_TOGGLEABLE_RADIOS);
  boolean mIsAirplaneSensitive=airplaneModeRadios == null ? true : airplaneModeRadios.contains(Settings.Global.RADIO_BLUETOOTH);
  if (mIsAirplaneSensitive) {
    filter.addAction(Intent.ACTION_AIRPLANE_MODE_CHANGED);
  }
}
