{
synchronized (mConnection) {
    if (mBluetooth != null) {
      if (DBG)       Slog.d(TAG,"Sending off request.");
      try {
        if (!mBluetooth.disable()) {
          Slog.e(TAG,"IBluetooth.disable() returned false");
        }
      }
 catch (      RemoteException e) {
        Slog.e(TAG,"Unable to call disable()",e);
      }
    }
  }
}
