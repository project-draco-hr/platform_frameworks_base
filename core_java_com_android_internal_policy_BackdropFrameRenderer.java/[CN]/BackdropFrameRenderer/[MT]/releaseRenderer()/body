{
synchronized (this) {
    if (mRenderer != null) {
      mRenderer.setContentDrawBounds(0,0,0,0);
      mRenderer.removeRenderNode(mFrameAndBackdropNode);
      if (mSystemBarBackgroundNode != null) {
        mRenderer.removeRenderNode(mSystemBarBackgroundNode);
      }
      mRenderer=null;
      pingRenderLocked(false);
    }
  }
}
