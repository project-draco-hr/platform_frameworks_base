{
  final String codePath=getCodePath();
  if (isFwdLocked()) {
    final StringBuilder sb=new StringBuilder();
    sb.append(mAppInstallDir.getPath());
    sb.append('/');
    sb.append(getApkName(codePath));
    sb.append(".zip");
    if (codePath.endsWith(".tmp")) {
      sb.append(".tmp");
    }
    return sb.toString();
  }
 else {
    return codePath;
  }
}
