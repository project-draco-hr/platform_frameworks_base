{
  this.file=file;
  this.cid=cid;
  this.staged=staged;
  if (cid != null) {
    resolvedPath=PackageHelper.getSdDir(cid);
    resolvedFile=new File(resolvedPath);
  }
 else   if (file != null) {
    resolvedPath=file.getAbsolutePath();
    resolvedFile=file;
  }
 else {
    resolvedPath=null;
    resolvedFile=null;
  }
}
