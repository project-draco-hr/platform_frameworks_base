{
  if (force) {
    write();
    return;
  }
  if (SystemClock.elapsedRealtime() - mLastWritten.get() < WRITE_INTERVAL && !DEBUG_DEXOPT) {
    return;
  }
  if (mBackgroundWriteRunning.compareAndSet(false,true)) {
    new Thread("PackageUsage_DiskWriter"){
      public void run(){
        try {
          write(true);
        }
  finally {
          mBackgroundWriteRunning.set(false);
        }
      }
    }
.start();
  }
}
