{
  super(user);
  this.srcArgs=srcArgs;
  this.observer=observer;
  this.flags=flags;
  this.packageName=packageName;
  this.uid=uid;
  if (srcArgs != null) {
    Uri packageUri=Uri.fromFile(new File(srcArgs.getCodePath()));
    targetArgs=createInstallArgs(packageUri,flags,packageName,dataDir);
  }
 else {
    targetArgs=null;
  }
}
