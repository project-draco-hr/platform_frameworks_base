{
  Bundle extras=new Bundle(2);
  extras.putInt(Intent.EXTRA_UID,removedAppId >= 0 ? removedAppId : uid);
  extras.putBoolean(Intent.EXTRA_REPLACING,true);
  sendPackageBroadcast(Intent.ACTION_PACKAGE_ADDED,removedPackage,extras,0,null,null,null);
  sendPackageBroadcast(Intent.ACTION_PACKAGE_REPLACED,removedPackage,extras,0,null,null,null);
  sendPackageBroadcast(Intent.ACTION_MY_PACKAGE_REPLACED,null,null,0,removedPackage,null,null);
}
