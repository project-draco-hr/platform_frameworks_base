{
  final Intent intent=new Intent(Intent.ACTION_INSTALL_EPHEMERAL_PACKAGE);
  intent.addCategory(Intent.CATEGORY_DEFAULT);
  intent.setDataAndType(Uri.fromFile(new File("foo.apk")),PACKAGE_MIME_TYPE);
  final List<ResolveInfo> matches=queryIntentActivitiesInternal(intent,PACKAGE_MIME_TYPE,MATCH_SYSTEM_ONLY | MATCH_DIRECT_BOOT_AWARE | MATCH_DIRECT_BOOT_UNAWARE,UserHandle.USER_SYSTEM);
  if (matches.size() == 0) {
    return null;
  }
 else   if (matches.size() == 1) {
    return matches.get(0).getComponentInfo().getComponentName();
  }
 else {
    throw new RuntimeException("There must be at most one ephemeral installer; found " + matches);
  }
}
