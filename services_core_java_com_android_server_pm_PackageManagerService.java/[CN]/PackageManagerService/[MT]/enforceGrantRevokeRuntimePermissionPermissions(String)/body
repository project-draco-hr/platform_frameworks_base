{
  if (mContext.checkCallingOrSelfPermission(Manifest.permission.GRANT_RUNTIME_PERMISSIONS) != PackageManager.PERMISSION_GRANTED && mContext.checkCallingOrSelfPermission(Manifest.permission.REVOKE_RUNTIME_PERMISSIONS) != PackageManager.PERMISSION_GRANTED) {
    throw new SecurityException(message + " requires " + Manifest.permission.GRANT_RUNTIME_PERMISSIONS+ " or "+ Manifest.permission.REVOKE_RUNTIME_PERMISSIONS);
  }
}
