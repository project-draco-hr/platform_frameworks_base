{
  boolean changed=expanded != mExpanded;
  mExpanded=expanded;
  if (changed) {
    updateHeights();
    updateVisibilities();
    updateSystemIconsLayoutParams();
    updateClickTargets();
    updateMultiUserSwitch();
    if (mQSPanel != null) {
      mQSPanel.setExpanded(expanded);
    }
    updateClockScale();
    updateAvatarScale();
    updateClockLp();
    requestCaptureValues();
  }
}
