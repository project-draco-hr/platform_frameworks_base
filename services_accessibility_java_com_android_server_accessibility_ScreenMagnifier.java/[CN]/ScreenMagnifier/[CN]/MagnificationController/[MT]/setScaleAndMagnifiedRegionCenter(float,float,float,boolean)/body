{
  if (Float.compare(mCurrentMagnificationSpec.scale,scale) == 0 && Float.compare(mCurrentMagnificationSpec.offsetX,centerX) == 0 && Float.compare(mCurrentMagnificationSpec.offsetY,centerY) == 0) {
    return;
  }
  cancelAnimation();
  if (DEBUG_MAGNIFICATION_CONTROLLER) {
    Slog.i(LOG_TAG,"scale: " + scale + " offsetX: "+ centerX+ " offsetY: "+ centerY);
  }
  updateMagnificationSpec(scale,centerX,centerY);
  if (animate) {
    animateMangificationSpec(mSentMagnificationSpec,mCurrentMagnificationSpec);
  }
 else {
    setMagnificationSpec(mCurrentMagnificationSpec);
  }
  mAms.onMagnificationStateChanged();
}
