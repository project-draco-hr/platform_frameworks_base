{
  super.onCreate(savedInstanceState);
  if (UsbManager.ACTION_USB_DEVICE_ATTACHED.equals(getIntent().getAction())) {
    final Intent serviceIntent=new Intent(MtpDocumentsService.ACTION_OPEN_DEVICE,null,this,MtpDocumentsService.class);
    serviceIntent.putExtra(UsbManager.EXTRA_DEVICE,getIntent().getParcelableExtra(UsbManager.EXTRA_DEVICE));
    startService(serviceIntent);
  }
  finish();
}
