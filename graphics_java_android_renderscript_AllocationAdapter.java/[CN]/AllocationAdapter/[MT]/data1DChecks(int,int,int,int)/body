{
  mRS.validate();
  if (off < 0) {
    throw new RSIllegalArgumentException("Offset must be >= 0.");
  }
  if (count < 1) {
    throw new RSIllegalArgumentException("Count must be >= 1.");
  }
  if ((off + count) > mSelectedCount) {
    throw new RSIllegalArgumentException("Overflow, Available count " + mAlloc.mType.getCount() + ", got "+ count+ " at offset "+ off+ ".");
  }
  if ((len) < dataSize) {
    throw new RSIllegalArgumentException("Array too small for allocation type.  len = " + len + ", dataSize = "+ dataSize);
  }
}
