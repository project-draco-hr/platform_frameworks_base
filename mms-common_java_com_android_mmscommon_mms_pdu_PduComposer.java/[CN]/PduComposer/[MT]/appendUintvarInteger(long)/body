{
  int i;
  long max=SHORT_INTEGER_MAX;
  for (i=0; i < 5; i++) {
    if (value < max) {
      break;
    }
    max=(max << 7) | 0x7fl;
  }
  while (i > 0) {
    long temp=value >>> (i * 7);
    temp=temp & 0x7f;
    append((int)((temp | 0x80) & 0xff));
    i--;
  }
  append((int)(value & 0x7f));
}
