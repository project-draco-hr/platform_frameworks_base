{
  int size;
  long temp=longInt;
  for (size=0; (temp != 0) && (size < LONG_INTEGER_LENGTH_MAX); size++) {
    temp=(temp >>> 8);
  }
  appendShortLength(size);
  int i;
  int shift=(size - 1) * 8;
  for (i=0; i < size; i++) {
    append((int)((longInt >>> shift) & 0xff));
    shift=shift - 8;
  }
}
