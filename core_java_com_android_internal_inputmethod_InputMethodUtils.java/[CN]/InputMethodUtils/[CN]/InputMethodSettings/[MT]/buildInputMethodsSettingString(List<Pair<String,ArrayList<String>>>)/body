{
  final StringBuilder b=new StringBuilder();
  boolean needsSeparator=false;
  for (  Pair<String,ArrayList<String>> ime : allImeSettingsMap) {
    if (needsSeparator) {
      b.append(INPUT_METHOD_SEPARATER);
    }
    buildEnabledInputMethodsSettingString(b,ime);
    needsSeparator=true;
  }
  return b.toString();
}
