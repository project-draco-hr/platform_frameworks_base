{
  final int N=imi.getSubtypeCount();
  for (int i=0; i < N; ++i) {
    if (!imi.getSubtypeAt(i).getLocale().startsWith(language)) {
      continue;
    }
    if (!TextUtils.isEmpty(mode) && !imi.getSubtypeAt(i).getMode().equalsIgnoreCase(mode)) {
      continue;
    }
    return true;
  }
  return false;
}
