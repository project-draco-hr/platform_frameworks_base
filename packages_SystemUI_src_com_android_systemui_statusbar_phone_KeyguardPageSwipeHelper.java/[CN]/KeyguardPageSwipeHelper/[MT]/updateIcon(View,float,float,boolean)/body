{
  if (view.getVisibility() != View.VISIBLE) {
    return;
  }
  if (!animate) {
    view.animate().cancel();
    view.setAlpha(alpha);
    view.setScaleX(scale);
    view.setScaleY(scale);
    view.invalidate();
  }
 else {
    if (view.getAlpha() != alpha || view.getScaleX() != scale) {
      view.animate().setInterpolator(mFastOutSlowIn).alpha(alpha).scaleX(scale).scaleY(scale);
    }
  }
}
