{
  if (mDecor == null) {
    if (Config.LOGV)     Log.v(LOG_TAG,"[Dialog] dismiss: already dismissed, ignore");
    return;
  }
  if (!mShowing) {
    if (Config.LOGV)     Log.v(LOG_TAG,"[Dialog] dismiss: not showing, ignore");
    return;
  }
  mWindowManager.removeView(mDecor);
  mDecor=null;
  mWindow.closeAllPanels();
  onStop();
  mShowing=false;
  sendDismissMessage();
}
