{
  if (mDecor == null || !mShowing) {
    return;
  }
  if (mWindow.isDestroyed()) {
    Log.e(TAG,"Tried to dismissDialog() but the Dialog's window was already destroyed!");
    return;
  }
  try {
    mWindowManager.removeView(mDecor);
  }
  finally {
    if (mActionMode != null) {
      mActionMode.finish();
    }
    mDecor=null;
    mWindow.closeAllPanels();
    onStop();
    mShowing=false;
    sendDismissMessage();
  }
}
