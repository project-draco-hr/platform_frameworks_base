{
  try {
    String actual=res.getString(resId);
    assertNotNull("Returned wrong configuration-based simple value: expected <nothing>, got '" + actual + "' from resource 0x"+ Integer.toHexString(resId),expectedValue);
    assertEquals("Returned wrong configuration-based simple value: expected " + expectedValue + ", got '"+ actual+ "' from resource 0x"+ Integer.toHexString(resId),expectedValue,actual);
  }
 catch (  Resources.NotFoundException e) {
    assertNull("Resource not found for configuration-based simple value: expecting \"" + expectedValue + "\"",expectedValue);
  }
}
