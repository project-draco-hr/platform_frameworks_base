{
  if (mItems == null)   return;
  Item[] items=null;
  if (mAccessPoints != null) {
    items=new Item[mAccessPoints.length];
    for (int i=0; i < mAccessPoints.length; i++) {
      final AccessPoint ap=mAccessPoints[i];
      final Item item=new Item();
      item.tag=ap;
      item.icon=ap.iconId;
      item.line1=ap.ssid;
      if (ap.isConnected) {
        item.line2=mContext.getString(ap.isConfigured ? R.string.quick_settings_connected : R.string.quick_settings_connected_via_wfa);
      }
      items[i]=item;
    }
  }
  mItems.setItems(items);
}
