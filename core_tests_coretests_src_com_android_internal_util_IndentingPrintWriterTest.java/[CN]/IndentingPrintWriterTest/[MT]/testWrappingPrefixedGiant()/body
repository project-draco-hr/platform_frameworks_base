{
  final IndentingPrintWriter pw=new IndentingPrintWriter(mWriter,"  ",10);
  pw.increaseIndent();
  pw.print("foo");
  pw.print("Lorem ipsum dolor sit amet, consectetur adipiscing elit.");
  pw.flush();
  assertEquals("  foo\n  Lorem ip\n  sum dolo\n  r sit am\n  et, cons\n" + "  ectetur \n  adipisci\n  ng elit.\n",mStream.toString());
}
