{
  super.onAttachedToWindow();
  if (mIndeterminate) {
    startAnimation();
  }
  if (mRefreshData != null) {
synchronized (this) {
      final int count=mRefreshData.size();
      for (int i=0; i < count; i++) {
        final RefreshData rd=mRefreshData.get(i);
        doRefreshProgress(rd.id,rd.progress,rd.fromUser,rd.animate);
        rd.recycle();
      }
      mRefreshData.clear();
    }
  }
  mAttached=true;
}
