{
  if ((!mOnlyIndeterminate || !mIndeterminate) && indeterminate != mIndeterminate) {
    mIndeterminate=indeterminate;
    if (indeterminate) {
      swapCurrentDrawable(mIndeterminateDrawable);
      startAnimation();
    }
 else {
      swapCurrentDrawable(mProgressDrawable);
      stopAnimation();
    }
  }
}
