{
  Drawable layer=null;
  final Drawable d=mProgressDrawable;
  if (d != null) {
    mProgressDrawable=d.mutate();
    if (d instanceof LayerDrawable) {
      layer=((LayerDrawable)d).findDrawableByLayerId(layerId);
    }
    if (shouldFallback && layer == null) {
      layer=d;
    }
  }
  return layer;
}
