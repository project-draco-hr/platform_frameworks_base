{
  NetworkUtils.stopDhcp(mInterfaceName);
  mDhcpResults=null;
  if (DBG)   Log.d(TAG,"DHCP request on " + mInterfaceName);
  if (!NetworkUtils.startDhcp(mInterfaceName) || !dhcpSucceeded()) {
    Log.e(TAG,"DHCP request failed on " + mInterfaceName + ": "+ NetworkUtils.getDhcpError());
    mController.obtainMessage(CMD_POST_DHCP_ACTION,DHCP_FAILURE,0).sendToTarget();
    return false;
  }
  return true;
}
