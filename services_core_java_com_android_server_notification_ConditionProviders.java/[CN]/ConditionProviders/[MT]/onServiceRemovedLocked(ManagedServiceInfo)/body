{
  if (removed == null)   return;
  for (int i=mRecords.size() - 1; i >= 0; i--) {
    final ConditionRecord r=mRecords.get(i);
    if (!r.component.equals(removed.component))     continue;
    if (r.isManual) {
      mZenModeHelper.setZenMode(Global.ZEN_MODE_OFF);
    }
    if (r.isAutomatic) {
      mZenModeHelper.setZenMode(Global.ZEN_MODE_OFF);
    }
    mRecords.remove(i);
  }
}
