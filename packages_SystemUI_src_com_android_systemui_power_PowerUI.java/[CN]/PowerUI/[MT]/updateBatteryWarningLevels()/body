{
  int critLevel=mContext.getResources().getInteger(com.android.internal.R.integer.config_criticalBatteryWarningLevel);
  final ContentResolver resolver=mContext.getContentResolver();
  int defWarnLevel=mContext.getResources().getInteger(com.android.internal.R.integer.config_lowBatteryWarningLevel);
  int warnLevel=Settings.Global.getInt(resolver,Settings.Global.LOW_POWER_MODE_TRIGGER_LEVEL,defWarnLevel);
  if (warnLevel == 0) {
    warnLevel=defWarnLevel;
  }
  if (warnLevel < critLevel) {
    warnLevel=critLevel;
  }
  mLowBatteryReminderLevels[0]=warnLevel;
  mLowBatteryReminderLevels[1]=critLevel;
  mLowBatteryAlertCloseLevel=mLowBatteryReminderLevels[0] + mContext.getResources().getInteger(com.android.internal.R.integer.config_lowBatteryCloseWarningBump);
}
