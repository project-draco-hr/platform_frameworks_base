{
  if (mBackgroundLifted) {
    return;
  }
  if (isHorizontalDivision()) {
    mBackground.animate().scaleY(1.4f);
  }
 else {
    mBackground.animate().scaleX(1.4f);
  }
  mBackground.animate().setInterpolator(Interpolators.TOUCH_RESPONSE).setDuration(TOUCH_ANIMATION_DURATION).translationZ(mTouchElevation).start();
  mHandle.animate().setInterpolator(Interpolators.TOUCH_RESPONSE).setDuration(TOUCH_ANIMATION_DURATION).translationZ(mTouchElevation).start();
  mBackgroundLifted=true;
}
