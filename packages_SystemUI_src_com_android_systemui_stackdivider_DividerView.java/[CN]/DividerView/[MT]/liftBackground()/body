{
  if (isHorizontalDivision()) {
    mBackground.animate().scaleY(1.4f);
  }
 else {
    mBackground.animate().scaleX(1.4f);
  }
  mBackground.animate().setInterpolator(TOUCH_RESPONSE_INTERPOLATOR).setDuration(TOUCH_ANIMATION_DURATION).translationZ(mTouchElevation).start();
  mHandle.animate().setInterpolator(TOUCH_RESPONSE_INTERPOLATOR).setDuration(TOUCH_ANIMATION_DURATION).translationZ(mTouchElevation).start();
}
