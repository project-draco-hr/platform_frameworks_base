{
  if (isHorizontalDivision()) {
    mBackground.animate().scaleY(1.5f);
  }
 else {
    mBackground.animate().scaleX(1.5f);
  }
  mBackground.animate().setInterpolator(mTouchResponseInterpolator).setDuration(150).translationZ(mTouchElevation);
  mHandle.animate().setInterpolator(mTouchResponseInterpolator).setDuration(150).translationZ(mTouchElevation);
}
