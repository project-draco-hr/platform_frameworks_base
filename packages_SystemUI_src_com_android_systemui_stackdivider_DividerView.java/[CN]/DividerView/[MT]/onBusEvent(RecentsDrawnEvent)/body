{
  if (mAnimateAfterRecentsDrawn) {
    mAnimateAfterRecentsDrawn=false;
    updateDockSide();
    stopDragging(getCurrentPosition(),mSnapAlgorithm.getMiddleTarget(),mLongPressEntraceAnimDuration,Interpolators.FAST_OUT_SLOW_IN,200);
  }
  if (mGrowAfterRecentsDrawn) {
    mGrowAfterRecentsDrawn=false;
    updateDockSide();
    EventBus.getDefault().send(new RecentsGrowingEvent());
    stopDragging(getCurrentPosition(),mSnapAlgorithm.getMiddleTarget(),336,Interpolators.FAST_OUT_SLOW_IN);
  }
}
