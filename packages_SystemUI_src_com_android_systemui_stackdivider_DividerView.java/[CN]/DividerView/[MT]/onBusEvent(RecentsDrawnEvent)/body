{
  if (mAnimateAfterRecentsDrawn) {
    mAnimateAfterRecentsDrawn=false;
    updateDockSide();
    stopDragging(getCurrentPosition(),mSnapAlgorithm.getMiddleTarget(),250,Interpolators.TOUCH_RESPONSE);
  }
  if (mGrowAfterRecentsDrawn) {
    mGrowAfterRecentsDrawn=false;
    updateDockSide();
    stopDragging(getCurrentPosition(),mSnapAlgorithm.getMiddleTarget(),250,Interpolators.TOUCH_RESPONSE);
  }
}
