{
  if (mAnimateAfterRecentsDrawn) {
    mAnimateAfterRecentsDrawn=false;
    updateDockSide();
    stopDragging(getCurrentPosition(),mSnapAlgorithm.getMiddleTarget(),250,Interpolators.FAST_OUT_SLOW_IN,200);
  }
  if (mGrowAfterRecentsDrawn) {
    mGrowAfterRecentsDrawn=false;
    updateDockSide();
    stopDragging(getCurrentPosition(),mSnapAlgorithm.getMiddleTarget(),250,Interpolators.FAST_OUT_SLOW_IN);
  }
}
