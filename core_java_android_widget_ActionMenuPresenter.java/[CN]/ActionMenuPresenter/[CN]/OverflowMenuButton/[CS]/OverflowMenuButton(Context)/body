{
  super(context,null,com.android.internal.R.attr.actionOverflowButtonStyle);
  setClickable(true);
  setFocusable(true);
  setVisibility(VISIBLE);
  setEnabled(true);
  setOnTouchListener(new ForwardingListener(this){
    @Override public ShowableListMenu getPopup(){
      if (mOverflowPopup == null) {
        return null;
      }
      return mOverflowPopup.getPopup();
    }
    @Override public boolean onForwardingStarted(){
      showOverflowMenu();
      return true;
    }
    @Override public boolean onForwardingStopped(){
      if (mPostedOpenRunnable != null) {
        return false;
      }
      hideOverflowMenu();
      return true;
    }
  }
);
}
