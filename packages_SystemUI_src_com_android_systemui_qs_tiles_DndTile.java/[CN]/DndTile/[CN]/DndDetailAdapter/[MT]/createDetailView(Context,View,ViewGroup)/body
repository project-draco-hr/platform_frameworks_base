{
  final ZenModePanel zmp=convertView != null ? (ZenModePanel)convertView : (ZenModePanel)LayoutInflater.from(context).inflate(R.layout.zen_mode_panel,parent,false);
  if (convertView == null) {
    zmp.init(mController);
    zmp.setEmbedded(true);
    zmp.addOnAttachStateChangeListener(this);
  }
  return zmp;
}
