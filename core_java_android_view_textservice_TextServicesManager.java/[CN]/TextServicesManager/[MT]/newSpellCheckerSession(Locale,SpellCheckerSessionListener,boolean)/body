{
  if (locale == null || listener == null) {
    throw new NullPointerException();
  }
  final SpellCheckerInfo info;
  try {
    info=sService.getCurrentSpellChecker(locale.toString());
  }
 catch (  RemoteException e) {
    return null;
  }
  if (info == null) {
    return null;
  }
  final SpellCheckerSession session=new SpellCheckerSession(info,sService,listener);
  try {
    sService.getSpellCheckerService(info,locale.toString(),session.getTextServicesSessionListener(),session.getSpellCheckerSessionListener());
  }
 catch (  RemoteException e) {
    return null;
  }
  return session;
}
