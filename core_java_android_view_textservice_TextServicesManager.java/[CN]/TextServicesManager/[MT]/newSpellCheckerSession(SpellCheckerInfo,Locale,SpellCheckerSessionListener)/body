{
  if (info == null || locale == null || listener == null) {
    throw new NullPointerException();
  }
  final SpellCheckerSession session=new SpellCheckerSession(sService,listener);
  try {
    sService.getSpellCheckerService(info,locale.toString(),session.getTextServicesSessionListener(),session.getSpellCheckerSessionListener());
  }
 catch (  RemoteException e) {
    return null;
  }
  return session;
}
