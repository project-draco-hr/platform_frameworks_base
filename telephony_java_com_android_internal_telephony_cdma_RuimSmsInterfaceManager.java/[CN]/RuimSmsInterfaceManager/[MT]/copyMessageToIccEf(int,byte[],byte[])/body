{
  if (DBG)   log("copyMessageToIccEf: status=" + status + " ==> "+ "pdu=("+ Arrays.toString(pdu)+ ")");
  enforceReceiveAndSend("Copying message to RUIM");
synchronized (mLock) {
    mSuccess=false;
    Message response=mHandler.obtainMessage(EVENT_UPDATE_DONE);
    mPhone.mCM.writeSmsToRuim(status,IccUtils.bytesToHexString(pdu),response);
    try {
      mLock.wait();
    }
 catch (    InterruptedException e) {
      log("interrupted while trying to update by index");
    }
  }
  return mSuccess;
}
