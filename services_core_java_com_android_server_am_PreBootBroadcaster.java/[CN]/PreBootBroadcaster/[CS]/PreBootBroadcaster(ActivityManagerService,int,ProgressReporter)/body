{
  mService=service;
  mUserId=userId;
  mProgress=progress;
  mIntent=new Intent(Intent.ACTION_PRE_BOOT_COMPLETED);
  mIntent.addFlags(Intent.FLAG_RECEIVER_BOOT_UPGRADE | Intent.FLAG_DEBUG_TRIAGED_MISSING);
  mTargets=mService.mContext.getPackageManager().queryBroadcastReceiversAsUser(mIntent,MATCH_SYSTEM_ONLY,UserHandle.of(userId));
}
