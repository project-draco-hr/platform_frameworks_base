{
  if (nowVisible != mIsVisible) {
    float endValue=nowVisible ? 1.0f : 0.0f;
    mLine.animate().alpha(endValue).setStartDelay(delay).scaleX(endValue).scaleY(endValue).setInterpolator(mFastOutSlowInInterpolator).withEndAction(onFinishedRunnable);
    mIsVisible=nowVisible;
  }
 else {
    if (onFinishedRunnable != null) {
      onFinishedRunnable.run();
    }
  }
}
