{
  if (imgData instanceof short[]) {
    cmmFormat|=bytesSh(2);
  }
 else   if (imgData instanceof byte[]) {
    cmmFormat|=bytesSh(1);
  }
 else   throw new IllegalArgumentException(Messages.getString("awt.47"));
  cmmFormat|=channelsSh(nChannels);
  rows=nRows;
  cols=nCols;
  imageData=imgData;
  dataOffset=0;
}
