{
  try {
    final List<FeatureInfo> list=mPM.getSystemAvailableFeatures().getList();
    final FeatureInfo[] res=new FeatureInfo[list.size()];
    for (int i=0; i < res.length; i++) {
      res[i]=list.get(i);
    }
    return res;
  }
 catch (  RemoteException e) {
    throw e.rethrowFromSystemServer();
  }
}
