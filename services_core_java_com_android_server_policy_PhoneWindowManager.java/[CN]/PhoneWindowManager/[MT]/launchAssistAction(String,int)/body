{
  sendCloseSystemWindows(SYSTEM_DIALOG_REASON_ASSIST);
  Bundle args=null;
  if (deviceId > Integer.MIN_VALUE) {
    args=new Bundle();
    args.putInt(Intent.EXTRA_ASSIST_INPUT_DEVICE_ID,deviceId);
  }
  ((SearchManager)mContext.getSystemService(Context.SEARCH_SERVICE)).launchAssistAction(hint,UserHandle.myUserId(),args);
}
