{
  super.registerDataSetObserver(observer);
  if ((Integer.MAX_VALUE != mMaxRead || Integer.MAX_VALUE != mInitialRead) && mNotificationHandler == null) {
    queryThreadLock();
    try {
      mNotificationHandler=new MainThreadNotificationHandler();
      if (mPendingData) {
        notifyDataSetChange();
        mPendingData=false;
      }
    }
  finally {
      queryThreadUnlock();
    }
  }
}
