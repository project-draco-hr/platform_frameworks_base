{
  if (parent.getUpdateListener() != null) {
    return false;
  }
  if (parent.getListener() != null) {
    return false;
  }
  if (!mView.isHardwareAccelerated()) {
    return false;
  }
  if (parent.hasActions()) {
    return false;
  }
  if (hasAlphaAnimation(parent)) {
    return false;
  }
  return true;
}
