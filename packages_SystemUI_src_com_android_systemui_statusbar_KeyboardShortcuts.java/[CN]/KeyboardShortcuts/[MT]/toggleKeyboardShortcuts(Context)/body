{
  if (mKeyboardShortcutsDialog == null) {
    AlertDialog.Builder dialogBuilder=new AlertDialog.Builder(context);
    LayoutInflater inflater=(LayoutInflater)context.getSystemService(Context.LAYOUT_INFLATER_SERVICE);
    final View keyboardShortcutsView=inflater.inflate(R.layout.keyboard_shortcuts_view,null);
    populateKeyboardShortcuts(keyboardShortcutsView.findViewById(R.id.keyboard_shortcuts_wrapper));
    dialogBuilder.setView(keyboardShortcutsView);
    mKeyboardShortcutsDialog=dialogBuilder.create();
    mKeyboardShortcutsDialog.setCanceledOnTouchOutside(true);
    Window keyboardShortcutsWindow=mKeyboardShortcutsDialog.getWindow();
    keyboardShortcutsWindow.setType(WindowManager.LayoutParams.TYPE_SYSTEM_DIALOG);
    keyboardShortcutsWindow.setBackgroundDrawable(new ColorDrawable(android.graphics.Color.TRANSPARENT));
    keyboardShortcutsWindow.setGravity(Gravity.TOP);
    mKeyboardShortcutsDialog.show();
  }
 else {
    dismissKeyboardShortcutsDialog();
  }
}
