{
  if (msg.what == CMD_DEVICE_IDLE) {
    checkLocksAndTransitionWhenDeviceIdle();
  }
 else   if (msg.what == CMD_USER_PRESENT) {
    if (mFirstUserSignOnSeen == false) {
      mWifiStateMachine.reloadTlsNetworksAndReconnect();
    }
    mFirstUserSignOnSeen=true;
    return HANDLED;
  }
  return NOT_HANDLED;
}
