{
synchronized (mSync) {
    if (mCacheDir == null) {
      mCacheDir=new File(getDataDirFile(),"cache");
    }
    if (!mCacheDir.exists()) {
      if (!mCacheDir.mkdirs()) {
        Log.w(TAG,"Unable to create cache directory");
        return null;
      }
      FileUtils.setPermissions(mCacheDir.toString(),FileUtils.S_IRWXU | FileUtils.S_IRWXG | FileUtils.S_IXOTH,-1,-1);
    }
  }
  return mCacheDir;
}
