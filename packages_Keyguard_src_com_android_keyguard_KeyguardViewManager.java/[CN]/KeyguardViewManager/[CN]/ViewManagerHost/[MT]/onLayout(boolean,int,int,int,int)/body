{
  final int count=getChildCount();
  for (int i=0; i < count; i++) {
    final View child=getChildAt(i);
    int cl=l, ct=t, cr=r, cb=b;
    if (considerPadding(child)) {
      cl+=mPaddingLeft;
      ct+=mPaddingTop;
      cr-=mPaddingRight;
      cb-=mPaddingBottom;
    }
    child.layout(cl,ct,cr,cb);
  }
}
